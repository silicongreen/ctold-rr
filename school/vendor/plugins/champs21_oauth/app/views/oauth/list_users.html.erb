<%= javascript_include_tag 'jquery/jquery-1.9.1.min.js' %>
<%= javascript_include_tag 'jquery/jquery-ui.min.js'%>
<%= javascript_include_tag 'jquery/jquery.hotkeys.js'%>

<script type="text/javascript">
  var j = jQuery.noConflict();
  j(document).ready(function() {
      var column_no = 0;
      j( ".single-link" ).each(function() {
        j(this).parent().parent().find("#col-"+column_no).append(j(this).parent());
        column_no+=1;
        if(column_no==2)
          column_no=0;
      });
  });
</script>

<div class="outer-main">
  <div class="middle-main">
    <div class="user-select-box">
      <div class="user-heading themed_text"><%= t('select_user') %></div>
      <div class="user-list">
        <div id="col-0" class="user_col"></div>
        <div id="col-1" class="user_col"></div>
        <% @users.each do |user| %>
          <%= link_to "<div class='single-link'>#{user.username}</div>",{:controller=>"oauth",:action=>"login_user",:id=>user.id} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
