              <tr class="even">
                  <td>Marks Interval</td>
                  <td>Letter Grade</td>
                  <td>Grade Point</td> 
              </tr> 
             
              <% @grading_levels.each_with_index do |grade,index| %>
                 <tr class="odd">
                    <td>
                        <% if grade.max_score.nil? %>  
                          <%= '%i%' % grade.min_score %>
                        <% else %> 
                          <%= grade.min_score.to_s + " - " + grade.max_score.to_s %>
                        <% end %>
                    </td>
                    <td><%= grade.name %></td>
                    <td><%= grade.credit_points %></td>
                  </tr> 
              <% end %> 
              
          </table>

        <% end %> 
      </div>
   
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">
              
              <table id="pdf-table" width="99.8%" cellspacing="0">
                  <% c = 'even'  %>
                  <% total_mark_of_allexam = 0 %>
                 
                  <tr class="table-header">
                      <td class="col-pdf border-left-none no-warp">SL.</b></td>
                      <td class="col-pdf no-warp"><%= "Subject" %></b></td>
                      <% unless @report_data['report']['exams'].blank? %>  
                        <% @report_data['report']['exams'].each do |report| %>
                          <% if report['quarter'] == '1' %>
                            <td class="col-pdf">
                                <%= report['exam_name'] %>  
                            </td>
                          <% end %>
                        <% end %>
                      <% end %>
                      <td class="col-pdf">
                          Total Marks
                      </td>
                      <td class="col-pdf">Highest Marks</td>
                      <td class="col-pdf">Letter Grade</td>
                      <td class="col-pdf border-right-none">GPA</td>
                  </tr>

                  <% total_parcent = 0 %>
                  <% total_subject = 0 %>
                  <% total_credit_point = 0 %>
                  <% total_mark_all_subject = 0 %>
                  <%
                    final_grade = 0.0
                    letter_grade = ""
                  %>
                  <% i = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <% i = i+1 %>
                          <% weightage_mark = 0 %>
                          <% total_mark = 0 %>
                          <% full_mark = 0 %>

                          <td class="col-pdf border-left-none no-warp"><%= i %></td>
                          <td class="col-pdf no-warp"><%= subjects['name'] %></td>
                          <% unless @report_data['report']['exams'].blank? %>  
                            <% @report_data['report']['exams'].each do |report| %>
                            
                              <% if report['quarter'] == '1' %>
                                  <td class="col-pdf no-warp">
                                      <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                        <%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'] %>
                                        <% total_mark = total_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                      <% else %>
                                        N/A
                                      <% end %>
                                      <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                        <% full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% else %>

                                      <% end %>  

                                  </td>
                               <% end %>
                         

                            <% end %>
                          <% end %>





                          <% 
                              highest_mark = 0
                              if !@report_data['report']['max_mark'].blank? and !@report_data['report']['max_mark'][subjects['id']].blank?
                                highest_mark = @report_data['report']['max_mark'][subjects['id']].to_f
                              end  

                              if total_mark.to_f>0 and full_mark.to_f>0
                                main_mark = (total_mark.to_f/full_mark.to_f)*100 
                              else
                                main_mark = 0
                              end  
                          %>

                          <% if full_mark.to_f > 0 %>
                            <td class="col-pdf"><%= sprintf( "%0.02f", total_mark) %></td>
                            <td class="col-pdf"><%= sprintf( "%0.02f", highest_mark)%> </td>
                            <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
