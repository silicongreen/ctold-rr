<div style="float: left; width: 100%;">
  <div class="label-container"><label><%= t('select_a_batch') %>:</label> </div>
  <div class="text-input-bg text-input-bg2" style="height: 320px; "><%= select :send_sms, :batch_id,
     @batches.map {|b| [b.full_name, b.id]},
     {:prompt => "Select"},
     {:multiple => true,:onChange => "#{remote_function(:url => {:action => "list_students_new_upassword"},
     :with => "'batch_id='+j('#send_sms_batch_id').val()",
     :before => "Element.show('loader')",
     :success => "Element.hide('loader')"
     )}"} %>
  <%= image_tag("loader.gif",
   :align => "absmiddle",
   :border => 0,
   :id => "loader",
   :style =>"display: none;" ) %>
  </div>

  <div style="clear: both; height: 2px;"></div>   
  <div id="student-list" style="float: left;"></div>
</div>
