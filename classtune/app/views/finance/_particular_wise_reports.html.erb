        min-height: 20px;
        min-width: 100px;
        left: 0px;
        top: -60px;
        color: #FFFFFF;
        padding: 5px;
        font-size: 13px;
        text-align: center;
    }
    td
    {
      cursor: pointer;
    }
    .align-right
    {
        text-align:right !important;
    }
    .align-center
    {
        text-align:center !important;
    }
    .align-left
    {
        text-align:left !important;
    }
 
    
</style>   

<script>
  j("td").each(function(e){
    if(j(this).html() == "-")
    {
      j(this).addClass("align-center");
    }  
  });
  j(document).ready(function(){
      j(".show_collection").on('click', function(){
          var id = this.id.replace("collection_","");
          if ( j(this).text() == "[-]" )
          {
              j(this).text('[+]');
              j("#std_" + id).slideUp();
          }
          else
          {
              j(this).text('[-]');
              j("#std_" + id).slideDown('slow');
          }
      });
  });
</script>  