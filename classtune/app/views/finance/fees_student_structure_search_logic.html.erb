<table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
  <thead><!-- class="thead-inverse" -->
  <% if @students_result.present? %>
    <tr>
      <th><%= t('sl_no') %></th>
      <th><%= t('student_name') %></th>
      <th><%= t('batch') %></th>
      <th><%= t('admission_no') %></th>
    </tr>
  </thead>  
  <tbody>
    <% @students_result.each_with_index do |t, i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-5"><%= i+1 %></td>
        <td class="col-3"><%=  link_to t.full_name, :action => "fees_structure_dates", :id => t.id %></td>
        <td class="col-3"><%= t.batch.full_name %></td>
        <td class="col-1"><%= t.admission_no %></td></tr>
    <% end %>
  <% else %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td colspan="4" class="col-2"><%= t('no_users') %></td>
    </tr>
  <% end %>
  </tbody>  
</table>

