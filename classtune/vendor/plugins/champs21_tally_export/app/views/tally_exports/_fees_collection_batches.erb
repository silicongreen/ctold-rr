<% unless @batches.nil? %>
<div  style="text-align: center; width: 100%; border: 1px solid #ccc; margin-top: 10px; padding: 10px; float: left;">
  <h2 style="margin-left: 1%; font-size: 20px; text-align: left;">Select Batch</h2>
  <div style="clear: both; float: left; width: 100%;">
    <div style="width: 45%; margin-left: 1%; float: left; border: 1px solid #ccc; background: #efefef; height: 200px; overflow-y: auto;">
        <ul class="batch_ul">
        <% @batches.each do |b| %>
            <li spellcheck="false" class="batchli" id="batch_<%= b.id %>"><span><%= b.full_name %></span></li>
        <% end %>
        </ul>    
    </div>
    <div style="display: table; width: 5%; margin-left: 1%; float: left; height: 200px;">
        <div style="display:table-cell; vertical-align: middle; width: 80%; text-align: center; padding: 10px 10px;">
            <span class="remove_all assign_btn">&laquo;</span>
            <span class="remove_one assign_btn">&#8249;</span>
            <span class="update_one assign_btn">&#8250;</span>
            <span class="update_all assign_btn">&raquo;</span>
        </div>
    </div>
    <div style="width: 44%; margin-left: 1%; float: left; border: 1px solid #ccc; background: #efefef; height: 200px; overflow-y: auto;">
        <ul class="batch_ul_assign"></ul>
    </div>
  </div>
  <div style="clear: both; height: 10px;"  ></div>
  <div style="width: 92%; border: 1px solid #ccc; padding: 2%; float: left; margin-left: 10px;">
      <h2 style="text-align: left; margin-top: 0px; font-size: 16px;">Export Option</h2>
      <% if @check_paid.to_i == 0 %>
        <div style="float: left; width: 33%;">
            <input type="checkbox" name="export_particular" id="all_particular" value="particular" class="export_particulars" checked="" />&nbsp;&nbsp;&nbsp;&nbsp;All Finance Particulars
        </div>
        <div style="float: left; width: 33%;">
            <input type="checkbox" name="export_particular" id="discounts" value="discount" class="export_particulars" checked="" />&nbsp;&nbsp;&nbsp;&nbsp;Discount
        </div>
        <div style="float: left; width: 33%;">
            <input type="checkbox" name="export_particular" id="late_fine" value="late" class="export_particulars" checked="" />&nbsp;&nbsp;&nbsp;&nbsp;Late Fine And VAT
        </div>
        <div style="clear: both; height: 30px;"  ></div>
      <% end %>
      <div class="label-field-pair">
        <div class="label-container"><label><%= t('export_date') %> :</label> </div>
        <div class="input-container calendar-input"><%= calendar_date_select_tag 'export_date', I18n.l(Date.today,:format=>"%d %b %Y"),:readonly=>true,:popup=>"force" %></div>
      </div>
      <div style="clear: both; height: 10px;"  ></div>
      <div style="text-align: left; padding-top: 10px;">
        <button type="button" id="customized" name="customized" class="tab_select_button" style="display: inline-table; ">&plus; Select Student</button> 
        <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader_custom",
          :style =>"display: none; " ) %>
      </div>
      <div id="customized_div"  style="text-align: center; width: 100%; float: left; ">

      </div>
      <div style="clear: both; height: 10px;"  ></div>
  </div>
  <div style="clear: both; height: 10px;"  ></div>
  <button type="button" id="export_all" name="export_all" class="user_button" style="display: inline-table;">&#8623; Export All</button> 
</div>
<div style="clear: both; height: 10px;"  ></div>
<% end %>