<div id="page-yield" class="available_sections1">
    <div class="page1"> </div>
    <div class="section1 row" >
        <center>
            <div id="pdf-header-south" class="general-header">
                <h4 align="center"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ (current_school_detail.logo.path||"public/images/application/c.png")),:width=> '4%' %></h4>
                <h2 align="center"><%=Configuration.get_config_value('InstitutionName'); %></h2>
            </div>
            <h4 align="center"><%= @connect_exam_obj.name %> Combined Tabulation Sheet Day Shift</h4>
            <table width="100%" >
                <thead>
                    <tr>
                        <td><b>Year: <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%B-%Y"):@connect_exam_obj.published_date.strftime("%B-%Y") %> </b></td>
                        <td align="right"><b>Class : 
                                <% if @batch.name == "General" %>
                                  <%= @batch.course.full_name %>
                                <% else %>
                                  <%= @batch.name %> ,<%= @batch.course.course_name %>
                                <% end %></b>
                        </td>
                        <td align="right"><b>Total Student : <%= @report_data['report']['students'].count %></b>
                        </td>
                        <% unless @assigned_employee.blank? %>
                          <% @assigned_employee.each do |emp| %>
                            <td align="right"> <b>Class Teacher : <%= emp.first_name %>&nbsp;<%= emp.last_name %></b></td>
                            <% break %>
                          <% end %>
                        <% end %>
                    </tr>
                </thead>    
            </table>
            <% 
             
            %>
            <% unless @report_data.blank? %>
              <% c = 'even' %>
              <table id="pdf-table" width="100%" cellspacing="0">
                  <tr class="table-header">
                      <td class="col-pdf" >Roll</td>
                      <td class="col-pdf" >Name</td>
                      <td class="col-pdf" >Subjects</td>
                      <% @report_data['report']['exams'].each do |report| %>
                        <td class="col-pdf"><b>
                        <%= report['exam_name'] %>
                        <br/>
                        <%= report['full_mark'] %>
                        </b></td>
                      <% end %>
                      <td class="col-pdf" >Total Marks</td>
                      <td class="col-pdf" >Grade</td>
                      <td class="col-pdf" >GP</td>
                      <td class="col-pdf" >Total GPA</td>
                      <td class="col-pdf" >Position in Section</td>
                      <td class="col-pdf" >Position in Class</td>
                      <td class="col-pdf" >Highest Marks</td>
                  </tr>
                  

                  <% extender = 0 %>
                  <% std_count = 0 %>
                  <% j = 0 %>

                  <% @report_data['report']['students'].each do |std| %>
                    <% if !std.blank? and !std['first_name'].blank? %>
                    <% j = j+1 %>
                    <%  std_count = std_count+1; %>
                    <% if std_count>25 && extender ==0 %>
                      <% std_count = 0 %>
                      <% extender = 1 %>
                      <tr class="page-break">
                          <td colspan="100">&nbsp;</td>
                      </tr>
                      <tr class="table-header">
                        <td class="col-pdf" >Roll</td>
                        <td class="col-pdf" >Name</td>
                        <td class="col-pdf" >Subjects</td>
                        <% @report_data['report']['exams'].each do |report| %>
                          <td class="col-pdf"><b>
                          <%= report['exam_name'] %>
                          <br/>
                          <%= report['full_mark'] %>
                          </b></td>
                        <% end %>
                        <td class="col-pdf" >Total Marks</td>
                        <td class="col-pdf" >Grade</td>
                        <td class="col-pdf" >GP</td>
                        <td class="col-pdf" >Total GPA</td>
                        <td class="col-pdf" >Position in Section</td>
                        <td class="col-pdf" >Position in Class</td>
                        <td class="col-pdf" >Highest Marks</td>

                    </tr> 
                    <% elsif std_count>27 && extender ==1 %>
                      <% std_count = 0 %>
                      <% extender = 1 %>
                      <tr class="page-break">
                          <td colspan="100">&nbsp;</td>
                      </tr>
                      <tr class="table-header">
                        <td class="col-pdf" >Roll</td>
                        <td class="col-pdf" >Name</td>
                        <td class="col-pdf" >Subjects</td>
                        <% @report_data['report']['exams'].each do |report| %>
                          <td class="col-pdf"><b>
                          <%= report['exam_name'] %>
                          <br/>
                          <%= report['full_mark'] %>
                          </b></td>
                        <% end %>
                        <td class="col-pdf" >Total Marks</td>
                        <td class="col-pdf" >Grade</td>
                        <td class="col-pdf" >GP</td>
                        <td class="col-pdf" >Total GPA</td>
                        <td class="col-pdf" >Position in Section</td>
                        <td class="col-pdf" >Position in Class</td>
                        <td class="col-pdf" >Highest Marks</td>
                    </tr> 
                       
                    <% end %>   
                  
                    


                    <% bonus_mark = 0 %> 
                    <% rowspan = 0 %>
                    <% @report_data['report']['subjects'].each do |sub| %>
                      <% subjectdata = Subject.find(sub['id'].to_i) %>
                          <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>sub['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>   
                          <% if @has_exam_student != false %> 
                            <% rowspan = rowspan+1 %>
                          <% end %>
                    <% end %>
                    <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                        
                        <td class="name" rowspan="<%= rowspan %>"><%= std['class_roll_no'] %></td>
                        <% if !std['first_name'].blank? and !std['last_name'].blank?  %>
                        <td class="name-std" rowspan="<%= rowspan %>"><%= std['first_name']+" "+std['last_name'] %></td>
                        <% elsif !std['first_name'].blank? %>
                        <td class="name-std" rowspan="<%= rowspan %>"><%= std['first_name'] %></td>
                        <% else %>
                        <td class="name-std" rowspan="<%= rowspan %>"><%= "-" %></td>
                        <% end %>
                        <% total_mark = 0 %>
                        <% grades = [] %>
                        <% grade_count = {} %>
                        <% failed = false %>
                        <% @report_data['report']['subjects'].each do |sub| %>
                          
                          <% subjectdata = Subject.find(sub['id'].to_i) %>
                          <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>sub['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                          
                          <% if @has_exam_student != false %>
                            
                            <% fourth_subject = false %>
                            <% if !@std_subject_hash_type.blank? %>
                              <% if @std_subject_hash_type.include?(std['id'].to_s+"|||"+sub['id'].to_s+"|||4") %>
                                <% fourth_subject = true %>
                              <% end %>
                            <% end %>
                            

                            <% subject_full_mark = 0 %>
                            <% subject_obtain_mark = 0 %>
                            <% has_exam = false %>
                            <% if @all_subject_id.include?(sub['id'].to_i) %>
                              <% has_exam = true %>
                            <% end %>

                            <% @report_data['report']['exams'].each do |rs| %>
                              <%= render  :partial=>"/connect_exam/has_exam_score", :locals=>{:exam_group_id=>rs['exam_id'].to_s,:subject_id=>sub['id'].to_s} %>
                              <% if !rs['result'].blank? and !rs['result'][rs['exam_id']].blank? and !rs['result'][rs['exam_id']][sub['id']].blank? and !rs['result'][rs['exam_id']][sub['id']][std['id']].blank? and @check_exam_score == true %>
                                <td><%= rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_i %></td>
                                <%

                                subject_full_mark = subject_full_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['full_mark'].to_i
                                subject_obtain_mark = subject_obtain_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f


                              %>
                              <% else %>
                                <td>-</td>
                              <% end %>  
                            <% end %> 
                            <% total_mark = total_mark+subject_obtain_mark.to_f %>
                            <td><%= subject_obtain_mark.to_i %></td>
                            <%  grade = GradingLevel.percentage_to_grade(subject_obtain_mark, @batch.id) %>
                             <% if !grade.blank? and !grade.name.blank? %>
                              <td><%= grade.name %></td>
                              <td><%= grade.credit_points %></td>
                             <% else %>
                              <td>-</td>
                             <% end %>
                            <% if subject_obtain_mark < 40 && fourth_subject == false %>
                              <% failed = true %>
                            <% end %>
                            <td rowspan="<%= rowspan %>">
                              <% if @student_total_grade[@student.id.to_i].blank? %>
                                0.00
                              <% else %>
                                <%= sprintf( "%0.02f", @student_total_grade[@student.id.to_i]) %>
                              <% end %>
                            </td>
                            <td rowspan="<%= rowspan %>">
                              <% unless @student_position_batch[@student.id.to_i].blank? %>
                                <%= @student_position_batch[@student.id.to_i] %>
                              <% end %>
                            </td>
                            <td rowspan="<%= rowspan %>">
                              <% unless @student_position[@student.id.to_i].blank? %>
                                <%= @student_position[@student.id.to_i] %>
                              <% end %>
                            </td>
                            <td rowspan="<%= rowspan %>">
                              <% unless @subject_highest[sub['id'].to_i].blank? %>
                                <%= @subject_highest[sub['id'].to_i] %>
                              <% end %>
                            </td>
                            <% break %>
                            
                          <% end %>   
                        <% end %>
                    </tr>
                    <% sub_loop = 0 %>
                    <% @report_data['report']['subjects'].each do |sub| %>
                    <% subjectdata = Subject.find(sub['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>sub['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                       <% if @has_exam_student != false %>
                          <% if sub_loop == 0 %>
                            <% sub_loop = 1 %>
                            <% next %>
                          <% end %>
                          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                            <% fourth_subject = false %>
                            <% if !@std_subject_hash_type.blank? %>
                              <% if @std_subject_hash_type.include?(std['id'].to_s+"|||"+sub['id'].to_s+"|||4") %>
                                <% fourth_subject = true %>
                              <% end %>
                            <% end %>
                            

                            <% subject_full_mark = 0 %>
                            <% subject_obtain_mark = 0 %>
                            <% has_exam = false %>
                            <% if @all_subject_id.include?(sub['id'].to_i) %>
                              <% has_exam = true %>
                            <% end %>

                            <% @report_data['report']['exams'].each do |rs| %>
                              <%= render  :partial=>"/connect_exam/has_exam_score", :locals=>{:exam_group_id=>rs['exam_id'].to_s,:subject_id=>sub['id'].to_s} %>
                              <% if !rs['result'].blank? and !rs['result'][rs['exam_id']].blank? and !rs['result'][rs['exam_id']][sub['id']].blank? and !rs['result'][rs['exam_id']][sub['id']][std['id']].blank? and @check_exam_score == true %>
                                <td><%= rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_i %></td>
                                <%

                                subject_full_mark = subject_full_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['full_mark'].to_i
                                subject_obtain_mark = subject_obtain_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f


                              %>
                              <% else %>
                                <td>-</td>
                              <% end %>  
                            <% end %> 
                            <% total_mark = total_mark+subject_obtain_mark.to_f %>
                            <td><%= subject_obtain_mark.to_i %></td>
                            <%  grade = GradingLevel.percentage_to_grade(subject_obtain_mark, @batch.id) %>
                             <% if !grade.blank? and !grade.name.blank? %>
                              <td><%= grade.name %></td>
                              <td><%= grade.credit_points %></td>
                             <% else %>
                              <td>-</td>
                             <% end %>
                            <% if subject_obtain_mark < 40 && fourth_subject == false %>
                              <% failed = true %>
                            <% end %>
                          </tr>
                        <% end %>  
                     <% end %>
                    <% end %>
                  <% end %>
              </table>
            <% end %>
        </center>
    </div>


</div>

<style>
.even td{

    padding: 5px 1px 5px 1px !important;

}

.odd td{
    padding: 5px 1px 5px 1px !important;


}
.table-header td{
    padding: 5px 1px 5px 1px !important;

} 
    
</style>    
