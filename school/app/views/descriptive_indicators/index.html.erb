<div id="content-header">
  <%= stylesheet_link_tag("observation_groups/show.css") %>
  <%= show_header_icon %>
  <h1>Descriptive Indicators</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>Descriptive Indicators</div>
  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'>
        <% if @observation %>
          <%= link_to_remote "#{t('new_indicator')}", :url => {:action=>"new", :controller=>"descriptive_indicators",:observation_id => @observation.id, :sort_order=>@sort_order },:method=>:get %>
        <% elsif @fa_criteria %>
          <%= link_to_remote "#{t('new_indicator')}", :url => {:action=>"new", :controller=>"descriptive_indicators",:fa_criteria_id => @fa_criteria.id, :sort_order=>@sort_order },:method=>:get %>
        <% end %>
      </li>
    </ul>
  </div>

</div>
<div id="page-yield">

  <% if @observation %>
    <div class="bread_crumb">
      <%= link_to t('observation_groups'), observation_groups_path %> <div class = "bread-crumb-separator"> > </div>
      <%= link_to @observation_group.name, observation_group_path(@observation_group) %> <div class = "bread-crumb-separator"> > </div>
      <%= @observation.name %>
    </div>
    <div id="flash-box">
      <% unless flash[:notice].nil? %>
        <p class="flash-msg"> <%= flash[:notice] %> </p>
      <% end %>
    </div>
    <div class="title"><%= t("name_text") %>
      <div class="description">:&nbsp;&nbsp;&nbsp;<%= @observation.name %></div>
    </div>
    <div class="title"><%= t("description_text") %>
      <div class="description">:&nbsp;&nbsp;&nbsp;<%= @observation.desc %></div>
    </div>
  <% elsif @fa_criteria %>
    <div class="bread_crumb">
      <%= link_to t('fa_groups_text'), fa_groups_path %> <div class = "bread-crumb-separator"> > </div>
      <%= link_to @fa_group.name, fa_group_path(@fa_group) %> <div class = "bread-crumb-separator"> > </div>
      <%= @fa_criteria.fa_name %>
    </div>
    <div id="flash-box">
      <% unless flash[:notice].nil? %>
        <p class="flash-msg"> <%= flash[:notice] %> </p>
      <% end %>
    </div>
    <div class="title"><%= t("fa_name") %>
      <div class="description">:&nbsp;&nbsp;&nbsp;<%= @fa_criteria.fa_name %></div>
    </div>
    <div class="title"><%= t("description_text") %>
      <div class="description">:&nbsp;&nbsp;&nbsp;<%= @fa_criteria.desc %></div>
    </div>
  <% end %>
  <div id="descriptive_indicators">
    <%= render  :partial=>'descriptive_indicators' %>
  </div>
  <div id="modal-box" style="display:none;"></div>
</div>
