<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" media="screen" rel="stylesheet" type="text/css" />
<div id="content-header">
 <h1><%= link_to "Board Exam",{:action => "index"} %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Exam Group Subject</div>

</div>



<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="box">  
        <h4 align="center"><%= t('subject') %></h4> 
        
        <ul id="category-list">
          <% @board_exam_names.each do |exam_name| %>
            <li class="list<%=cycle('odd', 'even')%>">
              
              <div class="category-name" style="width: 100px; padding: 4px 2px 8px 8px;"><%=  exam_name.name %></div>
              <div id="cate_sections_<%= exam_name.id %>" class="category-sections" style=" padding: 0px 2px 10px 8px;">
                <% @board_exam_groups.each do |group| %>
                  <%= link_to_remote(group.name,
                      :url => { :controller=>"board",:action => 'get_exam_group_subject', :id =>group.id, :exam_name_id => exam_name.id},
                      :html => {:class=> "sections", :style => "margin-top: 0px;", :id => "section_" + exam_name.id.to_s+"_"+group.id.to_s},
                      :method => 'get', :before => "$('loading_" + exam_name.id.to_s + "').show();var jqss = jQuery.noConflict();jqss('.sections').removeClass('selected');$('section_" + exam_name.id.to_s + "_" + group.id.to_s + "').addClassName('selected');", 
                      :complete => "hide_loading(" + exam_name.id.to_s + ");" ) %> 
                
                <% end %>  
              </div>
              <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_" + exam_name.id.to_s, :style =>"display: none;  float: right; margin-top: -30px; margin-right: 10px;" ) %>
            </li>
          <% end %>

        </ul>
        <div style="clear: both; height: 10px;"></div>
        <div id="subjects"></div> 
        <div id="modal-box" style="display:none;"></div>

    <div class="extender"></div>
  </div></div>
<style>
.custom_icon{
    border: 1px solid #ccc;
    height: 40px;
    padding: 3px;
    width: 40px;
  }
  .category-name a{
    text-decoration: none;
  }
  #category-list li div a:hover{
    text-decoration: none;
    color: #000;
  }
  #category-list li.batches_list{
    cursor: pointer;
  }
  #category-list li.batches_list:hover{
    background: #D7D7D7;
  }
  #category-list li.selected{
    background: #D7D7D7;
  }
  #category-list li div.category-sections span.sections {
    background: #DDD;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
    cursor: pointer;
}

#category-list li div.category-sections span.select_section {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
    cursor: pointer;
}

#category-list li div.category-sections span.sections:hover {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}

#category-list li div.category-sections a.sections {
    background: #DDD;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
}

#category-list li div.category-sections a.sections:hover {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}
#category-list li div.category-sections a.selected {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}
#category-list
{
   width: 95%;
}
</style>
<% content_for :head do %>
  <%= javascript_include_tag "custom/assign-icon" %>
<% end %>