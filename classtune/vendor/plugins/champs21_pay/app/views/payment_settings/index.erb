<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('online_payment') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('home') %></div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('settings')}", settings_online_payments_path %> </div>
      <div class="link-descr"><%= t('manage_settings') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('transactions')}", transactions_online_payments_path %> </div>
      <div class="link-descr"><%= t('list_online_transaction') %></div>
    </div>
      
    <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('order_verification')}", {:controller => "online_payments", :action => "order_verifications"} %> </div>
        <div class="link-descr"><%= t('order_verification') %></div>
    </div>
    
     <% unless @payment_gateways.blank? %>  
      <% if @payment_gateways.include?("bkash") %>
       <div class="link-box" style="display: none;">
         <div class="link-heading"><%= link_to "#{t('search_transaction')}", {:controller => "online_payments", :action => "search_transaction"} %> </div>
         <div class="link-descr"><%= t('search_transaction') %></div>
       </div>
     <% end %>  
    <% end %>  
  </div>
</div>
