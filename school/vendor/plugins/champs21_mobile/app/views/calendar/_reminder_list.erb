<div class="paginating_partial">
    <div class="student_name">
    <%= @date %>
  </div>
  <% unless @events.empty? %>
    <table class="table table-striped table-bordered table-condensed">
      <% @events.each do |e|%>
        <% if e.is_exam?
          color="blue"
          title=e.description
          desc="#{I18n.l(e.start_date,:format=>"%I:%M %p")} - #{I18n.l(e.start_date,:format=>"%I:%M %p")}"
        elsif e.is_due?
          color="red"
          title="Fee Due"
          desc=e.description
        elsif e.is_holiday?
          color="green"
          title=e.title
          desc=e.description
        else
          color="black"
          title=e.title
          desc="#{I18n.l(e.start_date,:format=>"%I:%M %p")} - #{I18n.l(e.start_date,:format=>"%I:%M %p")}"
        end %>
        <tr>
          <td>
            <div class=<%= color %>></div>
            <label class="event_name">
              <%= e.end_date==e.start_date ? I18n.l(e.start_date,:format=>"%b %d %Y") : "#{I18n.l(e.start_date,:format=>"%b %d %Y")} - #{I18n.l(e.end_date,:format=>"%b %d %Y")}" %>
            </label>
            <label class="event"><%= title %></label>
            <label class="description"><%= desc %></label></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="alert">
      <%= t("no_events") %>
    </div>
  <% end %>
</div>

