<div id="content-header">
  <%= show_header_icon %>
    <h1><a href="/library"  style="color:#666666; text-decoration: none;" ><%= "#{t('library_text')}"%></a></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>
  <% unless @book_call_number_obj.nil? %>
      <a href="/books/" style="color:#666; text-decoration:none;"><%= "#{t('manage_books')}"%></a>&nbsp;|&nbsp;<%= @book_call_number_obj.title %>
  <% else %>
     <%= "#{t('manage_books')}"%>
  <% end %>   
  </div>
  <div id="inner-tab-menu">
    <ul>
      <% if permitted_to? :new, :books %>
        <li class='themed_bg themed-dark-hover-background'>
          <% unless @book_call_number_obj.nil? %>
            <%= link_to "#{t('add_books')}", {:action => "new",:book_call_number=>@book_call_number} %>
          <% else %>  
            <%= link_to "#{t('add_books')}", new_book_path %>
          <% end %>
          </li>
      <% end %>
     <% if permitted_to? :upload_call_numbers, :books %>
        <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('upload_csv')}", {:action => "upload_book"} %></li>
      <% end %>
    </ul>
  </div>
</div>
<div id="page-yield">
  <% unless @books.count == 0 %>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <% unless flash[:warn_notice].nil? %>
      <div id="errorExplanation" class="errorExplanation">
        <ul>
          <li>
            <%= flash[:warn_notice] %>
          </li>
        </ul>
      </div>
    <% end %>
    <div id="sort_by">
      <% remote_form_for :sort, :url=>{:action=>"sort_by"} ,:loading => "$('loader').show();", :loaded => "$('loader').hide();" do |f| %>
        <div class="label-field-pair">
          <label for="sort"><%= "#{t('filter_by')}"%></label>
          <div class="text-input-bg">
            <%= f.select :on, [["#{t('all')}",""],["#{t('available')}", 'Available'],["#{t('borrowed')}",'Borrowed'],["#{t('binding')}", 'Binding'],["#{t('lost')}", 'Lost'],["#{t('reserved')}", 'Reserved']] %>
            <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
          </div>
        </div>
        <%= f.submit "#{t('filter')}", :class=>"sort_button" %>
      <% end %>
    </div>
    <div id="books">
      <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
        <tr class="tr-head">
          <td>
            <%= "#{t('call_number')}"%>
          </td>
          <td>
            <%= "#{t('book_number')}"%>
          </td>
          <td>
            <%= "#{t('title')}"%>
          </td>
          <td>
            <%= "Source"%>
          </td>
          <td>
            <%= "Price"%>
          </td>
          <td>
            <%= "#{t('status')}"%>
          </td>
          <td>

          </td>
        </tr>
        <tr class="tr-blank"></tr>
        <%can_edit=permitted_to? :edit, :books%>
        <% can_delete=permitted_to? :destroy, :books %>
        <% for book in @books %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-3"><%=h book.book_call_number.call_number %></td>
            <td class="col-3"><%=h book.book_number %></td>
            <td class="col-7"><%=h book.title %></td>
            <td class="col-3"><%=h book.source %></td>
            <td class="col-3"><%=h book.price %></td>
            <td class="col-1"><%=h t("#{book.status.downcase}") %></td>
            <td class="col-7" style="width:20%;">
              <small>
                <%= link_to "#{t('view')}", book %>
                <% if can_edit %>
                  | <%= link_to "#{t('edit_text')}", {:action => "edit",:id=>book.id,:book_call_number=>@book_call_number} %>
                <% end %>
                <% if can_delete %>
                  | <%= link_to "#{t('delete_text')}", book, :confirm => "#{t('delete_confirm_msg')}", :method => :delete %>
                <% end %>
              </small>
            </td>
          </tr>
        <% end %>
      </table>
      <%= will_paginate @books %>

    </div>
  <% else %>
    <p class="flash-msg"> <%= t('no_books') %></p>
  <% end %>


</div>
