<% unless @departments.blank?  %>
  <div class="label-field-pair">
    <div class="label-container"><label for="department" id="label-member4"><%= t('select_department') %><%= params[:select_department][:department].to_i if params[:select_department] and params[:select_department][:department] %>
      <%= image_tag("loader.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader",
        :style =>"display: none;" ) %></label></div>
    <div class="input-container">
      <% if @employee_department_id and @employee_department_id.present? %>
        <%= select :select_department, :department, @departments.map { |s| [s.name, s.id] },
          {:selected=>@employee_department_id.to_i},
          {:onChange => "#{remote_function(:url => {:action => "to_employees"}, :with => "'dept_id='+value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')")}"} %>
        <script type="text/javascript">
    <%= remote_function(:url => {:action => "to_employees"}, :with => "'dept_id='+#{@employee_department_id.to_i}") %>
        </script>
      <% else %>
        <%= select :select_department, :department, @departments.map { |s| [s.name, s.id] },
          {:prompt => "#{t('select_department')}"},
          {:onChange => "#{remote_function(:url => {:action => "to_employees"}, :with => "'dept_id='+value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')")}"} %>
      <% end %>
    </div>
  </div>
<% end %>