                    <% end %>
                  <% end %>
                </div>
              </td>

              <td id="action_tr_<%= fees.student.id %>_<%= fees.id %>" class="col-3 action_tr" style="text-align: center;vertical-align: middle;" >
                  <div class="action_div">
