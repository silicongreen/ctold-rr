<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('attendance_report') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('student_report') %></div>

</div>
<div id="page-yield">
  <div class="label-field-pair">
    <label><%= t('student_details') %> <%= @student.full_name %></label>
  </div>
  <% unless @report.empty? %>
    <table id="listing" align="center" width="80%">
      <tr class="tr-head">
        <td>
          <%= t('date_text') %>
        </td>
        <td>
          <%= t('status') %>
        </td>
        <% if @config.config_value =="SubjectWise" %>
          <td>
            <%= t('subject') %>
          </td>
          <td>
            <%= t('class_timing') %>
          </td>
        <% end %>
        <td>
          <%= t('reason') %>
        </td>
      </tr>
      <tr class="blank"></tr>
      <% @report.each do |r| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
    <%# @details = PeriodEntry.find(r.period_table_entry_id) %>
          <td class="col-3"><%= r.month_date.to_date %></td>
          <td class="col-3">
            <% if @config.config_value == 'Daily' %>
              <% if r.forenoon and r.afternoon %>
                <%= "#{t('full_day')}" %>
              <% elsif r.afternoon %>
                <%= "#{t('afternoon')}" %>
              <% elsif r.forenoon %>
                <%= "#{t('forenoon')}" %>
              <% else %>
                <%= "#{t('absent')}" %>
              <% end %>
            <% else %>
              <%= "#{t('absent')}" %>
            <% end %>
          </td>
          <% if @config.config_value =="SubjectWise" %>
            <td  class="col-3">
              <%= r.subject.name %>
            </td>
            <td  class="col-3" >
              <%= r.class_timing.name %>
            </td>
          <% end %>
          <td class="col-2">
            <%= r.reason %></td>
        <% end %>
      </tr>
    </table>
  <% else %>
    <p class="flash-msg"> <%= t('no_reports') %> </p>
  <% end %>
</div>
