<%# particular = @bill_generations.map{|s| [s['particular']]}  %>
<%#= debug @bill_generations.inspect %>
<span style="padding: 8px 15px 20px 13px; font-weight: bold; display: block; font-size: 18px; font-family: verdana; text-align: left;">Bill Generation Report</span>
  <div id="table-scroll" class="table-scroll" style="max-height: 500px; overflow-y: auto;">
      <div class="table-wrap">
          <table class="table-bordered main-table" id="table-scroll" cellspacing="0" cellpadding="0" border="0" style="width: 98%; table-layout:fixed;">
              <thead><!-- class="thead-inverse" -->
                <tr>
                  <th class="fixed-side" scope="col" style="width: 200px; text-align: center; vertical-align: middle;">Student info</th>
                  <% unless @particulars.blank? %>
                    <% @particulars.each do |particular| %>
                      <% unless @bill_generations.map{|s| s[particular['name']] unless s[particular['name']].blank?}.blank? %>
                      <% particular['amount'] = 0.0 %>
                      <th style=" background: #f9f9f9; width: 140px; text-align: center; vertical-align: middle; background: #f9f9f9;"><%= particular['name'] %></th>
                      <% end %>
                    <% end %>
                  <% end %>
                  <th style="width: 100px; text-align: center; vertical-align: middle; background: #f9f9f9;">Total Fees</th>
                  <th style="width: 100px; text-align: center; vertical-align: middle; background: #f9f9f9;">Paid Amount</th>
                  <th style="width: 100px; text-align: center; vertical-align: middle; background: #f9f9f9;">Remaining</th>
                </tr>
              </thead>
              <% grand_total = 0.0 %>
              <% grand_paid = 0.0 %>
              <tbody>
                <% particulars_with_amount = [] %>
                <% unless @bill_generations.blank? %>
                  <% @bill_generations.each do |fee_data| %>
                    <% style = "" %>
                    <% txt = "-" %>
                    <% if fee_data['is_paid'] %>  
                    <% #style = "border-left: 10px solid #090;" %>  
                    <% style = "" %>  
                    <% txt = "[+]" %>  
                    <% end %> 
                    <tr class="tr-odd">
                        <th style="vertical-align: middle; text-align: left;" class="fixed-side">
                          <% student = Student.find(:first, :conditions => "id = #{fee_data['id']}") %>
                          <a href="/finance/fees_student_dates/<%= student.id %>" target="_blank"  style="font-weight: normal;">
                            <%= student.full_name unless student.full_name.nil? %><br />
                            <small>ID: <%= student.admission_no unless student.admission_no.nil? %></small>
                          </a>
                        </th>
                        <% total_fee = 0.0 %>
                        <% unless @particulars.blank? %>
                          <% @particulars.each_with_index do |particular, i| %>
                            <% unless @bill_generations.map{|s| s[particular['name']] unless s[particular['name']].blank?}.blank? %>
                              <% if particular['plusminus'] && particular['opt'].to_i == 1 %>
                                <% total_fee += fee_data[particular['name']] unless fee_data[particular['name']].nil? %>
                                <% particular['amount'] += fee_data[particular['name']] unless fee_data[particular['name']].nil? %>
                              <% elsif particular['plusminus'] && particular['opt'].to_i == 2 %>
                                <% total_fee = total_fee - fee_data[particular['name']] unless fee_data[particular['name']].nil? %>
                                <% particular['amount'] = particular['amount'] - fee_data[particular['name']] unless fee_data[particular['name']].nil? %>  
                                <% if total_fee < 0 %>
                                <% total_fee = 0 %>
                                <% end %>
                                <% if particular['amount'] < 0 %>
                                <% particular['amount'] = 0 %>
                                <% end %>
                              <% end %>
                                <td class="align-right" style=" z-index: 1; position: relative;"><%= precision_label fee_data[particular['name']] %></td>
                                <% particulars_with_amount[i] = particular %>
                            <% end %>
                          <% end %>
                        <% end %>
                        <% grand_total += total_fee  %>
                        <%#= grand_total += total_fee  %>    
                        <td class="align-right" style=" z-index: 1; position: relative;"><%= precision_label total_fee %></td>
                        <% paid_amount = 0 %>
                        <% unless fee_data['paid_fees'].blank? and total_fee == 0 %>
                          <% paid_amount = fee_data['paid_fees'].map(&:amount).sum.to_f %>
                          <td class="align-right" style=" z-index: 1; position: relative;"><%= precision_label paid_amount %></td>
                        <% else %>  
                          <td class="align-right" style=" z-index: 1; position: relative;"><%= precision_label 0.00 %></td>
                        <% end %>
                        <% remaining = total_fee - paid_amount  %>  
                        <% grand_paid += paid_amount  %>
                        <td class="align-right" style=" z-index: 1; position: relative;"><%= precision_label remaining %></td>
                    </tr>
                  <% end %>  
                    <tr>  
                      <th style="vertical-align: middle; text-align: left; color: #000; background: #f9f9f9; height: 40px;" class="fixed-side"> Grand Total </th>
                      <% total_fee = 0.0 %>
                      <% unless particulars_with_amount.blank? %>
                        <% particulars_with_amount.each do |particular| %>
                          <% total_fee += particular['amount'] unless particular['amount'].nil? %>
                          <td class="align-right" style="vertical-align: middle; font-weight: bold; background: #f9f9f9;"><%= precision_label particular['amount'] %></td>
                        <% end %>
                      <% end %>
                      <% grand_total += total_fee  %>    
                      <td class="align-right" style="vertical-align: middle; font-weight: bold; background: #f9f9f9;"><%= precision_label total_fee %></td>
                      <td class="align-right" style="vertical-align: middle; font-weight: bold; background: #f9f9f9;"><%= precision_label grand_paid %></td>
                      <td class="align-right" style="vertical-align: middle; font-weight: bold; background: #f9f9f9;"><%= precision_label total_fee - grand_paid %></td>
                    </tr>
                <% end %>  
              </tbody>
          </table>
      </div>
  </div>
  <div class="pdf_link" style="text-align: center;">
      <%#= link_to " â–º #{t('pdf_report')}",
        {:controller => "finance", :action => "fee_collection_pdf", :batch_id => @batch.id, :date => @date.id},:target => '_blank', :class=> 'user_button' %>
  </div>

