<% unless @report_data.blank? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">
        
      <% if @report_data['day_type']!="1" %>
        <h2><%=@report_data['day_type']%></h2>
      
      <% end %>
      <table id="listing table-design">
            <tr>
                <td><b>Class Name</b></td> 
                <td><b>Total</b></td> 
                <td><b>Present</b></td> 
                <td><b>Absent</b></td> 
                <td><b>Late</b></td> 
                <td><b>Leave</b></td>
            </tr>    
            <% unless @report_data['att_data'].blank? %>  
              <% @report_data['att_data'].each do |class_data| %>
                <% 
                  if @report_data['day_type']!="1"
                    class_data['present'] = "N/A"
                    class_data['absent'] = "N/A"
                    class_data['late'] = "N/A"
                    class_data['leave'] = "N/A"
                  end  
                %>
                <tr>
                  <td class="col-2"><b><%= class_data['class_section'] %></b></td>
                  <td class="col-2"><b><%= class_data['total'] %></b></td>
                  <td class="col-2"><b><%= class_data['present'] %></b></td>
                  <td class="col-2"><b><%= class_data['absent'] %></b></td>
                  <td class="col-2"><b><%= class_data['late'] %></b></td>
                  <td class="col-2"><b><%= class_data['leave'] %></b></td>
                 
                </tr> 
              <% end %>  
            <% end %>
      </table>
      <script type="text/javascript" src="javascripts/swfobject.js"></script>
      
      <div style="float:left; clear:both; margin-top:20px;">
        <%= @graph %>
      </div>   
  </div>
<% end %>


 

<%= stylesheet_link_tag 'list_table' %>
 
<style>
  .CSSTableGenerator td.view:hover
  {
