<div class="CSSTableGenerator" >
  <% unless @data['terms'].nil? or @data['terms'].empty?  %>
    <table class="table-design">
      <thead>
        <tr>
          <th>
            Exam Date
          </th> 
          <th>
            Exam Name
          </th>
        </tr>
      </thead>

      <tbody>
        <% @data['terms'].each do |term| %>
          <tr>
            <td>
              <%= I18n.l(term['exam_date'].to_time, :format=>:normal) unless term['exam_date'].nil? %>
            </td> 
            <td>
              <div class="left-dev"><%= term['title'] %></div>
              <div class="right-dev">
                <%= link_to_remote "View",
                  :before => "Element.show('loader2');",
                  :success => "Element.hide('loader2');",
                  :update => 'data_div',
                  :url=>{:controller=>"syllabus", :action=>"syllabus_by_term", :term_id => term['id']}
              %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <div style="background-color: #ffffff; height: 100px; color: #333333; padding: 25px;">
      No Data found
    </div>
  <% end %>
</div> 
