<% form_for :transport,  :url=>{:action => 'add_transport_all', :user=>'employee' } do |f|  %>
<table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
  <thead><!-- class="thead-inverse" -->
      <tr>
        <th><div class="select_all">
          <%= link_to_function "#{t('all')}", "$$('input.right').each(function(checkbox) { checkbox.checked = true; });" ,:class=>"themed_text"%>,
          <%= link_to_function "#{t('none')}", "$$('input.right').each(function(checkbox) { checkbox.checked = false; });" ,:class=>"themed_text" %>
        </div></th>
        <th><%= t('sl_no') %></th>
        <th class="col-4"><%= t('employee_name') %></th>
        <th><%= t('department') %></th>
        <th><%= t('employee_no') %></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% if @employees.blank? %>
      <tr class="<%= cycle('odd', 'even')%>">
          <td class="col-1" colspan="6"><div><%= t('no_users') %></div></td>
      </tr>
    <% else %>
      <% @employees.each_with_index do |r, i| %>
        <tr class="<%= cycle('odd', 'even')%>">
          <td class="col-1 check_box"><%= check_box_tag "transportuser[user_ids][]", r.id,"",:class=>"right" %></div>
          <td class="col-1"><%= i+1 %></td>
          <td class="col-4"><%= r.full_name %></td>
          <td class="col-4"><%= "#{r.employee_department.name}" %></td>
          <td class="col-7"><%= r.employee_number %></td>
          <td class="col-1">
            <% if r.transport.nil?%>
              <%= link_to "#{t('assign')}", :controller => "transport", :action => "add_transport", :id => r.id,:user=>'employee' %>
            <%else%>
              <%= link_to "#{t('assign')}", :controller => "transport", :action => "edit_transport", :id => r.transport.id %><br/>
            <% end %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="6" class="col-1">
          <%= f.submit "#{t('assign')}" ,:class=>"submit_button", :disable_with => "#{t('please_wait')}"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<style>
    a {
      font-size: 11px;
      text-decoration: underline;
      font-family: verdana;
    }
    td {
      font-size: 12px;
      font-family: verdana;
    }
</style>