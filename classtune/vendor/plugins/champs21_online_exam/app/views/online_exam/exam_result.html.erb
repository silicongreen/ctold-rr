<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('online_exam_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('exam_result_text') %></div>
<div id="inner-tab-menu">
  <ul>
   <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('pdf_report')}", {:action => "exam_result_pdf", :id=>@exam_group.id},:target => '_blank' %></li>
  </ul>
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    
  <div class="box">
    
    <% unless @attendance.blank? %>
    <table id="listing" width="100%">
      <tr class="tr-head">
        <td><%= t('student_text') %></td>
        <td><%= t('marks') %></td>
        <td><%= t('result') %></td>
      </tr>
      <% @attendance.each do |att| %>
        <% if att.total_score.blank? %>
           <% att.total_score = 0 %>
        <% end %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-2" ><%= att.student.full_name %></td>
          <td class="col-2" ><%= att.total_score %>/<%= @exam_group.online_exam_questions.sum('mark') %></td>
          <% if att.is_passed %>
          <td class="col-2" ><%= t('passed') %></td>
          <% else %>
          <td class="col-2" ><%= t('failed') %></td>
          <% end %>
        </tr>
        <% end %>
    </table>

      <% else %>
      <p class="flash-msg"><%= t('no_student_attended_this_exam') %></p>
      <% end %>
   
    <div class="extender"></div>
  </div></div>
