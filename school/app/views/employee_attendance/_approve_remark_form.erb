 <div class="approval-form">


  <% form_for :approve_leave,  :url => {:action => 'approve_leave'} do %>


                   

      <div class="label-field-pair">
        <label for="course_grade"><%= t('approval_remark') %></label>
        <div class="text-input-bg"> <%= text_field_tag :manager_remark %> </div>
        <%= hidden_field_tag :applied_leave, @applied_leave.id %>
        <%= hidden_field_tag :target, @target %>
        <%= hidden_field_tag :request_from, @request_from %>
      </div>



      <div class="submit-button">
        <%=submit_tag "►#{t('ok')}",:class=>'submit_button', :disable_with => "► #{t('please_wait')}" %>
      
   </div>



  <div class="extender"></div>

<% end %>

</div>
