<div class="students-table">
    <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
    <table align="center" width="100%" cellpadding="1" cellspacing="1">


        <%  unless @students.nil? %>
          <tr class="tr-head">
              <td></td>
              <td><%= t('name') %></td>
              <td>Class</td>
              <td><%= t('adm_no') %></td>
              <td><%= t('admission_date') %></td>
              <td><%= t('date_of_birth') %></td>
              <td><%= t('guardian') %></td>

              <td></td>
          </tr>
          <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
          </tr>
          <% @students.each_with_index do |r, i| %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
                <td class="col-1">
                    <input id="student_checkbox_activation_<%= r.id %>" name="student_checkbox_activation" type="checkbox" value="<%= r.id %>" class="student_checkbox_activation" /> 
                </td>
                <td class="col-7">
                    <%=  r.first_name+" "+r.last_name %>
                </td>
                <td class="col-1">
                    <%= r.bname+" "+r.course_name+" "+r.section_name %>
                </td>
                <td class="col-1">
                    <%= r.admission_no %>
                </td>
                <td class="col-1">
                    <%= r.admission_date %>
                </td>
                <td class="col-1">
                    <%= r.date_of_birth %>
                </td>
               

                <td class="col-7" style="text-align: left; padding: 0 2px;">
                    <%
                    guardians = r.gnames.split("|")
                  %>
                    <%  unless @students.first.first_name.nil? %>
                      <% guardians.each_with_index do |g, j| %>
                        <p><%= j+1 %>. <%= g %></p>
                      <% end %>
                    <% end %>  
                </td>

                <td class="col-9">
                    <div class="image_loading">
                        <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader_approve_#{r.id}",:style =>"display: none; float:left;" ) %>
                    </div>
                    <%= link_to_remote "#{t('approve')}",
                      :before => "Element.show('loader_approve_#{r.id}')",
                      :success => "Element.hide('loader_approve_#{r.id}')",
                      :confirm => 'Are you sure you want to approve this student and guardian?',
                      :url=>{:controller=>"student", :action=>"list_applicant_by_course"},
                      :with => "'batch_id=#{@batch_id}'+'&student_id=#{r.id}'+'&status_change=1'"%>
                    &nbsp;&nbsp;&nbsp;
                    <%= link_to_remote "Delete",
                      :before => "Element.show('loader_approve_#{r.id}')",
                      :success => "Element.hide('loader_approve_#{r.id}')",
                      :confirm => 'Are you sure you want to parmantly remove this applicant?',
                      :url=>{:controller=>"student", :action=>"list_applicant_by_course"},
                      :with => "'batch_id=#{@batch_id}'+'&student_id=#{r.id}'+'&status_change=0'"%>

                    &nbsp;&nbsp;&nbsp;
                    <%= link_to "Edit",{:controller=>"student", :action=>"edit_inactive_student",:id=>r.id}  
                  %>   
                </td>
            </tr>
          <% end %>
        <% else %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
              <td class="col-9"><%= t('no_students_found') %></td>
          </tr>

        <% end %>
    </table>
    <%= will_paginate @students %>
    </br>
    </br>
    <div style="margin-top:10px;">
        <input type="button" value="Approve" style="cursor: pointer;" onClick="approve_checked_student();"  id="approve_button_student">
        <input type="button" value="Delete" style="cursor: pointer;" onClick="delete_checked_student()"  id="delete_button_student">
    </div>    
</div>








