<% form_for :pin,:url => {:action => "show_form"} do |f| %>
  <%= f.hidden_field :course_id,:value => @course.id %>
  <div class="label-field-pair1 w400">
    <%= f.label :pin_number,t('pin_number') %>
    <%= f.text_field :pin_number %>
  </div>
  <%= f.submit "Submit",:class => "submit_button1" %>
<% end %>
