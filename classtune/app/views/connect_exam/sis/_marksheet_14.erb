<div id="page-yield" class="available_sections1">
    <div class="page1"> </div>
    <div class="section1 row" >
        <center>
            <h3 align="center">Mark Sheet</h3>
            <div class="hor_line"></div>
            <h4 align="center">For Subject Teacher</h4>

            <div id ="main_info">
                <table>
                    <tr>
                        <% if !@employee.nil? %> 
                          <td align='left'><h4>Teacher's Name : <%=  @employee.full_name %></h4></td>
                          <td align='center'><h4>Subject : <%= @subject.name %></h4></td>
                        <% else %>
                          <td align='left'><h4>Subject : <%= @subject.name %></h4></td>
                        <% end %> 

                        <td align='center'><h4>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %></h4></td>
                        <td align='right'><h4>Section : <%= @batch.course.section_name %></h4></td>
                    </tr>    
                </table>    

            </div>
            <% unless @report_data.blank?  or  @report_data['result'].blank? %>
              <% c = 'even' %>
              <% exam_type = 1 %>
              <% full_mark = 0 %>
              <% colspan = 0 %>
              <table id="pdf-table" width="98%" cellspacing="0">
                  <tr class="table-header">
                      <td>Roll NO.</td>
                      <td>Name</td>
                      <td>Quarter (50)</td>
                      <% total_full_mark = 50 %>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <%  if rs['quarter'] == '6' %>  
                          <% exam_type = 2 %>
                        <% end %>
                      <% end %> 
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <%  if (exam_type == 1 and rs['quarter'] == '5') or (rs['quarter'] == '6' && exam_type == 2) %>  
                          <td><%=  rs['name'] %> (<%=  rs['maximum_marks'] %>)</td>
                          <% total_full_mark = total_full_mark+rs['maximum_marks'].to_i %>
                        <% end %>
                      <% end %> 
                      <td>Total (<%= total_full_mark.to_i %>)</td>
                      <td>Grade</td>

                  </tr>

                  <% extender = 0 %>
                  <% std_count = 0 %>
                  <% unless @report_data['result']['al_students'].blank? %>
                    <% @report_data['result']['al_students'].each do |std| %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>@subject.id.to_s,:elective_group_id=>@subject.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                        <% next %>
                      <% end %>          


                      <%  std_count = std_count+1; %>
                      <% colspan = colspan+4 %>
                           


                      <% q1_mark = 0 %>
                      <% q2_mark = 0 %>
                      <% q3_mark = 0 %>
                      <% q4_mark = 0 %>
                      <% first_term_mark = 0 %>
                      <% final_term_mark = 0 %>
                      <% q1_fullmark = 0 %>
                      <% q2_fullmark = 0 %>
                      <% q3_fullmark = 0 %>
                      <% q4_fullmark = 0 %>
                      <% first_term_fullmark = 0 %>
                      <% final_term_fullmark = 0 %>

                      <% subject_full_mark = 0 %>
                      <% subject_obtain_mark = 0 %>
                      <% total_mark = 0 %>
                      <% full_mark = 0 %>

                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <td><%= std['class_roll_no'] %></td>
                          <td><%= std['name'] %></td>
                          <% @report_data['result']['ALL'].each do |rs| %>
                            <% 
                            if rs['exam_category'] == '7'
                              next
                            end  
                            if rs['quarter'] == '1'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q1_mark = q1_mark.to_f+rs['students'][std['id']]['score'].to_f
                                end
                              if !rs['maximum_marks'].blank?
                                q1_fullmark = q1_fullmark+rs['maximum_marks'].to_i
                              end
                              end

                            if rs['quarter'] == '2'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q2_mark = q2_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                q2_fullmark = q2_fullmark+rs['maximum_marks'].to_i
                              end
                              end
                            if rs['quarter'] == '3'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q3_mark = q3_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                q3_fullmark = q3_fullmark+rs['maximum_marks'].to_i
                              end
                              end
                            if rs['quarter'] == '4'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q4_mark = q4_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                q4_fullmark = q4_fullmark+rs['maximum_marks'].to_i
                              end
                              end
                            if rs['quarter'] == '5'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                first_term_mark = first_term_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                first_term_fullmark = first_term_fullmark+rs['maximum_marks'].to_i
                              end
                            end
                            if rs['quarter'] == '6'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                final_term_mark = final_term_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                final_term_fullmark = final_term_fullmark+rs['maximum_marks'].to_i
                              end
                            end
                          %>



                          <% end %> 
                          <%
                          quarter_mark = 0
                          q1_mark_20 = 0
                          q2_mark_20 = 0
                          q3_mark_20 = 0
                          q4_mark_20 = 0
                          final_term_mark_60 = 0 
                          first_term_mark_60 = 0 
                          full_mark_term = 0
                          if first_term_fullmark > 0 or q1_fullmark > 0 or q2_fullmark > 0


                            if q1_fullmark > 0 && q1_mark > 0
                              q1_mark_20 = (q1_mark.to_f/q1_fullmark.to_f)*25
                              q1_mark_20 = q1_mark_20.round()
                              end 
                            if q2_fullmark > 0 && q2_mark > 0
                              q2_mark_20 = (q2_mark.to_f/q2_fullmark.to_f)*25
                              q2_mark_20 = q2_mark_20.round()
                              end 
                            if first_term_fullmark > 0
                                full_mark_term = first_term_fullmark
                              end
                            if first_term_fullmark > 0 && first_term_mark > 0
                              first_term_mark_60 = first_term_mark.to_f
                            end
                            total_mark = q1_mark_20+q2_mark_20+first_term_mark_60
                            unless first_term_fullmark > 0	
                              total_mark = total_mark*2	
                            end
                            end 
                          if final_term_fullmark > 0 or q3_fullmark > 0 or q4_fullmark > 0


                            if q3_fullmark > 0 && q3_mark > 0
                              q3_mark_20 = (q3_mark.to_f/q3_fullmark.to_f)*25
                              q3_mark_20 = q3_mark_20.round()
                              end 
                            if q4_fullmark > 0 && q4_mark > 0
                              q4_mark_20 = (q4_mark.to_f/q4_fullmark.to_f)*25
                              q4_mark_20 = q4_mark_20.round()
                              end 

                            if final_term_fullmark > 0
                                  full_mark_term = final_term_fullmark
                                end
                                if final_term_fullmark > 0 && final_term_mark > 0
                                 
                                  final_term_mark_60 = final_term_mark.to_f
                                end
                            total_mark = q3_mark_20+q4_mark_20+final_term_mark_60
                            unless final_term_fullmark > 0	
                              total_mark = total_mark*2	
                            end
                          end
                          if (exam_type == 1)
                            quarter_mark = q1_mark_20+q2_mark_20
                            term_mark = first_term_mark_60
                          end 
                          if (exam_type == 2)
                            quarter_mark = q3_mark_20+q4_mark_20
                            term_mark = final_term_mark_60
                            
                          end 
                          
                          total_mark = term_mark+quarter_mark
                          full_mark_all = full_mark_term+50
                          main_mark = 0
                          total_mark = total_mark.round()
                          if total_mark > 0 && full_mark_all > 0
                            main_mark = (total_mark.to_f/full_mark_all.to_f)*100
                          end
                          grade = GradingLevel.percentage_to_grade(main_mark, @batch.id)

                        %>
                          <td><%= sprintf( "%0.02f", quarter_mark) %></td>
                          <% @report_data['result']['ALL'].each do |rs| %>
                            <% if rs['quarter'] == '5' or rs['quarter'] == '6' %>
                              <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                                <td><%= rs['students'][std['id']]['score'].to_f %></td>
                              <% else %>
                                <td>-</td>
                              <% end %>  
                            <% end %>
                          <% end %>
                          <td><%= total_mark.round() %></td>

                          <% if !grade.blank? and !grade.name.blank? %>
                            <td class="col-2"><b><%= grade.name %></b></td>
                          <% else %>
                            <td class="col-2"><b>-</b></td>
                          <% end %>
                      </tr>
                    <% end %>
                  <% end %>
              </table>
            <% end %>
        </center>
    </div>


</div>
