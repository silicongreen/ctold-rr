<% unless @report_data.blank? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">
        
      
      <table id="listing table-design">
          <thead>
            <tr>
                <th>Student Name</b></th>
                <% unless @report_data['result']['report'].blank? %>  
                  <% @report_data['result']['report'].each do |report| %>
                    <th><%= report['subject_name'] %></th> 
                  <% end %>
                <% end %>
                
                <th>GPA / Score</th>
                <th>Position</th>
            </tr>
          </thead>  
            <% unless @report_data['result']['students'].blank? %> 
              <% @report_data['result']['students'].each do |students| %>
                <tr>
                  <td class="col-2"><b><%= students['name'] %></b></td>
                  <% unless @report_data['result']['report'].blank? %>  
                    <% @report_data['result']['report'].each do |report| %>
                       <td>
                       <% if !report['score'].blank? and !report['score'][report['subject_id']].blank? and !report['score'][report['subject_id']][students['id']].blank?  and !report['score'][report['subject_id']][students['id']]['grade'].blank? %>
                        <%= report['score'][report['subject_id']][students['id']]['grade'] %> [<%= report['score'][report['subject_id']][students['id']]['score'] %>]
                       <% end %>
                       </td>
                       
                    <% end %>
                  <% end %>
                  
                  
                  <%
                    position = students['position']
                    extra_string = "<sup>th</sup>"
                    if students['position'].to_i == 1
                      extra_string = "<sup>st</sup>"
                    end 
                    if students['position'].to_i == 2
                      extra_string = "<sup>nd</sup>"
                    end
                    if students['position'].to_i == 3
                      extra_string = "<sup>rd</sup>"
                    end
                    
                    if students['total_number'].to_i ==0
                      position = "-"
                      extra_string = ""
                    end
                    
                  %>     
                  
                  <td class="col-2"><b><%= students['gpa'] %>[<%= students['total_number'] %>]</b></td>
                  <td class="col-2"><b><%= position %><%= extra_string %></b></td>

                </tr> 
              <% end %>  
           <% end %>     
             
      </table>
          
  </div>
<% end %>


 

