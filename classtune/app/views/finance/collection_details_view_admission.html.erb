                    <%= to_comma_seperated_precision_label @paid_amount %>
                    <% @total_fee = @total_fee + @paid_amount %>
                  <% else %>
                    <% if fees.balance == 0.0 %>
                    <%= to_comma_seperated_precision_label @paid_amount %>
                    <% @total_fee = @total_fee + @paid_amount %>
                    <% else %>
                    <%= to_comma_seperated_precision_label fees.balance %>
