<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('student_details') %> </h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('view_details') %> </div>

</div>
<div id="page-yield">
  <%  if @current_user.admin? %>
    <% form_for(@student, :url => {:action=> 'web_register'}, :html=> {:id=>'new_student'}) do |s| %>  
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <% if Batch.active.find(:all, :group => "name").length > 1  %> 
    <div class="label-field-pair">
      <label for="student_grade"><%= t('shift_label') %></label>
      <div class="text-input-bg">
        <%= select :student, :batch_name, options_for_select(Batch.active.find(:all, :group => "name").map {|b| [b.name, b.id]}, @batch_no.to_i), 
          {:prompt => "#{t('select')}"},
          {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&section_page=sections_view_applicant&section_partial=sections_view_applicant&page=course_new_applicant&partial_view=course_new_applicant'" ,:before => "$('loading_2').show();",
          :success => "$('loading_2').hide();")}"} %>
          <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %></div>
    </div>
    <% end %>

    <div class="label-field-pair">
      <label for="student_grade"><%= t('class_label') %></label>
      <div class="text-input-bg"><div id="course_new_applicant"> <%= render :partial => 'student/courses_new', :object => @courses %></div></div>
    </div>

    <div class="label-field-pair">
      <label for="student_grade"><%= t('section_label') %></label>
      <div class="text-input-bg"><div id="sections_view_applicant"> <%= render :partial => 'sections_view', :object => @classes %></div></div>
    </div>
    <% end %>
    <script type="text/javascript">
      j("#students").show();
      j("#new_student").children().last().hide();
      j.ajax({
        type: "POST",
        url: "/student/list_applicant_by_course",
        data: "batch_id=0"
      })
      .done(function( msg ) {
        j("#students").show();
        j("#new_student").children().last().hide();
      });
    </script>  
  <% elsif @current_user.employee? %>
    <script type="text/javascript">
      j("#students").show();
      j("#new_student").children().last().hide();
      j.ajax({
        type: "POST",
        url: "/student/list_applicant_by_course",
        data: "batch_id=" + <%= @batch_id  %>
      })
      .done(function( msg ) {
        j("#students").show();
        j("#new_student").children().last().hide();
      });
    </script>  
  <% end %>
  <div id="students"></div>

</div>
<%
 if @batch_id.nil?
   @batch_id = 0
 end  
%>
<script>

function approve_checked_student()
{
   var std_data = checkbox_test();
   if(std_data)
   {
     if(confirm("Are you sure you want to approve checked student and guardian?"))
     {
      j.ajax({
         type: "POST",
         url: "/student/list_applicant_by_course",
         data: "batch_id=<%= @batch_id  %>&status_change=1&student_ids="+std_data
       })
       .done(function( msg ) {
       });
      }
     
   }
   else
   {  
      alert("please check at least one student");
   }

}
function delete_checked_student()
{
   var std_data = checkbox_test();
   if(std_data)
   {
     if(confirm("Are you sure you want to parmantly remove checked student and guardian?"))
     {
        j.ajax({
           type: "POST",
           url: "/student/list_applicant_by_course",
           data: "batch_id=<%= @batch_id  %>&status_change=0&student_ids="+std_data
         })
         .done(function( msg ) {
         });
      }
     
   }
   else
   {  
      alert("please check at least one student");
   }

}
    

 function checkbox_test() {
    var counter = 0,
    i = 0,  
    url = '',    
    input_obj = document.getElementsByTagName('input');
    for (i = 0; i < input_obj.length; i++) {
        if (input_obj[i].type === 'checkbox' && input_obj[i].checked === true) {
            counter++;
            url = url +"|"+input_obj[i].value;
        }
    }
    // display url string or message if there is no checked checkboxes
    if (counter > 0) 
    {
        url = url.substr(1);
        return url;
    }
    else {
        return false;
    }
}   


</script>
