<span style="padding: 8px 15px 2px 13px; font-weight: bold; display: block; font-size: 14px; font-family: verdana; text-align: left;">Student List:</span>  
<% if @student_fee_configurations.blank? %>
  <p class="flash-msg">Single Payment Permission Enabled - No Students found</p>
<% else %>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 100%; margin-top: 10px;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('sl_no') %></th>
        <th><%= t('admission_no') %></th>
        <th><%= "Student Info" %></th>
        <th><%= "" %></th>
      </tr>
    </thead>
    <tbody>
    <% @student_fee_configurations.each_with_index do |student_fee_configuration, i| %>
        <tr class="tr-odd">
            <td style="text-align: center;"><%= i + 1 %></td>
            <td style="text-align: center;"><%= student_fee_configuration.student.admission_no %></td>
            <td style="text-align: left;">
                <a href="/student/fees/<%= student_fee_configuration.student.id %>" target="_blank" style="color: #444; line-height: 23px; font-size: 16px; text-decoration: none;">
                    <div style="width: 100px; display: inline-block; float: left;">
                      <% if student_fee_configuration.student.photo.file? %>
                      <% @profile_image = student_fee_configuration.student.photo.url %>

                      <% unless @profile_image.index("RackMultipart").nil? %>
                        <% if student_fee_configuration.student.photo.exists? %>
                           <% unless @profile_image.index("?").nil?  %>
                              <% @profile_image.gsub! '?', '.?' %>
                            <% else %>
                              <% @profile_image = @profile_image+"." %>
                            <% end %>  
                        <% else %>
                          <% @profile_image = "master_student/profile/default_student.png" %>
                        <% end %>
                      <% end %>

                    <% else %>
                      <% @profile_image = "master_student/profile/default_student.png" %>
                    <% end %>
                    <%= image_tag "#{@profile_image}", :width=>"80" %>
                  </div>
                  <div style="display: inline-block; float: left; padding-left: 10px;">
                    <%= student_fee_configuration.student.full_name unless student_fee_configuration.student.full_name.nil? %><br />
                    <small>Roll No: <%= student_fee_configuration.student.class_roll_no unless student_fee_configuration.student.class_roll_no.nil? %></small><br />
                    <small><%= student_fee_configuration.student.batch.full_name %></small><br />
                  </div>
                </a>
            </td>
            <td style="text-align: center; vertical-align: middle;">
                <i id="combined_payment_student" name="combined_payment_student" class="fa fa-square-o combined_payment_student" data-student-id="<%= student_fee_configuration.student.id %>" style="font-size: 20px; "></i>
            </td>
        </tr>
    <% end %>  
    </tbody>
  </table>
  
<% end %>
<style>
    .user_button {margin: 0;}
    img{border: 1px solid #ccc; border-radius: 5px; }
</style>
