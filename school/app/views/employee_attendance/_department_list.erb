<div class="label-field-pair"><label> <%= t('select_employee') %>: </label></div>
<div id="list_content">
  <% unless @employees.empty?%>
    <div id="list">
      <div class="sel-list">
        <%= t('select') %>: <%= link_to_function "#{t('all')}", "$$('input.batches_box').each(function(checkbox) { checkbox.checked = true; });" %>,
        <%= link_to_function "#{t('none')}", "$$('input.batches_box').each(function(checkbox) { checkbox.checked = false; });" %>
      </div>
      <% form_for :employee,:url=>{:action=>'update_department_leave_reset'} do |form| %>
        <% @employees.each do |b| %>
          <div class="name_list<%=cycle('odd', 'even')%>"><li>
              <label> <%= check_box_tag "employee_id[]", b.id,true,:class=>'batches_box' %> <div class="att_list_names"><%= b.full_name %></div></label>
            </li></div>
        <% end %>


        <div class="user_submit_button1">
          <%= form.submit  "asd", :name => "commit", :value => "► #{t('reset')}" ,:onClick => "return verify_check()", :disable_with => "► #{t('please_wait')}"%>
        </div>
      <%  end %>
    <% else %>
      <p class="flash-msg"> <%= t('no_employee_assigned') %></p>
    <% end %>
  </div>
</div>

