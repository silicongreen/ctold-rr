<% if @classes.length == 1 %>
<script type="text/javascript">
  j("#sections_div").hide();
  j.ajax({
    type: "POST",
    url: "/assignments/showsubjects/0",
    data: j('#new_student').serialize() + "&course_id=" + <%= @classes[0].id  %>
  })
  .done(function( msg ) {
    j("#sections_div").hide();
  });
</script>  
<% else %>
<script type="text/javascript">
  j("#sections_div").show();
</script>  
<% if @selected_section.to_i > 0 %>
<%= select :student, :section, options_for_select(@classes.map { |c| [c.section_name.strip.length > 0 ? c.section_name.strip : "no-section", c.id] }, @selected_section.to_i),
    {:prompt => "#{t('select')}"},
    {:onChange => "#{remote_function(:url => {:controller=>'assignments',:action => "showsubjects", :id => 0}, :with => "'course_id='+value+'&'+$('new_student').serialize()" ,:before => "$('loading_1').show();",
    :success => "$('loading_1').hide();")}"} %>  
<% else %>    
<%= select :student, :section, options_for_select(@classes.map { |c| [c.section_name.strip.length > 0 ? c.section_name.strip : "no-section", c.id] }, @selected_section.to_i),
    {:prompt => "#{t('select')}"},
    {:onChange => "#{remote_function(:url => {:controller=>'assignments',:action => "showsubjects", :id => 0}, :with => "'course_id='+value+'&'+$('new_student').serialize()" ,:before => "$('loading_1').show();",
    :success => "$('loading_1').hide();")}"} %>  
<% end %>
<%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_1", :style =>"display: none;" ) %>
<% end %>