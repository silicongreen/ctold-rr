<% if @transport_fee_collection.due_date < Date.today %>
  <% form_remote_for :fine, :url => {:action => 'update_fine_ajax' } do |form| %>
    <div class="fine_info">
      <div class="label-field-pair1">
        <label><%= t('due_date_exceeded_collect_fine') %></label>
        <div class="text-input-bg1"><%= form.text_field :fee, :value=>'', :class=>'precision_text' %></div>

        <%=   submit_tag "#{t('add_fine')}",:class=>'submit_button2' %>
      </div>
    </div>
    <div class="extender"></div>
    <%= form.hidden_field :_id, :value => @user.id %>
    <%= form.hidden_field :transport_fee_collection, :value => @transport_fee_collection.id %>


  <% end %>
<% end %>
