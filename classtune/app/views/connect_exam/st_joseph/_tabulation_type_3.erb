<div id="page-yield" class="available_sections1">
    <div class="page1"> </div>
    <div class="section1 row" >
        <center>
            <div id="pdf-header-south" class="general-header">
                <h4 align="center"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ (current_school_detail.logo.path||"public/images/application/c.png")),:width=> '4%' %></h4>
                <h2 align="center"><%=Configuration.get_config_value('InstitutionName'); %></h2>
            </div>
            <h4 align="center">Tabulation Sheet, <%= @connect_exam_obj.name %></h4>
            <table width="100%" >
                <thead>
                    <tr>
                        <td><b>Year: <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%B-%Y"):@connect_exam_obj.published_date.strftime("%B-%Y") %> </b></td>
                        <td align="right"><b>Class : 
                                <% if @batch.name == "General" %>
                                  <%= @batch.course.full_name %>
                                <% else %>
                                  <%= @batch.name %> ,<%= @batch.course.full_name %>
                                <% end %></b>
                        </td>
                    </tr>
                </thead>    
            </table>
            <% 
            @all_subject_id = []
            @has_exam_score = []
            @all_exam_groups = []
            @all_group_exams = GroupedExam.find(
              :all,
              :conditions => [
                "connect_exam_id = ?",
                @connect_exam_obj.id
              ]
              )
            unless @all_group_exams.blank?
              @all_exam_group_id = @all_group_exams.map(&:exam_group_id).uniq


              @all_exams = Exam.find(
                :all,
                :conditions => ["exam_group_id IN (?)", @all_exam_group_id]
                )
              @all_exam_groups = ExamGroup.find(
                :all,
                :conditions => ["id IN (?)", @all_exam_group_id]
                )


              unless @all_exams.blank?
                @all_subject_id = @all_exams.map(&:subject_id).uniq
                @all_exam_id = @all_exams.map(&:id).uniq
                @exam_score_all = ExamScore.find(
                  :all,
                  :conditions => ["exam_id IN (?)", @all_exam_id],
                  :include => [:exam]
                  )

                @has_exam_score = []
                unless @exam_score_all.blank?
                  @exam_score_all.each do |score|
                    if !score.marks.blank? and score.marks.to_i!=0 and !@has_exam_score.include?(score.exam_id)
                      exammain = score.exam
                      unless exammain.blank?
                        @has_exam_score << exammain.exam_group_id.to_s+"_"+exammain.subject_id.to_s
                      end
                    end
                  end
                end

              end
              end

            std_subject = StudentsSubject.find_all_by_batch_id(@batch.id)
            @std_subject_hash = []
            unless std_subject.blank?
              std_subject.each do |std_sub|
                @std_subject_hash << std_sub.student_id.to_s+"_"+std_sub.subject_id.to_s
              end
              end

            @top_exam_group = []
            unless @all_exam_groups.blank?
              @all_exam_groups.each do |exam_group|
                if !exam_group.name.downcase.index('sub').nil?
                  exam_group_name_array = exam_group.name.split(" ")
                  @top_exam_group << exam_group_name_array[0]+" "+exam_group_name_array[1]
                end
              end  
              end
            @top_exam_group_count = @top_exam_group.count

          %>
            <% unless @report_data.blank? %>
              <% c = 'even' %>
              <table id="pdf-table" width="100%" cellspacing="0">
                  <tr class="table-header">

                      <td class="col-pdf">Roll</td>
                      <td class="col-pdf">Students Name</td>
                      <% @report_data['report']['subjects'].each do |sub| %>
                        <% has_exam = false %>
                        <% if @all_subject_id.include?(sub['id'].to_i) %>
                          <% has_exam = true %>
                        <% end %>
                        <% if has_exam == true %>
                          <% has_obj = false %>
                          <% @all_exam_groups.each do |exam_group| %>
                            <% examfound = Exam.find_by_exam_group_id_and_subject_id(exam_group.id,sub['id'].to_i) %>
                            <% unless examfound.blank? %>
                              <% if !exam_group.name.downcase.index('obj').nil? %>
                                <% has_obj = true %>
                              <% end %>
                            <% end %>
                          <% end %>
                          <% if has_obj == true %>
                            <td>
                                <%=  sub['code'] %><hr/>Sub<hr/>
                                <% pass_mark = 35*@top_exam_group_count %>
                                <%= "P-"+pass_mark.to_s  %>
                            </td>
                            <td>
                                <%=  sub['code'] %><hr/>Obj<hr/>
                                <% pass_mark = 15*@top_exam_group_count %>
                                <%= "P-"+pass_mark.to_s  %>
                            </td>
                          <% else %>
                            <td>
                                <%=  sub['code'] %><hr/>Grade<hr/>
                                <% pass_mark = 50*@top_exam_group_count %>
                                <%= "P-"+pass_mark.to_s  %>

                            </td>
                          <% end %>
                        <% end %>
                      <% end %>
                      <% @report_data['report']['no_exam_subject_resutl'].each do |sub| %>
                        <td><%=  sub['code'] %></td>
                      <% end %>

                      <td>Total</td>
                      <td>Grade Count</td>
                      <td class="col-pdf">Ranking</td>

                  </tr>

                  <% extender = 0 %>
                  <% std_count = 0 %>
                  <% j = 0 %>

                  <% @report_data['report']['students'].each do |std| %>
                    <% j = j+1 %>
                    <%  std_count = std_count+1; %>
                    <% if std_count>11 && extender ==0 %>
                      <% std_count = 0 %>
                      <% extender = 1 %>
                      <tr class="page-break">
                          <td colspan="100">&nbsp;</td>
                      </tr>  
                      <tr class="table-header">

                          <td class="col-pdf">Roll</td>
                          <td class="col-pdf">Students Name</td>
                          <% @report_data['report']['subjects'].each do |sub| %>
                            <% has_exam = false %>
                            <% if @all_subject_id.include?(sub['id'].to_i) %>
                              <% has_exam = true %>
                            <% end %>
                            <% if has_exam == true %>
                              <% has_obj = false %>
                              <% @all_exam_groups.each do |exam_group| %>
                                <% examfound = Exam.find_by_exam_group_id_and_subject_id(exam_group.id,sub['id'].to_i) %>
                                <% unless examfound.blank? %>
                                  <% if !exam_group.name.downcase.index('obj').nil? %>
                                    <% has_obj = true %>
                                  <% end %>
                                <% end %>
                              <% end %>
                              <% if has_obj == true %>
                                <td>
                                    <%=  sub['code'] %><hr/>Sub<hr/>
                                    <% pass_mark = 35*@top_exam_group_count %>
                                    <%= "P-"+pass_mark.to_s  %>
                                </td>
                                <td>
                                    <%=  sub['code'] %><hr/>Obj<hr/>
                                    <% pass_mark = 15*@top_exam_group_count %>
                                    <%= "P-"+pass_mark.to_s  %>
                                </td>
                              <% else %>
                                <td>
                                    <%=  sub['code'] %><hr/>Grade<hr/>
                                    <% pass_mark = 50*@top_exam_group_count %>
                                    <%= "P-"+pass_mark.to_s  %>

                                </td>
                              <% end %>
                            <% end %>
                          <% end %>
                          <% @report_data['report']['no_exam_subject_resutl'].each do |sub| %>
                            <td><%=  sub['code'] %></td>
                          <% end %>

                          <td>Total</td>
                          <td>Grade Count</td>
                          <td class="col-pdf">Ranking</td>

                      </tr>
                    <% elsif std_count>12 && extender ==1 %>
                      <% std_count = 0 %>
                      <% extender = 1 %>
                      <tr class="page-break">
                          <td colspan="100">&nbsp;</td>
                      </tr> 
                      <tr class="table-header">

                          <td class="col-pdf">Roll</td>
                          <td class="col-pdf">Students Name</td>
                          <% @report_data['report']['subjects'].each do |sub| %>
                            <% has_exam = false %>
                            <% if @all_subject_id.include?(sub['id'].to_i) %>
                              <% has_exam = true %>
                            <% end %>
                            <% if has_exam == true %>
                              <% has_obj = false %>
                              <% @all_exam_groups.each do |exam_group| %>
                                <% examfound = Exam.find_by_exam_group_id_and_subject_id(exam_group.id,sub['id'].to_i) %>
                                <% unless examfound.blank? %>
                                  <% if !exam_group.name.downcase.index('obj').nil? %>
                                    <% has_obj = true %>
                                  <% end %>
                                <% end %>
                              <% end %>
                              <% if has_obj == true %>
                                <td>
                                    <%=  sub['code'] %><hr/>Sub<hr/>
                                    <% pass_mark = 35*@top_exam_group_count %>
                                    <%= "P-"+pass_mark.to_s  %>
                                </td>
                                <td>
                                    <%=  sub['code'] %><hr/>Obj<hr/>
                                    <% pass_mark = 15*@top_exam_group_count %>
                                    <%= "P-"+pass_mark.to_s  %>
                                </td>
                              <% else %>
                                <td>
                                    <%=  sub['code'] %><hr/>Grade<hr/>
                                    <% pass_mark = 50*@top_exam_group_count %>
                                    <%= "P-"+pass_mark.to_s  %>

                                </td>
                              <% end %>
                            <% end %>
                          <% end %>
                          <% @report_data['report']['no_exam_subject_resutl'].each do |sub| %>
                            <td><%=  sub['code'] %></td>
                          <% end %>

                          <td>Total</td>
                          <td>Grade Count</td>
                          <td class="col-pdf">Ranking</td>

                      </tr>
                    <% end %>    



                    <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">

                        <td class="name"><%= std['class_roll_no'] %></td>
                        <% if !std['first_name'].blank? and !std['last_name'].blank?  %>
                        <td class="name-std"><%= std['first_name']+" "+std['last_name'] %></td>
                        <% elsif !std['first_name'].blank? %>
                        <td class="name-std"><%= std['first_name'] %></td>
                        <% else %>
                        <td class="name-std"><%= "-" %></td>
                        <% end %>
                        <% total_mark = 0 %>
                        <% grades = [] %>
                        <% grade_count = {} %>
                        <% @report_data['report']['subjects'].each do |sub| %>
                          <% subjectdata = Subject.find(sub['id'].to_i) %>
                          <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>sub['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                          <% if @has_exam_student == false %>
                            <td>&nbsp;</td>
                          <% else %>

                            <% subject_full_mark = 0 %>
                            <% subject_obtain_mark = 0 %>
                            <% objective_full_mark = 0 %>
                            <% objective_obtain_mark = 0 %>
                            <% has_exam = false %>
                            <% if @all_subject_id.include?(sub['id'].to_i) %>
                              <% has_exam = true %>
                            <% end %>

                            <% has_obj = false %>
                            <% @all_exam_groups.each do |exam_group| %>
                              <% examfound = Exam.find_by_exam_group_id_and_subject_id(exam_group.id,sub['id'].to_i) %>
                              <% unless examfound.blank? %>
                                <% if !exam_group.name.downcase.index('obj').nil? %>
                                  <% has_obj = true %>
                                <% end %>
                              <% end %>
                            <% end %>

                            <% @report_data['report']['exams'].each do |rs| %>
                              <%= render  :partial=>"/connect_exam/has_exam_score", :locals=>{:exam_group_id=>rs['exam_id'].to_s,:subject_id=>sub['id'].to_s} %>

                              <% if !rs['result'].blank? and !rs['result'][rs['exam_id']].blank? and !rs['result'][rs['exam_id']][sub['id']].blank? and !rs['result'][rs['exam_id']][sub['id']][std['id']].blank? and @check_exam_score == true %>
                                <%
                                if !rs['exam_name'].downcase.index('obj').nil? && has_obj == true
                                  objective_full_mark = objective_full_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['full_mark'].to_i
                                  objective_obtain_mark = objective_obtain_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f
                                  else
                                  subject_full_mark = subject_full_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['full_mark'].to_i
                                  subject_obtain_mark = subject_obtain_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f
                                  end


                              %>
                              <% end %>
                            <% end %> 
                            <% if has_obj == true %>
                              <% main_mark = (subject_obtain_mark.to_f/subject_full_mark.to_f)*100 %>  
                              <% main_mark_obj = (objective_obtain_mark.to_f/objective_full_mark.to_f)*100 %> 

                              <% if has_exam == true %>
                                <td>
                                    <% total_mark = total_mark+subject_obtain_mark.to_f %>
                                    <%= sprintf( "%0.02f", subject_obtain_mark) %><hr/>
                                    <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                                    <% if !grade.blank? and !grade.name.blank? %>
                                      <%
                                      if grades.include?(grade.name.to_s)
                                        grade_count[grade.name.to_s] = grade_count[grade.name.to_s]+1
                                        else
                                        grades << grade.name.to_s
                                        grade_count[grade.name.to_s] = 1
                                        end  
                                    %>
                                      <%= grade.name %>&nbsp;
                                      <% if grade.name == "U" %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/280/delete_image.gif")) %>
                                      <% else %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/280/tick_image.gif")) %>
                                      <% end %>
                                    <% else %>
                                      -  
                                    <% end %>
                                </td>
                                <td>
                                    <% total_mark = total_mark+objective_obtain_mark.to_f %>
                                    <%= sprintf( "%0.02f", objective_obtain_mark) %><hr/>
                                    <%  grade = GradingLevel.percentage_to_grade(main_mark_obj, @batch.id) %>
                                    <% if !grade.blank? and !grade.name.blank? %>
                                      <%
                                      if grades.include?(grade.name.to_s)
                                        grade_count[grade.name.to_s] = grade_count[grade.name.to_s]+1
                                        else
                                        grades << grade.name.to_s
                                        grade_count[grade.name.to_s] = 1
                                        end  
                                    %>
                                      <%= grade.name %>&nbsp;
                                      <% if grade.name == "U" %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/280/delete_image.gif")) %>
                                      <% else %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/280/tick_image.gif")) %>
                                      <% end %>
                                    <% else %>
                                      -  
                                    <% end %>
                                </td>
                              <% end %>
                            <% else %>
                              <% main_mark = (subject_obtain_mark.to_f/subject_full_mark.to_f)*100 %>  

                              <% if has_exam == true %>
                                <td>
                                    <% total_mark = total_mark+subject_obtain_mark.to_f %>
                                    <%= sprintf( "%0.02f", subject_obtain_mark) %><hr/>
                                    <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                                    <% if !grade.blank? and !grade.name.blank? %>
                                      <%
                                      if grades.include?(grade.name.to_s)
                                        grade_count[grade.name.to_s] = grade_count[grade.name.to_s]+1
                                        else
                                        grades << grade.name.to_s
                                        grade_count[grade.name.to_s] = 1
                                        end  
                                    %>
                                      <%= grade.name %>&nbsp;
                                      <% if grade.name == "U" %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/280/delete_image.gif")) %>
                                      <% else %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/280/tick_image.gif")) %>
                                      <% end %>
                                    <% else %>
                                      -  
                                    <% end %>
                                </td> 
                              <% end %>
                            <% end %>  
                          <% end %>   
                        <% end %> 
                        <% @report_data['report']['no_exam_subject_resutl'].each do |sub| %>
                          <td>
                              <% if !sub['subject_comment'][std['id']].nil? && !sub['subject_comment'][std['id']].blank? %>
                                <%
                                if !sub['subject_comment'][std['id']].blank?
                                  if grades.include?(sub['subject_comment'][std['id']].to_s)
                                    grade_count[sub['subject_comment'][std['id']]] = grade_count[sub['subject_comment'][std['id']]]+1
                                    else
                                    grades << sub['subject_comment'][std['id']].to_s
                                    grade_count[sub['subject_comment'][std['id']].to_s] = 1
                                  end 
                                  end 
                              %>
                                <%=  sub['subject_comment'][std['id']] %>
                              <% else %>
                                &nbsp;
                              <% end %> 
                          </td>     

                        <% end %>       

                        <td>
                            <%= sprintf( "%0.02f", total_mark) %>    
                        </td>
                        <td>
                            <% i = 1 %>
                            <% total_grade_std = grades.count  %>
                            <% grades.each do |grade| %>
                              <%= grade.to_s+"-"+grade_count[grade].to_s %>
                              <% if i!=total_grade_std %>
                                ,
                              <% end %>
                              <% i = i+1 %>
                            <% end %>
                        </td> 
                        <td class="col-pdf"><%= j %></td>


                    </tr>
                  <% end %>
              </table>
            <% end %>
        </center>
    </div>


</div>

<style>
.even td{

    padding: 3px 2px 3px 2px;
    border: 1px solid #000000;
    border-top: 0px solid #fff;
    text-align: center;
    font-size:13px;

}

.odd td{
    padding: 3px 2px 3px 2px;
    border: 1px solid #000000;
    border-top: 0px solid #fff;
    text-align: center;
    font-size:13px;

}
.table-header td{
    padding: 3px 2px 3px 2px;
    font-size:13px;

}
</style>
