<div id="content-header">
<%= show_header_icon %>
  <h1><a href="/library" style="color:#666666; text-decoration: none;" ><%= "#{t('library_text')}"%></a></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "#{t('upload_csv')}"%></div>


</div>
<div id="page-yield" class="ch_book_wrapper">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="search_form">

    <%= error_messages_for :book_call_number %>

    <% form_for :book_call_number, :url=>{:action=>'upload_call_numbers'},:html => { :multipart => true } do |f| %>
      <div class="label-field-pair">
        <label for="book_number"><%= "#{t('csv_file')}"%><span class="necessary-field">*</span></label>
        <div class="text-input-bg">
          <%= file_field_tag :file %>
        </div>
      </div>
      
      
      <%= submit_tag( "Import" ) %>
    <% end %>
  </div>
</div>
