<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('all_students_import') %></h1>
<div class='sub-header'></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <% form_for :import_batches,:url=>{:action=>"all_students_import"},:html => {:class => 'form', :multipart=>true} do |f| %>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('import_all_students_file')}" %></div>
        <div class="input-container"><%= f.file_field :"class_file", :size=>12  %></div>
      </div>
      <%= submit_tag "", :value => "► #{t('save')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>

    <% end %>

    <div class="extender"></div>
  </div>
  <% if @hasfile == 1 %>  
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <% unless @success_data.empty? %>
      <tr class="tr-head">
        <td>
          <%= "#{t('sl_no')}."%>
        </td>
        <td>
          <%= "Addmission No."%>
        </td>
        <td>
         <%= "Student"%>
        </td>
        <td>
          <%= "Parent"%>
        </td>
      </tr>
      <tr class="tr-blank"></tr>
        <% @success_data.each_with_index do |dd,i| %>
          <% unless dd[:sdata].empty? %>
            <% unless dd[:pdata].empty? %>
              <tr class="tr-<%= cycle('odd', 'even') %>">            
                <td class="col-1">
                  <%= i+1 %>
                </td>
                <td class="col-1">
                  <%= dd[:sdata][0].admission_no %>              
                </td>
                <td class="col-2">
                   <%#= dd[:sdata][0].first_name+" "+dd[:sdata][0].last_name%>
                  <%= link_to dd[:sdata][0].first_name+" "+dd[:sdata][0].last_name,:controller => "student", :action => "profile", :id => dd[:sdata][0].id %>
                </td>
                <td class="col-4">
                  <%= dd[:pdata][0].first_name+" "+dd[:pdata][0].last_name%>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr class="tr-odd">
              <td colspan="4" class="col-4"><%= "#{t('no_assignments_for_this_subject_have_been_created')}"%></td>
            </tr>
          <% end %>
        <% end %>
      <% else %>
        <tr class="tr-odd">
          <td colspan="4" class="col-4"><%= "#{t('no_assignments_for_this_subject_have_been_created')}"%></td>
        </tr>
      <% end %>
    </table>
    <% end %>
</div>