  <div id="content-header">
<%= show_header_icon %>
  <h1><%= t('employee_admission') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('step_3') %></div>

</div>
  <div id="page-yield">
  <% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <% form_for :employee_bank_details do |a| %>
  <%= error_messages_for 'employee_bank_details' %>

  <div id="form-contents">
    <span class="span-sub-heading"><%= t('add_bank_detail') %></span>
    <hr class="sub-heading"></hr>

    <% @bank_fields.each do |bd| %>
      <div class="label-field-pair">
        <label><%= bd.name %></label>
        <div class="text-input-bg"><%= a.text_field :bank_info,:index => bd.id %></div>
        <div class="extender"></div>
      </div>
    <hr class="label-underline"></hr>
    <% end %>
  </div>

  <div class="save-proceed-button">
    <%= submit_tag "► #{t('save_and_proceed')}", :disable_with => "► #{t('please_wait')}" %>
  </div>
  <% end %>
  </div>
