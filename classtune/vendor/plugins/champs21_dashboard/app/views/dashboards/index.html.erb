            }
          })
        });
        q( ".datepicker" ).datepicker({
          showOn: "button",
          buttonImage: "images/transparent.png",
          buttonImageOnly: true,
          changeMonth: true,
          changeYear: true,
          showOtherMonths: true,
          selectOtherMonths: true,
