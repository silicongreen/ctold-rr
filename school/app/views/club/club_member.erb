<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('club_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('club_member') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('clubs')}", :controller => "club", :action => "index" %> </li>
  </ul>
</div>

</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>



    <table id="listing" width="100%">
      <tr class="tr-head">
        <td><%= t('club_member_name') %></td>
        <td><%= t('club_member_batch') %></td>
       
      </tr>
      
      <% @all_member.each do |club_student| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-2">
            <%=  club_student.first_name %> <%=  club_student.middle_name %> <%=  club_student.last_name %>
          </td>
          <td class="col-2">
            <%=  club_student.batch.course.course_name %> <%=  club_student.batch.course.section_name %> <%=  club_student.batch.name %>
          </td>
          
        </tr>
      <% end %>
      
    </table>
    
    <%= will_paginate @all_member %>
 
</div>
