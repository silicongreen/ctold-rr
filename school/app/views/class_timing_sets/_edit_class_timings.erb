<label class="head_label"><%= t('add_new_class_timing_for') %>
  <span>
    <%= @class_timing_set.name %>
  </span></label>
<div id="ajax-create">
  <% form_remote_for :class_timing,
    :url => { :action => 'update_class_timings'}, :before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>


    <%= f.hidden_field :class_timing_set_id, :value => @class_timing_set.id %>
    <div id="form-errors"></div>

    <div class="label-field-pair">
      <label for="name"><%= t('name') %></label>
      <div class="input-field"><%= f.text_field :name %></div>
    </div>


    <div class="label-field-pair">
      <label for="name"> <%= t('start_time') %> </label>
      <div class="time-select-field"><%= time_select :class_timing, :start_time, {:minute_step => 5} %></div>
    </div>

    <div class="label-field-pair">
      <label for="name"><%= t('end_time') %>  </label>
      <div class="time-select-field"><%= time_select :class_timing, :end_time, {:minute_step => 5} %></div>
    </div>

    <div class="label-checkbox-pair">
      <label><%= f.check_box :is_break, :checked => @class_timing.is_break %> <%= t('is_a_break') %></label>
    </div>

    <%= f.submit "â–º #{t('save')}", :class => 'submit-button', :id => 'submit_button' %>

  <% end %>
</div>
