<div id="page-yield" class="available_sections1">
  <div class="page1"> </div>
  <div class="section1 row" >
    <center>
      <table id="pdf-table"  width="100%" class="no-border left-clear-both margin-bottom-20"  cellspacing="0" >
          <tr>
              <td class="align-left" width="28%">&nbsp;</td>

              <td class="align-left" width="6%">  
                  <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/logo.jpg")),:width=> '90%' %>  
              </td>
              <% month_number = @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%-m"):@connect_exam_obj.published_date.strftime("%-m") %>
              <td width="28%">
                  <h4 align="center"><font size="5">EUROPEAN STANDARD SCHOOL(ESS)</font></h4>
                  <h4 align="center" style="margin-top:-5px;"><font size="5"><%= @batch.name %> Campus</font></h4>
                  <h4 align="center" style="margin-top:-5px;"><font size="4" color="#000">Subject Wise Mark Sheet</font></h4>
                  <h4 align="center" style="margin-top:-5px;"><font size="4" color="#000"><%= @connect_exam_obj.name %>, 
                      <% if month_number.to_i>6 %>
                        Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i+1:@connect_exam_obj.published_date.strftime("%Y").to_i+1 %>
                      <% else %>
                        Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i-1:@connect_exam_obj.published_date.strftime("%Y").to_i-1 %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>
                      <% end %></font></h4>
                  
                  <h4 align="center" style="margin-top:-5px;">
                    <font size="4" color="#000">
                      Class <%= @batch.course.course_name %>, Section <%= @batch.course.section_name %>
                    </font>
                  </h4>  
              </td>
              <td class="align-left" width="28%">&nbsp;</td>

         </tr>
         <tr><td colspan="3">&nbsp;</td></tr>
      </table>
      
      <div id ="main_info">
          <table>
              <tr>
                 <% if !@employee.nil? %> 
                  <td align='left'><h4>Teacher's Name : <%=  @employee.full_name %></h4></td>
                  <td align='right'><h4>Subject : <%= @subject.name %></h4></td>
                 <% else %>
                  <td align='left'><h4>Subject : <%= @subject.name %></h4></td>
                 <% end %> 
              </tr>    
          </table>    
       
      </div>
      <% unless @report_data.blank?  or  @report_data['result'].blank? %>
      <% c = 'even' %>
      <% full_mark = 0 %>
      <% colspan = 0 %>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td rowspan="2">A/C Code</td>  
          <td class="name" rowspan="2">Roll NO.</td>
          <td class="name" rowspan="2">Name</td>
          <td class="name"></td>
          <% @report_data['result']['ALL'].each do |rs| %>
            <td><%=  rs['name'] %></td>
          <% end %>  
          
          <td>Total</td>
          <td rowspan="2">Grade</td>
        
        </tr>
        <tr class="table-header">
          <td class="name">Marks</td>
          <% @report_data['result']['ALL'].each do |rs| %>
            <td><%= rs['maximum_marks'] %></td>
          <% end %> 
          <td class="name">100</td>
        </tr>
        
        <% extender = 0 %>
        <% std_count = 0 %>
        <% unless @report_data['result']['al_students'].blank? %>
        <% @report_data['result']['al_students'].each do |std| %>
          <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>@subject.id.to_s,:elective_group_id=>@subject.elective_group_id.to_i} %>
          <% if @has_exam_student == false %>
            <% next %>
          <% end %>          
                

          <%  std_count = std_count+1; %>
          <% colspan = colspan+4 %>
          <% if std_count>14 && extender ==0 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr>    
          <% elsif std_count>18 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr> 
          <% end %>    
        
        
          <% total_mark = 0 %>
          <% full_mark = 0 %>
              
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="name"><%= std['class_roll_no'] %></td>
            <td class="name-std"><%= std['name'] %></td>
            <% @report_data['result']['ALL'].each do |rs| %>
              <td>
              <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                  <%= rs['students'][std['id']]['score'] %>
                  <% total_mark = total_mark.to_f+rs['students'][std['id']]['score'].to_f %>
                  
                 
              <% else %>
                  -
              <% end %>
              <% if !rs['maximum_marks'].blank? %>    
                <% full_mark = full_mark+rs['maximum_marks'].to_i %> 
              <% end %>    
              </td>
              
            <% end %> 
             
           <% main_mark = 0 %>
           <% if total_mark.to_i > 0 %>   
            <% main_mark = (total_mark.to_f/full_mark.to_f)*100 %>
           <% end %>    

           <td class="name"><%= sprintf( "%0.02f", main_mark) %> %</td>

           <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
           <% if !grade.blank? and !grade.name.blank? %>
            <td class="col-2"><b><%= grade.name %></b></td>
          <% else %>
            <td class="col-2"><b>-</b></td>
          <% end %>
        </tr>
        <% end %>
        <% end %>
      </table>
      <% end %>
    </center>
  </div>
  
  
</div>
