<div id="content-header">
<%= show_header_icon %>
  <h1><%= "#{t('hostel_text')}"%></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "#{t('create_hostel_fee_collection_date')}"%></div>

<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('fee_collection_text')}",:action => "hostel_fee_collection_view" %></li>
  </ul>
</div>

</div>
<div id="page-yield">
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% form_for @hostel_fee_collection,
    :url => {:action => 'hostel_fee_collection_create'} do |form| %>

    <div id="form-errors"><%= error_messages_for 'hostel_fee_collection' %></div>
    <div id="left-side-inputs">
      <div class="label-field-pair">
        <label><%= "#{t('name')}"%><span class="necessary-field">*</span> :</label>
        <div class="text-input-bg"><%= form.text_field :name %></div>
      </div>
      <div class="label-field-pair">
        <label><%= "#{t('start_date')}"%><span class="necessary-field">*</span>:</label>
        <div class="text-input-bg"><%= calendar_date_select_tag 'hostel_fee_collection[start_date]', I18n.l(@hostel_fee_collection.end_date || Date.today,:format=>:default),:readonly=>true,:popup=>"force" %></div>
      </div>
      <div class="label-field-pair">
        <label for="reason">  <%= t('end_date') %>:</label>
        <div class="text-input-bg"><%= calendar_date_select_tag 'hostel_fee_collection[end_date]',I18n.l(@hostel_fee_collection.end_date || Date.today,:format=>:default),:readonly=>true, :popup=>"force" %></div>
      </div>
      <div class="label-field-pair">
        <label for="reason">  <%= t('due_date') %>:</label>
        <div class="text-input-bg"><%= calendar_date_select_tag 'hostel_fee_collection[due_date]', I18n.l(@hostel_fee_collection.due_date || Date.today,:format=>:default),:readonly=>true, :popup=>"force"%></div>
      </div>
    </div>


    <div id ="batchs">
      <div class="batch_select_box">
        <div class="label-field-pair">
          <label> <%= t('select_batch') %>:
            <b class="sel-list">
              <%= link_to_function t('all'), "$$('input.batches_box').each(function(checkbox) { checkbox.checked = true; });" %>,
              <%= link_to_function t('none'), "$$('input.batches_box').each(function(checkbox) { checkbox.checked = false; });" %>
            </b>
          </label>
        </div>
        <div class="fee_category_scroll">
          <% @batches.each_with_index do |f,i| %>
            <div class="each_batch">
              <% unless @batch.blank? %>
                <%= check_box_tag "hostel_fee_collection[batch_id][]", f.id,@batch.include?(f.id.to_s),:class=>'batches_box' %> <%= f.full_name %>
              <% else %>
                <%= check_box_tag "hostel_fee_collection[batch_id][]", f.id,false,:class=>'batches_box' %> <%= f.full_name %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

  <%# unless params[:fee_collection].nil? %>
  <%#= render :partial=>'fee_collection_batchs' if params[:fee_collection][:category_ids].present? %>
  <%# end %>
    </div>

    <div class="extender"></div>
    <div id="submit-button">
      <%=  submit_tag "► #{t('create_text')}",:class=>'submit_button', :disable_with => "► #{t('please_wait')}" %>
    </div>
  <% end %>
</div>
