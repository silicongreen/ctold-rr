<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('rejected_payslip') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('department_wise_payslip') %></div>


</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('hr'), :controller => "employee", :action=>"hr" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to t('create_payslip'), :controller => "employee", :action=>"payslip" %> <div class = "bread-crumb-separator"> > </div>
    <%= t('rejected_payslip') %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="drop-down-box">
    <label for="category_prefix"><%= t('select_a_department') %></label>
    <div class="text-input-bg"> <%= select :individual_payslip, :department_id, @departments.map { |s| [s.name, s.id] },
        {:prompt => "#{ t('select_a_department')}"},
        {:onChange => "#{remote_function(:url => {:action => "update_rejected_employee_list"},
        :with => "'department_id='+value",:before=>"$('loader').show();",:success=>"$('loader').hide();")}"} %>
      <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
    </div>
  </div>
  <div class="extender"></div>
  <div id="employees_select_list"></div>
</div>
