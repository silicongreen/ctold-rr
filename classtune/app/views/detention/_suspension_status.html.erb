<% if @current_user.admin %>
  <% if @suspension.ackhnowledged==1 %>
    <font color="green">Acknowledged</font></br>
  <% else %>
    <%= link_to_remote "delete" , :url => {:controller => 'detention', :action => "show_suspension", :id =>@suspension.id},:confirm => "Are you sure?",:with => "'achnowladge_id='+$('Warning_ackhnowledged').value+'&batch_id='+$('Warning_batch_id').value+'&student_id='+$('Warning_student_id').value",:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> "data-div" %>
  <% end %>


<% elsif @current_user.employee %>
  <% if @employee.is_pod.to_i == 1 %>
    <% if @suspension.ackhnowledged==1 %>
      <font color="green">Acknowledged</font></br>
    <% else %>
      <%= link_to_remote "delete" , :url => {:controller => 'detention', :action => "show_suspension", :id =>@suspension.id},:confirm => "Are you sure?",:with => "'achnowladge_id='+$('Warning_ackhnowledged').value+'&batch_id='+$('Warning_batch_id').value+'&student_id='+$('Warning_student_id').value",:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> "data-div" %>
    <% end %>       
  <% end %>

<% elsif @current_user.parent? and @suspension.ackhnowledged==0  %>
  <%= link_to_remote "acknowledge" , :url => {:controller => 'detention', :action => "ackhnowledged_suspension", :id =>@suspension.id },:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> 'status_'+@suspension.id.to_s %>
<% else %>
  <b>
      <% if @suspension.ackhnowledged==1 %>
        <font color="green">Acknowledged</font></br>
      <% end %>
  </b>

<% end %>