<div id="page-yield" class="available_sections1">
  <div class="page1"> </div>
  <div class="section1 row" >
    <center>
      <h3 align="center">Mark Sheet</h3>
      <div class="hor_line"></div>
      <h4 align="center">For Subject Teacher</h4>
      
      <div id ="main_info">
          <table>
              <tr>
                 <% if !@employee.nil? %> 
                  <td align='left'><h4>Teacher's Name : <%=  @employee.full_name %></h4></td>
                  <td align='center'><h4>Subject : <%= @subject.name %></h4></td>
                 <% else %>
                  <td align='left'><h4>Subject : <%= @subject.name %></h4></td>
                 <% end %> 
                  
                  <td align='center'><h4>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %></h4></td>
                  <td align='right'><h4>Section : <%= @batch.course.section_name %></h4></td>
              </tr>    
          </table>    
       
      </div>
      <% unless @report_data.blank?  or  @report_data['result'].blank? %>
      <% c = 'even' %>
      <% full_mark = 0 %>
      <% colspan = 0 %>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td>Roll</td>
          <td>Name</td>
          <% iloop = 1 %>
          <% @report_data['result']['ALL'].each do |rs| %>
            <% if rs['exam_category'] == "6" %>
              <td class="center-text">CT<%= iloop %><br/>(10)</td>
              <% iloop = iloop+1 %>
            <% end %>
            <% colspan = colspan+1 %>
          <% end %> 
          <td class="center-text">Best 3 CT<br/>(50)</td>
          <% @report_data['result']['ALL'].each do |rs| %>
              <% if rs['exam_category'] != "6" %>
                <td class="center-text"><%=  rs['name'] %><br/>(<%=  rs['maximum_marks'] %>)</td>
                <% colspan = colspan+1 %>
              <% end %>
          <% end %> 
          <td class="center-text">Total<br/>80</td>
        </tr>
        
        <% extender = 0 %>
        <% std_count = 0 %>
        <% unless @report_data['result']['al_students'].blank? %>
        <% @report_data['result']['al_students'].each do |std| %>
          <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>@subject.id.to_s,:elective_group_id=>@subject.elective_group_id.to_i} %>
          <% if @has_exam_student == false %>
            <% next %>
          <% end %>          
                

          <%  std_count = std_count+1; %>
          <% colspan = colspan+4 %>
          <% if std_count>39 && extender ==0 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr>    
          <% elsif std_count>40 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr> 
          <% end %>    
        
        
          <% total_mark = 0 %>
          <% full_mark = 0 %>
              
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td><%= std['class_roll_no'] %></td>
            <td class="name-std"><%= std['name'] %></td>
            <% class_test = [] %>
            <% @report_data['result']['ALL'].each do |rs| %>
              <% if rs['exam_category'] == "6" %>
                <td class="center-text">
                  <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                    <% obt_mark = rs['students'][std['id']]['score'].to_f %>
                    <%= sprintf( "%0.02f", obt_mark)%>
                    <% class_test << obt_mark.round(2) %>
                  <% else %>
                    -
                    <% class_test << 0 %>
                  <% end %>
                </td>   
              <% end %>
            <% end %>
            <% class_test.sort! {|x,y| y <=> x } %> 
            <% total_mark = ((class_test[0].to_f+class_test[1].to_f+class_test[2].to_f)/30.00)*50.00 %>
            <td class="center-text"><%= sprintf( "%0.02f", total_mark)%></td>
            <% @report_data['result']['ALL'].each do |rs| %>
              <% if rs['exam_category'] != "6"  %>
                  <td class="center-text">
                    <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                        <%= rs['students'][std['id']]['score'] %>
                        <% total_mark = total_mark.to_f+rs['students'][std['id']]['score'].to_f %>


                    <% else %>
                        -
                    <% end %>
                    <% if !rs['maximum_marks'].blank? %>    
                      <% full_mark = full_mark+rs['maximum_marks'].to_i %> 
                    <% end %>    
                  </td>
              <% end %>
              
            <% end %> 
              

           <td class="center-text"><%= total_mark.round() %></td>

        </tr>
        <% end %>
        <% end %>
      </table>
      <% end %>
    </center>
  </div>
  
  
</div>

<style>
    #page-yield *
    {
        font-size: 21px !important;
    }
    .even td{
      padding: 4px 4px;
    }

    .odd td{
        padding: 4px 4px;
    }
    #pdf-table tr.table-header td
    {
      padding: 4px 4px;
    }
    #pdf-table tr td.center-text
    {
      text-align: center;
    }
</style>    
