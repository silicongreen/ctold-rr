<%
    @students.each do |std|
        unless @all_financefee[std.id].blank?
        @student = std
        @financefee = @all_financefee[std.id]
        @discounts = @all_discounts[std.id]
        @paid_fees = @all_paid_fees[std.id]
        @fee_particulars = @all_fee_particulars[std.id]
        @total_discount = @all_total_discount[std.id]
        @total_payable = @all_total_payable[std.id]
        @fine_rule = @all_fine_rule[std.id]
        @fine_amount = @all_fine_amount[std.id]
        @has_fine_discount = @all_has_fine_discount[std.id]
        @onetime_discounts = @all_onetime_discounts[std.id]
        @discounts_amount = @all_discounts_amount[std.id]
        @onetime_discounts_amount = @all_onetime_discounts_amount[std.id]
        @new_fine_amount = @all_new_fine_amount[std.id]
        @discounts_on_lates = @all_discounts_on_lates[std.id]
        @discounts_late_amount = @all_discounts_late_amount[std.id]
        %> 
        <% unless params[:front_page].blank? %>
        <%=  render  :partial=>"finance/fee_receipt/south/front_page_pdf" %>
