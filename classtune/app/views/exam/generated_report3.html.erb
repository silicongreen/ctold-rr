                <%= @batch.name %></span></th>
               </tr>
              </thead>
          </table>    
     
      <div>
    
   <div class="CSSTableGenerator" style="margin-top:10px;" >
    <table id="listing" class="f5 summary" align="center" width="100%" cellpadding="1" cellspacing="1">
      <thead>
        <tr class="tr-head">
          <th class="f5"><%= t('exam_text') %></th>
          <th class="f5"><%= t('marks') %></th>
          <th class="f5"><%= 'Heighest Marks' %></th>
          <th class="f5"><%= 'Average Marks' %></th>
          <th class="f5"><%= t('max') %></th>
          <th class="f5"><%= t('grade') %></th>
          <th class="f5"><%= "Rank" %></th>
      
        </tr>
      </thead>
      <% ranks = [] %>
      <% @exam_groups.each do |exam_group| %>
        <% rank_exam = Exam.find_by_subject_id(@subject.id,:conditions=>{:exam_group_id=>exam_group.id}) %>
        <% unless rank_exam.nil? %>
          <% exam_scores = ExamScore.find_all_by_exam_id(rank_exam.id) %>
          <% ordered_marks = exam_scores.map{|m| m.marks}.compact.uniq.sort.reverse %>
          <% ranks << [exam_group.id,ordered_marks] %>
        <% end %>
        <% mark_list = [] %>
        <% ranks.each do|rank| %>
          <% if rank[0]==exam_group.id %>
            <% mark_list = rank[1] %>
          <% end %>
        <% end %>
        <% exam = Exam.find_by_subject_id(@subject.id,:conditions=>{:exam_group_id=>exam_group.id}) %>
        <% exam_score = ExamScore.find_by_student_id(@student.id,:conditions=>{:exam_id=>exam.id}) unless exam.nil? %>
        <% exam_score_high = ExamScore.find_by_exam_id(exam.id,:limit=>1, :order => 'marks desc') unless exam.nil? %>

        <% exam_avg_high = ExamScore.find_by_exam_id(exam.id,:limit=>1,:select=>'AVG(marks) as marks') %>
        <% unless exam_score.nil? %>
          <tr class="tr-<%= cycle('odd','even') %>">
            <td class="col-3 f5">
              <%= exam_group.name %><%#= exam_group.id %>
            </td>


            <% if exam_group.exam_type == 'Marks' %>
              <td class="col-2 f5"><%= exam_score.nil? ? '-' : exam_score.marks || "-" %></td>
              <td class="col-2 f5"><span style="color:#DB3535;"><%= exam_score_high.nil? ? '-' : exam_score_high.marks %></span></td>

              <td class="col-2 f5"><span style="color:#DB3535;"><%= exam_score.nil? ? '-' : exam.maximum_marks %></span></td>
              <td class="col-2 f5">-</td>
            <% elsif exam_group.exam_type == 'Grades'%>
              <td class="col-2 f5">-</td><td>-</td><td>-</td>
              <td class="col-2 f5"><span style="color:#DB3535;"><%= exam_score.nil? ? '-' : exam_score.grading_level || "-" %></span></td>
            <% else %>
              <td class="col-2 f5"><%= exam_score.nil? ? '-' : exam_score.marks || "-" %></td>
              <td class="col-2 f5"><span style="color:#DB3535;"><%= exam_score_high.nil? ? '-' : exam_score_high.marks %></span></td>
              <td class="col-2 f5"><span style="color:#DB3535;"><%= exam_avg_high.nil? ? '-' : exam_avg_high.marks.to_f %></span></td>
              <td class="col-2 f5"><span style="color:#DB3535;"><%= exam_score.nil? ? '-' : exam.maximum_marks %></span></td>
              <td class="col-2 f5"><span style="color:#DB3535;"><%= exam_score.nil? ? '-' : exam_score.grading_level || "-" %></span></td>
            <% end %>
            <td class="col-2 f5">
              <% unless exam.nil? %>
                <%= exam_score.nil? ? '-' : (exam_score.marks.nil? ? '-' : (mark_list.index(exam_score.marks) + 1)) %>
              <% else %>
                <%= "#{t('n_a')}" %>
              <% end %>
            </td>
            
          </tr>
         <% end %> 
        <% end %>
      </table>
    </div> 
