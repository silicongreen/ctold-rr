<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('batch') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('assign_tutor') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%#= link_to t('configuration_text'), :controller => "configuration", :action=>"index"  <div class = "bread-crumb-separator"> > </div> %>
    <%= link_to t('manage_batch'), :controller => "courses", :action => "manage_batches" %>  <div class = "bread-crumb-separator"> > </div> 
    <%= t('assign_tutor') %>
  </div>  
  <ul id="tutor-list">
    <%= render :partial=>'assigned_tutor_list' %>
  </ul>

  <div class="label-field-pair">
    <label for="department_name"><%= t('department') %></label>
    <div class="text-input-bg"><%= select :subject_assignment, :department_id, @departments.map { |s| [s.name, s.id] },
        {:prompt => "#{t('select_a_department')}"},
        {:onChange => "#{remote_function(:url => {:action => "update_employees"},
        :with => "'department_id='+value+'&batch_id=#{@batch.id}&'+",:before=>"$('loader').show();",:success=>"$('loader').hide();")}"} %>
      <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %> 
    </div>
  </div>
  <div id="employee-list" style="margin-top: 30px;"></div>
  <div class="extender"></div>

</div>
