<div id="content-header">
  <%= show_header_icon %>
  <h1><a href="/library" style="color:#666666; text-decoration: none;" ><%= "#{t('library_text')}"%></a></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= "#{t('manage_book_call')}"%></div>
  <div id="inner-tab-menu">
    <ul>
      <% if permitted_to? :add_call_numbers, :books %>
        <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('add_call_numbers')}", {:action => "add_call_numbers"} %></li>
      <% end %>
    </ul>
  </div>
</div>
<div id="page-yield">
  <% unless @book_call_numbers.count == 0 %>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <% unless flash[:warn_notice].nil? %>
      <div id="errorExplanation" class="errorExplanation">
        <ul>
          <li>
            <%= flash[:warn_notice] %>
          </li>
        </ul>
      </div>
    <% end %>
    <div id="sort_by">
      <% remote_form_for :filter, :url=>{:action=>"filter_by"} ,:loading => "$('loader').show();", :loaded => "$('loader').hide();" do |f| %>
        <div class="label-field-pair" style="width: 100%;">
          
          <div class="text-input-bg" style="width: 100%;">
            <%= f.select :on, [["#{t('all')}",""],["#{t('call_number')}","call_number"],["#{t('title')}", "title"],["#{t('subject')}","subject"],["#{t('book_author')}", "author"],["#{t('version')}", "version"],["#{t('language')}","language"],["#{t('publish_year')}","publish_year"],["#{t('publish_by')}","published_by"]] %>
            <%= f.text_field :search %>
            <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
          </div>
        </div>
        <div style="width: 100%; float:left; clear:both; margin:10px;">
            <%= f.submit "#{t('filter')}", :class=>"sort_button" %>
        </div>    
      <% end %>
    </div>
    <div id="books">
      <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
        <tr class="tr-head">

          <td>
            <%= "#{t('call_number')}"%>
          </td>
          <td>
            <%= "#{t('title')}"%>
          </td>
          <td>
            <%= "#{t('book_author')}"%>
          </td>
          <td>
            <%= "#{t('subject')}"%>
          </td>
          <td>
            <%= "#{t('version')}"%>
          </td>
          <td>
            <%= "#{t('publish_year')}"%>
          </td>
          <td>

          </td>
        </tr>
        <tr class="tr-blank"></tr>
        <%can_edit=permitted_to? :edit_call_number, :books%>
        <% can_delete=permitted_to? :destroy_call_number, :books %>
        <% can_view=permitted_to? :index, :books %>
        <% @book_call_numbers.each do |book| %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-3"><%= book.call_number %></td>
            <td class="col-7"><%= book.title %></td>
            <td class="col-7"><%= book.author %></td>
            <td class="col-7"><%= book.subject %></td>
            <td class="col-7"><%= book.version %></td>
            <td class="col-7"><%= book.publish_year %></td>
            <td class="col-7" style="white-space:nowrap;">
              <small>
                <% if can_edit %>
                  | <%= link_to "#{t('edit_text')}", {:action => "edit_call_number", :id=>book.id,:page => params[:page]} %>
                <% end %>
                <% if can_edit %>
                  | <%= link_to "#{t('view')} Books", {:action => "index", :book_call_number=>book.id},:target=>"_blank" %>
                <% end %>
                <% if can_delete %>
                  | <%= link_to "#{t('delete_text')}", {:action => "destroy_call_number", :id=>book.id, :page => params[:page]}, :confirm => "#{t('delete_confirm_msg')}" %>
                <% end %>
              </small>
            </td>
          </tr>
        <% end %>
      </table>
      <%= will_paginate @book_call_numbers %>

    </div>
  <% else %>
    <p class="flash-msg"> <%= t('no_books') %></p>
  <% end %>


</div>
