<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/academic.png', :html => {:alt => 'Calendar'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
      <% if @current_user.parent?
          student_id = @current_user.guardian_entry.current_ward_id  
        elsif @current_user.student?
          student_id = @current_user.student_record.id  
        end
      %>
       <%= link_to "Class Routine", :controller => "timetable", :action => "student_view",  :id => student_id %>       
       <span style="float: left;clear:both;font-size: 15px;"><%= Time.now.strftime("%Y-%m-%d") %></span>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
  </div>    
  <% unless @timetables.blank? %>
  <div class="header-form-wrapper" style="margin-top:22px;">    
      <% form_for :timetable_entry do |s| %>
        <div style="float: left;">
          <label for="timetable_entry_course_id" style="float: left;font-size: 12px;margin-top: 10px;">
            <%= t('select_a_tte') %>
          </label>
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none;" ) %>
          <div class="text-input-bg" style="width: 200px;">
            <%= select :timetable_entry, :timetable_id, @timetables.map {|c| ["#{c.start_date.strftime("%d %b %Y")} - #{c.end_date.strftime("%d %b %Y")}", c.id]},
              {:selected => @current.present? ? @current.id : nil, :prompt => t('select_a_tte')},
              {:onChange => "#{remote_function(:url => {:action => "update_student_tt"}, :with => "'timetable_id='+value+'&id='+#{@student.id}",       :before => "Element.show('loader')",
              :success => "Element.hide('loader')")}"} %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="clearfix"></div>
  
  <% if @current.present? %>
    <div class="tabbed-header-wrapper">        
      <ul class="header-tabs">
        <li class="active">
          <%= link_to "Class Routine", {:controller => "timetable", :action => "student_view",  :id => student_id}, :class => "f2" %>    
        </li>
        <% unless  @all_timetable_entries.empty? %>
        <li>
          <%= link_to "#{t('timetable_pdf_text')}", {:controller => "timetable", :action => "student_timetable_pdf", :course_id => @batch.id, :timetable_id=>@timetables[0].id},:target => '_blank', :class => "f2" %>
        </li>
        <% end %>
        <li>
          <%= link_to "#{t('exam_schedule')}", {:controller => "exam", :action => "student_exam_schedule"}, :class => "f2" %>
        </li>
      </ul>

    </div>
  <% end %>
</div>



<div id="page-yield" style="margin-top: 0px;">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% unless @timetables.blank? %>
    <div id="box">
      <% if @current.present? %>
        <%= render :partial=>'student_timetable' %>
      <% else %>
        <p class="flash-msg"><%= "#{t('no_timetable_found')} #{t('for')} #{@local_tzone_time.to_date}" %></p>
      <% end %>
    </div>
  <% else %>
    <p class="flash-msg"><%= t('no_timetable_found') %></p>
  <% end %>
</div>
