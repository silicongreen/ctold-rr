<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transport_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('add_new_route') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('view_route')}", routes_path %></li>
  </ul>
</div>

</div>
<div id="page-yield">
    <div id="vehicle_form">
      <% form_for(@route) do |r| %>
        <%= error_messages_for :route %>
        <div class="label-field-pair">
            <div class="label-container" style=""><label for="vehicle_no"><%= t('destination') %><span class="necessary-field">*</span> </label></div>
            <div class="input-container"><%= r.text_field :destination %></div>
        </div>
        <div class="label-field-pair">
            <div class="label-container" style=""><label for="vehicle_no"><%= t('cost') %><span class="necessary-field">*</span> </label></div>
            <div class="input-container"><%= r.text_field :cost, :class=>'precision_text' %></div>
        </div>
        <div style="clear: both;"></div>
        <div class="label-field-pair">
            <div class="label-container" style=""><label for="vehicle_no"><%= t('main_route') %><span class="necessary-field">*</span> </label></div>
            <div class="input-container" style="padding-top: 7px;"><%= r.select:main_route_id,[["#{t('new_main_route')}", ""]]+@main_routes.map{|r| [r.destination, r.id]},{:prompt => "#{t('select_main_route')}"}%></div>
        </div>
      
      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button",:disable_with => "#{t('please_wait')}"  %>
      <% end %>
   </div>
</div>
<style>
    .text-input-bg select, .label-field-pair input {
          width: 94% !important;
    }
</style>