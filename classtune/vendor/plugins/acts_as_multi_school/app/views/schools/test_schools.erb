<fieldset class="margin-bottom-20">
  <h1 class="content-head" style="width:50%;">Test Schools</h1>
  <%= link_to '+ New School', new_school_path, :class  => 'button-red float-right' if permitted_to? :new, :schools%>  
  <%= link_to 'Test Schools', {:controller => "schools", :action => "test_schools", :id => 1},:style=>'margin-right:10px;', :class  => 'button-red float-right' %>  
  <%= link_to 'Running Schools', {:controller => "schools", :action => "running_schools", :id => 1},:style=>'margin-right:10px;', :class  => 'button-red float-right' %>
  <%= link_to 'All Schools', {:controller => "schools", :action => "index"},:style=>'margin-right:10px;', :class  => 'button-red float-right'%>  
</fieldset>
<div class="content-div container-width">
  <div class='content-list'>
    <% unless @schools.empty? %>
      <% @schools.each do |school| %>
        <fieldset class="bg-light grey-border shadow">
          <h4><%=link_to school.name, school_path(school) %></h4>
          <label><%=h school.code %></label>
          <% if permitted_to? :edit, @school, :context=>:schools %>
          <p class="seperator">|</p>
          <label><%= link_to 'Edit', edit_school_path(school) %></label>
          <p class="seperator">|</p>
          <label><%= link_to "Assign School", {:controller=>"schools", :action=>"assign_school", :id=>school.id} %></li></label>
          <p class="seperator">|</p>
          <label><%= link_to "Add Student", {:controller=>"schools", :action=>"add_student", :id=>school.id} %></li></label>
          <p class="seperator">|</p>
          <label><%= link_to "Show Student Code", {:controller=>"schools", :action=>"show_student_code", :id=>school.id} %></label>
          <p class="seperator">|</p>
          <label><%= link_to "Show Students List", {:controller=>"schools", :action=>"show_students_list", :id=>school.id} %></label>
          <p class="seperator">|</p>
          <label><%= link_to "Show Teacher List", {:controller=>"schools", :action=>"show_teacher_list", :id=>school.id} %></label>
      
          <% end %>
          
        </fieldset>
      <% end %>
    <%= will_paginate @schools %>
    <% else %>
      <fieldset class="bg-light grey-border shadow">
        <label>No schools found.</label>
      </fieldset>
    <% end %>
  </div>
</div>

