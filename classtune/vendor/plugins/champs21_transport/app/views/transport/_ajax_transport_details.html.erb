<% if !@transport.empty? %>
  <div class="students-table">
    <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
      <thead><!-- class="thead-inverse" -->
        <tr>
          <th> <%= t('sl_no') %></th>
          <th><%= t('name') %></th>
          <th><%= t('route') %></th> 
          <th><%= t('fare') %></th> 
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @transport.each_with_index do |t, i| %>
        <% unless t.receiver.nil? %>
        <tr id="transport_<%= t.id %>" class="<%= cycle('odd', 'even') %>">
          <td class="col-1" style=" text-align: center; vertical-align: middle;">
              <span class="sl_no"><%= i+1 %></span>
          </td>

          <td class="col-2" style="font-size: 12px; font-family: verdana; line-height: 15px;">
              <b><%=  t.receiver.full_name unless t.receiver.nil?%></b>
              <hr style="border: 1px solid #ccc; margin-bottom: 10px;"/>
              <span style="padding-bottom: 10px; display: block;"><b>Student ID:</b> <%= t.receiver.admission_no %></span>
              <b>Batch: </b><%= "#{t.receiver.batch.full_name}" %>
          </td>

          <td class="col-3" style=" text-align: center; vertical-align: middle;">
            <%= t.route.destination unless t.route.nil? %>
          </td>
          <td class="col-4" style="text-align: right; padding-right: 10px;  vertical-align: middle;">
            <%= to_comma_seperated_precision_label t.bus_fare %>
          </td>
          <td class="col-5" style="text-align: center; vertical-align: middle;">
              
            <%=  link_to '<i class="fa fa-edit"></i>', {:controller => "transport", :action => "edit_transport", :id => t.id}, :style => "color: #49BB4B; display: inline-block; font-size: 20px; padding-right: 6px;" %>
            <%= link_to_remote '<i class="fa fa-trash"></i>', :url => {:controller => "transport", :action => "delete_transport", :id => t.id}, :confirm => "Are you wish to remove this student from Transport?", :html => {:style => "color: #f00; display: inline-block; font-size: 23px;"} %><br/>  
            <%#=  link_to_remote '<i class="fa fa-trash"></i>', {:controller => "transport", :action => "delete_transport", :id => t.id }, :confirm => "#{t('delete_confirm_msg')}" %>
          </td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <div class="seat_occupancy"><div class="info"><div class="label"> <%="#{t('seat_occupancy')}"%></div><div class="record themed_text"><span>:</span>  <%="#{t('out_of', :start_value=>(@vehicle.no_of_seats-@vehicle.available_seats), :end_value=>@vehicle.no_of_seats)}"%> </div></div>
  </div>

  <div class = "submit_button">
    <%=  link_to "#{t('pdf_report')}", {:controller => "transport", :action => "pdf_report",:id=>@vehicle.id,:page_height=>900},:target => '_blank',:class=>"user_button" %>
  </div>
<% else %>
  <div class= "msg"><p class= "flash-msg"><%= t('no_users') %></p></div>
<% end %>
<style>
    a {
      font-size: 11px;
      text-decoration: underline;
      font-family: verdana;
    }
    td {
      font-size: 12px;
      font-family: verdana;
    }
</style>