<% unless @blogs.blank? %>
  <table class="search_blog">
    <% @blogs.each do |blog| %>
      <tr>
        <td colspan="3" class="seperator">
        </td>
      </tr>
      <tr class="search_line hover">
        <td class="user_name hover"><%= link_to "#{blog.first_name} #{blog.last_name}",blog_directory_path(blog.username) %></td>
        <td class="identity_number hover"><%= link_to "#{blog.username}",blog_directory_path(blog.username) %></td>
        <td class="blog_name hover"><%= link_to "#{blog.name}",blog_directory_path(blog.username) %>
        </td>
      </tr>

    <% end %>
  </table>
<% else %>
  <p class="flash-msg"> <%= t('no_blog_found') %> </p>
<% end %>
