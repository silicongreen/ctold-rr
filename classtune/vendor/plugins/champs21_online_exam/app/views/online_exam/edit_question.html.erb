<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('online_exam_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('edit_question_text') %></div>

</div>
<div id="page-yield">
  <div id="box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <%= error_messages_for 'question' %>
    <%form_for :question do |f| %>

      <div class="question_label_field">
        <p><%= t('question') %></p>
        <div class="label-field-pair1">
          <label ><%= t('mark') %></label>
          <div class="text-input-bg"><%= f.text_field :mark %></div>
        </div>
        <div id="question_text_field_bg">
          <%#= f.tinymce :question %>
          <%= f.redactor :question,:latex=>true%>
        </div>
        <div id="label-field-pair">
          <label ><%= t('explanation') %></label>
          <div class="textarea-input-bg">
            <%= f.text_area :explanation,:cols => 47, :rows => 5 %>
          </div>
        </div>
      </div>
      <div id="submit-button">
        <%=f.submit("â–º #{t('update')}") %>
      </div>
    <% end %>
      <%= load_redactor_script %>
  </div>
</div>
