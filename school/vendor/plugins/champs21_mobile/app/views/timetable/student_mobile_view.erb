<%#*<fieldset>%>
  <div class="span6 top_separation">
    <%= select :timetable,:wday,
      @weekdays.map {|b| [ WeekdaySet.weekday_name(b), b]},
      {:prompt => t('select_weekday'),:selected=>@wday},
      {:onChange => "#{remote_function(:url => {:action => "update_student_mobile_view"},
      :with => "'wday='+ value+'&id='+ #{@student.id}"
      )}",:class=>"span3 full_width"} %>
  </div>
<%#*</fieldset>%>
<div id="timetable">
  <%= render "timetable" %>
</div>
