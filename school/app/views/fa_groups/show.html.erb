<% content_for :head do  %>
  <%= stylesheet_link_tag("observation_groups/show.css") %>
<% end %>
<div id="content-header">
<%= show_header_icon %>
  <h1>Formative Assessment</h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Assessment Criterias</div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to_remote "#{t('new_text')}", :url => { :action => 'new_fa_criteria', :fa_group_id => @fa_group.id } %></li>
  </ul>
</div>

</div>
<div id="page-yield">
  
  <div class="bread_crumb">
    <%= link_to t('fa_groups_text'), fa_groups_path %> <div class = "bread-crumb-separator"> > </div>
    <%= @fa_group.name %>
  </div>
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="title">
    <%= t("name_text") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @fa_group.name %></div>
  </div>
  <div class="title">
    <%= t("description_text") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @fa_group.desc %></div>
  </div>
  <div class="title">
    <%= t("cce_exam_category") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @fa_group.cce_exam_category.name %></div>
  </div>
  <div id="fa_criterias">
    <%= render  :partial=>'fa_criterias' %>
  </div>
  <div id="modal-box" style="display:none;"></div>
</div>
