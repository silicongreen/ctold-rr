<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transportation_details') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('view_details') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('add_transport_text')}", :controller => "transport" %></li>
  </ul>
</div>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="label-field-pair" style="width: 550px; margin: auto; padding-bottom: 20px;">
    <div class="label-container" style=""><label for="student-detail-select-class"><%= t('select_a_vehicle') %></label></div>
    <div class="input-container"><%= select :transport , :vehicle_id,
        @vehicles.map{|r| [r.vehicle_no,r.id]},
        {:prompt => "#{t('select_vehicle')}"},
        {:onChange => "#{remote_function(:url => {:action => "ajax_transport_details"},
        :with => "'id='+ value",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"
        )}"} %>
    </div>
    <%= image_tag("loader.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader",
      :style =>"display: none;" ) %>
  </div>
  <div class="extender"></div>
  <div id="transport_details"> </div>

</div>
