<input type="hidden" name="option_sms" id="option_sms" value="student_general" />
<div style="clear: both; height: 12px;"></div> 
<div class="label-field-pair">
  <div class="label-container"><label>Select Option</label></div>
  <div class="text-input-bg">
    <select name="send_sms[is_test_student]" id="is_test_student">
      <option value="1">Test</option>
      <option value="0">Live</option>
    </select>
  </div>
</div>
<div style="clear: both; height: 12px;"></div> 
<div id="batch_panel_student" style="display: none;">
  <div class="label-container"><label>Student Options</label></div>
  <div class="text-input-bg" style="width: 300px; margin-top: 10px;">
        <input type="radio" name="student_option" id="student_options_present" value="0" style="width: auto; height: auto;" checked="" />&nbsp;&nbsp; Present Student 
        <input type="radio" name="student_option" id="student_options_former" value="1" style="width: auto; height: auto;" />&nbsp;&nbsp; Former Student 
   </div>
   <div style="clear: both; height: 12px;"></div>
    <div class="label-container"><label><%= t('select_a_batch') %>:</label> </div>
    <div class="text-input-bg text-input-bg2" style="height: 320px; "><%= select :send_sms, :batch_id,
       @batches.map {|b| [b.full_name, b.id]},
       {:prompt => "Select"},
       {:multiple => true,:onChange => "#{remote_function(:url => {:action => "list_students_new"},
       :with => "'batch_id='+j('#send_sms_batch_id').val()+'&student_opt='+j('input[name=student_option]:checked').val()",
       :before => "Element.show('loader')",
       :success => "Element.hide('loader')"
       )}"} %>
   <%= image_tag("loader.gif",
     :align => "absmiddle",
     :border => 0,
     :id => "loader",
     :style =>"display: none;" ) %>
   </div>
   <div class="label-container"><label>Send To</label></div>
   <div class="text-input-bg">
     <select name="send_sms[send_to]">
       <option value="1">Student And Parent/Guardian</option>
       <option value="2">Student</option>
       <option value="3">Parent/Guardian</option>
       <!--option value="4">Both Parent/Guardian</option>
       <option value="5">Student Both Parent/Guardian</option>
       <option value="6">Student Both Parent/Guardian (Only For Test)</option-->
     </select>
   </div>
   <div style="clear: both; height: 12px;"></div>
</div>
<div class="label-container"><label>Only Download?</label></div>
<div class="text-input-bg">
  <select id="sms_options_type" name="send_sms[download]">
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>
</div>
<div style="clear: both; height: 12px;"></div>     
<div id="student-list" style="float: left;">
    <%= render :partial => "test_student" %> 
</div>
</div>