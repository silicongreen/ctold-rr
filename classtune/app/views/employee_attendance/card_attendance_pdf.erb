<div id="page-yield">

    <h2>&nbsp;</h2>
    
    <div class="hor_line"></div>
    <h2><%= t('employee_attendance_report') %></h2>
    <div class="hor_line"></div>


    
    <div class="report">

        <div id ="main_info">

            <h4><b>Name : <%= @employee.full_name.upcase %></b></h4>
            <h4><b>Year : <%= @year %></b></h4>
            <h4><b>Month : <%= Date::MONTHNAMES[@month.to_i] %></b></h4>

        </div>
        <div id="pdf-info">
            <% c='even' %>
            <% unless @employee.blank? or @emp_attendance.blank? %>
              <table id="pdf-table" width="100%" cellspacing="0">
                  <tr class="table-header"><td class="col-pdf">Date</td><td class="col-pdf">In Time</td><td class="col-pdf">Out Time</td></tr>
                  <% i = 0 %>
                  <% @emp_attendance.each do |e| %>
                    
                    <tr class="<%= cycle('odd', 'even') %>">
                        <td class="col-pdf">
                            <%= e.date.strftime("%d/%m/%Y") %>
                        </td>
                        <td class="col-pdf"><%= Time.parse(e.mintime).strftime("%I:%M %p") unless e.mintime.nil? %></td>
                        <td class="col-pdf"><%= Time.parse(e.maxtime).strftime("%I:%M %p") unless e.maxtime.nil? %></td>
                    </tr><!-- attendance_tr -->
                  <% end %>


              </table>
            <% end %>




        </div>

    </div>

</div>
