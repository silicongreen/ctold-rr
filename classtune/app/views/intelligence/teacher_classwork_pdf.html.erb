<div id="page-yield" class="available_sections1 baf_shaheen">
  <div class="page1"> </div>
  <div class="section1 row" >
    <center>
      <div id="pdf-header-south" class="general-header">
        <h1 align="center"><%=Configuration.get_config_value('InstitutionName'); %></h1>
        <% unless @date.blank?  %>
        <h4 align="center">Date : <%= @date.to_date.strftime("%d %b %Y") %></h4>
        <% end %>
      </div>
      <h2 align="center">Class Work Report</h2>
      <% unless @report_data.blank? %>
      <% c = 'even' %>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td class="col-pdf aling-left"><b>Teacher Name</b></td> 
          <td class="col-pdf aling-left"><b>Department</b></td> 
          <td class="col-pdf"><b>Total Class</b></td> 
          <td class="col-pdf"><b>Classwork Given</b></td> 
          <td class="col-pdf"><b>Before 3pm</b></td>
          <td class="col-pdf"><b>Frequency</b></td>     
        </tr>
        <% std_count = 0 %>
        <% unless @report_data['employee_data'].blank? %>  
          <% @report_data['employee_data'].each do |employee| %>
            <% if check_admin_stuff(employee['emp_dep']) %>
            <%  std_count = std_count+1; %>
            <% 
              if @report_data['day_type']!="1" && @date==@start_date
                employee['classwork_given'] = "N/A"
                employee['total_class'] = "N/A"
                employee['frequency'] = "N/A"
              end 
            %>
            <% if std_count>49 %>
              <% std_count = 0 %>
              <tr class="page-break">
                  <td colspan="100">&nbsp;</td>
              </tr> 
            <% end %>
              <% 
              if employee['total_class'].to_i < employee['classwork_given'] .to_i
                employee['frequency'] = 100
              elsif employee['total_class'].to_i > 0 && employee['classwork_given'].to_i > 0
                employee['frequency'] = (employee['classwork_given'].to_f/employee['total_class'].to_f)*100
              elsif employee['total_class'].to_i == 0
                employee['frequency'] = 100
              else
                employee['frequency'] = 0
              end  

              %>
              <tr class="table-header">
                <td class="col-pdf aling-left"><%= employee['emp_name'] %></td>
                <td class="col-pdf aling-left"><%= employee['emp_dep'] %></td>
                <td class="col-pdf"><%= employee['total_class'] %></td>
                <td class="col-pdf"><%= employee['classwork_given'] %></td>
                <td class="col-pdf"><%= employee['classwork_given_before_3pm'] %></td>
                <td class="col-pdf"><%= employee['frequency'] %></td>
              </tr> 
            <% end %>
          <% end %>  
        <% end %>
      </table>      
      
      <% end %>
   </center>
  </div>
  
  
</div>


