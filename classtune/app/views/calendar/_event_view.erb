<% unless @events.empty? %>
  <div class="current-date"> <%= I18n.l(@date,:format => :long) %> </div>
  <% @events.each do |h| %>
    <div class="events">
      
      <%  if h.pointing_color.nil? or h.pointing_color == ""
            color = "#FFCF27"            
          else
            color = h.pointing_color
          end
      %>
      <div class="event_title" style="color: <%= color %>">        
        <div class="legend-icon" style='background:<%= color %>;'></div>
        <%=  link_to h.title, {:controller => 'event', :action => 'event_details', :id => h.id},:style=>"color:#{color}" %>
     
      </div>
      <div class="extender"></div>
      <div class="desc"><%= h.description %><br /><%= t('start_time') %>:<%= I18n.l(h.start_date,:format=>"%I:%M %p") %><br /><%= t('end_time') %> :<%= I18n.l(h.end_date,:format=>"%I:%M %p") %></div>
      <div class="extender"></div>
      <div class="link">
        <% if permitted_to? :edit_event, :event %>
          <%= link_to "#{t('edit_text')}",{:controller=>'event',:action=>'edit_event',:id=>h.id},:class=>"delete" %>&nbsp;&nbsp;
        <% end %>
        <% if permitted_to? :event_delete, :calendar %>
          <%= link_to "#{t('delete_text')}",{:action=>'event_delete',:id=>h.id},:confirm=>"#{t('delete_confirm_msg')}",:class=>"delete" %>
        <% end %>
      </div>
      <div class="extender"></div>
    </div>
  <% end %>
<% end %>
  
<style>
      .event_title a
      {
          text-decoration: none;
          cursor: pointer;
      }
  
  </style>

