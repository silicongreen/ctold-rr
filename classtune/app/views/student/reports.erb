
<div class="header-wrapper">

  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/profile-icon.png', :html => {:alt => 'Student Profile'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
        <%= link_to "#{t('report_center')}", :controller => 'student', :action => 'reports', :id => @student.id %>
      </div>
      <div class="clearfix"></div>
      <div class="header-title-sub-text">
        <%= I18n.l(@local_tzone_time.to_date, :format=>'%d/%m/%Y') %>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="tabbed-header-wrapper">
    <ul class="header-tabs">
      <% if permitted_to? :profile,:student %>
        <li>
          <%= link_to "#{t('student_profile')}", {:controller => 'student', :action => 'profile', :id => @student.id}, {:class => 'f2'} %>
        </li>
      <%end%>

      <% if permitted_to? :reports,:student %>
        <li class="active">
          <%= link_to "#{t('reports_text')}", {:controller => 'student', :action => 'reports', :id => @student}, {:class => 'f2'} %>
        </li>
      <%end%>
        
      <% BatchStudent.find_by_student_id(@student.id) %>  
       
      <% unless BatchStudent.blank? %>
        <li>
          <%= link_to "Previous Report", {:controller => "student", :action => "previous_report", :id => @student.id}, {:class => 'f2'} %>
        </li>
      <%  end %>

      <% if permitted_to? :guardians,:student %>
        <li>
          <%= link_to "#{t('guardians_text')}", {:controller => "student", :action => "guardians", :id => @student.id}, {:class => 'f2'} %>
        </li>
      <% end %>

      

      <% if permitted_to? :remove, :student or permitted_to? :admission1, :student %>
        <li>
          <%= link_to "#{t('delete_text')}", {:controller => 'student', :action => 'remove', :id => @student.id}, {:class => 'f2'} %>
        </li>
      <% end %>

      <% if @sms_module.include?('Finance') and permitted_to? :fees, :student%>
        <li>
          <%= link_to "#{t('fees_text')}", {:controller => 'student', :action => 'fees', :id => @student.id}, {:class => 'f2'} %>
        </li>
      <% end %>

      <% Champs21Plugin::ADDITIONAL_LINKS[:student_profile_more_menu].each do |mod| %>
        <% if can_access_request? "#{mod[:destination][:action]}".to_sym,"#{mod[:destination][:controller]}".to_sym %>
          <li>
            <%= link_to "#{t(mod[:title])}", mod[:destination].merge(:id=>@student.id), {:class => 'f2'} %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

</div>

<div id="page-yield" class="bg-disable">
  <div class="wrapper">

    <div id="exam-results-dashboard">

      <h3><%= t('academics') %></h3>

      <div class="exam-results-reports-col">
        <div style="float: left;width: 49%;">
          <h4 class="themed_text"><%= t('subject_wise_report') %></h4>
          <ul>
            <% @subjects.each do |s| %>
              <li><%= link_to s.name, { :controller => 'exam', :action => 'generated_report3', :student => @student.id, :subject => s.id } %></li>
            <% end %>
          </ul>
        </div>
        <div style="float: right;width: 49%;">
          <% if permitted_to? :exam_report, :student %>
            <h4 class="themed_text"><%= t('recent_exams') %></h4>
            <ul>
              <% @exam_groups.each do |e| %>
                <li><%= link_to e.name,{:controller => 'exam', :action => 'generated_report',:exam_group=>e.id, :student=>@student.id}%></li>
              <% end %>
            </ul>
          <%end%>
        </div>      
      </div>

      <div class="exam-results-reports-col">
        <div style="float: left;width: 49%;">
          <h4 class="themed_text"><%= t('detailed_report') %></h4>
          <ul>
            <% unless @grouped_exams.empty? %>
              <li><%= link_to "#{t('final_report')}(#{t('exam_goruped')})",{:controller=>'exam', :action=>'generated_report4',:student=>@student.id,:type=>'grouped'} %></li>
              <li><%= link_to "Transcript Report", { :controller => 'exam', :action => 'student_transcript',:transcript=>{:batch_id=>@student.batch_id},:student_id=>@student.id,:flag=>"1" } %></li>
            <% else %>
              <li><%= link_to "#{t('final_report')}",{:controller=>'exam', :action=>'generated_report4',:student=>@student.id,:type=>'general'} %></li>
              <li><%= link_to "Transcript Report", { :controller => 'exam', :action => 'student_transcript',:transcript=>{:batch_id=>@student.batch_id},:student_id=>@student.id,:flag=>"1"} %></li>
  <%#= link_to "#{t('compare_past')}", { :controller => 'exam', :action => 'previous_years_marks_overview',:student=>@student.id }%>

            <% end %>
            <% if Configuration.cce_enabled? %>
              <li><%= link_to "CCE Transcript Report", { :controller => 'cce_reports', :action => 'student_transcript',:id=>@student.id }%></li>
            <% end %>
          </ul>
        </div>
        <% unless @old_batches.empty? %>
          <div style="float: right;width: 49%;">
            <h4 class="themed_text"><%= t('archives') %></h4>
            <ul>
              <% @old_batches.each do |b| %>
                <% unless GroupedExam.find_all_by_batch_id(b.id).empty? %>
                  <li><%= link_to b.name+'-G',{:controller=>'exam', :action=>'generated_report4',:student=>@student.id,:batch=>b.id,:type=>'grouped'} %></li>
                <% else %>
                  <li><%= link_to b.name,{:controller=>'exam', :action=>'generated_report4',:student=>@student.id,:batch=>b.id,:type=>'general'} %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        <% end %>


      </div>

      <div class="extender"> </div>

    </div>

    <div id="attendance-reports-dashboard">

      <h3><%= t('attendance') %></h3>
      <div style="float: left;width: 49%;">
        <h4 class="themed_text"><%= t('detailed_report') %></h4>

        <ul>
          <li><%= link_to "#{t('current_year_report')}", :controller => 'student_attendance', :action => 'student', :id => @student %></li>
        </ul>
      </div>
      <% unless @old_batches.empty? %>
        <div style="float: right;width: 49%;">
          <h4 class="themed_text"><%= t('archives') %></h4>

          <ul>
            <% @old_batches.each do |b| %>
              <li><%= link_to b.name, :controller => 'student_attendance', :action => 'student_report', :id => @student, :year => b.id %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    
  </div>
</div>


<%= stylesheet_link_tag 'tadded-header' %>
<% content_for :head do %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %>