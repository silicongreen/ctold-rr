<div id="page-yield" class="available_sections1">
  <div class="page1"> </div>
  <div class="section1 row" >
    <center>
      <h3 align="center">Mark Sheet</h3>
      <div class="hor_line"></div>
      <h4 align="center">For Subject Teacher</h4>
      
      <div id ="main_info">
          <table>
              <tr>
                 <% if !@employee.nil? %> 
                  <td align='left'><h4>Teacher's Name : <%=  @employee.full_name %></h4></td>
                  <td align='center'><h4>Subject : <%= @subject.name %></h4></td>
                 <% else %>
                  <td align='left'><h4>Subject : <%= @subject.name %></h4></td>
                 <% end %> 
                  
                  <td align='center'><h4>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %></h4></td>
                  <td align='right'><h4>Section : <%= @batch.course.section_name %></h4></td>
              </tr>    
          </table>    
       
      </div>
      <% unless @report_data.blank?  or  @report_data['result'].blank? %>
      <% c = 'even' %>
      <% full_mark = 0 %>
      <% colspan = 0 %>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td class="name">Roll NO.</td>
          <td class="name">Name</td>
          <% @report_data['result']['ALL'].each do |rs| %>
            <td><%=  rs['name'] %> (<%=  rs['maximum_marks'] %>)</td>
            
            <% colspan = colspan+1 %>
          <% end %>  
          
          <td>Total</td>
          <td>Grade</td>
        
        </tr>
        
        <% extender = 0 %>
        <% std_count = 0 %>
        <% unless @report_data['result']['al_students'].blank? %>
        <% @report_data['result']['al_students'].each do |std| %>
          <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>@subject.id.to_s,:elective_group_id=>@subject.elective_group_id.to_i} %>
          <% if @has_exam_student == false %>
            <% next %>
          <% end %>          
                

          <%  std_count = std_count+1; %>
          <% colspan = colspan+4 %>
          <% if std_count>14 && extender ==0 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr>    
          <% elsif std_count>18 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr> 
          <% end %>    
        
        
          <% total_mark = 0 %>
          <% full_mark = 0 %>
              
              
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="name"><%= std['class_roll_no'] %></td>
            <td class="name-std"><%= std['name'] %></td>
            
            <% @report_data['result']['ALL'].each do |rs| %>
              <% main_total_mark = 0 %>
              <% main_full_mark = 0 %>
              <td>
              <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                  <%= rs['students'][std['id']]['score'] %> 
                  <% main_total_mark = rs['students'][std['id']]['score'].to_f %>
              <% else %>
                  -
              <% end %>
              <% if !rs['maximum_marks'].blank? %>    
                <% main_full_mark = rs['maximum_marks'].to_i %> 
              <% end %> 
              <% if !rs['converted_marks'].blank? && !rs['maximum_marks'].blank? && !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>  
                <% main_full_mark = rs['converted_marks'].to_i  %>
                <% main_total_mark = (rs['students'][std['id']]['score'].to_f/rs['maximum_marks'].to_f)*main_full_mark %>
              <% end %>    
              </td>
              <% 
                total_mark = total_mark+main_total_mark
                full_mark = full_mark+main_full_mark
              %>
            <% end %> 
            
           <% main_mark = 0 %>
           <% if total_mark.to_i > 0 %>   
            <% main_mark = (total_mark.to_f/full_mark.to_f)*100 %>
           <% end %>    

           <td class="name"><%= sprintf( "%0.02f", main_mark) %> %</td>

           <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
           <% if !grade.blank? and !grade.name.blank? %>
            <td class="col-2"><b><%= grade.name %></b></td>
          <% else %>
            <td class="col-2"><b>-</b></td>
          <% end %>
        </tr>
        <% end %>
        <% end %>
      </table>
      <% end %>
    </center>
  </div>
  
  
</div>
