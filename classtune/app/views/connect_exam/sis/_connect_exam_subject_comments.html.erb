<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('exams_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'>Subject Grades/Remarks</div>
    <div id="inner-tab-menu">
        <ul>
            <% if permitted_to? :previous_batch_exams, :exam %>
              <li class='themed_bg themed-dark-hover-background' style="display: none;"><%= link_to "#{t('previous_batch_exam')}", {:controller => "exam", :action => "previous_batch_exams"} %></li>
            <% end %>
            <% unless @show_class_exam %>   
              <li class='themed_bg themed-dark-hover-background'><%= link_to t('exams_text'), :controller => "exam", :action => "exam_connect_list",:id=>@batch.id %></li>
            <% end %>  
            <%  if permitted_to? :grouping,:exam %>
              <% unless @is_class_exam %>   
                <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('connect_exams_new')}", :controller=>'exam', :action=>'new_exam_connect', :id=>@batch %></li>
              <% end %>
            <% end %>
        </ul>


    </div>
</div>


<div id="page-yield">

    <div id="flash-box">   
        <% unless flash[:notice].nil? %>
          <p class="flash-msg"> <%= flash[:notice] %> </p>
        <% end %>
    </div>



    <h3><%= @exam_subject.name %></h3>
    <% unless @students.empty? %>
      <% form_for :exams do |f| %>
        <div class="zui-wrapper">
            <div class="zui-scroller">
                <table class="zui-table">

                    <tr class="tr-head fixed-position">
                        <td  class="zui-sticky-col2"><b><%= t('name') %></b></td>
                        <% unless @exams.blank? %>
                        
                          <% @exams.each do |exam| %>
                            <% if has_subject_group(@exam_subject.id,@exam_connect.quarter_number) && @exam_subject.no_exams_sjws.to_i == 1 %>
                              
                              <% subject_groups = get_subject_group(@exam_subject.id,@exam_connect.quarter_number) %>
                              <td style="padding:0px; border:none;">
                                  <table width="100%" style="height: 63px;">
                                      <tr>
                                          <td colspan="100" style="text-align:center; border:1px solid black;"><b><%= exam.exam_group.name %></b>
                                          </td></tr><tr>
                                          <% subject_groups.each do |group_name| %>

                                            <% subject_subgroup = get_subject_sub_group(group_name.id,@exam_connect.quarter_number) %>
                                            <% if subject_subgroup %>
                                              <td style="text-align:center; border:1px solid black;">
                                                  <table width="100%">
                                                      <tr><td colspan="100" style="text-align:center;padding:3px;"><%= group_name.name %><hr/></td></tr>
                                                      <tr>
                                                          <% isubgroup = 0 %>
                                                          <% subject_subgroup.each do |sub_group_name| %>
                                                            <% if isubgroup == 0 %>
                                                              <td style="text-align:center;padding:3px;font-size: 11px; width:60px;white-space:normal;"><%= sub_group_name %></td>
                                                            <% else %>
                                                              <td style="text-align:center;padding:3px;font-size: 11px; width:60px; border-left: 1px solid #D7D7D7;white-space:normal;"><%= sub_group_name %></td>
                                                            <% end %>
                                                            <% isubgroup = isubgroup+1 %>
                                                          <% end %> 
                                                      </tr>
                                                  </table> 
                                              </td>

                                            <% else %>
                                              <td style="text-align:center;padding:3px;font-size: 11px; white-space:normal; width:60px; border:1px solid black;">
                                                  <%= group_name.name %>
                                              </td>    
                                            <% end %>  

                                          <% end %>
                                      </tr>
                                  </table>
                              </td>  
                            <% else %>
                              <td>
                                  <b><%= exam.exam_group.name %></b>

                                  <p style="font-size: 10px;"> 
                                      <% if exam_marks_entry_allowed(exam.exam_group) or @current_user.admin? %>
                                        <%= text_field_tag "exam_marks[#{exam.id}][alternative_title]", exam.alternative_title, :class=>"marks-box" %>
                                      <% else %>
                                        <%= exam.alternative_title %>
                                      <% end %> 
                                  </p>

                                  <p> 
                                      <% if exam_marks_entry_allowed(exam.exam_group) or @current_user.admin? %>
                                        <%= text_field_tag "exam_marks[#{exam.id}][maximum_marks]", exam.maximum_marks.to_i, :size => '4', :class=>"marks-box" %>
                                      <% else %>
                                        <%= exam.maximum_marks.to_i %>
                                      <% end %>
                                  </p>

                              </td>
                            <% end %>
                          <% end %>
                        <% end %>  
                        <% if @exam_subject.no_exams_sjws.to_i != 1 %>
                            <td><b><%= t('remarks') %>/<%= t('grade') %></b></td>
                        <% end %> 

                    </tr>
                    <% @students.each do |student| %>
                      <tr class="tr-<%= cycle('odd', 'even') %>">
                          <td class="col-2 zui-sticky-col2"  style="padding: 13px 10px"><%= student.full_name %> </td>
                          <%
                            exam_comment = ""
                            @exam_comments = ExamConnectSubjectComment.find(:first, :conditions => {:exam_connect_id=>@exam_connect.id,:subject_id => @exam_subject.id, :student_id => student.id} )
                            if !@exam_comments.blank?
                              exam_comment = @exam_comments.comments
                            end
                          %>
                          

                          <% total_mark = 0 %>
                          <% full_mark = 0 %>
                          <% unless @exams.blank? %>
                            <% @exams.each do |exam| %>
                              <% @exam_score = exam.score_for(student) %>

                              <% if has_subject_group(@exam_subject.id,@exam_connect.quarter_number) && @exam_subject.no_exams_sjws.to_i == 1  %>
                                <% unless @exam_score.blank? or @exam_score.remarks.blank?  %>
                                  <% exam_score_split = @exam_score.remarks.split("|") %>
                                <% end %>
                                <% subject_groups = get_subject_group(@exam_subject.id,@exam_connect.quarter_number) %>
                                <% iloop = 0 %>
                                <% @group_loop = 0 %>
                                <td>
                                    <table width="100%">
                                        <tr>
                                            <% subject_groups.each do |group_name| %>




                                              <% subject_subgroup = get_subject_sub_group(group_name.id,@exam_connect.quarter_number) %>
                                              <% unless subject_subgroup.blank? %>
                                                <td style="padding:0px;">
                                                    <table width="100%">
                                                        <tr>
                                                            <% subject_subgroup.each do |sub_group_name| %>
                                                              <% exam_group_remarks = "" %>
                                                              <% unless @exam_score.blank? or @exam_score.remarks.blank?  %>

                                                                <% unless exam_score_split[@group_loop.to_i].blank? %>

                                                                  <% exam_group_remarks = exam_score_split[@group_loop.to_i] %>
                                                                <% end %>
                                                              <% end %>
                                                              <td  class="col-2 td-mark" style="text-align:center; width:60px;">
                                                                  <%= text_field_tag "exam_score[#{exam.id}][#{student.id}][remarks][]", exam_group_remarks, :size => '4' %>
                                                                  <div class="date2" ><span class="themed_text"><%=  student.full_name %><div> <%= group_name.name.to_s+">>"+sub_group_name %></div></span></div>
                                                              </td>
                                                              <% @group_loop = @group_loop+1 %>

                                                            <% end %>

                                                        </tr>
                                                    </table>
                                                </td>    
                                              <% else %>
                                                <td  class="col-2 td-mark" style="text-align:center; width:60px;">
                                                    <% exam_group_remarks = "" %>
                                                    <% unless @exam_score.blank? or @exam_score.remarks.blank?  %>

                                                      <% unless exam_score_split[@group_loop.to_i].blank? %>

                                                        <% exam_group_remarks = exam_score_split[@group_loop.to_i] %>
                                                      <% end %>
                                                    <% end %>
                                                    <% if @exam_connect.result_type == 8 %>
                                                      <select name="exam_score[<%=exam.id%>][<%=student.id%>][remarks][]" >
                                                          <option value="0" >Select</option>
                                                          <option value="1" <% if exam_group_remarks.to_i == 1 %> selected="selected" <% end %> >Excellent</option>
                                                          <option value="2" <% if exam_group_remarks.to_i == 2 %> selected="selected" <% end %> >Very Good</option>
                                                          <option value="3" <% if exam_group_remarks.to_i == 3 %> selected="selected" <% end %>  >Good</option>
                                                          <option value="4" <% if exam_group_remarks.to_i == 4 %> selected="selected" <% end %>  >Needs Improvement</option>
                                                      </select>
                                                    <% elsif @exam_connect.result_type == 9 %>
                                                     <select name="exam_score[<%=exam.id%>][<%=student.id%>][remarks][]" >
                                                          <option value="0" >Select</option>
                                                          <option value="1" <% if exam_group_remarks.to_i == 1 %> selected="selected" <% end %> >Excellent</option>
                                                          <option value="2" <% if exam_group_remarks.to_i == 2 %> selected="selected" <% end %> >Good</option>
                                                          <option value="3" <% if exam_group_remarks.to_i == 3 %> selected="selected" <% end %>  >Satisfactory</option>
                                                          <option value="4" <% if exam_group_remarks.to_i == 4 %> selected="selected" <% end %>  >Needs Improvement</option>
                                                          <option value="5" <% if exam_group_remarks.to_i == 5 %> selected="selected" <% end %>  >Causing Concern</option>
                                                      </select>
                                                    <% elsif @exam_connect.result_type > 2 && @exam_connect.result_type < 7 %>
                                                      <% @batch = @exam_subject.batch %>
                                                      <% if @exam_connect.result_type == 3 %>
                                                          <select name="exam_score[<%=exam.id%>][<%=student.id%>][remarks][]" >
                                                            <option value="NA" >Select</option>
                                                            <option value="A" <% if exam_group_remarks.to_s == 'A' %> selected="selected" <% end %> >Excellent</option>
                                                            <option value="B+" <% if exam_group_remarks.to_s == 'B+' %> selected="selected" <% end %> >Very Good</option>
                                                            <option value="B" <% if exam_group_remarks.to_s == 'B' %> selected="selected" <% end %>  >Good</option>
                                                            <option value="NI" <% if exam_group_remarks.to_s == 'NI' %> selected="selected" <% end %>  >Needs Improvement</option>
                                                            <option value="R" <% if exam_group_remarks.to_s == 'R' %> selected="selected" <% end %>  >Regular</option>
                                                            <option value="IR" <% if exam_group_remarks.to_s == 'IR' %> selected="selected" <% end %>  >Irregular</option>
                                                          </select>
                                                      <% elsif @exam_connect.result_type == 5 or @exam_connect.result_type == 6 %>
                                                        <select name="exam_score[<%=exam.id%>][<%=student.id%>][remarks][]" >
                                                            <option value="NA" >Select</option>
                                                            <option value="A+" <% if exam_group_remarks.to_s == 'A+' %> selected="selected" <% end %> >Excellent</option>
                                                            <option value="A" <% if exam_group_remarks.to_s == 'A' %> selected="selected" <% end %> >Good</option>
                                                            <option value="B" <% if exam_group_remarks.to_s == 'B' %> selected="selected" <% end %>  >Satisfactory</option>
                                                            <option value="C" <% if exam_group_remarks.to_s == 'C' %> selected="selected" <% end %>  >Needs Improvement</option>
                                                            <option value="D" <% if exam_group_remarks.to_s == 'D' %> selected="selected" <% end %>  >Causing Concern</option>
                                                          </select>
                                                        
                                                      
                                                      <% elsif @batch.course.course_name == "I" or @batch.course.course_name == "II" or @batch.course.course_name == "STD-I" or @batch.course.course_name == "STD-II" %>
                                                          <select name="exam_score[<%=exam.id%>][<%=student.id%>][remarks][]" >
                                                            <option value="NA" >Select</option>
                                                            <option value="A+" <% if exam_group_remarks.to_s == 'A+' %> selected="selected" <% end %> >Excellent</option>
                                                            <option value="A" <% if exam_group_remarks.to_s == 'A' %> selected="selected" <% end %> >Very Good</option>
                                                            <option value="B" <% if exam_group_remarks.to_s == 'B' %> selected="selected" <% end %>  >Good</option>
                                                            <option value="C" <% if exam_group_remarks.to_s == 'C' %> selected="selected" <% end %>  >Satisfactory</option>
                                                            <option value="NI" <% if exam_group_remarks.to_s == 'NI' %> selected="selected" <% end %>  >Needs Improvement</option>
                                                            <option value="R" <% if exam_group_remarks.to_s == 'R' %> selected="selected" <% end %>  >Regular</option>
                                                            <option value="IR" <% if exam_group_remarks.to_s == 'IR' %> selected="selected" <% end %>  >Irregular</option>
                                                          </select>
                                                      <% elsif @batch.course.course_name == "III" or @batch.course.course_name == "V" or @batch.course.course_name == "STD-V" or  @batch.course.course_name == "IV" or @batch.course.course_name == "STD-III" or @batch.course.course_name == "STD-IV" %>
                                                          <select name="exam_score[<%=exam.id%>][<%=student.id%>][remarks][]" >
                                                            <option value="NA" >Select</option>
                                                            <option value="A+" <% if exam_group_remarks.to_s == 'A+' %> selected="selected" <% end %> >Excellent</option>
                                                            <option value="A" <% if exam_group_remarks.to_s == 'A' %> selected="selected" <% end %> >Very Good</option>
                                                            <option value="B" <% if exam_group_remarks.to_s == 'B' %> selected="selected" <% end %>  >Good</option>
                                                            <option value="C" <% if exam_group_remarks.to_s == 'C'  %> selected="selected" <% end %>  >Satisfactory</option>
                                                            <option value="NI" <% if exam_group_remarks.to_s == 'NI' %> selected="selected" <% end %>  >Needs Improvement</option>
                                                            <option value="U" <% if exam_group_remarks.to_s == 'U' %> selected="selected" <% end %>  >Needs Not Satisfactory</option>
                                                            <option value="R" <% if exam_group_remarks.to_s == 'R' %> selected="selected" <% end %>  >Regular</option>
                                                            <option value="IR" <% if exam_group_remarks.to_s == 'IR' %> selected="selected" <% end %>  >Irregular</option>
                                                          </select>
                                                      <% elsif  @batch.course.course_name == "VI" or @batch.course.course_name == "VII" or @batch.course.course_name == "STD-VI" or @batch.course.course_name == "STD-VII" %>
                                                          <select name="exam_score[<%=exam.id%>][<%=student.id%>][remarks][]" >
                                                            <option value="NA" >Select</option>
                                                            <option value="A+" <% if exam_group_remarks.to_s == 'A+' %> selected="selected" <% end %> >Excellent</option>
                                                            <option value="A" <% if exam_group_remarks.to_s == 'A' %> selected="selected" <% end %> >Very Good</option>
                                                            <option value="B+" <% if exam_group_remarks.to_s == 'B+' %> selected="selected" <% end %>  >Good</option>
                                                            <option value="B" <% if exam_group_remarks.to_s == 'B' %> selected="selected" <% end %>  >Fair</option>
                                                            <option value="C" <% if exam_group_remarks.to_s == 'C' %> selected="selected" <% end %>  >Satisfactory</option>
                                                            <option value="D" <% if exam_group_remarks.to_s == 'D' %> selected="selected" <% end %>  >Unsatisfactory</option>
                                                            <option value="NI" <% if exam_group_remarks.to_s == 'NI' %> selected="selected" <% end %>  >Needs Improvement</option>
                                                            <option value="R" <% if exam_group_remarks.to_s == 'R' %> selected="selected" <% end %>  >Regular</option>
                                                            <option value="IR" <% if exam_group_remarks.to_s == 'IR' %> selected="selected" <% end %>  >Irregular</option>
                                                          </select>
                                                        
                                                      <% end %>
                                                 
                                                    <% else %>

                                                      <%= text_field_tag "exam_score[#{exam.id}][#{student.id}]][remarks][]", exam_group_remarks, :size => '10' %>
                                                    <% end %>
                                                    
                                                    <div class="date2" ><span class="themed_text"><%=  student.full_name %><div> <%= exam.exam_group.name.to_s %></div><div> <%= group_name.name.to_s %></div></span></div>

                                                    <% @group_loop = @group_loop+1 %>
                                                </td>
                                              <% end %> 


                                              <% iloop = iloop+1 %>      
                                            <% end %>
                                        </tr>
                                    </table>
                                </td>
                              <% else %>
                                <% if !@exam_score.marks.blank? %>
                                  <% total_mark = total_mark.to_f+@exam_score.marks.to_f %>
                                  <% score_now = @exam_score.marks  %>
                                <% else %>

                                  <% @exam_absent = exam.absent_for(student) %>
                                  <% score_now = @exam_absent.remarks  %>
                                <% end %>
                                <% full_mark = full_mark+exam['maximum_marks'].to_f %>
                                <td class="col-2 td-mark">
                                    <div class="label-field-pair2">
                                        <div class="text-input-bg2">
                                            <%= text_field_tag "exam_score[#{exam.id}][#{student.id}][marks]",score_now, :size => '4', :class=>"marks-4box" %>
                                        </div>
                                    </div>
                                    <div class="date" ><span class="themed_text"><%=  student.class_roll_no.to_s+" : "+student.full_name %><div> <%= exam.name %></div></span></div>
                                </td>                    
                              <% end %>
                            <% end %>  
                          <% end %>
                          <% if @exam_subject.no_exams_sjws.to_i != 1 %>
                            <td><%= text_field_tag "exam[#{student.id}][comments]", exam_comment, :size => '30' %></td>
                          <% end %>


                      <tr>
                        <% end %>      
                </table>
            </div> 
        </div>    
        <br/>
        <div id="sub-button" style="float:right; clear:both;"><%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %></div>
      <% end %> 

    <% end %>

</div>
