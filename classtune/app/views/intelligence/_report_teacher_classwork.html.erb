<% unless @report_data.blank? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">
        
      <% if @report_data['day_type']!="1" && @time_range=="days" %>
        <h2><%=@report_data['day_type']%></h2>
      <% end %>
      <% unless @report_data.blank? %>
        <div class="clearfix"></div>
          <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">       
              <h2><%=@report_data['report_type']%></h2>
              <table id="listing table-design">
                    <tr>
                        <td><b>Teacher Name</b></td> 
                        <td><b>Department</b></td> 
                        <td><b>Total Class</b></td> 
                        <td><b>Classwork Given</b></td> 
                        <td><b>Frequency</b></td> 
                    </tr>    
                    <% unless @report_data['employee_data'].blank? %>  
                      <% @report_data['employee_data'].each do |employee| %>
                        <% 
                          if @report_data['day_type']!="1" && @time_range=="days"
                            employee['classwork_given'] = "N/A"
                            employee['total_class'] = "N/A"
                            employee['frequency'] = "N/A"
                          end 
                        %>
                        <% if !employee['emp_dep'].upcase.index("ADMIN") %>
                        <tr>
                          <td class="col-2"><b><%= employee['emp_name'] %></b></td>
                          <td class="col-2"><b><%= employee['emp_dep'] %></b></td>
                          <td class="col-2"><b><%= employee['total_class'] %></b></td>
                          <td class="col-2"><b><%= employee['classwork_given'] %></b></td>
                          <td class="col-2"><b><%= employee['frequency'] %></b></td>

                        </tr> 
                        <% end %>
                      <% end %>  
                    <% end %>
              </table>

          </div>
          <%= submit_tag "", :value => "â–ºPDF", :class => "submit_button" %>
        <% end %>
         
  </div>
<% end %>


 

