<div id="grading-levels-form">
  <h4><%= @batch.full_name unless @batch.nil? %></h4>

  <% form_remote_for @grading_level,:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>

    <div id="form-errors"></div>

    <% course_id = (@course.nil? ? nil : @course.id) %>
    <%= hidden_field :course, :id,:value => course_id %>
    <%= f.hidden_field :grading_type,:value => "false" %>
    <%= f.hidden_field :type_data, :value => "" %>

    <div class="label-field-pair">
      <%= f.label :"#{t('name')}"%>
      <div class="input-field"><%= f.text_field :name  %></div>
    </div>
    
    <div class="label-field-pair">
      <div class="label-container"><%= label :grading_type, t('grading_type') %></div>
      <div class="input-container"> 
        <%= check_box_tag "grading_type_data[]","percentage", false, :id=>"grading_type", :style => "float: left; width: 30px; margin: 8px;", :class => "grading_type", :onclick => "javascript:enable_grading_level(this);" %> <label for="grading_type"><%= t('grading_type_percentage')  %> </label>
        <%= check_box_tag "grading_type_data[]","normal", false, :id=>"grading_type", :style => "float: left; width: 30px; margin: 8px;", :class => "grading_type", :onclick => "javascript:enable_grading_level(this);" %> <label for="grading_type"><%= t('grading_type_normal')  %> </label>
      </div>
    </div>
    
    <div class="label-field-pair percentage grading_type_div">
      <%= f.label :min_score, t('min_score')+" <span id='percentage' class='grading_type_div'>(%)</span>" %>
      <div class="input-field"><%= f.text_field :min_score %></div>
    </div>
    
    <div class="label-field-pair normal grading_type_div">
      <%= f.label :max_score, t('max_score') %>
      <div class="input-field"><%= f.text_field :max_score %></div>
    </div>

    <div class="label-field-pair">
      <%= f.label :description, "Description" %>
      <div class="input-field"><%= f.text_field :description %></div>
    </div>
    <% if @credit %>
    <div class="label-field-pair">
      <%= f.label :credit_points, t('grade_point') %>
      <div class="input-field"><%= f.text_field :credit_points %></div>
    </div>
    <% end %>
    <div class="extender" style="height: 20px;"></div>
    <div class="sub-button">
      <%= f.submit "â–º #{t('save')}", {:class => 'submit_button', :id => 'submit_button'} %>
    </div>



  <% end %>
</div>
