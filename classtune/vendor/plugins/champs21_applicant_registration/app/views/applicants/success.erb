<% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>
<p style="font-weight: bold;margin-bottom:-10px; width: 100%; text-align: center;">
  <% if @applicant.has_paid == true %>
    Amount Paid :
  <% else %>
    Total Payable Amount :
  <% end %>
  <span class="themed_text"><%= @currency %>. <%= precision_label @applicant.amount %></span>
</p>
<table align="center">
  <tr>
    <td>
      <% form_for :token_check,:url => {:action => "print_application"},:html => {:target => '_blank', :style=>"width:150px; float:left;"} do |f| %>
        <%= f.hidden_field :print_token,:value => @applicant.print_token %>
        <%= f.submit 'Print Application',:class => "submit_button submit-button_print" %>
      <% end %>
    </td>
    <% if Champs21Plugin.can_access_plugin? "champs21_pay" %>
      <td>
        <% unless @applicant.has_paid == true  %>
          <% if @active_gateway == "Paypal" %>
            <%= paypal_pay_button(@certificate,@merchant_id,"REGISTRATION FEE #{@applicant.reg_no}",@applicant.amount,"http://#{request.host_with_port}/applicants/registration_return/#{@applicant.id}",Array.new,"float:left; margin-left:0; margin-right:0;") %>
          <% elsif @active_gateway == "Authorize.net" %>
            <%= authorize_net_pay_button(@merchant_id,@certificate,@applicant.amount,"REGISTRATION FEE #{@applicant.reg_no}","http://#{request.host_with_port}/applicants/registration_return/#{@applicant.id}",Array.new,"float: left; margin-left: 0px; margin-top: 11px; margin-right: 0px;") %>
          <% end %>
        <% end %>
      </td>
    <% end %>
  </tr>
</table>
