<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('edit_user') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('update_user_information') %></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

  <div id="changepw-form">
    <% form_for :user do |u| %>
      <div class="box">

        <div class="label-field-pair">
          <div class="label-container"><label><%= t('old_password') %>:</label> </div>
          <div class="input-container"> <%= u.password_field :old_password %></div>
        </div>
        <div class="label-field-pair">
          <div class="label-container"><label><%= t('new_password') %>:</label> </div>
          <div class="input-container"><%= u.password_field :new_password %></div>
        </div>
        <div class="label-field-pair">
          <div class="label-container"><label><%= t('confirm_password') %> :</label> </div>
          <div class="input-container"><%= u.password_field :confirm_password %></div>
        </div>


        <%=  submit_tag "â–º #{t('update')}",:class=>'submit_button' %>

      <% end %>
    </div>
  </div>
</div>
