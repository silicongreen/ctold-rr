<% unless @courses.nil? %>  
  <h4 align="center"><%= t('course_text') %></h4>
  <ul id="category-list">
    <% if Batch.active.find(:all, :group => "name").length > 1 %>
      <% unless @batch.blank? %>
        <h4 style="margin-left: 10px;"><%= @batch.name %>  <%= t('batch_text') %></h4>
      <% end %>
    <% end %>  
    <% @courses.each do |course| %>
      <% unless course.courses_batches.blank? %>
      <li class="list<%=cycle('odd', 'even')%>">
        <% courses_batches = course.courses_batches.split(',') %>
        <%#*<div class="category-name"><%= link_to course.course_name, course_path(course) </div>%>
        <div class="category-name"><%=  course.course_name %></div>
        <div id="cate_sections_<%= course.id %>" class="category-sections">
          <% courses_batches.each do |cb| %>
            <% a_course_batch_info = cb.split('--') %>
            <% course_data = Course.find_by_id(a_course_batch_info[1].to_i) %>
            <% unless course_data.blank? %>
              <% unless @for_exam %>
              <%= link_to a_course_batch_info[0].strip.length > 0 ?  a_course_batch_info[0].strip : "no-section", [Course.find(a_course_batch_info[1]), Batch.find(a_course_batch_info[2])], :class=> "sections" %>
              <% else %>
              <%= link_to a_course_batch_info[0].strip.length > 0 ?  a_course_batch_info[0].strip : "no-section", batch_exam_groups_path(Batch.find(a_course_batch_info[2])), :class=> "sections" %>
              <% end %>
            <% end %>
          <% end %>  
        </div>
        <% a_course_batch_info = courses_batches[0].split('--')   %>
        <% batch_id = a_course_batch_info[2]   %>
        <div class="category-name" style="float: right;">
            <%#*new_batch_exam_group_path(Batch.find(batch_id),:class_exam=>true)%>
            <% unless @for_exam %>
            <% ARGV[0] = 'shift' %>
            <% else %>
            <% ARGV[0] = 'exam' %>
            <% end %>
            <% $ggg = @for_exam %>
            <% batchdata = Batch.find_by_id(batch_id)  %>
            <% unless batchdata.blank? %>
              <%= link_to "#{t('exams_text')}", batch_exam_groups_path(batchdata,:class_exam=>true), :class => "user_button", :style => "margin-top: 0px;" %>
            <% end %>
        </div>
      </li>
      <% end %>
    <% end %>
 
  </ul>
<% end %>