<% if @classes.length == 1 %>
<script type="text/javascript">
  j("#section_label_underline").hide();
  j("#section_label").hide();
  j.ajax({
    type: "POST",
    url: "/student/get_batches",
    data: j('#new_student').serialize() + "&course_id=" + <%= @classes[0].id  %>
  })
  .done(function( msg ) {
    j("#section_label_underline").hide();
    j("#section_label").hide();
  });
</script>  
<%= select :student, :section, options_for_select(@classes.map { |c| [c.section_name.strip.length > 0 ? c.section_name.strip+" "+c.session.to_s : "no-section", c.id] }, @classes[0].id.to_i),
    {:prompt => "#{t('select')}"},
    {:onChange => "#{remote_function(:url => {:action => "get_batches"}, :with => "'course_id='+value+'&'+$('new_student').serialize()" ,:before => "$('loading_1').show();",
    :success => "$('loading_1').hide();")}"} %>  

<% else %>
  <script type="text/javascript">
    j("#section_label_underline").show();
    j("#section_label").show();
  </script>  
  <% if @selected_section.to_i > 0 %>
  <script type="text/javascript">

  j.ajax({
    type: "POST",
    url: "/student/get_batches",
    data: j('#new_student').serialize() + "&course_id=" + <%= @selected_section.to_s %>
  })
  .done(function( msg ) {
  });
</script>
  <%= select :student, :section, options_for_select(@classes.map { |c| [c.section_name.strip.length > 0 ? c.section_name.strip+" "+c.session.to_s : "no-section", c.id] }, @selected_section.to_i),
      {:prompt => "#{t('select')}"},
      {:onChange => "#{remote_function(:url => {:action => "get_batches"}, :with => "'course_id='+value+'&'+$('new_student').serialize()" ,:before => "$('loading_1').show();",
      :success => "$('loading_1').hide();")}"} %>  
  <% else %>    
  <%= select :student, :section, options_for_select(@classes.map { |c| [c.section_name.strip.length > 0 ? c.section_name.strip+" "+c.session.to_s : "no-section", c.id] }, @selected_section.to_i),
      {:prompt => "#{t('select')}"},
      {:onChange => "#{remote_function(:url => {:action => "get_batches"}, :with => "'course_id='+value+'&'+$('new_student').serialize()" ,:before => "$('loading_1').show();",
      :success => "$('loading_1').hide();")}"} %>  
  <% end %>
  <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_1", :style =>"display: none;" ) %>
<% end %>