<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transport') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('employee_transport_fee_collection') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('defaulters')}", :controller => "transport_fee", :action => "transport_fee_defaulters_view" %></li>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('students')}", :controller => "transport_fee", :action => "transport_fee_collection_view" %></li>
  </ul>
</div>
</div>
<div id="page-yield">

  <div class="box">

    <div class="label-field-pair">
        <div class="label-container"><label><%= t('select_fee_collection_date') %></label></div>

        <div class="input-container">
          <div id="fees_collection_dates">
            <%= select("id",:id,@transport_fee_collection.map { |n| [n.name, n.id] },
              {:prompt => "#{t('select_details_for')}"},
              {:onChange => "#{remote_function(:url => {:action => "employee_transport_fee_collection_details"}, :with => "'collection_id='+value",:before => "Element.show('loader')",:success => "Element.hide('loader')")}"}) %>
              <%= image_tag("loader.gif",
                :align => "absmiddle",
                :border => 0,
                :id => "loader",
                :style =>"display: none;" ) %>
          </div>
        </div>
      </div>
    </div>
    <div style="clear: both;"></div>
    
    <div id="student">
      <div id="transport_fee_collection_details"></div>
      <div id="modal-box" style="display:none;"></div>
    </div>

  </div>
