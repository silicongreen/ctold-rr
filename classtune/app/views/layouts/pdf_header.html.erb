  <% elsif MultiSchool.current_school.id == 280 %>
    <%#GATEWAY%>
    <table id="pdf-table" width="100%" cellspacing="0">
      <tr>
          <td width="10">
            <h4 align="" class="">

              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/280/logo.png")),:width=> '100%' %>
              <%#= image_tag("/icons/icon.gif", :height=> '32', :width=> '32') %>
            </h4>
          </td>
          <td width="68%">
            <h1 align="" class="st_header_font">&nbsp;&nbsp;&nbsp;&nbsp;  &nbsp;&nbsp;&nbsp;&nbsp;     
              <%#=Configuration.get_config_value('InstitutionName'); %>St. Joseph Higher Secondary School
