      </table>
      <h2>&nbsp;</h2>
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">



              <table id="pdf-table" width="99.8%" cellspacing="0">
                  <% c = 'even'  %>
                  <% number_of_assignment = 0 %>
                  <% unless @report_data['report']['exams'].blank? %>
                    <% @report_data['report']['exams'].each do |report| %>
                      <% number_of_assignment = number_of_assignment+1 %>
                    <% end %>
                  <% end %> 
                  <% if number_of_assignment > 1 %>
                   <tr class="table-header">
                       <td class="col-pdf no-warp" rowspan="2"><b><%= "Subject" %></b></td>
                       <td class="col-pdf" colspan="<%= number_of_assignment %>">Assessment</td>
                   </tr>
                    <tr class="table-header">
                        <% unless @report_data['report']['exams'].blank? %>
                          <% @report_data['report']['exams'].each do |report| %>
                            <td class="col-pdf"><%= report['exam_name'] %></td>
                          <% end %>
                        <% end %> 
                    </tr>
                  
                  <% else %>
                  <tr class="table-header">
                      <td class="col-pdf no-warp" width="50%"><b><%= "Subject" %></b></td>
                      <% unless @report_data['report']['exams'].blank? %>
                        <% @report_data['report']['exams'].each do |report| %>
                          <td class="col-pdf"  width="50%"><%= report['exam_name'] %></td>
                        <% end %>
                      <% end %> 
                  </tr>
                  <% end %>
                  <% total_mark = 0 %>
                  <% full_mark = 0 %>
                  <% total_grade = 0 %>
                  <% total_subject = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% subjectdata = Subject.find(subjects['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>@student.id.to_s,:subject_id=>subjects['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                        <% next %>
                      <% end %>
                      <% if subjects['no_exams_sjws'].to_i == 1  %>
                        <% next %>
                      <% end %>
                      <% if !@std_subject_hash_type.blank? %>
                        <% if @std_subject_hash_type.include?(@student.id.to_s+"|||"+subjects['id'].to_s+"|||4") %>
                          <% next %>
                        <% end %>
                      <% end %>
                      <% total_subject = total_subject+1 %>
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <td class="col-pdf  no-warp align-left-baf"><%= subjects['name'] %></td>
                          <% max_mark = 0 %>
                          <% obtain_mark = 0 %>
                          <% unless @report_data['report']['exams'].blank? %>
                            <% @report_data['report']['exams'].each do |report| %>
                              <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                <% max_mark = max_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                              <% end %>
                            <% end %>
                          <% end %>
                          <% unless @report_data['report']['exams'].blank? %>
                            <% @report_data['report']['exams'].each do |report| %>
                              <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                <td class="col-pdf"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'] %></td>
                                <% obtain_mark = obtain_mark+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                              <% else %>
                                <td class="col-pdf">-</td>
                              <% end %>  
                            <% end %>
                          <% end %>
                          <% obtain_mark = obtain_mark.round() %>
                          


                          <%
                          main_mark = 0
                          if obtain_mark > 0
                            main_mark = (obtain_mark.to_f/max_mark.to_f)*100
                            end
                          grade = GradingLevel.percentage_to_grade(main_mark, @batch.id)
                          highest_mark = 0
                          if !@subject_highest.blank? and !@subject_highest[subjects['id'].to_i].blank?
                            highest_mark = @subject_highest[subjects['id'].to_i].to_f
                            end
                        %>
                          <% if !grade.blank? and !grade.name.blank? %>
                            <% total_grade = total_grade+grade.credit_points.to_f %>
                          <% end %>
                          <% total_mark = total_mark+obtain_mark %>
                          <% full_mark = full_mark+max_mark %>
                      </tr>
                    <% end %>
                  <% end %>
                  
                  <% grade_point_avg = 0 %>
                  <% if total_grade > 0 && total_subject > 0 %>
                    <% grade_point_avg = total_grade.to_f/total_subject.to_f %>
                    <% grade_point_avg = (grade_point_avg.to_f*100).to_f.round() %>
                    <% grade_point_avg = grade_point_avg.to_f/100 %>
                    <% if grade_point_avg > 5 %>
                      <% grade_point_avg = 5.00 %>
                    <% end %>
                  <% end %>
                  <% grade = GradingLevel.grade_point_to_grade(grade_point_avg, @batch.id) %>
                      
                  <%  
                    
                    group_exams = GroupedExam.find_all_by_connect_exam_id(@connect_exam_obj.id) 
                    
                    @all_subjects = []
                    group_exams.each do |group_exam|
                      allexams = Exam.find_all_by_exam_group_id(group_exam.exam_group_id);
                      allexams.each do |exam|
                        if !@all_subjects.include?(exam.subject.id)
                          
                          @all_subjects << exam.subject.id
                        end
                      end
                    end 
                  %>
                   <% no_exam_subject = 0 %> 
                   <% unless @report_data['report']['no_exam_subject_resutl'].blank? %>
                    <% @report_data['report']['no_exam_subject_resutl'].each do |subjects| %>
                      <% subjectdata = Subject.find(subjects['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>@student.id.to_s,:subject_id=>subjects['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                        <% next %>
                      <% end %>

                    <%  if @all_subjects.include?(subjects['id'].to_i) %>
                        <% total_subject = total_subject+1 %>
                        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                            <% no_exam_subject = no_exam_subject+1 %>
                          <td class="col-pdf no-warp align-left-baf"><b><%= subjects['subject_name'] %></b></td>
                          <% unless @report_data['report']['exams'].blank? %>
                            <% @report_data['report']['exams'].each do |report| %>
                                <% if !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank? and !report['result'][report['exam_id']][subjects['id']]['remarks'].blank?  %>
                                  <% remarks_exam = report['result'][report['exam_id']][subjects['id']]['remarks'] %>
                                  <% if !subjects['code'].upcase.index("BANG").nil? %>
                                      <td class="col-pdf"><b>
                                          <% if remarks_exam.to_i == 1 %>
                                                Ex.
                                          <% elsif remarks_exam.to_i == 2 %>
                                                V.G.
                                          <% elsif remarks_exam.to_i == 3 %>
                                                G.
                                          <% elsif remarks_exam.to_i == 4 %>
                                                N.I.
                                          <% end %> 
                                        </b></td>
                                  <% else %>
                                      <td class="col-pdf"><b>
                                          <% if remarks_exam.to_i == 1 %>
                                                Ex.
                                          <% elsif remarks_exam.to_i == 2 %>
                                                V.G.
                                          <% elsif remarks_exam.to_i == 3 %>
                                                G.
                                          <% elsif remarks_exam.to_i == 4 %>
                                                N.I.
                                          <% end %>      
                                      </b></td>
                          
                                  <% end %>
                                  
                                <% else %>
                                  <td class="col-pdf"><b>-</b></td>
                                <% end %>
                            <% end %>
                          <% end %>
                           
                        </tr>
                      <% end %>
                    <% end %>
                  <% end %>

              </table>
              
              <h2>&nbsp;</h2>
              
              <table id="pdf-table"  width="100%" class="left-table break-table odd-table height-exam ev-table" cellspacing="0" >
                  <tr class="even">
                      <td class="no-border padding-zero">
                        <table id="pdf-table"  width="36.8%" class="left-table break-table odd-table height-exam table-padding-big" cellspacing="0" >
                            <tr class="even"><td colspan='2'>Evaluation Criteria</td></tr>
                            <tr class="even"><td>Ex.</td><td>Excellent</td></tr>
