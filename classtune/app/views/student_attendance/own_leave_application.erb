<div id="page-yield" class="bg-disable">

  <div class="header-wrapper">
    <div class="header-title">
      <div class="header-icon">
        <%= image_tag '/images/icons/leave-management.png', :html => {:alt => 'leave_management'} %>
      </div>
      <div class="header-title-text-wrapper">
        <div class="header-title-main-text f2">
          <%=t('leave_application')%>
        </div>
        <div class="header-title-sub-text">
          <%= @local_tzone_time.to_date %>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="tabbed-header-wrapper">
      <ul class="header-tabs">
        <li class="active">
          <%= link_to "Leave Management", :controller => 'student_attendance', :action => 'leaves', :id => @student.id %>
        </li>

      </ul>
    </div>
  </div>

  <div class="clearfix"></div>

  <div id="data_div">
    <div id="leave-info"  style="background:#fff; padding: 20px; float:left; width:96%">
    <ul id="category-list">
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('name') %>:</div>
        <%= @student.first_name %></li>
     
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('leave_start_date') %>:</div>
        <%= @applied_leave.start_date.strftime("%d %b, %Y") %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('leave_end_date') %>:</div>
        <%= @applied_leave.end_date.strftime("%d %b, %Y") %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name">Subject:</div>
        <%= @applied_leave.leave_subject %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('reason') %>:</div>
        <%= @applied_leave.reason %></li>
      
      <% unless @applied_leave.attachment_file_name.nil? %>
        <li class="list<%= cycle('odd','even') %> download-link">
          <div class="category-name"><%= "Document" %>:</div>
          <%= link_to 'Download Attachment', :controller => "student_attendance", :action => "download_attachment",:target=>"student" , :id=>@applied_leave.id %>
        </li>
      <% end %>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('status') %>:</div>
        <%= "#{t('approved')}" if @applied_leave.approved == true and @applied_leave.viewed_by_teacher == true %>
        <%= "#{t('denied')}" if @applied_leave.approved == false and @applied_leave.viewed_by_teacher == true %>
        <%= "#{t('pending_approval')}" if(@applied_leave.approved == false or @applied_leave.approved.nil?) and @applied_leave.viewed_by_teacher == false %>
      </li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('teacher_remark') %>:</div>
        <%= @applied_leave.teacher_remark %></li>
    </ul>

    <%= link_to "â–º #{t('cancel_leave')}",
      {:action => "cancel_application", :id=>@applied_leave.id}, :class=>'user_button' ,:confirm=>"#{t('delete_confirm_msg')}" unless @applied_leave.viewed_by_teacher == true %>

  </div>
    
  </div>
  
    
</div>

