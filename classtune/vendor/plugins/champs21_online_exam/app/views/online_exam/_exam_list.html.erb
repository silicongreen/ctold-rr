<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <tr class="tr-head">
    <td>
      <%= t('name') %>
    </td>
     <td>
      Subject
    </td>
    <td>
      <%= t('start_date') %>
    </td>
    <td>
      <%= t('end_date') %>
    </td>
    <td>
    </td>
  </tr>

  <tr class="tr-blank"></tr>
  <% @exams.each do |e| %>
    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-3"><%= link_to "#{e.name}",:action=>"exam_result" ,:id=>e.id %></td>
      <td class="col-3"><%= link_to "#{e.subject.name}",:action=>"exam_result" ,:id=>e.id %></td>
      <td class="col-3"><%= e.start_date %>&nbsp;&nbsp;<%= Time.parse(e.start_time.to_s).strftime("%I:%M %p") unless e.start_time.blank? %></td>
      <td class="col-1"><%= e.end_date %>&nbsp;&nbsp;<%= Time.parse(e.end_time.to_s).strftime("%I:%M %p") unless e.end_time.blank? %></td>
      <td class="col-1"><%= link_to "#{t('view_result_text')}",:action=>"exam_result" ,:id=>e.id %></td>
    </tr>
  <% end %>
</table>
