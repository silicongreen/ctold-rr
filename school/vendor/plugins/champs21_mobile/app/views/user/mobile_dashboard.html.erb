<ul class="nav nav-tabs nav-stacked dashboard">
  <li><%= link_to "#{image_tag("/images/champs21_mobile/message.png",:border => 0)} #{t('messages')} (#{@current_user.check_reminders})",:controller => "reminder", :action => "mobile_index" %></li>
  <li><%= link_to "#{image_tag("/images/champs21_mobile/calendar.png",:border => 0)} #{t("calender_text")}",:controller => "calendar", :action => "mobile_index" %></li>
  <% if @user.admin? %>
    <li><%= link_to "#{image_tag("/images/champs21_mobile/attendance.png",:border => 0)} #{t('attendance')}",:controller => "attendances", :action => "mobile_attendance" %></li>
  <% elsif @user.employee? %>
    <% @employee= @user.employee_record  %>
    <% @employee_subjects= @employee.subject_ids  %>
    <% @employee_batches=@employee.batches %>
    <% @attendance_type = Configuration.find_by_config_key('StudentAttendanceType') %>
    <% if @attendance_type.config_value == 'Daily' %>
      <% if @employee_batches.present? or @user.privileges.map{|p| p.name}.include?("StudentAttendanceRegister") %>
        <li><%= link_to "#{image_tag("/images/champs21_mobile/attendance.png",:border => 0)} #{t('attendance')}",:controller => "attendances", :action => "mobile_attendance" %></li>
      <% end %>
    <% else %>
      <% if @employee_batches.present? or @employee_subjects.present? or @user.privileges.map{|p| p.name}.include?("StudentAttendanceRegister") %>
        <li><%= link_to "#{image_tag("/images/champs21_mobile/attendance.png",:border => 0)} #{t('attendance')}",:controller => "attendances", :action => "mobile_attendance" %></li>
      <% end %>
    <% end %>
  <% end %>
  <% if @user.student? %>
    <% if permitted_to? :student_mobile_view, :timetable %>
      <li><%= link_to "#{image_tag("/images/champs21_mobile/timetable.png",:border => 0)} #{t('timetable_text')}",:controller => "timetable", :action => "student_mobile_view",:id=>@user.student_record.id %></li>
    <% end %>
    <% if permitted_to? :student_attendance_view, :attendance_reports %>
      <li><%= link_to "#{image_tag("/images/champs21_mobile/attendance.png",:border => 0)} #{t('attendance_report')}",:controller => "attendance_reports", :action => "student_attendance_view",:id=>@user.student_record.id %></li>
    <% end %>
    <% if permitted_to? :mobile_fee, :student %>
      <li><%= link_to "#{image_tag("/images/champs21_mobile/finance.png",:border => 0)} #{t('fee_status')}",:controller=>:student,:action=>:mobile_fee, :id=>@user.student_record.id %></li>
    <% end %>
  <% elsif @user.parent? %>
    <% if permitted_to? :student_mobile_view, :timetable %>
      <li><%= link_to "#{image_tag("/images/champs21_mobile/timetable.png",:border => 0)} #{t('timetable_text')}",:controller => "timetable", :action => "student_mobile_view",:id=>@user.parent_record.id %></li>
    <% end %>
    <% if permitted_to? :student_attendance_view, :attendance_reports %>
      <li><%= link_to "#{image_tag("/images/champs21_mobile/attendance.png",:border => 0)} #{t('attendance_report')}",:controller => "attendance_reports", :action => "student_attendance_view",:id=>@user.parent_record.id %></li>
    <% end %>
    <% if permitted_to? :mobile_fee, :student %>
      <li><%= link_to "#{image_tag("/images/champs21_mobile/finance.png",:border => 0)} #{t('fee_status')}",:controller=>:student,:action=>:mobile_fee, :id=>@user.parent_record.id %></li>
    <% end %>
  <% end %>


  <% if permitted_to? :employee_mobile_view, :timetable %>
    <li><%= link_to "#{image_tag("/images/champs21_mobile/timetable.png",:border => 0)} #{t('timetable_text')}",:controller => "timetable", :action => "employee_mobile_view",:id=>@user.employee_record.id %></li>
  <% end %>

  <% if permitted_to? :mobile_leave, :employee_attendance %>
    <% if @user.employee_record.present? %>
      <% unless @user.employee_record.reporting_manager_id.nil? %>
        <li>
          <%= link_to "#{image_tag("/images/champs21_mobile/leave.png",:border => 0)} #{t('leave_application')}",:controller=>:employee_attendance,:action=>:mobile_leave, :id=>@user.employee_record.id %>
        </li>
      <% end %>
    <% end %>
  <% end %>
  <li><%= link_to "#{image_tag("/images/champs21_mobile/logout.png",:border => 0)} #{t('log_out')} (#{@user.first_name} #{@user.last_name})",:controller=>:user,:action=>:mobile_logout %></li>
</ul>
