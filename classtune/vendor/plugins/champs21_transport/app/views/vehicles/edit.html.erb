<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transport_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('edit_vehicle_details') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('view_all')}", vehicles_path %></li>
  </ul>
</div>
</div>
<div id="page-yield">
  <div id="vehicle_form">
    <% form_for(@vehicle) do |v| %>
      <%= error_messages_for :vehicle %>
      <% if @vehicle.errors.any? %>
      <% end %>

      <div class="label-field-pair">
        <label for="vehicle_no"><%= t('vehicle_no') %><span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= v.text_field :vehicle_no %></div>
      </div>

      <div class="label-field-pair">
        <label for="vehicle_no"><%= t('route') %><span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= v.select :main_route_id, @routes.map{|r| [r.destination,r.id]} %></div>
      </div>

      <div class="label-field-pair">
        <label for="vehicle_no"><%= t('no_of_seats') %><span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= v.text_field :no_of_seats %></div>
      </div>
      
      <% @employees = Employee.all %>
      <div class="label-field-pair">
        <label for="vehicle_no"><%= "Driver" %><span class="necessary-field">*</span> </label>
        <div class="text-input-bg">
        <%= v.text_field :driver %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="vehicle_no"><%= "Bus Mother" %><span class="necessary-field">*</span> </label>
        <div class="text-input-bg" style="margin-left:10px; margin-top:5px;">

        <%= select_tag   "vehicle[bus_mother]", options_for_select([[t('select_employee'),""]]+@employees.map{|em| [em.full_name,em.id]},@vehicle.bus_mother),{:class => 'js-example-basic-single'} %>
  
        </div>
      </div>
      <div class="label-field-pair">
        <label for="vehicle_no"><%= "Contact Number" %> </label>
        <div class="text-input-bg">
         <%= v.text_field :bus_mother_contact %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="vehicle_no"><%= "Support Staff" %></label>
        <div class="text-input-bg" style="margin-left:10px; margin-top:5px;">

        <%= select_tag   "vehicle[support_staff]", options_for_select([[t('select_employee'),""]]+@employees.map{|em| [em.full_name,em.id]},@vehicle.support_staff),{:class => 'js-example-basic-single'} %>
  
        </div>
      </div>


      <div class="label-checkbox-pair">
        <label class="status" for="status"><%= t('status') %></label>
        <div id="radio-buttons">
          <%= v.radio_button  "status", "Active", :checked => "checked" %>
          <label class="label_for_status" for="add_grade_status_true"><%= t('active') %></label>

          <%= v.radio_button  "status", "Inactive" %>
          <label class="label_for_status" for="add_grade_status_false"><%= t('inactive') %></label>
        </div>
      </div>
      <%= submit_tag "", :value => "â–º #{t('update')}", :class => "submit_button" %>
    <% end %>
  </div>
</div>

<script>
  var jq = jQuery.noConflict();
  jq(document).ready(function() {
    jq('.js-example-basic-single').select2();
  });
  
</script> 
<style>
    .category-list li span
    {
      float: none;
      margin-right: 0px;
      text-align:inherit;
      width:auto;
     
    }
    
</style>
