<div id="page-yield" class="available_sections1 baf_shaheen">
    <div class="page1"> </div>
    <div class="section1 row" >
        <center>

            <h4 align="center"><%= @connect_exam_obj.name %> - <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i+1:@connect_exam_obj.published_date.strftime("%Y").to_i+1 %> - Merit List</h4>

            <% if !@student_result.blank? %>
              <table id="pdf-table" width="100%" cellspacing="0">
                  <tr class="table-header">
                      <td class="col-pdf" rowspan="2">Srl</td>
                      <td class="col-pdf" rowspan="2">StudentId</td>
                      <td class="col-pdf" rowspan="2">Class Roll</td>
                      <td class="col-pdf" rowspan="2">Student Name</td>
                      <td class="col-pdf" rowspan="2">Academic Information</td>
                      <td class="col-pdf" rowspan="2">Total Gp</td>
                      <td class="col-pdf" rowspan="2">GPA</td>
                      <td class="col-pdf" rowspan="2">Total Marks</td>
                      <td class="col-pdf" rowspan="2">LG</td>
                      <td class="col-pdf" colspan="2">Position</td>
                  </tr> 
                  <tr class="table-header">
                      <td class="col-pdf" colspan="1">Section</td>
                      <td class="col-pdf" colspan="1">Class</td>
                  </tr>
                  <% std_count = 0 %>
                  <% srl = 0 %>
                  <% @student_result.each do |std_result| %>
                    <%  std_count = std_count+1 %>
                    <%  srl = srl+1 %>
                    <% if std_count>80 %>
                      <% std_count = 0 %>
                      <tr class="page-break">
                          <td colspan="100">&nbsp;</td>
                      </tr>
                      <tr class="table-header">
                          <td class="col-pdf" rowspan="2">Srl</td>
                          <td class="col-pdf" rowspan="2">StudentId</td>
                          <td class="col-pdf" rowspan="2">Class Roll</td>
                          <td class="col-pdf" rowspan="2">Student Name</td>
                          <td class="col-pdf" rowspan="2">Academic Information</td>
                          <td class="col-pdf" rowspan="2">Total Gp</td>
                          <td class="col-pdf" rowspan="2">GPA</td>
                          <td class="col-pdf" rowspan="2">Total Marks</td>
                          <td class="col-pdf" rowspan="2">LG</td>
                          <td class="col-pdf" colspan="2">Position</td>
                      </tr> 
                      <tr class="table-header">
                          <td class="col-pdf" colspan="1">Section</td>
                          <td class="col-pdf" colspan="1">Class</td>
                      </tr>
                    <% end %>    
                    
                      <tr class="table-header">
                        <td class="col-pdf" rowspan="2"><%= srl %></td>
                        <td class="col-pdf" rowspan="2"><%= std_result['sid'].to_s %></td> 
                        <td class="col-pdf" rowspan="2"><%= std_result['roll'].to_s %></td> 
                        <td class="col-pdf" rowspan="2"><%= std_result['name'].to_s %></td>
                        <td class="col-pdf" rowspan="2"><%= @batch.full_name %></td>
                        <td class="col-pdf" rowspan="2"><%= std_result['gpa'].to_s %></td>
                        <td class="col-pdf" rowspan="2"><%= std_result['gp'].to_s %></td>
                        <td class="col-pdf" rowspan="2"><%= std_result['grand_total'].to_s %></td>
                        <% if !@student_position_first_term.blank? && !@student_position_first_term[std_result['id'].to_i].blank? %>
                          <td class="col-pdf" rowspan="2"><%= std_result['lg'] %></td>
                        <% else %> 
                          <td class="col-pdf" rowspan="2"><%= "F" %></td>
                        <% end %> 
                          
                        <% if !@student_position_first_term_batch.blank? && !@student_position_first_term_batch[std_result['id'].to_i].blank? %>
                          <td class="col-pdf" rowspan="2"><%= @student_position_first_term[std_result['id'].to_i] %></td>
                        <% else %>
                          <td class="col-pdf" rowspan="2" colspan="2">
                          <%
                          iloop = 0
                          unless std_result['subject_failed'].blank?
                            std_result['subject_failed'].each do |sub_failed|
                              %><%= sub_failed %><%
                              if iloop > 0
                                %><%= "<br/>" %><%  std_count = std_count+1 %><%
                              end  
                              iloop = iloop+1
                            end 
                            
                          end  
                        
                          %>
                          </td>
                         
                        <% end %> 
                         <% if !@student_position_first_term.blank? && !@student_position_first_term[std_result['id'].to_i].blank? %>
                            <td class="col-pdf" rowspan="2"><%= @student_position_first_term[std_result['id'].to_i] %></td>
                          <% end %>
                      </tr>

                
                    <% end %>

              </table>     
            <% end %>
        </center>
    </div>
</div>

<style>
    .baf_shaheen table#pdf-table tr.table-header td.name-left
    {
        text-align: left !important;
    }
</style>    
