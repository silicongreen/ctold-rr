    .student-security-form{background-color: #fff; width:96%; padding:20px; text-align: center;}
    .row{width:100%; display: inline-block; border-bottom: 2px solid #ddd;} 
    .col-6{width: 45%; padding: 5px; float: left;}
    .gallery{width:100%; height: 900px; background-color: #fff;}
    .student-security-form a {
        background-color: white;
        color: black;
        border: 2px solid #4CAF50;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }
    div.galleryimg {
        margin: 10px 10px;
        border: 1px solid #ccc;
        float: left;
        width: 30%;
    }

    div.galleryimg:hover {
        border: 1px solid #777;
    }

    div.galleryimg img {
        width: 100%;
    }

    div.desc {
        padding: 15px;
        text-align: center;
    }

</style>

