<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('grading_levels_text') %></div>
<div id="inner-tab-menu">
  <% if permitted_to? :index, :course %>
    <ul>
      <li class='themed_bg themed-dark-hover-background'><%= link_to t('course_text'), courses_path %></li>
    </ul>
  <% end %>
</div>
</div>
<div id="page-yield">
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="label-field-pair">
      <label for="student_course"><%= t('batch') %>
        <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
      </label>
      <div class="text-input-bg">
        <%= select :course, :id,
          @courses.map {|c| [c.course_name, c.id] },
          {:prompt => "#{t('common')}"},
          {:onchange => "#{remote_function(
          :url => { :action => 'show' },
          :with => "'course_id='+value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"  )}"} %>
      </div></div>


    <div id="grading-levels" ><%= render :partial => "grading_levels" %></div>
    <div id="modal-box" style="display:none;"></div>


  </div>
</div>
<script type="text/javascript">
  function enable_grading_level( obj ){
      if ( j(obj).prop('checked') )
      {
        j("." +  j(obj).val()).show();
        if ( j(obj).val() == "normal" )
        {
          j(".percentage").show();
          j("#percentage").hide();
        }
        else
        {
          j(".normal").hide();
          j("#normal").hide();
          j("#percentage").show();
        }
        j(".grading_type[value!=" + j(obj).val() + "]").removeAttr("checked");
        j("#grading_level_grading_type").val("true");
        j("#grading_level_type_data").val(j(obj).val());
      }
      else
      {
        j("." +  j(obj).val()).hide();
        if ( j(obj).val() == "normal" )
        {
          j(".percentage").hide();
        }
        j(".grading_type").removeAttr("checked");
        j("#grading_level_grading_type").val("false");
      }
  }
</script>

<style>
    .percentage{
        display: none;
    }
    .normal{
        display: none;
    }
</style>