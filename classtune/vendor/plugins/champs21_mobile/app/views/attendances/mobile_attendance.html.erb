<fieldset>
  <div class="span6 top_separation" style="margin-left: 2%">
    <%= select :attendances,:batch_id,
      @batches.map {|b| [b.full_name, b.id]},
      {:prompt => t("select_batch"),:selected=>@batch.id},
      {:onChange => "#{remote_function(:url => {:action => "mobile_attendance"},
      :with => "'batch_id='+ value"
      )}",:class=>"span3 full_width"} %>
  </div>
</fieldset>
<fieldset>
  <div id="subject_list">
    <% unless  @config.config_value=="Daily" %>
      <%= render :partial=>'subjects_list' %>
    <% end %>
  </div>
</fieldset>
<div id="student_list">
  <%= render :partial=>"students_list" %>
</div>
