<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('add') + ' ' + t('syllabus_text') %></h1>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :syllabus do |f| %>

    <%= error_messages_for :syllabus %>

    <div id="add_news_form">
      <div class="news_label_field">
        <label for="title"><%= t('title') %></label>
        <div id="news_title_text_field_bg"><%= f.text_field :title %></div>
      </div>
      <div class="label-field-pair">
        <label for="student_course"><%= t('student_batch') %>:
          <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
        </label><br /><br />
        <div class="text-input-bg">
          <%= select :syllabus, :batch_id,
            @batches.map {|b| [b.full_name, b.id] },
            {:prompt => t('select_a_batch')},
            {:onchange => "#{remote_function(
            :url => { :action => 'show' },
            :with => "'batch_id='+value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"  )}"} %>
        </div>
      </div>
      
      <div id="syllabus" class="news_label_field"></div>
      </br></br>
      <div class="news_label_field">
        <label for="news_content"><%= t('content') %></label>
        <div id="news_content_text_field_bg" style="">
          <%= f.redactor :content %>
        </div>
      </div>
    </div>

    <%= submit_tag "", :value => "► #{t('save')}", :class => "news_publish_button", :disable_with => "► #{t('please_wait')}" %>

  <% end %>
  <%= load_redactor_script %>
</div>

