<div class="loader-image">
      <%= image_tag("loader2.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader5",
        :style =>"display: none;" ) %>
  </div>
<div class="clearfix"></div>
 <% unless @students.nil? || @students.empty? %>
  
  <div class="CSSTableGenerator" id="table_update" style="width: 97%; float:left;margin-top: 20px;">
        
     
      <table id="listing table-design">
            <tr class="table-header">
              <td class="col-2">Student Id</td>
              <td class="col-2">Name</td>
              <td class="col-2">Class</td>
              <% if @history_type.to_i == 1 %>
                <td class="col-2">Admission Date</td>
              <% else %>
                <td class="col-2">Archived Date</td>
              <% end %>
            </tr> 
        
        <% @students.each do |student| %>
                  
            <tr class="tr-<%= cycle('odd', 'even') %>">
              <td class="col-2"><%= student.admission_no %></td>
              <td class="col-2"><%= student.full_name %></td>
              <td class="col-2"><%= student.batch.full_name %></td>
              <% if @history_type.to_i == 1 %>
                <td class="col-2"><%= I18n.l(student.admission_date,:format=>"%d %b %Y") %></td>
              <% else %>
                  <td class="col-2"><%= I18n.l(student.date_of_leaving,:format=>"%d %b %Y") %></td>
              <% end %>
              
            </tr>          
        <% end %>
           
      </table>
   
    
    <div class="clearfix"></div>

    <%= will_paginate @students,:params => { :from_date => @from_date,:to_date => @to_date,:history_type => @history_type }, :renderer => 'RemoteLinkRenderer', :remote=>{:update=>'students'}, :page_links => false %>
    <div class="clearfix"></div>
    <%= link_to "Excell Report", {:controller => "student", :action => "student_history_excell",:from_date => @from_date,:to_date => @to_date,:history_type => @history_type },:target => '_blank' %>
  </div>
  
<% end %> 
<%= stylesheet_link_tag 'list_table' %>
<%= stylesheet_link_tag 'pagination_and_table' %>
