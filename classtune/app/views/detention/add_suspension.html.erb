<div id="page-yield" class="ch_news_wrapper" style="margin-top: 0px;">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :suspension , :html => { :multipart => true } do |f| %>

    <%= error_messages_for :suspension %>

    <div id="add_news_form">
      <div class="news_label_field">
        <label for="title"><%= t('select_a_batch') %></label>
        <div class="text-input-bg">
        <%= select :suspension, :batch_id,
                  @batches.map {|b| [b.full_name, b.id] },
                  {:prompt => "Select a Class"},
                  {:onchange => "#{remote_function(
                  :url => { :action => 'suspension_student_list' },
                  :update => 'student-select-div',
                  :with => "'batch_id='+value",
                  :before => "Element.show('loader')",
                  :success => "Element.hide('loader')"  )}"} 
       %>
         <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
        </div>
      </div>
      <div>
          
      </div>
      
      <div class="news_label_field" id="student-select-div">
        <label for="title">Student</label>
        <div class="text-input-bg">
          <select name="suspension['studdent_id']" >
              <option value="">Select a Student</option>
          </select>
        </div>
      </div>
      
      <div class="news_label_field">
        <label for="title">Number of Detention</label>
        <div class="text-input-bg">
          <input type="text" name="suspension[total_detention]" />
        </div>
      </div>
      <div class="news_label_field"  style="width:100%;">
        <label for="title">Reason</label>
         <div style="float:left;clear:both; margin:5px 0px; width:100%;">
            <a href="javascript:void(0);" class="button_link" onClick="add_reason_text('damaging school property')" >damaging school property</a>
            &nbsp;|&nbsp;
            <a href="javascript:void(0);" class="button_link" onClick="add_reason_text('serious misbehaviour')" >serious misbehaviour</a>
            &nbsp;|&nbsp;
            <a href="javascript:void(0);" class="button_link" onClick="add_reason_text('dishonesty during examination')" >dishonesty during examination</a>
            &nbsp;|&nbsp;
            <a href="javascript:void(0);" class="button_link" onClick="add_reason_text('insulting behaviour towards a teacher')" >insulting behaviour towards a teacher</a>
            &nbsp;|&nbsp;
            <a href="javascript:void(0);" class="button_link" onClick="add_reason_text('stealing')" >stealing</a>
        </div>    
        <div id="textarea_field_bg" style="float:left;clear:both; margin:5px 0px;">
            <textarea type="text" cols="70" rows="6" name="suspension[reason]" id="suspension_reason" /></textarea>
            
        </div>
      </div>
      <div class="news_label_field">
        <label for="name"> Suspension Start Date</label>
        <div class="time-select-field"><%= calendar_date_select_tag "suspension[start_date]","", :class=>"text-input-bg" ,:readonly=>true,:popup=>:force %></div>
      </div>
      <div class="news_label_field">
        <label for="name"> Suspension End Date</label>
        <div class="time-select-field"><%= calendar_date_select_tag "suspension[end_date]","", :class=>"text-input-bg" ,:readonly=>true,:popup=>:force %></div>
      </div>
      <div class="news_label_field">
        <label for="name"> Principal meeting Date </label>
        <div class="time-select-field"><%= calendar_date_select_tag "suspension[meeting_date]","", :class=>"text-input-bg" ,:readonly=>true,:popup=>:force %></div>
      </div>
        
      <div class="news_label_field">
        <label for="name">Principal meeting Start Time</label>
        <div class="time-select-field"><%= time_select :suspension, :start_time, {:minute_step => 5} %></div>
      </div>

      <div class="news_label_field">
        <label for="name">Principal meeting End Time</label>
        <div class="time-select-field"><%= time_select :suspension, :end_time, {:minute_step => 5} %></div>
      </div>
     
      
    </div>
    
<div class="news_label_field">
    <%= submit_tag "", :value => "► #{t('save')}", :class => "news_publish_button", :disable_with => "► #{t('please_wait')}" %>
</div>    
  
    

  <% end %>
  <%= load_redactor_script %>
</div>
