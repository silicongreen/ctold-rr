<ul class="category-list">
  <% unless @batch_groups.empty? %>
    <li class="heading"><%= t('grouped_batches') %></li>
    <% @batch_groups.each  do |batch_group| %>
      <li class="list<%=cycle('odd', 'even')%>">
        <div class="category-name"><%= batch_group.name %></div>
        <div class="category-name"><% batch_group.grouped_batches.each do|b| %>
            <div class="category-name"><%= b.batch.name %></div>
          <% end %></div>
        <div class="category-edit"><%= link_to_remote "#{t('edit_text')}", :url=>{:controller=>"courses",:action=>"edit_batch_group", :id=>batch_group.id}  if permitted_to? :edit_batch_group, :courses %></div><div class="category-delete">   <%= link_to_remote "#{t('delete_text')}", :url=>{:controller=>"courses",:action=>"delete_batch_group", :id=>batch_group.id}, :confirm=>"#{t('delete_confirm_msg')}" if permitted_to? :delete_batch_group, :courses %></div>
      </li>
    <% end %>
  <% else %>
    <p class="flash-msg"><%= t('no_grouped_batches_found') %></p>
  <% end %>
</ul>

