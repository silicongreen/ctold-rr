<% if @current_user.admin? %> 
<div class="x_panel">
<% else %>    
<div class="x_panel tile fixed_height_500" style="height: 630px;">    
<% end %>        
  <div class="x_title">
      <h2><i class="fa fa-calendar"></i>&nbsp;&nbsp;<%= t('event_text') %></h2>
    <ul class="nav navbar-right panel_toolbox">
      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
    </ul>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <div class="dashboard-widget-content"> 
      <ul id="events_dashboard" class="list-unstyled timeline widget">
        <%= image_tag("loading_spinner.gif", :align => "absmiddle", :border => 0, :id => "loading_events", :style =>"display: none; padding-left: 20%; padding-top: 10%; padding-bottom:10%;" ) %>  
      </ul>
    </div>
    <div class="text-center">
        <a href="/calendar/list_events"><strong>See All Events</strong>&nbsp;&nbsp;<i class="fa fa-angle-right"></i></a>
    </div>  
  </div>
</div>