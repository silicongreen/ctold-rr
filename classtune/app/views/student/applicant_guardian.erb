<div id="content-header">
<%= show_header_icon %>
  <h1>Guardians</h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('view_details') %> </div>

</div>
<div id="page-yield">

    <% form_for(@student, :url => {:action=> 'applicant_guardian'}, :html=> {:id=>'new_guardian'}) do |s| %>  
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <% end %>
    <div id="guardians"></div>

</div>

<script>
  j( document ).ready(function() {
      j("#guardians").show();
      j.ajax({
        type: "POST",
        url: "/student/list_applicant_guardian"
      })
    .done(function( msg ) {
      j("#guardians").show();
    });
});
function approve_checked_student()
{
   var std_data = checkbox_test();
   if(std_data)
   {
     if(confirm("Are you sure you want to approve checked student and guardian?"))
     {
      j.ajax({
         type: "POST",
         url: "/student/list_applicant_guardian",
         data: "status_change=1&student_ids="+std_data
       })
       .done(function( msg ) {
       });
      }
     
   }
   else
   {  
      alert("please check at least one guardian");
   }

}
function delete_checked_student()
{
   var std_data = checkbox_test();
   if(std_data)
   {
     if(confirm("Are you sure you want to parmantly remove checked guardians?"))
     {
        j.ajax({
           type: "POST",
           url: "/student/list_applicant_guardian",
           data: "status_change=0&student_ids="+std_data
         })
         .done(function( msg ) {
         });
      }
     
   }
   else
   {  
      alert("please check at least one guardian");
   }

}
    

 function checkbox_test() {
    var counter = 0,
    i = 0,  
    url = '',    
    input_obj = document.getElementsByTagName('input');
    for (i = 0; i < input_obj.length; i++) {
        if (input_obj[i].type === 'checkbox' && input_obj[i].checked === true) {
            counter++;
            url = url +"|"+input_obj[i].value;
        }
    }
    // display url string or message if there is no checked checkboxes
    if (counter > 0) 
    {
        url = url.substr(1);
        return url;
    }
    else {
        return false;
    }
}   


</script>
