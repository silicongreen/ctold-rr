<fieldset class="margin-bottom-20">
  <h1 class="content-head">Schools</h1>
  <%= link_to '+ New school', new_school_path, :class  => 'button-red float-right' if permitted_to? :new, :schools%>
</fieldset>
<div class="content-div container-width">
  <div class='content-list'>
    <% unless @schools.empty? %>
      <% @schools.each do |school| %>
        <fieldset class="bg-light grey-border shadow">
          <h4><%=link_to school.name, school_path(school) %></h4>
          <label><%=h school.code %></label>
          <% if permitted_to? :edit, @school, :context=>:schools %>
          <p class="seperator">|</p>
          <label><%= link_to 'Edit', edit_school_path(school) %></label>
          <p class="seperator">|</p>
          <label><%= link_to "Add Student", {:controller=>"schools", :action=>"add_student", :id=>school.id} %></li></label>
          <p class="seperator">|</p>
          <label><%= link_to "Show Student Code", {:controller=>"schools", :action=>"show_student_code", :id=>school.id} %></label>
      
          <% end %>
          
        </fieldset>
      <% end %>
    <%= will_paginate @schools %>
    <% else %>
      <fieldset class="bg-light grey-border shadow">
        <label>No schools found.</label>
      </fieldset>
    <% end %>
  </div>
</div>

