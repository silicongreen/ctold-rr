<script>
  var jj = jQuery.noConflict();
  var oDataTable;
  jj(document).ready(function () {
    oDataTable = jj('#exam_data').DataTable( {
        "ajax": "/marks/not_posted_data",
        "deferRender": true,
        "order": [],
        "oSearch": { "bSmart": false },
        columnDefs: [
            {
                targets: [ 0, 1, 2 ],
                className: 'mdl-data-table__cell--non-numeric'
            }
        ]
    } );
    
    jj(".section_id").change(function(){
      if(jj(this).val())
      {
        oDataTable.column( 0 ).search( jj(this).val(),false,false).draw();
        
      }
      else
      {
        oDataTable.column( 0 ).search(class_id_current.replace(/\_/g, ' '),false,false).draw(); 
        
      }   
    });
    
 });
</script>
