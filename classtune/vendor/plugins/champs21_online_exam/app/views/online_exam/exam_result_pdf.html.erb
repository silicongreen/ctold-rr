<div id="page-yield">

  <div class="hor_line"></div>
  <h2><%= t('online_examination_result') %></h2>
  <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">

    <div id ="main_info">
      <h4> <%= "#{t('class')} :"+ " " "#{@batch.full_name}" %>&nbsp;&nbsp;Subject : <%= @exam_group.subject.name %></h4>
      <h4> <%= "#{t('exam_text')} :"+ " " "#{@exam_group.name}" %></h4>
    </div>
    <div id="pdf-info">

      <% unless @attendance.blank? %>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td><%= "Serial" %></td>
          <td class="col-pdf"><%= "Roll No" %></td>
          <td class="col-pdf"><%= t('student_text') %>  </td>
          <td class="col-pdf"><%= t('marks') %>  </td>
          <td class="col-pdf"><%= t('result') %>  </td>
        </tr>
        <% i = 0 %>
        <% j = 0 %>
        <% index=0 %>
        <% c = 'odd' %>
        <% break_on = true %>
        <% @attendance.each do |att| %>
          <% j += 1  %>
          <% if i== 18 && break_on == true %>
            <% i= 0 %>
            <% break_on = false %>
            <tr class="page-break"><td colspan="3"></td></tr>
            <tr class="table-header">
              <td><%= "Serial" %></td>
              <td class="col-pdf"><%= "Roll No" %></td>
              <td class="col-pdf"><%= t('student_text') %>  </td>
              <td class="col-pdf"><%= t('marks') %>  </td>
              <td class="col-pdf"><%= t('result') %>  </td>
            </tr>
          <% end %>
            
          <% if i== 23 && break_on == false %>
            <% i= 0 %>
            <% break_on = false %>
            <tr class="page-break"><td colspan="3"></td></tr>
            <tr class="table-header">
              <td><%= "Serial" %></td>
              <td class="col-pdf"><%= "Roll No" %></td>
              <td class="col-pdf"><%= t('student_text') %>  </td>
              <td class="col-pdf"><%= t('marks') %>  </td>
              <td class="col-pdf"><%= t('result') %>  </td>
            </tr>
          <% end %>

          <tr class="<%= "#{c}" %>">
            <td class="col-pdf"><%= j %></td>
            <td class="col-pdf"><%= att.student.class_roll_no %></td>
            <td class="col-pdf"><%= att.student.full_name %></td>
            <td class="col-pdf"><% if att.total_score.blank? %>NA<% else  %><%= att.total_score %><% end %>/<%= @exam_group.online_exam_questions.sum('mark') %></td>
            <% if att.is_passed %>
              <td class="col-pdf"><%= t('passed') %></td>
            <% else %>
              <td class="col-pdf"><%= t('failed') %></td>
            <% end %>
          </tr>
          <% i += 1  %>
        <% end %>
      </table>
      <% end %>
    </div>

  </div>

</div>

<style>
  .page-break td{
    height: 100px;
    border: 1px solid #fff;
    border-bottom: 1px solid #ADACAB;
}
</style>
