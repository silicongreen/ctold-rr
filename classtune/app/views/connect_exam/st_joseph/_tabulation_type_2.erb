<div id="page-yield" class="available_sections1 legal_tabulation">
    <div class="page1"> </div>
    <div class="section1 row" >
        <center>
            <div id="pdf-header-south" class="general-header">
                <h4 align="center"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ (current_school_detail.logo.path||"public/images/application/c.png")),:width=> '4%' %></h4>
                <h2 align="center"><%=Configuration.get_config_value('InstitutionName'); %></h2>
            </div>
            <h4 align="center">Tabulation Sheet, <%= @connect_exam_obj.name %></h4>
            <table width="100%" >
                <thead>
                    <tr>
                        <td><b>Year: <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%B-%Y"):@connect_exam_obj.published_date.strftime("%B-%Y") %> </b></td>
                        <td align="right"><b>Class : 
                                <% if @batch.name == "General" %>
                                  <%= @batch.course.full_name %>
                                <% else %>
                                  <%= @batch.name %> ,<%= @batch.course.full_name %>
                                <% end %></b>
                        </td>
                    </tr>
                </thead>    
            </table>
            <% 
            @all_subject_id = []
            @has_exam_score = []
            @all_exam_groups = []
            @all_group_exams = GroupedExam.find(
              :all,
              :conditions => [
                "connect_exam_id = ?",
                @connect_exam_obj.id
              ]
              )
            unless @all_group_exams.blank?
              @all_exam_group_id = @all_group_exams.map(&:exam_group_id).uniq


              @all_exams = Exam.find(
                :all,
                :conditions => ["exam_group_id IN (?)", @all_exam_group_id],
                :include => [:exam_group]
                )
              
              @subjective_marks = {}
              @objective_marks = {}
              @practical_marks = {}
              
              

              @all_exam_groups = ExamGroup.find(
                :all,
                :conditions => ["id IN (?)", @all_exam_group_id]
                )


              unless @all_exams.blank?
                
                @all_exams.each do |exam|
                  
                  unless exam.exam_group.name.index('Sub').nil?
                    if @subjective_marks[exam.subject_id.to_i].nil?
                        @subjective_marks[exam.subject_id.to_i] = 0
                    end
                    @subjective_marks[exam.subject_id.to_i] = @subjective_marks[exam.subject_id.to_i]+exam.maximum_marks.to_i
                  end 
                  
                  unless exam.exam_group.name.index('Obj').nil?
                    if @objective_marks[exam.subject_id.to_i].nil?
                        @objective_marks[exam.subject_id.to_i] = 0
                    end
                    @objective_marks[exam.subject_id.to_i] = @objective_marks[exam.subject_id.to_i]+exam.maximum_marks.to_i
                  end
                  
                  unless exam.exam_group.name.index('Prac').nil?
                    if @practical_marks[exam.subject_id.to_i].nil?
                        @practical_marks[exam.subject_id.to_i] = 0
                    end
                    @practical_marks[exam.subject_id.to_i] = @practical_marks[exam.subject_id.to_i]+exam.maximum_marks.to_i
                  end
                  
                end  
                
                
                @all_subject_id = @all_exams.map(&:subject_id).uniq
                @all_exam_id = @all_exams.map(&:id).uniq
                @exam_score_all = ExamScore.find(
                  :all,
                  :conditions => ["exam_id IN (?)", @all_exam_id],
                  :include => [:exam]
                  )
                @has_exam_score = []
                unless @exam_score_all.blank?
                  @exam_score_all.each do |score|
                      if !score.marks.blank? and score.marks.to_i!=0 and !@has_exam_score.include?(score.exam_id)
                        exammain = score.exam
                        unless exammain.blank?
                          @has_exam_score << exammain.exam_group_id.to_s+"_"+exammain.subject_id.to_s
                        end
                      end
                  end
                end
                
              end
              end
            
              std_subject = StudentsSubject.find_all_by_batch_id(@batch.id)
              @std_subject_hash = []
              unless std_subject.blank?
                std_subject.each do |std_sub|
                  @std_subject_hash << std_sub.student_id.to_s+"_"+std_sub.subject_id.to_s
                end
              end
            
             
          %>
            <% unless @report_data.blank? %>
              <% c = 'even' %>
              <table id="pdf-table" width="100%" cellspacing="0">
                  <tr class="table-header">

                      <td class="col-pdf">Roll</td>
                      <td class="col-pdf">Students Name</td>
                      <% @report_data['report']['subjects'].each do |sub| %>
                        <% has_exam = false %>
                        <% if @all_subject_id.include?(sub['id'].to_i) %>
                          <% has_exam = true %>
                        <% end %>
                        <% if has_exam == true %>
                          <% 
                          subjective = false
                          objective = false
                          practical = false


