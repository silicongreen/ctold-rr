<div id="page-yield">

  <div class="hor_line"></div>
  <h2><%= t('timetable_text') %></h2>
  <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">

    <div id ="main_info">
      <h4> <%= @batch.full_name %></h4>
    </div>
    <div id="pdf-info">
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td class="col-pdf"><%= t('day') %></td>
          <% @class_timing.each do |class_time| %>
            <td class="col-pdf"> <%= class_time.name %> </td>
          <% end %>
        </tr>
        <%  @weekday.sort.each do |weekday| %>
          <% c =cycle('even','odd ') %>
          <tr class="<%= "#{c}" %>">
            <td class="col-pdf"><%= WeekdaySet.weekday_name(weekday).upcase -%></td>

            <% @class_timing.each do |pt1|  %>
              <% tte = TimetableEntry.find_by_weekday_id_and_class_timing_id_and_batch_id_and_timetable_id(weekday, pt1.id, @batch.id,@master.id) %>
              <% unless tte.nil? %>
                <% unless tte.subject.elective_group_id.nil?   %>
                  <% period = tte.subject.elective_group.name.to_s %>
                <% else %>
                  <% period = tte.subject.nil?? " ":tte.subject.code %>
                <% end %>
                <% if Configuration.available_modules.include?('HR') %>
                  <% teacher = "\n("+tte.employee.employee_number+")"    unless tte.employee.nil? %>
                  <td class="col-pdf"><%= split_str(period.upcase,5) %><br/>
                    <% unless tte.subject.elective_group_id.present?   %>
                      <%= split_str(teacher.to_s,5) %>
                    <% else %>
                      (<%= t('elective') %>)
                    <% end %>
                  </td>
                <% else %>
                  <td class="col-pdf"><%= split_str(period,5) %></td>
                <% end %>
              <% else %>
                <td class="col-pdf"></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="electives">
      <% @batch.elective_groups.active.each do |el| %>
        <div class="group_names"><%= el.name %></div>
        <% el.subjects.active.each do |sub| %>
          <div class="subject"><%= sub.name %></div>
          <div class="employee">: <%= sub.employees.collect{|e| e.full_name}.join(',') %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
