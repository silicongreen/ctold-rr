<div id="page-yield" class="available_sections1">
  <div class="page1"> </div>
  <div class="section1 row" >
    <center>
      <h3 align="center">Mark Sheet</h3>
      <div class="hor_line"></div>
      <h4 align="center">For Subject Teacher</h4>
      
      <div id ="main_info">
          <table>
              <tr>
                 <% if !@employee.nil? %> 
                  <td align='left'><h4>Teacher's Name : <%=  @employee.full_name %></h4></td>
                  <td align='center'><h4>Subject : <%= @subject.name %></h4></td>
                 <% else %>
                  <td align='left'><h4>Subject : <%= @subject.name %></h4></td>
                 <% end %> 
                  
                  <td align='center'><h4>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %></h4></td>
                  <td align='right'><h4>Section : <%= @batch.course.section_name %></h4></td>
              </tr>    
          </table>    
       
      </div>
      <% unless @report_data.blank?  or  @report_data['result'].blank? %>
      <% c = 'even' %>
      <% full_mark = 0 %>
      <% ass_full_mark = 0 %>
      <% colspan = 0 %>
      <table id="pdf-table" width="98%" cellspacing="0">
        <tr class="table-header">
          <td>Roll NO.</td>
          <td>Name</td>
          <% total_full_mark = 0 %>
          <% @report_data['result']['ALL'].each do |rs| %>
            <% if rs['exam_category'] != "5" %>
            <td><%=  rs['name'] %> (<%=  rs['maximum_marks'] %>)</td>
            <% total_full_mark = total_full_mark+rs['maximum_marks'].to_i %>
            <% end %>
          <% end %>  
          <% if total_full_mark > 20 %>
            <% half_total1 = (total_full_mark.to_f/2.00) %>
          <% else %>
            <% half_total1 = total_full_mark.to_f %>
          <% end %>  
          <td>AVG(<%= half_total1.to_i %>)</td>
          <% @report_data['result']['ALL'].each do |rs| %>
            <% if rs['exam_category'] == "5" %>
            <td><%=  rs['name'] %> (<%=  rs['maximum_marks'] %>)</td>
            <% ass_full_mark = ass_full_mark+rs['maximum_marks'].to_i %>
            <% end %>
          <% end %>
          <% total_full_mark = half_total1+ass_full_mark %>
          <% if ass_full_mark > 0 %>
            <% half_total = (total_full_mark.to_f/2.00) %>
            <td>Total AVG(<%= half_total.to_i %>)</td>
          <% end %>
          <td>Grade</td>
        
        </tr>
        
        <% extender = 0 %>
        <% std_count = 0 %>
        <% unless @report_data['result']['al_students'].blank? %>
        <% @report_data['result']['al_students'].each do |std| %>
          <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>@subject.id.to_s,:elective_group_id=>@subject.elective_group_id.to_i} %>
          <% if @has_exam_student == false %>
            <% next %>
          <% end %>          
                

          <%  std_count = std_count+1; %>
          <% colspan = colspan+4 %>
          <% if std_count>17 && extender ==0 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr>    
          <% elsif std_count>21 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr> 
          <% end %>     
        
        
          <% total_mark = 0 %>
          <% full_mark = 0 %>
          <% assessment_total_mark = 0 %>
          <% assessment_full_mark = 0 %>
              
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td><%= std['class_roll_no'] %></td>
            <td><%= std['name'] %></td>
            <% @report_data['result']['ALL'].each do |rs| %>
              <% if rs['exam_category'] != "5" %>
              <td>
              
                <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                      <%= rs['students'][std['id']]['score'] %>
                      <% total_mark = total_mark.to_f+rs['students'][std['id']]['score'].to_f %>
                <% else %>
                    -
                <% end %>
                <% if !rs['maximum_marks'].blank? %>    
                  <% full_mark = full_mark+rs['maximum_marks'].to_i %> 
                <% end %> 
              </td>
              <% else %>
            
                  <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                      
                      <% assessment_total_mark = assessment_total_mark.to_f+rs['students'][std['id']]['score'].to_f %>
                  <% else %>
                      -
                  <% end %>
                  <% if !rs['maximum_marks'].blank? %>    
                    <% assessment_full_mark = assessment_full_mark+rs['maximum_marks'].to_i %> 
                  <% end %> 
                    
            
              <% end %> 
              
              
            <% end %> 
             
           <% main_mark = 0 %>
           <% half_mark = 0 %>
           <% if total_mark.to_i > 0 %>   
              
            <% if full_mark > 20 %>
              <% half_mark = (total_mark.to_f/2.00) %>  
              <% total_mark_2 = half_mark.round()*2 %>
              <% main_mark = (total_mark_2.round().to_f/full_mark.to_f)*100 %>
            <% else %>
               <% half_mark = total_mark.round() %> 
               <% main_mark = (total_mark.round().to_f/full_mark.to_f)*100 %>       
            <% end %>         
           <% end %>
         
              
           <td><%= half_mark.round() %></td>
           
           <%
           if assessment_full_mark > 0
              total_mark_with_assessment = half_mark+assessment_total_mark.round()
              half_mark = total_mark_with_assessment.to_f/2
              full_mark = full_mark+assessment_full_mark
              total_mark_2 = half_mark.round()*2
              main_mark = (half_mark.round.to_f/20)*100
              
            end
          %>
           <% class_name = "" %> 
           <% if main_mark.round().to_i < 50 %>   
              <% class_name = "class='color-red'" %> 
           <% end %>
           
           <% if assessment_full_mark > 0 %>
           <td><%= assessment_total_mark.round() %></td>
           <td <%= class_name %>><%= half_mark.round() %></td>
           <% end %>

           <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
           <% if !grade.blank? and !grade.name.blank? %>
            <td class="col-2"><b><%= grade.name %></b></td>
          <% else %>
            <td class="col-2"><b>-</b></td>
          <% end %>
        </tr>
        <% end %>
        <% end %>
      </table>
      <% end %>
    </center>
  </div>
  
  
</div>
