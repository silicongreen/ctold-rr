<div id="page-yield">
  <div class="box">
    <% form_remote_for @fa_group,:url=>{:controller=>"fa_groups",:action=>'create'},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>
      <div id="form-errors"></div>
      <%= error_messages_for :fa_group %>
      <div class="label-field-pair1">
        <label for="category_name">Name</label>
        <div class="text-input-bg1"><%= f.text_field :name %></div>
      </div>
      <div class="label-field-pair2">
        <div class="text-input-bg2"><%= select :fa_group_prefix, :prefix, [["FA1", "FA1"],["FA2", "FA2"],["FA3", "FA3"],["FA4","FA4"]] %></div>
      </div>
      <div class="extender"></div>
      <div class="label-field-pair">
        <label for="category_name">Description</label>
        <div class="text-input-bg"><%= f.text_field :desc %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">Max Marks</label>
        <div class="text-input-bg"><%= f.text_field :max_marks %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">CCE Exam Category</label>
        <div class="text-input-bg">
         <%= f.select :cce_exam_category_id ,@exam_categories.map{|m| [m.name,m.id]} ,:prompt=>"Select an Exam Category" %>
        </div>
      </div>
      <%#*<div class="label-field-pair">%>
        <%#*<label for="category_name">CCE Grade Set</label>%>
        <%#*<div class="text-input-bg">%>
          <%#= f.select :cce_grade_set_id ,@grade_sets.map{|m| [m.name,m.id]} ,:prompt=>"Select a Grade Set" %>
        <%#*</div>%>
      <%#*</div>%>
      <%= f.submit "", :value => "â–º Create", :class => "submit_button", :id => 'submit_button' %>
    <% end %>
  </div>
</div>
