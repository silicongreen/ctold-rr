<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
// Put jQuery 1.10.2 into noConflict mode.
  var $jq1 = jQuery.noConflict(true);
</script>

<div class="header-wrapper">


    <div class="header-title">
        <div class="header-icon">
            <%= image_tag '/images/icons/profile-icon.png', :html => {:alt => 'Student Profile'} %>
        </div>
        <div class="header-title-text-wrapper">
            <div class="header-title-main-text f2">
                <%= t('admission') %>
            </div>
            <div class="clearfix"></div>
            <div class="header-title-sub-text">
                <%= I18n.l(@local_tzone_time.to_date, :format=>'%d/%m/%Y') %>
            </div>
        </div>
    </div>
</div>    
<div id="page-yield">
    <% can_create_student = true %>
    <% unless @student_limit.blank?  %>
      <% if @student_limit[0].to_i < @student_limit[1].to_i %>
        <p class="flash-msg"><%= @student_limit[0] %> of <%= @student_limit[1] %> Students Created</p>
      <% else %>
        <% can_create_student = false %>
        <div class="errorExplanation">
          <p><%= @student_limit[0] %> of <%= @student_limit[1] %> Students Created. Student limit excessed for your school. </p>
        </div>
      <% end %>
    <% end %>
        
    <% if can_create_student %>    
      <% if @config.config_value == '0' %>
        <% if @last_admitted_student.nil? %>
          <p class="flash-msg"><%= t('no_admission_notice') %></p>
        <% else %>
          <p class="flash-msg"><%= t('admission_no_of_last_stud') %> <%= @last_admitted_student.admission_no %> </p>
        <% end %>
      <% end %>

      <% unless flash[:notice].nil? %>
        <p class="flash-msg"> <%= flash[:notice] %> </p>
      <% end %>

      <% form_for(@student, :url => {:action=> 'admission1'}, :html=> {:multipart=>true}) do |s| %>
        <%= error_messages_for 'student', :header_message => nil %>

        <div id="admission1_form">
            <div class="f1-steps">
                <div class="f1-progress">
                    <div class="f1-progress-line" data-now-value="12.5" data-number-of-steps="4" style="width: 12.5%;"></div>
                </div>
                <div class="f1-step active">
                    <div class="f1-step-icon"><div class="fa">1</div></div>
                    <p>Student Information</p>
                </div>
                <div class="f1-step">
                    <div class="f1-step-icon"><div class="fa">2</div></div>
                    <p>Guardian Information</p>
                </div>
                <div class="f1-step">
                    <div class="f1-step-icon"><div class="fa">3</div></div>
                    <p>Previous Details</p>
                </div>
                <div class="f1-step">
                    <div class="f1-step-icon"><div class="fa">4</div></div>
                    <p>Aditional Information</p>
                </div>
            </div>


            <div class="col-sm-12" style="padding:0px;">
                <fieldset>
                    <legend>Office Use</legend>
                    <% if MultiSchool.current_school.id == 340 %>
                    <div class="form-group col-sm-6 even">

                        <label for="student_admission_no"><%= "Session" %> <span class="necessary-field">*</span> </label>   
                        <%= select :student, :session_id, @std_session.map {|c| [c.exam_session, c.id]} %>

                    </div>

                    <% else %>
                    <div class="form-group col-sm-6 even">

                        <label for="student_admission_no"><%= t('admission_number') %> <span class="necessary-field">*</span> </label>          

                        <% unless @config.config_value == '0' or @last_admitted_student.nil? %>
                          <%= s.text_field :admission_no , :value=> @last_admitted_student.admission_no.next, :class=>"form-control" %>
                        <% else %>
                          <%= s.text_field :admission_no, :value=> "0001", :class=>"form-control" %>
                        <% end %>
                    </div>
                    <% end %>




                    <div class="form-group col-sm-6">
                        <% if MultiSchool.current_school.id == 340  %>
                          <label for="student_admission_date"><%= t('admission_date_2') %> <span class="necessary-field">*</span> </label>
                        <% else  %>
                          <label for="student_admission_date"><%= t('admission_date') %> <span class="necessary-field">*</span> </label>
                        <% end %>
                          <% unless @student.admission_date.blank? %>
                            <%= calendar_date_select_tag 'student[admission_date]', I18n.l(@student.admission_date,:format=>"%d %b %Y"),
                          :year_range => 15.years.ago..5.years.from_now, :class=>"form-control form-control-date", :readonly=>true, :popup=>"force" %>
                          <% else %>
                            <%= calendar_date_select_tag 'student[admission_date]', I18n.l(Date.today,:format=>"%d %b %Y"),
                          :year_range => 15.years.ago..5.years.from_now, :class=>"form-control form-control-date", :readonly=>true, :popup=>"force" %>
                          <% end %>
                    </div>
                    <div class="form-group col-sm-6 even">
                        <label for="admission_class"><%= "Admitted Class" %> </label>
                        <%= select :student, :admission_class, options_for_select(Course.active.find(:all, :group => "course_name").map {|c| [c.course_name+" "+c.section_name, c.id]}, @student.admission_class.to_i),
                        {:prompt => "Select Class"} %>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="class_roll_no"><%= t('roll_number') %> </label>
                        <%= s.text_field :class_roll_no, :class=>"form-control" %>
                    </div>
                    <div class="form-group" style="display:none;">
                        <label for="class_roll_no">Card Number (if u use punch card for attendance )</label>
                        <%= s.text_field :card_number %>
                    </div>

                    <div class="form-group col-sm-6 even">
                        <label for="student_email"><%= t('email_for_school_use') %><% if MultiSchool.current_school.id == 340  %><span class="necessary-field">*</span><% end %></label>
                        <%= s.text_field :email, :class=>"form-control" %>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="student_email"><%= t('password') %><span class="necessary-field">*</span></label>
                        <%= s.password_field :pass, :autocomplete=>"new-password", :class=>"form-control" %>
                    </div>
                    <div class="form-group col-sm-6 even">
                      <label for="student_phone2"><%= "Designated Number for SMS" %><span class="necessary-field">*</span></label>
                      <%= s.text_field :sms_number, :class=>"form-control" %>
                    </div>
                    <% if MultiSchool.current_school.id == 340  %>
                    <div class="form-group col-sm-6">
                      <label for="student_phone2"><%= "Form Serial Number" %><span class="necessary-field">*</span></label>
                      <%= s.text_field :serial_no, :class=>"form-control" %>
                    </div>
                    <div class="form-group col-sm-6 even" >
                        <label for="advisor_id"><%= "Advisor" %></label>
                        <%= select :student, :advisor_id, options_for_select(Employee.find(:all,:order=>"first_name asc, last_name asc",:conditions=>["is_advisor = ?",true]).map {|c| [c.full_name, c.id]}), { :prompt => "Select Advisor" } %>
                    </div>
                    <% end %>
                </fieldset>
            </div>

            <div class="col-sm-12" style="padding:0px;">
              <fieldset>
                <legend><%= t('personal_details') %></legend>


                <div class="form-group col-sm-6 even">
                    <label for="student_grade"><%= t('first_name') %><span class="necessary-field">*</span> </label>
                    <%= s.text_field :first_name, :class=>"form-control" %>
                </div>
                 <div class="form-group col-sm-6">
                      <label for="student_grade"><%= t('shift_label') %><% if MultiSchool.current_school.id == 340  %><span class="necessary-field">*</span><% end %></label>
                      <%= select :student, :batch_name, options_for_select(Batch.active.find(:all, :group => "name").map {|b| [b.name, b.id]}, @batch_no.to_i),
                        {:prompt => "#{t('select')}"},
                        {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&section_page=section&section_partial=sections&page=course_data&partial_view=courses_data&page_batch=batches&partial_view_batch=batches&course_name=#{@course_name}&section_name=#{@section_name}'" ,:before => "$('loading_2').show();",
                        :success => "$('loading_2').hide();")}"} %>
                      <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>
                 </div>

                <div class="form-group col-sm-6 even">
                    <label for="student_grade"><%= t('middle_name') %></label>
                    <%= s.text_field :middle_name, :class=>"form-control" %>
                </div>
                <div class="form-group col-sm-6">
                    <label for="student_grade"><%= t('class_label') %><% if MultiSchool.current_school.id == 340  %><span class="necessary-field">*</span><% end %></label>
                    <div id="course_data"> <%= render :partial => 'student/courses_data', :object => @courses %></div>
                </div>
                <div class="form-group col-sm-6 even">
                    <label for="student_grade"><%= t('last_name') %></label>
                    <%= s.text_field :last_name, :class=>"form-control" %>
                </div>






                <div class="form-group col-sm-6" id="section_label">
                    <label for="student_grade"><%= t('section_label') %><% if MultiSchool.current_school.id == 340  %><span class="necessary-field">*</span><% end %></label>
                    <div id="section"> <%= render :partial => 'sections', :object => @classes %></div>
                </div>

                <div class="form-group" style="display: none;">
                    <label for="student_grade"><%= t('course_and_batch') %></label>
                    <div id="batches"> <%= render :partial => 'batches' %></div>
                </div>


                <div class="form-group col-sm-6 even">
                    <label for="student_date_of_birth"><%= t('date_of_birth') %> <span class="necessary-field">*</span> </label>
                    <% unless @student.date_of_birth.blank? %>
                     <%= calendar_date_select_tag 'student[date_of_birth]',
                      I18n.l(@student.date_of_birth,:format=>"%d %b %Y") , :year_range => 72.years.ago..0.years.ago,:popup=>"force", :class=>"form-control form-control-date" %>
                    <% else %>
                    <%= calendar_date_select_tag 'student[date_of_birth]',
                      I18n.l(Date.today-5.years,:format=>"%d %b %Y") , :year_range => 72.years.ago..0.years.ago,:popup=>"force", :class=>"form-control form-control-date" %>
                    <% end %>
                </div>


                <div class="form-group col-sm-6" style="margin-top:18px;" >
                    <div class="col-sm-12" style="padding:0px; font-weight: bold;"><%= t('gender') %></div>
                    <label class="radio-inline"><%= s.radio_button  "gender", "m", :checked => "checked" %><%= t('male') %></label>
                    <label class="radio-inline"><%= s.radio_button  "gender", "f" %><%= t('female') %></label>
                </div>


                <div class="form-group col-sm-6 even" >
                    <label for="student_blood_group"><%= t('blood_group') %></label>
                    <%= select :student, :blood_group, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"],{:prompt=> "#{t('unknown')}"} %>
                </div>

                <div class="form-group col-sm-6"  style="display: none;">
                    <label for="student_birth_place"><%= t('birth_place') %></label>
                    <%= s.text_field :birth_place %>
                </div>

                <div class="form-group col-sm-6">
                    <label for="student_nationality"><%= t("nationality") %><span class="necessary-field">*</span></label>
                    <%= select :student, :nationality_id, Country.all.map {|c| [c.nationality.blank? ? c.name: c.nationality.nationality, c.id]}, :selected=> @student.nationality_id || @selected_value.to_i %>

                </div>
                <div class="form-group col-sm-6 even">
                    <label for="student_religion"><%= t('religion') %></label>
                    <%= s.text_field :religion, :class=>"form-control" %>
                </div>
                <div class="form-group col-sm-6">
                    <label for="student_nationality"><%= t("dual_nationality") %></label>

                    <%= select :student, :dual_nationality_id, options_for_select(Country.find(:all).map {|c| [c.nationality.blank? ? c.name: c.nationality.nationality, c.id]}, @student.dual_nationality_id.to_i),
                      {:prompt => "#{t('select')}"} %>
                </div>

                <div class="form-group" style="display: none;">
                    <label for="student_birth_place"><%= t("mother_tongue") %></label>
                    <%= s.text_field :language %>
                </div>

                <div class="form-group col-sm-6 even" >
                    <label for="student_category"><%= t('std_category') %></label>
                    <% category_id = @categories[0].id unless @categories.nil? %>
                    <%= s.select :student_category_id, options_for_select(@categories.map {|c| [c.name, c.id]},category_id), { :prompt => "#{t('select_a_category')}" } %>
                </div>

                <div class="form-group col-sm-6" id="staff_id" >
                    <label for="staff_id"><%= "Employee/Staff Name" %></label>
                    <%= select :student, :staff_id, options_for_select(Employee.find(:all,:order=>"first_name asc, last_name asc").map {|c| [c.full_name, c.id]}), { :prompt => "Select Staff/Employee Name" } %>
                </div>




              </fieldset>  
        </div>

        <div class="col-sm-12" style="padding:0px;">
              <fieldset>
              <legend><%= t('contact_details') %></legend>
            <div class="form-group col-sm-6 even">
                <label for="student_city"><%= t('present_address') %></label>
                <%= s.text_field :address_line1, :class=>"form-control" %>
            </div>

            <div class="form-group col-sm-6">
                <label for="student_city"><%= t('address_line2') %></label>
                <%= s.text_field :address_line2, :class=>"form-control" %>
            </div>

            <div class="form-group col-sm-6 even">
                <label for="student_city"><%= t('city') %></label>
                <%= s.text_field :city, :class=>"form-control" %>
            </div>

            <div class="form-group col-sm-6">
                <label for="student_state"><%= t('state') %></label>
                <%= s.text_field :state, :class=>"form-control" %>
            </div>

            <div class="form-group col-sm-6 even" >
                <label for="student_pin_code"><%= t('zip') %></label>
                <%= s.text_field :pin_code, :class=>"form-control" %>
            </div>

            <div class="form-group col-sm-6">
                <label for="student_country"><%= t('country') %></label>
                <%= select :student, :country_id, Country.all.map {|c| [c.name, c.id]}, :selected=> @student.country_id || @selected_value.to_i %>
            </div>

            <div class="form-group col-sm-6 even">
                <label for="student_phone1"><%= t('phone') %></label>
                <%= s.text_field :phone1, :class=>"form-control" %>
            </div>

            <div class="form-group col-sm-6">
                <label for="student_phone2"><%= t('mobile') %></label>
                <%= s.text_field :phone2, :class=>"form-control" %>
            </div>


            <div style="display: none;">
                <span class="span-sub-heading"><%= t('settings') %></span>
                <div class="form-group">
                    <label for="biometric_id"><%= t('biometric_id') %></label>
                    <%= s.text_field :biometric_id, :class=>"form-control" %></div>
            </div>
            <div class="form-group col-sm-6 even">
                <label for="student_image_file"><%= t('upload_photo') %> (<%= t('max_size') %>)</label>
                <%= s.file_field :photo, :size=>12, :class=>"form-control" %>
            </div>
              <div class="form-group col-sm-6" style="display: none;">
                  <label for="student_sms"><%= t('enable_sms_feature') %></label>
                  <%= s.check_box :is_sms_enabled %>
              </div>
            <div class="form-group col-sm-6 even" style="display: none;">
                <label for="student_sms"><%= t('enable_email_feature') %></label>
                <%= s.check_box :is_email_enabled %>
            </div>
            <script>
              (function($){$.fn.filestyle = function(options){var settings = {width:250}; if (options){$.extend(settings, options); }; return this.each(function(){var self = this; var wrapper = $("<div>").css({"width":settings.imagewidth + "px", "height":settings.imageheight + "px", "background":"url(" + settings.image + ") 0 0 no-repeat", "background-position":"right", "display":"inline", "position":"absolute", "overflow":"hidden"}); var filename = $('<input class="file">').addClass($(self).attr("class")).css({"display":"inline", "width":settings.width + "px"}); $(self).before(filename); $(self).wrap(wrapper); $(self).css({"position":"relative", "height":settings.imageheight + "px", "width":settings.width + "px", "display":"inline", "cursor":"pointer", "opacity":"0.0"}); if ($.browser.mozilla){if (/Win/.test(navigator.platform)){$(self).css("margin-left", "-142px"); } else{$(self).css("margin-left", "-168px"); }; } else{$(self).css("margin-left", settings.imagewidth - settings.width + "px"); }; $(self).bind("change", function(){filename.val($(self).val()); }); }); }; })(jQuery);
            </script>

            <div class="form-group col-sm-6 even">
              <%= submit_tag "", :value => "► #{t('save_and_proceed')}", :class => "btn btn-success", :disable_with => "► #{t('please_wait')}" %>
            </div>
           </fieldset>
        </div>

    </div>
  <% end %>
  </div>


<% end %>

</div>
<%= stylesheet_link_tag 'tadded-header' %>
<%= stylesheet_link_tag 'form-bootstrap' %>
<% content_for :head do %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %> 
<style>
  #staff_id
  {
      display:none;
  }
</style>

<script>
  var jq = jQuery.noConflict();
  jq(document).ready(function() {
    
    jq("#student_student_category_id").change(function(){
      if(jq(this).val()==433)
      {
          jq("#staff_id").show();
      } 
      else
      {
          jq("#student_stuff_id").val("");
          jq("#staff_id").hide();
      }  
    });
  });
</script>
