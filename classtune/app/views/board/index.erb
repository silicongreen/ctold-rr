<div id="content-header">
<h1>Board Exam</h1>
<div class='header-sep'></div>
<div class='sub-header'></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="box">

    <% if permitted_to? :add_session, :board %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "Manage Session",{:action => "add_session"} %></div>
        <div class="link-descr"><%= link_to "Manage and Add  Session",{:action => "add_session"} %></div>
      </div>
    <% end %>
    <% if permitted_to? :add_group, :board %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "Manage Student Group",{:action => "add_group"} %></div>
        <div class="link-descr"><%= link_to "Manage and Add Student Group (Science, Arts...)",{:action => "add_group"} %></div>
      </div>
    <% end %>
    
    <% if permitted_to? :exam_group_subject, :board %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "Student Group Subject",{:action => "exam_group_subject"} %></div>
        <div class="link-descr"><%= link_to "Manage and Add Student Group Subject",{:action => "exam_group_subject"} %></div>
      </div>
    <% end %>
      
    <% if permitted_to? :exam, :board %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "Board Exam",{:action => "exam"} %></div>
        <div class="link-descr"><%= link_to "Manage and Add Board Exam",{:action => "exam"} %></div>
      </div>
    <% end %>
  </div>


</div>

<style>
  .link-descr a
  {
     color:#fff;
  }
</style>
