<%= select :student, :class_name, options_for_select(@courses.map {|c| [c.course_name]}, @course_name),
{:prompt => "#{t('select')}"},
{:autocomplete=> "off", :onChange => "#{remote_function(:url => {:controller => "student",:action => "get_section_data"}, :with => "'class_name='+value+'&'+$('new_student').serialize()+'&page=section&partial_view=sections&section_name=#{@section_name}'" ,:before => "$('loading').show();",
:success => "$('loading').hide(); ")}"} %>  
<%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading", :style =>"display: none;" ) %>
<% unless @course_name.blank? %>
<script>
  var jq = jQuery.noConflict();
  jq("#student_class_name").trigger("change");
  
</script> 

<% end %>

