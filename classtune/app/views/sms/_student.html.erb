<iframe name="receiver" id="receiver" style="display: none;"></iframe>
<div style="float: left;">
  <div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('sms_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('students') %></div>
  </div>

<div id="page-yield-new">
  <div class="box">
    <% form_for :send_sms, :html => {:target=>'receiver', :onsubmit => "return checkdata();", :id => "sms_form"} do |x| %>
    <div class="label-field-pair">
        <div style="clear: both; height: 12px;"></div> 
        <div style="width: 100%; padding: 20px 0; text-align: center; border-bottom: 1px solid #ccc;">
          <input type="checkbox" name="sms_student_upassword" id="sms_student_upassword" class="sms_options_student" style="display: none;">
          <i name="sms_student_upassword_fa" id="sms_student_upassword_fa" class="fa fa-square-o sms_options_student_fa" style="font-size: 20px; cursor: pointer; color: #49BB4B; " aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;">SMS Username/Password</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <% if MultiSchool.current_school.id != 319 %>
          <input type="checkbox" name="sms_student_feedues" id="sms_student_feedues" class="sms_options_student" style="display: none;">
          <i name="sms_student_feedues_fa" id="sms_student_feedues_fa" class="fa fa-square-o sms_options_student_fa" style="font-size: 20px; cursor: pointer; color: #49BB4B;" aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;">SMS Fees Dues</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <% end %>
          <input type="checkbox" name="sms_student_general" id="sms_student_general" class="sms_options_student" style="display: none;">
          <i name="sms_student_general_fa" id="sms_student_general_fa" class="fa fa-square-o sms_options_student_fa" style="font-size: 20px; cursor: pointer; color: #49BB4B;" aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;">General SMS</span>
        </div>
        <div style="clear: both; height: 12px;"></div> 
        <div id="sms_opt"></div>
   <% end %>

   <div id="status-message"></div>
     <%= image_tag("loader2.gif",
       :align => "absmiddle",
       :border => 0,
       :id => "loader2",
       :style =>"display: none;" ) %>

   </div>
  </div>
</div>
<style>
.text-input-bg2 select
{
   height: 300px;
}
p.flash-msg
{
  float:left;
  clear: both;
}
</style>    
