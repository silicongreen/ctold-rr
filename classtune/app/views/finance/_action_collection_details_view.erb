<div class="action_div">
  <% fees = @fee_data  %>

  <% if fees.is_paid %>
    <i class="fa fa-check" style="color: #49BB4B; font-size: 14px;"></i><br/>
  <% else %>
    <% if fees.balance == 0.0 %>
    <i class="fa fa-check" style="color: #49BB4B; font-size: 14px;"></i><br/>
    <% else %>
      <input type="hidden" class="notPaid" name="not_paid[]" value="<%= fees.student.id %>">
      <%= link_to_remote '<i class="fa fa-refresh" style="color: #49BB4B;"></i>',:before => "Element.show('add-loader-#{fees.id}-#{fees.student.id}')", :success => "Element.hide('add-loader-#{fees.id}-#{fees.student.id}');",:url => {:action => 'regenerate_student_fees',:fee_id=> fees.id, :student_id => fees.student.id},:confirm => "Are You sure to Regenerate?"%>
      <br>
    <%= link_to_remote '<i class="fa fa-minus-circle" id="deleteFin" style="color:red;"></i>',:before => "Element.show('add-loader-#{fees.id}-#{fees.student.id}');", :success => "Element.hide('add-loader-#{fees.id}-#{fees.student.id}');",:url => {:action => 'delete_student_fees',:fee_id=> fees.id},:confirm => "Are you sure, you want to delete this fee transaction?"%>
    <%= image_tag("Loader-transparant.gif",:align => "absmiddle",:border => 0,:id => "add-loader-#{fees.id}-#{fees.student.id}", :class=>"add-palette-loader", :style =>"display: none;" ) %>
    <% end %>
  <% end %>
</div>