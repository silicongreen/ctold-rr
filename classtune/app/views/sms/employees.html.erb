<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('sms_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('employees') %></div>

</div>
<script>
  var jj = jQuery.noConflict();
</script>
<div id="page-yield">
  <div class="box">
    <% remote_form_for :send_sms,
      :before => "Element.show('loader2'), $('submit_button').disable()",
      :success => "Element.hide('loader2'), setTimeout(function(){$('submit_button').enable();},5000)" do |x| %>
      <div class="label-field-pair">
        <div class="label-container"><label><%= t('select_a_department') %>:</label> </div>
        <div class="text-input-bg text-input-bg2" style="height: 320px;">
          <%= select :send_sms, :batch_id,
            EmployeeDepartment.all.map {|b| [b.name, b.id]},
            {:prompt => "#{t('select_a_department')}"},
            {:multiple => true,:onChange => "#{remote_function(:url => {:action => "list_employees"},
            :with => "'dept_id='+jj('#send_sms_batch_id').val()",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"
            )}"} %>
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none;" ) %>
        </div>
      </div>


      <div id="employee-list">
        <!--here employees of the particular department will be listed via ajax-->
      </div>

    <% end %>

    <div id="status-message">

    </div>
    <%= image_tag("loader2.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader2",
      :style =>"display: none;" ) %>

  </div>
</div>
<style>
.text-input-bg2 select
{
   height: 300px;
}
p.flash-msg
{
  float:left;
  clear: both;
}
</style> 
