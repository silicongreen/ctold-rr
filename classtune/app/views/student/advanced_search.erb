<%= stylesheet_link_tag 'tadded-header' %>
<%= stylesheet_link_tag 'form-bootstrap' %>
<% content_for :head do %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %> 


<div class="header-wrapper">

  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/profile-icon.png', :html => {:alt => 'Student Profile'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
        <%= t('advanced_search_text') %>
      </div>
      <div class="clearfix"></div>
      <div class="header-title-sub-text">
        <%= I18n.l(@local_tzone_time.to_date, :format=>'%d/%m/%Y') %>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="tabbed-header-wrapper">
    <ul class="header-tabs">
      <li>
        <%= link_to "Student Search", {:controller => 'student', :action => 'index'}, {:class => 'f2'} %>
      </li>
      <li>
          <%= link_to t('view_all'), {:controller => 'student', :action => 'view_all'}, {:class => 'f2'} %>
      </li>
      <li>
        <%= link_to "Graduation Lists", {:controller => 'student', :action => 'graduation_lists'}, {:class => 'f2'} %>
      </li>
      <li class="active">
          <%= link_to t('advanced'), {:controller => 'student', :action => 'advanced_search'}, {:class => 'f2'} %>
      </li>
  
    </ul>
  </div>

</div>


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <div class="show-msg"><div class="flash-msg"><%= flash[:notice] %></div> </div>
  <% end %>
  <% unless params[:search] %>
    <div id="search-form">
      <% form_for @search, :html => {:id => "new_student"} do |f| %>
        <div class="form-group col-sm-6">
          <label for="name"><%= t('name') %></label>
          
            <%= f.text_field :first_name_or_middle_name_or_last_name_like, :class=>"form-control" %>
          
        </div>
        <div class="form-group col-sm-6">
          <label for="student_admission_no"><%= t('admission_number') %></label>
          
            <%= f.text_field :admission_no_equals, :class=>"form-control" %>
         
        </div>
        
        <% if Batch.active.find(:all, :group => "name").length > 1  %> 
          <div class="form-group col-sm-6">
            <label for="student_grade"><%= t('shift_label') %></label>
            <%= select :advv_search, :batch_name, Batch.active.find(:all, :group => "name").map {|b| [b.name, b.id]},
            {:prompt => "#{t('select')}"},
            {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&section_page=section_adv&section_partial=sections_adv&page=course_adv&partial_view=courses_adv&page_batch=batches_adv&partial_view_batch=batches_adv'" ,:before => "$('loading_2').show();",
            :success => "$('loading_2').hide();")}"}%>
            <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %></div>
        
        <% else %>
          <div class="form-group col-sm-6" style="display: none;">
            <label for="student_grade"><%= t('shift_label') %></label>
            <%= select :advv_search, :batch_name, Batch.active.find(:all, :group => "name").map {|b| [b.name, b.id]},
            {:prompt => "#{t('select')}"},
            {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&section_page=section_adv&section_partial=sections_adv&page=course_adv&partial_view=courses_adv&page_batch=batches_adv&partial_view_batch=batches_adv'" ,:before => "$('loading_2').show();",
            :success => "$('loading_2').hide();")}"}%>
            <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %></div>
          <
        <% end %>
        
        <div class="form-group col-sm-6">
          <label for="student_grade"><%= t('class_label') %></label>
          <div id="course_adv"> <%= render :partial => 'student/courses_adv', :object => @courses %></div>
        </div>
        
        <div class="form-group col-sm-6" id="section_data_div">
          <label for="student_grade"><%= t('section_label') %></label>
          <div id="section_adv"> <%= render :partial => 'sections_adv', :object => @classes %></div>
        </div>
        
        <div class="form-group col-sm-6" style="display: none;">
          <label for="student_course"><%= t('course_text') %><%= image_tag("loader.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "loader",
              :style =>"display: none;" ) %></label>
          
            <%= select :advv_search, :course_id, Course.active.map{|c| [c.course_name+" "+c.section_name, c.id]},
              {:prompt=>"#{t('select_a_course')}"},
              {:onChange => "#{remote_function(:url => {:action => "list_batches"},
              :with => "'course_id='+value",
              :before => "Element.show('loader')",
              :success => "Element.hide('loader')"
              )}"}%>
        
        </div>
        
        <div class="form-group col-sm-6" id="course_batches" style="display: none;">
          <label for="student_batch"><%= t('batch') %></label>
          <div id="batches_adv"> <%= render :partial => 'batches_adv', :object => @batch_id %></div></div>  
          
        </div>
        <div class="form-group col-sm-6" style="display: none;">
          <label for="student_category"><%= t('category') %></label>
          
            <%= f.collection_select :student_category_id_equals,StudentCategory.active,:id,:name,{:prompt=>"#{t('select_category')}"}%>
       
        </div>
        <div class="form-group col-sm-6" style="margin-top:18px;" >
              <div class="col-sm-12" style="padding:0px; font-weight: bold;"><%= t('gender') %></div>
              <label class="radio-inline"><%= f.radio_button  :gender_equals, "" %><%= t('all') %></label>
              <label class="radio-inline"><%= f.radio_button  :gender_equals, "m"%><%= t('male') %></label>
              <label class="radio-inline"><%= f.radio_button  :gender_equals, "f" %><%= t('female') %></label>
        </div>
       
        <div class="form-group col-sm-6" style="display: none;">
          <label for="student_blood_group"><%= t('blood_group') %></label>
           <%= select :search, :blood_group_like, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"],{:prompt=>"#{t('select')}"}%>
         
        </div>

        <div class="form-group col-sm-6">
          <label for="student_country">
            <%= t('country') %>
          </label>
          <%= f.collection_select :nationality_id_equals, Country.all,:id,:name,{:prompt=>"#{t('select')}"}%>
        </div>

        <div class="form-group col-sm-6" style="display:none;">
          <label for="student_grade"><% if MultiSchool.current_school.id == 340  %>
                  <%= t('admission_date_2')  %>
                <% else %>  
                  <%= t('admission_date') %>
                <% end %></label>
          
            <%= select :advv_search,:doa_option,[["#{t('equal_to')}","Equal to"],["#{t('less_than')}","Less than"],["#{t('greater_than')}","Greater than"]],{:prompt=>"#{t('option')}"},
              {:onChange => "#{remote_function(:url => {:action => "list_doa_year"},
              :with=>"'doa_option='+value",
              :before => "Element.show('loader')",
              :success => "Element.hide('loader')"
              )}"}
          %>
            <%= image_tag("loader.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "loader",
              :style =>"display: none;" ) %>
            <div id="doa_year">
              <%= select :advv_search,:doa_year,[],{:prompt=>"#{t('select')}"} %>
            </div>
            <div id="doa_year_hidden"></div>
        </div>
        <div class="form-group col-sm-6" style="display:none;">
          <label for="student_birth_date"><%= t('birth_date') %></label>
          
            <%= select :advv_search,:dob_option,[["#{t('equal_to')}","Equal to"],["#{t('less_than')}","Less than"],["#{t('greater_than')}","Greater than"]],{:prompt=>"#{t('option')}"},
              {:onChange => "#{remote_function(:url => {:action => "list_dob_year"},
              :with=>"'dob_option='+value",
              :before => "Element.show('loader')",
              :success => "Element.hide('loader')",
              :class=>'small-box'
              )}"}
          %>
            <%= image_tag("loader.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "loader",
              :style =>"display: none;" ) %>
            <div id="dob_year">
              <%= select :advv_search,:dob_year,[],{:prompt=>"#{t('select')}"} %>
            </div>
            <div id="dob_year_hidden"></div>
        </div>
        <div class="form-group col-sm-6" style="margin-top:18px;" >
              <div class="col-sm-12" style="padding:0px; font-weight: bold;"><%= t('status') %></div>
              <label class="radio-inline"><%= f.radio_button  :is_active_equals, "true", {:checked => 'checked'} %><%= t('present') %></label>
              <label class="radio-inline"><%= f.radio_button  :is_active_equals, "false" %><%= t('former') %></label>
              <label class="radio-inline"><%= f.radio_button  :is_active_equals, "", {:checked => false} %><%= t('all') %></label>
        </div>

        <div class="form-group col-sm-6 even" >
          <%= f.submit "#{t('search_text')}", :class=>'btn btn-success' %>
        </div>    
      <% end %>
    </div>
  <% else %>
    <% unless @students.nil? %>

      <div id="search-result">

        <p><%= t('searched_for') %></p>
        <div class="search-again">
    <%#= link_to_function '► Search again' do |page|
    page.visual_effect :toggle_slide, "search-form"
    page.hide "search-result"
    end %>

          <%= link_to "►#{t('search_again')}", {:action=>"advanced_search"}, :class => 'user_button'%>
          <% unless @students.empty? %>
            <%= link_to "► #{t('view')} #{t('pdf_report')}",   {:action => "advanced_search_pdf", :search=> params[:search],:advv_search=>params[:advv_search],:adv_search=>params[:adv_search],:page_height => 1700}, :target => '_blank' , :class=> 'user_button' %>
          <% end %>
        </div>
        <div class="extender"></div>
        <div class="searched_for themed_text">
          <%= @searched_for %>
        </div>


        <table class="table" align="center" width="100%" cellpadding="1" cellspacing="1">
          <% unless @students.empty? %>
            <thead>
            <tr class="tr-head">
              <th>
                <%= t('sl_no') %>
              </th>
              <th>
                <%= t('first_name') %>
              </th>
              <th><%= t('batch') %></th>
              <th><%= t('adm_no') %></th>

            </tr>
            </thead>
            <tbody>
            <% @students.each_with_index do |student, i| %>
              <tr class="tr-<%= cycle('odd', 'even') %>">
                <td class="col-1"><%= ((@students.current_page - 1) * @students.per_page) + (i + 1) %></td>
                <%  if  student.is_active %>
                  <td class="col-2"><%=  link_to student.full_name, :controller => 'student', :action => 'profile', :id => student.id%></td>
                <% else  %>
                  <td class="col-2"><%=  link_to student.full_name, :controller => 'archived_student', :action => 'profile', :id => student.id%></td>
                <% end %>
                <td class="col-2"><%= student.batch.full_name %></td>
                <td class="col-2"><%= student.admission_no %></td>
              </tr>
            <% end %>
           </tbody>   
          <% else %>

            <tr class="tr-<%= cycle('odd', 'even') %>">
              <td class="col-2"><%= t('no_students_found') %></td>
            </tr>
          <% end %>
        </table>
        <%= will_paginate @students %>
        <div class="extender">
        </div>
      </div>
    <% end %>
  <% end %>
</div>
