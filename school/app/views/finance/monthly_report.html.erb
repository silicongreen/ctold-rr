<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transactions') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('monthly_transactions') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">

  </div>
  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><ul><li><%= flash[:warn_notice] %></li></ul> </div>
  <% end %>
 <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">
    <% form_for :report, :url => {:action => 'update_monthly_report'},:html=>{:id=>"form_id"} do |form| %>
      <div class="label-field-pair">
        <label><%= t('select_start_date') %>:</label>
        <div class="input-container"><%= calendar_date_select_tag 'start_date', I18n.l(Date.today,:format=>:default) ,:popup=>:force%></div>
      </div>
      <div class="label-field-pair">
        <label><%= t('select_end_date') %>: </label>
        <div class="input-container"><%= calendar_date_select_tag 'end_date', I18n.l(Date.today,:format=>:default) ,:popup=>:force%></div>
      </div>

    <div class="submit-btn" ><%=  link_to_function "â–º #{t('monthly_report')}","submit_form();",{:class=>'user_button'} %></div>
    <%end%>
  </div>
</div>
<script type="text/javascript">
function submit_form(){
  url="/finance/update_monthly_report?start_date="+j('#start_date')[0].value+"&end_date="+j('#end_date')[0].value
  window.location.href=url   
}
  
</script>

