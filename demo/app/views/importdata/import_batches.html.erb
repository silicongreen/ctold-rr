<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('import_batch_course') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <% form_for :import_batches,:url=>{:action=>"import_batches"},:html => {:class => 'form', :multipart=>true} do |f| %>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('import_batch_course')}" %></div>
        <div class="input-container"><%= f.file_field :"class_file", :size=>12  %></div>
      </div>
      <div id="procced_anyway" class="label-field-pair">
        <div class="label-container1">&nbsp;</div>
        <div class="input-container"><%= check_box_tag "procced[]","proceed_import", @selected, :id=>"free_feed", :style => "float:left; width: 41px; margin: 10px 0 0 10px;" %> <label for="free_feed"><%= "#{t('proceed_anyway')}" %></label></div>
      </div>
      <%= submit_tag "", :value => "► #{t('save')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>

    <% end %>

    <div class="extender"></div>
  </div>
</div>