    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('create_ledgers')}  ", :action => "create_ledger" %></div>
      <div class="link-descr"><%= t('create_new_ledgers') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('view_ledgers')}  ", :action => "view_ledgers" %></div>
      <div class="link-descr"><%= t('view_and_edit_all_ledgers') %></div>
    </div>

  </div>
</div>
