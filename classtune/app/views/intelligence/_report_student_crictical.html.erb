<% unless @report_data.blank? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">       
      <h2><%=@report_data['report_type']%></h2>
      <table id="listing table-design">
            <tr>
                <td><b>Student Name</b></td> 
                <td><b>Shift</b></td> 
                <td><b>Class</b></td> 
                <td><b>Section</b></td> 
                <td><b>Present (%)</b></td> 
            </tr>    
            <% unless @report_data['students'].blank? %>  
              <% @report_data['students'].each do |student| %>
               
                <tr>
                  <td class="col-2"><b><%= student['student_name'] %></b></td>
                  <td class="col-2"><b><%= student['shift_name'] %></b></td>
                  <td class="col-2"><b><%= student['class_name'] %></b></td>
                  <td class="col-2"><b><%= student['section_name'] %></b></td>
                  <td class="col-2"><b><%= student['att'] %> %</b></td>
                 
                </tr> 
              <% end %>  
            <% end %>
      </table>
         
  </div>
<% end %>


 

<%= stylesheet_link_tag 'list_table' %>
 
