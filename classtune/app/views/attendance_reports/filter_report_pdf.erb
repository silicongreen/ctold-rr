<div id="page-yield" class="available_sections1">
  <div class="page1"></div>
  <div class="section1 row" >
    <center>
      <h2><%= t('attendance_report') %></h2>
      <div class="hor_line"></div>

      <div class="extender"> </div>
    </center>
  </div>

  <%  if @academic_days %>
    <% working_days = @academic_days %>
    <div class="section1 row" >
      <center>
      <% @batch = Batch.find_by_id(params[:batch]) %>
      <% course = Course.find_by_id(@batch.course_id) %>
        <div id ="main_info">
          <div class="info1">
            <div class="info-left" style="width: 100%;">
              <h4><%= t('course') %> : <%= @batch.course_id %> <%= @batch.name %> 1 <%= @batch.course.course_name %> 1<%= course.section_name %></h4>
            </div>
            <div class="info-left" style="width: 100%;">
              <h4><%= "Section" %> : s <%= course.section_name %></h4>
            </div>
          </div>
          <div class="info1">
              <div class="info-left">
              <% if @config.config_value == 'Daily' %>
                <h4> <%= "#{t('total_no_of_wrkng_days')} = " + @academic_days.to_s %></h4>
              <% else %>
                <h4> <%= "#{t('total_no_of_wrkng_hours')} = " + @academic_days.to_s %></h4>
              </div>
              <div class="info-right">
                <% if @subject.nil? %>
                  <h4> <%= "#{t('subject')} : " + "#{t('all_subjects')}"  %></h4>
                <% else %>
                  <h4> <%= "#{t('subject')} : " + @subject.name  %></h4>
                <% end %>
              <% end %>
              
              
            </div>
              <h4> &nbsp;&nbsp;&nbsp;<%= "#{t('filtered')}: "+ t(@range.to_s.downcase) + " " + @value.to_s + "%" %></h4>
              <% unless @start_date_main.blank? %>
                <h4>&nbsp;&nbsp;&nbsp;Month: <%= @start_date_main.strftime("%B")%></h4>
              <% else %>
                <h4>&nbsp;&nbsp;&nbsp;Month: <%= @start_date.strftime("%B")%></h4>
              <% end %>
          </div>
        </div>
      </center>
    </div>
    <div class="section1 row" id="table-headers" >
      <center>
        <table id="pdf-table" width="100%">
          <tr class="table-header">
              <td class="col-pdf1"><%= "Roll" %></td>
              <td class="col-pdf1"><%= t('name') %></td>
              <td class="col-pdf1"><%= t('adm_no') %></td>
              <td class="col-pdf1">
                Present
              </td>
              <td class="col-pdf1">
                Late
              </td>
              <td class="col-pdf1">
                Absent
              </td>
              <td class="col-pdf1">
                Leave
              </td>
              <td class="col-pdf1"><%= t('total') %></td>
              <td class="col-pdf1"><%= t('percentage') %></td>
              <td class="col-pdf1"><%= "Mobile" %></td>
          </tr>
          <% extender = 0 %>
          <% std_count = 0 %>
          <% @students.each_with_index do |student,i| %>
             
            <% c =cycle('even','odd ') %>
            <% if @leaves[student.id]['percent'].round(2) < @value.to_f and @range == 'Below' %>
              <%  std_count = std_count+1; %>
              
                
              <tr class="table-header">
                <td class="col-pdf1"><%= student.class_roll_no %></td>
                <td class="col-pdf"><%= student.full_name %></td>
                <td class="col-pdf"> <%= student.admission_no %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['present'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['late'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['absent'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['on_leave'] %></td>
                <td class="col-pdf"><%= @leaves[student.id]['total'] %></td>
                <td class="col-pdf"><%= @leaves[student.id]['percent'].round(2) unless @leaves[student.id]['percent'].nil? %></td>
                <td class="col-pdf1"><%= student.sms_number %></td>
              </tr>
            <% end %>
            <% if @leaves[student.id]['percent'].round(2) > @value.to_f and @range == 'Above' %>
              <%  std_count = std_count+1; %>
              
              <tr class="table-header">
                <td class="col-pdf1"><%= student.class_roll_no %></td>
                <td class="col-pdf"><%= student.full_name %></td>
                <td class="col-pdf"> <%= student.admission_no %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['present'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['late'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['absent'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['on_leave'] %></td>
                <td class="col-pdf"><%= @leaves[student.id]['total'] %></td>
                <td class="col-pdf"><%= @leaves[student.id]['percent'].round(2) unless @leaves[student.id]['percent'].nil? %></td>
              </tr>
            <% end %>
            <% if @leaves[student.id]['percent'].round(2) == @value.to_f and @range == 'Equals' %>
               <%  std_count = std_count+1; %>
              
              <tr class="table-header">
                <td class="col-pdf1"><%= student.class_roll_no %></td>
                <td class="col-pdf"><%= student.full_name %></td>
                <td class="col-pdf"> <%= student.admission_no %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['present'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['late'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['absent'] %></td>
                <td class="col-pdf"> <%= @leaves[student.id]['on_leave'] %></td>
                <td class="col-pdf"><%= @leaves[student.id]['total'] %></td>
                <td class="col-pdf"><%= @leaves[student.id]['percent'].round(2) unless @leaves[student.id]['percent'].nil? %></td>
                <td class="col-pdf1"><%= student.sms_number %></td>
              </tr>
            <% end %>
          <% end %>  
        </table>
      </center>
    </div>
  

  <%  else %>
    <div class="section1 row" >
      <center>
        <div class="no-data"><%= t('no_report_for_given_period') %></div>
      </center>
    </div>
  <% end %>


</div>
