<% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>
<div id="fee-collections-list">
<table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('username') %></th>
        <th><%= t('bus_fare') %></th>
        <th><%= t('start_date') %></th>
        <th><%= t('end_date') %></th>
        <th><%= t('due_date') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @transport_defaulters.each do |t| %>
      <tr class="<%= cycle('odd', 'even')%> ">
        <td class="col-1"><%= t.user.full_name %></td>
        <td class="col-2"><%= precision_label t.bus_fare %></td>
        <td class="col-3"><%= t.start_date %></td>
        <td class="col-4"><%= t.end_date %></td>
        <td class="col-5"><%= t.due_date %></td>
        <td class="col-6">
          <p>

          <%if t.transaction_id.nil? %>
           <%= link_to_remote "â–º #{t('pay_fees')}",:class=>'submit_button' ,:url=>{:action=>'transport_defaulters_fee_pay', :id => t.id} %>
          <% else %>
        <h4><%= t('fees_paid') %></h4>
            <%end%>
        </p>
         </td>
     </tr>
    <% end %>
    </tbody>
</table>
</div>
<style>
    a {
      font-size: 11px;
      text-decoration: underline;
      font-family: verdana;
    }
    td {
      font-size: 12px;
      font-family: verdana;
    }
</style>