<div id="content-header">
<div class='header-icon subjects-icon'></div>
   <h1><%= t('subjects_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('assign_subject') %></div>


</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('configuration_text'), :controller => "configuration", :action=>"index" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to t('manage_batch'), :controller => "courses", :action => "manage_batches" %>  <div class = "bread-crumb-separator"> > </div> 
    <%= t('assign_subject') %>
  </div>  
  <% unless flash[:notice].nil? %>
    <p  class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="errors"></div>
  <div id="msg"></div>
  <div class="linker">
    <%= link_to_remote "#{t('add_normal_subject')}", :url => { :action => 'new_subject', :id => @batch} %> |
    <%= link_to "#{t('add_elective')}", batch_elective_groups_path(@batch) %> <span style="display: none;">|</span>
    <%= link_to_remote "#{t('assign_old_batch_subject')}", :url => { :controller=>'batch_transfers',:action => 'get_previous_batch_subjects', :id => @batch}, :html => {:style => "display: none;"} %>
  </div>
  <div id="previous-batch-subjects"></div>

  <div id="subjects">
    <% unless @normal_subjects.empty? %>

      <ul id="category-list">
        <h4><%= t('normal_subjects') %></h4>
        <% @normal_subjects.each do |sub| %>
          <li id="subject-<%=sub.id%>" class="list<%=cycle('odd', 'even')%>">
            <div class="category-name"> 
              <% unless sub.icon_number.nil? or sub.icon_number.empty? %>  
                <%= image_tag "/images/icons/subjects/#{sub.icon_number}", :class => 'custom_icon' %>
              <% end %> 
              <span style="display: inline-table; vertical-align: top; margin-left: 10px; margin-top: 10px;"><%= sub.id %></span> 
              <span style="display: inline-table; vertical-align: top; margin-left: 10px; margin-top: 10px;"><%= sub.name %></span>  
            </div>
            <div class="category-code" style="margin-top: 10px;"><%= truncate(sub.code, :length => 20) %></div>
          </li>
        <% end %>
      </ul>
    <% end %>


    <% unless @elective_groups.empty? %>
      <% @elective_groups.each do |eg| %>
        <% unless @elective_subjects.empty? %>
          <ul id="category-list">
            <h4><%= eg.name %>:</h4>
            <% @elective_subjects.each do |elect| %>
              <% if elect.elective_group_id == eg.id %>
                <li id="elect-<%=elect.id%>" class="list<%=cycle('odd', 'even')%>">
                  <div class="category-name"> 
                    <% unless elect.icon_number.nil? or elect.icon_number.empty? %>  
                      <%= image_tag "/images/icons/subjects/#{elect.icon_number}", :class => 'custom_icon' %>
                    <% end %>
                    <span style="display: inline-table; vertical-align: top; margin-left: 10px; margin-top: 10px;"><%= elect.id %></span> 
                    <span style="display: inline-table; vertical-align: top; margin-left: 10px; margin-top: 10px;"><%= elect.name %></span>
                  </div>
                  <div class="category-code" style="margin-top: 10px;"><%= truncate(elect.code, :length => 20) %></div>
                </li>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    <% end %>
  </div>




  <div id="modal-box" style="display:none;"></div>

  <div class="extender"></div>
</div>
<style>
  .custom_icon{
    border: 1px solid #ccc;
    height: 40px;
    padding: 3px;
    width: 40px;
  }
</style>
<% content_for :head do %>
  <%= javascript_include_tag "custom/assign-icon" %>
<% end %>