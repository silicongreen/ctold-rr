
<div class="CSSTableGenerator" >
<% unless @subjects.nil? or @subjects.empty?  %>
<table class="table-design">
    <tr>
        <td>
          Subject
        </td> 
       
    </tr>
    <tr>
        <td>
          <div class="left-dev-icon">
          
          </div>
          <div class="left-dev-text">
            <span>
                All Subjects
            </span>
          </div>
     
        
          <%= link_to "Term Progress" ,{:controller => 'exam', :action => 'generated_report_all_subject', :student=>@student.id, :exam_type => 3} %>
         
          <%= link_to "Class Test Progress" ,{:controller => 'exam', :action => 'generated_report_all_subject', :student=>@student.id, :exam_type => 1} %>
          
          <%= link_to "All Exam" ,{:controller => 'exam', :action => 'generated_report_all_subject', :student=>@student.id, :exam_type => 0} %>
        </td>
    </tr>
<% @subjects.each do |s| %>
   
    <tr>
        <td>
          <div class="left-dev-icon">
          <% if s.icon_number %>
                <%= image_tag("icons/subjects/"+s.icon_number.to_s , :size=> "83x60", :alt=> s.name) %>
              <% else %>
                <%= image_tag("icons/subjects/8.png" , :size=> "83x60", :alt=> s.name) %>
          <% end %>
          </div>
          <div class="left-dev-text">
            <span>
                <%= s.name %>
            </span>
          </div>
     
        
          <%= link_to "View" ,{:controller => 'exam', :action => 'generated_report3', :student=>@student.id, :subject => s.id} %>
         
        </td>
    </tr>


<% end %>
</table>

<% end %>
</div>  
<style>
  .left-dev-icon
  {
     float:left;
     width: 90px;
     text-align: left;
  }
  .left-dev-text span
  {
     font-size:16px;
     font-weight: bold;
     margin: 20px 10px;
     float:left;
  }
  .left-dev-text
  {
     float:left;
     width: 40%;
     text-align: left;
  }
  
  .CSSTableGenerator td a
  {
      -moz-border-radius: 3px;
      -webkit-border-radius: 3px;
      background: #CB1119 none repeat scroll 0 0;
      color: #FFFFFF !important;
      font-size: 14px;
      font-weight: bold;
      margin-top: 20px;
      padding: 7px 10px;
      border: none;
      text-align: center;
      width: auto;
      cursor: pointer;
      float: right;
      margin-right : 5px;
      text-decoration: none;
      display: block;
  }
</style>  
