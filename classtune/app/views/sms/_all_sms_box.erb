<label class="head_label"><%= t('sms_to_all') %><span></span></label>
<div id="sms_box">
  <% remote_form_for :send_sms,:url=>{:action=>'sms_all'},
    :loading => "$('loader').show();",
    :loaded => "$('loader').hide();" , :before=>"$('submit_button').disable()",
    :complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |sms| %>
    <div class="label-field-pair">
      <div class="text-input-bg"><%= text_area :send_sms,:message, :rows=>5,:cols=>30,:maxlength=>155 %>
      </div>
    </div>
    <div id="textarea_sms_feedback" style="margin-left: 201px;margin-bottom: 10px;float:left; clear:both;"></div>
    <%= submit_tag "#{t('send_sms')}",:class=>'submit_button', :id => 'submit_button',:onclick=>"return !j('#send_sms_message').val().blank();" %>
    <div class="loader_image">
      <%= image_tag("loader.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader",
        :style =>"display: none;" ) %>
    </div>
  <% end %>
</div>


