
<% unless @report_data.blank?  or  @report_data['report'].blank? %>
<%= render  :partial=>"/connect_exam/south_point/header" %>  
<div id="page-yield"  class="available_sections1 south-point-protrait">
      <p>&nbsp;</p>
      <table  width="100%" >
            <thead>
                <tr>
                   
                    <td><b>Student's Name : <%= "#{@student.full_name}" %> </b></td>
                    <td align="right"><b>Roll No. : <%= "#{@student.class_roll_no}" %></b></td>
                    
                </tr>
            </thead>    
      </table>  


      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">


              <table id="pdf-table" width="100%" cellspacing="0">
                  <% c = 'even'  %>
                  <tr class="table-header">
                      <td class="col-pdf"><%= "Sl. No." %></td>
                      <td class="col-pdf"><%= "Subject" %></td>
                      <td class="col-pdf">Full Mark</td>
                      <td class="col-pdf">Obtained Mark</td>
                      <% if @exam_type_course == 2 %>
                        <td class="col-pdf">Converted Mark (50/25)</td>
                      <% end %>
                      <td class="col-pdf">Grade</td>
                      <td class="col-pdf">Highest Mark</td>
                      
                    
                  </tr>

                  <% total_parcent = 0 %>
                  <% total_subject = 0 %>
                  <% i = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% i = i+1 %>
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          
                          <% obtained_mark = 0 %>
                          <% full_mark = 0 %>
                          <% highest_mark = 0 %>
                          <% st_full_mark = 0 %>
                          <% ct_full_mark = 0 %>
                          
                          <% st_marks = [] %>
                          <% ct_marks = [] %>
                          <% avg_mark_st = 0; %>
                          <% avg_mark_ct = 0; %>
                          
                          <td class="col-pdf"><%= i %></td>
                          <td class="col-pdf td-align-left no-warp"><%= subjects['name'] %></td>
                            <% 
                              unless @report_data['report']['exams'].blank?  
                                 @report_data['report']['exams'].each do |report| 
                                    if st_full_mark == 0 and report['exam_category'] == '4'
                                      if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank?
                                        st_full_mark = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                      end
                                    end                     
                                    if ct_full_mark == 0 and report['exam_category'] == '1'
                                      if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank?
                                        ct_full_mark = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                      end
                                    end
                                    
                                    if report['exam_category'] == '4'
                                     if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank?
                                        st_marks << report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                     else
                                        st_marks << 0
                                     end      
                                    end

                                    if report['exam_category'] == '1'
                                      if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank?
                                         ct_marks << report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                      else
                                         ct_marks << 0
                                      end      
                                    end
                                    
                                end
                              end
                            
                            st_marks.sort! {|x,y| y <=> x }
                            ct_marks.sort! {|x,y| y <=> x }
                            main_full_mark = 0
                            main_mark_obtain = 0
                            
                            if @exam_type_course == 1
                              avg_mark_ct = ct_marks[0].to_f
                              if st_full_mark.to_i == 10 
                                avg_mark_st = (st_marks[0].to_f+st_marks[1].to_f)/2
                              else
                                avg_mark_st = st_marks[0].to_f
                              end
                              main_full_mark = full_mark = ct_full_mark.to_i+st_full_mark.to_i
                              obtained_mark = avg_mark_ct.to_f+avg_mark_st.to_f
                            end   
                            if @exam_type_course == 2
                              if ct_full_mark.to_i == 30 
                                  avg_mark_ct = ct_marks[0].to_f+ct_marks[1].to_f
                                  main_full_mark = main_full_mark+ct_full_mark.to_i+ct_full_mark.to_i
                              else 
                                  avg_mark_ct = ct_marks[0].to_f
                                  main_full_mark = main_full_mark+ct_full_mark.to_i
                              end 
                              
                              if st_full_mark.to_i == 20 
                                  avg_mark_st = st_marks[0].to_f+st_marks[1].to_f
                                  main_full_mark = main_full_mark+st_full_mark.to_i+st_full_mark.to_i
                              else 
                                  avg_mark_st = st_marks[0].to_f
                                  main_full_mark = main_full_mark+st_full_mark.to_i
                              end
                              
                              main_mark_obtain = total_mark = avg_mark_ct+avg_mark_st
                              full_mark = ct_full_mark.to_i+st_full_mark.to_i
                              
                              if main_full_mark == 100
                                full_mark = 50
                                obtained_mark = (total_mark.to_f/2.00)
                              else
                                obtained_mark = (total_mark.to_f/main_full_mark.to_f)*25
                                full_mark = 25
                              end  
                            end 
                          
                            if @exam_type_course == 3
                              avg_mark_ct = (ct_marks[0].to_f+ct_marks[1].to_f)/2
                              obtained_mark = avg_mark_ct
                              main_full_mark = full_mark = ct_full_mark
                            end 
                            main_mark = (obtained_mark.round().to_f/full_mark.to_f)*100 
                            
                            %>


                          <td class="col-pdf"><%= main_full_mark.round().to_s %></td>
                          <% if @exam_type_course == 2 %>
                            <td class="col-pdf"><%= main_mark_obtain.to_i %></td>
                          <% end %>
                          <td class="col-pdf"><%= obtained_mark.round().to_s %></td>
                          <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                          <% if !grade.blank? and !grade.name.blank? %>
                            <td class="col-pdf"><%= grade.name %></td>  
                          <% else %>
                            <td class="col-pdf">-</td>  
                          <% end %> 
                          <td class="col-pdf">
                            <% if !@subject_highest_quarter[subjects['id'].to_i].blank? %>  
                                <%= @subject_highest_quarter[subjects['id'].to_i].to_i %>
                            <% end %>    
                          </td>
                          
                               

                      </tr> 
                    <% end %>
                    <%  
                    
                    group_exams = GroupedExam.find_all_by_connect_exam_id(@connect_exam_obj.id) 
                    
                    @all_subjects = []
                    group_exams.each do |group_exam|
                      allexams = Exam.find_all_by_exam_group_id(group_exam.exam_group_id);
                      allexams.each do |exam|
                        if !@all_subjects.include?(exam.subject.id)
                          @all_subjects << exam.subject.id
                        end
                      end
                    end 
                    %>
                    
                      <% unless @report_data['report']['no_exam_subject_resutl'].blank? %>
                        <% @report_data['report']['no_exam_subject_resutl'].each do |report| %>
                        
                        <%  if @all_subjects.include?(report['id'].to_i) %>
                          <% i = i+1 %>
                            <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                            <td class="col-pdf"><%= i %></td>
                            <td class="col-pdf td-align-left"><%= report['subject_name'] %></td>
                            <td class="col-pdf"></td>
                            <td class="col-pdf"></td>
                            <% if @exam_type_course == 2 %>
                            <td class="col-pdf"></td>
                            <% end %>
                            <td class="col-pdf"><%= report['subject_comment'] %></td>
                            <td class="col-pdf">&nbsp;</td>
                            </tr>
                          <% end %>
                        <% end %>
                      <% end %>
                  <% end %>     

              </table>
              
              <%= render  :partial=>"/connect_exam/south_point/gradding_level4" %>
              
              <table id="pdf-table" class="margin-top-bottom-10 font-size-2" width="100%" >

                  <tr class="table-header">
                      <td class="col-pdf td-align-left" valign="top">Class Teacher's Comment</td>
                  </tr>
                      <tr class="table-header">
                          <td class="col-pdf comment_section_final td-align-left" valign="top">
                              <% if !@exam_comment.blank? %>

                                <%= @exam_comment.comments %>

                              <% else %> 

                                

                              <% end %>
                          </td>                      
                      </tr>
              </table>
              
              <%= render  :partial=>"/connect_exam/south_point/sign_south" %>


          </div>
      </div>



  </div>

<% end %>
<%= stylesheet_link_tag 'list_table' %>

<% if params[:page_height] %>
  <script type="text/javascript">
    var body = document.body,
            html = document.documentElement;
    var pg_height = parseInt(<%= params[:page_height] %>)
    var page = new Element('div', {'class': 'page1'});
    var pageBreak = new Element('div', {'class': 'page-break1'});
    var insertPageBreak = function () {
        body.appendChild(pageBreak.cloneNode(true))
    };
    var insertPage = function () {
        body.appendChild(page.cloneNode(true));
    };
    var currPage = function () {
        return $$('.page1').last()
    };
    var current_page_height = 0
    var i = 0
    $$('.available_sections1 .section1').each(function (el) {
        a = parseInt(el.getHeight());
        c = current_page_height + a;
        current_page_height = c;
        if (c > pg_height) {
            current_page_height = a
            body.appendChild(new Element('div', {'id': 'page-blank_' + i, 'class': 'page-blank'}))
            document.getElementById('page-blank_' + i).style.height = (c - pg_height) + 'px';
            document.getElementById('page-blank_' + i).innerHTML = "&nbsp;"/* if a div doesnt have any content it may not display.. set height will not work */
            i += 1
            el.style.marginTop = "50px"; /* for this border-top is coming, top section of each page */
            insertPageBreak();
            insertPage();
        }
        currPage().appendChild(el);
    });
  </script>
<% end %>