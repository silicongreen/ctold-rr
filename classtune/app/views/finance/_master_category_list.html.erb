<% unless @master_categories.empty? %>
<div style="border: 1px solid #ccc; padding: 20px; border-radius: 8px;">
  <h2>Master Fee Categories</h2>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('sl_no') %></th>
        <th><%= t('fees_name') %></th>
        <th><%= t('created_date') %> </th>
        <th><%= t('delete_text') %> </th>
      </tr>
    </thead>
    
    <tbody>
    <% @master_categories.each_with_index do |fees,i| %>
      <tr class="<%= cycle("odd","even") %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-4"><%= link_to  fees.name, :action => 'master_category_particulars',:id => fees.id,:batch_id=>@batches.id %></td>
        <td class="col-7"><%= I18n.l(fees.created_at,:format=>"%m-%d-%Y") %></td>
        <td class="col-7">
          <div class="options">
            <%  unless fees.check_fee_collection(@batches.id) == false %>
              <span class="small"> <%= link_to_remote t('delete_text'),:confirm=>"#{t('delete_confirm_msg')}", :url => { :action => 'master_category_delete',:id => fees.id,:batch_id=>@batches.id} %></span>
              <span class="small"> <%= link_to_remote t('edit_text'), :url => { :action => 'master_category_edit',:id => fees.id,:batch_id=>@batches.id} %></span>
            <% else %>
              <span class="small-strike"><%= t('delete_text') %></span>
               <span class="small-strike"><%= t('edit_text') %></span>
            <% end %>
            
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>  
  </table>
</div>
<% else %>
<div style="border: 1px solid #ccc; padding: 20px; font-weight: bold; border-radius: 8px;"><%= t('no_categories_to_display') %>!</div>
<% end%>
