<?xml version="1.0" encoding="UTF-8"?>
<%=
@xml.reminder_detail{
  @reminders.each do |reminder|
    @reminder = reminder
    @xml.reminder do
      @xml.sender(@reminder.user.try(:username))
      @xml.subject(@reminder.subject)
      @xml.body(@reminder.body)
      @xml.created_at(@reminder.created_at)
      @xml.is_read(@reminder.is_read)
    end
  end
}%>


