<% if @detention.status==0  %>
                      <% if @current_user.admin %>
                        <% if @detention.ackhnowledged==1 %>
                          <font color="green">Acknowledged</font></br>
                        <% else %>
                          <%= link_to_remote "delete" , :url => {:controller => 'detention', :action => "show_detention", :id =>@detention.id},:confirm => "Are you sure?",:with => "'achnowladge_id='+$('Detention_ackhnowledged').value+'&batch_id='+$('Detention_batch_id').value+'&status_id='+$('Detention_status').value+'&student_id='+$('Warning_student_id').value",:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> "data-div" %>
                        <% end %>
                        <%= link_to_remote "Done" , :url => {:controller => 'detention', :action => "done", :id =>@detention.id },:confirm => "Are you sure?",:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> 'status_'+@detention.id.to_s %>

                      <% elsif @current_user.employee %>
                        <% if @employee.is_pod.to_i == 1 %>
                          <% if @detention.ackhnowledged==1 %>
                            <font color="green">Acknowledged</font></br>
                          <% else %>
                            <%= link_to_remote "delete" , :url => {:controller => 'detention', :action => "show_detention", :id =>@detention.id},:confirm => "Are you sure?",:with => "'achnowladge_id='+$('Detention_ackhnowledged').value+'&batch_id='+$('Detention_batch_id').value+'&status_id='+$('Detention_status').value+'&student_id='+$('Warning_student_id').value",:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> "data-div" %>
                          <% end %>
                          <%= link_to_remote "Done" , :url => {:controller => 'detention', :action => "done", :id =>@detention.id },:confirm => "Are you sure?",:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> 'status_'+@detention.id.to_s %>

                        <% else %>
                          <b>Not Done Yet</b>
                              <% if @detention.ackhnowledged==1 %>
                                <font color="green">Acknowledged</font></br>
                              <% elsif @detention.employee_id== @employee.id %>
                                <%= link_to_remote "delete" , :url => {:controller => 'detention', :action => "show_detention", :id =>@detention.id},:confirm => "Are you sure?",:with => "'achnowladge_id='+$('Detention_ackhnowledged').value+'&batch_id='+$('Detention_batch_id').value+'&status_id='+$('Detention_status').value+'&student_id='+$('Warning_student_id').value",:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> "data-div" %>
                              <% end %>
                              
                        <% end %>

                      <% elsif @current_user.parent? and @detention.ackhnowledged==0  %>
                        <%= link_to_remote "acknowledge" , :url => {:controller => 'detention', :action => "ackhnowledged", :id =>@detention.id },:loading => "$('loader').show();", :loaded => "$('loader').hide();" , :update=> 'status_'+@detention.id.to_s %>
                      <% else %>
                        <b>
                            <% if @detention.ackhnowledged==1 %>
                              <font color="green">Acknowledged</font></br>
                            <% end %>
                        Not Done Yet</b>
                            
                      <% end %>
                    <% else %>
                      <b>
                          <% if @detention.ackhnowledged==1 %>
                            <font color="green">Acknowledged</font></br>
                          <% end %>    
                          <font color="green"> Completed </font> 
                      </b>
                    <% end %>