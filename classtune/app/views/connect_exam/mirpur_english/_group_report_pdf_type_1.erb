                              <td class="col-pdf"><b><%= grade.name %></b></td>
                              <% if grade.name == "F" %>
                              <%
                                final_grade = 0.0
                                letter_grade = "F"
                                
                              %>
                              <% end %>
                            <% else %>
                              <td class="col-pdf"><b>N/A</b></td>
                            <% end %>
                              
                            <% if !grade.blank? and !grade.credit_points.blank? %>
