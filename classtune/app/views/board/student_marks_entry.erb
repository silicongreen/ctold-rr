<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" media="screen" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"/>
<div id="content-header">
 <h1><%= link_to "Board Exam Student",{:action => "exam_students",:id=>@board_exam.id} %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Student Marks Entry</div>

</div>
<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="box">
    <h4 align="center"><%= @board_exam.board_exam_name.name %> <%= @board_exam.board_exam_group.name %> <%= @board_exam.board_session.name %></h4>
    <h4 align="center"><%= @std_info.full_name %></h4>
    <div style="clear: both; height: 20px;"></div>
    <div id="exams">
      <% unless @board_exam_subject.blank? %>
        <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading", :style =>"display: none;" ) %>
        <% form_remote_for :board_exam_mark, :url=>{:action=>"save_marks"},:before=>"$('submit_button').disable(); $('loading').show();",:complete=>"setTimeout(function(){$('submit_button').enable();},1000); $('loading').hide();" do |f| %>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th><i class="fa fa-caret-right"></i>SL</th>
                <th><a>Subjects</a></th>
                <th>Code</th>
                <th class="no-sort" style="text-align: right">Grade</th>
            </tr>
        </thead>
        <tbody>
          <% iloop = 1 %>
          <% @board_exam_subject.each do |subject| %>
            <% marks = @marks.select{|mark| mark.board_exam_subject_id == subject.id} %>
              <tr>
                  <td><%= iloop %></td>
                  <td><%= subject.name %></td>
                  <td><%= subject.code %></td>
                  <td style="text-align:right">
                      <%= select :board_exam_mark,"[#{subject.id}][#{@board_exam_student.id}][grade]",options_for_select(BoardGradingLevel.find(:all).map{|ga| [ga.name,ga.id]},(marks.blank?)?"":marks[0].board_grading_level_id),{:prompt => "Select Grade"} %>
                  </td>
              </tr>

            <% iloop = iloop+1 %>
          <% end %>
            
        </tbody>    
      
        </table>
        <%= f.submit  "", :value => "â–º #{t('save')}", :class => "submit_button_margin", :id => "submit_button" %>
       <% end %>
      <% end %>
    </div>
  </div>

</div>

<style>
    *, *::before, *::after
    {
       box-sizing: initial;
    }
    .submit_button_margin
    {
       cursor: pointer;
    }
</style>    
