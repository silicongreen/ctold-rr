<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('add') + ' ' + t('syllabus_text') %></h1>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :syllabus do |f| %>
    <%#= debug @ar_bathces %>
    <% @ar_bathces.each do |batch_id| %>
      <%= hidden_field :batch,"",:value => batch_id %>
    <% end %>
    <% if @is_class %>
      <input type="hidden" name="class" value="<%= true %>" >
      <input type="hidden" name="course_name" value="<%= @course_name %>" >      
    <% end %>
    <input type="hidden" name="batch_id" value="<%= @batch.id %>" >
    <input type="hidden" name="batch_name" value="<%= @batch_name %>" >
    
    
    <%= error_messages_for :syllabus %>

    <div id="add_news_form">
      <div class="news_label_field">
        <label for="title"><%= t('title') %><span class="necessary-field">*</span></label>
        <div id="news_title_text_field_bg"><%= f.text_field :title %></div>
      </div>
      <!--<div class="label-field-pair">
        <label for="student_course"><%#= t('student_batch') %>:
          <%#= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
        </label><br /><br />
        <div class="text-input-bg">
          <%#= select :syllabus, :batch_id,
            @batches.map {|b| [b.full_name, b.id] },
            {:prompt => t('select_a_batch')},
            {:onchange => "#{remote_function(
            :url => { :action => 'show' },
            :with => "'batch_id='+value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"  )}"} %>
        </div>
      </div>-->
      
      <div id="syllabus" class="news_label_field">
        <div id="is_yearly">
        <label for="student_course"><%= t('is_yearly') %></label>
        <%= check_box_tag 'syllabus[is_yearly]' %>
        </div>
        <br />
        <% unless @exam_groups.empty? %>
        <div id="exam_group_box">
        <label for="student_course"><%= t('examp_groups') %></label>
        <%= select :syllabus, :exam_group_id,
            @exam_groups.map {|b| [b.name, b.id] },
            {:prompt => t('select_exam_group')}%>        
        </div>
        <% end %>


        <br />



        <% unless @all_subjects.empty? %>
        <div id="subject_id">
            <label for="student_course"><%= t('subject') %></label>
            <%= select :syllabus, :subject_id,
            @all_subjects.map {|subject| [subject.name, subject.id] },
            {:prompt => t('select_subject')}%>            
            
        </div>
        <% end %>

        <script type="text/javascript">
          jsyl=jQuery.noConflict();

          jsyl(document).ready(function() {
            jsyl('#syllabus_is_yearly').click(function(){ 

              if (jsyl(this).is(':checked'))
              {jsyl("#exam_group_box").hide();}
              else
              {jsyl("#exam_group_box").show();}


        });
          });
        </script>
      </div>
      </br>
      <div class="news_label_field">
        <label for="news_content"><%= t('content') %><span class="necessary-field">*</span></label>
        <div id="news_content_text_field_bg" style="">
          <%= f.redactor :content %>
        </div>
      </div>
    </div>

  <center>  <%= submit_tag "", :value => "► #{t('save')}", :class => "news_publish_button", :disable_with => "► #{t('please_wait')}" %></center>

  <% end %>
  <%= load_redactor_script %>
</div>

