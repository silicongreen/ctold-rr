
<h1><%= @school.name %></h1>
<% form_for :smtp_config do |f| %>
  <%= f.error_messages %>
  <h2>SMTP Settings</h2>

  <%= hidden_field_tag "id", @school.id %>

  <%= f.label :enable_starttls_auto %>
  <%= f.text_field 'enable_starttls_auto', :value=>@current_school_settings.nil? ? nil : @current_school_settings.settings['enable_starttls_auto'], :class=>'text', :id=>'username' %>

  <%= f.label :address %>
  <%= f.text_field 'address', :value=>@current_school_settings.nil? ? nil : @current_school_settings.settings['address'], :class=>'text', :id=>'password' %>

  <%= f.label :port %>
  <%= f.text_field 'port', :value=>@current_school_settings.nil? ? nil : @current_school_settings.settings['port'], :class=>'text', :id=>'host_url' %>

  <%= f.label :user_name %>
  <%= f.text_field 'user_name', :value=>@current_school_settings.nil? ? nil : @current_school_settings.settings['user_name'], :class=>'text', :id=>'sendername' %>

  <%= f.label :password %>
  <%= f.text_field 'password', :value=>@current_school_settings.nil? ? nil : @current_school_settings.settings['password'] %>

  <%= f.label :authentication %>
  <%= f.text_field 'authentication', :value=>@current_school_settings.nil? ? nil : @current_school_settings.settings['authentication'] %>

  <%= f.label :domain %>
    <%= f.text_field 'domain', :value=>@current_school_settings.nil? ? nil : @current_school_settings.settings['domain'] %>

  <div class='form-actions'>
    <%= f.submit 'Save', :class  => 'default btn' %>
    <%= link_to 'Delete', { :action=>'remove_smtp_settings', :id=>@school.id }, :confirm=>"Are you sure?",:class  => 'btn-danger btn' %> <br/>
  </div>

  <% unless @current_school_settings.nil? %>
  <%= link_to "Validate SMTP settings", :action=> :check_smtp_settings, :id=> @school.id  %>
  <% end %>


<% end %>