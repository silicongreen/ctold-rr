<% unless @report_data.blank?  or  @report_data['report'].blank? %>
  <% if params[:no_logo].blank? %>
  <div id="pdf-header-south" class="sfx-header" style="width: 100%;">
    <h4 align="center"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/323/transcript.png")),:width=> '65%' %></h4>
  </div>
  <% end %>
  <% unless params[:no_logo].blank? %>
    <div id="pdf-header-south" class="sfx-header" style="width: 100%; height: 300px;"></div>
  <% end %>
  <% total_u = 0 %>
  <div id="page-yield"  class="available_sections1 baf_shaheen">
    <div class="student_information">
      <h4><b>Student's Information</b></h4>

      <table class="std_info_table" width="100%" cellspacing="0">
          <tr>
              <td>Student's ID </td><td colspan="3" class="font-dark">:&nbsp;&nbsp;&nbsp;<%= @student.admission_no %></td>
          </tr>
          <tr>
              <td><%= "Student's Name" %></td><td colspan="3" class="font-light">:&nbsp;&nbsp;&nbsp;<%= @student.full_name.upcase %></td>
          </tr>
          <tr>
              <td>Date of Birth </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= I18n.l(@student.date_of_birth,:format=>"%d %b %Y") unless @student.date_of_birth.nil? %></td>
              <td>Gender </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<% unless @student.gender_as_text.blank?  %><%= t("#{@student.gender_as_text.downcase}") %><% end %></td>
          </tr>
          <tr>
              <% month_number =@connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%-m"):@connect_exam_obj.published_date.strftime("%-m") %>

              <% if month_number.to_i>6 %>
              <td>Academic Session </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i+1:@connect_exam_obj.published_date.strftime("%Y").to_i+1 %></td>
              <% else %>
              <td>Academic Session </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i-1:@connect_exam_obj.published_date.strftime("%Y").to_i-1 %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %></td>
              <% end %>
              <td>Roll </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= @student.class_roll_no %></td>
          </tr>
          <tr>
              <td>Standard </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= @batch.course.course_name %></td>
              <td>Section </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= @batch.course.section_name %></td>

          </tr>
          <tr>
              <td>Exam Name </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= @connect_exam_obj.name %></td>
              <td>Enrollment </td><td class="font-light">:&nbsp;&nbsp;&nbsp;<%= I18n.l(@student.admission_date,:format=>"%d %b %Y") unless @student.admission_date.nil? %></td>

          </tr>

      </table>
    </div>
    <div class="grade_information">
      <%= render  :partial=>"/connect_exam/baf_shaheen/gradding_level" %>
    </div>
      
      


    
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">
            <h4><b>Academics</b></h4>
            <table id="pdf-table" width="99.8%" cellspacing="0">
                <% c = 'even'  %>
                <tr class="table-header">
                    <td class="col-pdf border-left-none" style="font-size: 18px !important; font-weight: normal !important;"><b><%= "SUBJECTS" %></b></td>
                    <td class="col-pdf" style="font-size: 18px !important; font-weight: normal !important;"><b>Assessment<br/>(20)</b></td>
                    <td class="col-pdf" style="font-size: 18px !important; font-weight: normal !important;"><b>H.W & C.W. & S.T<br/>(10)</b></td>
                    <td class="col-pdf" style="font-size: 18px !important; font-weight: normal !important;"><b>Mid Term <br/>(70)</b></td>
                    <td class="col-pdf" style="font-size: 18px !important; font-weight: normal !important;"><b>Marks<br/>(100)</b></td>
                    <td class="col-pdf border-right-none" style="font-size: 18px !important; font-weight: normal !important;"><b>Grade</b></td>
                </tr>

                <% assessment = 0 %>
                <% cwhw = 0 %>
                <% mid = 0 %>
                <% total_mid = 0 %>
                <% total_mark = 0 %>
                <% total_subject = 0 %>
                <% unless @report_data['report']['subjects'].blank? %>
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% if subjects['grade_subject'].to_i == 1 %>
                        <% next %>
                      <% end %>

                      <% subjectdata = Subject.find(subjects['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>@student.id.to_s,:subject_id=>subjects['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>

                      <% if @has_exam_student == false %>
                        <% next %>
                      <% end %>

                      <% has_exam = false %>
                      <% loop=0 %>

                      <% unless @report_data['report']['exams'].blank? %>
                          <% @report_data['report']['exams'].each do |report| %>
                            <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                <% has_exam = true %>
                                <% break %>
                            <% end %>
                          <% end %>
                      <% end %>

                      <% if has_exam == false %>
                        <% next %>
                      <% end %>

                      <tr class="odd">
                        <% sub_assessment = 0 %>
                        <% sub_assessment_full_mark = 0 %>
                        <% sub_cwhw = 0 %>
                        <% sub_cwhw_full_mark = 0 %>
                        <% sub_mid = 0 %>
                        <% sub_mid_full_mark = 0 %>
                        <% total_subject = total_subject+1 %>
                        <% class_test = [] %>

                        <td class="col-pdf align-left-baf border-left-none"><%= subjects['name'].upcase %></td>

                        <% unless @report_data['report']['exams'].blank? %>
                            <% @report_data['report']['exams'].each do |report| %>
                                <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                    <% if report['exam_category'] == '8' %>
                                        <% sub_cwhw = sub_cwhw.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                    <% end %>

                                    <% if report['exam_category'] == '3' %>
                                      <% sub_mid = sub_mid.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                    <% end %>
                                <% end %>

                                <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                    <% if report['exam_category'] == '8' %>
                                        <% sub_cwhw_full_mark = sub_cwhw_full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                    <% end %>

                                    <% if report['exam_category'] == '3' %>
                                        <% sub_mid_full_mark = sub_mid_full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                    <% end %>
                                <% end %>
                            <% end %>

                            <% unless @report_data['report']['exams'].blank? %>
                                <% @report_data['report']['exams'].each do |report| %>
                                    <% if report['exam_category'] == '1' %>
                                        <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                            <% class_test << report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                            <% sub_assessment = sub_assessment.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                            <% sub_assessment_full_mark = sub_assessment_full_mark.to_f+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_f %>
                                        <% else %>
                                            <% class_test << 0 %>
                                        <% end %>
                                    <% end %>
                                <% end %>
                            <% end %>

                            <%
                              assessment_avg = 0
                              cwhw_avg = 0
                              mid_avg = 0

                              if sub_assessment > 0
                                class_test.sort! {|x,y| y <=> x }
                                ass_total_mark = class_test[0].to_f+class_test[1].to_f
                                assessment_avg = (ass_total_mark.to_f/sub_assessment_full_mark.to_f)*20.00
                                assessment_avg = assessment_avg.round()
                                assessment = assessment+assessment_avg
                              end

                              if sub_cwhw > 0
                                cwhw_avg = (sub_cwhw.to_f/sub_cwhw_full_mark.to_f)*10
                                cwhw_avg = cwhw_avg.round()
                                cwhw = cwhw+cwhw_avg
                              end

                              if sub_mid > 0
                                mid_avg = (sub_mid.to_f/sub_mid_full_mark.to_f)*70
                                mid_avg = mid_avg.round()
                                mid = mid+mid_avg
                              end

                              total_c_marks = assessment_avg.to_f+cwhw_avg.to_f+mid_avg.to_f
                              total_mark = total_mark+total_c_marks.to_f
                            %>

                            <td class="col-pdf"><%= assessment_avg %></td>
                            <td class="col-pdf"><%= cwhw_avg %></td>
                            <td class="col-pdf"><%= mid_avg %></td>
                            <td class="col-pdf"><%= sprintf( "%0.01f", total_c_marks) %></td>

                            <% grade = GradingLevel.percentage_to_grade(total_c_marks, @batch.id) %>
                            <td class="col-pdf border-right-none">
                                <% if !grade.blank? and !grade.name.blank? %>
                                    <b><%= grade.name %><b>
                                <% end %>
                            </td>
                        <% end %>
                      </tr>
                    <% end %>
                <% end %>
                <tr class="even">
                    <td class="col-pdf border-left-none" colspan="4"><b>Total Score:</b></td>
                    <!--td class="col-pdf"><%##= sprintf( "%0.01f", mid) %></td-->
                    <td class="col-pdf"><%= sprintf( "%0.01f", total_mark) %></td>

                    <%
                      total_avg_mark = total_mark.to_f/total_subject.to_i
                      grade = GradingLevel.percentage_to_grade(total_avg_mark.to_f, @batch.id)
                    %>

                    <td class="col-pdf border-right-none">
                        <% if !grade.blank? and !grade.name.blank? %>
                          <b><%= grade.name %><b>
                        <% end %>
                    </td>
                </tr>
            </table>

            <table id="pdf-table" class="evaluation" width="99.8%" style="margin-top: 40px !important;">
                <tr class="odd">
                    <td class="col-pdf border-left-none" width="40%">
                        <b>Attendance</b>
                    </td>
                    <td class="col-pdf align-center" width="25%">
                        <b> N/A </b>
                    </td>
                    <td class="col-pdf"  width="20%">
                        <b>Score</b>
                    </td>
                    <td class="col-pdf border-right-none"><%= sprintf( "%0.01f", total_mark) %></td>
                </tr>
            </table>

            <% total_mark = sprintf( "%0.01f", total_mark) %>

            <% grade = GradingLevel.percentage_to_grade(total_mark.to_f, @batch.id) %>

            <% total_mark_final_term = total_mark %>

            <h4 class="h4-evaluation"></h4>

            <table id="pdf-table" class="evaluation" width="99.8%" style="margin-top: 40px !important;">
                <tr class="odd">
                    <td class="col-pdf border-left-none border-right-none">
                        <b>Comment:</b>
                        <% if !@exam_comment.blank? %>
                        <%= @exam_comment.comments %>
                        <% else %>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <% end %>
                    </td>
                </tr>
            </table>
            <table id="pdf-table" class="evaluation" width="99.8%" >
                <tr class="odd">
                    <td class="col-pdf border-left-none no-warp" width="25%" style="height: 55px;">
                        <b>Class Teacher's signature<b>
                    </td> 
                    <td class="col-pdf align-center" width="25%" style="height: 25px;">
                        <br/><br/><br/>
                    </td> 
                    <td class="col-pdf no-warp"  width="25%" style="height: 25px;">
                        <b>Principal's Signature</b>
                    </td>
                    <td class="col-pdf border-right-none"  width="25%" style="height: 25px;">
                        <br/><br/><br/>
                    </td>
                </tr>
            </table>
          </div>
      </div>



  </div>
<% end %>

