<div class="label-field-pair">
  <label for="student_grade"><%= t('students') %></label>
  <% unless @recipients1.empty? %>
    <div class ="scrolable" >
      <% x = '<span> x </span>' %>
      <div class="scroll-inside">
        <% i=0 %>
        <% @recipients1.each do |r|  %>
          <div class="hover">
            <%=  %> <%= link_to r.full_name + x, "#", :onClick => "remove_recipient1(#{r.id})", :class=> 'individual',
              :before => "Element.show('loader')",
              :success => "Element.hide('loader')" %>
          </div>
          <% i=i+1 %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="extender"></div>
