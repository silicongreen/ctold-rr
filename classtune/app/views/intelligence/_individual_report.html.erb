 <% form_for :exam_report, :url=>{:action=>'generated_report'}, :html=> {:id=>'new_student'} do |x| %>
  <div id="page-yield" style="margin-top:0px;">  
      
      <div class="row">  
        <div class="row_label">
          <div>
            <%= t('shift_label') %>
          </div>
        </div>
        <div class="row_data">
          <div>
            <div class="custom_drop_wrapper">
             <%= select :student, :batch_name, options_for_select(Batch.active.find(:all, :group => "name").map {|b| [b.name, b.id]}, @batch_no.to_i), 
            {:prompt => "#{t('select')}"},
            {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&section_page=section_view&section_partial=exam/sections_view&page=course_new&partial_view=exam/courses_new'" ,:before => "$('loading_2').show();",
            :success => "$('loading_2').hide();")}"} %>
            <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="row_label">
          <div>
            <%= t('class_label') %>
          </div>
        </div>
        <div class="row_data">
          <div>
            <div id="course_new" class="custom_drop_wrapper">
              <%= render :partial => 'exam/courses_new', :object => @courses %>
            </div>
          </div>
        </div>
      </div>

      <div class="row"  id="sections_div">
        <div class="row_label">
          <div>
            <%= t('section_label') %>
          </div>
        </div>
        <div class="row_data">
          <div>
            <div id="section_view" class="custom_drop_wrapper">
              <%= render :partial => 'exam/sections_view', :object => @classes %>
            </div>
          </div>
        </div>
      </div>
      <div style="width:50%;float:left; cleqar:both; height:auto; margin-top:10px;" class="text-input-bg label-field-pair" id="exam-group-select">
        <label for="exam_group_id" style="width:30%"><%= t('select_exam_group') %></label>
        <%= select :exam_report, :exam_group_id, @exam_groups.map{|exam| [exam.name,exam.id]},:prompt=> "#{t('select_exam_group')}" %>
      </div>
      <div id="inner-tab-menu" style="width: 45%;float: left;">
        <ul style="float:left; margin-top:20px;">
          <li class='themed_bg themed-dark-hover-background'>
          <%= link_to_remote "View",
               :before => "Element.show('loader');",
               :success => "Element.hide('loader');",
               :update => 'att_report',
               :url=>{:controller=>"intelligence", :action=>"report_overall_individual"},
               :with => "'exam_id='+$('exam_report_exam_group_id').value",
               :html => {:class => 'f2'}
         %></li>
        </ul>
    </div>
     
       
       

     
      
    <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
    


  
  <%= hidden_field_tag 'time_zone_date',@date_today, :id=>'time_zone' %>

  <div id="att_report"><%= render :partial => "exam_report_student.html" %></div>
  
  
  
  
  <% end %>
  
</div>
