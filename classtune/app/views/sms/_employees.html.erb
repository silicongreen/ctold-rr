<iframe name="receiver" id="receiver" style="display: none;"></iframe>
<div style="float: left;">
  <div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('sms_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('employees') %></div>
  </div>
    
  <div id="page-yield-new">
    <div class="box">
      <% form_for :send_sms, :html => {:target=>'receiver', :onsubmit => "return checkdata();", :id => "sms_form", :before=>"$('submit_button').disable();$('loader1').show();",:complete=>"setTimeout(function(){$('submit_button').enable();$('loader1').hide();},5000)"} do |x| %>
        <div style="width: 100%; padding: 20px 0; text-align: center; border-bottom: 1px solid #ccc;min-width: 630px;">
          <input type="checkbox" name="sms_employee_upassword" id="sms_employee_upassword" class="sms_options_employee" style="display: none;">
          <i name="sms_employee_upassword_fa" id="sms_employee_upassword_fa" class="fa fa-square-o sms_options_employee_fa" style="font-size: 20px; cursor: pointer; color: #49BB4B; " aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;">SMS Username/Password</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="checkbox" name="sms_employee_general" id="sms_employee_general" class="sms_options_employee" style="display: none;">
          <i name="sms_employee_general_fa" id="sms_employee_general_fa" class="fa fa-square-o sms_options_employee_fa" style="font-size: 20px; cursor: pointer; color: #49BB4B;" aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;">General SMS</span>
        </div>
        <div style="clear: both; height: 12px;"></div>
        <div id="sms_opt"></div>

      <% end %>

      <div id="status-message">

      </div>
      <%= image_tag("loader2.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader2",
        :style =>"display: none;" ) %>

    </div>
  </div>
</div>
<style>
.text-input-bg2 select
{
   height: 300px;
}
p.flash-msg
{
  float:left;
  clear: both;
}
</style> 
