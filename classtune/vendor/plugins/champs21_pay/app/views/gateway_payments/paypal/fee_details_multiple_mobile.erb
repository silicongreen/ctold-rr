    <body>
        <% if @current_user.parent? %>
          <% student_id = @current_user.guardian_entry.current_ward_id %>
        <% end %>
        <nav aria-label="breadcrumb" style="display: none;">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"> <%= link_to "All Fees", {:controller => 'student',:action=>:fees, :id=>student_id,:mobile_view=>1} %></li>
            </ol>
        </nav>

        <div class="alert alert-info header-info" role="alert">
            <p style="width: 48%; display: inline-block; float: left;"><%= @student.admission_no %> <Br /> <%= @student.full_name %><p>
            <p style="width: 50%; display: inline-block; float: right; text-align: right;"><%= @student.batch.full_name %></p>
        </div>
        
        <% total_fees =0 %>
        <% total_payable =0 %>
        <% total_fees_individual = [] %>
        <% total_payable_individual = [] %>

        <% unless flash[:success].nil? %>
          <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
        <% end %>
        <% unless flash[:warning].nil? %>
          <div class="alert alert-danger" role="alert"><%= flash[:warning] %></div>
        <% end %>
          
        <% form_remote_for :fees, :url => {:controller => 'student',:action => 'fee_details',:id => @student.id, :fees=> @collection_fees, :multiple => true,:mobile_view=>1}, :html => {:id => "fees_form"}, :before=>"prev_double();$('loader_pay').show();",:complete=>"set_back();$('loader_pay').hide();" do |form| %>
          <% total_fees = 0  %>
          
          <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 100%;">
              <thead><!-- class="thead-inverse" -->
                <tr>
                  <th style="font-weight: normal; width: 8%; text-align: center;"><%= "#" %> </th>
                  <th style="font-weight: normal; width: 50%; text-align: left;"><%= t('particulars') %></th>
                  <th style="font-weight: normal; width: 14%; text-align: right;"><%= t('amount') %></th>
                </tr>
              </thead>
          </tanle>
          
          <% i = 0 %>
          <% @fees_collections.reverse.each do |fee| %>
            <% i = 0 %>
            <% f = fee.to_i %>
            <% total_fees_individual[f] = 0 %>
            <% total_payable_individual[f] = 0 %>
            <%
              advance_fee_particular = []
              unless @fee_collection_advances[f].nil?
                advance_fee_particular = @fee_collection_advances[f].map(&:particular_id)
              end
            %>
          
            <tr id="expand_tr_<%= f %>" class="expand_tr">
              <td id="expand_td_<%= f %>" class="expand_td" style="font-weight: normal; width: 8%; text-align: center; vertical-align: middle; cursor: pointer;"><i id="expand_i_<%= f %>" class="fa fa-plus-square-o expand_i"></i></td>
              <td style="font-weight: normal; width: 50%; text-align: left; font-weight: bold;"><%= "Fees for Month of " + @date[f].name %></td>
              <td id="fee_remain_<%= f %>" style="font-weight: normal; width: 14%; text-align: right; font-weight: bold;">&nbsp;</td>
            </tr>
            
            <% unless @fee_particulars[f].nil? %>
              <% fee_ids = [] %>
              <% @fee_particulars[f].each do |fee| %>
                <% fee_particular_child = FinanceFeeParticular.find(:first, :conditions => "parent_id = #{fee.id} and receiver_type = 'Student' and receiver_id = #{@student.id}") %>  
                <% unless fee_particular_child.blank? %>  
                <% fee = fee_particular_child %>  
                <% fee_ids << fee_particular_child.id %>  
                <% end %>  
                <%  if fee.name.downcase != 'vat' %>
                  <tr id="particular_<%= fee.id %>" class="particulars_tr tr_fees_<%= f %>" style="display: none;">
                    <% paidAmount = 0 %>
                    <% unless @paid_fees[f].blank? %>
                       <% transaction_ids = @paid_fees[f].map(&:id) %> 
                       <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Fee Collection' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                       <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                       <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Advance' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                       <% paidAmount += paidFess.map(&:amount).sum.to_f %>

                       <% if !@self_advance_fee[f] and @fee_has_advance_particular[f] %>
                        <% if @fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(fee.finance_fee_particular_category_id) ) %>
                          <% unless @fee_collection_advances[f].nil? %>
                            <% @fee_collection_advances[f].each do |fee_collection_advance| %>
                              <% advance_collection_id = fee_collection_advance.fee_collection_id %>
                              <% @advance_collection[f] = FinanceFeeCollection.find(advance_collection_id) %>
                              <% @advance_fees[f] = @student.finance_fee_by_date @advance_collection[f] %>
                              <% @paid_advance_fees[f] = @advance_fees[f].finance_transactions %>
                              <% unless @paid_advance_fees[f].blank? %>
                                <% transaction_ids = @paid_advance_fees[f].map(&:id) %> 
                                <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Fee Collection' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                                <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                                <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Advance' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                                <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% else %>
                     <% if !@self_advance_fee[f] and @fee_has_advance_particular[f] %>
                        <% if @fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(fee.finance_fee_particular_category_id) ) %>
                          <% unless @fee_collection_advances[f].nil? %>
                            <% @fee_collection_advances[f].each do |fee_collection_advance| %>
                              <% advance_collection_id = fee_collection_advance.fee_collection_id %>
                              <% @advance_collection[f] = FinanceFeeCollection.find(advance_collection_id) %>
                              <% @advance_fees[f] = @student.finance_fee_by_date @advance_collection[f] %>
                              <% @paid_advance_fees[f] = @advance_fees[f].finance_transactions %>
                              <% unless @paid_advance_fees[f].blank? %>
                                <% transaction_ids = @paid_advance_fees[f].map(&:id) %> 
                                <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Fee Collection' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                                <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                                <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Advance' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                                <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% end %>
                    <% month = 1 %>
                    <% start_month = "" %>
                    <% end_month = "" %>
                    <% unless @fee_collection_advances[f].nil? %>
                      <% @fee_collection_advances[f].each do |fee_collection_advance| %>
                        <% if fee_collection_advance.particular_id == fee.finance_fee_particular_category_id %>
                          <% month = fee_collection_advance.no_of_month.to_i %>
                          <% start_month = fee_collection_advance.start_month %>
                          <% end_month = fee_collection_advance.end_month %>
                        <% end %>
                      <% end %>
                    <% end %>
                    <% if @self_advance_fee[f] %>
                    <% fee_amount = (fee.amount * month.to_i).to_f - paidAmount %>
                    <% else %>
                    <% fee_amount = fee.amount - paidAmount %>
                    <% end %>
                    <% fee_amount = 0 if fee_amount < 0 %>
                    <td class="col-1" style=" text-align: center;">
                        <input type="hidden" name="fee_category_<%= fee.id %>_<%= f %>" class="fee_category" id="fee_category_<%= fee.id %>" value="<%= fee.finance_fee_particular_category_id  %> " />
                        <% if fee_amount > 0 %>
                          <% if @self_advance_fee[f] %>
                            <input type="checkbox" name="fee_particular_<%= fee.id %>_<%= f %>" id="fee_particular_<%= fee.id %>" class="fees_particular" style="display: none;" checked="" data-fee_amount="<%= precision_label fee.amount %>">
                            <i name="fee_particular_fa_<%= fee.id %>" id="fee_particular_fa_<%= fee.id %>" class="fa fa-check-square-o fees_particular_fa" style="color: #598A3D; font-size: 15px; display: none;" aria-hidden="true"></i><span style="display: none;">&nbsp;&nbsp;</span><span class="sl_no" style="color: #000;"><%= i+=1 %></span>
                          <% else %>
                            <% if @fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(fee.finance_fee_particular_category_id) ) %>
                              <input type="checkbox" name="fee_particular_<%= fee.id %>_<%= f %>" id="fee_particular_<%= fee.id %>" class="fees_particular" style="display: none;" data-fee_amount="<%= precision_label fee.amount %>">
                              <i name="fee_particular_fa_<%= fee.id %>" id="fee_particular_fa_<%= fee.id %>" class="fa fa-square-o" style="color: #598A3D; font-size: 16px; cursor: pointer; color: #999;" aria-hidden="true"></i><span style="display: none;">&nbsp;&nbsp;</span><span class="sl_no" style="color: #000;"><%= i+=1 %></span>
                            <% else %>
                              <input type="checkbox" name="fee_particular_<%= fee.id %>_<%= f %>" id="fee_particular_<%= fee.id %>" class="fees_particular" style="display: none;" checked="" data-fee_amount="<%= precision_label fee.amount %>">
                              <i name="fee_particular_fa_<%= fee.id %>" id="fee_particular_fa_<%= fee.id %>" class="fa fa-check-square-o fees_particular_fa" style="color: #598A3D; font-size: 15px; " aria-hidden="true"></i><span style="display: none;">&nbsp;&nbsp;</span><span class="sl_no" style="color: #000;"><%= i+=1 %></span>
                            <% end %>
                          <% end %>
                        <% else %>
                          <i class="fa fa-check" style="font-size: 15px; color: #49BB4B;" aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;"></span>
                        <% end %>
                    </td>
                    <td class="col-6">
                      <%= fee.name %>
                      <% if @self_advance_fee[f] %>
                        <br />(<small><%= month %> Month Advances</small>)
                        <br /><small>(<%= start_month %> to <%= end_month %>)
                      <% else %>
                        <% if @fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(fee.finance_fee_particular_category_id) ) %>
                          <br /><small>(Set for Advance Payment)</small>
                          <br />(<small><%= month %> Month Advances</small>)
                        <% end %>
                      <% end %>  
                    </td>
                    <td class="col-6" style="text-align: right;">
                        <% if fee_amount > 0 %>
                          <% if @self_advance_fee[f] %>
                            <span style="color: #000;"> <span style="color: #000;"><%= precision_label fee_amount %></span></span>
                            <input type="hidden" name="fee_particular_amount_<%= fee.id %>_<%= f %>" id="fee_particular_amount_<%= fee.id %>" value="<%= precision_label fee_amount %>" style="border-radius: 4px; border: 1px solid #999; padding: 4px; width: 70%;" onkeypress="return isNumberKey(event,this, 'particular')" onkeydown="checkKey(event,this, 'particular')" />&nbsp;&nbsp;<i class="fa fa-check-square chk_particular" name="fee_particular_chk_<%= fee.id %>" id="fee_particular_chk_<%= fee.id %>" style="color: #598A3D; font-size: 15px; display: none;" aria-hidden="true"></i>
                          <% else %>
                            <% if @fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(fee.finance_fee_particular_category_id) ) %>
                              <span style="cursor: pointer; color: #999;"> <span style="color: #999;"><%= precision_label ( fee_amount.to_f * month.to_i) %></span></span>
                              <input type="hidden" name="fee_particular_amount_<%= fee.id %>_<%= f %>" id="fee_particular_amount_<%= fee.id %>" value="<%= precision_label fee_amount %>" style="border-radius: 4px; border: 1px solid #999; padding: 4px; width: 70%;" onkeypress="return isNumberKey(event,this, 'particular')" onkeydown="checkKey(event,this, 'particular')" />&nbsp;&nbsp;<i class="fa fa-check-square chk_particular" name="fee_particular_chk_<%= fee.id %>" id="fee_particular_chk_<%= fee.id %>" style="color: #598A3D; font-size: 15px; display: none;" aria-hidden="true"></i>
                            <% else %>
                              <span class="fee_amount_particular editable"  name="fee_amount_particular_<%= fee.id %>" id="fee_amount_particular_<%= fee.id %>" style="color: #000;"><i class="fa fa-pencil" style="font-size: 12px; display: none;" aria-hidden="true"></i> <span style="color: #000;"><%= precision_label fee_amount %></span></span>
                              <input type="hidden" name="fee_particular_amount_<%= fee.id %>_<%= f %>" id="fee_particular_amount_<%= fee.id %>" value="<%= precision_label fee_amount %>" style="border-radius: 4px; border: 1px solid #999; padding: 4px; width: 70%;" onkeypress="return isNumberKey(event,this, 'particular')" onkeydown="checkKey(event,this, 'particular')" />&nbsp;&nbsp;<i class="fa fa-check-square chk_particular" name="fee_particular_chk_<%= fee.id %>" id="fee_particular_chk_<%= fee.id %>" style="color: #598A3D; font-size: 15px; display: none;" aria-hidden="true"></i>
                            <% end %>
                          <% end %>
                        <% else %>
                          <%= precision_label paidAmount %>&nbsp;&nbsp;&nbsp;<span style="font-size: 12px; font-weight: bold; display: none;"><br/>(paid)&nbsp;&nbsp;&nbsp;</span>
                        <% end %>
                    </td>
                </tr>
                <% unless fee_ids.include?(fee.id) %>  
                <% if !(@fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(fee.finance_fee_particular_category_id) )) %>
                <% total_fees += fee_amount %>
                <% total_payable += fee.amount %>
                <% total_fees_individual[f] += fee_amount %>
                <% total_payable_individual[f] += fee.amount %>
                <% elsif @self_advance_fee[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(fee.finance_fee_particular_category_id)) %>
                <% total_fees += fee_amount %>
                <% total_payable += fee.amount %>
                <% total_fees_individual[f] += fee_amount %>
                <% total_payable_individual[f] += fee.amount %>
                <% end %>
                <% end %>
                <% end %>
              <% end %>
              <tr style="display: none;" class="<%= cycle("odd","even") %>  tr_fees_<%= f %>" cellpadding="1" cellspacing="1">
                <td class="col-8" colspan="2"  style="text-align: right; font-weight: bold;"><%= t('total_amount') %> </td>
                <td class="col-6" style="text-align: right;">
                    <span id="fee_total_amount_label" style="color: #000;"><%= precision_label(total_fees_individual[f]) %></span>
                    <input type="hidden" name="fee_total_amount_<%= f %>" id="fee_total_amount" value="<%= precision_label(total_fees_individual[f]) %>" />&nbsp;&nbsp;<i class="fa fa-check-square" style="color: #598A3D; font-size: 15px; display: none;" aria-hidden="true"></i>
                </td>
              </tr>   
          <% end %>
              
        <% unless @total_discount[f] == 0 %>
        <tr class="tr-blank blank_tr_<%= f %>" style="display: none;"></tr>
        <tr class="tr-blank blank_tr_<%= f %>" style="display: none;"></tr>
        <tr class="tr-blank blank_tr_<%= f %>" style="display: none;"></tr>
        <tr class="tr-blank blank_tr_<%= f %>" style="display: none;"></tr>
        <tr style="display: none;" class="<%= cycle("odd","even") %>  tr_fees_<%= f %>" cellpadding="1" cellspacing="1">
          <td class="col-1" ></td>
          <td class="col-1" colspan="4"><span class="themed_text"><%= t('discount') %></span></td>
        </tr>
        <% discount_total = 0 %>
        <% unless @onetime_discounts[f].nil? or @onetime_discounts[f].empty? or @onetime_discounts[f].blank? %>
          <% @onetime_discounts[f].each do |d| %>
            <% unless @onetime_discounts_amount[f][d.id].nil? or @onetime_discounts_amount[f][d.id].blank? %>  
              <% discount_amount = @onetime_discounts_amount[f][d.id] %>
            <% else %>
              <% discount_amount = @total_payable[f] * d.discount.to_f/ (d.is_amount?? @total_payable[f] : 100) %>
            <% end %>
            <% paidAmount = 0 %>
            <% discountPaid = false %>
            <% unless @paid_fees[f].blank? %>
               <% transaction_ids = @paid_fees[f].map(&:id) %> 
               <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Adjustment' AND transaction_type = 'Discount' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{d.id}") %>
               <% unless paidFess.blank? %> 
               <% discountPaid = true %>
               <% paidAmount += paidFess.map(&:amount).sum.to_f %>
               <% end %>
               <% if !@self_advance_fee[f] and @fee_has_advance_particular[f] %>
                <% if @fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(d.finance_fee_particular_category_id) ) %>
                  <% unless @fee_collection_advances[f].nil? %>
                    <% @fee_collection_advances[f].each do |fee_collection_advance| %>
                      <% advance_collection_id = fee_collection_advance.fee_collection_id %>
                      <% @advance_collection[f] = FinanceFeeCollection.find(advance_collection_id) %>
                      <% @advance_fees[f] = @student.finance_fee_by_date @advance_collection[f] %>
                      <% @paid_advance_fees[f] = @advance_fees[f].finance_transactions %>
                      <% unless @paid_advance_fees[f].blank? %>
                        <% transaction_ids = @paid_advance_fees[f].map(&:id) %> 
                        <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Adjustment' AND transaction_type = 'Discount' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{d.id}") %>
                        <% unless paidFess.blank? %> 
                        <% discountPaid = true %>
                        <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                        <% end %>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
            <% if discountPaid %>
            <tr class="<%= cycle("odd","even") %>  tr_fees_<%= f %>" style="display: none;">
              <td class="col-1 sl_no" style=" text-align: center;">
                <i class="fa fa-check" style="font-size: 15px; color: #49BB4B;" aria-hidden="true"></i>
              </td>
              <% discount_text = d.is_amount == true ? "#{d.name}" : "#{d.name}&#x200E; (#{d.discount})% &#x200E;" %>
              <td class="col-2"><%= discount_text %></td>
              <td class="col-6" style="text-align: right;"><%= precision_label paidAmount %>&nbsp;&nbsp;&nbsp;</td>
              <% total_payable -= paidAmount %>
              <% total_payable_individual[f] -= paidAmount %>
            </tr>  
            <% else %>
            <% discount_enable = true %>
            <% unless @paid_fees[f].blank? %>
              <% if d.finance_fee_particular_category_id == 0 %>
                <% if discount_amount > total_fees_individual[f]  %>
                <% discount_enable = false %>
                <% end %>
              <% else %>
              <% finance_particular = @fee_particulars[f].select{|fp| fp.finance_fee_particular_category_id == d.finance_fee_particular_category_id} %>
              <% amount_to_paid = finance_particular.map(&:amount).sum.to_f %>
              <% paidAmount = 0 %>
              <% finance_particular.each do |fee| %>
                <%  if fee.name.downcase != 'vat' %>
                  <% transaction_ids = @paid_fees[f].map(&:id) %> 
                  <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Fee Collection' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                  <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                  <% if !@self_advance_fee[f] and @fee_has_advance_particular[f] %>
                    <% if @fee_has_advance_particular[f] and (advance_fee_particular.include?(0) or advance_fee_particular.include?(d.finance_fee_particular_category_id) ) %>
                      <% unless @fee_collection_advances[f].nil? %>
                        <% unless @fee_collection_advances[f].nil? %>
                          <% @fee_collection_advances[f].each do |fee_collection_advance| %>
                            <% advance_collection_id = fee_collection_advance.fee_collection_id %>
                            <% @advance_collection[f] = FinanceFeeCollection.find(advance_collection_id) %>
                            <% @advance_fees[f] = @student.finance_fee_by_date @advance_collection[f] %>
                            <% @paid_advance_fees[f] = @advance_fees[f].finance_transactions %>
                            <% unless @paid_advance_fees[f].blank? %>
                              <% transaction_ids = @paid_advance_fees[f].map(&:id) %> 
                              <% paidFess = FinanceTransactionParticular.find(:all, :conditions => "particular_type = 'Particular' AND transaction_type = 'Fee Collection' AND finance_transaction_id IN (" + transaction_ids.join(",") + ") AND particular_id = #{fee.id}") %>
                              <% unless paidFess.blank? %> 
                              <% discountPaid = true %>
                              <% paidAmount += paidFess.map(&:amount).sum.to_f %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
