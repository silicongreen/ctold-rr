<%#*<div id="attendance">%>
<% unless @employee.blank? or @emp_attendance.blank? %>
<h1></h3>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td>
        Date
      </td>

      <td>
        In Time
      </td>
      <td>
        Out Time
      </td>

      <!-- attendance_tr -->
    </tr>

    <tr class="tr-blank">
    </tr>

    <% @emp_attendance.each do |e| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-2">
            <%= e.date.strftime("%d/%m/%Y") %>
        </td>
        <td class="col-3"><%= e.mintime.to_time.strftime("%I:%M %p") unless e.mintime.nil? %></td>
        <td class="col-3"><%= e.maxtime.to_time.strftime("%I:%M %p") unless e.maxtime.nil? %></td>
        
        

      </tr><!-- attendance_tr -->
    <% end %>

  </table>
  <div class ="extender"></div>
  <div class="link">
    
      <%= link_to "â–º#{t('pdf_report')}" , {:action => "card_attendance_pdf", :controller => "employee_attendance", :page_height => 700, :employee_id=>@employee_id, :month=>@month, :year=>@year}, :target => '_blank',:class => 'user_button'  %>
   
  </div>
<% else %>
  <p class="flash-msg">Select Employee, Year And Month</p>
<% end %>
