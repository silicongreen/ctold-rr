<script type="text/javascript"> 
  function setOption(optn) {
    if (optn=='guest'){
      $('payee_select').hide();
      $('search_textbox').hide();
    }
    else
    {
      $('payee_select').show();
      $('search_textbox').show();
    }
    document.getElementById("option").value = optn;}
</script>
