<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('tally_export_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('manage_tally_exports') %></div>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">
    <% if @only_import_export %>  
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('export_journal')}  ", :action => "export_journal" %></div>
      <div class="link-descr"><%= t('export_journal_desc') %></div>
    </div>
      
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('export_receipt')}  ", :action => "export_receipt" %></div>
      <div class="link-descr"><%= t('export_receipt_desc') %></div>
    </div>
    <% else %>  
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('settings_text')}  ", :action => "settings" %></div>
      <div class="link-descr"><%= t('manage_settings_for_tally_export') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('manual_sync_text')}  ", :action => "manual_sync" %></div>
      <div class="link-descr"><%= t('sync_with_tally_manually') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('bulk_export_text')}  ", :action => "bulk_export" %></div>
      <div class="link-descr"><%= t('export_bulk_transaction_data_to_tally') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('failed_syncs')}  ", :action => "failed_syncs" %></div>
      <div class="link-descr"><%= t('view_all_failed_synchronizations') %></div>
    </div>
    <% end %> 
  </div>

</div>
