<h1><%= @school.name %></h1>
<div class='well'>
  <table class="table table-bordered table-striped">
    <thead>
    <th>SMS Messages Sent</th><th>Total SMS Sent : <%= @total_sms %></th>
    </thead>
    <% @sms_messages.each do |sms| %>
      <tr>
        <td>
          <%= link_to CGI.unescape(sms.body), { :action=> 'show_sms_logs', :id=>@school.id, :id2=>sms.id} %> <br/>
        </td>
        <td>
          <%= sms.created_at.strftime("%A, %d. %B %Y, %H:%M") %> <br/>
        </td>
      </tr>
    <% end %>
  </table>

  <%= will_paginate @sms_messages %>

</div>
