<div class="extender"></div>
<div id="information">
  <%  unless @instant_fee_particulars.blank? %>
    <table class="sortable" id="listing" width="100%">
      <tr class="tr-head">
        <th class="col-sl"><%= t('sl_no') %></th>
        <th class="col-2"><%= t('particular_name') %></th>
        <th class="col-2"><%= t('description') %></th>
        <th class="col-2"><%= t('amount') %></th>
        <th class="col-2"><%= t('select') %></th>
      </tr>
      <tr class="tr-blank"></tr>
      <% @instant_fee_particulars.each_with_index do |particular,index| %>
        <tr class="tr-<%= cycle('odd','even') %>">
          <td class="col-sl"><%= index +=1 %></td>
          <td class="col-sl"><%= particular.name %></td>
          <td class="col-sl"><%= particular.description%></td>
          <td class="col-sl">
            <%= precision_label(particular.amount) %>
          </td>
          <td class="options"><%= link_to_remote "#{t('delete_text')}", :url=>{:controller => "instant_fees", :action => "delete_particular",:id => particular.id}, :confirm => "#{t('are_you_want_to_delete_particular')}" %><%= link_to_remote "#{t('edit_text')}", :url=> {:controller => "instant_fees", :action => "edit_particular",:id => particular.id} %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p class="flash-msg"><%= t('no_default_particular_exist') %>.</p>
  <% end %>
</div>
