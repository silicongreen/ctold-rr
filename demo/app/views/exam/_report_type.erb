<% if @for_batch_rank.nil? %>
  <% if @grouped_exams.empty? %>
    <%= hidden_field_tag :type , '',:value=>'general' %>
  <% else %>
    <%= hidden_field_tag :type , '',:value=>'grouped' %>
  <% end %>

  <% unless @batch_data.nil? %>
    <input type="hidden" name="exam_report[batch_id]" value="<%=  @batch_data.id %>" />
  <% end %>
<% elsif @for_batch_rank==1 %>
    <input type="hidden" name="batch_rank[batch_id]" value="<%=  @batch_data.id %>" />
<% else %>
    <input type="hidden" name="attendance_rank[batch_id]" value="<%=  @batch_data.id %>" />
<% end %>