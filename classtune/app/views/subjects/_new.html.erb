<div id="grading-levels-form">
  <%#*<h4><%= @batch.full_name unless @batch.nil? </h4>%>

  <% form_remote_for @subject,:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>
    
    <% unless @show_batch_subject.nil? %>
      <% if @show_batch_subject.to_i == 1 %>
        <% batch_id = (@batch.nil? ? nil : @batch.id) %>
      <% end %>
    <% else %>
      <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    <% end %>
    <% course_name = (@course_name.nil? ? nil : @course_name) %>
    <% show_batch_subject = (@show_batch_subject.nil? ? false : @show_batch_subject) %>
    <% elective_group_id = (@elective_group.nil? ? nil : @elective_group.id) %>
    <% unless @show_batch_subject.nil? %>
      <% if @show_batch_subject.to_i == 1 %>
        <%= f.hidden_field :batch_id, :value => batch_id %>
      <% end %>
    <% else %>
      <%= f.hidden_field :batch_id, :value => batch_id %>
    <% end %>
    
    <% unless @batch_only.nil? %>
      <% if @batch_only %>
        <%= hidden_field :course, :batch_only, :value => "1" %>
        <%= hidden_field :course, :batch_name, :value => @batch_name %>
      <% end %>
    <% end %>
    
    <%= hidden_field :course, :course_name, :value => course_name %>
    <%= hidden_field :course, :show_batch_subject, :value => show_batch_subject %>
    <%= f.hidden_field :elective_group_id, :value => elective_group_id %>
    <%= f.hidden_field :icon_number %>
    
    <div id="form-errors"></div>
    <% @course = @batch.course %>
    <% unless @course.course_name.nil? %>
      <% if @elective_group.nil? %>
        <% if @show_batch_subject == "1" %>
          <h4>Subject for <%= @course.course_name %>, Section: <%= @course.section_name %> </h4>
        <% else %>
          <h4>Subject for <%= @course.course_name %> </h4>
        <% end %>
      <% else %>
        <% if @show_batch_subject == "1" %>
          <h4>Elective Subject for <%= @course.course_name %>, Section: <%= @course.section_name %> </h4>
        <% else %>
          <h4>Elective Subject for <%= @course.course_name %> </h4>
        <% end %>
      <% end %>
    <% end %>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('name') %></label></div>
      <div class="input-container"> <%= f.text_field :name %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container">  <label><%= t('code') %></label></div>
      <div class="input-container"><%= f.text_field :code %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><label><%= t('max_weekly_class') %></label></div>
      <div class="input-container"> <%= f.text_field :max_weekly_classes %></div>
    </div>
    
    <% if school_mock_test? and !elective_group_id.blank? %>
    <div class="label-field-pair">
      <div class="label-container"><label>Calculation in result</label></div>
      <div class="input-container"> <%= f.text_field :percentage, :value => "100" %></div>
    </div>
    <% end %>      

    <div class="label-field-pair" style="display: none;">
      <div class="label-container"><label>Credit Hours</label></div>
      <div class="input-container"> <%= f.text_field :credit_hours, :value => "100" %></div>
    </div>
    

    <div class="label-field-pair">
      <div class="label-container"><label><%= t('no_exam') %></label></div>
      <div class="input-container"><%= f.check_box :no_exams %></div>
    </div>

    <%= f.submit  "", :value => "â–º #{t('save')}", :class => "submit_button", :id => "submit_button" %>

  <% end %>
</div>

<div id="icons">
  <ul>
    <% @images.each do |im| %>
      <li><%= image_tag "/images/icons/subjects/#{im.split('/').last}", :class => 'custom_icon', :id => "#{im.split('/').last}" %></li>
    <% end %>
  </ul>
</div>

<style type="text/css">
  #grading-levels-form{
    float: left;
    width: 450px;
  }
  #icons{
    background-color: #eee;
    border: 1px solid #c6c6c6;
    float: right;
    height: 270px;
    margin-right: 10px;
    margin-top: 30px;
    overflow: auto;
    width: 390px;
  }
  #icons ul{
    padding-left: 12px;
  }
  #icons ul li{
    cursor: pointer;
    display: inline;
  }
  .custom_icon{
    border: 1px solid #ccc;
    height: 60px;
    padding: 3px;
    width: 60px;
  }

</style>

