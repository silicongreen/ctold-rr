<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('new_leave_applications') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('new_application_from_employees_student') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('hr'), :controller => "employee", :action=>"hr" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance" %> <div class = "bread-crumb-separator"> > </div>
    <%= t('new_leaves') %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    
    <% @count_employee = 0  %>
    <% @reporting_employees.each do |e| %>
      <% @applied_leaves = ApplyLeave.find_all_by_employee_id(e.id, :order=>"start_date DESC") %>
      <% @count_employee += @applied_leaves.length %>
    <% end %>
<% if  @count_employee > 0  %> 
<div class="heading themed_text"><%= t('new_applications_from_employee') %></div>
<table id="listing" width="100%">
  <tr class="tr-head">
    <td><%= t('name') %></td>
  <td><%= t('start_date') %></td>
  <td><%= t('end_date') %></td>
  </tr>
  
  <% @reporting_employees.each do |e| %>
  <% @applied_leaves = ApplyLeave.find_all_by_employee_id(e.id, :order=>"start_date DESC") %>
  <% unless @applied_leaves == [] %>
    <% @applied_leaves.each do |l| %>
      <% if l.viewed_by_manager == false %>
        <tr class="tr-<%=cycle('odd', 'even')%>">
          <td class="col-2"><%= link_to "#{Employee.find(l.employee_id).first_name}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "employee", :request_from => "admin" %></td>
          <td class="col-2"><%= link_to "#{l.start_date.strftime("%d/%m/%Y")}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "employee", :request_from => "admin" %></td>
          <td class="col-2"><%= link_to "#{l.end_date.strftime("%d/%m/%Y")}",  :controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "employee", :request_from => "admin" %></td>
        </tr>
      <% end %><!-- if -->
    <% end %><!-- |l| -->
  <% else %>
  <% end %><!-- unless -->
<% end %>
</table>
<% end %>
<% @count_student = ApplyLeaveStudent.count(:all,:conditions=>{ :approved=> nil})  %>

<% if @count_student > 0 %>
  <% @applied_leaves_students = ApplyLeaveStudent.find(:all,:conditions=>["viewed_by_teacher =?", false],:order=>"start_date DESC") %>
  <% unless @applied_leaves_students == [] %>

  <div class="heading themed_text" style="margin-top: 20px"><%= t('new_applications_from_student') %></div>
  <table id="listing" width="100%">
    <tr class="tr-head">
      <td><%= t('name') %></td>
      <td><%= t('start_date') %></td>
      <td><%= t('end_date') %></td>
    </tr>

  

      <% @applied_leaves_students.each do |l| %>
        <% if l.viewed_by_teacher == false %>
          <tr class="tr-<%=cycle('odd', 'even')%>">
            <td class="col-2"><%= link_to "#{Student.find(l.student_id).first_name}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "student", :request_from => "admin" %></td>
            <td class="col-2"><%= link_to "#{l.start_date.strftime("%d/%m/%Y")}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "student", :request_from => "admin" %></td>
            <td class="col-2"><%= link_to "#{l.end_date.strftime("%d/%m/%Y")}",  :controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "student", :request_from => "admin" %></td>
          </tr>
        <% end %><!-- if -->
       <% end %><!-- |l| -->
  </table>
  <% end %><!-- unless -->  
<% end %><!-- endif -->  


</div>
