<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('subject') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('home') %></div>
  
  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'><%= link_to t('single_batch_subject'), subjects_path(:show_batch_subject => "1") %></li>
    </ul>
  </div>
</div>



<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="box" style="margin:0px; width:100%">
    <div id="subjects"  style="margin:0px; width:100%">
       <%= render :partial => "subject_subgroup" %>
    </div>    
   
    <div id="modal-box" style="display:none;"></div>

    <div class="extender"></div>
  </div>
    
</div>
<style>
  .custom_icon{
    border: 1px solid #ccc;
    height: 40px;
    padding: 3px;
    width: 40px;
  }
  .category-name a{
    text-decoration: none;
  }
  #category-list li div a:hover{
    text-decoration: none;
    color: #000;
  }
  #category-list li.batches_list{
    cursor: pointer;
  }
  #category-list li.batches_list:hover{
    background: #D7D7D7;
  }
  #category-list li.selected{
    background: #D7D7D7;
  }
  #category-list li div.category-sections span.sections {
    background: #DDD;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
    cursor: pointer;
}

#category-list li div.category-sections span.select_section {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
    cursor: pointer;
}

#category-list li div.category-sections span.sections:hover {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}

#category-list li div.category-sections a.sections {
    background: #DDD;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
}

#category-list li div.category-sections a.sections:hover {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}
#category-list li div.category-sections a.selected {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}
.add_sub a
{
   margin-left:0px;
}
</style>
<% content_for :head do %>
  <%= javascript_include_tag "custom/assign-icon" %>
<% end %>