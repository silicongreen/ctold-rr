<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transport_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('route_details') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('add_route')}", new_route_path %></li>
  </ul>
</div>

</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"> <%= flash[:warn_notice] %> </div>
  <% end %>
  <h3><%= t('route_details') %></h3>  
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
        <tr>
          <th><%= t('destination') %></th>  
          <th><%= t('cost') %></th>  
          <th><%= t('main_route') %></th>  
          <th></th> 
        </tr>
    </thead>
    <tbody>
      <% @route.each do |r| %>
      <tr class="<%= cycle('odd', 'even')%>">

        <td class="col-1"><%= r.destination %></td>
        <td class="col-2"><%= precision_label r.cost %></td>
        <td class="col-3"><%= r.main_route.nil? ? "#{t('main_route')}" : r.main_route.destination %></td>
        <td class="col-4">
          <%= link_to "#{t('edit_text')}", edit_route_path(r) %>&nbsp;
          <%= link_to "#{t('delete_text')}", r, :confirm => "#{t('delete_confirm_msg')}", :method => :delete %>&nbsp;
          <%= link_to "#{t('view_route_schedule')}", :controller => "routes", :action => "route_schedule", :id=>r.id %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<style>
    a {
      font-size: 11px;
      text-decoration: underline;
      font-family: verdana;
    }
    td {
      font-size: 12px;
      font-family: verdana;
    }
</style>