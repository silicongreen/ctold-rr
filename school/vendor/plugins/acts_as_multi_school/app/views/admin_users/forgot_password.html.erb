<div class="container-fluid">
  <div class="container container-width-355 container-height-205 margin-bottom-10">
    <div class="content-div">
      <div class="bg-light grey-border shadow-2">
        <div class="min-height-50 grey-border-bottom padding-hor-20">
          <% if @linkable and @linkable.class.to_s == 'MultiSchoolGroup' %>
            <div class="min-height-50 container-width-355 vertical-align-img">
              <div class="margin-bottom-10 margin-top-15 ">
                <h4><%= @linkable.name %></h4>
              </div>
            </div>
          <% else %>
            <div class="min-height-50 grey-border-bottom padding-hor-20">
              <div class="height-50 container-width-355 vertical-align-img">
                <div class="width-100 margin-auto">
                  <img src="/images/champs21-logo-red.png" alt="LOGO" />
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="min-height-100 grey-border-bottom">
          <% form_for :reset_password,:html => {:class  => 'form-horizontal'} do |form| %>
            <% unless flash[:notice].blank? %>
              <span class="login-validation-error"><%= flash[:notice] %></span>
            <% end %>
            <div class="padding-top-20 container-width-355">
              <div class="height-24 container-width-292 margin-auto margin-top-2 margin-bottom-20">
                <div class="margin-right-2">
                  <div class="float-left margin-right-14">
                    <label class="small"> To reset the password, enter your username</label>
                  </div>
                </div>
              </div>
              <div class="height-24 container-width-292 margin-auto margin-bottom-20">
                <div class="padding-top-2 width-80 float-left">
                  <%= form.label :username %>
                </div>
                <div class="width-210 float-left">
                  <%= form.text_field :username ,:class  => 'textfield grey-border-dark'%>
                </div>
              </div>
              <div class="height-24 container-width-292 margin-auto margin-top-2">
                <div class="width-210 float-right margin-right-2">
                  <div class="float-left margin-right-14">
                    <%= form.submit "Submit", :class => "button-red" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

</div>