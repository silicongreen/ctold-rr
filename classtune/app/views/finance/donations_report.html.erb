<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('finance_monthly_report') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('donations') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %> <div class = "bread-crumb-separator"> > </div>
   <%= link_to "#{t('finance_reports')}", :controller => "finance", :action => "finance_reports" %><div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('monthly_transactions')}", :controller => "finance", :action => "monthly_report" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('finance_transactions_view')}", :controller => "finance", :action => "update_monthly_report", :start_date=>@start_date, :end_date=>@end_date %> <div class = "bread-crumb-separator"> > </div>
    <%= t('donations') %>
  </div>
  <% donations_income = 0 %>
  <% donations_expenses = 0 %>

  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('description') %></th>
        <th><%= t('expense') %></th>
        <th><%= t('income') %></th>
        <th><%= "#{t('receipt_or_voucher_no')}" %></th>
        <th><%= t('date_text') %></th>
      </tr>
    </thead>
    <tbody>
    <% @donations.each do |d| %>
      <tr class="<%= cycle('even','odd') %>">
        <td class="col-3"><%=d.title %></td>
        <% if d.master_transaction_id == 0  %>
          <td class="col-5"></td>
          <td class="col-5">
            <%= precision_label(d.amount) %>
          </td>
          <% donations_income+= d.amount %>
        <% else %>
          <td class="col-5">
            <%= precision_label(d.amount.to_f) %>
          </td>
          <% donations_expenses+= d.amount %>
          <td class="col-5"></td>
        <% end %>
        <td class="col-1"><%= d.receipt_no.nil? ? d.voucher_no : d.receipt_no %></td>
        <td class="col-5"><%=d.transaction_date.strftime("%m-%d-%Y") %></td>
      </tr>
    <% end %>

    <%  donations_total=donations_income-donations_expenses %>
    <tr class="tr-head">
      <td><%= t('total') %></td>
      <%  if donations_income > donations_expenses %>
        <td></td>
        <td> 
          <%= precision_label(donations_total) %>
        </td>
        <%  %>
      <% else %>
        <td> 
          <%= precision_label(donations_total) %>
        </td>
        <td></td>
      <% end %>
      <td></td>
      <td></td>
    </tr>
    </tbody>


  </table>
</div>
