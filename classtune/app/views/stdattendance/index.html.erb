<div id="content-header">
  <h1><%= "Attendance Report" %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "Students" %></div>
<div id="inner-tab-menu">
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% form_remote_for :campus_report, :url => {:action=> 'campus_report_show'}, :html=> {:id=>'campus_report_show'} do |s| %>
  <div class="box">
      <div class="label-field-pair" style="float:left; clear:both; width:80%; margin-bottom:5px;margin-left: 17px;">
          <label for="attandence_date"><%= "Report Type" %></label>
          <div class="text-input-bg">
              <%= select :campus_report, :report_type, [["All",1],["Absent",2],["Present",3]] %>
          </div>
      </div>
      <div class="label-field-pair" style="float:left; clear:both; width:80%; margin-bottom:5px;margin-left: 17px;">
       <label for="duedate">Select date</label>
       <div  class="text-input-bg">
         <%= calendar_date_select_tag "campus_report[attandence_date]",@date_today,
           :class=>"text-input-bg" ,:readonly=>true,:popup=>:force%>
       </div>
     </div>
     <%= submit_tag "", :value => "► Proceed", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>  
  </div>
  <% end %>
  <%= hidden_field_tag 'time_zone_date',@date_today, :id=>'time_zone' %>
  <div id="report_content"></div>
    
</div>
<script>
  var jq = jQuery.noConflict();
  var oDataTable;
  function generate_datatable(report_type, report_date)
  {
      jq(document).ready(function() {
          oDataTable = jq('#hr_report').DataTable( {
              processing: true,
              serverSide: true,
              columnDefs: [
                  {
                      targets: [ 0, 1, 2 ],
                      className: 'mdl-data-table__cell--non-numeric'
                  }
              ],
              ajax: {
                  url: "/stdattendance/campus_report_view",
                  type: 'POST',
                  data: {
                      report_type: report_type, 
                      report_date: report_date,
                      all_record: 1, 
                      batch_id: jq("#batch_id").val()
                  }
              },
              columns: [
                  { "data": "student_info" },
                  { "data": "batch" },
                  { "data": "in_time", "sClass" : "ofc_time" },
                  { "data": "out_time", "sClass" : "ofc_time" },
                  { "data": "status", "sClass" : "ofc_time" }
              ]
          });
      });
  }


function filterEmployeeDatatableByDepartment(data)
{
    var value = jq("#batch_id").val();
    oDataTable.column( 1 ).search( value ).draw(); 
  
}
</script>
