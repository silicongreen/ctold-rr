<div id="content-header"></div>
<div id="page-yield" style="width: 95%; overflow-x: auto;">
  <h2><%= "Particular Wise Bill Generation Report" %></h2>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th class="align-center">Batch Name</th>
        <% unless @particulars.blank? %>
          <% @particulars.each do |particular| %>
            <% particular['amount'] = 0.0 %>
            <th><%= particular['name'] %></th>
          <% end %>
        <% end %>
        <th>Total Fees</th>
      </tr>
    </thead>
    <% grand_total = 0.0 %>
    <tbody>
    <% particulars_with_amount = [] %>
    <% unless @bill_generations.blank? %>
    <% @bill_generations.each do |fee_data| %>
      <tr>  
        <td class="align-left" style="white-space: nowrap;">
          <a href="/finance/bill_generation_report_batch/?batch_id=<%= fee_data['id'] %>&date=<%= @date.id %>" target="_blank" >
            <%= fee_data['name'] %>
          </a>
        </td>
        <% total_fee = 0.0 %>
        <% unless @particulars.blank? %>
          <% @particulars.each_with_index do |particular, i| %>
            <% if particular['plusminus'] && particular['opt'].to_i == 1 %>
              <% total_fee += fee_data[particular['name']] unless fee_data[particular['name']].nil? %>
              <% particular['amount'] += fee_data[particular['name']] unless fee_data[particular['name']].nil? %>
            <% elsif particular['plusminus'] && particular['opt'].to_i == 2 %>
              <% total_fee = total_fee - fee_data[particular['name']] unless fee_data[particular['name']].nil? %>
              <% particular['amount'] = particular['amount'] - fee_data[particular['name']] unless fee_data[particular['name']].nil? %>  
              <% if total_fee < 0 %>
              <% total_fee = 0 %>
              <% end %>
              <% if particular['amount'] < 0 %>
              <% particular['amount'] = 0 %>
              <% end %>
            <% end %>
            <td class="align-right"><%= precision_label fee_data[particular['name']] %></td>
            <% particulars_with_amount[i] = particular %>
          <% end %>
        <% end %>
        <% grand_total += total_fee  %>    
        <td class="align-right"><%= precision_label total_fee %></td>
      </tr>
    <% end %>
      
    <tr class="inverse">  
      <td class="align-center" style="white-space: nowrap; font-weight: bold; font-size: 20px;"> Grand Total </td>
      <% total_fee = 0.0 %>
      <% unless particulars_with_amount.blank? %>
        <% particulars_with_amount.each do |particular| %>
          <% total_fee += particular['amount'] unless particular['amount'].nil? %>
          <td class="align-right"><%= precision_label particular['amount'] %></td>
        <% end %>
      <% end %>
      <% grand_total += total_fee  %>    
      <td class="align-right"><%= precision_label total_fee %></td>
    </tr>
    <% else %>
      <tr class="tr-even">
        <td style="white-space: nowrap; ">No Transaction Found</td>
      </tr>  
    <% end %>    
    </tbody>
  </table>

</div>

<style>
    tr.tr-odd td, tr.tr-even td
    {
       text-align:right;
    }
    tr.inverse {
    }
    tr.inverse td {
        font-weight: bold;
    }
    td.align-center
    {
       text-align:center !important;
    }
    .date span{
        display: none;
