

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">


    <% form_for(@supplier) do |f| %>

      <%= f.error_messages %>



      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('supplier_type')}" %></div>
        <div class="text-input-bg"><%= f.select :supplier_type_id,@supplier_types.map{|st| [st.full_name,st.id]} %></div>
      </div>


      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('supplier name')}" %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('contact no')}" %></div>
        <div class="text-input-bg"><%= f.text_field :contact_no %></div>
      </div>
      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('address')}" %></div>
        <div class="text-input-bg"><%= f.text_field :address %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('tin_no')}" %></div>
        <div class="input-container"><%= f.text_field :tin_no %></div>
      </div>


      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('region')}" %></div>
        <div class="input-container"><%= f.text_field :region %></div>
      </div>


      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('help_desk')}" %></div>
        <div class="input-container"><%= f.text_field :help_desk %></div>
      </div>
      <%= submit_tag "", :value => "► #{t('save')}", :class => "submit_button",:disable_with => "► #{t('please_wait')}" %>

    <% end %>

    <div class="extender"></div>
  </div>
</div>

