<% unless @report_data.blank?  or  @report_data['report'].blank? %>
  <%= render  :partial=>"/connect_exam/nascd/header_5" %>
  <div id="page-yield"  class="available_sections1 sjis-new sfx">
      <table id="pdf-table" class="margin-top-bottom-20" width="99.8%" cellspacing="0">
          <tr class="table-header">
              <td width="20%">Student's Name</td><td width="40%" class="align-left-baf"><%= @student.full_name.upcase %></td>
              <td width="10%">Section</td><td width="12%"><%= @batch.course.section_name %></td>
              <td width="6%">Roll</td><td width="12%"><%= @student.class_roll_no %></td>
          </tr>
          <tr class="table-header">
              <td width="20%">Class Teacher</td>
              <td width="40%" class="align-left-baf">
              <% unless @assigned_employee.blank? %>
                  <% @assigned_employee.each do |emp| %>
                      <% emp_full_name = emp.first_name.to_s+" "+emp.last_name.to_s  %>
                      <b><%= emp.first_name %>&nbsp;<%= emp.last_name %></b>
                    <% break %>
                  <% end %>
                <% end %>        
              </td>
              <td width="10%">Cell No</td>
              <td width="30%" colspan="3">
              <% unless @assigned_employee.blank? %>
                  <% @assigned_employee.each do |emp| %>
                      <% emp_full_name = emp.first_name.to_s+" "+emp.last_name.to_s  %>
                      <b><%= emp.mobile_phone %></b>
                    <% break %>
                  <% end %>
                <% end %>    
              </td>
          </tr>
      </table>
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">

              
              
              <table id="pdf-table" width="99.8%" cellspacing="0">
                  <% c = 'even'  %>
              
                
                    <tr class="table-header">
                      <td class="col-pdf no-warp" rowspan="2"><b><%= "Subject" %></b></td>
                    
                        <% unless @report_data['report']['exams'].blank? %>
                          <% @report_data['report']['exams'].each do |report| %>
                            <td class="col-pdf"><%= report['exam_name'] %></td>
                          <% end %>
                        <% end %>   
                      <td class="col-pdf">Total</td> 
                    </tr> 
                    <tr class="table-header">
                    
                        <% unless @report_data['report']['exams'].blank? %>
                          <% @report_data['report']['exams'].each do |report| %>
                            <td class="col-pdf"><%= @exam_marks[report['exam_id'].to_s] %></td>
                          <% end %>
                        <% end %>   
                      <td class="col-pdf">100</td> 
                    </tr> 
                    <% gtotal = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% subjectdata = Subject.find(subjects['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>@student.id.to_s,:subject_id=>subjects['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                         <% next %>
                      <% end %>
                      <% if subjects['no_exams_sjws'].to_i == 1  %>
                        <% next %>
                      <% end %>
                     
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <%
                          rowspan = 1
                          if subjects['name'].upcase == "ENGLISH"
                            rowspan = 2
                          end
                          %>
                          <td class="col-pdf  no-warp align-left-baf" rowspan="<%= rowspan %>"><%= subjects['name'] %></td>
                          <% if rowspan == 2 %>
                            <td class="col-pdf" colspan="2">50</td>
                          <% end %>
                          
                          <% total_mark_obtain = 0 %>
                          
                          <% mcq_converted = 0 %>
                          <% loop_value = 0 %>
                          <% unless @report_data['report']['exams'].blank? %>
                            <% @report_data['report']['exams'].each do |report| %>
                                <% loop_value = loop_value+1 %>
                                <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                  <% total_mark_obtain = total_mark_obtain+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                  <% if loop_value > 2 || rowspan == 1  %>
                                    <td class="col-pdf"  rowspan="<%= rowspan %>" ><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %></td>
                                  <% end %>
                                <% else %>
                                    <td class="col-pdf">-</td>
                                <% end %>
                            <% end %>
                          <% end %> 
                          
                          <td class="col-pdf" rowspan="<%= rowspan %>"><%= total_mark_obtain %></td>
                          <% gtotal = gtotal+ total_mark_obtain%>
                          
                      </tr>
                      <% if rowspan == 2 %>
                        <% loop_value = 0 %>
                        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                            <% unless @report_data['report']['exams'].blank? %>
                            <% @report_data['report']['exams'].each do |report| %>
                                <% loop_value = loop_value+1 %>
                                <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                  <% if loop_value < 2  %>
                                    <td class="col-pdf" colspan="2" ><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %></td>
                                  <% end %>
                                <% end %>
                            <% end %>
                          <% end %> 
                        </tr>
                      <% end %>
                    <% end %>
                  <% end %>
                  <tr class="table-header">
                    <td colspan="5">Grand Total</td>
                    <td class="col-pdf"><%= gtotal %></td>
                  </tr>

              </table>
              <table id="pdf-table"  width="100%" class="left-table break-table odd-table height-exam ev-table" cellspacing="0" >
                <tr class="even">
                      <td class='align-left-baf padding-0-text-left' rowspan="8">
                          <ul>
                              <li><i>We issue this report card to let you know our evaluation regarding the progress of your child.</i></li>
                              <li><i>At school, we consider each student as an individual who will develop intellectually, physically and
socially to his or her abilities and opportunities.</i></li> 
                              <li><i>Parents are always welcome to make an appointment to discuss about the progress of their children.</i></li>  
                          </ul>
                      </td>
                  </tr>
              </table>  

              <p>&nbsp;</p>
              <p>Final Result: </p>  
              
              <table id="pdf-table"  width="100%" class="left-table sign-table border-none break-table odd-table height-exam ev-table" cellspacing="0" >
                  <tr class="even border-none">
                    <td width='50%' class="border-none">&nbsp;</td>
                    <td class='border-left-none border-none'><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/nascd/sign_principal.jpeg")), :width=>"20%" %>
                    </td>    
                  </tr>
                  
                  <tr class="even border-none">
                    <td width='50%' class="border-none"><hr/></td>
                    <td class='border-left-none border-none'><hr/>
                  </tr>
                  
                  <tr class="even border-none">
                    <td width='50%' class="border-none">Signature of the Class Teacher</td>
                    <td class='border-left-none border-none'>Signature of the Principal</td>    
                  </tr>
              </table>
          </div>
      </div>



  </div>
<% end %>
