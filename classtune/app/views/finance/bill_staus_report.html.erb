<div id="content-header">
  <%= show_header_icon %>
  <h1><%= "Bill Status Report" %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= "Bill Generation Report (Summary)" %></div>
</div>
<div id="page-yield">

  <div id="batchs1">
    <% form_for :fees_submission_batch do %>
      <div class="label-field-pair" id="hide1">
        <div class="label-container"><label><%= t('select_fee_collection_date') %></label></div>
        <div class="input-container"> 
           <%= select  :fees_submission, :dates_id, @dates.map { |e| [e.full_name, e.id]},
              {:prompt => "#{t('select_fee_collection_date')}"},
              {:onChange => "#{remote_function( :url =>
              {:action => "load_bill_status_report"},
              :with => "'date='+value",
              :before => "Element.show('loader2')",
              :success => "Element.hide('loader2')")}", :style=>"width: 90% !important; float: left;"
            } %>
            <%= image_tag("loader.gif",
                      :align => "absmiddle",
                      :border => 0,
                      :id => "loader2",
                      :style =>"display: none; " ) %>
        </div>
        <%#=link_to_function "show inactive batches","show_inactive_batches()",{:class=>'user_button'}%>

      </div>
    <% end %>
    <div id="student"> </div>

    <div id="modal-box" style="display:none;"></div>
  </div>
  <div class="extender"></div>
</div>