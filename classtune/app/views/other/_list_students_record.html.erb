<style>
  .submit_button{margin-top: 10px; width: 45%; float: left;}
</style>
<% form_for :admid_card ,:url=>{:action=>'print_student_record'}, :html=> {:target=>'_blank',:id=>'new_student'} do |f| %>
<div id="list">
  <div class="sel-list">
    <%= t('select') %>: <%= link_to_function "#{t('all')}", "$$('input.right').each(function(checkbox) { checkbox.checked = true; });" %>,
<%= link_to_function "#{t('none')}", "$$('input.right').each(function(checkbox) { checkbox.checked = false; });" %>
</div>
<% @students.each do |student| %>

 <div class="name_list<%=cycle('odd', 'even')%>">
  <li>
  <label><%= check_box_tag "student_record[student_ids][]", student.id, false,:class=>'right' %>
  <div class="att_list_names"><%= student.full_name %></div> </label>
  </li>  
 </div>
<% end %>
    <div class="label-field-pair">
          <label for="category_name"><%= "Section Name" %></label>
          <div class="text-input-bg"><input type="text" name="section_name" /> </div>
    </div>
    <div class="label-field-pair">
          <label for="category_name"><%= "Year" %></label>
          <div class="text-input-bg"><input type="text" name="year" /> </div>
    </div>

</div>  
<div style="width: 100%;">
<%= submit_tag "Print Student Record",:class=>'submit_button', :id => 'submit_button', :onclick=>'this.form.action="print_student_record";' %>
<%= submit_tag "Excel Student Record",:class=>'submit_button', :id => 'submit_button' , :onclick=>'this.form.action="excel_student_record";' %>
    </div>
<% end %>
