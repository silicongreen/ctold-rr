<% form_for :transaction, :url => { :id => @transaction.id } do |form| %>
  <%=  error_messages_for :transaction %>
  <div id="create_user_form">

    <div class="label-field-pair">
      <div class="label-container"><label for="title"><%= t('title') %> </label></div>
      <div class="input-container"><%= form.text_field :title %> </div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label for="description"><%= t('description') %></label></div>
      <div class="input-container"><%= form.text_field :description %> </div>
    </div>


    <div class="label-field-pair">
      <div class="label-container"><label for="amount"><%= t('amount') %></label></div>
      <div class="input-container"><%= form.text_field :amount, :value=>precision_label(@transaction.amount),:class=>'precision_text' %> </div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label for="amount"><%= t('date_text') %></label></div>
      <div class="input-container calendar-input"><%= calendar_date_select_tag 'transaction[transaction_date]', I18n.localize(@transaction.transaction_date, :format=>"%d %b %Y"), :year_range => 5.years.ago..0.years.ago,:popup=>"force" %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label for="category"><%= t('category') %></label></div>
      <div class="input-container"><%= select :transaction, :category_id,@categories.map { |c| [c.name, c.id] }, :selected => @transaction.category_id %></div>
    </div>

    <%=  submit_tag "â–º #{t('save')}",:class=>'submit_button' %>
  </div>
<% end %>
