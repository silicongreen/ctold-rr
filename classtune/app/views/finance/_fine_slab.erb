<hr style="border-top: 1px solid #ccc; width: 94%;" />

        <div id="form-errors"><%= error_messages_for 'fine_rule' %></div>
        <div class="label-field-pair">
          <div class="label-container"><label for="reason">  <%= t('days_after_due_date') %> <span class="necessary-field">*</span></label></div>
          <div class="input-container" style="width: 57%;"><%= text_field_tag  "fine[fine_rules_attributes][replace_this][fine_days]",value= "",options={:class=>""}%></div>
        </div>
        <div class="label-field-pair">
          <%= link_to_function "&times","slab_delete(this.id)",{:class => 'list_btn themed_text',:id=>'replace_this'} %>
