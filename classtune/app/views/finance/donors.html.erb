<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('donations') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%=t('donors')  %></div>

</div>
<div id="page-yield">
  <% if @donations.present? %>
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <h4> <%= t('list_of_donors') %> </h4>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('description') %></th>
        <th><%= t('amount') %></th>
        <th><%= t('created_at') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @donations.each do |d| %>
      <tr class="<%= cycle('odd','even') %>">
        <td class="col-3"><%= link_to d.donor,:action=>'donation_receipt',:id=>d.id %></td>
        <td class="col-3"><%= d.description %></td>
        <td class="col-3"><%= precision_label(d.amount) %></td>
        <td class="col-3"><%= d.transaction_date.strftime("%d-%m-%y") unless d.transaction_date.nil?%></td>
        <td class="col-3 links_class"><%= link_to t('edit_text'), :action => 'donation_edit', :id => d.id %>  |  <%= link_to t('delete_text'), {:action => 'donation_delete', :id=> d.id} , :confirm => t('delete_confirm_msg') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
    <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('description') %></th>
        <th><%= t('amount') %></th>
        <th><%= t('created_at') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <tr><td colspan="5"><%= "#{t('no_donors')}" %></td></tr>
    </tbody>
    </table>
  <% end %>
</div>
