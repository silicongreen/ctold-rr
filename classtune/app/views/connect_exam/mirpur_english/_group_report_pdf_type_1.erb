                            <td class="col-pdf">N/A</td>
                            <td class="col-pdf">N/A</td>
                            <td class="col-pdf">N/A</td>
                            <td class="col-pdf border-right-none">N/A</td>
                          <% end %>      

                      </tr> 
                    <% end %>  
                  <% end %>
                      <tr class="odd">
                          <% colspan = 2 %>
                          <% unless @report_data['report']['exams'].blank? %>  
                            <% @report_data['report']['exams'].each do |report| %>
                              <% if report['quarter'] == '1' %>
                                <% colspan = colspan+1 %>
                              <% end %>  
                            <% end %>
                          <% end %>
                          <td class="col-pdf border-left-none" colspan="<%= colspan %>"><b>Total Mark & Total GPA</b></td>
                     
                           
                         <td class="col-pdf"><b><%= total_mark_all_subject %></b></td>
                          
                         <td class="col-pdf"></td>
                         <td class="col-pdf"></td>
                         <td class="col-pdf border-right-none"><%= total_credit_point %></td>
                      </tr>   

              </table>
              
              <%
              if letter_grade.blank?
                final_grade = total_credit_point.to_f/total_subject
                letter_grade = "N/A"
                grade = GradingLevel.grade_point_to_grade(final_grade, @batch.id)
                if !grade.blank? and !grade.name.blank?
                  letter_grade = grade.name
                end  
              end
              percentage =  total_parcent/total_subject
              %>
