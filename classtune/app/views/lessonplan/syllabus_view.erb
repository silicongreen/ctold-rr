<div id="content-header">
<%= show_header_icon %>

  <h1><%= t('school_syllabus') %></h1>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    
  <div id="all_news">
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td>
          <%= t('sl_no') %>
        </td>
        <td>
         <%= t('title') %>
        </td>
        <td>
         <%= t('subject') %>
        </td>
        <td>
         <%= t('type') %>
        </td>
        <td>
          <%= t('author') %>
        </td>        
        <td>
         <%= "Exam Name" %>
        </td>
      </tr>
      <tr class="tr-blank"></tr>
      <% unless @syllabus.nil? %>
        <% @syllabus.each_with_index do |r,i| %>        
          <% link_value = r.title %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-1">
              <%= i+1 %>
            </td>
            <td class="col-3">
              <%=  link_to link_value, :controller => 'syllabus', :action => 'view', :id => r.id%>
            </td>
            <td class="col-3">
              <% unless r.subject_id.nil? %>
              <% subject = Subject.find_by_id(r.subject_id)   %>
              <%= subject.name %>
              <% else %>
                <%= "-" %>
              <% end %>
            </td>
            <td class="col-3">           
              <% if r.is_yearly == 1
                @is_yearly = "Yearly"
              else
                @is_yearly = "Not Yearly"
              end %>
              <%= @is_yearly %>
            </td>
            <td class="col-3">
              <% unless r.author.blank?  %>
                <%= r.author.first_name %> <%= '- admin' if r.author.admin==true%>
              <% else %>
               <%= t('user_deleted') %>
              <% end %>
            </td>            
            <td class="col-3">              
              <% unless @exam_groups.nil? %>
                <% @exam_groups.each do |exam| %>
                  <% if exam.id == r.exam_group_id %>
                    <%= exam.name %>
                  <% end %>
                <% end %>            
              <% else %>
                <%= "-" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
          <tr class="tr-odd">
            <td class="col-3" colspan="6"> NO DATA FOUND  </td>   
          </tr>
      <% end %>
    </table>
   
  </div>

</div>
