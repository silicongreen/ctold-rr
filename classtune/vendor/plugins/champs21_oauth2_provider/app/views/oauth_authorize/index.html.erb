<style>
    .content_wrapper_outer{
        border: 1px solid #CCC;
        width:405px;
        height:80px;
        margin: 100px auto;
        background: #f1f1f1;
        padding:20px;
        font-size: 14px;
    }
    .content_wrapper_inner{
        float:left;
        width:405px;
    }
    .content_wrapper_inner p{
        width:405px;
        margin:0;
        padding:0;
        margin-bottom: 20px;
    }

    .link-box{
        width:405px;
    }
    .link-box a{
        font-weight: bold;
        float: left;
        display: block;
        text-decoration: none;
        background: #C3D9FF;
        padding: 5px 12px;
        margin: 0 10px 0 0;
        -moz-border-radius :3px;
        -web-kit-border-radius :3px;
        border-radius :3px;
    }
    a.no{
        background: #ccc;
        color: #666;
    }
    a.yes{
        background: #333;
        color: #fff;
    }
    .label{    
        font-weight: bold;
        color:#333;
        width:405px;
        margin-bottom: 20px;
    }
    .client_name{
        color:#666;
    }
</style>

<div class="content_wrapper_outer">
    <div class="content_wrapper_inner">
        <% form_for(url_for(:action => :authorize), :html => {:id => 'oauth_authorize_form'}) do |f| -%>
          <p class="label">Do you wish to allow the service named <span class="client_name"><%= @client.name %></span> to access this application on your behalf?</p>
          <div class="link-box">
              <%= link_to_function 'Yes', 'document.getElementById("oauth_authorize_allow").value="Yes";document.getElementById("oauth_authorize_form").submit()', {:class => 'link_as_button primary_link_as_button primary yes', :href => 'javascript:void(0)', :id => 'authorize-yes'} %>
              <%= link_to_function 'No', 'document.getElementById("oauth_authorize_allow").value="No";document.getElementById("oauth_authorize_form").submit()', {:class => 'link_as_button link_as_button no', :href => 'javascript:void(0)', :id => "authorize-no"} %>
          </div>

          <input type="hidden" name="authorize" id="oauth_authorize_allow" value="No"/>
          <input type="hidden" name="client_id" id="client_id" value="<%= params[:client_id] %>" />
          <input type="hidden" name="redirect_uri" id="redirect_uri" value="<%= params[:redirect_uri] %>" />
          <input type="hidden" name="response_type" id="response_type" value="<%= params[:response_type] %>" />
          <input type="hidden" name="state" id="state" value="<%= params[:state] %>" />
        <% end -%>
    </div>
</div>
