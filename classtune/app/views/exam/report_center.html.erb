<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('report_center') %></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('exam_wise_report')}" ,:action=>'exam_wise_report' %></div>
      <div class="link-descr"><%= t('generate_exam_wise_report') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('subject_wise_report')}" ,:action=>'subject_wise_report' %> </div>
      <div class="link-descr"><%= t('generate_subject_wise_report') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('grouped_exam_reports')}" ,:action=>'grouped_exam_report_new' %></div>
      <div class="link-descr"><%= t('group_up_exams_for_specific_reports') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('archived_student_reports')}" , :controller=> "exam_reports",:action=>'archived_exam_wise_report' %></div>
      <div class="link-descr"><%= t('generates_grouped_exam_reports_for_archived_students') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('student_ranking_per_subject')}" , :controller=> "exam",:action=>'subject_rank' %></div>
      <div class="link-descr"><%= t('generates_reports_for_subject_wise') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('student_ranking_per_batch')}" , :controller=> "exam",:action=>'batch_rank' %></div>
      <div class="link-descr"><%= t('generates_reports_for_batch_wise') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('student_ranking_per_course')}" , :controller=> "exam",:action=>'course_rank' %></div>
      <div class="link-descr"><%= t('generates_reports_for_course_wise') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('student_ranking_per_school')}" , :controller=> "exam",:action=>'student_school_rank' %></div>
      <div class="link-descr"><%= t('generate_report_for_overall_student_rank') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('student_ranking_per_attendance')}" , :controller=> "exam",:action=>'attendance_rank' %></div>
      <div class="link-descr"><%= t('generates_reports_for_batch_wise_student_per_rank') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('ranking_level_report')}" , :controller=> "exam",:action=>'ranking_level_report' %></div>
      <div class="link-descr"><%= t('generates_reports_based_on_different_ranking') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('view_transcripts')}" , :controller=> "exam",:action=>'transcript' %></div>
      <div class="link-descr"><%= t('generate_student_transcripts') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('combined_reports')}" , :controller=> "exam",:action=>'combined_report' %></div>
      <div class="link-descr"><%= t('generates_combined_student_report') %></div>
    </div>
    <%  if Configuration.cce_enabled? and permitted_to? :index, :cce_reports %>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('cce_reports')}" , :controller=> "cce_reports",:action=>'index' %></div>
      <div class="link-descr"><%= t('generates_combined_student_report') %></div>
    </div>
    <% end %>
  </div>
</div>
