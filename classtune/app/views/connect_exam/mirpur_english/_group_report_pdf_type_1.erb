                              <td class="col-pdf border-right-none"><b><%= grade.credit_points %></b></td>
                            <% else %>
                              <td class="col-pdf border-right-none"><b>N/A</b></td>
                            <% end %>
                           
                            

                            <% total_parcent= total_parcent+main_mark %>
                            <% total_subject = total_subject+1 %>
                            <% total_mark_all_subject = total_mark_all_subject+total_mark %>
