<script type ="text/javascript">
  function add_reason_text(text)
  {
     var reason_now =  j("#awarning_subjects").val();
     if(reason_now)
     {
        var n = reason_now.indexOf(text);
        if(n == -1)
        {
           var reason_new = reason_now+ ", "+text;
           j("#awarning_subjects").val(reason_new);
        }
     }
     else
     {
         j("#awarning_subjects").val(text);
     }  
  }
</script>  
  