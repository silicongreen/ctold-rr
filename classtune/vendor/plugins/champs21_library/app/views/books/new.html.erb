<div id="content-header">
<%= show_header_icon %>
  <h1><a href="/library" style="color:#666666; text-decoration: none;" ><%= "#{t('library_text')}"%></a></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "#{t('add_book')}"%></div>


</div>
<div id="page-yield" class="ch_book_wrapper">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="search_form">

    <%= error_messages_for :book %>

    <% form_for(@book) do |f| %>
      <input type="hidden" name="book_call_number" value="<%= params[:book_call_number] %>" />
      <div class="label-field-pair">
        <label for="book_number"><%= "#{t('book_number')}"%><span class="necessary-field">*</span></label>
        <div class="text-input-bg">
          <%= f.text_field :book_number %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="title" style="width:210px;"><%= "#{t('book_call_number')}"%> <span class="necessary-field">*</span></label>
        <div class="text-select-bg" style="margin-left:20px; ">
          <%= select_tag   "book[book_call_number_id]", options_for_select([["Select",""]]+@book_call_numbers.map{|em| [em.call_number,em.id]}),{:class => 'js-example-basic-single'} %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="title"><%= "Source"%></label>
        <div class="text-input-bg">
          <%= f.text_field :source %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="title"><%= "Price"%></label>
        <div class="text-input-bg">
          <%= f.text_field :price %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="title"><%= "Cataloging Date"%></label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'book[catalog_date]',I18n.l(Date.today,:format=>"%d %b %Y") ,:popup=>:force%>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="title"><%= "Book Type" %></label>
        <div class="text-select-bg">
          <%= f.text_field :book_type %>
        </div>
      </div>
      <div class="label-field-pair" style="display:none;">
        <label for="title"><%= "#{t('title')}"%> <span class="necessary-field">*</span></label>
        <div class="text-input-bg">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="label-field-pair" style="display:none;">
        <label for="author"><%= "#{t('author')}"%> <span class="necessary-field">*</span></label>
        <div class="text-input-bg">
          <%= f.text_field :author %>
        </div>
      </div>
      <div class="extender"></div>
      <div class="tag"  style="display:none;">
        <div class="label-field-pair">
          <label for="tag"><%= "#{t('tags_text')}"%></label>
          <div class="tag_list">
            <div class="label-field-pair-checkbox">
              <% for tag in @tags %>

                <%= check_box_tag "book[tag_list][]", tag.name,  @tagg.include?(tag.name)||@book.tag_list.include?(tag.name),:class=>'right' %> <%= tag.name %>
                <div class="extender"></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="extender"></div>
      <div class="extender"></div>
      <div class="label-field-pair"  style="display:none;">
        <label for="title"><%= "#{t('custom_tags')}"%> </label>
        <div class="text-input-bg">
          <%= text_field_tag "tag[list]" ,@custom_tags%>
        </div>
      </div>
      <div class="extender"></div>
      <div class="label-field-pair" style="display:none;">
        <label for="no_of_cpoies"><%= "#{t('no_of_copies')}"%> </label>
        <div class="text-input-bg">
          <%= text_field_tag "tag[count]", @count||1 %>
        </div>
      </div>
      <%= f.submit "#{t('create_text')}",  :class => "submit_button", :disable_with => "#{t('please_wait')}" %>
    <% end %>
  </div>
</div>
<script>
  var jq = jQuery.noConflict();
  jq(document).ready(function() {
    jq('.js-example-basic-single').select2();
  });
  
</script> 
<style>
  .text-select-bg select
  {
      width:220px;
      height: 30px;
      margin-left: 10px;
  }
</style>
