<% if !@transport_fee_collection.empty? %>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('start_date') %></th>
        <th><%= t('end_date') %></th>
        <th><%= t('due_date') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @transport_fee_collection.each do |h| %>
      <tr  class="<%= cycle('odd', 'even') %>" id="tr-<%=h.id%>">
        <td class="col-6"><%= h.name %></td>
        <td class="col-1"><%= h.start_date %></td>
        <td class="col-1"><%= h.end_date %></td>
        <td class="col-1"><%= h.due_date %></td>
        <td class="col-3">
          <div class="edit"><%= link_to_remote "#{t('edit_text')}", :url => {:action => 'transport_fee_collection_date_edit', :id => h,:user_type=>@user_type,:batch_id=>params[:batch_id]} %></div>
          <div class="edit">
            <% unless h.check_status %>
              <%= link_to_remote "#{t('delete_text')}" ,:url=>{:action=>'delete_fee_collection_date',:id=>h}, :confirm=>"#{t('delete_confirm_msg')}"%>
            <% else %>
              <a class="striked"><%= t('delete_text') %></a>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('start_date') %></th>
        <th><%= t('end_date') %></th>
        <th><%= t('due_date') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <tr><td colspan="5"><p class= "flash-msg"><%= t('no_students_found') %></p></td></tr>
    </tbody>
  </table>
<% end %>
<style>
    a {
      font-size: 11px;
      text-decoration: underline;
      font-family: verdana;
    }
    td {
      font-size: 12px;
      font-family: verdana;
    }
</style>