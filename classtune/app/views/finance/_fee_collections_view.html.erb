<h2>Fee Collection List</h2>  
<% unless @finance_fee_collections.blank? %>
  <div id="fee-collections-list">
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
      <thead><!-- class="thead-inverse" -->
        <tr>
          <th><%= t('name') %></th>
          <th><%= t('start_date') %></th>
          <th><%= t('end_date') %></th>
          <th><%= t('due_date') %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    <tbody>
    <% @finance_fee_collections.each do |f| %>
      <tr class="<%= cycle('odd', 'even')%> ">
        <td class="col-2"><%= link_to "#{f.name}" ,:action=>:fee_collections_details_view, :id=>f.id,:batch_id=>@batch.id %></td>
        <td class="col-3"><%= f.start_date %></td>
        <td class="col-3"><%= f.end_date %></td>
        <td class="col-3"><%= f.due_date %></td>
        <td class="col-1">
           <div class="options">
               <span class="small_warning"><%= link_to_remote t('sent_notification'), :url => {:action => 'sent_notification_all', :id => f.id} %></span>
               <span class="small"><%= link_to_remote t('edit_text'), :url => {:action => 'fee_collection_edit_all', :id => f.id} %></span>
           </div>
        </td>
        <td style='text-align: center;'>
            <%= link_to_remote '<i class="fa fa-plus-square-o" style="cursor: pointer;"></i>', :url => {:action => 'fee_collection_summary_details', :id => f.id } %>
        </td>
     </tr>
     <tr id='fee_collection_details' style="display: none;"></tr>
    <% end %>
    </tbody>
  </table>
  </div>    
<% else %>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
      <thead><!-- class="thead-inverse" -->
        <tr>
          <th><%= t('name') %></th>
          <th><%= t('start_date') %></th>
          <th><%= t('end_date') %></th>
          <th><%= t('due_date') %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    <tbody>
        <tr><td colspan="6"><%= t('no_fee_collection_exist') %></td></tr>
    </tbody>
  </table>
<% end %>