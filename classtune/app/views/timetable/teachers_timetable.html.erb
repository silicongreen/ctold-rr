<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/academic.png', :html => {:alt => 'Calendar'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">      
       <%= link_to t('teacher_timetable'), :controller => "timetable", :action => "student_view" %>       
       <span style="float: left;clear:both;font-size: 15px;"><%= Time.now.strftime("%Y-%m-%d") %></span>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
  </div>    

  <div class="header-form-wrapper" style="margin-top:22px;">    
    <% form_for :timetable_entry do |s| %>
      <div class="label-field-pair">
        <label for="timetable_entry_course_id"><%= t('select_a_tte') %></label>
        <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
        <div class="text-input-bg">
          <%= select :timetable_entry, :timetable_id, @timetables.map {|c| ["#{c.start_date.strftime("%d %b %Y")} - #{c.end_date.strftime("%d %b %Y")}", c.id]},
            {:selected => @current.try(:id), :prompt => t('select_a_tte')},
            {:onChange => "#{remote_function(:url => {:action => "update_teacher_tt"}, :with => "'timetable_id='+value",       :before => "Element.show('loader')",
            :success => "Element.hide('loader')")}"} %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="clearfix"></div>

</div>

<div id="page-yield" style="margin-top: 0px;">
  <div id="timetable_view">
    <%= render :partial=>"teacher_timetable" %>
  </div>
</div>
<%= stylesheet_link_tag 'tadded-header' %>