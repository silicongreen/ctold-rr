<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="/stylesheets/select2.min.css">
<%= javascript_include_tag 'select2.full.min.js' %>
<script src="/javascripts/finance.js"></script>

<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('fees_submission') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= @student.full_name%></div>

</div>
<script>
  var jj = jQuery.noConflict();
</script>
<div id="page-yield">
  <div class="label-field-pair">
    <div class="label-container">
        <label><%= t('select_fee_collection') %> <%= image_tag("loader.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader",
        :style =>"display: none;" ) %></label>
    </div>
    <div class="input-container"  style="height: 320px;">
      <%= select  :fees_submission, :dates_id, @dates.map { |e| [e.full_name, e.id]},
        {:prompt => "#{t('select_fee_collection')}"},
        {:multiple => true,:onChange => "#{remote_function( :url =>
        {:action => "load_fees_submission_batch"},
        :with => "'date='+jj('#fees_submission_dates_id').val()+'&student='+#{@student.id}+'&batch_id='+#{@student.batch_id}+'&student_fees='+1",:before => "$('loader').show();",
        :success => "$('loader').hide();") }", :style=> "height: 320px !important;"} %>
    </div>
  </div>
  <div style="clear: both;"></div>  
  <div id= "fee_submission" style="padding-top: 5px;">

  </div>
  <div id= "student" style="padding-top: 5px;">

  </div>
</div>

<div id="modal-box" style="display:none;"></div>

