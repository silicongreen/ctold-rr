<%if @transactions.present?%>    
<%@start_date ||=Date.today%>
<%@end_date ||=Date.today%>
<div class="extender"></div>
<div class="height" style="witdth:100%;height:50px;"></div>
<div id="payments_details">
    <div class="label-field-pair3">

    </div>
    <table class="table table-striped table-bordered table-hover" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
      <thead><!-- class="thead-inverse" -->
        <tr>
          <th><%= t('sl_no') %></th>
          <th><%= t('name') %></th>
          <th><%= t('amount') %> </th>
          <th><%= t('payment_date') %></th>
          <th><%= t('payment_mode') %></th>
          <th class="col-3" style="width:1%;"></th>
        </tr>
      </thead>
      <%k=0%>
      <%k=(@page.to_i-1)*10 unless @page.nil?%>
      <tbody>
      <% @transactions.each_with_index do |f , i| %>
          <tr class="<%= cycle("odd","even") %> success" id="row<%=f.id%>" onclick="location.href='/instant_fees/instant_fee_created_detail/<%= f.finance_id %>'">
          <td class="col-1"><span id="sn_span_<%= i %>" style="font-weight: bold; display: block; text-align: center;"><%= k+=1 %></span></td>
          <td class="col-2"><%= f.finance.payee_name %></td>
          <td class="col-3" style="text-align: right;"><%= precision_label(f.amount.to_f) %></td>
          <td class="col-3" style="text-align: center;"><%= f.transaction_date.strftime("%d-%m-%Y") %></td>
          <td class="col-3"><%= f.payment_mode %></td>
          <td class="col-3" style="width:3%;"><div class="cancel" ><%=link_to_remote ("&#10008;"),{:url=>{:controller=>:instant_fees,:action=>:delete_transaction_for_instant_fee,:id=>f.id,:category_id=>@category},:confirm=>"#{t('are_you_sure_want_delete_this_transaction')}"},{:class=>"themed_text"}%></div></td>
        </tr>
      <% end %>
      </tbody>   
    </table>
  <div class="pagination_div"><div class="div1"><%= will_paginate @transactions, :previous_label=>"<", :next_label=>">", :renderer => 'RemoteLinkRenderer' ,:remote => { :loading =>  "$('loader_paginate').show();",:complete =>"$('loader').hide();"  }, :params => {:controller=>:instant_fees,:action => "instant_fee_transaction_filter_by_date",:category_id=>params[:category_id],:ids=>@transactions.collect(&:finance_id),:s_date=>@start_date,:e_date=>@end_date} %></div><div class="div2"><%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader_paginate",
          :style =>"display: none;" ) %></div></div>

</div>
<%else%>
<div class="height" style="witdth:100%;height:50px;"></div>
<div id="payments_details">
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
      <thead><!-- class="thead-inverse" -->
        <tr>
          <th><%= t('sl_no') %></th>
          <th><%= t('name') %></th>
          <th><%= t('amount') %> </th>
          <th><%= t('payment_date') %></th>
          <th><%= t('payment_mode') %></th>
          <th class="col-3" style="width:1%;"></th>
        </tr>
      </thead>
      <tbody>
      <tr class="tr-head">
        <td colspan="6">
          <%=t('no_transaction_for_the_given_period')%>
        </td>
      </tr>
      </tbody>
  </table>
</div>
<%end%>
