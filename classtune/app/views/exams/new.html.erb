<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('new_exam') %></div>

</div>
<div id="page-yield">
    <div class="bread_crumb">
      <% if @from == "shift" %> 
      <% ARGV[0] = 'shift' %>
      <%= link_to t('manage_batch'), :controller => "courses", :action => "manage_batches" %>  <div class = "bread-crumb-separator"> > </div> 
    <% else %>
      <%= link_to "#{t('exam_management')}", :controller => "exam", :action => "create_exam" %> <div class = "bread-crumb-separator"> > </div>
    <% end %>
      
    <% if @is_class_exam %>  
      <% if @is_batch_exam %>
        <%= link_to "#{t('exam_groups_text')}", batch_exam_groups_path(@batch, :class_exam => true, :batch_exam => true) %> <div class = "bread-crumb-separator"> > </div>
      <% else %>
        <%= link_to "#{t('exam_groups_text')}", batch_exam_groups_path(@batch, :class_exam => true) %> <div class = "bread-crumb-separator"> > </div>
      <% end %>
    <% else %>
      <%= link_to "#{t('exam_groups_text')}", batch_exam_groups_path(@batch) %> <div class = "bread-crumb-separator"> > </div>
    <% end %>

    <% if @is_class_exam %>  
      <% if @is_batch_exam %>
        <%= link_to @exam_group.name, '/batches/' + @batch.id.to_s + '/exam_groups/' + @exam_group.id.to_s + '?class_exam=true&batch_exam=true' %> <div class = "bread-crumb-separator"> > </div>
      <% else %>
        <%= link_to @exam_group.name, '/batches/' + @batch.id.to_s + '/exam_groups/' + @exam_group.id.to_s + '?class_exam=true' %> <div class = "bread-crumb-separator"> > </div>
      <% end %>
    <% else %>
      <%= link_to @exam_group.name, [@batch, @exam_group] %> <div class = "bread-crumb-separator"> > </div>
    <% end %>
    <%= t('new_exam') %>
    </div> 
    
  <% if @from == "shift" %> 
    <% ARGV[0] = 'shift' %>
  <% else %>
    <% ARGV[0] = 'exam' %>
  <% end %>    

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <h5><%= t('for_exam_group') %>- <%= @exam_group.name %></h5>
    <% unless @exam_group.exam_type == 'Grades' %>
      <% form_for [@exam_group, @exam] do |f| %>
        <%= error_messages_for :exam %>
        <% if  @is_class_exam    %>
          <%= hidden_field :class_exam, "class_exam", :value=>"1"%>
        <% else %>
          <%= hidden_field :class_exam, "class_exam", :value=>"0"%>
        <% end %>

        <% if  @is_batch_exam    %>
          <%= hidden_field :class_exam, "batch_exam", :value=>"1"%>
        <% else %>
          <%= hidden_field :class_exam, "batch_exam", :value=>"0"%>
        <% end %>
        <div class="label-field-pair">
          <label for="subject_id"><%= t('subject') %><span class="necessary-field">*</span></label>
          <div class="text-input-bg"><%= f.select :subject_id, @subjects.map { |s| [s.name, s.id]} %></div>
        </div>
        <div class="label-field-pair">
          <label for="subject_id"><%= "Subject Exam Title" %><span class="necessary-field">*</span></label>
          <div class="text-input-bg"><%= f.text_field :alternative_title %></div>
        </div>
        <div class="label-field-pair">
          <label for="subject_start_time"><%= t('start_time') %><span class="necessary-field">*</span></label>
          <div class="text-input-bg"> <%= f.calendar_date_select :start_time,:readonly=>true,:popup=>"force" %></div>
        </div>
        <div class="label-field-pair">
          <label for="subject_end_time"><%= t('end_time') %><span class="necessary-field">*</span></label>
          <div class="text-input-bg"> <%= f.calendar_date_select :end_time,:readonly=>true,:popup=>"force" %></div>
        </div>
        <div class="label-field-pair">
          <label for="subject_maximum_marks"><%= t('max_mark') %><span class="necessary-field">*</span></label>
          <div class="text-input-bg"><%= f.text_field :maximum_marks %></div>
        </div>
        <div class="label-field-pair">
          <label for="subject_minimum_marks"><%= t('min_mark') %><span class="necessary-field">*</span></label>
          <div class="text-input-bg"> <%= f.text_field :minimum_marks %></div>
        </div>
        <div class="label-field-pair">
            <%= f.label "Converted Mark" %>
           <div class="text-input-bg"><%= f.text_field :weightage %></div>
        </div>
        <div class="label-field-pair">
          <label >No Schedule</label>
          <div  class="text-input-bg" id="exam-group-select">
            <%= f.select :no_date, [['No',0],['Yes',1]] %>
          </div>
        </div>
        <%= submit_tag "", :value => "► #{t('save')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>

      <% end %>

    <% else %>
      <% form_for [@exam_group, @exam] do |f| %>

        <%= error_messages_for :exam %>
        <% if  @is_class_exam    %>
          <%= hidden_field :class_exam, "class_exam", :value=>"1"%>
        <% else %>
          <%= hidden_field :class_exam, "class_exam", :value=>"0"%>
        <% end %>

        <% if  @is_batch_exam    %>
          <%= hidden_field :class_exam, "batch_exam", :value=>"1"%>
        <% else %>
          <%= hidden_field :class_exam, "batch_exam", :value=>"0"%>
        <% end %>
        <div class="label-field-pair">
          <%= f.label :subject_id %>
          <div class="text-input-bg">  <%= f.select :subject_id, @subjects.map { |s| [s.name, s.id]} %></div>
        </div>

        <div class="label-field-pair">
          <%= f.label :start_time %>
          <div class="text-input-bg"><%= f.calendar_date_select :start_time %></div>
        </div>
        <div class="label-field-pair">
          <%= f.label :end_time %>
          <div class="text-input-bg"><%= f.calendar_date_select :end_time %></div>
        </div>

        <%= submit_tag "", :value => "► #{t('save')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>

      <% end %>
    <% end %>
    <div class="extender"></div>
  </div>
</div>
