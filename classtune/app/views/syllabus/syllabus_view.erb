<div id="page-yield" class="bg-disable">

  <div class="header-wrapper">
    <div class="header-title">
      <div class="header-icon">
        <%= image_tag '/images/icons/syllabus/syllabus.png', :html => {:alt => 'Attendance'} %>
      </div>
      <div class="header-title-text-wrapper">
        <div class="header-title-main-text f2">
          <% if @current_user.parent?
              student_id = @current_user.guardian_entry.current_ward_id  
            elsif @current_user.student?
              student_id = @current_user.student_record.id  
            end
          %>
          <a href="/syllabus/syllabus_view/<%= student_id %>"> Syllabus</a>
        <span style="float: left;clear:both;font-size: 15px;"><%= @local_tzone_time.to_date %></span>
        </div>        
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="tabbed-header-wrapper">
      <ul class="header-tabs">
        <li class="active">
          <%= link_to_remote "Term Exam",
            :before => "Element.show('loader2');",
            :success => "Element.hide('loader2');",
            :update => 'data_div',
            :url=>{:controller=>"syllabus", :action=>"syllabus_by_term", :id => 3},
            :html => {:class => 'f2'}
        %>
        </li>

        <li>
          <%= link_to_remote "Class Test",
            :before => "Element.show('loader2');",
            :success => "Element.hide('loader2');",
            :update => 'data_div',
            :url=>{:controller=>"syllabus", :action=>"syllabus_by_term", :id => 1},
            :html => {:class => 'f2'}
        %>
        </li>

        <li>
          <%= link_to_remote "Assignment",
            :before => "Element.show('loader2');",
            :success => "Element.hide('loader2');",
            :update => 'data_div',
            :url=>{:controller=>"syllabus", :action=>"syllabus_by_term", :id => 2},
            :html => {:class => 'f2'}
        %>
        </li>
        <li>
          <%= link_to_remote "Yearly",
            :before => "Element.show('loader2');",
            :success => "Element.hide('loader2');",
            :update => 'data_div',
            :url=>{:controller=>"syllabus", :action=>"syllabus_by_term", :term_id => 0},
            :html => {:class => 'f2'}
        %>
        </li>
      </ul>
    </div>
  </div>

  <div class="loader-image">
    <%= image_tag("loader2.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader2",
      :style =>"display: none;" ) %>
  </div>

  <div class="clearfix"></div>

  <div id="data_div">
    <%= render :partial => "term_list" %>
  </div>

</div>

<%= stylesheet_link_tag 'tadded-header' %>
<%= stylesheet_link_tag 'list_table' %>
<%= stylesheet_link_tag 'syllabus/single_syllabus' %>

<% content_for :head do %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %>

<style type="text/css">
  .header-wrapper .header-title-sub-text {
    letter-spacing: unset;
  }
</style>