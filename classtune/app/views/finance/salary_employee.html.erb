<div id="content-header">
  <%= show_header_icon %>
  <h1><%= @department.name %><%= t('department_salary_report') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('finance_transactions') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %><div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('fees_text')}", :controller => "finance", :action => "fees_index" %><div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('monthly_transactions')}", :controller => "finance", :action => "monthly_report" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('finance_transactions_view')}", :controller => "finance", :action => "update_monthly_report", :start_date=>@start_date, :end_date=>@end_date %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('salary_account')}", :controller => "finance", :action => "salary_department", :start_date=>@start_date, :end_date=>@end_date %> <div class = "bread-crumb-separator"> > </div>
    <%= t('department')+": "+ @department.name %>
  </div>
  <% total=0.0 %>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('sl_no') %></th>
        <th><%= t('employee_name') %></th>
        <th><%= t('salary') %>( <%= currency %> )</th>
        <th><%= t('salary_date') %></th>
      </tr>
    </thead>
    <tbody>
    <% @employees_salary.each_with_index do |employee ,i| %>
      <tr class="<%= cycle("even","odd") %>">
        <td class ="col-1"><%=i+1%></td>
        <td class="col-2"><%=link_to "#{employee.first_name} #{employee.middle_name} #{employee.last_name}", {:action=>:employee_payslip_monthly_report ,:employee_id=>employee.employee_id,:finance_transaction_id=>employee.id,:salary_date=>employee.salary_date} ,:target=>"_blank"%> </td>
        <td class="col-3" align="right"> <%= precision_label(employee.amount) %> </td>
        <% total+=employee.amount.to_f %>
        <td class="col-3"><%= I18n.l(employee.salary_date,:format=>"%B  %Y")%> </td>
      </tr>
    <% end %>

    <tr>
      <td></td>
      <td align="right"><%= t('total_salary') %></td>
      <td align="right"><%=precision_label(total)  %></td>
      <td></td>
    </tr>
    </tbody>
  </table>
</div>
