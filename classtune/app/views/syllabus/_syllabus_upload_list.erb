<ul id="category-list">
      <% @syllabus_uploads.each do |c| %>
      <li class="list<%=cycle('odd', 'even')%>">
        <div class="category-name"><%= c.title %></div>
        <div class="category-edit">
          <%= link_to_remote "#{t('edit_text')}", :url => { :action => 'edit_upload_syllabus', :id => c.id } %> </div>
        <div class="category-delete"><%= link_to_remote "#{t('delete_text')}", :url => { :action => 'upload_syllabus_delete', :id => c.id } , :confirm =>"#{t('delete_confirm_msg')}"%>
        </div>
        <div class="category-edit">
          <% unless c.attachment_file_name.nil? %>
              <%= link_to 'Download Syllabus', :controller => "syllabus", :action => "download_attachment" , :id=>c.id %>
            <% end %>
        </div>    
      </li>
     <% end %>
</ul>
