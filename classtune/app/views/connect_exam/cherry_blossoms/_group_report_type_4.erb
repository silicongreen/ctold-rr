<% unless @report_data.blank?  or  @report_data['report'].blank? %>
<%  
  student_classes = ["Play Group","Nursery","KG I","KG II","Standard I","Standard II","Standard III","Standard IV","Standard V","Standard VI","Standard VII","Standard VIII","Standard IX","Standard X","A Levels"]
  
  @promoted_to = ""
  if student_classes.include?(@batch.course.course_name)
    array_index = student_classes.index @batch.course.course_name
    if array_index < student_classes.count
      @promoted_to = student_classes[array_index+1]
    end
  end
%>
<%= render  :partial=>"/connect_exam/cherry_blossoms/header" %>
<p>&nbsp;</p>
  <div id="page-yield"  class="available_sections1 st_joseph_bg">
      <table id="pdf-table" class="tbl-lign-left" width="52%" cellspacing="0">
          <tr >
              <td class="align-right col-pdf" width="15%">Student ID : </td>
              <td  class="align-left"><b><%= @student.admission_no %></b></td>
          </tr>
          
          <tr >
              <td class="align-right" width="15%">Roll No : </td>
              <td  class="align-left"><%= @student.class_roll_no %></td>
          </tr>
          <tr >
              <td class="align-right col-pdf col-pdf" width="15%">Name : </td>
              <td  class="align-left"><%= @student.full_name.upcase %></td>
          </tr>
          <tr >
              <td class="align-right col-pdf" width="15%">Class : </td>
              <td class="align-left"><b><%= @batch.course.course_name %></b></td>
              <% batch_split = @batch.name.split(" ") %>
              <% unless batch_split[2].blank?  %>
                <% batch_split[1] = batch_split[1]+" "+batch_split[2] %>
              <% end %>
               
          </tr>
          <tr >
              <td class="align-right col-pdf" width="15%" >Shift : </td><td class="align-left"><%= batch_split[0] %></td>  
          </tr>
          <tr >
              <td class="align-right col-pdf" width="15%">Session : </td>
              <td class="align-left" ><%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %></td>
          </tr>
      </table>
      
      
     
      <div class="grade_information">
        <%= render  :partial=>"/connect_exam/cherry_blossoms/gradding_level" %>   
      </div>
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">


              <table id="pdf-table" width="99%" cellspacing="0">
                  <% c = 'even'  %>
                  <tr class="table-header">
                      <td class="col-pdf"><b><%= "Subject" %></b></td>
                      <% unless @report_data['report']['exams'].blank? %> 
                        <% @report_data['report']['exams'].each do |report| %>
                          <td class="col-pdf group_exam" colspan="2"><%= report['exam_category'] %><%= report['exam_name'] %></td>
                        <% end %>
                      <% end %>
                      
                      <td class="col-pdf">Total Marks</td>
                      <td class="col-pdf">Grade</td>
                  </tr>
                  <tr class="table-header">
                      <td class="col-pdf"></td>
                      
                      <% unless @report_data['report']['exams'].blank? %>  
                        <% @report_data['report']['exams'].each do |report| %>
                          <td class="col-pdf">
                              Full Marks
                          </td> 
                          <td class="col-pdf">
                              Marks Obtained
                          </td>
                        <% end %>
                      <% end %>
                      <td class="col-pdf"></td>
                      <td class="col-pdf"></td>
                  </tr>

                  <% total_parcent = 0 %>
                  <% total_subject = 0 %>
                  <% full_marks_total = 0 %>
                  <% total_marks_student = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <tr  class="table-header">
                          <% weightage_mark = 0 %>
                          <% total_mark = 0 %>
                          <% full_mark = 0 %>

                          <td class="col-pdf no-warp"><%= subjects['name'] %></td>
                          <% unless @report_data['report']['exams'].blank? %>  
                            <% @report_data['report']['exams'].each do |report| %>
                              <td class="col-pdf no-warp">
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                    <%= report['result'][report['exam_id']][subjects['id']]['full_mark'] %>
                                    <% full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                  <% else %>
                                    -
                                  <% end %>  
                              </td>
                              <td class="col-pdf no-warp">
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                    <%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'] %>
                                    <% total_mark = total_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                  <% else %>
                                    -
                                  <% end %>  
                              </td>

                            <% end %>
                          <% end %>





                         <% 
                            heighst_mark = 0
                            if !@report_data['report']['max_mark'].blank? and !@report_data['report']['max_mark'][subjects['id']].blank?
                              heighst_mark = (@report_data['report']['max_mark'][subjects['id']].to_f/full_mark.to_f)*100
                            end  

                            if total_mark.to_f>0 and full_mark.to_f>0
                              main_mark = (total_mark.to_f/full_mark.to_f)*100 
                            else
                              main_mark = 0
                            end  
                          %>

                          <% if full_mark.to_f > 0 %>
                            <td class="col-pdf"><%= total_mark.to_i %></td>
                            
                            <% grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                            <% if !grade.blank? and !grade.name.blank? %>
                              <td class="col-pdf"><b><%= grade.name %></b></td>
                            <% else %>
                              <td class="col-pdf"><b>-</b></td>
                            <% end %>
                            
                            <% full_marks_total = full_marks_total+full_mark.to_f %>  
                            <% total_marks_student = total_marks_student+total_mark.to_f %> 
                            <% total_parcent= total_parcent+main_mark %>
                            <% total_subject = total_subject+1 %>
                          <% else  %>
                            <td class="col-pdf">-</td>
                            <td class="col-pdf">-</td>
                            <td class="col-pdf">-</td>
                          <% end %>      

                      </tr> 
                      
                    <% end %>  
                  <% end %> 
                      <% avgparcent = 0 %>
                      <% if full_marks_total > 0 %>
                        <% avgparcent = (total_marks_student.to_f/full_marks_total.to_f)*100 %>
                        <tr class="table-header">
                            <td  align="right" style="text-align:right;" colspan="50" class="avg_mark">
                                <b><font size="2">(Average Marks : <%= sprintf( "%0.02f",avgparcent) %> %)</font></b>
                            </td>
                        </tr> 
                      <% end %>

              </table>


              
              <table id="pdf-table" class="margin-top-bottom-10 font-size-20" width="99%" >

                  


              </table>
              <% 
              if avgparcent < 60 
                comments = "Satisfactory"
              elsif avgparcent >60 and avgparcent < 71
                comments = "Good"
              elsif avgparcent >70 and avgparcent < 81
                comments = "Very Good"
              elsif avgparcent >80 and avgparcent < 91
                comments = "Well Done"
              elsif avgparcent >91
                comments = "Excellent"
              end  
                
              %>
              <table class="margin-top-bottom-10 font-size-20 float-left" width="68.2%" >
                      <tr>
                          <td width="15%">
                              <br/> 
                              <b>Teacher's Remark</b>
                          </td> 
                          <td width="85%">
                              <br/>
                              <br/>
                              <hr style="width:100%;"/>
                          </td>
                      </tr>
              </table>
              <% @grading_levels = GradingLevel.for_batch(@batch.id) %>
              <% if @grading_levels.blank? %>
                <% @grading_levels = GradingLevel.default %>
              <% end %>
              <%  unless @grading_levels.empty? %>
                <table id="pdf-table" class="no-border margin-top-bottom-10  font-size-20 float-left-10" width="30%" cellspacing="0">
                    <tr>
                      <td colspan="2" style="text-align:center; font-size: 16px !important; font-weight:bold;">Class Attendance</td>
                    </tr>
                    <tr class="table-header">

                      <td class="col-pdf" style="text-align:left;">Total Working Days</td> <td><%= @report_data['total'] %></td>
                    </tr>  
                     <tr class="table-header">
                      <td class="col-pdf" style="text-align:left;">Present</td> <td><%= @report_data['present'] %> </td>
                    </tr>  
                     <tr class="table-header">
                      <td class="col-pdf" style="text-align:left;">Absent</td> <td><%= @report_data['total']-@report_data['present'] %> </td>
                      
                  </tr> 
                </table>

              <% end %> 



              <% unless @report_data['report']['no_exam_subject_resutl'].blank? or !@report_data['report']['no_exam_subject_resutl'].blank? %>

                <h4 align="center">Cumulative Assessment Record</h4>


                <table  width="100%"  id="listing table-design" style="margin-top:20px;">
                    <% 
                    iloop = 1
                    cloop = 1
                  %>
                    <% @report_data['report']['no_exam_subject_resutl'].each do |report| %>

                      <% if iloop == 1 %>
                        <tr>
                          <% end %>
                          <% if cloop == 3 %>
                        </tr>
                        <tr>
                            <% cloop = 1 %>        
                          <%  end %> 
                          <td   width="6%"><%= iloop %></td>
                          <td   width="23%"><%= report['subject_name'] %></td>
                          <% if report['subject_comment'].blank? %>
                            <td   width="23%">Not Tested Yet</td>
                          <% else %>
                            <td   width="23%"><%= report['subject_comment'] %></td>
                          <% end %>
                          <% iloop = iloop+1 %> 
                          <% cloop = cloop+1 %>
                        <% end %>

                </table>

              <% end %>



          </div>
      </div>



  </div>

<% end %>
