<% if params[:authenticity_token].nil? %>
<div class="header-wrapper">
    <div class="header-title" style="width:100%;">
        <div class="header-icon" style="width:10%;">
            <%= image_tag '/images/icons/profile-icon.png', :html => {:alt => 'Student Profile'} %>
        </div>
        <div class="header-title-text-wrapper" style="width:80%;">
            <div class="header-title-main-text f2" style="width:100%;">
                List of Applications
            </div>
            <div class="clearfix"></div>
            <div class="header-title-sub-text">
                From Students
            </div>
            <div class="header-title-sub-text">
                <%= I18n.l(@local_tzone_time.to_date, :format=>'%d/%m/%Y') %>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
      
</div>
<div id="page-yield" class="bg-disable">
  <div id="guardian_detail" class="row_wrapper" style="padding: 20px 0px;">
<% @batches = [] %>
<% if @current_user.admin? %>
  <% @batches = Batch.active %>
<% elsif @current_user.employee? and @current_user.employee_record.meeting_forwarder.to_i == 1 %>
    <%  @batches = @current_user.employee_record.batches %>
<% end %>
<%= select :form_data, :batch_id,
      options_for_select(@batches.map {|b| [b.full_name, b.id] },@batch_id),
      {:prompt => "Select a Class"},
      {:onchange => "#{remote_function(
      :url => { :action => 'studentformlist' },
      :update => 'data-div',
      :with => "'batch_id='+value+'&status_id='+$('form_data_status').value+'&form_type='+$('form_data_form_type').value+'&authenticity_token=filter'",
      :before => "Element.show('loader')",
      :success => "Element.hide('loader')"  )}"} 
 %>

&nbsp;&nbsp;&nbsp;&nbsp;
<%= select :form_data, :status, 
        options_for_select([["Pending", "1"],["Processing", "2"], ["Ready", "3"], ["Rejected", "22"]],@status_id),
        {:prompt => "Select Status"},
                  {:onchange => "#{remote_function(
                  :url => { :action => 'studentformlist' },
                  :update => 'data-div',
                  :with => "'status_id='+value+'&batch_id='+$('form_data_batch_id').value+'&form_type='+$('form_data_form_type').value+'&authenticity_token=filter'",
                  :before => "Element.show('loader')",
                  :success => "Element.hide('loader')"  )}"} %>
&nbsp;&nbsp;&nbsp;&nbsp;
<%= select :form_data, :form_type, 
        options_for_select([["Transfer Certificate Letter", "transfer_letter"],["No Objection Certificate Letter", "noc_letter"], ["Recommendation Certificate Letter", "recommendation_letter"], ["Studentship Letter", "studentship_letter"], ["VISA Recommendation Certificate Letter", "visa_recommendation_letter"]],@form_type),
        {:prompt => "Form Type"},
                  {:onchange => "#{remote_function(
                  :url => { :action => 'studentformlist' },
                  :update => 'data-div',
                  :with => "'form_type='+value+'&batch_id='+$('form_data_batch_id').value+'&status_id='+$('form_data_status').value+'&authenticity_token=filter'",
                  :before => "Element.show('loader')",
                  :success => "Element.hide('loader')"  )}"} %>
    
<%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
  </div>
</div>    
<div id="page-yield" class="bg-disable">
  <div id="guardian_detail" class="row_wrapper">
    <div class="row">
        <div class="guardian_header_txt">List</div>
    </div>
    <div class="clearfix"></div>
    <% end %>
    
    <div id="data-div">
      <%= render :partial => 'studentformlist' %>
    </div>
   <% if params[:authenticity_token].nil? %> 
    
  </div>
</div>
<%= stylesheet_link_tag 'pagination_and_table' %>
<%= stylesheet_link_tag 'tadded-header' %>
<% content_for :head do %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %>
<% end %>

<style>
  .row_wrapper
  {
     padding:20px 0px;
     
  }
  .row_wrapper select
  {
     margin-left: 30px;
     height: 30px;
     min-width: 150px;
  }
    
</style>

