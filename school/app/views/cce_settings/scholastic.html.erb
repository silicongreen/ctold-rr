<% content_for :head do  %>
  <%= stylesheet_link_tag 'exam/index.css' %>
<% end %>
<div id="content-header">
<%= show_header_icon %>
  <h1>CCE Settings</h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Scholastic Settings</div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "Formative Assessment Items",:controller=>'fa_groups' %></div>
      <div class="link-descr">Manage Formative Assessment Items</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "Assign FA Items",:controller=>'fa_groups',:action=>"assign_fa_groups" %></div>
      <div class="link-descr"><%= "Assign Formative Assessment Items to subjects" %></div>
    </div>

    <div class="extender"></div>
  </div>
</div>

