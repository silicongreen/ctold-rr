</style>
<script type ="text/javascript">
  function add_reason_text(text)
  {
     var reason_now =  j("#suspension_reason").val();
     if(reason_now)
     {
        var n = reason_now.indexOf(text);
        if(n == -1)
        {
           var reason_new = reason_now+ ", "+text;
           j("#suspension_reason").val(reason_new);
        }
     }
     else
     {
         j("#suspension_reason").val(text);
     }  
  }
</script> 
  