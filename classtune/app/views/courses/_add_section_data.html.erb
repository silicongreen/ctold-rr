<% form_remote_for @course, :url => {:action => "save_section", :id => @course.id} do |f| %>
  <%= f.hidden_field :id, :value => @course_id %>
  <%= error_messages_for :course %>
  <div id="form-errors"></div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label "#{t('section_name')}" %></div>
    <div class="input-container"><%= f.text_field :section_name, :value => "" %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><%= f.label "#{t('session')}" %></div>
    <div class="input-container"><%= f.text_field :session, :value => "" %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><%= f.label "#{t('group')}" %></div>
    <div class="input-container"><%= f.text_field :group, :value => "" %></div>
  </div>

  <%= submit_tag "", :value => "â–º #{t('add')}", :class => "submit_button" %>

<% end %>