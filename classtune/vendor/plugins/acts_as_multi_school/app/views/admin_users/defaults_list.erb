<fieldset class="margin-bottom-20">
    <h1 class="content-head">Default Settings</h1>
    <%= link_to '+ New Setting', {:controller=>"admin_users", :action=>"create_defaults"}, :class  => 'button-red float-right' if permitted_to? :new, :admin_users %>
</fieldset>
<div class="content-div">
    <div class="nav-vertical width-15-pc">
        <ul >
            <% @mod_default.get_default_keys.each do |k, v| %>
            <li id="<%= k %>"><%= link_to v, {:controller=>"admin_users", :action=>"defaults_list_data", :id => k } %></li>
            <% end %>
        </ul>
    </div>
    <div id="detail_list" class="detail-list width-80-pc bg-light shadow grey-border">
        <%= render :partial => "defaults_list_data", :locals => {:key => 'employee_category'} %>
    </div>
</div>

<%= javascript_include_tag "custom/default-setting" %>

<style type="text/css">
    .footer-div {
        float: left;
    }
</style>