<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('attendance_report') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('filtered_report') %></div>
</div>
<div id="page-yield">
  <div class="label-field-pair">
    <label>
      <%= "#{t('total_no_of_wrkng_days')} : " + @academic_days.to_s %><br/>
      <%= t('filtered') %>: <%=  t(@range.downcase) %> <%= @value %> %
    </label>
  </div>
  <table id="listing" align="center" width="80%">
    <tr class="tr-head">
      <td>
        <%= t('name') %>
      </td>
      <td>
        <%= t('total') %>
      </td>
      <td>
        <%= t('percentage') %>(%)
      </td>
    </tr>
    <tr class="blank"></tr>
    <% @students.each do |student| %>
      <% unless @leaves[student.id]['percent'].blank? %>
        <% if @range == 'Below' %>
          <% if @leaves[student.id]['percent'].round(2) < @value.to_f %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
              <% @flag=0 %>
              <td class="col-2"><%= link_to student.full_name, {:controller => "attendance_reports", :action => "student_details", :id => student.id } %></td>
              <td class="col-3"> <%= @leaves[student.id]['total'] %></td>
              <td class="col-3"><%= @leaves[student.id]['percent'].round(2)  %></td>
            </tr>
          <% end %>
        <% elsif @range == 'Above' %>
          <% if @leaves[student.id]['percent'].round(2) > @value.to_f %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
              <% @flag=0 %>
              <td class="col-2"><%= link_to student.full_name, {:controller => "attendance_reports", :action => "student_details", :id => student.id } %></td>
              <td class="col-3"> <%= @leaves[student.id]['total'] %></td>
              <td class="col-3"><%= @leaves[student.id]['percent'].round(2)  %></td>
            </tr>
          <% end %>
        <% elsif @range == 'Equals' %>
          <% if @leaves[student.id]['percent'].round(2) == @value.to_f %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
              <% @flag=0 %>
              <td class="col-2"><%= link_to student.full_name, {:controller => "attendance_reports", :action => "student_details", :id => student.id } %></td>
              <td class="col-3"> <%= @leaves[student.id]['total'] %></td>
              <td class="col-3"><%= @leaves[student.id]['percent'].round(2)  %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </table>
  <% if @flag==0 %>
    <% unless @subject.nil? %>
      <%subject_id=@subject.id %>
    <% end %>
    <%= link_to "â–º#{t('pdf_report')}", {:controller=>'attendance_reports', :action=> 'filter_report_pdf',:batch=> @batch.id,:start_date=> @start_date ,:end_date => @end_date ,:report_type=> @mode,:subject=> subject_id,:range=>params[:filter][:range],:value=>params[:filter][:value]} ,{:target => '_blank',:class=>'user_button' } %>
  <% end %>
  <div class="extender"></div>
</div>
