      <% g_loop = 0 %>
      <%- @student.guardians.each do |p| -%>
        <% if g_loop == 0 %>
          <% father = p %>
        <% end %>
        <% if g_loop == 1 %>
          <% mother = p %>
        <% end %>
        <% g_loop = g_loop+1 %>
      <% end %>
    <% end %>
