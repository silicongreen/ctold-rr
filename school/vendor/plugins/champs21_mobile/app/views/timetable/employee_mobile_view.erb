<%#*<fieldset>%>
  <div class="span6 top_separation">
    <%= select :timetable,:wday,
      (0..6).map {|b| [t(Date::DAYNAMES[b].downcase), b]},
      {:prompt => t("select_weekday"),:selected=>@wday},
      {:onChange => "#{remote_function(:url => {:action => "update_employee_mobile_view"},
      :with => "'wday='+ value+'&id='+ #{@employee.id}"
      )}",:class=>"span3 full_width"} %>
  </div>
<%#*</fieldset>%>
<div id="timetable">
  <%= render "employee_mobile_timetable" %>
</div>
