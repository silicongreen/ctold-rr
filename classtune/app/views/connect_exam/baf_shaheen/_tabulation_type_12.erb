<div id="page-yield" class="available_sections1 baf_shaheen">
  <div class="page1"> </div>
  <div class="section1 row" >
    <center>
      <div id="pdf-header-south" class="general-header">
        <h4 align="center"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ (current_school_detail.logo.path||"public/images/application/c.png")),:width=> '4%' %></h4>
        <h2 align="center"><%=Configuration.get_config_value('InstitutionName'); %></h2>
      </div>
      <h4 align="center">Tabulation Sheet, <%= @connect_exam_obj.name %></h4>
      <table width="100%" >
            <thead>
                <tr>
                    <td><b>Year: <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%B-%Y"):@connect_exam_obj.published_date.strftime("%B-%Y") %> </b></td>
                    <td align="right"><b>Class : 
                        <% if @batch.name == "General" %>
                        <%= @batch.course.full_name %>
                        <% else %>
                           <%= @batch.name %> ,<%= @batch.course.full_name %>
                        <% end %></b>
                    </td>
                </tr>
            </thead>    
      </table>
     
       <% 
            @all_subject_id = []
            @has_exam_score = []
            @all_group_exams = GroupedExam.find(
              :all,
              :conditions => [
                "connect_exam_id = ?",
                @connect_exam_obj.id
              ]
              )
            unless @all_group_exams.blank?
              @all_exam_group_id = @all_group_exams.map(&:exam_group_id).uniq


              @all_exams = Exam.find(
                :all,
                :conditions => ["exam_group_id IN (?)", @all_exam_group_id]
                )


              unless @all_exams.blank?
                @all_subject_id = @all_exams.map(&:subject_id).uniq
                @all_exam_id = @all_exams.map(&:id).uniq
                @exam_score_all = ExamScore.find(
                  :all,
                  :conditions => ["exam_id IN (?)", @all_exam_id],
                  :include => [:exam]
                  )

                @has_exam_score = []
                unless @exam_score_all.blank?
                  @exam_score_all.each do |score|
                    if !score.marks.blank? and score.marks.to_i!=0 and !@has_exam_score.include?(score.exam_id)
                      exammain = score.exam
                      unless exammain.blank?
                        @has_exam_score << exammain.exam_group_id.to_s+"_"+exammain.subject_id.to_s
                      end
                    end
                  end
                end

              end
              end

            std_subject = StudentsSubject.find_all_by_batch_id(@batch.id)
            @std_subject_hash = []
            unless std_subject.blank?
              std_subject.each do |std_sub|
                @std_subject_hash << std_sub.student_id.to_s+"_"+std_sub.subject_id.to_s
              end
              end

            @top_exam_group_count = @all_group_exams.count

          %>
      <% unless @report_data.blank? %>
      <% c = 'even' %>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td class="col-pdf">Roll</td>
          <td class="col-pdf">Students Name</td>
          <% @report_data['report']['subjects'].each do |sub| %>
            <% has_exam = false %>
            <% if @all_subject_id.include?(sub['id'].to_i) %>
              <% has_exam = true %>
            <% end %>
            <% if has_exam == true %>
            <td><%=  sub['code'] %></td>
            <% end %> 
          <% end %> 
          <td class="col-pdf">Total</td>
        </tr>
        
        <% extender = 0 %>
        <% std_count = 0 %>
        <% j = 0 %>
      
        <% @report_data['report']['students'].each do |std| %>
          <% j = j+1 %>
          <%  std_count = std_count+1; %>
          <% if std_count>10 && extender ==0 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break">
                  <td colspan="100">&nbsp;</td>
              </tr>  
              <tr class="table-header">
                <td class="col-pdf">Roll</td>
                <td class="col-pdf">Students Name</td>
                <% @report_data['report']['subjects'].each do |sub| %>
                    <% has_exam = false %>
                    <% if @all_subject_id.include?(sub['id'].to_i) %>
                      <% has_exam = true %>
                    <% end %>
                    <% if has_exam == true %>
                    <td><%=  sub['code'] %></td>
                    <% end %> 
                  <% end %> 
                <td class="col-pdf">Total</td>

              </tr>
          <% elsif std_count>10 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break2-bf">
                  <td colspan="100">&nbsp;</td>
              </tr> 
              <tr class="table-header">
                <td class="col-pdf">Roll</td>
                <td class="col-pdf">Students Name</td>
                <% @report_data['report']['subjects'].each do |sub| %>
                    <% has_exam = false %>
                    <% if @all_subject_id.include?(sub['id'].to_i) %>
                      <% has_exam = true %>
                    <% end %>
                    <% if has_exam == true %>
                    <td><%=  sub['code'] %></td>
                    <% end %> 
                  <% end %> 
                <td class="col-pdf">Total</td>  

              </tr>
          <% end %>    
        
          <% total_sub = @report_data['report']['subjects'].count %>
          
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="name"><%= std['class_roll_no'] %></td>
            <% if !std['first_name'].blank? and !std['last_name'].blank?  %>
            <td class="name-std"><%= std['first_name']+" "+std['last_name'] %></td>
            <% elsif !std['first_name'].blank? %>
            <td class="name-std"><%= std['first_name'] %></td>
            <% else %>
            <td class="name-std"><%= "-" %></td>
            <% end %>
            <% total_mark = 0 %>
            <%
            mock_1_total = 0
            mock_2_total = 0
            mock_3_total = 0
            %>
            <% grades = [] %>
            <% grade_count = {} %>
            <% @report_data['report']['subjects'].each do |sub| %>
                  <% has_exam = false %>
                  <% if @all_subject_id.include?(sub['id'].to_i) %>
                     <% has_exam = true %>
                  <% end %>
                  <% if has_exam == false %>
                    <% next %>
                  <% end %>
                  <% subject_full_mark = 0 %>
                  <% subject_obtain_mark = 0 %>
            
                  <% subject_mock1 = 0 %>
                  <% subject_mock2 = 0 %>
                  <% subject_mock3 = 0 %>
                  
                  <% iloop = 0  %>
                  <td>
                  <% @report_data['report']['exams'].each do |rs| %>
                    <% iloop = iloop+1 %>
                    <% if !rs['result'].blank? and !rs['result'][rs['exam_id']].blank? and !rs['result'][rs['exam_id']][sub['id']].blank? and !rs['result'][rs['exam_id']][sub['id']][std['id']].blank? %>
                      
                      <%
                      subject_full_mark = subject_full_mark+rs['result'][rs['exam_id']][sub['id']][std['id']]['full_mark'].to_i
                      %>
                      <% if iloop == 1  %>
                        <%  subject_mock1 = subject_mock1+rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f %>
                      <% elsif iloop == 2 %>
                        <%  subject_mock2 = subject_mock2+rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f %>
                      <% elsif iloop == 3 %>
                        <%  subject_mock3 = subject_mock3+rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f %>
                      <% end %>
                    
                      
                      
                        
                    <% end %>
                   <% end %>
                      <%
                      mock_1_total = mock_1_total+subject_mock1.to_i
                      mock_2_total = mock_1_total+subject_mock2.to_i
                      mock_3_total = mock_1_total+subject_mock3.to_i
                      %>
                      <span class="no-warp">M1:<%= subject_mock1.to_i %></span>
                      <hr/>
                      <span class="no-warp">M2:<%= subject_mock2.to_i %></span>
                      <hr/>
                      <span class="no-warp">M3:<%= subject_mock3.to_i %></span>
                  </td>   
                       
                           
                    
                     
             <% end %> 
                <td>
                      <span class="no-warp">T1:<%= mock_1_total.to_i %></span>
                      <hr/>
                      <span class="no-warp">T2:<%= mock_2_total.to_i %></span>
                      <hr/>
                      <span class="no-warp">T3:<%= mock_3_total.to_i %></span>
                  </td>  
           
        </tr>
        <% end %>
      </table>
      <% end %>
    </center>
  </div>
  
  
</div>
<style>
.baf_shaheen table#pdf-table tr.table-header td, .baf_shaheen table#pdf-table tr.even td,.baf_shaheen table#pdf-table tr.odd td{
        padding: 2px 0px !important;
        font-size: 10px !important;
    }  
    .no-warp
    {
      white-space: nowrap;
    }
    .page-break2-bf td{
        height: 125px;
        border: 1px solid #fff;
        border-top: 1px solid #000000;
        border-bottom: 1px solid #000000;
    }

</style>
