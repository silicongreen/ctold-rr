<% unless @report_data.blank?  or  @report_data['report'].blank? %>
  <div id="page-yield"  class="available_sections1 sis sis-final">
      <div class="section1 row" >
         
              
                  <table id="pdf-table"  width="100%" class="no-border left-clear-both margin-bottom-20"  cellspacing="0" >
                      <tr>
                          <td class="align-left" width="3%">&nbsp;</td>
                          
                          <td class="align-left" width="20%">  
                              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/logo.jpg")),:width=> '100%' %>  
                          </td>
                          <td width="74%">
                              <h4 align="center"><font size="7" color="#4CAEE3">EUROPEAN STANDARD SCHOOL(ESS)</font></h4>
                              <% if @batch.course.course_name == "IV" || @batch.course.course_name == "V" || @batch.course.course_name == "VI"  || @batch.course.course_name.upcase == "VII" %>
                                <h4 align="center" style="margin-top:-6px;"><font size="5" color="#000"><%= @batch.name %></font></h4>
                              <% end %>
                              <% month_number = @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%-m"):@connect_exam_obj.published_date.strftime("%-m") %>
                              <h4 align="center" style="margin-top:-6px;">
                                <font size="5" color="#000">
                                  <% if @batch.course.course_name == "IV" || @batch.course.course_name == "V" || @batch.course.course_name == "VI" || @batch.course.course_name.upcase == "VII"%>
                                  First Term,
                                  <% end %>
                                  <% if month_number.to_i>6 %>
                                    Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i+1:@connect_exam_obj.published_date.strftime("%Y").to_i+1 %>
                                  <% else %>
                                    Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i-1:@connect_exam_obj.published_date.strftime("%Y").to_i-1 %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>
                                  <% end %>
                                </font>
                              </h4>
                              <h4 align="center" style="margin-top:-6px;"><font size="5" color="#000"><%= @connect_exam_obj.name %></font></h4>
                              
                              <h4 align="center" style="margin-top:-6px;">
                                <font size="5" color="#000">
                                  Class : <%= @batch.course.course_name %>
                                </font>
                              </h4>  
                          </td>
                          <td class="align-left" width="3%">&nbsp;</td>
                          
                     </tr>
                     <tr><td colspan="3">&nbsp;</td></tr>
                  </table>
            
      </div>
      <% class_teacher = "" %>
      <% class_teachers = [] %>
      <% if !@assigned_employee.blank? %>
        <% @assigned_employee.each do |emp| %>
           <% class_teachers << emp.first_name+" "+emp.last_name %>
        <% end %>
       <% end %>
      <% unless class_teachers.blank? %>
        <% class_teacher = class_teachers.join(", ") %>
      <% end %>
      <div class="student_information">
          <table class="std_info_table" width="100%" cellspacing="0">
              <tr>
                  <td class="align-left">Name : <%= @student.full_name %></td>
                  <td class="align-left">Roll : <%= @student.class_roll_no %></td>
                  <% unless @batch.course.section_name.blank? %>
                    <td class="align-left">Section : <%= @batch.course.section_name %></td>
                  <% end %>
                  <td class="align-left">A /C ID : <%= @student.admission_no %></td>
              </tr>
              <tr>
                  
                  <td class="align-left" <% unless @batch.course.section_name.blank? %>colspan="4"<% else %>colspan="3"<% end %>>Class Teacher :
                      <%= class_teacher  %>
                  </td>
              </tr>
          </table>
      </div>
     <% total_exam = 0 %>
     <% total_exam_continues = 0 %>
     <% total_mark_continues = 0 %>
     <% total_mark = 0%>
      <% unless @report_data['report']['exams'].blank? %>
          <% @report_data['report']['exams'].each do |report| %>
            <% total_exam = total_exam+1%>
            <% if report['exam_category'] == '1' %>
              <% total_exam_continues = total_exam_continues+1 %>
              <%
              unless @exam_marks[report['exam_id'].to_s].blank?
                  total_mark_continues = total_mark_continues+@exam_marks[report['exam_id'].to_s].to_i
              end
              %>

            <% end %>
            <%
              unless @exam_marks[report['exam_id'].to_s].blank?
                  total_mark = total_mark+@exam_marks[report['exam_id'].to_s].to_i
              end
              %>
          <% end %>
      <% end %>                  
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">
              <table id="pdf-table"  width="100%" class="left-table even-table exam-marks" cellspacing="0">
                  <% c = 'even'  %>
                  <tr class="even">
                      <td colspan="<%= total_exam+3%>" ><b>ACADEMIC PERFORMANCE</b></td>
                  </tr>
                  <tr class="even">
                      <td class="col-pdf" rowspan="2"><b><%= "Subject" %></b></td>
                      <td colspan="<%= total_exam_continues %>"><b>Continuous Assessment (Out of <%= total_mark_continues%>)</b></td>
                      <% @report_data['report']['exams'].each do |report| %>
                        <% if report['exam_category'] != '1' %>
                            <td class="col-pdf" rowspan="2"><b><%= report['exam_name'] %><br/>
                              (Out of <% unless @exam_marks[report['exam_id'].to_s].blank?  %><%= @exam_marks[report['exam_id'].to_s] %><% end %>)</b></td>
                        <% end %>
                      <% end %>
                      <td class="col-pdf" rowspan="2"><b>Total Marks<br/>(Out of <%= total_mark%>)</b></td>
                      <td class="col-pdf" rowspan="2"><b>Marks<br/>(Out of 25)</b></td>
                  </tr>
                  <% total_mark_of_allexam = 0 %>
                  <tr class="even">
                    <% @report_data['report']['exams'].each do |report| %>
                        <% if report['exam_category'] == '1' %>
                            <td class="col-pdf"><b><%= report['exam_name'] %><br/>
                              (Out of <% unless @exam_marks[report['exam_id'].to_s].blank?  %><%= @exam_marks[report['exam_id'].to_s] %><% end %>)</b></td>
                        <% end %>
                      <% end %>
                  </tr>
                  <% total_marks = 0 %>
                  <% subject_count = 0 %>
                  <% total_full_marks = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                    <%
                      has_mark = 0
                       unless @report_data['report']['exams'].blank?   
                            @report_data['report']['exams'].each do |report| 
                             
                                if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank?
                                  has_mark = has_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                end
                            end
                       end  
                       if has_mark == 0
                        next
                       end
                  
                    %>
                     
                        <% subject_count = subject_count+1 %>
                        
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>" >

                          <td class="col-pdf no-warp  align-left"  style="padding:5px !important;"><%= subjects['name'] %></td>
                          <%
                          full_mark = 0
                          obtain_mark = 0
                          
                          unless @report_data['report']['exams'].blank?   
                            @report_data['report']['exams'].each do |report| 
                                if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank?
                                  obtain_mark = obtain_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                  
                                %>
                                    <% if report['exam_category'] != '1' && report['result'][report['exam_id']][subjects['id']]['full_mark'].to_f != 20.00 %>
                                      <td class="col-pdf no-warp"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %></td>
                                    <% else %>
                                      <% if report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i != 15 || report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i != 5 %>
                                      <td class="col-pdf no-warp"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>/<%= report['result'][report['exam_id']][subjects['id']]['full_mark'].to_f %></td>
                                      <% else %>
                                      <td class="col-pdf no-warp"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %></td>
                                      <% end %>    
                                    <% end %>  
                                <%  
                                end    
                               
                                if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank?
                                  full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_f
                                end
                            end 
                          end 
                        %>

                          <% 
                          
                          main_mark = 0

                          if full_mark > 0 && obtain_mark > 0
                            main_mark = obtain_mark.to_f/2
                          end  
                          total_marks = total_marks+main_mark
                          total_full_marks = total_full_marks+25
                          
                           
                          
                          %>
                          <% if full_mark == 50 %>
                            <td class="col-pdf" style="padding:5px !important;"><b><%=  obtain_mark %></b></td>
                            <td class="col-pdf" style="padding:5px !important;"><b><%= sprintf( "%0.02f", main_mark) %></b></td>
                          <% else %>
                            <td class="col-pdf" style="padding:5px !important;"><b><%=  obtain_mark %>/<%= full_mark.to_f %></b></td>
                            <td class="col-pdf" style="padding:5px !important;"><b><%= sprintf( "%0.02f", main_mark) %>/12.5</b></td>
                          <% end %>  
                          
                         
                          

                      </tr>
                    <% end %>  
                  <% end %> 
                  <%
                    
                    group_exams = GroupedExam.find_all_by_connect_exam_id(@connect_exam_obj.id) 
                    @all_subjects = []
                    group_exams.each do |group_exam|
                      allexams = Exam.find_all_by_exam_group_id(group_exam.exam_group_id);
                      allexams.each do |exam|
                        if !@all_subjects.include?(exam.subject.id)
                            @all_subjects << exam.subject.id
                        end
                      end
                    end 
                  %>
                  <% unless @report_data['report']['no_exam_subject_resutl'].blank? %>
                    <% @report_data['report']['no_exam_subject_resutl'].each do |report| %>
                      <%  if @all_subjects.include?(report['id'].to_i) %>
                        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                            <td class="col-pdf no-warp  align-left"><%= report['subject_name'] %></td>
                            <td class="col-pdf" colspan="<%= total_exam+2 %>"><b><% if !report['subject_comment'].blank? && (report['subject_comment'] == "A*" || report['subject_comment'] == "A+") %>&nbsp;<% end %><%= report['subject_comment'] unless report['subject_comment'].blank? %></b></td>
                        </tr>
                      <% end %>
                    <% end %>
                  <% end %>  
                  <% parcentise = 0.0 %> 
                  <% if total_marks > 0 %>
                      <% parcentise = (total_marks.to_f/total_full_marks.to_f)*100 %>
                  <% end %>
                      

              </table>  
              <p>&nbsp;</p> 
              <% if @batch.course.course_name.upcase == "IV" || @batch.course.course_name.upcase == "V" || @batch.course.course_name.upcase == "VI"  || @batch.course.course_name.upcase == "VII" %>
              
              <table id="pdf-table" width="99.8%" >
                  <tr class="even"> 
                    <td class="col-pdf no-warp  align-left">
                    Total No. of Working Days<br/>
                    (<%= @connect_exam_obj.attandence_start_date.to_date.strftime("%d/%m/%Y")%> - <%= @connect_exam_obj.attandence_end_date.to_date.strftime("%d/%m/%Y")%>) :  <%= @connect_exam_obj.total_working_days %>
                    </td>
                    <td >
                    Attendance : <%= @report_data['present'] %>
                    </td>
                  </tr>
                  <tr class="even"> 
                      <td class="col-pdf no-warp  align-left" colspan="2">Parent's Signature:</td>
                  </tr>

              </table> 
              <table id="pdf-table"  width="99.8%" >
                <tr align="center">
                  <td class="col-pdf align-left" style="text-align:left !important;">
                  <b>Date of Issue : <%= @connect_exam_obj.published_date.strftime("%d/%m/%Y") %></b>
                  </td>
                  <td align="right">  
                    <table id="pdf-table" class="evaluation table_99 top-left-center sign_table"  width="30%" >
                          <tr class="even border-bottom-1-px">
                              <td class="col-pdf" width="100%" style="text-align:left !important;">
                                
                                      <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/principal.png")), :width=>"50%" %>
                              </td>
                          </tr>
                          <tr class="even">
                              
                              <td class="col-pdf align-left" style="text-align:left !important;" width="100%">
                                  <b><pre>MD. MORSHEDUL ISLAM
Principal
European Standard School (ESS)</pre></b>
                              </td>

                          </tr>

                    </table>
                  </td>
             </table> 


              <% else %>
              <table id="pdf-table" class="evaluation table_99 top-left-center sign_table"  width="99.8%" >
                  <tr class="even border-bottom-1-px">
                       <td class="col-pdf" width="40%" style="text-align:left !important;">
                        
                              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/principal.png")), :width=>"60%" %>
                      </td>
                      <td class="col-pdf no-border" width="60%"></td>
                  </tr>
                  <tr class="even">
                      
                      <td class="col-pdf align-left" style="text-align:left !important;" width="40%">
                          <b><pre>MD. MORSHEDUL ISLAM
Principal
European Standard School (ESS)</pre></b>
                      </td>
                      <td class="col-pdf no-border" width="60%"></td>

                  </tr>

              </table>
              <% end %>


          </div>
      </div>



  </div>

<% end %>

