<script type="text/javascript"> function setOption(optn) {document.getElementById("option").value = optn;} </script>
<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('user_details') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('view_details') %></div>

<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('add_transport_text')}", :controller => "transport" %></li>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('view_all')}", :controller => "transport", :action => "transport_details" %></li>
  </ul>
</div>

</div>
<div id="page-yield">
  <div id="vehicle_form">
    <% form_for(:transport) do |t| %>
      <div class="error-block">
        <%= error_messages_for :transport %>
      </div>
      <% unless flash[:warn_notice].nil? %>
        <div id="errorExplanation" class="errorExplanation"> <%= flash[:warn_notice] %> </div>
      <% end %>

      <div class="label-field-pair">
          <div class="label-container" style=""><label for="vehicle_no"><%= t('username') %></label></div>
          <div class="input-container"><label for="vehicle_no" class="vehicle_no"><%= @transport.receiver.full_name unless @transport.receiver.nil? %></label></div>
      </div>


      <div class="label-field-pair">
        <div class="label-container" style=""><label for="vehicle_no"><%= t('route') %><span class="necessary-field">*</span> </label></div>
        <div class="input-container"><%= select :route, :main_route,
            @routes.map{|r| [r.destination, r.id]},
            {:selected =>@transport.route.id },
            {:onChange => "#{remote_function(:url => {:action => "update_vehicle"},
            :with => "'route='+ value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"
            )}"}
        %>
          <%= image_tag("loader.gif", :align => "absmiddle", :border => 0,:id => "loader",:style =>"display: none;" ) %>
        </div>
      </div>

      <div class="label-field-pair">
        <div class="label-container" style=""><label for="vehicle_no"><%= t('destination') %><span class="necessary-field">*</span> </label></div>
        <div class="input-container" id="update_destination"><%= select :transport , :route_id,
            @destination.map{|d| [d.destination,d.id]},
            {:prompt => "#{t('select_destination')}"},
            {:onChange => "#{remote_function(:url => {:action => "load_fare"},
            :with => "'route='+ value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"
            )}"}
        %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container" style=""><label for="vehicle_no"><%= t('vehicle') %><span class="necessary-field">*</span> </label></div>
        <div class="input-container" id="update_vehicle">
          <%= select :transport , :vehicle_id,
            @vehicles.map{|v| [v.vehicle_no,v.id]},
            {:prompt => "#{t('select_vehicle')}"},
            {:onChange => "#{remote_function(:url => {:action => "seat_description"},
            :with => "'id='+ value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"
            )}"}
        %>
        </div>
      </div>

      <div class="label-field-pair">
        <div class="label-container" style=""><label for="vehicle_no"><%= t('fare') %><span class="necessary-field">*</span> </label></div>
        <div class="input-container" id="fare"><%= t.text_field :bus_fare, :class=>'precision_text' %></div>
      </div>
      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>
    <% end %>

    <div id="seat_description">

    </div>
  </div>
</div>
<style>
    .label-field-pair select {
        margin-left: 0px !important;
    }
    .text-input-bg select, .label-field-pair input {
        width: 95%;
    }
    .vehicle_no {
       border: 1px solid #ccc;
       padding: 7px 0px;
       text-align: center;
       border-radius: 6px;
       background: #f5f5f5;
    }
</style>