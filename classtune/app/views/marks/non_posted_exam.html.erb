<script>
  
  jj( document ).on( "click", "a", function(event) {
      
      jj("#pdf_file").hide();
      if(jj(this).attr("href").indexOf("exam_groups")!=-1 )
      {
        jj("#marks_entry").hide();
         event.preventDefault();
         jj("#marks_entry").html("<iframe src='"+jj(this).attr("href")+"' height='700' width='100%' ></iframe> ");
         jj("#marks_entry").show();
        
         
      }
      
    });
</script>  
