<div class="suhheader-div">
  <div>
    Today's Tasks
  </div>
</div>

<div class="title-div">
  Assigned By Me
</div>
<% unless tasks['employee_task_by_me'].nil? %>
  <% tasks['employee_task_by_me'].each do |h| %>

    <% if h['start_date'] == (Date.today).strftime('%Y-%m-%d') %>
      <div class="portlet-subcontent">     
        <div class="timetable_left">
          <img width="30" src="/images/icons/task/task_yellow.png" />
        </div>
        <div class="timetable_right"  style="margin-top:5px;">
          <div class="subcontent-date">Assign: <%= h['start_date'] %></div>
          <div class="subcontent-header themed_text">
            <%= h['title'] %>
          </div>
          <div class="subcontent-date">Due: <%= h['due_date'] %></div>
        </div>
      </div>
      <% tasks['employee_task_by_me'].delete_if {|h| h['start_date'] == (Date.today).strftime('%Y-%m-%d') } %>
    <% end %>
    <!--div style="border-bottom: 1px solid #ccc; float: left; margin: 15px; width: 90%;"></div-->
  <% end %>
<% else %>
  <div class="portlet-subcontent">    
    No Task Found
  </div>
<% end  %>


