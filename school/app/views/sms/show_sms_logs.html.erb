<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('sms_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('logs') %></div>

</div>
<div id="page-yield">
  <div class="box">
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td colspan="3"><%= t('sms_log_for') %> - <%= CGI.unescape @sms_message.body %></td>
      </tr>
      <tr class="tr-head">
        <td><%= t('mobile') %></td>
        <td><%= t('gateway_response') %></td>
        <td><%= t('sent_at') %></td>
      </tr>
      <tr class="tr-blank"></tr>
      <% @sms_logs.each do |log| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-5">
            <%= log.mobile %>
          </td>
          <td class="col-4">
            <%= log.gateway_response %>
          </td>
          <td class="col-7">
            <%= SmsLog.default_time_zone_present_time(log.created_at).strftime("%A, %d. %B %Y, %H:%M") %> <br/>
          </td>
        </tr>
      <% end %>
    </table>

    <%= will_paginate @sms_logs %>

  </div>
</div>
