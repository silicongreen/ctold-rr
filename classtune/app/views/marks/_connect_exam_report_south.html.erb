<script>
   var jj = jQuery.noConflict();
   function result_type_change(type_number)
   {
     jj("#result_type").val(type_number);
     jj(".exam_types a").removeClass('active');
     jj("#type_"+type_number).addClass('active');
     jj(".result_div").html("");
   }
   function get_class(batch_name)
   {
