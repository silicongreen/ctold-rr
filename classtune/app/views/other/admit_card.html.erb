<div id="page-yield">
  <div class="box">

   <div class="label-field-pair">
    <div class="label-container"><label><%= t('select_a_batch') %>:</label> </div>
    <div class="text-input-bg text-input-bg2" style="height: 320px;"><%= select :admid_card, :batch_id,
        @batches.map {|b| [b.full_name, b.id]},
        {:prompt => "Select"},
        {:multiple => true,:onChange => "#{remote_function(:url => {:action => "list_students"},
        :with => "'batch_id='+jj('#admid_card_batch_id').val()",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"
        )}"} %>
    <%= image_tag("loader.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader",
      :style =>"display: none;" ) %>
    </div>
   </div> 
   


    

