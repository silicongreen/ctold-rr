<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('donations') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('add_new_donation') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('donors')}", :action => "donors" %></li>
  </ul>
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">
    <%= error_messages_for :donation %>
    <% form_for :donation do |f| %>

      <div id="create_user_form">
        <div class="label-field-pair">
          <label for="donor_name"><%= t('donor_name') %>:</label>
          <div class="text-field-bg"><%= f.text_field :donor %></div>
        </div>
        <div class="label-field-pair">
          <label for="description"><%= t('description') %>:</label>
          <div class="text-field-bg"><%= f.text_field :description %></div>
        </div>
        <div class="label-field-pair">
          <label for="description"><%= t('transaction_date') %>:</label>
          <div class="text-field-bg"><%= calendar_date_select_tag 'donation[transaction_date]', I18n.l(@donation.transaction_date,:format=>"%d %b %Y"), :year_range => 5.years.ago..0.years.ago,:readonly=>true,:popup=>"force" %></div>
        </div>
        <div class="label-field-pair">
          <label for="amount"><%= t('amount') %>:</label>
          <div class="text-field-bg"><%= f.text_field :amount,:class=>'precision_text',:value => precision_label(@donation.amount) %></div>
        </div>
        <%=  submit_tag "â–º #{t('update')}",:class=>'submit_button' %>
      </div>


    <% end %>

  </div>
</div>
