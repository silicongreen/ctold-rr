<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" media="screen" rel="stylesheet" type="text/css" />

<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('fee_collection_dates') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('view_fee_collections') %></div>
</div>
<div id="page-yield">
  <div id="flash_box"></div>
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div id="fee_collection_dates">
    <h2>Fee Collection List</h2>  
    <% unless @finance_fee_collections.blank? %>
      <div id="fee-collections-list">
        <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
          <thead><!-- class="thead-inverse" -->
            <tr>
              <th><%= t('name') %></th>
              <th><%= t('start_date') %></th>
              <th><%= t('end_date') %></th>
              <th><%= t('due_date') %></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
        <tbody>
        <% @finance_fee_collections.each do |f| %>
          <tr class="<%= cycle('odd', 'even')%> ">
            <td class="col-2"><%= link_to "#{f.name}" ,:action=>:collection_details_view, :id=>f.id %></td>
            <td class="col-3"><%= f.start_date %></td>
            <td class="col-3"><%= f.end_date %></td>
            <td class="col-3"><%= f.due_date %></td>
            <td class="col-1">
               <div class="options">
                   <span class="small_warning"><%= link_to_remote t('sent_notification'), :url => {:action => 'sent_notification_all', :id => f.id} %></span>
                   <span class="small"><%= link_to_remote t('edit_text'), :url => {:action => 'fee_collection_edit_all', :id => f.id} %></span>
               </div>
            </td>
            <td id="link_plus_btn_<%= f.id %>" style='text-align: center;'>
                <%= link_to_remote '<i id="plus_' + f.id.to_s + '" class="fa fa-plus-square-o" style="cursor: pointer;"></i>', :url => {:action => 'fee_collection_summary_details', :id => f.id }, :before => "j('#plus_#{f.id}').removeClass('fa-plus-square-o');j('#plus_#{f.id}').addClass('fa-circle-o-notch');j('#plus_#{f.id}').addClass('fa-spin');" %>
            </div>
            </td>
         </tr><!-- style="display: none;" -->
         <tr id='fee_collection_details_<%= f.id %>'></tr>
        <% end %>
        </tbody>
      </table>
      </div>
      <%  else %>
      <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
          <thead><!-- class="thead-inverse" -->
            <tr>
              <th><%= t('name') %></th>
              <th><%= t('start_date') %></th>
              <th><%= t('end_date') %></th>
              <th><%= t('due_date') %></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
        <tbody>
            <tr><td colspan="6"><%= t('no_fee_collection_exist') %></td></tr>
        </tbody>
      </table>
      <% end %>
  </div>
  
  <div id="modal-box" style="display:none;"></div>

</div>
<style>
    .label-field-pair .label-container {
        width: 50% !important;
    }
    .label-field-pair .input-container {
        width: 45% !important;
    }
    
</style>