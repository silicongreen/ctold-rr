<fieldset class="margin-bottom-20">
  <h1 class="content-head">Admin Users</h1>
  <%= link_to '+ New Admin', new_admin_user_path, :class  => 'button-red float-right' %>
</fieldset>
<div class="content-div container-width">
  <div class='content-list'>
    <% @admin_users.each do |admin_user| %>
      <fieldset class="bg-light">
        <h4><%=link_to admin_user.full_name, admin_user_path(admin_user) %></h4>
        <label><%=h admin_user.username %></label><p class="seperator">|</p>
        <label><%=h admin_user.email %></label>
        <% if permitted_to? :edit, admin_user, :context=>:admin_users%>
          <p class="seperator">|</p>
          <label><%= link_to 'Edit', edit_admin_user_path(admin_user) %></label>
        <% end %>
      </fieldset>
    <% end %>
    <%= will_paginate @admin_users %>
  </div>
</div>
