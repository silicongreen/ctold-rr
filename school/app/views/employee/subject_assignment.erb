<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('employee_subject') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('associate') %></div>

</div>
<div id="page-yield">

  <div id="form-content">
    <div class="label-field-pair">
      <label for="course_name"><%= t('batch') %></label>
      <div class="text-input-bg">
        <%= select :subject_assignment, :batch_id, @batches.map {|b| [b.full_name, b.id]},
          {:prompt => "#{t('select_a_batch')}"},
          {:onChange => "#{remote_function(:url => {:action => "update_subjects"}, :with => "'batch_id='+value" ,:before => "$('loading').show();",
          :success => "$('loading').hide();")}"} %>  <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loading",
          :style =>"display: none;" ) %>
      </div>
    </div>

    <div id="subjects1"> <%= render :partial => 'subjects', :object => @subjects %></div>
  </div>
  <div id="department-select"></div>

</div>
