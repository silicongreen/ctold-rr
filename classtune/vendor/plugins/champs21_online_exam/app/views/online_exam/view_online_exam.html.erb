
<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/quiz.png', :html => {:alt => 'Online Quiz'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
        <a href="/online_exam/view_online_exam"> ONLINE QUIZ</a>
      </div>
      <div class="clearfix"></div>
      <div class="header-title-sub-text">
        <%= I18n.l(@local_tzone_time.to_date, :format=>'%d/%m/%Y') %>
      </div>
    </div>
  </div>    

  <div class="header-form-wrapper">
    <div class='header-right-button'>
      <%= link_to "#{t('new_text')}", :action=>'new_online_exam' %>
    </div>
  </div>
</div>
<div id="page-yield" class="bg-disable" >

  <div id="flash_box"></div>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="box" style="float:left;background-color: rgb(255, 255, 255); padding: 30px; width: 94%;">
    <% form_for :online_exam_group, :html => {:id => 'new_student'} do |form| %>


      <%# if @batches.length > 1  %> 
        <div class="label-field-pair">
          <label for="student_grade"><%= t('shift_label') %></label>
          <div class="text-input-bg">
            <%= select :student, :batch_name, options_for_select(@batches.map {|b| [b.name, b.id]}, @batch_no.to_i),
              {:prompt => "#{t('select')}"},
              {:onChange => "#{remote_function(:url => {:controller => "online_exam", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()" ,:before => "$('loading_2').show();",
              :success => "$('loading_2').hide();")}"} %>
            <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>
          </div>
        </div>
      <%# end %>

      <div class="label-field-pair">
        <label for="student_grade"><%= t('class_label') %></label>
        <div class="text-input-bg">
          <div id="course">
            <%= render :partial => 'courses_data', :object => @courses %>
          </div>
        </div>
      </div>

      <div class="label-field-pair" id="section_label">
        <label for="student_grade"><%= t('section_label') %></label>
        <div class="text-input-bg">
          <div id="section">
            <%= render :partial => 'sections', :object => @classes %>
          </div>
        </div>
      </div>


    <% end %>
  </div>
  <div style="float: left; margin: 7px; width: 95%;"></div> 
  <div class="clearfix"></div>
  <div id="exam-list"></div>
  <div id="modal-box" style="display:none;"></div>
</div>
<%= stylesheet_link_tag 'tadded-header' %>
