                            <td class="col-pdf">
                              <%  grade = GradingLevel.percentage_to_grade(avg, @batch.id) %>
                              <% if !grade.blank? and !grade.name.blank? %>
                              <%= grade.name %>
                              <% else %>
                              -
                              <% end %>
                            </td> 
                                

                      </tr> 
                      <% end %>
                    <% end %>  
                  <% end %>     

              </table>
              
          </div>
          <div class="page-break-main"></div>
          <div id="grouped_exam_report">
            <%= render  :partial=>"/connect_exam/sfx/comments5", :locals=>{:grand_total=>grand_total} %>
          </div>    
      </div>



  </div>

<% end %>
