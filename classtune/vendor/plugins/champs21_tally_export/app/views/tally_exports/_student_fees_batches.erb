<% unless @fees.nil? %>
<div class="label-field-pair" style="width: 100%;">
  <div class="input-container" style="width: 85%;"> <%= text_field_tag :search_std %> </div>
</div>
<hr />
<ul class="student_ul" id="student_ul_<%= @batch.id %>">
  <% @fees.each do |fee| %>
      <% student ||= fee.student %>
      <% unless @student_ids.map(&:to_i).include?(student.id) %>
        <li spellcheck="false" class="studentli std_name" id="student_<%= student.id %>"><span><%= student.full_name %></span></li>
      <% end %>
  <% end %>
</ul>  
<% end %>