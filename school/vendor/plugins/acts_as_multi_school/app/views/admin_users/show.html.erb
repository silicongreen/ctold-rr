<fieldset class="margin-bottom-20">
  <h1 class="content-head"><%= @admin_user.full_name.titleize %></h1>
</fieldset>
<div class="content-div">
  <div class="nav-vertical width-15-pc">
    <ul>
      <li><%= link_to 'Profile',profile_admin_user_path(@admin_user),:class=>"active" %></li>
