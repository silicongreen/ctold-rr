<div class="label-field-pair">
  <label><%= t('select_mode') %>: </label>
 
<div class="text-input-bg">
<%= select :mode, :id,
  [["#{t('monthly')}","Monthly"], ["#{t('overall')}","Overall"], ["Date Range","date"]],
  {:prompt => "#{t('select_mode')}"},
  {:onchange => "#{remote_function(
  :url => { :action => 'show' },
  :with => "'mode='+value+'&batch_id='+#{@batch.id}+'&subject_id='+#{@subject}",
  :before => "Element.show('loader_5')",
  :success => "Element.hide('loader_5')"  )}"} %>
</div><%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader_5", :style =>"display: none;" ) %>
</div>
