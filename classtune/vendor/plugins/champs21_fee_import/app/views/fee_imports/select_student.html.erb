<div id="content-header">
  <div class='header-icon student-icon'></div>
  <h1><%= t('admission') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('change_fee_collection') %></div>

</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    <form name="search_form" action="" style="display:inline;">
    <div class="label-field-pair-select-class">
      <label for="student-detail-select-class"><%= t('select_a_batch') %> </label>
      
      <div class="text-input-bg">
          <%= select :batch, :batch_id, @batches.map{|b| [b.full_name,b.id]},:prompt=> "Select Batch" %>
      </div>
      <%= image_tag("loader.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader",
        :style =>"display: none;" ) %>
    </div>
    <div class="label-field-pair" style="margin:0px auto">    
      <label>Admission No/Name : </label>  
      <div class="text-input-bg"><%= text_field_tag("query", params['query'], :autocomplete => 'off',:class=>"form-control") %></div>
    </div>
  </form>
    
  <div id="students">
    <%= render :partial => "batch_student_list" if @students.present? %>
  </div>
</div>

<script type="text/javascript">
  function set_active(){
    $$('.active-link').each(function(e){
      e.removeClassName('active-link');
    });
    this.addClassName('active-link')
  }
  function draw_report(){
    Element.show('loader')
    new Ajax.Request('/fee_imports/list_fees_for_student',
    {asynchronous:true, evalScripts:true,
      parameters:'student='+this.id,onSuccess:function(request){Element.hide('loader')}
    })
  }
  
  function search_ajax(){
      if ($('query').value.include("%")) return;
      <%="#{remote_function(:url => {:action => "list_students_by_batch"},
      :with =>"j('form').serialize()",
      :before => "Element.show('loader')",
      :success => "Element.hide('loader')",
      :update=>"students"
      )}"%>
    }

  document.observe("dom:loaded", function() {
    new Form.Element.Observer('query', 1, search_ajax);
    new Form.Element.Observer('batch_batch_id',0.5, search_ajax);
    $$('.student-link').invoke('observe','click',draw_report);
    $$('.student-link').invoke('observe','click',set_active);
  });
</script>
<script type="text/javascript">
  function validate_assign(){
    var flag = 0;
    $$('.collection_box').each(function(el){

      if (el.checked == true){
        flag = 1;
      }
    });
    if(flag == 0){
      alert("<%= "#{t('please_select_atleast_one_fee')}" %>");
      return false;
    }
    else
      return true;
  }

</script>
<style>
.label-field-pair input
{
    margin:5px 0 0 58px;
}
</style>

