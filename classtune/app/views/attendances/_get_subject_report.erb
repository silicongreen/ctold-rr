<% unless @data.nil? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">
        
    
      <table id="listing table-design">
        
        
                  
            <tr>
              <td class="col-2"><b>Roll</b></td>
              <td class="col-2 left-align"><b>Name</b></td>
              <td class="col-2">
               <b>Total</b>
              </td>
              <td class="col-2">
               <b>Present</b>
              </td>
              <td class="col-2">
               <b>Absent</b>
              </td> 
              <td class="col-2">
               <b>Late</b>
              </td> 
            </tr> 
            <% unless @data['std_att'].blank? %>
            <% @data['std_att'].each do |att| %>
            <tr>
              <td class="col-2"><%= att['roll_no'] %></td>
              <td class="col-2 left-align"><%= att['name'] %></td>
              <td class="col-2"><%= att['present']+att['absent']+att['late'] %></td>
              <td class="col-2"><%= att['present'] %></td>
              <td class="col-2"><%= att['absent'] %></td>
              <td class="col-2"><%= att['late'] %></td> 
            </tr>
            <% end %>
            <% end %>
      
      </table>
      <div class="user_button" style="margin:10px 0px;">
        <% if @date.blank? %>
          <%= link_to "#{t('pdf_report')}", {:controller => "attendances", :action => "get_subject_report_pdf", :subject_id=>@subject.id},:target => '_blank' %>
        <% elsif !@date1.blank? %>
          <%= link_to "#{t('pdf_report')} Date", {:controller => "attendances", :action => "get_subject_report_pdf", :subject_id=>@subject.id, :date=>@date1, :date2=>@date2},:target => '_blank' %>
        <% end %>  
      </div>
  </div>
<% end %>

<%= stylesheet_link_tag 'list_table' %>
<style>
   .user_button a
   {
       color: black;
       text-decoration: none;
   }
   .user_button:hover a
   {
       color: white;
       text-decoration: none;
   }
  .CSSTableGenerator td.view:hover
  {
    background: #E6585A;
    color: white;
  }
  .CSSTableGenerator td.view
  {
     cursor: pointer;
  }
  .CSSTableGenerator td a
  {
    color: inherit;
    padding : 0;
    background-color: inherit;
    float: none;  
    display: block;
    margin: -20px;
    padding: 20px;
  }
  .CSSTableGenerator td
  {
      font-size: 20px;
      text-align:center;
  }
  .CSSTableGenerator td a:hover
  {
    color: inherit;
    padding : 0;
    background-color: inherit;
    float: none;
    display: block;
    margin: -20px;
    padding: 20px;
  }
   .CSSTableGenerator table tr td 
  {
     font-weight: bold;
     overflow: hidden;
  }
  .checkmark {
    display:inline-block;
    width: 22px;
    height:22px;
    -ms-transform: rotate(45deg); /* IE 9 */
    -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
    transform: rotate(45deg);
}

span div.absent {
    position: absolute;
    width:22px;
    height:22px;
    background-color: #B3B9BB;
    border-radius:11px;
    left:0;
    top:0;
}

.checkmark_circle {
    position: absolute;
    width:22px;
    height:22px;
    background-color: #0691D5;
    border-radius:11px;
    left:0;
    top:0;
}

.checkmark_stem {
    position: absolute;
    width:3px;
    height:9px;
    background-color:#fff;
    left:11px;
    top:6px;
}

.checkmark_kick {
    position: absolute;
    width:3px;
    height:3px;
    background-color:#fff;
    left:8px;
    top:12px;
}
</style>  