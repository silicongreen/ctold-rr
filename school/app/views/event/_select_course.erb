<div class="select-list">
            <label><%= t('select_a_batch') %>:
<b class="sel-list">
                <%= link_to_function t('all'), "$$('input.category_select').each(function(checkbox) { checkbox.checked = true; });" %>,
                <%= link_to_function t('none'), "$$('input.category_select').each(function(checkbox) { checkbox.checked = false; });" %>
              </b>
            </label>
</div>
<% form_for :select_options, :url=>{:controller=>"event",:action=>"course_event", :id=>@event_id} do |m| %>
<ul id="category-list">
      <% @batches.each do |batch| %>
  <li class="list<%= cycle('odd','even') %>">
    <div class="category-box">
<%= check_box_tag "select_options[batch_id][]", batch.id,false,:class=>"category_select"%>
      </div>
    <div class="category-name">
       <%= batch.full_name %>
    </div>
  </li>
  <% end %>
</ul>
      <%= submit_tag "#{t('save')}", :class=>"create" %>
<% end %>


