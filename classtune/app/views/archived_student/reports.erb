<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('student_details') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('report_center') %></div>

</div>
<div id="page-yield">

  

    <h3><%= "Previous Reports" %></h3>

    <div class="exam-results-reports-col">
      <div class="label-field-pair">
          <label for="category_name">Class</label>
         <div class="text-input-bg">
             <%= select :student, :batch_name, options_for_select(@previous_batch.map {|b| [b.batch.full_name+" ("+b.session+")", b.id]}), 
              {:prompt => "Selcet A Class"},
              {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_previous_exam"}, :with => "'batch_id='+value" ,:before => "$('loading_2').show();",
              :success => "$('loading_2').hide();")}"} %>
              <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>
         </div>
         
      </div>
    </div>

    

    <div class="extender"> </div>
    <div id="exams">
        
    </div>



</div>

<%= stylesheet_link_tag 'tadded-header' %>
<% content_for :head do %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %>
