<html>
    <head>
        <title>Admit Card</title>
        <meta charset="UTF-8">
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" media="all" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" media="all" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </head>
    <body>
        <% i = 0 %>
        <% j = 0   %>
        <% @students.each do |std_info| %>
        
        <% if i % 2 == 0 %>
          <% j += 1 %>
        <% end %>
        <% i += 1 %>
        
      
      
        <div class="col-xs-12" style="border:1px solid black; padding:0px; margin-left: 5%; margin-right: 5%; width: 90%;">
            
            <div class="col-xs-12"  style="margin-top:5px;padding:5px;">
                <table class="table table-user-information" width="90%" style="margin-bottom: 0px;" >
                    <td style="text-align:left;"><%= image_tag "/images/school_logo/oisd/osid_logo.png", :width=>"100" %></td>
                    <td style="text-align:center;">
                        <div class="col-xs-12"><center><h4><b><font size="4"><%=Configuration.get_config_value('InstitutionName'); %></font></b></h4></center></div>
                        <div class="col-xs-12"><center><font size="2">A Cambridge Associate School No. BD 036</font></center></div>
                    
                    </td>
                    <% if std_info.photo.file? %>
                      <% @profile_image = std_info.photo.url %>
                      <% unless @profile_image.index("RackMultipart").nil? %>	
                         <% @profile_image.gsub! '?', '.?' %>	
                      <% end %>
                    <% else %>
                      <% @profile_image = "master_student/profile/default_student.png" %>
                    <% end %>
                    <td style="text-align:right;"><%= image_tag "#{@profile_image}", :width=>"100" %></td>
                </table>
              
             
            </div>
            <div class="col-xs-12" style="margin-top:2px;"><center><font size="4"><b>Statement of Entry</b></font></center></div>
            
            <div class="col-xs-12" style="margin-top:0px;padding:5px;">
              <table class="table table-user-information" width="90%" style="margin-bottom: 0px;">
                    <tbody>
                     
                      <tr>
                          <td><font size="2">Name:</font></td>
                          <td><b><font size="2">&nbsp;:&nbsp;<%= std_info.full_name %></font></b></td>
                          <td></td>
                          <td><font size="2">Roll No</td>
                          <td><font size="2">&nbsp;:&nbsp;<%= std_info.class_roll_no %></font></td>
                          
                      </tr>
                      <tr>
                        <td ><font size="2">Student Id</font></td>
                        <td><font size="2">&nbsp;:&nbsp;<%= std_info.admission_no %></font></td>
                        <td></td>
                        <td><font size="2">Session</td>
                        <td><font size="2">&nbsp;:&nbsp;<%= @term_year %></font></td>
                        
                        
                        
                      </tr>
                      <tr>
                        <td><font size="2">Class</font></td>
                        <td><font size="2">&nbsp;:&nbsp;<%= std_info.batch.course.course_name %></font></td>
                        <td></td>
                        <td><font size="2">Exam</font></td>
                        <td><font size="2">&nbsp;:&nbsp;<%= @exam_name %></font></td>
                      </tr>
                      
                    </tbody> 
              </table>       
            </div>
            <div class="col-xs-12" style="margin-top:0px; font-size:10px; text-align: right; padding: 0px 20px; ">
                <p style="margin-right: 20px;"><img src="/images/school_logo/oisd/sign-new.png" width="50" /></p>
                <p><font size="2">Principal</font></p>
            </div>
            
            <div class="col-xs-12 border-top" style="margin-top:0px; font-size:10px;">
                <div style="float: left; width: 60%; text-align: left;">
                    <font size="1">&nbsp;Address: House no: 5, Road no: 2, Block: C, Mirpur-2<br/>&nbsp;Contact: 01625905083, 01712665157</font>
                </div>
                <div style="float: left; width: 40%; text-align: right;">
                    <font size="1">Web: www.orchidintschool.com&nbsp;<br/>&nbsp;e-mail: oisd.edu@yahoo.com&nbsp;</font>
                </div>
            </div>
            
            
            
        </div> 
        
        <% if i % 3 == 0 %>
          <div style="float:left;clear:both; width:100%; height:5mm;"></div>
        <% else %>
          <div style="float:left;clear:both; width:100%; height:6mm;"></div>
        <% end %>
      <% end %>
    </body>
</html>
<style>
    .black-back
    {
        padding:2px 0px; 
        background-color: Black; 
        color: white;
    }
    .border-top-bottom
    {
        padding: 2px 0px;
        border-top: 1px solid black;
        border-bottom: 1px solid black;
    }
    .border-bottom
    {
        padding: 2px 0px;
        border-bottom: 1px solid black;
    }
    .border-top
    {
        padding: 2px 0px;
        border-top: 1px solid black;
    }


.table-user-information > tbody > tr:first-child {
    border-top: 0;
}

.table-user-information
{
    border: 0;
    
}
.table-user-information > tbody > tr > td {
    border: 0;
    font-size: 10px;
    
}
.table>tbody>tr>td, .table>tbody>tr>th, .table>tfoot>tr>td, .table>tfoot>tr>th, .table>thead>tr>td, .table>thead>tr>th {
    padding: 4px;
}
ul li
{
    list-style: decimal;
    font-size: 12px;
}
</style>
<style type="text/css" media="print">
  @page {
      size: A4 portrait;
  }
</style>
<script>
  window.print();
</script>  
