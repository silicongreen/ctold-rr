<% if @transaction.hostel_fee_collection.due_date < Date.today %>
  <% form_remote_for :fine, :url => {:action => 'update_student_fine_ajax' } do |form| %>
    <div class="fine_info">
      <div class="label-field-pair1">
        <label><%= "#{t('due_date_has_been_exceeded')}"%></label>
        <div class="text-input-bg1"><%= form.text_field :fee, :value=>'', :class=>'precision_text' %></div>
      </div>
      <%=   submit_tag "#{t('add_fine')}",:class=>'submit_button2',:onClick=>"return validate_fine();" %>
    </div>
    <div class="extender"></div>
    <%= form.hidden_field :_id, :value => @student %>
    <%= form.hidden_field :hostel_fee_collection, :value => @transaction.hostel_fee_collection.id %>


  <% end %>
<% end %>
