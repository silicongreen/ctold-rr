
<div style="float: right;height: 50px;">
  <%= link_to t('create_new_assignment'), {:controller => "assignments", :action => "new",:subject_id=>@subject.id },:target=>"blank", :class => 'submit_button' %>
  
</div>
<div style="clear: both;"></div>
<% unless @subject.nil? %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <% unless @assignments.empty? %>
    <tr class="tr-head">
      <td>
        <%= "#{t('sl_no')}."%>
      </td>
      <td>
       <%= "#{t('title')}"%>
      </td>
      <td>
        <%= "#{t('due_date')}"%>
      </td>
    </tr>
    <tr class="tr-blank"></tr>
      <% @assignments.each_with_index do |assignment,i| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-1">
            <%= i+1 %>
          </td>
          <td class="col-2">
            <%=  link_to assignment.title, assignment%>
          </td>
          <td class="col-4">
            <%= I18n.l(assignment.duedate,:format=>"%A, %d %B, %Y") %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr class="tr-odd">
        <td class="col-1"><%= "#{t('no_assignments_for_this_subject_have_been_created')}"%></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @assignments %>
<% end %>
