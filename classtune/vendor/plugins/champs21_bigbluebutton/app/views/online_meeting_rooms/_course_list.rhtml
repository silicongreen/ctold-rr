<% unless @batches.blank? %>
  <div class="batch_select_box" style="background: #FAFAFA; padding-left: none; padding-bottom: 10px; height: 285px; width: 103%; border: 1px solid #ccc; border-radius: 6px;">
    <div class="label-field-pair">
        <div style="display: inline-block; border-bottom: 1px solid #ccc; width: 100%; ">
            <div style="width: 65%; display: inline-block;">
              <div class="label-container"><label> <%= t('select_course') %><span class="necessary-field">*</span>:</label></div>
            </div>
            <div class="sel-list" style="padding-bottom: 5px; width: 29%; display: inline-block; vertical-align: top; text-align: right; padding-right: 10px; font-size: 14px; padding-top: 14px;">
              <%= link_to_function t('all'), "$$('input.course_list_options').each(function(checkbox) { checkbox.checked = true; });" %> |
              <%= link_to_function t('none'), "$$('input.course_list_options').each(function(checkbox) { checkbox.checked = false; });" %>
            </div>
        </div>
        <div style="width: 85%; display: inline-block;">
        <input type="text" name="batch_search" id="batch_search" class="form-field batch_search"  data-search="course_name_srch" data-search-opt="course_list_options" />
        </div>
        <div class="fee_category_scroll" style="">
          
          <% @batches.each do |batch| %>

            <div class="each_batch" style="padding: 5px 0; width: 100%; ">
              <% checked = true %>
              <div class="checkbox_inline"><%= check_box_tag "batch_list[]", batch.id, checked, :class=>'batches_box category_select batches_selected option_selected course_list_options' %></div> 
              <div class="checkbox_label" style="width: 90%;"><label id="batch_name_srch_<%= batch.id %>" class="batch_name_srch course_name_srch" style="width: 100%;"><%= "#{batch.full_name}" %></label></div>
            </div>

          <% end %>
        </div>
        <div style="clear: both; height: 10px;"></div>
        <div style="width: 94%; border: 1px solid #ccc; text-align: right; padding: 10px; padding-right: 15px;">
            <button id="update_attendee_course" class="submit_button update_attendee" style="margin-top: 0; margin-left: 0; width: 150px !important;">Update Attendee</button>
        </div>
        <div style="clear: both; height: 10px;"></div>
    </div>
  </div>
  <div style="clear: both; height: 40px;"></div>
<% end %>
