<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('subject') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('home') %></div>
  
  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'><%= link_to t('single_batch_subject'), subjects_path(:show_batch_subject => "1") %></li>
    </ul>
  </div>
</div>



<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="box" style="margin:0px; width:100%">
    <div id="subjects"  style="margin:0px; width:100%">
       <%= render :partial => "gradinglevel" %>
    </div>    
   
    <div id="modal-box" style="display:none;"></div>

    <div class="extender"></div>
  </div>
    
</div>
<script type="text/javascript">
  function enable_grading_level( obj ){
      if ( j(obj).prop('checked') )
      {
        j("." +  j(obj).val()).show();
        if ( j(obj).val() == "normal" )
        {
          j(".percentage").show();
          j("#percentage").hide();
        }
        else
        {
          j(".normal").hide();
          j("#normal").hide();
          j("#percentage").show();
        }
        j(".grading_type[value!=" + j(obj).val() + "]").removeAttr("checked");
        j("#subject_grading_level_grading_type").val("true");
        j("#subject_grading_level_type_data").val(j(obj).val());
      }
      else
      {
        j("." +  j(obj).val()).hide();
        if ( j(obj).val() == "normal" )
        {
          j(".percentage").hide();
        }
        j(".grading_type").removeAttr("checked");
        j("#subject_grading_level_grading_type").val("false");
      }
  }
</script>

<style>
    .percentage{
        display: none;
    }
    .normal{
        display: none;
    }
</style>