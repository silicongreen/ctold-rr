<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html dir="<%= (rtl?) ? 'rtl' : 'ltr' %>">
  <head>
    <% @direction = (rtl?) ? 'rtl/' : '' %>
    <title><%= @title %></title>
    <%= stylesheet_link_tag 'bootstrap/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'bootstrap/bootstrap-responsive.min.css' %>
    <%= stylesheet_link_tag 'bootstrap/bootstrap_login_override.css' %>
    <%= javascript_include_tag :defaults, :cache => 'cache/javascripts/all' %>

    <%= javascript_include_tag 'jquery/jquery.min.js' %>
    <%= javascript_include_tag 'jquery/jquery-ui.min.js'%>
    <%= javascript_include_tag 'jquery/jquery.hotkeys.js'%>
    <%= javascript_include_tag 'bootstrap/bootstrap.min.js'%>
    <%= javascript_include_tag 'bootstrap/bootstrap-dropdown.js'%>
    <%= javascript_include_tag 'bootstrap/bootstrap-collapse.js'%>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"></meta>

  </head>
  <body>
    <div class="container-fluid max-height">
      <div class="desktop-nav-container visible-desktop"></div>
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <a class="brand" href=""><%= current_school_name %></a>
        </div>
      </div>
      <div class="phone_top_margin invisible-phone"></div>
      <div class="content">
        <div class="row-fluid span12">
          <%= yield %>
        </div>
      </div>
      <div class="bottom-margin"></div>
      <div class="nav-container hidden-phone">
        <div class="navbar navbar-fixed-bottom ">
          <div class="navbar-inner footer_height tablet">
            <h4>
              <%= "#{t('powered_by')} #{Champs21Setting.company_details[:company_name]}" %>
            </h4>
          </div>
        </div>
      </div>
    </div>
    <div class="nav-container visible-phone">
      <div class="navbar phone">
        <div class="navbar-inner footer_height">
          <h4>
            <%= "#{t('powered_by')} #{Champs21Setting.company_details[:company_name]}" %>
          </h4>
        </div>
      </div>
    </div>
  </body>
</html>
