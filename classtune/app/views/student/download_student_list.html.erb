<div id="page-yield" class="available_sections1 baf_shaheen">
    <div class="page1"> </div>
    <div class="section1 row" >

        <table id="pdf-table" width="100%" cellspacing="0">
            <tr><td width="10%">
                    <% if MultiSchool.current_school.id == 352 %>
                      <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/352/logo-sagc.png")),:width=> '85%' %>

                    <% else %>
                      <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ (current_school_detail.logo.path||"public/images/application/c.png")),:width=> '85%' %>
                    <% end %>
                </td>
                <td width="90%" style="vertical-align:top;">
                    <font size="6"><b><%=Configuration.get_config_value('InstitutionName'); %></b></font><br/><br/>
                    <% if MultiSchool.current_school.id == 352 %>
                      <font size="5">Dhaka Cantonment, Dhaka-1206</font><br/>
                      <font size="5">Phone:9833306 web: www.sagc.edu.bd</font>
                    <% end %>
                </td>
            </tr>     
        </table>
        <p><font size="5"><b>Student Register</b><font></p>
        <table id="pdf-table" width="100%" cellspacing="0" style="font-weight:bold;">
            <% if !@section_pdf.blank? && @class_name_pdf.blank? %>
              <% 

              main_course = Course.find_by_section_name(@section_pdf)
              @class_name_pdf = main_course.course_name

              if @batch_name_pdf.blank?
                main_batch = Batch.find_by_course_id(main_course.id)
                batch_name_spilt = main_batch.name.split(" ")
                @batch_name_pdf = batch_name_spilt[0]
                unless batch_name_spilt[1].blank?
                  if @version_pdf.blank?
                    @version_pdf = batch_name_spilt[1]
                  end  
                end  

                end  

            %>
            <% end %>
            <tr class="table-header">
                <td width="16.66%">Class</td><td width="16.66%"><% unless @class_name_pdf.blank? %>  <%= @class_name_pdf %><% end %></td>
                <td width="16.66%">Shift</td><td width="16.66%"><% unless @batch_name_pdf.blank? %><%= @batch_name_pdf %><% end %></td>
                <td width="16.66%">Group</td><td width="16.66%"><% unless @group_name_pdf.blank? %><%= @group_name_pdf %><% end %></td>
                
                
            </tr>
            <tr class="table-header">
                <td width="16.66%">Section</td><td width="16.66%"><% unless @section_pdf.blank? %><%= @section_pdf %><% end %></td> 
                <td width="16.66%">Session</td><td width="16.66%"><% unless @session_name_pdf.blank? %><%= @session_name_pdf %><% end %></td>
                <td width="16.66%">Version</td><td width="16.66%"><% unless @version_pdf.blank? %><%= @version_pdf %><% end %></td>
            </tr>
        </table>    
        <br/>
        <br/>

        <% c = 'even' %>
        <table id="pdf-table" width="100%" cellspacing="0">
            <tr class="table-header">
                <td class="col-pdf aling-left no-warp"><b>ID</b></td> 
                <td class="col-pdf aling-left no-warp"><b>Roll</b></td> 
                <td class="col-pdf aling-left no-warp"><b>Name</b></td> 
                <% if @section_pdf.blank? %>
                  <td class="col-pdf aling-left no-warp"><b>Section</b></td>
                <% end %>
                <td class="col-pdf no-warp"><b>Blood Group</b></td> 
                <td class="col-pdf aling-left no-warp"><b>Category</b></td> 
                <td class="col-pdf aling-left no-warp"><b>Tuition Fees</b></td>  
                <td class="col-pdf aling-left no-warp"><b>Mobile</b></td>
                <td class="col-pdf aling-left no-warp"><b>Remarks</b></td>
            </tr>
            <% std_count = 0 %>
            <% extender = 0 %>
            <% stage = 1 %>
            <% unless @students_pdf.blank? %>  
              <% @students_pdf.each do |student| %>
                <%

                std_count = std_count+1;
                std_category = ""
                unless student.student_category.blank?
                  std_category = student.student_category.name
                  end
                fee_particular = FinanceFeeParticular.find(:all,:conditions=>"is_deleted=#{false} and finance_fee_particular_category_id=54 and batch_id=#{student.batch.id}",:order=>"FIELD(receiver_type,'Student','StudentCategory','Batch'), id DESC").find{|par|  (par.receiver.present?) and (par.receiver==student or par.receiver==student.student_category or par.receiver==student.batch) }
                monthly_fee = ""
                unless fee_particular.blank?
                  monthly_fee = fee_particular.amount
                end

              %>

                <% if std_count>47 %>
                  <% std_count = 1 %>
                  <% if stage == 1  %>
                    <tr class="page-break">
                        <td colspan="100">&nbsp;</td>
                    </tr>
                  <% else %>
                    <tr class="page-break2">
                        <td colspan="100">&nbsp;</td>
                    </tr>
                  <% end %>
                  <% stage = 2 %>
                  <tr class="header-td">
                      <td colspan="100" width="100%" style="text-align:left;">

                          <table   width="100%" cellspacing="0">
                              <tr><td width="10%">
                                      <% if MultiSchool.current_school.id == 352 %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/352/logo-sagc.png")),:width=> '85%' %>

                                      <% else %>
                                        <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ current_school_detail.logo.url),:width=> '85%' %>
                                      <% end %>
                                  </td>
                                  <td width="90%" style="vertical-align:top;">
                                      <font size="6"><b><%=Configuration.get_config_value('InstitutionName'); %></b></font><br/><br/>
                                      <font size="5">Dhaka Cantonment, Dhaka-1216</font><br/>
                                      <font size="5">Phone:9833306 web: www.sagc.edu.bd</font>
                                  </td>
                              </tr>     
                          </table>
                          <p style="width:86%"><font size="5"><b>Student Register</b><font></p>
                          <table width="100%" cellspacing="0" style="font-weight:bold;">
                              <tr class="table-header2">
                                  <td width="16.66%">Class</td><td width="16.66%"><% unless @class_name_pdf.blank? %>  <%= @class_name_pdf %><% end %></td> 
                                  <td width="16.66%">Version</td><td width="16.66%"><% unless @version_pdf.blank? %><%= @version_pdf %><% end %></td>
                                  <td width="16.66%">Shift</td><td width="16.66%"><% unless @batch_name_pdf.blank? %><%= @batch_name_pdf %><% end %></td>
                              </tr>
                              <tr class="table-header2">
                                  <td width="16.66%">Section</td><td width="16.66%"><% unless @section_pdf.blank? %><%= @section_pdf %><% end %></td> 
                                  <td width="16.66%">Group</td><td width="16.66%"><% unless @group_name_pdf.blank? %><%= @group_name_pdf %><% end %></td>
                                  <td width="16.66%">Session</td><td width="16.66%"><% unless @session_name_pdf.blank? %><%= @session_name_pdf %><% end %></td>
                              </tr>

                          </table>    
                          <br/>
                          <br/>

                      </td>
                  </tr>
                  <tr class="table-header">
                      <td class="col-pdf aling-left no-warp"><b>ID</b></td> 
                      <td class="col-pdf aling-left no-warp"><b>Roll</b></td> 
                      <td class="col-pdf aling-left no-warp"><b>Name</b></td> 
                      <% if @section_pdf.blank? %>
                        <td class="col-pdf aling-left no-warp"><b>Section</b></td>
                      <% end %>
                      <td class="col-pdf no-warp"><b>Blood Group</b></td> 
                      <td class="col-pdf aling-left no-warp"><b>Category</b></td> 
                      <td class="col-pdf aling-left no-warp"><b>Tuition Fees</b></td>  
                      <td class="col-pdf aling-left no-warp"><b>Mobile</b></td>
                      <td class="col-pdf aling-left no-warp"><b>Remarks</b></td>
                  </tr>
                <% end %>


                <tr class="table-header">
                    <td class="col-pdf aling-left"><%= student.admission_no %></td>
                    <td class="col-pdf aling-left"><%= student.class_roll_no %></td>
                    <td class="col-pdf aling-left no-warp"><%= student.full_name %></td>
                    <% if @section_pdf.blank? %>
                      <td class="col-pdf aling-left no-warp"><%= student.batch.course.section_name %></td>
                    <% end %>
                    <td class="col-pdf"><%= student.blood_group unless student.blood_group.nil? %></td>
                    <td class="col-pdf aling-left no-warp"><%= std_category %></td>
                    <td class="col-pdf aling-left"><%= monthly_fee %></td>
                    <td class="col-pdf aling-left"><%= student.sms_number %></td>
                    <td class="col-pdf aling-left remarks-td"></td>
                </tr>
              <% end %>  
            <% end %>
        </table>      

        </center>
        <p><font size="5"><b>Total Student : <%= @students_pdf.count %></b><font> </p>
    </div>


</div>


