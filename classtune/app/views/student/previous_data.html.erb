<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
// Put jQuery 1.10.2 into noConflict mode.
  var $jq1 = jQuery.noConflict(true);
</script>
<%= stylesheet_link_tag 'tadded-header' %>
<%= stylesheet_link_tag 'form-bootstrap' %>
<% content_for :head do %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %>
<div class="header-wrapper">
    <div class="header-title">
        <div class="header-icon">
            <%= image_tag '/images/icons/profile-icon.png', :html => {:alt => 'Student Profile'} %>
        </div>
        <div class="header-title-text-wrapper">
            <div class="header-title-main-text f2">
                <%= t('admission') %>
            </div>
            <div class="clearfix"></div>
            <div class="header-title-sub-text">
                <%= I18n.l(@local_tzone_time.to_date, :format=>'%d/%m/%Y') %>
            </div>
        </div>
    </div>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <%= error_messages_for 'previous_data' %>


  <% form_for :previous_data do |a| %>
  <%#= error_messages_for 'employee_bank_details' %>
   <div id="admission1_form"> 
    <div class="f1-steps">
              <div class="f1-progress">
                  <div class="f1-progress-line" data-now-value="60.5" data-number-of-steps="2" style="width: 60.5%;"></div>
              </div>
              <div class="f1-step">
                  <div class="f1-step-icon"><div class="fa">1</div></div>
                  <p><a href="/student/edit/<%= params[:id] %>?steps=one">Student Information</a></p>
              </div>
              <div class="f1-step">
                  <div class="f1-step-icon"><div class="fa">2</div></div>
                  <p><a href="/student/admission2/<%= params[:id] %>">Guardian Information</a></p>
              </div>
              <div class="f1-step active">
                  <div class="f1-step-icon"><div class="fa">3</div></div>
                  <p>Previous Details</p>
              </div>
              <div class="f1-step">
                  <div class="f1-step-icon"><div class="fa">4</div></div>
                  <p>Aditional Information</p>
              </div>
          </div> 
   </div>  

    <div class="col-sm-12" style="padding:0px;">
            <fieldset>
              <legend><%= t('previous_educational_details') %></legend>
      <%= a.hidden_field :student_id, :value => @student.id %>
      <div class="form-group col-sm-6 even">
        <label><%= t('institution_name') %></label>
        <%= a.text_field :institution, :class=>"form-control" %>
      </div>
      <div class="form-group col-sm-6">
        <label><%= t('course_text') %></label>
        <%= a.text_field :course, :class=>"form-control" %>
      </div>
      <div class="form-group col-sm-6 even">
        <label><%= "Phone Number" %></label>
        <%= a.text_field :year, :class=>"form-control" %>
      </div>
      <div class="form-group col-sm-6">
        <label><%= t('medium_of_instructions') %></label>
        <%= a.text_field :total_mark, :class=>"form-control" %>
      </div>
      <div class="form-group col-sm-6 even">
        <%= link_to "► #{t('skip')}", {:controller => "student", :action => "admission4", :id => @student.id },:class=>'btn btn-success' %>

        <%= submit_tag "► #{t('save_and_proceed')}", :disable_with => "► #{t('please_wait')}",:class=>'btn btn-success' %>

      </div>
    </div>        
    </div>   
    </div>
  <% end %>
</div>


