<div id="page-yield" class="bg-disable">

  <div class="header-wrapper">
    <div class="header-title">
      <div class="header-icon">
        <%= image_tag '/images/icons/attendance-header.png', :html => {:alt => 'Attendance'} %>
      </div>
      <div class="header-title-text-wrapper">
        <div class="header-title-main-text f2">
          Attendance
        </div>
        <div class="header-title-sub-text f5">
          <%= Time.now.strftime("%Y-%m-%d") %>
        </div>
      </div>
    </div>
     <%= link_to "<div class='button-link button-link-report'>Exam Report</div>", :controller => "student", :action => "class_test_report" %>

    <div class="clearfix"></div>

    <div class="tabbed-header-wrapper">
      <ul class="header-tabs">
        <li class="active">
          <%= link_to_remote "Monthly Attendance Report",
            :before => "Element.show('loader2');",
            :success => "Element.hide('loader2');",
            :update => 'monthreport',
            :url=>{:controller=>"student_attendance", :action=>"month_report_data"},
            :html => {:class => 'f2'}
        %>
<%#= link_to "", {:controller => 'student_attendance', :action => ''}, {:class => 'f2'} %>
        </li>
        <li>
          <%= link_to_remote "Yearly Attendance Report",
            :before => "Element.show('loader2');",
            :success => "Element.hide('loader2');",
            :update => 'monthreport',
            :url=>{:controller=>"student_attendance", :action=>"year_report"},
            :html => {:class => 'f2'}
        %>
        </li>
      </ul>
    </div>
  </div>

  <div class="loader-image">
    <%= image_tag("loader2.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader2",
      :style =>"display: none;" ) %>
  </div>

  <div id="monthreport">
    <%= render :partial => "monthreport" %>
  </div>

</div>
<style>
  div.button-link-report
  {
    
    background: #C91018;
    color:white;
    
  }
  div.button-link-report:hover
  {
    background: #383838;
  }
</style>  

<% content_for :head do %>
  <%= javascript_include_tag "swfobject" %>
  <%= javascript_include_tag "custom/tabbed-header" %>
<% end %>

<%= stylesheet_link_tag 'tadded-header' %>
<%= stylesheet_link_tag 'inline-calendar' %>