<div class="container-fluid">
  <div class="container container-width-410 container-height-150 margin-bottom-10">
    <div class="content-div">
      <div class="bg-light grey-border shadow-2">
        <div class="min-height-50 grey-border-bottom padding-hor-20">
          <% if @linkable and @linkable.class.to_s == 'MultiSchoolGroup' %>
            <div class="min-height-50 container-width-410 vertical-align-img">
              <div class="margin-bottom-10 margin-top-15 ">
                <h4><%= @linkable.name %></h4>
              </div>
            </div>
          <% else %>
            <div class="min-height-50 grey-border-bottom padding-hor-20">
              <div class="height-50 container-width-410 vertical-align-img">
                <div class="width-100 margin-auto">
                  <img src="/images/champs21-logo-red.png" alt="LOGO" />
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="min-height-100 grey-border-bottom">
          <% form_for :set_new_password,:html => {:class  => 'form-horizontal'} do |form| %>
            <% unless flash[:notice].blank? %>
              <span class="login-validation-error"><%= flash[:notice] %></span>
            <% end %>
            <div class="padding-top-20 container-width-410">
              <div class="height-24 container-width-345 margin-auto margin-bottom-20">
                <div class="padding-top-2 width-130 float-left">
                  <%= form.label :new_password %>
                </div>
                <div class="width-210 float-left">
                  <%= form.password_field :new_password,:class  => 'textfield grey-border-dark'%>
                </div>
              </div>
              <div class="height-24 container-width-345 margin-auto margin-bottom-20">
                <div class="padding-top-2 width-130 float-left">
                  <%= form.label :confirm_password %>
                </div>
                <div class="width-210 float-left">
                  <%= form.password_field :confirm_password,:class  => 'textfield grey-border-dark' %>
                </div>
              </div>
              <div class="height-24 container-width-345 margin-auto margin-top-2">
                <div class="width-210 float-right margin-right-5">
                  <div class="float-left margin-right-14">
                    <%= form.submit 'Reset', :class => "button-red", :id=>"reset_submit" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

</div>
