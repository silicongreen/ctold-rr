<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"/>
<div class="add_sub">
  <%= link_to_remote "<i class='fa fa-pencil'></i> Add Subject", :url => { :action => 'new_group_subject', :id => @board_exam_name.id, :id2 => @board_exam_group.id} %>
</div>

<% unless @group_subjects.empty? %>
<table id="example" class="table table-striped table-bordered" style="width:100%">
      <thead>
          <tr>
              <th><%= "Name" %></th>
              <th><%= "Elective" %></th>
              <th><%= "Code" %></th>
              <th class="no-sort"><%= "" %></th>
          </tr>
      </thead>
      <tbody>
   
    <% @group_subjects.each do |subject| %>
      <tr  class="tr-<%= cycle('odd', 'even') %>" id="student-<%= subject.id %>">
          <td class="no-warp"> <%= subject.name %></td>
          <td> <%= (subject.is_elective.to_i == 1)?"Yes":"No" %></td>
          <td> <%= subject.code%></td>
          <td  style="text-align:center">
            
              <%= link_to_remote("<i class='fa fa-pencil'></i> "+t('edit_text'),
                :url => { :controller=>"board",:action => 'edit_group_subject', :id =>subject},
                :method => 'get' ) %> &nbsp;
              <%= link_to_remote("<i class='fa fa-trash'></i> "+t('delete_text'),
                  :url => { :controller=>"board",:action => 'delete_group_subject', :id =>subject},
                  :method => 'delete',
                  :confirm => t('delete_confirm_msg'),
                  :update => "subject-#{subject.id}") %>
              
          </td>  
      </tr>
    <% end %>
  </tbody>
</table>  
<% else %>
  <p style="padding: 7px; text-align: center; background: #eef2fd;">No Subject Found</p>
<% end %>

