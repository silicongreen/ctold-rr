<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/select2.min.css">
<link rel="stylesheet" href="/stylesheets/select2-finance.css">

<%= javascript_include_tag 'select2.full.min.js' %>
<%= javascript_include_tag 'select2-finance.js' %>

<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('fees_defaulters_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('students_fee_dues') %></div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
  <% form_for :fees_defaulters do %>
    <div id="batchs1">
    <% form_for :fees_submission_batch do %>
      <div style="clear: both; border: 1px solid #ccc; border-radius: 5px; float: left; width: 33%;">
        <span style="padding: 8px 15px 2px 13px; font-weight: bold; display: block;">Filter By School/College:</span>  
        <div class="label-field-pair" style="width: 100%; display: block; float: left; margin-top: 6px; margin-right: 1%;">
          <%= select :fees_defaulters, :filter_by_course, [["School", 1],["College", 2]],
            {:prompt => "Select"},
            {:class => "select2-combo", :onChange => "#{remote_function(:url => {:action => "single_payment_permission_filter"},
            :with => "'filter_by_course='+value+'&opt=1'",
            :before => "Element.show('loader_school_ccollege')",
            :success => "Element.hide('loader_school_ccollege');load_select();")}", :autocomplete => "off", :style=>"width: 90% !important; float: left;"
          }%>
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader_school_ccollege",
            :style =>"display: none; " ) %>  
        </div>  
      </div>  
        
      <div style="border: 1px solid #ccc; border-radius: 5px; float: left; width: 65%; margin-left: 1%;">
        <span style="padding: 8px 15px 2px 13px; font-weight: bold; display: block;">Filter By Shift/Class or Section:</span>  
        <div class="label-field-pair course_area" style="width: 24%; margin-right: 0; display: inline-block; float: left; margin-top: 6px; ">
          <%= select :fees_defaulters, :batch_name, Batch.active.find(:all, :group => "name").map { |c| [c.name, c.id] },
            {:prompt => "#{t('select_a_batch')}"},
            {:class => "select2-combo", :autocomplete=> "off", :onChange => "#{remote_function(:url => {:controller => "finance", :action => "get_classes_single_payment"}, :with => "'batch_id='+value" ,:before => "$('loading_2').show();",
            :success => "$('loading_2').hide();")}"} %>
          <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>
        </div>  
        <div class="label-field-pair" style="width: 24%; margin-right: 0; display: inline-block; float: left; margin-top: 6px;">
          <div id="course_data" class="course_area" style='width: 100%;'> <%= render :partial => 'courses_data_single', :object => @courses %></div>
        </div>  
        <div class="label-field-pair" style="width: 24%; display: inline-block; float: left; margin-top: 6px; margin-right: 1%;">
          <div id="batches" class="course_area">
              <%= render :partial => 'batches_single' %>
          </div>
        </div>  
        <div class="label-field-pair" style="width: 20%; display: inline-block; float: left; margin-top: 6px; margin-right: 1%;">
          <div id="batches_single_session" class="course_area">
              <%= render :partial => 'batches_single_session' %>
          </div>
        </div>  
        
      </div> 
      
      <div style="clear: both; height: 10px;"></div>
      
      <div style="border: 1px solid #ccc; border-radius: 5px; float: left; width: 99%; ">
        <span style="padding: 8px 15px 2px 13px; font-weight: bold; display: block;">Filter By Batch/Student ID:</span>  
        <div class="label-field-pair" style="padding-top: 10px; padding-bottom: 10px; float: left; width: 49%; margin: 0 0;">
          <div class="input-container" style="width: 100%;"> <%= select :fees_defaulters, :batch_id, @batches.map { |c| [c.full_name, c.id] },
              {:prompt => "#{t('select_a_batch')}"},
              {:class => "select2-combo", :onChange => "#{remote_function(:url => {:action => "single_payment_permission_filter"},
              :with => "'batch_id='+value",
              :before => "Element.show('loader')",
              :success => "Element.hide('loader');load_select();")}", :autocomplete => "off", :style=>"width: 90% !important; float: left;"
            }%>
            <%= image_tag("loader.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "loader",
              :style =>"display: none; " ) %>  
          </div>
          <%#=link_to_function "show inactive batches","show_inactive_batches()",{:class=>'user_button'}%>

        </div>

        <div class="label-field-pair" style="padding-top: 10px; padding-bottom: 10px; float: left; width: 50%; margin: 0 0; ">
          <div class="input-container" style="width: 100%; position: relative;">
              <input autocomplete="off" type="text" name="student_admission_no_permission" id="student_admission_no_permission" placeholder="Student Admission No" />
              <div class="group-checked filter-single-payment"><i class="fa fa-check-circle filter-single-payment" aria-hidden="true"></i></div>
          </div>
        </div>
      </div>      
    <% end %>
      
    <div style="clear: both; height: 10px;"></div>
    <div id="student" style="border: 1px solid #ccc; width: 99%; border-radius: 6px; padding-top: 5px;"> 
        <%= render :partial => 'single_permission_students' %>
    </div>

    <div id="modal-box" style="display:none;"></div>
  </div>
  <%  end %>  
</div>
<style>
  .label-field-pair .label-container {
    width: 37%;
    padding-top: 4px;
    float: left;
  }
  .select2-container {
    width: 89% !important;
  }
  .course_area .select2-container {
    width: 100% !important;
  }
  .label-field-pair input{
    margin: 0;
    width: 92%;
  }
  .group-checked{
    position: absolute;
    right: 7px;
    background: #eee;
    top: 0;
    height: 26px;
    width: 50px;
    border-bottom-right-radius: 4px;
    border-top-right-radius: 4px;
    border: 1px solid #ccc;
    border-left: 1px solid #aaa;
    text-align: center;
    vertical-align: middle;
    display: table-cell;
    vertical-align: middle;
    padding-top: 6px;
    cursor: pointer;
  }
</style>
<script>
    j(document).ready(function(){
        j(document).off('click', '.filter-single-payment').on('click', '.filter-single-payment', function(e){
            e.preventDefault();
            var student_id = j("#student_admission_no_permission").val();
            
            if (j.trim(student_id).length > 0)
            {
                  new Ajax.Request('/finance/filter_single_payment_permission', 
                        {
                          asynchronous:true, 
                          evalScripts:true, 
                          parameters:'student_admission_no='+ student_id
                        }
                  )
            }
            e.stopPropagation();
        });
        
        j(document).off('keydown', '#student_admission_no_permission').on('keydown', '#student_admission_no_permission', function(e){
            if ( e.keyCode == 13 )
            {
              e.preventDefault();
              var student_id = j(this).val();

              if (j.trim(student_id).length > 0)
              {
                    new Ajax.Request('/finance/filter_single_payment_permission', 
                          {
                            asynchronous:true, 
                            evalScripts:true, 
                            parameters:'student_admission_no='+ student_id
                          }
                    )
              }
            }
        });
        
        j(document).off('click', '.combined_payment_student').on('click', '.combined_payment_student', function(){
            var count_fees = 0;
            var fees = "";
            var student_id = j(this).data('student-id');
            if (j.trim(student_id).length > 0)
            {
              if ( j(this).hasClass('fa-check-square-o') )
              {
                  j(this).addClass('fa-square-o');
                  j(this).removeClass('fa-check-square-o');
                   new Ajax.Request('/finance/set_combined_payment_configuration', 
                        {
                          asynchronous:true, 
                          evalScripts:true, 
                          parameters:'student='+ student_id +'&value=0'+'&key='+j(this).attr('id')
                        }
                  )
              }
              else
              {
                  j(this).removeClass('fa-square-o');
                  j(this).addClass('fa-check-square-o');
                  new Ajax.Request('/finance/set_combined_payment_configuration', 
                        {
                          asynchronous:true, 
                          evalScripts:true, 
                          parameters:'student='+ student_id +'&value=1'+'&key='+j(this).attr('id')
                        }
                  )
              }
            }
        });
    
        function enable_combined_payment()
        {
            var count_fees = 0;
            var fees = "";

            j("#combined_payment_student").removeClass('fa-square-o');
            j("#combined_payment_student").addClass('fa-check-square-o');
        }

        function remove_combined_payment()
        {
            var count_fees = 0;
            var fees = "";

            j("#combined_payment_student").addClass('fa-square-o');
            j("#combined_payment_student").removeClass('fa-check-square-o');

        }
    });
</script>  

