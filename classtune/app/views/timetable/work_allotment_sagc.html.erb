<div id="content-header">
<%#*<img src="/images/show_timetable.png" />%>
  <%= show_header_icon %>
  <h1><%= t('timetable_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('work_allotment') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'>
      <%= link_to t('assign_multiple_teachers'), :controller=>"employee", :action=>"subject_assignment"%>
    </li>
  </ul>
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
    <input type="text" id="search_batch" value="" placeholder="Search.." />
  <% form_for :employee_subjects,:html=>{:id=>'work_allotment_form'} do |f| %>
    <% @batches.each do |batch| %>
      <ul class="category-list" data-name="<%= batch.full_name %>">
        <li class="heading">
          <%= batch.full_name %>
        </li>
        <% batch.subjects.each do |subj| %>
          
          <li class="list<%=cycle('odd','even')%>">
            <div class="category-subject-name"><%= "#{subj.name}" %></div>
            <div class="category-employee-options">
              <%
                employees = ""
                amp_array = []
                unless subj.employees.blank?
                  subj.employees.each do |emp|
                    emp_number = emp.employee_number
                    emp_number.sub! 'sagc-', ''
                    amp_array << emp_number
                  end
                  employees = amp_array.join(',')
                end
            
              %>
              <%= text_field_tag   "employee_subjects[#{subj.id}]", employees, :class=>"employee-subject" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
    <%= f.submit "► #{t('update')}",:class=>:submit_button ,:disable_with=> "► #{t('please_wait')}" %>
  <% end %>
 

</div>

<script>
  var jq = jQuery.noConflict();
  jq(document).ready(function() {
    jq("body").on("blur",'#search_batch',function(){
      var value = jq(this).val();
      
      if(value)
      {
        jq(".category-list").hide();
        jq( ".category-list" ).each(function( index ) {
          var name = jq(this).attr("data-name");
          
          var n = name.toLowerCase.includes(value.toLowerCase);
          if( n == true )
          {
              jq(this).show();
          }  
        });
      }
      else
      {
          jq(".category-list").show();
      }  
    });
    
  });
  
</script> 
<style>
    .category-list li span
    {
      float: none;
      margin-right: 0px;
      text-align:inherit;
      width:auto;
     
    }
    .employee-subject
    {
       width: 300px;
       height: 20px;
    }
    
</style>    
