<% 
employee_id = @current_user.employee_record.id                 

all_new_reminders = @current_user.all_new_reminders_user
homework_count = 0
classwork_count = 0
reportcard_count = 0
exam_rountine_count = 0
leave_application_count = 0
meetings_count = 0

homework_string = ""
classwork_string = ""
reportcard_string = ""
exam_rountine_string = ""
leave_application_string = ""
meetings_string = ""
unless all_new_reminders.blank?
  all_new_reminders.each do |reminder|
    if reminder.rtype == 2
      exam_rountine_count = exam_rountine_count+1
      exam_rountine_string = '<div class="msg-count-2">'+exam_rountine_count.to_s+'</div>'
      end
    if reminder.rtype == 4
      homework_count = homework_count+1
      homework_string = '<div class="msg-count-2">'+homework_count.to_s+'</div>'
      end
    if reminder.rtype == 31
      classwork_count = classwork_count+1
      classwork_string = '<div class="msg-count-2">'+classwork_count.to_s+'</div>'
      end
    if reminder.rtype == 3
      reportcard_count = reportcard_count+1
      reportcard_string = '<div class="msg-count-2">'+reportcard_count.to_s+'</div>'
      end
    if reminder.rtype == 7 or reminder.rtype == 8 or reminder.rtype == 9 or reminder.rtype == 10 
      leave_application_count = leave_application_count+1
      leave_application_string = '<div class="msg-count-2">'+leave_application_count.to_s+'</div>'
      end
    if reminder.rtype == 11 or reminder.rtype == 12 or reminder.rtype == 13 or reminder.rtype == 14
      meetings_count = meetings_count+1
      meetings_string = '<div class="msg-count-2">'+meetings_count.to_s+'</div>'
    end
  end  
  end  
%> 

<div id="palettes-main">
    <div class="champs21_palette_container_1">
        <div id='boxes' style="float:left;margin-right: 0px;width:69%;height:120px;">
            <div id="demo2" class="als-container" data-id="als-container_0">
                <div class="good-read-box-scroll">





                    <div class="als-viewport" style="float:left; overflow: hidden; width: auto;">
                        <ul class="als-wrapper" data-id="als-wrapper_0" style="width: 635px; height:120px;">   

                            <li class="als-item" >
                                <%=  link_to "<div class='rountine_box_icon_2'><span class='f2'>CLASS ROUTINE</span></div>", :controller => 'timetable', :action => 'employee_timetable' %>                                
                            </li>



                            





                            <li class="als-item">
                                <%=  link_to "<div class='homework_box_icon'><span class='f2'>HOMEWORK"+homework_string+"</span></div>", :controller => 'assignments', :action => 'index' %>
                            </li>
                            <%if Champs21Plugin.can_access_plugin?("champs21_classwork")%>
                              <li class="als-item" >
                                  <%=  link_to "<div class='classwork_box_icon'><span class='f2'>CLASSWORK"+classwork_string+"</span></div>", :controller => 'classworks', :action => 'index' %>
                              </li>
                            <% end %>


                            <li class="als-item" >
                              <%=  link_to "<div class='marks_entry_box_icon'><span class='f2'>MARKS ENTRY</span></div>", :controller => 'marks', :action => 'connect_exam' %>
                            </li>
                            <li class="als-item" >
                                <%=  link_to "<div class='exam_box_icon'><span class='f2'>EXAM ROUTINE"+exam_rountine_string+"</span></div>", :controller => 'exam', :action => 'index' %>
                            </li>
                            
                            <li class="als-item">
                                <%=  link_to "<div class='quiz_box_icon'><span class='f2'>QUIZ</span></div>", :controller => 'online_exam', :action => 'view_online_exam' %>
                            </li>
                            
                            <li class="als-item" >
                                <%=  link_to "<div class='task_box_icon'><span class='f2'>TASK</span></div>", :controller => 'tasks', :action => 'index' %>                
                            </li>
                            <li class="als-item">
                                <%=  link_to "<div class='syllabus_box_icon'><span class='f2'>SYLLABUS</span></div>", :controller => 'syllabus', :action => 'classes_view' %>
                            </li>

                            <li class="als-item">
                                <%=  link_to "<div class='calendar_box_icon'><span class='f2'>CALENDAR</span></div>", :controller => 'calendar', :action => 'index' %>
                            </li>

                            <li class="als-item">
                                <%=  link_to "<div class='report_card_box_icon'><span class='f2'>REPORT CARD"+reportcard_string+"</span></div>", :controller => 'exam', :action => 'exam_wise_report' %>
                            </li>

                            <li class="als-item">
                                <%=  link_to "<div class='leave_box_icon'><span class='f2'>LEAVE"+leave_application_string+"</span></div>", :controller => 'employee_attendance', :action => 'leaves', :id => employee_id %>
                            </li>
                            <li class="als-item">
                                <%=  link_to "<div class='meeting_box_icon'><span class='f2'>MEETING"+meetings_string+"</span></div>", :controller => 'meetings', :action => 'index' %>
                            </li>
                            <li class="als-item">
                                <%=  link_to "<div class='lessonplan_box_icon' style='margin-right:10px !important'><span class='f2'>LESSON PLAN</span></div>", :controller => 'lessonplan', :action => 'index' %>
                            </li>

                        </ul>
                    </div>

                    <span style="height: 149px; float:left; clear:none; position: static; margin-left:10px;" class="als-next" data-id="als-next_0"></span>

                </div>
            </div>
            <div style="clear:both;"></div>  
        </div>
        <div class="school_feed_box">
            <%=   render :partial => "layouts/attendance" %>
        </div>
    </div>
    <div style="clear:both;"></div>

</div>
