<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('attendance_report') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('report') %></div>
<div id="inner-tab-menu">
  <ul>
    <!-- <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('advanced')}", :controller=>"student_attendance", :action=>"advance_search" %></li> -->
  </ul>
</div>
</div>
<% 
  if @current_user.admin? 
    batches = Batch.active.find(:all,:select=>"batches.id as batch_id, batches.name as name", :group => "name")
  else 
    batches = @current_user.employee_record.batches.find(:all,:select=>"batches.id as batch_id, batches.name as name", :group => "name")
  end 
%>
<div id="page-yield">
    <% form_for(@student, :url => {:action=> 'show'}, :html=> {:id=>'new_student'}) do |s| %>
        <% if @config.config_value == 'Daily' %>
          
          <div class="label-field-pair">    
            <label> <%= t('shift_label') %>: </label>
            <div class="text-input-bg">            
              <%#= select :batch, :id,
                @batches.map {|b| [b.full_name, b.id] },
                {:prompt => "#{t('select_a_batch')}"},
                {:onchange => "#{remote_function(
                :url => { :action => 'mode' },
                :with => "'batch_id='+value+'&subject_id='",
                :before => "Element.show('loader')",
                :success => "Element.hide('loader')"  )}"} %>
              <%= select :student, :batch_name, options_for_select(batches.map {|b| [b.name, b.batch_id]}, @batch_no.to_i), 
                {:prompt => "#{t('select')}"},
                {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&page=courses_attendances_report_mode&partial_view=student/courses_attendances_report_mode_view&section_page=sections_attendances_report_mode&section_partial=student/sections_attendances_report_mode_view'" ,:before => "$('loading_2').show();",
                :success => "$('loading_2').hide(); $('mode').update(''); $('month').update(''); ; $('report').update('');")}"} %>
                <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>            
            </div>
            <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %><div class="extender"></div>
          </div>
       
        <div class="label-field-pair">
          <label for="student_grade"><%= t('class_label') %></label>
          <div class="text-input-bg"><div id="courses_attendances_report_mode"> <%= render :partial => 'student/courses_attendances_report_mode_view', :object => @courses %></div></div>
        </div>
        <div class="label-field-pair" id="sections_div">
          <label for="student_grade"><%= t('section_label') %></label>
          <div class="text-input-bg"><div id="sections_attendances_report_mode"> <%= render :partial => 'student/sections_attendances_report_mode_view', :object => @classes %></div></div>
        </div>
      <% else %>
        
          <div class="label-field-pair">    
            <label> <%= t('shift_label') %>: </label>
            <div class="text-input-bg">
            <%#= select :batch, :id,
              @batches.map {|b| [b.full_name, b.id] },
              {:prompt => "#{t('select_a_batch')}"},
              {:onchange => "#{remote_function(
              :url => { :action => 'subject' },
              :with => "'batch_id='+value",
              :before => "Element.show('loader')",
              :success => "Element.hide('loader')"  )}"} %>
            <%= select :student, :batch_name, options_for_select(batches.map {|b| [b.name, b.id]}, @batch_no.to_i), 
                {:prompt => "#{t('select')}"},
                {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&page=courses_attendances_report_subject&partial_view=student/courses_attendances_report_subject_view&section_page=sections_attendances_report_subject&section_partial=student/sections_attendances_report_subject_view'" ,:before => "$('loading_2').show();",
                :success => "$('loading_2').hide(); $('mode').update(''); $('month').update(''); ; $('report').update('');")}"} %>
                <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>            
            </div>
            <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %><div class="extender"></div>
          </div>
       
        <div class="label-field-pair">
          <label for="student_grade"><%= t('class_label') %></label>
          <div class="text-input-bg"><div id="courses_attendances_report_subject"> <%= render :partial => 'student/courses_attendances_report_subject_view', :object => @courses %></div></div>
        </div>
        <div class="label-field-pair" id="sections_div">
          <label for="student_grade"><%= t('section_label') %></label>
          <div class="text-input-bg"><div id="sections_attendances_report_subject"> <%= render :partial => 'student/sections_attendances_report_subject_view', :object => @classes %></div></div>
        </div>
          <%#= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %><div class="extender"></div>
        
      <% end %>
    <% end %>
      
    
  


  <div id="subject"></div>
  <div id="mode"></div>
  <div id="month"></div>
  <div id="year"></div>
  <div id="report" style="margin-top: 20px;"></div>
</div>
   
