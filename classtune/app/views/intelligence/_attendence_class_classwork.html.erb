<% form_for(@student, :url => {:action=> 'show'}, :html=> {:id=>'new_student'}) do |s| %>
  <div id="page-yield" style="margin-top:0px;">  
      
      <div class="row">  
        <div class="row_label">
          <div>
            <%= t('shift_label') %>
          </div>
        </div>
        <div class="row_data">
          <div>
            <div class="custom_drop_wrapper">
             <%= select :student, :batch_name, options_for_select(Batch.active.find(:all, :group => "name").map {|b| [b.name, b.id]}, @batch_no.to_i), 
              {:prompt => "#{t('select')}"},
              {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&page=courses_classwork_intelligence_batch&partial_view=student/courses_classwork_intelligence_batch_view&section_page=sections_classwork_intelligence_batch&section_partial=student/sections_classwork_intelligence_batch_view'" ,:before => "$('loading_2').show();",
              :success => "")}"} %>
              <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="row_label">
          <div>
            <%= t('class_label') %>
          </div>
        </div>
        <div class="row_data">
          <div>
            <div id="courses_classwork_intelligence_batch" class="custom_drop_wrapper">
              <%= render :partial => 'student/courses_classwork_intelligence_batch_view', :object => @courses %>
            </div>
          </div>
        </div>
      </div>

      <div class="row"  id="sections_div">
        <div class="row_label">
          <div>
            <%= t('section_label') %>
          </div>
        </div>
        <div class="row_data">
          <div>
            <div id="sections_classwork_intelligence_batch" class="custom_drop_wrapper">
              <%= render :partial => 'student/sections_classwork_intelligence_batch_view', :object => @classes %>
            </div>
          </div>
        </div>
      </div>
      
       <div style="float:left; clear:both; margin-top:20px; width:100%;">
        <div class="row" style="width:50%">
          <div class="row_label" >
            <div>
              Select date
            </div>
          </div>
          <div class="row_data">
            <div>
              <%= calendar_date_select_tag "select_date",@date_today, :readonly=> true,:onChange => "#{remote_function(:url => {:controller => "intelligence", :action => "get_classwork_report"},
            :with => "$('new_student').serialize()",
            :before => "$('loading_6').show();",
            :success => "$('loading_6').hide();"  )}", :popup=>:force, :placeholder => '',:style=>'height:29px; float:left;' %>
             <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_6", :style =>"display: none;" ) %>
            </div>
          </div>
        </div>
      </div>  
      
      
     
      
    <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>


  
  <%= hidden_field_tag 'time_zone_date',@date_today, :id=>'time_zone' %>

  <div id="att_report"><%= render :partial => "report_student.html" %></div>
  
  
  
  
  <% end %>
  
</div>
