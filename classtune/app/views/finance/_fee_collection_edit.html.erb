<label class="head_label"><%= t('edit_fee_collection_date') %> <span></span></label>
<% form_remote_for :finance_fee_collection,
  :url => {:action => 'fee_collection_update', :id => @finance_fee_collection.id,:batch_id=>@batch.id} do |form| %>
<div id="form-errors"></div>
  <div class="label-field-pair">
    <div class="label-container"><label for="reason"> <%= t('fee_category') %>:</label></div>
    <div class="input-container" style="padding-top: 10px; font-weight: bold; padding-left: 10px;"> <span><%= @finance_fee_collection.fee_category.name %></span></div>
  <div id ="batchs"></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label for="reason"> <%= t('course_for_category') %>:</label></div>
    <div class="input-container" style="padding-top: 10px; font-weight: bold; padding-left: 10px;"> <span><%= @batch.full_name %></span></div>
  <div id ="batchs"></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label for="reason">  <%= t('fee_collection_name') %>:</label></div>
    <div class="input-container"><%= form.text_field :name%></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label for="reason">  <%= t('start_date') %></label></div>
    <div class="input-container calendar-input"><%= calendar_date_select_tag 'finance_fee_collection[start_date]',  I18n.l(@finance_fee_collection.start_date,:format=>"%d %b %Y"),:popup => "force"  %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label for="reason">  <%= t('end_date') %></label></div>
    <div class="input-container calendar-input"><%= calendar_date_select_tag 'finance_fee_collection[end_date]',I18n.l(@finance_fee_collection.end_date,:format=>"%d %b %Y") ,:popup => "force" %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label for="reason">  <%= t('due_date') %></label></div>
    <div class="input-container calendar-input"><%= calendar_date_select_tag 'finance_fee_collection[due_date]', I18n.l(@finance_fee_collection.due_date,:format=>"%d %b %Y"),:popup => "force" %></div>
  </div>

  <div class="extender"></div>
  <div id="submit-button">
        <%=  submit_tag "► #{t('update')}",:class=>'submit_button', :id => 'submit_button' , :disable_with => "► #{t('please_wait')}",:data_disable_with=>"► #{t('please_wait')}"  %>
  </div>
<% end %>
  <script type="text/javascript">
     j(document).delegate('.submit_button','click',function(e){
    j('.submit_button').attr('value',j('.submit_button').attr('data_disable_with'));
   j('.submit_button').prop("disabled", true);
  });
</script>
