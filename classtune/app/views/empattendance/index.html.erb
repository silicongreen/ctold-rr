<div id="content-header">
  <h1><%= "Attendance Report" %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "Employee" %></div>
<div id="inner-tab-menu">
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% form_remote_for :campus_report, :url => {:action=> 'campus_report_show'}, :html=> {:id=>'campus_report_show'} do |s| %>
  <div class="box">
      <% if @has_advance_attendance_report %>
      <div class="label-field-pair" style="display: none; float:left; clear:both; width:80%; margin-bottom:5px;margin-left: 17px;">
          <label for="attandence_date"><%= "Report Type" %></label>
          <div class="text-input-bg">
              <%= select :campus_report, :report_type, [["All",1],["Absent",2],["Present",3],["Late",4]] %>
          </div>
      </div>
      <% else %>
      <div class="label-field-pair" style="float:left; clear:both; width:80%; margin-bottom:5px;margin-left: 17px;">
          <label for="attandence_date"><%= "Report Type" %></label>
          <div class="text-input-bg">
              <%= select :campus_report, :report_type, [["All",1],["Absent",2],["Present",3],["Late",4]] %>
          </div>
      </div>
      <% end %>
      <% if @has_advance_attendance_report %>
        <div class="label-field-pair" style="float:left; clear:both; width:80%; margin-bottom:5px;margin-left: 17px;">
            <label for="attandence_date"><%= "Report For" %></label>
            <div class="text-input-bg select_tag">
                <%= select_tag "attendance_report_for",options_for_select([["-- Select --",0],["Single Date",1],["Month",2],["Date Range",3]],0), :autocomplete => :off,:onChange => "#{remote_function(:url => {:action => "list_options"},
                :with => "'option_type='+ value",
                :before => "Element.show('loader1')",
                :success => "Element.hide('loader1')"
                )}" %>
                <%= image_tag("loader.gif",
                :align => "absmiddle",
                :border => 0,
                :id => "loader1",
                :style =>"display: none;" ) %>  
            </div> 
        </div>
        <div id="report_for"></div>
      <% else %>
        <div class="label-field-pair" style="float:left; clear:both; width:80%; margin-bottom:5px;margin-left: 17px;">
          <label for="duedate">Select date</label>
          <div  class="text-input-bg">
            <%= calendar_date_select_tag "campus_report[attandence_date]",@date_today,
              :class=>"text-input-bg" ,:readonly=>true,:popup=>:force%>
          </div>
        </div>
      <% end %>
      <div style="clear: both; height: 10px;"></div>  
      <div style="margin-left: 15px;">
        <%= submit_tag "", :value => "► #{t('proceed')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>  
      </div>
  </div>
  <% end %>
  <%= hidden_field_tag 'time_zone_date',@date_today, :id=>'time_zone' %>
  <div id="report_content"></div>
    
</div>
<script>
  var jq = jQuery.noConflict();
  var oDataTable;
  function generate_datatable(report_for, report_type, report_date_from, report_date_to, start_month, end_month, month, all_record)
  {
      jq(document).ready(function() {
          if ( parseInt(report_for) == 1 )
          {
            oDataTable = jq('#hr_report').DataTable( {
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/empattendance/campus_report_view",
                    type: 'POST',
                    data: {
                        report_for: report_for,
                        report_type: report_type, 
                        report_date_from: report_date_from, 
                        report_date_to: report_date_to, 
                        start_month: start_month, 
                        end_month: end_month, 
                        month: month, 
                        all_record: all_record, 
                        employee_department_id: jq("#dept_id").val(),
                        category_id: jq("#cate_id").val(),
                        position_id: jq("#pos_id").val(),
                        grade_id: jq("#grade").val(),
                    }
                },
                columns: [
                    { "data": "employee_image" },
                    { "data": "employee_info" },
                    { "data": "department" },
                    { "data": "in_time", "sClass" : "ofc_time" },
                    { "data": "out_time", "sClass" : "ofc_time" },
                    { "data": "status", "sClass" : "ofc_time" },
                    { "data": "late", "sClass" : "ofc_time" }
                ]
            });
          }
          else if ( parseInt(report_for) == 2 )
          {
            oDataTable = jq('#hr_report').DataTable( {
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/empattendance/campus_report_view",
                    type: 'POST',
                    data: {
                        report_for: report_for,
                        report_type: report_type, 
                        report_date_from: report_date_from, 
                        report_date_to: report_date_to, 
                        start_month: start_month, 
                        end_month: end_month, 
                        month: month, 
                        all_record: all_record, 
                        employee_department_id: jq("#dept_id").val(),
                        category_id: jq("#cate_id").val(),
                        position_id: jq("#pos_id").val(),
                        grade_id: jq("#grade").val(),
                    }
                },
                columns: [
                    { "data": "employee_image" },
                    { "data": "employee_info" },
                    { "data": "department" },
                    { "data": "total_present", "sClass" : "ofc_time" },
                    { "data": "total_absent", "sClass" : "ofc_time" },
                    { "data": "total_late", "sClass" : "ofc_time" },
                    { "data": "total_leave", "sClass" : "ofc_time" }
                ]
            });
          }
          else if ( parseInt(report_for) == 3 )
          {
            oDataTable = jq('#hr_report').DataTable( {
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/empattendance/campus_report_view",
                    type: 'POST',
                    data: {
                        report_for: report_for,
                        report_type: report_type, 
                        report_date_from: report_date_from, 
                        report_date_to: report_date_to, 
                        start_month: start_month, 
                        end_month: end_month, 
                        month: month, 
                        all_record: all_record, 
                        employee_department_id: jq("#dept_id").val(),
                        category_id: jq("#cate_id").val(),
                        position_id: jq("#pos_id").val(),
                        grade_id: jq("#grade").val(),
                    }
                },
                columns: [
                    { "data": "employee_image" },
                    { "data": "employee_info" },
                    { "data": "department" },
                    { "data": "total_present", "sClass" : "ofc_time" },
                    { "data": "total_absent", "sClass" : "ofc_time" },
                    { "data": "total_late", "sClass" : "ofc_time" },
                    { "data": "total_leave", "sClass" : "ofc_time" }
                ]
            });
          }
      });
  }
  function add_filter()
{
    if ( jq(".dataTables_filter")[0] )
    {
        jq(".dataTables_filter").addClass("col-sm-6");
        jq(".dataTables_filter").parent("div").parent("div").prepend(jQuery("#department_filter").html());
        jq("#department_filter").remove();
    }
    
    if ( jq("#dept_id").val() != "0" )
    {
        jq("#department_id").val(jq("#dept_id").val()).trigger('change');
    }
    
    if ( jq("#cate_id").val() != "0" )
    {
        jq("#category_id").val(jq("#cate_id").val()).trigger('change');
    }
    
    if ( jq("#pos_id").val() != "0" )
    {
        jq("#position_id").val(jq("#pos_id").val()).trigger('change');
    }
    
    if ( jq("#grade").val() != "0" )
    {
        jq("#grade_id").val(jq("#grade").val()).trigger('change');
    }
}

function filterEmployeeDatatableByDepartment(data)		
 {		
     var value = jq("#department_id").val();		
     oDataTable.column( 1 ).search( value ).draw(); 		
   		
 }		
 		
 function filterEmployeeDatatableByCategory(data)		
 {		
     var value = jq("#category_id").val();		
     oDataTable.column( 2 ).search( value ).draw(); 		
    		
 }		
 		
 function filterEmployeeDatatableByPosition(data)		
 {		
     var value = jq("#position_id").val();		
     oDataTable.column( 3 ).search( value ).draw();		
    		
 }		
 		
 function filterEmployeeDatatableByGrade(data)		
 {		
     var value = jq("#grade_id").val();		
     oDataTable.column( 4 ).search( value ).draw();		
 }

</script>
