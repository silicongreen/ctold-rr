<div class="site_logo"></div>
<div class="stp_banner"></div>
<div id="wrapper">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="login_box">
    
    <div id="login-input-box">
      <div id="logo_area">
        <div id="school-name"><%= current_school_name %></div>
        <div id="top_logo">
          <%= image_tag current_school_detail.logo.url %>
        </div>
      </div>
      <% form_for :user do |form| %>

        <div id="login_area">
          <div class="login_fields">
            <div id="username_textbox_bg">
              <%= form.text_field :username,
                :maxlength => 40, :placeholder=>"Username"%>
            </div>
            <div id="password_textbox_bg">
              <%= form.password_field :password,:placeholder=>"Password" %>
            </div>
            <div id="notice">

            </div>
          </div>
          

          <div id="submit_area">            
            <%= link_to t('forgot_password'),
              {:controller => "user",
              :action => "forgot_password"}, :class=>"forgot_pwd themed_hover_text" %>
            
            <!--<%= link_to 'Student Registration',
              {:controller => "user",
              :action => "new_student_registration"}, :class=>"forgot_pwd themed_hover_text" %>-->
            <%= submit_tag t('login'), :class => "submit themed_bg themed-dark-hover-background" %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
  <div id="powered_by_div">
    <%= t('powered_by') %> <a href=<%= "#{Champs21Setting.company_details[:company_url]}" %> target="_blank" class="themed_text"><%= Champs21Setting.company_details[:company_name] %> </a>
  </div>

</div>


<script type="text/javascript">
  document.getElementById('user_username').focus();
</script>

