<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('manage_attendance') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('leave_attendance') %></div>


</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="box">
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('add_type')}", :controller=>"employee_attendance", :action=>"add_leave_types"%></div>
      <div class="link-descr"><%= t('link_dec1') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('attendance_register')}", :controller=>"employee_attendances", :action=>"index"%></div>
      <div class="link-descr"><%= t('register_attendance') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('attendance_report')}", :controller=>"employee_attendance", :action=>"report" %></div>
      <div class="link-descr"><%= t('attendance_report') %>.</div>
    </div>
      
    <div class="link-box">
      <div class="link-heading"><%= link_to "Employee Attendance Time", :controller=>"employee_attendance", :action=>"card_report" %></div>
      <div class="link-descr"><%= t('attendance_report') %>.</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('reset_leave')}", :controller=>"employee_attendance", :action=>"manual_reset" %></div>
      <div class="link-descr"><%= t('reset_employee_leaves') %></div>
    </div>
    
    <% if @total_leave_count == 0 %>

    <% else %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('new_leaves')} (#{@total_leave_count})", :controller=>"employee_attendance", :action=>"new_leave_applications", :id=>@employee.id, :target=>"no-popup" %></div>
        <div class="link-descr"><%= t('new_leaves') %> </div>
      </div>
    <% end %>

  </div>


</div>
