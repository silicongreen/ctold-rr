<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/notice.png', :html => {:alt => 'Notice'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
       <a href="/assignment/assignment_result">Assignment Results</a>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
    </div>    

  <div class="header-form-wrapper">
      <div class='header-right-button'><%= link_to "#{t('view_all')}", :controller => 'assignment', :action => 'assignment_result' %></div>
        <% if permitted_to? :add_assignment_result,:assignment %>
          <div class='header-right-button'><%= link_to "#{t('add')}", :controller => 'assignment', :action => 'add_assignment_result' %></div>
        <% end %>
  </div>
</div>

<div id="page-yield" style="margin-top: 0px;">

  <% unless @assignment_results.empty? %>
    <div id="all_news">
      <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
        <tr class="tr-head">
          <td>
            <%= t('sl_no') %>
          </td>
          <td>
            <%= t('title') %>
          </td>
          <td>
            <%= "Subject" %>
          </td>
          <td>
            <%= t('posted') %>
          </td>
          <tr style="text-align: center;"><%= "Actions" %></tr>
        </tr>
        <tr class="tr-blank"></tr>
        <% @assignment_results.each_with_index do |r,i| %>
          <% link_value = r.title %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-1">
              <%= i+1 %>
            </td>
            <td class="col-4">
              <%=  link_to link_value, :controller => 'assignment', :action => 'view_assignment_result', :id => r.id%>
            </td>
            <td class="col-3">
              <%= r.subject.batch.full_name %> <%= r.subject.name %>
            </td>
            <td class="col-3">
              <%= I18n.l(r.created_at,:format=>"%A, %d %B, %Y") %>
            </td>
            <td>
              <%= link_to "<i class='fa fa-trash'></i> #{t('delete_text')}", {:action => "deleteassignment_result", :id=>r.id,:page=>params[:page]}, :confirm => "#{t('delete_confirm_msg')}" %>
            </td>
          </tr>
        <% end %>

      </table>
    </div>
  <% else %>
      <p class="flash-msg">No Record Found</p>
    <% end %>
  <% end %>

  <div class="extender"></div>
  <div class="clearfix"></div>
    <%= will_paginate assignment_results %>
</div>
<%= stylesheet_link_tag 'tadded-header' %>