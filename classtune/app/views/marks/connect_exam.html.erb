<script>
  var jj = jQuery.noConflict();
  var oDataTable;
  jj(document).ready(function () {
      oDataTable = jj('#exam_data').DataTable( {
        "ajax": "/marks/data_connect_exam",
        "deferRender": true,
        "pageLength": 25,
        "order": [],
        "oSearch": { "bSmart": false },
        columnDefs: [
            {
                targets: [ 0, 1, 2 ],
                className: 'mdl-data-table__cell--non-numeric'
            }
        ]
    } );
     jj( document ).on( "change", "#exam_exam_id", function() {
      if(jj("#exam_exam_id").val())
      {
        oDataTable.column( 1 ).search( jj("#exam_exam_id").val(),false,false).draw();
      }
      else
      {
        oDataTable.column( 1 ).search("").draw();
      } 
    });
    
    jj(".section_id").change(function(){
      if(jj(this).val())
      {
        oDataTable.column( 1 ).search("").column( 0 ).search( jj(this).val(),false,false).draw();
        jj.get( "/marks/examgroup", { batch_name: jj(this).val() } )
        .done(function( data ) {
          jj("#examgroup").html(data);
        });
        
        
      }
      else
      {
        oDataTable.column( 1 ).search("").column( 0 ).search(class_id_current.replace(/\_/g, ' '),false,false).draw(); 
        jj.get( "/marks/examgroup", { batch_name: "0" } )
        .done(function( data ) {
          jj("#examgroup").html(data);
        });
        oDataTable.column( 1 ).search("").draw();
        
      }   
    });
    
    
 
  
    
    
  });
</script>
<% if MultiSchool.current_school.id == 312 or MultiSchool.current_school.id == 2 %>

<%= javascript_include_tag 'pdfobject' %>

<script>
  
  jj( document ).on( "click", "a", function(event) {
      
      jj("#pdf_file").hide();
      if(jj(this).attr("href").indexOf("connect_exam_subject_comments")!=-1 || j(this).attr("href").indexOf("comment_tabulation")!=-1 )
      {
        jj("#marks_entry").hide();
         event.preventDefault();
         jj("#marks_entry").html("<iframe src='"+jj(this).attr("href")+"' height='700' width='100%' ></iframe> ");
         jj("#marks_entry").show();
        
        
         //PDFObject.embed(jj(this).attr("href"), "#pdf_file", {id: "pdf_id"});
        
         
      }
      if(jj(this).attr("href").indexOf("marksheet")!=-1)
      {
         jj("#marks_entry").hide();
         jj("#pdf_file").show();
         event.preventDefault();
         var isFirefox = typeof InstallTrigger !== 'undefined';
         if(isFirefox)
         {
            PDFObject.embed(jj(this).attr("href"), "#pdf_file", {id: "pdf_id",forcePDFJS: true,PDFJS_URL: "/javascripts/pdfjs/web/viewer.html"});
         } 
         else
         {
            PDFObject.embed(jj(this).attr("href"), "#pdf_file", {id: "pdf_id"});
         }
         
      }
      
    });
</script>  
