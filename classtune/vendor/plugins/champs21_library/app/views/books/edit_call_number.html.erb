<div id="content-header">
<%= show_header_icon %>
  <h1><a href="/library" style="color:#666666; text-decoration: none;" ><%= "#{t('library_text')}"%></a></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "#{t('edit_call_number')}"%></div>

</div>
<div id="page-yield" class="ch_book_wrapper">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="search_form">


    <% form_for :book_call_number, :url=>{:action=>'update_call_number',:id=>params[:id],:page=>params[:page]} do |f| %>
      <%= error_messages_for :book_call_number %>
      <div class="label-field-pair">
        <label for="book_number"><%= "#{t('call_number')}"%><span class="necessary-field">*</span></label>
        <div class="text-input-bg">
          <%= f.text_field :call_number %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="title"><%= "#{t('title')}"%> <span class="necessary-field">*</span></label>
        <div class="text-input-bg">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="author"><%= "#{t('book_author')}"%> <span class="necessary-field">*</span></label>
        <div class="text-input-bg">
          <%= f.text_field :author %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="author"><%= "#{t('subject')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :subject %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="title"><%= "#{t('total_page')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :total_page %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="author"><%= "#{t('version')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :version %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="author"><%= "#{t('language')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :language %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="author"><%= "#{t('publication_place')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :publication_place %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="author"><%= "#{t('publish_by')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :published_by %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="author"><%= "#{t('publish_year')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :publish_year %>
        </div>
      </div>


      <%= f.submit "#{t('update')}",  :class => "submit_button"  %>

    <% end %>


  </div>
</div>

