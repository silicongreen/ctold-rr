              <td width="20%">Student's Name</td><td width="40%" class="align-left-baf"><%= @student.full_name.upcase %></td>
              <td width="10%">Section</td><td width="12%"><%= @batch.course.section_name %></td>
              <td width="6%">Roll</td><td width="12%"><%= @student.class_roll_no %></td>
          </tr>
          <tr class="table-header">
              <td width="20%">Class Teacher</td>
              <td width="40%" class="align-left-baf">
              <% unless @assigned_employee.blank? %>
                  <% @assigned_employee.each do |emp| %>
                      <% emp_full_name = emp.first_name.to_s+" "+emp.last_name.to_s  %>
                      <b><%= emp.first_name %>&nbsp;<%= emp.last_name %></b>
                    <% break %>
                  <% end %>
                <% end %>        
              </td>
              <td width="10%">Cell No</td>
              <td width="30%" colspan="3">
              <% unless @assigned_employee.blank? %>
                  <% @assigned_employee.each do |emp| %>
                      <% emp_full_name = emp.first_name.to_s+" "+emp.last_name.to_s  %>
                      <b><%= emp.mobile_phone %></b>
                    <% break %>
                  <% end %>
                <% end %>    
              </td>
          </tr>
      </table>
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">

              
              
              <table id="pdf-table" width="99.8%" cellspacing="0">
                  <% c = 'even'  %>
                    <tr class="table-header">
                      <td colspan="5"><b><%= "ASSESSMENT" %></b></td>
                    </tr>
              
                    <tr class="table-header">
                      <td class="col-pdf no-warp"><b><%= "Subject" %></b></td>
                      <td>Quarterly</td> 
                      <td>Half Yearly</td>
                      <td>Quarterly</td> 
                      <td>Annual/td>
                    </tr>
                   <%
                   has_first_term = false
                   has_final_term = false
                   %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% subjectdata = Subject.find(subjects['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>@student.id.to_s,:subject_id=>subjects['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                         <% next %>
                      <% end %>
                      <% if subjects['no_exams_sjws'].to_i == 1  %>
                        <% next %>
                      <% end %>
                      
                      
                        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <td class="col-pdf  no-warp align-left-baf"><%= subjects['name'] %></td>   
                          <%
                            cw = 0
                            ct = 0
                            term = 0
                            full_mark_cw = 0
                            full_mark_ct = 0
                            full_mark_term = 0

                            cw_final = 0
                            ct_final = 0
                            term_final = 0
                            full_mark_cw_final = 0
                            full_mark_ct_final = 0
                            full_mark_term_final = 0
                          %>
                          
                          <% unless @report_data['report']['exams'].blank? %>
                            <% @report_data['report']['exams'].each do |report| %>
                                <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                  
                                  <% if report['quarter'] == '5' %>
                                      <% if report['exam_category'] == '3' or report['exam_category'] == '4' or report['exam_category'] == '5' %>
                                        <% term = term+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f%>
                                      <% end %>
                                      <% if report['exam_category'] == '1' %>
                                        <% ct = report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f%>
                                      <% end %>
                                      <% if report['exam_category'] == '2' %>
                                        <% cw = report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f%>
                                      <% end %>
                                  <% end %>
                                  <% if report['quarter'] == '6' %>
                                      <% if report['exam_category'] == '3' or report['exam_category'] == '4' or report['exam_category'] == '5' %>
                                        <% term_final = term+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f%>
                                      <% end %>
                                      <% if report['exam_category'] == '1' %>
                                        <% ct_final = report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f%>
                                      <% end %>
                                      <% if report['exam_category'] == '2' %>
                                        <% cw_final = report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f%>
                                      <% end %>
                                  <% end %>
                                <% end %>
                                <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                  <% if report['quarter'] == '5' %>
                                      <% has_first_term = true %>
                                      <% if report['exam_category'] == '3' or report['exam_category'] == '4' or report['exam_category'] == '5' %>
                                        <% full_mark_term = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% end %>
                                      <% if report['exam_category'] == '1' %>
                                        <% full_mark_ct = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% end %>
                                      <% if report['exam_category'] == '2' %>
                                        <% full_mark_cw = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% end %>
                                  <% end %>
                                  <% if report['quarter'] == '6' %>
                                      <% has_final_term = true %>
                                      <% if report['exam_category'] == '3' or report['exam_category'] == '4' or report['exam_category'] == '5' %>
                                        <% full_mark_term_final = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% end %>
                                      <% if report['exam_category'] == '1' %>
                                        <% full_mark_ct_final = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% end %>
                                      <% if report['exam_category'] == '2' %>
                                        <% full_mark_cw_final = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% end %>
                                  <% end %>

                                <% end %>
                            <% end %>
                          <% end %> 
                         
                         <%
                         quarter_mark = 0
                         if has_first_term
                            if full_mark_term == 35
                              if ct > 0
                                ct = (ct.to_f/full_mark_ct.to_f)*10
                                ct = ct.round
                              end
                              full_mark_ct = 10
                            end 
                            if cw > 0 
                              cw = (cw.to_f/full_mark_cw.to_f)*100
                              cw = cw.round
                            end

                            full_mark_quarter = full_mark_ct+5
                            quarter_mark = cw+ct
                            quarter_main_mark = 0
                            if quarter_mark > 0
                              quarter_main_mark = (quarter_mark.to_f/full_mark_quarter.to_f)*100
                              quarter_main_mark = quarter_main_mark.round
                            end

                            term_mark_main = 0

                            if term > 0
                              term_mark_main = (term.to_f/full_mark_term.to_f)*100
                              term_mark_main.round
                            end

                         end
                         %>
                        
                         <td><% if has_first_term %>
                         
                         <% if quarter_main_mark >= 80 %>
                          Excellent
                          <% elsif quarter_main_mark >= 60 %>
                          Very Good
                          <% elsif quarter_main_mark >= 50 %>
                          Good
                          <% else %>
                          Need Improvement
                          <% end %>
                         
                         <% end %>
                         </td>
                         <td><% if has_first_term %>
                         
                          <% if term_mark_main >= 80 %>
                          Excellent
                          <% elsif term_mark_main >= 60 %>
                          Very Good
                          <% elsif term_mark_main >= 50 %>
                          Good
                          <% else %>
                          Need Improvement
                          <% end %>
                         
                         <% end %>
                         </td>

                         <%
                         quarter_mark = 0
                         if has_final_term
                            if full_mark_term_final == 35
                              if ct_final > 0
                                ct_final = (ct_final.to_f/full_mark_ct_final.to_f)*10
                                ct_final = ct_final.round
                              end
                              full_mark_ct = 10
                            end 
                            if cw_final > 0 
                              cw_final = (cw_final.to_f/full_mark_cw_final.to_f)*100
                              cw_final = cw_final.round
                            end

                            full_mark_quarter = full_mark_ct+5
                            quarter_mark = cw_final+ct_final
                            quarter_main_mark = 0
                            if quarter_mark > 0
                              quarter_main_mark = (quarter_mark.to_f/full_mark_quarter.to_f)*100
                              quarter_main_mark = quarter_main_mark.round
                            end

                            term_mark_main = 0

                            if term > 0
                              term_mark_main = (term_final.to_f/full_mark_term_final.to_f)*100
                              term_mark_main.round
                            end

                         end
                         %>
                        
                         <td><% if has_final_term %>
                         
                         <% if quarter_main_mark >= 80 %>
                          Excellent
                          <% elsif quarter_main_mark >= 60 %>
                          Very Good
                          <% elsif quarter_main_mark >= 50 %>
                          Good
                          <% else %>
                          Need Improvement
                          <% end %>
                         
                         <% end %>
                         </td>
                         <td><% if has_final_term %>
                         
                          <% if term_mark_main >= 80 %>
                          Excellent
                          <% elsif term_mark_main >= 60 %>
                          Very Good
                          <% elsif term_mark_main >= 50 %>
                          Good
                          <% else %>
                          Need Improvement
                          <% end %>
                         
                         <% end %>
                         </td>
                         

           
                          
                      </tr>
                      
                    <% end %>
                  <% end %>

              </table>

              
              
