
<%if params[:course_name] or params[:guardian_name]%>
<%string=[]%>
<%@students.each do |e| string<<e.user_id;end%>
<% string = string.inject('') { |arr, u| arr + u.to_s + ',' }.chomp(',') %>
<% add = "<span>#{t('add')}</span>" %>
  <div class="label-field-pair">
    <label for="student_grade"><%= t('select_recipient') %><span class="necessary-field">*</span></label>
    <div class ="scrolable" >
      <div class="scroll-inside">
        <div class="hover"><%= link_to "#{t('select_all')}  <span>#{t('add')}</span>", '#', :onClick => "add_all_recipient('#{string}')", :class=> 'all' %>

        </div>
        <% @students.each do |t| %>
          <div class="hover"><%= link_to shorten_string(t.full_name,15)+add  , '#', :onClick => "add_recipient(#{t.user.id})", :class=>'individual',
              :before => "Element.show('loader')",
              :success => "Element.hide('loader')" %>

          </div>
        <% end %>
      </div>
    </div>
  </div>



<%else%>
<%string=[]%>
<%@employees.each do |e| string<<e.user_id;end%>
