<div class="box_noc">
  <form name="employee" action="" style="display:inline;">
    <div id="flash-box-popup">
      <% unless flash[:notice].nil? %>
        <p class="flash-msg"> <%= flash[:notice] %> </p>
      <% end %>
    </div>  
    <div id="form-errors"></div>

    <div class="row">
      <div class="row_label">Student Name</div>
      <div class="row_data"><%= @student.full_name %><input type="hidden" id="student_name" value="<%= @student.full_name %>"></div>
    </div>
    
    <div class="row">
      <div class="row_label">Class</div>
      <div class="row_data"><%= @student.batch.full_name %>          
         <% unless @student.batch.course.section_name.blank?   %>
              <input type="hidden" id="student_class" value="Class : <%= @student.batch.course.course_name %>, Section : <%= @student.batch.course.section_name %>">
          <% else %>
              <input type="hidden" id="student_class" value="Class : <%= @student.batch.course.course_name %>">
          <% end %>
      </div>
    </div> 
    
    <%  if @student.gender == 'f' %>
         <input type="hidden" id="student_gender1" value="she">
         <input type="hidden" id="student_gender2" value="her">
         <input type="hidden" id="student_gender3" value="girl">
      <%  elsif @student.gender == 'm' %>
          <input type="hidden" id="student_gender1" value="he">
         <input type="hidden" id="student_gender2" value="his">
         <input type="hidden" id="student_gender3" value="boy">
      <% end %>
    <div class="row">
      <div class="row_label"><%= t('admission_date') %></div>
      <div class="row_data">
          <% unless @student.admission_date.nil? %>
            <%= I18n.l(@student.admission_date,:format=>:normal) %>
            <input type="hidden" id="admission_date" value="<%= I18n.l(@student.admission_date,:format=>:normal) %>">
          <% else %>
            <%= calendar_date_select_tag 'admission_date', I18n.l(Date.today,:format=>:default),  :popup=>"force" %>
          <% end %>
      </div>
    </div>
      
    <div class="row" id="start_date_1">
      <div class="row_label">Reason & Information<p style="font-size: 10px; font-style: 100;">Write about Academic Result, Attendance also Extra Activities to help Admin to write a good letter.</p> </div>
      <div class="row_data">
        <textarea name="st_achivement" class="st_achivement" id="st_achivement" rows="100" cols="10"></textarea>       
      </div>
    </div>
    <div class="row" id="request_date_1">
      <div class="row_label">Request Date of Collection</div>
      <div class="row_data"><%= calendar_date_select_tag 'request_date', I18n.l(Date.today,:format=>:default), :popup=>"force" %></div>
    </div> 
    <div class="row" style="border: 0px;">      
      <div class="row_button">
        <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader2", :style =>"display: none;" ) %>
        <input type="button" value="Apply" name="submit_recommendation" class="apply_button" id="submit_recommendation" />
      </div>
    </div>
   

  </form>
  <div class="extender"></div>
</div>
<script>
    var jj = jQuery.noConflict();
    jj(document).on("click", '#submit_recommendation', function(e){
      
      Element.show('loader2')
      new Ajax.Request('/student/recommendation_letter_update',
      {asynchronous:true, evalScripts:true,
        parameters:'letter_data='+jj('#student_name').val()+"|"+jj('#student_class').val()+"|"+jj('#request_date').val()+"|"+jj('#admission_date').val()+"|"+jj('#st_achivement').val()+"|"+jj('#student_gender1').val()+"|"+jj('#student_gender2').val()+"|"+jj('#student_gender3').val()+'&id=<%= @student.id %>',onSuccess:function(request){Element.hide('loader2'); location.reload();}
      }); 
    }); 
</script>

<style>
.box_noc{
    width:450px;
    margin:0px auto;
}
.row_label
{
    color: #444444;
    display: block;
    float: left;
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 10px;
    padding-top: 10px;
    width: 200px;
}
.row_data {
    width:217px;
    float: left;
}
.st_achivement
{
    width: 100%;
    height: 150px;
}

.row_button
{
    width:100%;
    text-align: center;
}
.apply_button {
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    background: #49BB4B none repeat scroll 0 0 !important;
    color: #FFFFFF;
    font-size: 14px;
    font-weight: bold;
    margin-left: 0px;
    margin-top: 30px;
    padding: 7px 10px;
    border: none;
    cursor: pointer;
}
</style>