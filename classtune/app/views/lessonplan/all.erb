<div id="content-header">
<%= show_header_icon %>

  <h1><%= t('school_syllabus') %></h1>
<div id="inner-tab-menu">
  <ul>
    <% if permitted_to? :add,:news %>
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('add')}", :controller => 'syllabus', :action => 'add' %></li>
    <% end %>
  </ul>
</div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="all_news">
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td>
          <%= t('sl_no') %>
        </td>
        <td>
         <%= t('title') %>
        </td>
		<td>
         <%= t('type') %>
        </td>
        <td>
          <%= t('author') %>
        </td>
        <td>
          <%= t('comments') %>
        </td>
        <td>
         <%= t('posted') %>
        </td>
      </tr>
      <tr class="tr-blank"></tr>
      <% @syllabus.each_with_index do |r,i| %>
        <% @comments = NewsComment.find_all_by_news_id(r.id) %>
        <% link_value = r.title %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-1">
            <%= i+1 %>
          </td>
          <td class="col-3">
            <%=  link_to link_value, :controller => 'syllabus', :action => 'view', :id => r.id%>
          </td>
          <td class="col-3">           
            <% if r.is_yearly == 1
              @is_yearly = "Yearly"
            else
              @is_yearly = "Not Yearly"
            end %>
            <%= @is_yearly %>
          </td>
          <td class="col-3">
            <% unless r.author.blank?  %>
              <%= r.author.first_name %> <%= '- admin' if r.author.admin==true%>
            <% else %>
             <%= t('user_deleted') %>
            <% end %>
          </td>
          <td class="col-1">
            
          </td>
          <td class="col-3">
            <%= time_ago_in_words(r.created_at) %> <%= t('ago') %>
          </td>
        </tr>
      <% end %>

    </table>
    <%= will_paginate @news %>
  </div>

</div>
