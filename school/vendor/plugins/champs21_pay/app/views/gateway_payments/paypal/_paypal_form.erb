<% form_for :paypal_online_pay ,:url => get_payment_url,:method => :post do |f| %>
  <%= hidden_field_tag :cmd,"_xclick" %>
  <%= hidden_field_tag :cert_id,@certificate %>
  <%= hidden_field_tag :business,@merchant_id,:readonly => true %>
  <%= hidden_field_tag :item_name,@item_name,:readonly => true %>
  <%= hidden_field_tag :amount,sprintf("%0.2f",@amount).to_f,:readonly => true %>
  <%= hidden_field_tag :return,@return_url %>
  <%= hidden_field_tag :cbt, "#{}"%>
  <% if @paid_fees.blank? %>
    <%= f.submit 'Pay Fee',:class => "submit_button",:style => @button_style %>
  <% end %>
<% end %>

