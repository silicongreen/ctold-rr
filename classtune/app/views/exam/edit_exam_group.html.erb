<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Edit</div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to "#{t('exam_groups_text')}", batch_exam_groups_path(@batch) %> <div class = "bread-crumb-separator"> > </div> <%= @examgroup.name %>
  </div>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="application-list"> 

  
      <h4><%= @examgroup.name %></h4>
      
      <% form_for :exam_group do |form| %>
         
        <div class="label-field-pair">
        <label for="exam_name"><%= t('exam_name') %></label>
        <% if params[:ename].nil?  %>
          <% @ename = "" %>
        <% else %>
          <% @ename = params[:ename] %>
        <% end  %>
        <div class="text-input-bg"><%= form.text_field :name, :value=>@examgroup.name%></div>
      </div>
      <div class="label-field-pair">
          <% exam_type = get_exam_result_type2() %>              
        <label >Exam Category</label>
        <div  class="text-input-bg" id="exam-category-select">
          <%= select :exam_group,:exam_category,options_from_collection_for_select(exam_type, :first, :last,@examgroup.exam_category.to_s) %>
        </div>
      </div>
      <div class="label-field-pair">
          <% exam_quarter = get_exam_result_quarter() %>
       <label >Quarter</label>
        <div  class="text-input-bg">
          <%= select :exam_group,:quarter,options_from_collection_for_select(exam_quarter, :first, :last,@examgroup.quarter.to_s) %>
        </div>
      </div>
      <div class="label-field-pair">
                      
        <label >Marks Entry Enable?</label>
        <div  class="text-input-bg" id="exam-category-select">
          <select name="exam_group[marks_entry]">
              <option <% if @examgroup.marks_entry.to_i == 1  %> selected='selected' <% end %> value="1">Yes</option>
              <option <% if @examgroup.marks_entry.to_i == 0  %> selected='selected' <% end %> value="0">No</option>
           </select>
        </div>
      </div>
      <div class="label-field-pair">
                      
        <label >Show In Connect?</label>
        <div  class="text-input-bg" id="exam-category-select">
          <select name="exam_group[show_in_connect]">
              <option <% if @examgroup.show_in_connect.to_i == 1  %> selected='selected' <% end %> value="1">Yes</option>
              <option <% if @examgroup.show_in_connect.to_i == 0  %> selected='selected' <% end %> value="0">No</option>
           </select>
        </div>
      </div>
      <div class="label-field-pair"  style="float:left; clear:both;">
        <label for="duedate"><%= "#{t('attandence_start_date')}"%></label>
        <div  class="text-input-bg">
            <% unless @examgroup.attandence_start_date.blank? %>
                <%= calendar_date_select_tag "exam_group[attandence_start_date]",
                I18n.l(@examgroup.attandence_start_date,:format=>"%d %b %Y") ,:class=>"text-input-bg",:readonly=>true,:popup=>:force%>
            <% else %>
                <%= calendar_date_select_tag "exam_group[attandence_start_date]",
                I18n.l(1.week.since,:format=>"%d %b %Y") ,:class=>"text-input-bg",:readonly=>true,:popup=>:force%>
            <% end %>
        </div>
      </div>
      
      
      
      <div class="label-field-pair"  style="float:left; clear:both;">
        <label for="duedate"><%= "#{t('attandence_end_date')}"%></label>
        <div  class="text-input-bg">
         <% unless @examgroup.attandence_end_date.blank? %>
                <%= calendar_date_select_tag "exam_group[attandence_end_date]",
            I18n.l(@examgroup.attandence_end_date,:format=>"%d %b %Y") ,:class=>"text-input-bg",:readonly=>true,:popup=>:force%>
         <% else %> 
                <%= calendar_date_select_tag "exam_group[attandence_end_date]",
                I18n.l(1.week.since,:format=>"%d %b %Y") ,:class=>"text-input-bg",:readonly=>true,:popup=>:force%>
         <% end %>   
        </div>
      </div>

        <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button", :id => 'submit_button' %>
      <% end %>
   


    <div class="extender"></div>
  </div>
</div>
<style>
  .submit_button
  {
     float:left;
     clear:both;
     
  }
</style>

