  .label-field-pair .label-container {
    width: 37%;
    padding-top: 4px;
    float: left;
  }
  .select2-container {
    width: 89% !important;
  }
</style>
<script>
    j(document).ready(function(){
        j(document).off('click', '.filter-single-payment').on('click', '.filter-single-payment', function(e){
            e.preventDefault();
            var opt = parseInt(j('#option_filter').val());
            var params = ""
            
            var student_id = j("#student_admission_no_permission").val();
            
            if (j.trim(student_id).length > 0)
            {
                params = 'student_admission_no='+ student_id
            }
            if ( opt == 1 )
            {
                var filter_by_course = j("#student_admission_no_permission").data('filter_by_course');
                var date_id = j("#student_admission_no_permission").data('date');
                params += "&opt=1&filter_by_course=" + filter_by_course + "&date=" + date_id
            }
            else if (opt == 2)
            {
                var section_id = j("#student_admission_no_permission").data('section_id');
                var course_name = j("#student_admission_no_permission").data('course_name');
                var batch_id = j("#student_admission_no_permission").data('batch_id');
                var date_id = j("#student_admission_no_permission").data('date');
                params += "&opt=2&section_id=" + section_id + "&course_name=" + course_name + "&batch_id=" + batch_id + "&date=" + date_id
            }
            else
            {
                var batch_id = j("#student_admission_no_permission").data('batch_id');
                var date_id = j("#student_admission_no_permission").data('date');
                params += "&batch_id=" + batch_id + "&date=" + date_id
            }
            new Ajax.Request('/finance/fine_configuration_students', 
                  {
                    asynchronous:true, 
                    evalScripts:true, 
                    parameters: params
                  }
            )
            e.stopPropagation();
        });
        
        j(document).off('keydown', '#student_admission_no_permission').on('keydown', '#student_admission_no_permission', function(e){
            if ( e.keyCode == 13 )
            {
              var opt = parseInt(j('#option_filter').val());
              var params = ""
              e.preventDefault();
              var student_id = j(this).val();

              if (j.trim(student_id).length > 0)
              {
                params = 'student_admission_no='+ student_id
              }
              if ( opt == 1 )
              {
                  var filter_by_course = j(this).data('filter_by_course');
                  var date_id = j(this).data('date');
                  params += "&opt=1&filter_by_course=" + filter_by_course + "&date=" + date_id
              }
              else if (opt == 2)
              {
                  var section_id = j(this).data('section_id');
                  var course_name = j(this).data('course_name');
                  var batch_id = j(this).data('batch_id');
                  var date_id = j(this).data('date');
                  params += "&opt=2&section_id=" + section_id + "&course_name=" + course_name + "&batch_id=" + batch_id + "&date=" + date_id
              }
              else
              {
                  var batch_id = j(this).data('batch_id');
                  var date_id = j(this).data('date');
                  params += "&batch_id=" + batch_id + "&date=" + date_id
              }
              new Ajax.Request('/finance/fine_configuration_students', 
                    {
                      asynchronous:true, 
                      evalScripts:true, 
                      parameters: params
                    }
              )
            }
        });
        
        j(document).off('click', '.fine_payment_student').on('click', '.fine_payment_student', function(){
            var count_fees = 0;
            var fees = "";
            var student_id = j(this).data('student-id');
            var date_id = j(this).data('date_id');
            if ( j(this).hasClass('fa-check-square-o') )
            {
                if ( confirm('Do you want to disable fine for this student?') )
                {
                  j(this).addClass('fa-square-o');
                  j(this).removeClass('fa-check-square-o');
                   new Ajax.Request('/finance/set_fine_payment_configuration', 
                        {
                          asynchronous:true, 
                          evalScripts:true, 
                          parameters:'student='+student_id+'&date_id='+date_id+'&value=0'+'&key='+j(this).attr('id')
                        }
                  )
                }
            }
            else
            {
                if ( confirm('Do you want to enable fine for this student?') )
                {
                  j(this).removeClass('fa-square-o');
                  j(this).addClass('fa-check-square-o');
                  new Ajax.Request('/finance/set_fine_payment_configuration', 
                        {
                          asynchronous:true, 
                          evalScripts:true, 
                          parameters:'student='+student_id+'&date_id='+date_id+'&value=1'+'&key='+j(this).attr('id')
                        }
                  )
                }
            }
        });
    
        function update_user_amount_with_fine(date_id)
        {
        }

        function update_user_amount_without_fine(date_id)
        {
        }
    });
</script>