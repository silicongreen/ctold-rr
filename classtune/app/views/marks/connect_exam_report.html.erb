<div id="content-header">
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "Report card" %></div>
<div class='sub-header2' style=""><%= link_to "Combained Exam Marks", :action=>'connect_exam' %></div>
<div class='sub-header3' style=""><%= link_to "Exam Marks", :action=>'index' %></div>
<div id="inner-tab-menu">
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    
    <% unless @batches.blank? %>
        <div class="box">
            <%= select :batch, :batch_id,@batches.map {|b| [b.full_name, b.full_name] },{:prompt => "Select a Class"} %>
        </div>
    <% end %>
    <% unless @exams_data.blank? %>
        <div class="box" style="margin-top:10px;">
            <%= select :exam, :exam_id,@exams_data.map {|b| [b.name, b.name] },{:prompt => "Select a Exam"} %>
        </div>
    <% end %>
    <div id="exams-list" class="box">
      
    </div>
  <div class="box">
    <table id="exam_data"  class="mdl-data-table" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Class</th>
                <th>Exam Name</th>
                <th>Subject</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        
        
    </table>   
    <div class="extender"></div>
  </div>
    
</div>
<script>
  var jj = jQuery.noConflict();
  jj(document).ready(function () {
      var oDataTable = jj('#exam_data').DataTable( {
        "ajax": "/marks/data_connect_exam_report",
        "deferRender": true,
        "order": [],
        "oSearch": { "bSmart": false },
        columnDefs: [
            {
                targets: [ 0, 1, 2 ],
                className: 'mdl-data-table__cell--non-numeric'
            }
        ]
    } );
    
    jj("#exam_exam_id").change(function(){
      if(jj("#exam_exam_id").val())
      {
        oDataTable.column( 1 ).search( jj("#exam_exam_id").val(),false,false).draw();
      }
      else
      {
        oDataTable.column( 1 ).search("").draw();
      } 
    });
    
    jj("#batch_batch_id").change(function(){
      if(jj("#batch_batch_id").val())
      {
        oDataTable.column( 0 ).search( jj("#batch_batch_id").val(),false,false).draw();
      }
      else
      {
        oDataTable.column( 0 ).search("").draw();
      } 
    });
  });
</script>
