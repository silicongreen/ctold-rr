<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
     <%= image_tag '/images/icons/syllabus/syllabus.png', :html => {:alt => 'Syllabus'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">      
       <%= link_to "Syllabus", :controller => "syllabus", :action => "classes_view" %>  |    <%= "Update"%>
       <span style="float: left;clear:both;font-size: 15px;"><%= @local_tzone_time.to_date %></span>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
  </div> 
  <div class="clearfix"></div>
</div>

<div id="page-yield" style="margin-top: 0px;">

  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>

  <% form_for :syllabus do |f| %>

    <%= error_messages_for :syllabus %>
   
    <div id="add_news_form">
      <div class="f2" style="float: left;margin-bottom: 30px;">        
        <% if @batch.name != "General" %>      
          <%="Shift" %> : <%= @batch.name  %><br />
        <% end  %>
        <%="Class" %> : <%=@course.course_name %><br />
        <% unless @related_syllabuses.nil? or @related_syllabuses.empty? %>
        
        <% else %>
          <%="Section" %> : <%=@course.section_name %><br />
        <% end %>
        <% if @syllabus.exam_group_id > 0 %>
          <% @examgroup = ExamGroup.find_by_id(@syllabus.exam_group_id) %>
          <% unless @examgroup.nil? %>
            <%="Exam" %> : <%= @examgroup.name %><br />
          <% end %>
        <% end %>
        <% if @syllabus.subject_id > 0%>
          <% @subject = Subject.find(@syllabus.subject_id) %>
          <% unless @subject.nil? %>
            <%="Subject" %> : <%= @subject.name %><br />
          <% end %>
        <% end %>
        <% if @syllabus.is_yearly > 0 %>
          <%= "Yearly" %>        
        <% end %>
      </div>
      
      <div class="news_label_field" style="clear:both;">
        <label for="news_title"><%= t('title') %><span class="necessary-field">*</span></label>
        <div id="news_title_text_field_bg"><%= f.text_field :title, :value => @syllabus.title %></div>
      </div>  
      <%= hidden_field :syllabus,"is_yearly", :value => @syllabus.is_yearly %>
      <%= hidden_field :syllabus,"exam_group_id", :value => @syllabus.exam_group_id %>
      <%= hidden_field :syllabus,"subject_id", :value => @syllabus.subject_id %>
      
      <div class="news_label_field">
        <label for="news_content"><%= t('content') %><span class="necessary-field">*</span></label>
        <div id="news_content_text_field_bg">
          <%= fckeditor_textarea :syllabus, :content, :value => @syllabus.content %>
        </div>
      </div>
    </div>

    <%= submit_tag "", :value => "â–º #{t('update')}", :class => "news_publish_button" %>
  <% end %>
  <%= load_redactor_script %>
</div>
<%= stylesheet_link_tag 'tadded-header' %>