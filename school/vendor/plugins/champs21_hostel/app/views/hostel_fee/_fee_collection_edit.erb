<% if !@hostel_fee_collection.empty? %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= "#{t('name')}"%></td>
      <td><%= "#{t('batch')}"%></td>
      <td><%= "#{t('start_date')}"%></td>
      <td><%= "#{t('end_date')}"%></td>
      <td><%= "#{t('due_date')}"%></td>
      <td></td>
    </tr>
    <% @hostel_fee_collection.each do |h| %>
      <tr  class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-4"><%= h.name %></td>
        <td class="col-4">
          <% unless h.batch.blank? %>
            <%= h.batch.full_name %>
          <% end %>
        </td>
        <td class="col-1"><%= h.start_date %></td>
        <td class="col-1"><%= h.end_date %></td>
        <td class="col-1"><%= h.due_date %></td>
        <td class="col-3">
          <div class="edit"><%= link_to_remote "#{t('edit_text')}", :url => {:action => 'hostel_fee_collection_edit', :id => h} %></div>
           <% unless h.check_fee_category == false %>
          <div class="edit"><%= link_to_remote "#{t('delete_text')}",:url=>{:action=>'delete_fee_collection_date',:id=>h}, :confirm=>"#{t('delete_confirm_msg')}"%></div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class= "msg"><p class= "flash-msg"><%= t('no_students_found') %></p></div>
<% end %>
