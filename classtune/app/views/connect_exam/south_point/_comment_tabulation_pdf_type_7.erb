              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break1">
                  <td colspan="100">&nbsp;</td>
              </tr> 
              
          <% elsif std_count>3 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break1">
                  <td colspan="100">&nbsp;</td>
              </tr> 
              
          <% end %>    
        
          
          
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"><%= j %></td>
            <td class="name"><%= std['class_roll_no'] %></td>
            <td class="name-std"><%= std['first_name'].to_s+" "+std['last_name'].to_s %></td>
            <td class="name-std">M1<hr/>M2<hr/>AVG<hr/>TTL<hr/>CMB</td>
