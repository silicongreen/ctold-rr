<html>
    <head>
        <title>Transfer Certificate</title>
    </head>
    <body>
        
        <p class="left-font" id="left-position-0"><%= @student.admission_no %></p>
        <p class="left-font" id="left-position-1"><%= @student.full_name %></p>
        <p class="left-font" id="left-position-2"><%= @std_guardians[0].full_name unless @std_guardians.blank? or @std_guardians[0].blank? %></p>
        <p class="left-font" id="left-position-3"><%= @std_guardians[1].full_name unless @std_guardians.blank? or @std_guardians[1].blank? %></p>
        <p class="left-font address" id="left-position-4"><%= @student.address_line1 %>&nbsp;<%= @student.address_line2 %></p>
        <p class="left-font" id="left-position-5"><%= I18n.l(@student.admission_date,:format=>"%Y") unless @student.admission_date.nil? %></p>
        <p class="left-font" id="left-position-6"><%= @student.admission_class %></p>
        <p class="left-font" id="left-position-7"><%= @student.batch.course.course_name %></p>
        <p class="left-font" id="left-position-8"><%= I18n.l(@student.date_of_birth,:format=>"%d %b %Y") unless @student.date_of_birth.nil? %></p>
        <p class="left-font" id="left-position-9">Date....</p>
        <p class="left-font" id="left-position-10"><%= @student.batch.course.course_name %></p>
        <p class="left-font" id="left-position-11"><%= @student.batch.course.section_name %></p>
        <p class="left-font" id="left-position-12">Group...</p>
        <p class="left-font" id="left-position-13">Paid..</p>
        <% unless params[:sign].blank? %>
        <p class="left-font" id="left-position-14"><img src="/images/school_logo/352/principal.png" width="70"></p>
        <% end %>
        
        <p id="position-0"><%= @student.admission_no %></p>
        <p id="position-1"><%= @student.full_name %></p>
        <p id="position-2"><%= @std_guardians[0].full_name unless @std_guardians.blank? or @std_guardians[0].blank? %></p>
        <p id="position-3"><%= @std_guardians[1].full_name unless @std_guardians.blank? or @std_guardians[1].blank? %></p>
        <p id="position-4"><%= @student.address_line1 %>&nbsp;<%= @student.address_line2 %></p>
        <p id="position-5"><%= I18n.l(@student.admission_date,:format=>"%Y") unless @student.admission_date.nil? %></p>
        <p id="position-6"><%= @student.admission_class %></p>
        <p id="position-7"><%= @student.batch.course.course_name %></p>
        <p id="position-8"><%= I18n.l(@student.date_of_birth,:format=>"%d %b %Y") unless @student.date_of_birth.nil? %></p>
        <p id="position-9">Date....</p>
        <p id="position-10"><%= @student.batch.course.course_name %></p>
        <p id="position-11"><%= @student.batch.course.section_name %></p>
        <p id="position-12">Group...</p>
        <p id="position-13">Paid..</p>
        <% unless params[:sign].blank? %>
        <p id="position-14"><img src="/images/school_logo/352/principal.png" width="100"></p>
        <% end %>
        
