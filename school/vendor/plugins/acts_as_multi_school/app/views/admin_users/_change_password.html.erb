<% form_remote_for @admin_user,:url=>change_password_admin_user_path(@admin_user), :html => {:class => 'form change_password_from'} do |f| %>
  <fieldset>
    <%= error_string_for(f) %>
    <%= f.error_message_on :base %>
  </fieldset>
  <fieldset>
    <%= f.label :password,'Current Password' %>
    <%= f.password_field :password %>
  </fieldset>
  <fieldset>
    <%= f.label :new_password,'New Password' %>
    <%= f.password_field :new_password %>
  </fieldset>
  <fieldset>
  <%#= f.label :password,'Retype Password' %>
  <%#= text_field_tag "re_password" %>

    <%= f.submit "Change", :class=>"button-grey-small float-right-with-margin" %>
  </fieldset>
<% end %>

