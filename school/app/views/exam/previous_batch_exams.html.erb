<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('previous_batch_exam') %></div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('exams_text'), :controller => "exam", :action=>"index" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('exam_management')}", :controller => "exam", :action => "create_exam" %> <div class = "bread-crumb-separator"> > </div>
    <%= t('previous_batch_exam') %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">
    <div class="label-field-pair">
      <label for="student_course"><%= t('select_a_course') %>:
        <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
      </label>
      <div class="text-input-bg">
        <%= select :course, :course_id,
          Course.active.map {|b| [b.full_name, b.id]},
          {:prompt => "#{t('select_a_course')}"},
          {:onChange => "#{remote_function(:url => {:action => "list_inactive_batches"},
          :with => "'course_id='+ value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"
          )}"} %>
      </div></div>

    <div id="inactive_batches"></div>
    <div class="extender"></div>
  </div></div>
