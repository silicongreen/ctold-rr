<div class="wrapper">

  <% remote_form_for :period ,:url=>{:action=>'update_leave_history', :id=>@employee.id}do |f| %>

    <div class="row">
      <div class="row_label">
        <div>
          <%= t('start_date') %>
        </div>
      </div>
      <div class="row_data">
        <div>
          <%= calendar_date_select_tag 'period[start_date]', I18n.l(1.month.ago.to_date,:format=>"%d %b %Y") ,:popup=>:force, :placeholder => 'Start Date', :image => '/images/icons/calendar/calendar-icon.png'%>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="row_label">
        <div>
          <%= t('end_date') %>
        </div>
      </div>
      <div class="row_data">
        <div>
          <%= calendar_date_select_tag 'period[end_date]', I18n.l(Date.today,:format=>"%d %b %Y") ,:popup=>:force, :placeholder => 'Start Date', :image => '/images/icons/calendar/calendar-icon.png'%>
        </div>
      </div>
    </div>

    <div id="submit-button">
      <%=  submit_tag "â–º#{t('go')}",:class=>'submit_button' %>
    </div>
  <% end %>

  <div id="attendance-report"></div>
</div>

