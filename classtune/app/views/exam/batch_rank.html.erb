<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('student_ranking_per_batch') %></div>
</div>
<% 
  if @current_user.admin? 
    batches = Batch.active.find(:all, :group => "name")
  else 
    batches = @current_user.employee_record.batches.find(:all,:select=>"batches.id as batch_id, batches.name as name", :group => "name")
  end 
%>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('exam_text'), :controller => "exam", :action=>"index" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to t('report_center'), :controller => "exam", :action => "report_center" %> <div class = "bread-crumb-separator"> > </div>
    <%= t('student_ranking_per_batch') %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">

    <% form_for :batch_rank, :url=>{:action=>'student_batch_rank'}, :html=> {:id=>'new_student'} do |x| %>

        <div class="label-field-pair">
          <label for="student_grade"><%= t('shift_label') %></label>
          <div class="text-input-bg">
            <%= select :student, :batch_name, options_for_select(batches.map {|b| [b.name, b.id]}, @batch_no.to_i), 
              {:prompt => "#{t('select')}"},
              {:onChange => "#{remote_function(:url => {:controller => "student", :action => "get_classes"}, :with => "'batch_id='+value+'&'+$('new_student').serialize()+'&section_page=section_view&section_partial=exam/batch_rank_sections_view&page=course_new&partial_view=exam/batch_rank_courses_new'" ,:before => "$('loading_2').show();",
              :success => "$('loading_2').hide();")}"} %>
              <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2", :style =>"display: none;" ) %></div>
        </div>
        <div class="label-field-pair">
          <label for="student_grade"><%= t('class_label') %></label>
          <div class="text-input-bg"><div id="course_new"> <%= render :partial => 'batch_rank_courses_new', :object => @courses %></div></div>
        </div>
        <div class="label-field-pair">
          <label for="student_grade"><%= t('section_label') %></label>
          <div class="text-input-bg"><div id="section_view"> <%= render :partial => 'batch_rank_sections_view', :object => @classes %></div></div>
        </div>  
        
      <div id="report_type"></div>
      <%= submit_tag "", :value => "â–º #{t('view')}", :class => "submit_button" %>
    <% end %>
    <div class="extender"></div>
  </div></div>
