<div id="page-yield" class="available_sections1">
    <div class="page1"> </div>
    <div class="section1 row" >
        <center>
            <h3 align="center">Mark Sheet</h3>
            <div class="hor_line"></div>
            <h4 align="center">For Subject Teacher</h4>

            <div id ="main_info">
                <table>
                    <tr>
                        <% if !@employee.nil? %> 
                          <td align='left'><h4>Teacher's Name : <%=  @employee.full_name %></h4></td>
                          <td align='center'><h4>Subject : <%= @subject.name %></h4></td>
                        <% else %>
                          <td align='left'><h4>Subject : <%= @subject.name %></h4></td>
                        <% end %> 

                        <td align='center'><h4>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %></h4></td>
                        <td align='right'><h4>Section : <%= @batch.course.section_name %></h4></td>
                    </tr>    
                </table>    

            </div>
            <% unless @report_data.blank?  or  @report_data['result'].blank? %>
              <% c = 'even' %>
              <% full_mark = 0 %>
              <% colspan = 0 %>
              <table id="pdf-table" width="98%" cellspacing="0">
                  <tr class="table-header">
                      <td>Roll NO.</td>
                      <td>Name</td>
                      <% quarter = false %>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <%  if rs['quarter'] == '1' or rs['quarter'] == '2' or rs['quarter'] == '3' or rs['quarter'] == '4' %>
                          <% quarter = true %>
                          <td>Quarter (40)</td>
                          <% break %>
                        <% end %>
                      <% end %>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <%  if rs['quarter'] == '5' or rs['quarter'] == '6' %>  
                          <td><%=  rs['name'] %> (<%=  rs['maximum_marks'] %>)</td>
                        <% end %>
                      <% end %> 
                      <% total_full_mark = 0 %>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <% if quarter %>
                          <%  if rs['quarter'] == '5' %>  
                            <td><%=  "Avg (60)" %></td>
                            <% break %>
                          <% end %>
                          <% if rs['quarter'] == '6' %> 
                            <td><%=  "Avg (60)" %></td>
                            <% break %>
                          <% end %>
                        <% end %>  
                      <% end %> 
                      <td>Total (100)</td>
                      <td>Grade</td>

                  </tr>

                  <% extender = 0 %>
                  <% std_count = 0 %>
                  <% unless @report_data['result']['al_students'].blank? %>
                    <% @report_data['result']['al_students'].each do |std| %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>std['id'].to_s,:subject_id=>@subject.id.to_s,:elective_group_id=>@subject.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                        <% next %>
                      <% end %>          


                      <%  std_count = std_count+1; %>
                      <% colspan = colspan+4 %>
                      <% if std_count>18 && extender ==0 %>
                        <% std_count = 0 %>
                        <% extender = 1 %>
                        <tr class="page-break">
                            <td colspan="<%= colspan %>">&nbsp;</td>
                        </tr>    
                      <% elsif std_count>22 && extender ==1 %>
                        <% std_count = 0 %>
                        <% extender = 1 %>
                        <tr class="page-break">
                            <td colspan="<%= colspan %>">&nbsp;</td>
                        </tr> 
                      <% end %>     


                      <% q1_mark = 0 %>
                      <% q2_mark = 0 %>
                      <% q3_mark = 0 %>
                      <% q4_mark = 0 %>
                      <% first_term_mark = 0 %>
                      <% final_term_mark = 0 %>
                      <% q1_fullmark = 0 %>
                      <% q2_fullmark = 0 %>
                      <% q3_fullmark = 0 %>
                      <% q4_fullmark = 0 %>
                      <% first_term_fullmark = 0 %>
                      <% final_term_fullmark = 0 %>

                      <% subject_full_mark = 0 %>
                      <% subject_obtain_mark = 0 %>
                      <% total_mark = 0 %>
                      <% full_mark = 0 %>

                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <td><%= std['class_roll_no'] %></td>
                          <td><%= std['name'] %></td>
                          <% @report_data['result']['ALL'].each do |rs| %>
                            <% 
                            if rs['quarter'] == '1'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q1_mark = q1_mark.to_f+rs['students'][std['id']]['score'].to_f
                                end
                              if !rs['maximum_marks'].blank?
                                q1_fullmark = q1_fullmark+rs['maximum_marks'].to_i
                              end
                              end

                            if rs['quarter'] == '2'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q2_mark = q2_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                q2_fullmark = q2_fullmark+rs['maximum_marks'].to_i
                              end
                              end
                            if rs['quarter'] == '3'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q3_mark = q3_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                q3_fullmark = q3_fullmark+rs['maximum_marks'].to_i
                              end
                              end
                            if rs['quarter'] == '4'
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank?
                                q4_mark = q4_mark.to_f+rs['students'][std['id']]['score'].to_f

                                end
                              if !rs['maximum_marks'].blank?
                                q4_fullmark = q4_fullmark+rs['maximum_marks'].to_i
                              end
                              end
                            if rs['quarter'] == '5'
                              exam_converted_mark = 0.0
                              term_mark = 0
                              if !rs['converted_marks'].blank?
                                exam_converted_mark = rs['converted_marks'].to_f
                                end
                              term_full_mark = 0
                              if !rs['maximum_marks'].blank?
                                term_full_mark = rs['maximum_marks'].to_f
                                if exam_converted_mark > 0
                                  first_term_fullmark = first_term_fullmark+exam_converted_mark
                                  else  
                                  first_term_fullmark = first_term_fullmark+rs['maximum_marks'].to_f
                                end
                                end
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? && term_full_mark > 0
                                
                                if exam_converted_mark > 0
                                  term_mark = ((rs['students'][std['id']]['score'].to_f/term_full_mark.to_f)*exam_converted_mark.to_f)
                                  first_term_mark = first_term_mark.to_f+((rs['students'][std['id']]['score'].to_f/term_full_mark.to_f)*exam_converted_mark.to_f)
                                else  
                                  term_mark = rs['students'][std['id']]['score'].to_f
                                  first_term_mark = first_term_mark.to_f+rs['students'][std['id']]['score'].to_f
                                end
                                
                                

                              end

                              end
                            if rs['quarter'] == '6'
                              exam_converted_mark = 0
                              term_mark = 0
                              if !rs['converted_marks'].blank?
                                exam_converted_mark = rs['converted_marks'].to_f
                                end
                              term_full_mark = 0
                              if !rs['maximum_marks'].blank?
                                term_full_mark = rs['maximum_marks'].to_i
                                if exam_converted_mark > 0
                                  final_term_fullmark = final_term_fullmark+exam_converted_mark
                                  else  
                                  final_term_fullmark = first_term_fullmark+rs['maximum_marks'].to_i
                                end
                                end
                              if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? && term_full_mark > 0
                                if exam_converted_mark > 0
                                  term_mark = ((rs['students'][std['id']]['score'].to_f/term_full_mark.to_f)*exam_converted_mark.to_f)
                                  final_term_mark = final_term_mark.to_f+((rs['students'][std['id']]['score'].to_f/term_full_mark.to_f)*exam_converted_mark.to_f)
                                  else  
                                  final_term_mark = final_term_mark.to_f+rs['students'][std['id']]['score'].to_f
                                  term_mark = rs['students'][std['id']]['score'].to_f
                                end

                              end
                              
                              end
                          %>



                          <% end %> 
                          <%
                          quarter_mark = 0
                          q1_mark_20 = 0
                          q2_mark_20 = 0
                          q3_mark_20 = 0
                          q4_mark_20 = 0
                          final_term_mark_60 = 0 
                          first_term_mark_60 = 0 
                          if first_term_fullmark > 0


                            if q1_fullmark > 0 && q1_mark > 0
                              q1_mark_20 = (q1_mark.to_f/q1_fullmark.to_f)*20
                              q1_mark_20 = q1_mark_20.round()
                            end 
                            if q2_fullmark > 0 && q2_mark > 0
                              q2_mark_20 = (q2_mark.to_f/q2_fullmark.to_f)*20
                              q2_mark_20 = q2_mark_20.round()
                            end 
                            if first_term_fullmark > 0 && first_term_mark > 0
                              if quarter
                                first_term_mark_60 = (first_term_mark.to_f/first_term_fullmark.to_f)*60
                                first_term_mark_60 = first_term_mark_60.round()
                              else
                                first_term_mark_60 = (first_term_mark.to_f/first_term_fullmark.to_f)*100
                              end  
                            end
                            total_mark = q1_mark_20+q2_mark_20+first_term_mark_60
                          end 
                          if final_term_fullmark > 0


                            if q3_fullmark > 0 && q3_mark > 0
                              q3_mark_20 = (q3_mark.to_f/q3_fullmark.to_f)*20
                              q3_mark_20 = q3_mark_20.round()
                            end 
                            if q4_fullmark > 0 && q4_mark > 0
                              q4_mark_20 = (q4_mark.to_f/q4_fullmark.to_f)*20
                              q4_mark_20 = q4_mark_20.round()
                            end 

                            if final_term_fullmark > 0 && final_term_mark > 0
                              if quarter
                                final_term_mark_60 = (final_term_mark.to_f/final_term_fullmark.to_f)*60
                                final_term_mark_60 = final_term_mark_60.round()
                              else
                                final_term_mark_60 = (final_term_mark.to_f/final_term_fullmark.to_f)*100
                              end  
                            end
                            total_mark = q3_mark_20+q4_mark_20+final_term_mark_60
                          end
                          quarter_mark = q1_mark_20+q2_mark_20+q3_mark_20+q4_mark_20
                          term_mark = final_term_mark_60+first_term_mark_60
                          total_mark = total_mark.round()
                          grade = GradingLevel.percentage_to_grade(total_mark, @batch.id)

                        %>
                          <% if quarter %>
                          <td><%= sprintf( "%0.02f", quarter_mark) %></td>
                          <% end %>
                          <% @report_data['result']['ALL'].each do |rs| %>
                            <% if rs['quarter'] == '6' or rs['quarter'] == '5' %>
                              <td>
                               <% if rs['exam_category'] == '7' %>
                                  <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['remarks'].blank? %>
                                    <%= rs['students'][std['id']]['remarks'] %>
                                  <% else %>
                                    -
                                  <% end %>
                              <% else %>
                              <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                                  <%= rs['students'][std['id']]['score'].to_f %>
                              <% end %>
                              <% end %>      
                              </td>    
                            <% end %>
                          <% end %>
                          <% if quarter %>
                            <td><%= sprintf( "%0.02f", term_mark) %></td>
                          <% end %>
                          <td><%= total_mark.round() %></td>

                          <% if !grade.blank? and !grade.name.blank? %>
                            <td class="col-2"><b><%= grade.name %></b></td>
                          <% else %>
                            <td class="col-2"><b>-</b></td>
                          <% end %>
                      </tr>
                    <% end %>
                  <% end %>
              </table>
            <% end %>
        </center>
    </div>


</div>
