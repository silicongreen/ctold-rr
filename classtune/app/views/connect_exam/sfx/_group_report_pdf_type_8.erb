                            <td class="col-pdf"><%= term2 %></td>
                            <td class="col-pdf"><%= total_mark2 %></td>
                            <td class="col-pdf">
                              <%  grade = GradingLevel.percentage_to_grade(total_mark2, @batch.id) %>
                              <% if !grade.blank? and !grade.name.blank? %>
                              <%= grade.name %>
                              <% else %>
                              -
                              <% end %>
                            </td> 
                            <td class="col-pdf">
                            <% unless @report_data['report']['comments'].blank? %>
                              <% unless @report_data['report']['comments'][subjects['id']].blank? %>
