<div class="heading themed_text"><%= t('new_applications_from_employee') %></div>
<table id="listing" width="100%">
  <tr class="tr-head">
    <td><%= t('name') %></td>
  <td><%= t('start_date') %></td>
  <td><%= t('end_date') %></td>
  </tr>

  <% @reporting_employees.each do |e| %>
  <% @applied_leaves = ApplyLeave.find_all_by_employee_id(e.id, :order=>"start_date DESC") %>
  <% unless @applied_leaves == [] %>
    <% @applied_leaves.each do |l| %>
      <% if l.viewed_by_manager == false %>
        <tr class="tr-<%=cycle('odd', 'even')%>">
          <td class="col-2"><%= link_to "#{Employee.find(l.employee_id).first_name}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "employee" %></td>
          <td class="col-2"><%= link_to "#{l.start_date.strftime("%d/%m/%Y")}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "employee" %></td>
          <td class="col-2"><%= link_to "#{l.end_date.strftime("%d/%m/%Y")}",  :controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "employee" %></td>
        </tr>
      <% end %><!-- if -->
    <% end %><!-- |l| -->
  <% else %>
  <% end %><!-- unless -->
<% end %>
</table>

<% @count_student = ApplyLeaveStudent.count(:all,:conditions=>{:approving_teacher=> @employee.id, :approved=> nil})  %>

<% if @count_student > 0 %>
  <% @applied_leaves_students = ApplyLeaveStudent.find_all_by_approving_teacher(@employee.id, :order=>"start_date DESC") %>
  <% unless @applied_leaves_students == [] %>

  <div class="heading themed_text" style="margin-top: 20px"><%= t('new_applications_from_student') %></div>
  <table id="listing" width="100%">
    <tr class="tr-head">
      <td><%= t('name') %></td>
      <td><%= t('start_date') %></td>
      <td><%= t('end_date') %></td>
    </tr>

  

      <% @applied_leaves_students.each do |l| %>
        <% if l.viewed_by_teacher == false %>
          <tr class="tr-<%=cycle('odd', 'even')%>">
            <td class="col-2"><%= link_to "#{Student.find(l.student_id).first_name}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "student" %></td>
            <td class="col-2"><%= link_to "#{l.start_date.strftime("%d/%m/%Y")}",:controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "student" %></td>
            <td class="col-2"><%= link_to "#{l.end_date.strftime("%d/%m/%Y")}",  :controller => "employee_attendance", :action=>"leave_application", :id=>l.id, :target => "student" %></td>
          </tr>
        <% end %><!-- if -->
       <% end %><!-- |l| -->
  </table>
  <% end %><!-- unless -->  
<% end %><!-- endif -->  



