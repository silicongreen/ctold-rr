<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/notice.png', :html => {:alt => 'Notice'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
       <a href="/assignment/assignment_result">Assignment Results</a>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
    </div>    

  <div class="header-form-wrapper">
      <div class='header-right-button'><%= link_to "#{t('view_all')}", :controller => 'assignment', :action => 'assignment_result' %></div>
        
  </div>
</div>

<div id="page-yield" class="ch_news_wrapper" style="margin-top: 0px;">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :assignment_result , :html => { :multipart => true } do |f| %>

    <%= error_messages_for :assignment_result %>

    <div id="add_news_form">
      <div class="label-field-pair">
          <div class="label-container"><label  for="assignment_subject"><%= "Subject Class"%></label></div>    
              <div class="input-container">  <%= select :assignment_result, :subject_id,
              @subjects.map {|s| ["#{s.name}  - #{s.batch.full_name}",s.id]},
              {:prompt=>"#{t('select_subject_and_class')}"} %></div>
      </div>
      <div class="news_label_field">
        <label for="title"><%= t('title') %></label>
        <div id="news_title_text_field_bg"><%= f.text_field :title %></div>
      </div>
    
    
      <div class="news_label_field" >
          <label >Attach a File</label>
          <div  class="text-input-bg" id="assignment-attachment"><%= f.file_field  :attachment %></div>
      </div>
      
      

    <%= submit_tag "", :value => "► Save", :class => "news_publish_button", :disable_with => "► #{t('please_wait')}" %>
  
    

  <% end %>
</div>
