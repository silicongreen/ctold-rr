<% form_remote_for @finance_fee_particular_category, :url=>{:action=>'particular_category_update', :id => @finance_fee_particular_category.id},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>
  <input type="hidden" name="opt" id="opt" value="1" />
  <div id="form-errors"></div>


  <div class="label-field-pair">
    <div class="label-container"><%= f.label "#{t('name')}" %></div>
    <div class="input-container"><%= f.text_field :name %></div>
  </div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label "#{t('description')}" %></div>
    <div class="input-container"><%= f.text_area :description,:cols => 27, :rows => 5 %></div>
  </div>

  <div style="clear: both; height: 10px;"></div>
  <div id ="sub-button">
    <%=  submit_tag "► #{t('update')}",{:class=>'submit_button', :id => 'submit_button', :onclick=> "j('#opt').val(1)"} %>
    <%=  submit_tag "► #{t('cancel')}",{:class=>'submit_button', :id => 'submit_button', :onclick=> "j('#opt').val(0)"} %>
  </div>

<% end %>