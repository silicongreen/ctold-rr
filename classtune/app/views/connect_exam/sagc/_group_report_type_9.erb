<%
  if @student_list_first_term.blank?
    @subject_highest_1st_term = @subject_highest_2nd_term
    @student_position_first_term = @student_position_second_term
    @student_position_first_term_batch = @student_position_second_term_batch
  end


%>
<% unless @report_data.blank?  or  @report_data['report'].blank? %>
            <%
              has_sb = false
              has_ob = false
              has_pr = false
              exam_connect_merit_lists = ExamConnectMeritList.new 
              exam_connect_merit_lists.student_id = @student.id
              exam_connect_merit_lists.student_admission_no = @student.admission_no
              exam_connect_merit_lists.student_roll_no = @student.class_roll_no
              exam_connect_merit_lists.student_name = @student.full_name
              exam_connect_merit_lists.batch_id = @student.batch_id
            %>
              <table id="pdf-table" class="top-left-center" width="80%" cellspacing="0">
                  <% c = 'even'  %>
                  <% total_mark_of_allexam = 0 %>
                  <% extra_subject = 0 %>

                  <tr class="even header-shade">
                      <td class="col-pdf" rowspan="2">
                          <b>Sl.</b>
                      </td>
                      <td class="col-pdf no-warp  align-left-baf" rowspan="2"><b><%= "Subjects" %></b></td>
                      <td class="col-pdf" rowspan="2">
                          <b>Full Marks</b>
                      </td>
                      <% colspan = 0 %>
                      <% @report_data['report']['exams'].each do |report| %>
                        <% if report['exam_category'] == '1' or report['exam_category'] == '2' %>
                          <td rowspan="2"><b><%= report['exam_name'] %></b></td>
                          <% extra_subject = extra_subject+1 %>
                        <% else %>
                          <% if report['exam_category'] == '3' %>
                            <% has_sb = true %>
                          <% end %>
                          <% if report['exam_category'] == '4' %>
                            <% has_ob = true %>
                          <% end %>
                          <% if report['exam_category'] == '5' %>
                            <% has_pr = true %>
                          <% end %>
                          <% colspan = colspan+1 %>
                        <% end %>  
                      <% end %>
                      <% colspan = colspan+2 %>
                      <td class="col-pdf" colspan="<%= colspan %>" rowspan="1"><b>Examination</b></td>
                      <td class="col-pdf" rowspan="2"><b>Total Marks</b></td>
                      <td class="col-pdf" rowspan="2"><b>Highest Marks</b></td>
                      <td class="col-pdf" rowspan="2"><b>Letter Grade</b></td>
                      <td class="col-pdf" rowspan="2"><b>Grade Point</b></td>

                  </tr>
                  <tr class="even header-shade">
                      <% if has_ob == true %>
                        <td rowspan="1"><b>MCQ</b></td>
                      <% end %> 
                      <% if has_sb == true %>
                        <td rowspan="1"><b>CQ</b></td>
                      <% end %> 
                      <% if has_pr == true %>
                        <td rowspan="1"><b>PR</b></td>
                      <% end %>
                      <td rowspan="1"><b>Total</b></td>
                      <td rowspan="1"><b>Avg</b></td>
                  </tr>

                  <% total_grade = 0 %>
                  <% total_subject = 0 %>
                  <% total_subject_main = 0 %>
                  <% grand_total = 0 %>
                  <% grand_total_fraction = 0 %>
                  <% grade_point_avg = 0 %>
                  <% failed = false %>
                  <% already_done = false %>
                  <% subject_passed = {} %>
                  <% subject_failed = {} %>
                  <% absent = false %>
                  <% subject_appeard = {} %>
                  <% subject_absent = {} %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% if subjects['grade_subject'].to_i == 1 %>
                        <% next %>
                      <% end %>
                      <% failed_subject = false %>
                      <% fourth_subject_failed = false %>
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <% total_mark = 0 %>
                          <% full_mark = 0 %>
                          <%
                          third_subject = ""
                          fourth_subject = ""
                        %>
                          <% if !@std_subject_hash_type.blank? %>
                            <% if @std_subject_hash_type.include?(@student.id.to_s+"|||"+subjects['id'].to_s+"|||4") %>
                              <% fourth_subject = "(4th)" %>
                            <% end %>
                            <% if @std_subject_hash_type.include?(@student.id.to_s+"|||"+subjects['id'].to_s+"|||3") %>
                              <% third_subject = "(3rd)" %>
                            <% end %>
                          <% end %>
                          <% if fourth_subject.blank? %>
                            <% total_subject = total_subject+1 %>
                          <% end %>
                          <% total_subject_main = total_subject_main+1 %>
                          <td class="col-pdf"><%= total_subject_main %></td>

                          <% class_test_full_mark = 0 %>
                          <% class_test_ab = true %>
                          <td class="col-pdf no-warp align-left-baf"><%= subjects['name'] %><%= fourth_subject %><%= third_subject %></td>
                          <% unless @report_data['report']['exams'].blank? %>  
                            <% @report_data['report']['exams'].each do |report| %>   
                              <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? and report['exam_category'] != '1' %>
                                <% full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                              <% end %> 
                              <% if report['exam_category'] == '1' %>
                                
                                <% class_test_full_mark = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                              <% end %>
                            <% end %>
                          <% end %>


                          <% 
                          if full_mark > 0
                            full_mark = full_mark+20
                          end  
                          highest_mark = 0
                          if !@subject_highest_1st_term.blank? and !@subject_highest_1st_term[subjects['id'].to_i].blank?
                            highest_mark = @subject_highest_1st_term[subjects['id'].to_i].to_f
                          end

                        %>

                          <% if full_mark.to_f > 0 %>
                            <% full_mark_all = 50 %>
                            <% if full_mark.to_f >= 100 %>
                              <% full_mark_all = 100 %>
                              <td class="col-pdf">100</td>
                            <% else %>    
                              <td class="col-pdf">50</td>
                            <% end %>
                            <% class_test_mark = 0 %>
                            <% at_mark = 0 %>
                            <% unless @report_data['report']['exams'].blank? %>  
                              <% @report_data['report']['exams'].each do |report| %>   
                                <% if report['exam_category'] == '1' or report['exam_category'] == '2' %>
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>                                   
                                    <% if report['exam_category'] == '1' %>
                                      <% if report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_s != "AB" %>
                                        <% class_test_ab = false %>
                                      <% end %>
                                      <%  class_test_mark = class_test_mark+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                    <% else %>
                                      <%  at_mark = at_mark+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                    <% end %>

                                  <% else %>
                                  <% end %>
                                <% end %>
                              <% end %>
                            <% end %>




                            <% if class_test_full_mark > 0 %>
                              <% class_test_mark = (class_test_mark.to_f/class_test_full_mark.to_f)*20 %>  
                              <% class_test_mark = class_test_mark.round()  %>
                            <% end %>  

                            <% if at_mark > 0 %>
                              <td class="col-pdf"><%= at_mark.to_i %></td>
                            <% else %>
                              <td class="col-pdf"><%= "0" %></td>
                            <% end %>      
                            <% if class_test_mark > 0 %>
                              <td class="col-pdf"><%= class_test_mark.to_i %></td>
                            <% elsif class_test_ab == true %> 
                              <% absent = true %> 
                              <td class="col-pdf"><%= "AB" %></td>
                            <% else %>
                              <td class="col-pdf"><%= "0" %></td>
                            <% end %>      

                            <% main_exam_mark = 0 %>
                            <% unless @report_data['report']['exams'].blank? %>  
                              <% @report_data['report']['exams'].each do |report| %>   
                                <% if report['exam_category'] != '1' and report['exam_category'] != '2' %>
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>                                   
                                    <%  main_exam_mark = main_exam_mark+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                    <% if report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_s == "AB" %>
                                      <% absent = true %>
                                      <td class="col-pdf">AB</td>
                                    <% else %>
                                      <td class="col-pdf"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f.round.to_i %></td>
                                    <% end %>
                                    <% if report['result'][report['exam_id']][subjects['id']]['grade'] == "F" && fourth_subject.blank? && (report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i != 25 or report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f.round.to_i != 8) %>
                                      <% failed = true %>
                                      <% failed_subject = true %>
                                    <% end %>
                                    <% if report['result'][report['exam_id']][subjects['id']]['grade'] == "F" && !fourth_subject.blank? && (report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i != 25 or report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f.round.to_i != 8) %>
                                      <% fourth_subject_failed = true %>
                                    <% end %>
                                  <% else %>
                                    <td class="col-pdf">-</td>
                                  <% end %>
                                <% end %>
                              <% end %>
                            <% end %>
                            <td class="col-pdf no-warp">
                                <%= main_exam_mark.to_f.round.to_i %>
                            </td>
                            <% avg_mark = main_exam_mark.to_f %>
                            <% if full_mark.to_f > 100 %>
                              <% avg_mark = main_exam_mark.to_f*0.75 %>
                            <% end %>

                            <td class="col-pdf no-warp">
                                <%= sprintf( "%0.02f", avg_mark)%>
                            </td>
                            <% tota_mark_with_monthly = avg_mark+class_test_mark+at_mark %>
                            <td class="col-pdf no-warp">
                                <b><%= tota_mark_with_monthly.to_f.round.to_i %></b>
                            </td>
                            <%
                            main_mark = (tota_mark_with_monthly.to_f.round/full_mark_all.to_f)*100
                          %>
                            <% grand_total_fraction = grand_total_fraction+tota_mark_with_monthly.to_f %>
                            <% grand_total = grand_total+tota_mark_with_monthly.to_f.round.to_i %>
                            <td class="col-pdf no-warp">
                                <%= highest_mark.to_f.round.to_i %>
                            </td>


                            <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                            <% if !grade.blank? and !grade.name.blank? %>
                              <% if grade.credit_points.to_i == 0 && fourth_subject.blank? %>
                                <% failed = true %>
                                <% failed_subject = true %>
                              <% end %>
                              <% if grade.credit_points.to_i == 0 && !fourth_subject.blank? %>
                                <% fourth_subject_failed = true %>
                              <% end %>
                              <% if  failed_subject == true || fourth_subject_failed == true %>
                                <% grade.credit_points = 0.0 %>
                                <% grade.name = "F" %>
                              <% end %>
                              
                              <% if  failed_subject == true %>
                              <% if subject_failed[subjects['id']].blank? %>
                                <% subject_failed[subjects['id']] = 1 %>
                              <% else %>
                                <% subject_failed[subjects['id']] = subject_failed[subjects['id']] + 1 %>
                              <% end %>
                              <% if absent %>
                                <% if subject_absent[subjects['id']].blank? %>
                                  <% subject_absent[subjects['id']] = 1 %>
                                <% else %>
                                  <% subject_absent[subjects['id']] = subject_absent[subjects['id']] + 1 %>
                                <% end %>
                              <% else %>
                                <% if subject_appeard[subjects['id']].blank? %>
                                  <% subject_appeard[subjects['id']] = 1 %>
                                <% else %>
                                  <% subject_appeard[subjects['id']] = subject_appeard[subjects['id']] + 1 %>
                                <% end %>
                              <% end %>
                              <%
                              exam_connect_merit_lists.subject_failed = exam_connect_merit_lists.subject_failed + subjects['id'].to_s + " - " + tota_mark_with_monthly.to_f.round.to_s + ","
                              %>
                              <% else %>
                              <% if subject_passed[subjects['id']].blank? %>
                                <% subject_passed[subjects['id']] = 1 %>
                              <% else %>
                                <% subject_passed[subjects['id']] = subject_passed[subjects['id']] + 1 %>
                              <% end %>
                              <% end %>
                        
                              <% if fourth_subject.blank? %>
                                <% total_grade = total_grade.to_f+grade.credit_points.to_f %>
                              <% else %>
                                <% new_grade_point = grade.credit_points.to_f - 2.0 %>
                                <% if new_grade_point > 0 %>
                                  <% total_grade = total_grade.to_f+new_grade_point.to_f %>
                                <% end %>  
                              <% end %>
                              <td class="col-pdf"><%= grade.name %>

                              </td>
                              <td class="col-pdf"><%= grade.credit_points %></td>

                            <% else %>
                              <td class="col-pdf">-</td>
                              <td class="col-pdf">-</td>
                            <% end %>

                          <% else  %>
                            <td class="col-pdf" colspan="100">-</td>
                          <% end %>      

                      </tr> 

                    <% end %>  
                  <% end %>

                  <% if total_grade > 0 && total_subject > 0 %>
                    <% grade_point_avg = total_grade.to_f/total_subject.to_f %>
                    <% if grade_point_avg > 5 %>
                      
                      <% grade_point_avg = 5.00 %>
                    <% end %>  
                  <% end %>  
                  <tr class="even">
                      <% colspan = colspan+3+extra_subject %>
                      <td class="col-pdf align-left-baf" colspan="<%= colspan %>"><b>Total Marks & Total GP</b></td>
                      <td class="col-pdf no-warp align-left-baf" colspan="3">&nbsp;&nbsp;&nbsp;<b><%= grand_total %></b></td>
                      <td class="col-pdf"><b><%= total_grade %></b></td>
                      <%
                        exam_connect_merit_lists.marks = grand_total
                        exam_connect_merit_lists.gp = total_grade
                      %>
                  </tr>    

                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% if subjects['grade_subject'].to_i != 1 %>
                        <% next %>
                      <% end %>
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <% total_mark = 0 %>
                          <% full_mark = 0 %>
                          <% total_subject = total_subject+1 %>
                          <td class="col-pdf"><%= total_subject %></td>
                          <td class="col-pdf no-warp align-left-baf"><%= subjects['name'] %></td>
                          <% unless @report_data['report']['exams'].blank? %>  
                            <% @report_data['report']['exams'].each do |report| %>   

                              <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                <% full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                              <% end %> 
                            <% end %>
                          <% end %>


                          <% 
                          highest_mark = 0
                          if !@subject_highest_1st_term.blank? and !@subject_highest_1st_term[subjects['id'].to_i].blank?
                            highest_mark = @subject_highest_1st_term[subjects['id'].to_i].to_f
                            end

                        %>

                          <% if full_mark.to_f > 0 %>
                            <% full_mark_all = 50 %>
                            <% if full_mark.to_f >= 100 %>
                              <% full_mark_all = 100 %>
                              <td class="col-pdf">100</td>
                            <% else %>    
                              <td class="col-pdf">50</td>
                            <% end %> 
                            <% class_test_mark = 0 %>
                            <% unless @report_data['report']['exams'].blank? %>  
                              <% @report_data['report']['exams'].each do |report| %>   
                                <% if report['exam_category'] == '1' or report['exam_category'] == '2' %>
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>                                   
                                    <%  class_test_mark = class_test_mark+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                    <td class="col-pdf"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %></td>
                                  <% else %>
                                    <td class="col-pdf">-</td>
                                  <% end %>
                                <% end %>
                              <% end %>
                            <% end %>

                            <% main_exam_mark = 0 %>
                            <% unless @report_data['report']['exams'].blank? %>  
                              <% @report_data['report']['exams'].each do |report| %>   
                                <% if report['exam_category'] != '1' and report['exam_category'] != '2' %>
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>                                   
                                    <%  main_exam_mark = main_exam_mark+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                    <td class="col-pdf"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f.round.to_i %></td>
                                  <% else %>
                                    <td class="col-pdf">-</td>
                                  <% end %>
                                <% end %>
                              <% end %>
                            <% end %>
                            <td class="col-pdf no-warp">
                                <%= main_exam_mark.to_f.round.to_i %>
                            </td>   
                            <% avg_mark = main_exam_mark.to_f*0.9 %>

                            <td class="col-pdf no-warp">
                                <%= sprintf( "%0.02f", avg_mark)%>
                            </td>
                            <% tota_mark_with_monthly = avg_mark+class_test_mark %>
                            <td class="col-pdf no-warp">
                                <b><%= tota_mark_with_monthly.to_f.round.to_i %></b>
                            </td>
                            <%
                            main_mark = (tota_mark_with_monthly.to_f.round/full_mark_all.to_f)*100
                          %>
                            <td class="col-pdf no-warp">
                                <%= highest_mark.to_f.round.to_i %>
                            </td>
                            <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                            <% if !grade.blank? and !grade.name.blank? %>
                              <% if grade.credit_points.to_i == 0 %>
                                <% failed = true %>
                              <% end %>
                              <td class="col-pdf"><%= grade.name %></td>
                              <td class="col-pdf"><%= grade.credit_points %></td>
                            <% else %>
                              <td class="col-pdf">-</td>
                              <td class="col-pdf">-</td>
                            <% end %>
                          <% else  %>
                            <td class="col-pdf" colspan="100">-</td>
                          <% end %>      

                      </tr> 
                    <% end %>  
                  <% end %>


              </table>   
<% end %>
