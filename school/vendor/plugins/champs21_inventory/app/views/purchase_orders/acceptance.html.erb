<script type="text/javascript">

  function remove_fields(link) {
    $(link).previous("input[type=hidden]").value = "1";
    $(link).up(".fields").hide();
  }
  function add_fields(link, association, content) {
    var new_id = new Date().getTime();
    var regexp = new RegExp("new_" + association, "g")
    $(link).up().insert({
      before: content.replace(regexp, new_id)
    });
  }

</script>


<div id="content-header">
<%#= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('inventory') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('new_text') %></div>
<div id="inner-tab-menu"></div>
</div>
<div id="page-yield">
<div class="bread_crumb">
  <%= link_to "#{t('purchase_order')}", purchase_orders_path %> <div class = "bread-crumb-separator"> > </div>
  <%= t('new_text') %>
</div>

<% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>


<% form_for :purchase_order,@purchase_order, :url => acceptance_purchase_order_url(:id => @purchase_order.id) do |f| %>
