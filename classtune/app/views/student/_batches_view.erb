<%= 
  select :course, :course_id, options_for_select(Batch.active.map {|b| [b.full_name, b.id]}, @batch_id.to_i),
  {:prompt => "#{t('select_a_batch')}"},
  {:onChange => "#{remote_function(:url => {:action => "list_students_by_course"},
  :with => "'batch_id='+value",
  :before => "Element.show('loader_2'); ",
  :success => "Element.hide('loader_2')"
  )}"}
%>

<%= image_tag("loader.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader_2",
      :style =>"display: none;" ) %>