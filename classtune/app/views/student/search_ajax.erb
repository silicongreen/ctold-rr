<table class="table" align="center" width="100%" cellpadding="1" cellspacing="1">
    <% unless @students.blank? %>
      <thead>
          <tr>
              <th scope="col">
                  <%= t('sl_no') %>
              </th>
              <th scope="col">
                  <%= t('first_name') %>
              </th>
              <th scope="col"> <%= t('batch') %></th>
              <th scope="col"> <%= t('adm_no') %></th>
          </tr>    
      </thead>
      <tbody>
          <% @students.each_with_index do |student, i| %>
            <% unless student.nil? %>
              <tr>
                  <td><%= i+1 %></td>
                  <%if params[:option]=="active"%>
                    <td><%=  link_to student.full_name, :controller => 'student', :action => 'profile', :id => student.id%></td>
                  <%else%>
                    <td><%=  link_to student.full_name, '#', :onclick=>"update_sibling_selected('#{student.id}','#{student.full_name}')" %></td>
                  <%end%>
                  <td><%= student.batch.full_name %></td>
                  <td><%= student.admission_no %></td>
              </tr>
            <% else %>
              <tr>
                  <td><%= t('no_students_found') %></td>
              </tr>
            <% end %>
          <% end %>
        <% else %>

      <thead>
          <tr>
              <th scope="col"><%= t('no_students_found') %></th>
          </tr>    
      </thead>
    <% end %>
</table>
