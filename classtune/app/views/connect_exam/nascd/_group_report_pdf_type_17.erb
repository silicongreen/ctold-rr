                </table>

                 


              <table id="pdf-table"  width="100%" class="left-table break-table ev-table" cellspacing="0" >
                <tr  class="table-header">
                  <td>Total Working Days</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                  <td>Total Present Days</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                  <td>Total Absent Days</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
              </table>

            <table id="pdf-table"  width="100%" class="left-table break-table ev-table" cellspacing="0" >
              <tr class="even">
                      <td class='align-left-baf padding-0-text-left' rowspan="8">
                          <ul>
                              <li><i>We issue this report card to let you know our evaluation regarding the progress of your child.</i></li>
                              <li><i>At school, we consider each student as an individual who will develop intellectually, physically and
socially to his or her abilities and opportunities.</i></li>  
                          </ul>
                          
                      </td>
                  </tr>
              </table>    
              
              <table id="pdf-table"  width="100%" class="left-table break-table ev-table" cellspacing="0" >
                  <tr class="even">
                      <td width='70%'><br/></td>
                      <td width='30%'><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/nascd/sign_principal.jpeg")), :width=>"20%" %></td>  
                  </tr>
                  <tr class="table-header">
                      <td>Comment & Signature of the Class Teacher</td>
                      <td>Signature of the Principal</td>
                  </tr>
              </table>
          </div>
      </div>



  </div>
<% end %>
