<div id="page-yield">

  <div class="hor_line"></div>
  <h2><%= t('fees_defaulters_text') %></h2>
  <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">

    <div id ="main_info">
      <h4> <%= "#{t('class')} :"+ " " "#{@batch.full_name}" %></h4>
    </div>
    <div id="pdf-info">
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header"><td class="col-pdf"><%= t('sl_no') %></td><td class="col-pdf"><%= t('name') %></td><td class="col-pdf"><%= t('amount')%> (<%= @currency_type%>)</td></tr>
        <% i = 0 %>
        <% index = 0   %>
        <% c = 'even' %>
        <% @defaulters.each do |s| %>
          <% if i== 22 %>
            <% i= 0 %>
            <tr class="page-break"><td colspan="3"></td></tr>
            <% if c == 'even' %>
              <tr class="odd"><td class="col-pdf"><%= t('sl_no') %></td><td class="col-pdf"><%= t('name') %></td><td class="col-pdf"><%= t('amount') %></td></tr>
            <% else %>
              <tr class="even"><td class="col-pdf"><%= t('sl_no') %></td><td class="col-pdf"><%= t('name') %></td><td class="col-pdf"><%= t('amount') %></td></tr>
            <% end %>
          <% end %>
          <% i += 1  %>
          <% c =cycle('even','odd ') %>
          <tr class="<%= "#{c}" %>">
            <td class="col-pdf"><%= index += 1 %></td>
            <td class="col-pdf"><%= s.full_name %></td>
            <td class="col-pdf"><%= precision_label(s.balance.to_f+@date.fine_to_pay(s).to_f) %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>

</div>
