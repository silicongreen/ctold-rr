<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('edit_details') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('student_details') %></div>

</div>

<div id="page-yield">

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <% form_for :student, :url => {:action => 'edit_student_guardian'}, :html => {:multipart => true, :id => 'new_student'} do |s| %>
      <%= error_messages_for 'student' %>
      <div id="admission1-form">
          <div id="necessary-field-notification"><%= t('legend1') %><span class="necessary-field">*</span> <%= t('legend2') %></div>

          

          <span class="span-sub-heading"><%= t('personal_details') %></span>

         
          
          

          <hr class="label-underline"></hr>

          <div class="label-field-pair">
              <label for="student_email"><%= t('email_for_school_use') %><span class="necessary-field">*</span></label>
              <div class="text-input-bg"><%= s.text_field :email %></div>
          </div>

        
          

      </div>
      <br/>

      <div id="admission1-form">
          <span class="span-sub-heading"><%= t('contact_details') %></span>
          <hr class="sub-heading"></hr>

          <div id="admission1_form_vertical_block_right">

              <div class="label-field-pair">
                  <label for="master_student_city"><%= t('address_line') %><span class="necessary-field">*</span></label>
                  <div class="text-input-bg"><%= s.text_field :address_line1, :value => @student.address_line1 %></div>
              </div>

              <hr class="label-underline"></hr>

              <div class="label-field-pair">
                  <label for="master_student_city"><%= t('address_line2') %></label>
                  <div class="text-input-bg"><%= s.text_field :address_line2, :value => @student.address_line2 %></div>
              </div>

              <hr class="label-underline"></hr>

              <div class="label-field-pair">
                  <label for="master_student_city"><%= t('city') %><span class="necessary-field">*</span></label>
                  <div class="text-input-bg"><%= s.text_field :city, :value => @student.city %></div>
              </div>

              <hr class="label-underline"></hr>

              <div class="label-field-pair">
                  <label for="master_student_state"><%= t('state') %></label>
                  <div class="text-input-bg"><%= s.text_field :state, :value =>@student.state %></div>
              </div>

              <hr class="label-underline"></hr>

              <div class="label-field-pair">
                  <label for="master_student_pin_code"><%= t('zip') %></label>
                  <div class="text-input-bg"><%= s.text_field :pin_code, :value =>@student.pin_code %></div>
              </div>

              <hr class="label-underline"></hr>

              <div class="label-field-pair">
                  <label for="master_student_country"><%= t('country') %><span class="necessary-field">*</span></label>
                  <div class="text-input-bg"><%= select :student, :country_id, Country.all.map {|c| [c.name, c.id]}, :selected => @student.country.id %></div>
              </div>

             

              <hr class="label-underline"></hr>

              <div class="label-field-pair">
                  <label for="master_student_phone2"><%= t('mobile') %></label>
                  <div class="text-input-bg"><%= s.text_field :phone2, :value =>@student.phone2 %></div>
              </div>
              
            

              
          </div>
          <div class="extender"></div>
      </div>
      <% unless @additional_fields.blank? %>
      <div id="admission1-form">
          <span class="span-sub-heading">Other Info</span>
          <hr class="sub-heading"></hr>
      
      <% @additional_fields.each do |additional| %>
          <% @student_additional_detail = StudentAdditionalDetail.find_by_student_id_and_additional_field_id(@student.id,additional.id) %>
          <% input_val = @student_additional_detail.nil? ? "" : @student_additional_detail.additional_info %>
         
           <% if additional.input_type=="belongs_to" %>
          <div class="label-field-pair">
            <label><%= additional.name %>
              <% if additional.is_mandatory %>
                <span class="necessary-field">*</span>
              <% end %>
            </label>
            <div class="text-input-bg"><%= select_tag "student_additional_details[#{additional.id}][additional_info]", options_for_select(additional.student_additional_field_options.map{|b| [b.field_option,b.field_option]}, input_val)%></div>
          </div>
        <% elsif additional.input_type=="has_many" %>
          <div class="grades">
            <div class="label-field-pair">
              <label><%= additional.name %>
                <% if additional.is_mandatory %>
                  <span class="necessary-field">*</span>
                <% end %></label>
            </div>
            <div class="fee_category_scroll">
              <div class="sel-list">
                <%= t('select') %>: <%= link_to_function t('all'), "$$('input.check#{i}').each(function(checkbox) { checkbox.checked = true; });" %>,
                <%= link_to_function t('none'), "$$('input.batches_box').each(function(checkbox) { checkbox.checked = false; });" %>
              </div>
              <% additional.student_additional_field_options.each do |k| %>
                <div class="each_batch">
                  <%= check_box_tag "student_additional_details[#{additional.id}][additional_info][]", k.field_option,(!(input_val.nil?) and input_val.include?(k.field_option)), :class=>"batches_box check#{i}" %> <label><%= k.field_option %></label>
                </div>
              <% end %>
            </div>
          </div>
          <% i+=1 %>
        <% elsif additional.input_type=="text_area" %>
          <div class="label-field-pair-text-area">
            <label><%= additional.name %>
              <% if additional.is_mandatory %>
                <span class="necessary-field">*</span>
              <% end %></label>
            <div class="textarea-input-bg"><%= text_area_tag "student_additional_details[#{additional.id}][additional_info]", input_val%></div>
          </div>
        <% else %>
          <div class="label-field-pair">
            <label><%= additional.name %>
              <% if additional.is_mandatory %>
                <span class="necessary-field">*</span>
              <% end %></label>

            <div class="text-input-bg"><%= text_field_tag "student_additional_details[#{additional.id}][additional_info]", input_val %></div>
          </div>
        <% end %>
          
          
          <% end %>
          
      </div> 
      <% end %>
  </div>

  <%= submit_tag "", :class => "submit_button", :value => "â–º #{t('update')}" %>
<% end %>

<% content_for :head do %>
  <%= javascript_include_tag "custom/student_edit_velki" %>
<% end %>