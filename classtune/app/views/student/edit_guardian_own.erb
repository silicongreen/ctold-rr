<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('parent_information') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('edit_parent_guardian_details') %></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :parent_detail do |s| %>

    <%= error_messages_for 'parent' %>

    <div id="admission1_form">


      <% g_students = GuardianStudents.find_by_guardian_id(@parent.id) %>
     
      <span class="span-sub-heading"><%= t('parent_personal_details') %></span>
      <hr class="sub-heading"></hr>

      <div class="label-field-pair">
        <label for="parent_detail_name"><%= t('first_name') %> <span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= s.text_field :first_name, :value => @parent.first_name %></div>
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_name"><%= t('last_name') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= s.text_field :last_name, :value => @parent.last_name %></div>
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_relation"><%= t('relation') %> <span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= s.text_field :relation, :value => @parent.relation %></div>
      </div>
      <% unless @parent.dob.nil? %>
        <div class="label-field-pair">
          <label for="parent_detail_dob"><%= t('date_of_birth') %></label>
          <div class="text-input-bg"><%= calendar_date_select_tag 'parent_detail[dob]', I18n.l(@parent.dob,:format=>"%d %b %Y"),:year_range => 60.years.ago..20.years.ago ,:popup=>"force" %></div>
        </div>
      <% else %>
        <div class="label-field-pair">
          <label for="parent_detail_dob"><%= t('date_of_birth') %></label>
          <div class="text-input-bg"><%= calendar_date_select_tag 'parent_detail[dob]', nil,:year_range => 60.years.ago..20.years.ago ,:popup=>"force" %></div>
        </div>
      <% end %>
      <div class="label-field-pair">
        <label for="parent_detail_education"><%= t('education') %></label>
        <div class="text-input-bg"><%= s.text_field :education, :value => @parent.education %></div>
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_occupation"><%= t('occupation') %></label>
        <div class="text-input-bg"><%= s.text_field :occupation, :value => @parent.occupation %></div>
      </div>
      <div class="label-field-pair">
        <label for="parent_detail_education"><%= "Organization" %></label>
        <div class="text-input-bg"><%= s.text_field :organization, :value => @parent.organization %></div>
      </div>
      <div class="label-field-pair">
        <label for="parent_detail_education"><%= "Designation" %></label>
        <div class="text-input-bg"><%= s.text_field :designation, :value => @parent.designation %></div>
      </div>
      <div class="label-field-pair">
        <label for="parent_detail_occupation"><%= "NID/Passport Number" %></label>
        <div class="text-input-bg"><%= s.text_field :passport, :value => @parent.passport %></div>
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_income"><%= t('income') %></label>
        <div class="text-input-bg"><%= s.text_field :income, :value => @parent.income %></div>
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_email"><%= t('email') %></label>
        <div class="text-input-bg"><%= s.text_field :email, :value => @parent.email %></div>
      </div>
      <br/>
      <span class="span-sub-heading"><%= t('parent_contact_details') %></span>
      <hr class="sub-heading"></hr>
      <div class="label-field-pair">
        <label for="master_student_city"><%= t('office_address_line1') %></label>
       
          <div class="text-input-bg"><%= s.text_field :office_address_line1, :value => @parent.office_address_line1 %></div>
       
      </div>

      <div class="label-field-pair" style="display:none;">
        <label for="master_student_city"><%= t('office_address_line2') %></label>
        
          <div class="text-input-bg"><%= s.text_field :office_address_line2, :value => @parent.office_address_line2 %></div>
        
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_city"><%= t('city') %></label>
        
          <div class="text-input-bg"><%= s.text_field :city, :value => @parent.city %></div>
      
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_state"><%= t('state') %></label>
        
          <div class="text-input-bg"><%= s.text_field :state, :value => @parent.state %></div>
       
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_country"><%= t('country') %></label>
        
          <div class="text-input-bg"> <%= select :parent_detail, :country_id, @countries.map {|c| [c.name, c.id]}, :selected => @parent.country.id %> </div>
      
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_office_phone1"><%= t('office_phone1') %></label>
        <div class="text-input-bg"><%= s.text_field :office_phone1, :value => @parent.office_phone1 %></div>
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_office_phone2"><%= "Residence Phone"  %></label>
        <div class="text-input-bg"><%= s.text_field :office_phone2, :value => @parent.office_phone2 %></div>
      </div>

      <div class="label-field-pair">
        <label for="parent_detail_mob_phone"><%= t('mobile_phone_no') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= s.text_field :mobile_phone, :value => @parent.mobile_phone %></div>
      </div>



    </div>

    <div class="extender">
    </div>

    <%= submit_tag "",  :name => "commit", :class => "submit_button", :value => "â–º #{t('update')}" %>



  <% end %>

</div>
