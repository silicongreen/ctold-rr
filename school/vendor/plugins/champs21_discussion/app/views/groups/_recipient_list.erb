<% unless recipients.blank? %>
  <div id="members_list">
    <div class="label-field-pair">
      <label for="student_grade"><%= t('member') %></label>
      <div class ="scrolable1" >
        <% x = '<span> x </span>' %>
        <div class="scroll-inside">
          <% recipients.each do |r|  %>
            <% if @group.members.collect(&:id).include?(r.id) %>
              <% if r.id!=group.user_id %>
                <div class="hover">
                  <%= shorten_string(r.full_name,20) %> <%= link_to  x, "#", :onClick => "remove_recipient(#{r.id})", :class=> 'individual',
                    :before => "Element.show('loader')",
                    :success => "Element.hide('loader')" , :title=>"#{t('delete_from_group')}"%>
                  <div class="opt">
                    <%= link_to "+",switch_between_admin_and_normal_group_path(:user_id=>r,:group_id=>group.id), :action=>"switch_between_admin_and_normal", :title=>"#{t('add_admin')}" %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="hover">
                <%= r.first_name %>
                <% unless r.id==@group.user_id %>
                  <%= link_to x, "#", :onClick => "remove_recipient(#{r.id})" , :class=> 'individual',
                    :before => "Element.show('loader')",
                    :success => "Element.hide('loader')" , :title=>"#{t('delete_from_group')}"%>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="extender"></div>
  </div>
<% end %>
