<div class="box">
  <% remote_form_for :history,:url=>{:action=>'update_history', :id=>@history.id} do |c| %>
    <div id="form-content" style="height: 250px;">
      <div class="label-field-pair">
        <label for="category_name"><%= "Position Held" %></label>
        <div class="text-bg"><%= c.text_field :position,:value=>@history.position %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name"><%= "Name of Institution / Organisation / Company" %></label>
        <div class="text-bg"><%= c.text_field :name,:value=>@history.name %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name"><%= "Date of Commencement of Employment" %></label>
        <div class="text-bg"><%= calendar_date_select_tag 'history[date_commencement]', I18n.l(@history.date_commencement,:format=>:default),
              :year_range => 90.years.ago..5.years.from_now, :readonly=>true, :popup=>"force" %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name"><%= "Date of Discontinuation of Employment" %></label>
        <div class="text-bg"><%= calendar_date_select_tag 'history[date_discontinuation]', I18n.l(@history.date_discontinuation,:format=>:default),
              :year_range => 90.years.ago..5.years.from_now, :readonly=>true, :popup=>"force" %></div>
      </div>
        
      <div id="submit-button">
          <%=submit_tag("â–º #{t('save')}") %>
      </div>


    </div>
  <%end%>
  </div>
<style>
    #attendance-report
    {
        margin-left:0px !important;
    }
</style>    
