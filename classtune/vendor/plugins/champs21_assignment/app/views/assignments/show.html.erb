  </div>  
<% end %>
<div id="page-yield" class="ch_homework_wrapper bg-disable">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
  <div style="background-color: #ffffff; float: left; padding: 30px;width: 94%;">
      <div id="assignment_content">
          <%if @assignment.is_published == 2%>
          <h4 style="color: red;">This Homework has not yet approved. </h4>
          <% elsif @assignment.is_published == 3 %>
          <h4 style="color: red;">This Homework is approved but not published yet. </h4>
          <% end %>
          <%if @assignment.is_published == 4%>
          <h4 style="color: red;">This Homework is denied</h4>
          <% end %>
      <p>
        <%= @assignment.content.to_s%>
      </p>
      
      <% unless @assignment.attachment2_file_name.nil? %>
      <p class="atachment_div"><%= link_to 'Attachment 2', :controller => "assignments", :action => "download_attachment" , :id=>@assignment.id, :number=>2 %></p>
      <% end %>
      
      <% unless @assignment.attachment3_file_name.nil? %>
      <p class="atachment_div"><%= link_to 'Attachment 3', :controller => "assignments", :action => "download_attachment" , :id=>@assignment.id, :number=>3 %></p>
      <% end %>
      
    </div>
     

    <% if @assignment.employee.present? and (@current_user.employee_record == @assignment.employee || @current_user.admin? || (!@current_user.employee_record.blank? && @current_user.employee_record.all_access.to_i == 1)) %>
      <% @config = Configuration.find_by_config_key('HomeworkWillForwardOnly') %>
      <div id="employee-options" >
        <div id="action_buttons">
          <% if (!@config.blank? and !@config.config_value.blank? and @config.config_value.to_i == 1) %>
            <% if @assignment.is_published==0 %>
              <div>
                <%= link_to "â–º #{t('edit_text')}",
                  edit_assignment_path(@assignment), :class => "user_button"%>
              </div>
              <div>
                <%= link_to "â–º #{t('delete_assignment')}",
                  @assignment, :method => "delete",
                  :confirm => "#{t('delete_this_assignment')}", :class => "user_button" %>
              </div>
            <% end %>
            
          <% else %>  
          <div>
            <%= link_to "â–º #{t('edit_text')}",
              edit_assignment_path(@assignment), :class => "user_button"%>
          </div>
          <div>
            <%= link_to "â–º #{t('delete_assignment')}",
              @assignment, :method => "delete",
              :confirm => "#{t('delete_this_assignment')}", :class => "user_button" %>
          </div>
          <% end %>  
          
          <% if (!@config.blank? and !@config.config_value.blank? and @config.config_value.to_i == 1) and !@current_user.admin? and @current_user.employee_entry.homework_publisher != 1 %>
            <% if @assignment.is_published==0 %>
              <%= link_to "â–º Forward Homework", { :action => 'published_homework', :id =>params[:id]},
              :confirm => "Do You realy want to forward this homework?", :class => "user_button" %>
            <% elsif @assignment.is_published==3 %>
              <%= link_to "â–º Publish Homework", { :action => 'published_homework', :id =>params[:id]},
              :confirm => "Do You realy want to publish this homework?", :class => "user_button" %>
            <% end %>
          <% else %> 
            <% if @assignment.is_published==0 %>
              <%= link_to "â–º Publish Homework", { :action => 'published_homework', :id =>params[:id]},
              :confirm => "Do You realy want to publish this homework?", :class => "user_button" %>
            <% end %>
          <% end %>  
            <a href="../assignment_answers/show.html.erb"></a>
          <!-- RR, remove comment-out later -->
          
          <% if @assignment.is_published==1 %>
          <%= link_to "â–º Defaulter Registration", { :action => 'defaulter_registration', :id =>params[:id]},  :class => "user_button" %>
          <% unless @defaulter_registered.blank? %>
            <%= link_to "Defaulter List (#{@defaulter_registered.assignment_not_given})", { :action => 'defaulter_students', :id =>params[:id]},  :class => "user_button" %>
          <% end %>
          <% end %> 
          <% if @assignment.assignment_type == 2 && @answered_count.to_i > 0 %>
            <%= link_to "â–º Download All Attachment", { :action => 'assignment_all_attchment_download', :id =>params[:id]},  :class => "user_button" %>
          <% end %>
        </div>
         
        <% if @assignment.assignment_type == 2 %>  
           
        <div id="student-list-bg" >
          <div id="loaderbox">     <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %> </div>
