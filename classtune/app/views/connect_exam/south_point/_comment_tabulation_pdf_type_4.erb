<div id="page-yield" class="available_sections1">
  <div class="page1"> </div>
  <div class="section1 row" >
    <center>
      <div id="pdf-header-south" class="general-header">
        <h4 align="center"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ (current_school_detail.logo.path||"public/images/application/c.png")),:width=> '4%' %></h4>
        <h2 align="center"><%=Configuration.get_config_value('InstitutionName'); %></h2>
      </div>
      <h4 align="center">Tabulation Sheet, <%= @connect_exam_obj.name %></h4>
      <%= render  :partial=>"/connect_exam/south_point/tabulation_top" %>
     
      <% unless @report_data.blank? %>
      <% c = 'even' %>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td class="col-pdf">Sl.</td>
          <td class="col-pdf">Roll</td>
          <td class="col-pdf">Students Name</td>
          <% @report_data['report']['subjects'].each do |sub| %>
            <td><%=  sub['code'] %><hr/>Grade</td>
          <% end %> 
          <% @report_data['report']['no_exam_subject_resutl'].each do |sub| %>
            <td><%=  sub['code'] %></td>
          <% end %> 
          
          <td>Total</td>
          <td>Position Section</td>
          <td>Grade Count</td>
          <%#*<td>Remark</td>%>
        
        </tr>
        
        <% extender = 0 %>
        <% std_count = 0 %>
        <% j = 0 %>
      
        <% @report_data['report']['students'].each do |std| %>
          <% j = j+1 %>
          <%  std_count = std_count+1; %>
          <% if std_count>5 && extender ==0 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break7">
                  <td colspan="100">&nbsp;</td>
              </tr>    
          <% elsif std_count>6 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break8">
                  <td colspan="100">&nbsp;</td>
              </tr> 
          <% end %>    
        
          
          
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"><%= j %></td>
            <td class="name"><%= std['class_roll_no'] %></td>
            <td class="name-std"><%= std['first_name'].to_s+" "+std['last_name'].to_s %></td>
            <% total_mark = 0 %>
            <% grades = [] %>
            <% grade_count = {} %>
            <% @report_data['report']['subjects'].each do |sub| %>
                  <% subjectdata = Subject.find(sub['id'].to_i) %>
                  <% check_std_subject = StudentsSubject.find_by_student_id_and_subject_id(std['id'],sub['id'].to_i) %>
                  <% if check_std_subject.blank? and !subjectdata.elective_group_id.blank? %>
                    <td>&nbsp;</td>
                  <% else %>
                    <% st_full_mark = 0 %>
                    <% ct_full_mark = 0 %>
                    <% st_marks = [] %>
                    <% ct_marks = [] %>
                    <% avg_mark_st = 0; %>
                    <% avg_mark_ct = 0; %>
                    <% @report_data['report']['exams'].each do |rs| %>
                      <% if !rs['result'].blank? and !rs['result'][rs['exam_id']].blank? and !rs['result'][rs['exam_id']][sub['id']].blank? and !rs['result'][rs['exam_id']][sub['id']][std['id']].blank? %>

                        <%
                            if st_full_mark == 0 and rs['exam_category'] == '4'
                              st_full_mark = rs['result'][rs['exam_id']][sub['id']][std['id']]['full_mark'].to_i
                            end

                            if ct_full_mark == 0 and rs['exam_category'] == '1'
                              ct_full_mark = rs['result'][rs['exam_id']][sub['id']][std['id']]['full_mark'].to_i
                            end

                            if rs['exam_category'] == '4'
                              if rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained']!="AB"
                                st_marks << rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f
                              else
                                st_marks << 0
                              end
                            end

                            if rs['exam_category'] == '1'
                              if rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained']!="AB"
                                ct_marks << rs['result'][rs['exam_id']][sub['id']][std['id']]['marks_obtained'].to_f
                              else
                                ct_marks << 0
                              end
                            end

                        %>
                      <% end %>
                     <% end %> 
                         <%   
                            st_marks.sort! {|x,y| y <=> x }
                            ct_marks.sort! {|x,y| y <=> x }

                            if ct_full_mark.to_i == 30
                              all_marks_ct = 0
                              iloop = 0
                              ct_marks.each do |ct_mark|
                                all_marks_ct = all_marks_ct+ct_mark
                                iloop = iloop+1
                              end  
                              avg_mark_ct = all_marks_ct.to_f/iloop.to_f
                            else  
                              if ct_full_mark.to_i == 20 
                                  avg_mark_ct = (ct_marks[0].to_f+ct_marks[1].to_f)/2
                              else 
                                  avg_mark_ct = ct_marks[0].to_f
                              end 

                              if st_full_mark.to_i == 10 
                                  avg_mark_st = (st_marks[0].to_f+st_marks[1].to_f+st_marks[2].to_f)/3
                              else st_full_mark.to_i == 5  
                                  avg_mark_st = (st_marks[0].to_f+st_marks[1].to_f)/2
                              end
                            end

                            full_mark = ct_full_mark.to_i+st_full_mark.to_i
                            obtained_mark = avg_mark_ct.to_f+avg_mark_st.to_f

                            main_mark = (obtained_mark.round()/full_mark.to_f)*100 

                        %>  
                      <td>
                         <% total_mark = total_mark+obtained_mark.round() %>
                         <%= obtained_mark.round().to_s %><hr/>
                         <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                         <% if !grade.blank? and !grade.name.blank? %>
                             <%
                                if grades.include?(grade.name.to_s)
                                  grade_count[grade.name.to_s] = grade_count[grade.name.to_s]+1
                                else
                                  grades << grade.name.to_s
                                  grade_count[grade.name.to_s] = 1
                                end  
                             %>
                            <%= grade.name %>  
                         <% else %>
                            N/A  
                         <% end %>
                      </td>  
                  <% end %>    
            <% end %> 
            <% @report_data['report']['no_exam_subject_resutl'].each do |sub| %>
                    <% if !sub['subject_comment'][std['id']].nil? %>
                      <%
                        if !sub['subject_comment'][std['id']].blank?
                          if grades.include?(sub['subject_comment'][std['id']].to_s)
                            grade_count[sub['subject_comment'][std['id']]] = grade_count[sub['subject_comment'][std['id']]]+1
                          else
                            grades << sub['subject_comment'][std['id']].to_s
                            grade_count[sub['subject_comment'][std['id']].to_s] = 1
                          end 
                        end 
                       %>
                     <td>
                        <%=  sub['subject_comment'][std['id']] %>
                     </td>
                    <% end %> 
              <% end %>
              <td>
                   <%= total_mark.round().to_s %>    
              </td>
              <td>
                  &nbsp;&nbsp;
              </td>    
              <td>
                  <% i = 1 %>
                  <% total_grade_std = grades.count  %>
                  <% grades.each do |grade| %>
                      <%= grade.to_s+"-"+grade_count[grade].to_s %>
                      <% if i!=total_grade_std %>
                      ,
                      <% end %>
                      <% i = i+1 %>
                  <% end %>
              </td> 
              <%# @exam_comment.each do |exm_cmt| %>
              <%# if exm_cmt.student_id.to_i == std['id'].to_i %>
                <%#*<td>%>
                    <%#= exm_cmt.comments %>
                <%#*</td>%>
              <%# else %>
                <%#*<td></td>%>
              <%# end %>  
              <%# end %>
              
           
        </tr>
        <% @std_id_comment = std['id'] %>
        <%= render  :partial=>"/connect_exam/comment_text" %>
       
        <% end %>
      </table>
      <% end %>
    </center>
  </div>
  
  
</div>
