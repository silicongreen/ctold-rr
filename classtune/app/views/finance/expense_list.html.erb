<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('expenses') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('expenses_list') %></div>

</div>
<div id="page-yield">
  <div class="box">
    <% unless flash[:notice].nil? %>
    <p class="flash-msg"><%= flash[:notice] %></p>
  <% end %>
    <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><p><%= flash[:warn_notice] %></p> </div>
  <% end %>
    <% form_for :report, :url => {:action => 'expense_list_update'} do |form| %>
      <div class="label-field-pair">
        <label><%= t('select_start_date') %>:</label>
        <div class="input-container"><%= calendar_date_select_tag 'start_date', I18n.localize(Date.today, :format=>:default),:popup=>:force %></div>
      </div>
      <div class="label-field-pair">
        <label><%= t('select_end_date') %>: </label>
        <div class="input-container"><%= calendar_date_select_tag 'end_date', I18n.localize(Date.today,:format=>:default),:popup=>:force %></div>
      </div>

      <%=  submit_tag "â–º #{t('ok')}",:class=>'submit_button' %>
    <%end%>
    <div id="expense_list">
    </div>
  </div>
</div>
