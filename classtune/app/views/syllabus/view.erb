<div class="partial_homework">
  <div class="header-wrapper">
    <div class="header-title">
      <div class="header-icon">
       <%= image_tag '/images/icons/syllabus/syllabus.png', :html => {:alt => 'Syllabus'} %>
      </div>
      <div class="header-title-text-wrapper">
        <div class="header-title-main-text f2">      
         <%= link_to "Syllabus", :controller => "syllabus", :action => "classes_view" %>  |    <%= "Update"%>
         <span style="float: left;clear:both;font-size: 15px;"><%= @local_tzone_time.to_date %></span>
        </div>
        <div class="header-title-sub-text f5">

          </div>
        </div>
    </div> 
    <div class="clearfix"></div>
  </div>

  <div class="portlet-subcontent" style="width:100%">     
      <div class="timetable_left">
        <% if @is_moderator %>
          <%= link_to "<div class='delete_lessonplan'></div>",{:controller => "news", :action => "delete", :id => @news.id },:confirm => "#{t('delete_confirm_msg')}" %>
        <% end %>
      </div>
      <div class="timetable_right"  style="float:left;height: 70px;width: 40%;padding: 10px 0;">
        <div class="subcontent-header themed_text">
            <%= @syllabus.title %>
        </div>                           
        <div class="subcontent-info"><span style="font-size:12px;"><%= t('posted_on') %> <%= I18n.l(@syllabus.created_at,:format=>"%A, %d %B, %Y") %> </span> </div>              
      </div>
      <div class="timetable_right"  style="float:left;height: 70px;width: 35%;padding: 10px 0;border-left:1px dotted #cccccc">                            
        <div class="subcontent-date" style="color:#000;"> asdad

        </div>  

      </div>    
      <div class="answer_mark">
        <% if @is_moderator %>
          <%= link_to "<div class='edit_lessonplan'></div>",{:controller => "news",  :action => "edit", :id => @news.id } %>          
        <% end %>        
      </div>

    </div>
  <div id="page-yield" style="margin-top: 0px;">

    <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

    <div id="news_title">
      <%= @syllabus.title %>
    </div>
    <div id="create_date" class="themed_text">
      <%= t('posted_on') %> <%= I18n.l(@syllabus.created_at,:format=>"%A, %d %B, %Y") %>    
    </div>
    <div class="f2" style="float: left;">        
      <% if batch_data.name != "General" %>      
        <%="Shift" %> : <%= batch_data.name  %><br />
      <% end  %>
      <%="Class" %> : <%=  course_data.course_name %><br />
      <% unless related_syllabuses.nil? or related_syllabuses.empty? %>

      <% else %>
        <%="Section" %> : <%= batch_data.course.section_name %><br /><br />
      <% end %>
    </div>
    <br /><br /><br /><br /><br />
    <div id="news_content">
      <%= sanitize @syllabus.content , :tags => %w[b i a h1 h2 h3 u li ol strike p img font span sup sub tr td table th tbody thead strong em iframe], :attributes => %w[href src style border cellspacing cellpadding height width align]%>
    </div>
  </div>
</div>

