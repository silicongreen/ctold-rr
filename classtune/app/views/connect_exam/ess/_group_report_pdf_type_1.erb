<% unless @report_data.blank?  or  @report_data['report'].blank? %>
  <div id="page-yield"  class="available_sections1 sis sis-final landscape">
      <div class="section1 row" >
         
              
                  <table id="pdf-table"  width="100%" class="no-border left-clear-both margin-bottom-20"  cellspacing="0" >
                      <tr>
                          <td class="align-left" width="24%">&nbsp;</td>
                          
                          <td class="align-left" width="10%">  
                              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/logo.jpg")),:width=> '90%' %>  
                          </td>
                          <td width="32%">
                              <h4 align="center"><font size="5" color="#4CAEE3">EUROPEAN STANDARD SCHOOL(ESS)</font></h2>
                              <h4 align="center" style="margin-top:-5px;"><font size="4" color="#000"><%= @connect_exam_obj.name %></font></h2>
                              <% month_number = @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%-m"):@connect_exam_obj.published_date.strftime("%-m") %>
                              <h4 align="center" style="margin-top:-5px;">
                                <font size="4" color="#000">
                                  <% if month_number.to_i>6 %>
                                    Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i+1:@connect_exam_obj.published_date.strftime("%Y").to_i+1 %>
                                  <% else %>
                                    Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i-1:@connect_exam_obj.published_date.strftime("%Y").to_i-1 %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>
                                  <% end %>
                                </font>
                              </h4>
                              <h4 align="center" style="margin-top:-5px;">
                                <font size="4" color="#000">
                                  Class : <%= @batch.course.course_name %>
                                </font>
                              </h4>  
                          </td>
                          <td class="align-left" width="24%">&nbsp;</td>
                          
                     </tr>
                     <tr><td colspan="3">&nbsp;</td></tr>
                  </table>
            
      </div>
      <% class_teacher = "" %>
      <% if !@assigned_employee.blank? %>
        <% @assigned_employee.each do |emp| %>
           <% class_teacher = emp.first_name+" "+emp.last_name %>
        <% end %>
       <% end %>
      <div class="student_information">
          <table class="std_info_table" width="100%" cellspacing="0" style="background-color:#e3f2fd">
              <tr>
                  <td class="align-left">Name : <%= @student.full_name %></td>
                  <td class="align-left">Roll : <%= @student.class_roll_no %></td>
                  <td class="align-left">Section : <%= @batch.course.section_name %></td>
                  <td class="align-left">A /C ID : <%= @student.admission_no %></td>
              </tr>
              <tr>
                  
                  <td class="align-left" colspan="4">Class Teacher :
                      <%= class_teacher  %>
                  </td>
              </tr>
          </table>
      </div>
     
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">
              <table id="pdf-table"  width="30%" class="left-table even-table exam-marks" cellspacing="0" style="border-top:none !important;" >
                  <% c = 'even'  %>
                  <tr class="even no-border" style="border:none !important;border-top:none !important;">
                      <td colspan="2" class="no-border" style="border-right:none !important;border-top:none !important;border-left:none !important; color:#111e6c !important;padding:5px !important;font-weight: bold;">Academic Performance</td>
                  </tr>
                  <tr class="even" style="background-color:#e3f2fd">
                    <td class="col-pdf" style="padding:10px !important;"><b><%= "Subject" %></b></td>
                    <td class="col-pdf height-18" style="padding:10px !important;"><b>Grade</b></td>
                  </tr>
              
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% if subjects['no_exams_sjws'].to_i == 1  %>
                        <% next %>
                      <% end %>
                        
                        <%
                          full_mark = 0
                          obtain_mark = 0
                          unless @report_data['report']['exams'].blank?   
                            @report_data['report']['exams'].each do |report| 
                             
                                if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank?
                                  obtain_mark = obtain_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                end
                                if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank?
                                  full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                end
                              
                            end 
                          end 
                        %>
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>" style="background-color:#e3f2fd">

                          <td class="col-pdf no-warp  align-left"  style="padding:10px !important;"><%= subjects['name'] %></td>
                          <% 
                          
                          main_mark = 0
                          if full_mark > 0 && obtain_mark > 0
                            main_mark = (obtain_mark.to_f/full_mark.to_f)*100
                          end  
                          
                          main_mark = main_mark.round()
                          grade = GradingLevel.percentage_to_grade(main_mark, @batch.id)
                           
                          
                          %>
                         
                          <% if !grade.blank? and !grade.name.blank? %>
                            <td class="col-pdf"  style="padding:10px !important;"><b><%= grade.name %></b></td>
                          <% else %>
                            <td class="col-pdf"  style="padding:10px !important;"><b>-</b></td>
                          <% end %> 
                          

                      </tr>
                    <% end %>  
                  <% end %>   
                  <% 
                    group_exams = GroupedExam.find_all_by_connect_exam_id(@connect_exam_obj.id) 
                    @all_subjects = []
                    group_exams.each do |group_exam|
                      allexams = Exam.find_all_by_exam_group_id(group_exam.exam_group_id);
                      allexams.each do |exam|
                        if !@all_subjects.include?(exam.subject.id)
                            @all_subjects << exam.subject.id
                        end
                      end
                    end 
                  %>
                  <% unless @report_data['report']['no_exam_subject_resutl'].blank? %>
                    <% @report_data['report']['no_exam_subject_resutl'].each do |report| %>
                      <%  if @all_subjects.include?(report['id'].to_i) %>
                        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>" style="background-color:#e3f2fd">
                            <td class="col-pdf no-warp  align-left"  style="padding:10px !important;"><%= report['subject_name'] %></td>
                            <td class="col-pdf"  style="padding:10px !important;"><b><%= report['subject_comment'] unless report['subject_comment'].blank? %></b></td>
                        </tr>
                      <% end %>
                    <% end %>
                  <% end %>    

              </table>
              <table id="pdf-table"  width="66%" class="left-table odd-table height-exam" cellspacing="0" style="border-top:none !important;">
                  <tr class="even no-border"  style="border:none !important;border-top:none !important;">
                      <td colspan="6" class="no-border" style="border-right:none !important;border-top:none !important;border-left:none !important; color:#111e6c !important;padding:0px !important;font-weight: bold;">Personal, Emotional & Social Development</td>
                  </tr>
                  <tr class="odd" style="background-color:#e3f2fd">
                      <td class="col-pdf"><%= "Assessment" %></td>
                      <td class="col-pdf width-15">Needs Improvement</td>
                      <td class="col-pdf width-15">Satisfactory</td>
                      <td class="col-pdf width-15">Good</td>
                      <td class="col-pdf width-15">Very Good</td>
                      <td class="col-pdf width-15">Excellent</td> 
                  </tr>
                  
                  <% comment_on_overall_performance = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                     
                      <% wordString_main = "" %>
                  
                      <% @report_data['report']['exams'].each do |report| %>
                         <% if !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank? and !report['result'][report['exam_id']][subjects['id']]['remarks'].blank?  %>
                            <% wordString_main = report['result'][report['exam_id']][subjects['id']]['remarks'] %>
                            <% break %>
                         <% end %>
                      <% end %> 
                      <% wordString = wordString_main.split("|") %>
                      
                        <% subject_groups = get_subject_group(subjects['id'].to_i) %>
                        <% iloop = 0 %>
                        <% subject_groups.each do |group_name| %>
                            <% if group_name.name == "Comment on Overall Performance" %>
                              <% if !wordString.blank? and !wordString[iloop].blank? %>
                                <% comment_on_overall_performance = wordString[iloop].to_i %>
                              <% end %>
                              <% next %>
                            <% end %>
                            
                            <% if !wordString.blank? and !wordString[iloop].blank? %>
                           <tr class="odd">
                               <td class="col-pdf align-left" style="background-color:#e3f2fd"><%= group_name.name %></td>
                               <td class="col-pdf" style="background-color:#FBE4D5" ><%  if wordString[iloop].to_i == 5 %><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/tick-transparent.png")),:width=> '20%' %><% end %></td>
                               <td class="col-pdf"  style="background-color:#FBE4D5"><%  if wordString[iloop].to_i == 4 %><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/tick-transparent.png")),:width=> '20%' %><% end %></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"><%  if wordString[iloop].to_i == 3 %><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/tick-transparent.png")),:width=> '20%' %><% end %></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"><%  if wordString[iloop].to_i == 2 %><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/tick-transparent.png")),:width=> '20%' %><% end %></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"><%  if wordString[iloop].to_i == 1 %><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/tick-transparent.png")),:width=> '20%' %><% end %></td>
                           </tr>
                           <% else %>
                           <tr class="even">
                               <td class="col-pdf align-left" style="background-color:#e3f2fd"><%= group_name.name %></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"></td>
                               <td class="col-pdf" style="background-color:#FBE4D5"></td>
                           </tr>
                           <% end %>
                          <% iloop = iloop+1 %> 
                        <% end %> 
                      
                    <% end %>
                  <% end %>
                  
                 
              </table>

              <div style="width:25.5%; float: left; margin-top: 25px;" >
                <% if @grading_levels.blank? %>
                  <% @grading_levels = GradingLevel.for_batch(@batch.id) %>
                  <% if @grading_levels.blank? %>
                    <% @grading_levels = GradingLevel.default %>
                  <% end %>
                <% end %>
                <%  unless @grading_levels.empty? %>
                  <table id="pdf-table" class="grade_info_table" width="100%" cellspacing="0">
                      <tr class="even">
                          <td style="background-color:#e3f2fd">Grading</td>
                          <td style="background-color:#e3f2fd">System</td>  
                      </tr> 
                      <% prev_score = 0 %>
                      <% @grading_levels.each_with_index do |grade,index| %>
                         <tr class="odd">
                             <td style="padding:9px 2px !important;"><%= grade.name %></td>
                             <td style="padding:9px 2px !important;" class="no-warp">
                                <% if grade.max_score.nil? %> 
                                  <% if grade.min_score.to_i == 0 %>
                                    <&nbsp;<%= '%i%' % prev_score %>
                                  <% else %>
                                      <%= '%i%' % grade.min_score %> 
                                  <% end %>
                                <% else %> 
                                  <%= grade.min_score.to_i.to_s + " - " + grade.max_score.to_i.to_s %> <% if grade.min_score.to_i == 0 %>(Below Average)<% end %>
                                <% end %>
                                <%  prev_score = grade.min_score %>
                            </td>
                          </tr> 
                      <% end %> 

                  </table>

                <% end %> 
              </div>
              <div style="width:71.5%; float: left; margin-left: 3%; margin-top: 5px;" >
                <table id="pdf-table"  width="100%" class="left-table even-table signature"  cellspacing="0" >
                    <tr class="even">
                      <td class="align-left" style="background-color:#e3f2fd">Total Working Days:</td>
                      <td  style="padding:12px !important;"><%= @connect_exam_obj.total_working_days %></td>
                      <td class="align-left" style="background-color:#e3f2fd">Attendance:</td>
                      <td  style="padding:12px !important;"></td>
                    </tr>

                </table>
                <p>&nbsp;</p>
                <table id="pdf-table"  width="100%" class="left-table even-table signature"  cellspacing="0" >
                    <tr class="even">
                        <td class="align-left"  style="background-color:#e3f2fd">Promoted To class:</td>
                        <td  style="padding:10px !important;" width="30%"><%= @connect_exam_obj.promoted_to %></td>
                    </tr>

                </table>
                <%  
                  date_string = @connect_exam_obj.next_session_begins.blank?  ? "" : I18n.l(@connect_exam_obj.next_session_begins,:format=>"%d%m%Y")
                  unless date_string.blank? 
                    date_split = date_string.split("")
                  end
                %>
                  <p>&nbsp;</p>
                <table id="pdf-table"  width="100%" class="left-table even-table signature" style="margin-top:20px !important;" cellspacing="0" >

                    <tr class="even">
                      <% unkless @connect_exam_obj.name.index("Final").blank? %>
                        <td class="width-30 align-left" width="30%" rowspan="2" style="background-color:#e3f2fd;">Next Academic Session Begins on:</td>
                      <% else %>
                        <td class="width-30 align-left" width="30%" rowspan="2" style="background-color:#e3f2fd;">Next Term begins on:</td>
                      <% end %>
                      
                      <td colspan="2" style="padding:5px !important">D</td>
                      <td colspan="2" style="padding:5px !important">M</td>
                      <td colspan="4" style="padding:5px !important">Y</td>
                  </tr>
                  <tr class="even">
                      <% unless date_split.blank? %>
                        <td style="padding:5px !important"><%= date_split[0] %></td>
                        <td style="padding:5px !important"><%= date_split[1] %></td>
                        <td><%= date_split[2] %></td>
                        <td><%= date_split[3] %></td>
                        <td><%= date_split[4] %></td>
                        <td><%= date_split[5] %></td>
                        <td><%= date_split[6] %></td>
                        <td><%= date_split[7] %></td>
                      <% else %>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                      <% end %>
                  </tr>
                </table>
              </div>   

              
              
              <table id="pdf-table" class="evaluation table_99 top-left-center sign_table"   width="99.8%" >
                  <tr class="even border-bottom-1-px">
                      <td class="col-pdf no-border" width="70%"></td>
                      
                       <td class="col-pdf" width="30%">
                        
                              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/principal.png")), :width=>"20%" %>
                      </td>
                  </tr>
                  <tr class="even">
                      <td class="col-pdf no-border" width="70%"></td>
                      <td class="col-pdf" width="30%">
                          Principal
                      </td>

                  </tr>

              </table>


          </div>
      </div>



  </div>

<% end %>

