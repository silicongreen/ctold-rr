<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('online_exam_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('exam_result_text') %></div>
<div id="inner-tab-menu">
  <ul>
   <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('pdf_report')}", {:action => "exam_result_pdf", :id=>@exam_group.id},:target => '_blank' %></li>
  </ul>
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    
  <div class="box">
    <h3><%= @exam_group.subject.name %></h3>
    <% unless @attendance.blank? %>
    <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
      <thead><!-- class="thead-inverse" -->
        <tr>
        <td width="20%"><%= "Serial" %></td>
        <td width="20%"><%= "Roll" %></td>
        <td width="20%"><%= t('student_text') %></td>
        <td width="20%"><%= t('marks') %></td>
        <td width="20%"><%= t('result') %></td>
      </tr>
      </thead>
      <% i = 0 %>
      <tbody>
      <% @attendance.each do |att| %>
        <% i = i+1 %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-2" ><%= i %></td>
          <td class="col-2" ><%= att.student.class_roll_no %></td>
          <td class="col-2" ><%= att.student.full_name %></td>
          <td class="col-2" ><a href="/online_exam/exam_result_details/<%= att.id %>"><% if att.total_score.blank? %>NA<% else  %><%= att.total_score %><% end %>/<%= @exam_group.online_exam_questions.sum('mark') %></a></td>
          <% if att.is_passed %>
          <td class="col-2" ><%= t('passed') %></td>
          <% else %>
          <td class="col-2" ><%= t('failed') %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

      <% else %>
      <p class="flash-msg"><%= t('no_student_attended_this_exam') %></p>
      <% end %>
   
    <div class="extender"></div>
    <% if MultiSchool.current_school.id == 2 %>
      <% unless @attendance.blank? %>
        <% if @exam_group.exam_id == 0 %>
          <% exams = Exam.find_all_by_subject_id(@exam_group.subject_id,:conditions=>["exam_groups.batch_id = ?",@exam_group.batch_id],:include=>[:exam_group]) %>
          <% unless exams.blank? %>
            <% form_for :exam_import, :url=>{:action=>'exam_import'}, :html=> {:id=>'new_student'} do |x| %>
              <div class="col-sm-12" style="padding:0px;">
                <fieldset>
                    <legend>Import Number From This Exam</legend>
                    <%= x.hidden_field :online_exam_group_id , :value=> @exam_group.id %>
                    <div class="form-group col-sm-6 even">
                        <label for="student_admission_no"><%= "Exam" %> <span class="necessary-field">*</span> </label>   
                        <%= select :exam_import, :exam_id, exams.map{|exam| [exam.exam_group.name,exam.id]} %>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="student_admission_no"><%= "Combine Number" %> </label>   
                        <input type="checkbox" value="1" name="combine_number" />
                    </div>
                    <div class="form-group col-sm-6 even">
                        <label for="student_admission_no"><%= "Convert Number" %> </label>   
                        <%= x.text_field :convert_number %>
                    </div>
                    <div class="form-group col-sm-6 even">
                      <%= submit_tag "", :value => "► Import Marks", :class => "btn btn-success", :disable_with => "► #{t('please_wait')}" %>
                    </div>
                </fieldset>
              </div>
              
            <% end %>
          <% end %>
        <% else %>
          <p class="flash-msg">Marks Already Imported To Exam</p>
        <% end %>
      <% end %>
    <% end %>     
  </div></div>
<style>
    #listing tr td.col-2
    {
      width: 20%;
    }
    
 </style>   