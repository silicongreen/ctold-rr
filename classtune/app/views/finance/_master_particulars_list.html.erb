<% unless @particulars.empty? %>
 <div id="form-errors"></div>
  <%=error_messages_for 'finance_fee_particular'%>
  <% fee_category = @particulars.first.finance_fee_category %>
  <h2>Particular List</h2>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('sl_no') %></th>
        <th><%= t('particulars') %></th>
        <th><%= t('particular_category') %></th>
        <th><%= t('student_category')%></th>
        <th><%= t('student_name') %></th>
        <th><%= t('amount') %> ( <%=currency  %> )</th>
        <!--th><%#= t('created_date') %></th-->
        <th></th>
      </tr>
    </thead>
    
    <tbody>
    <% @particulars.each_with_index do |fees,i| %>
      <tr class="<%= cycle("odd","even") %>">
        <td class="col-1"><%= ((@particulars.current_page - 1) * @particulars.per_page) + (i + 1) %></td>
        <td class="col-4">
          <%= shorten_string(fees.name,80) %>
        </td>
        <td class="col-4">
          <% if fees.finance_fee_particular_category_id == 0 %>  
            <span style="font-weight: bold; display: block; text-align: center;">-</span>
          <% else %>
            <%= shorten_string(fees.finance_fee_particular_category.name,80) %>
          <% end %>
        </td>
        <td class="col-3" style="text-align: center;">
          <%  if fees.receiver_type=="StudentCategory"%>
            <%= fees.receiver.name%>
          <% else %> <span style="font-weight: bold; display: block; text-align: center;">-</span> <% end %>
        </td>
        <td class="col-3">
          <%if fees.receiver_type=="Student"%>
            <%= fees.student_name%>
          <% else %> <span style="font-weight: bold; display: block; text-align: center;">-</span> <% end %>
        </td>
        <td class="col-3" style="text-align: right;">
          <%= precision_label fees.amount %>
        </td>
        <!--td class="col-3" style="text-align: center;"><%#= fees.created_at.strftime("%m-%d-%Y") %></td-->
        <td class="col-3">
            <span class="small"><%= link_to_remote  '&#10008;',:confirm=>"#{t('delete_msg')}", :url => { :action => 'master_category_particulars_delete',:id => fees.id, :is_common_particular => @is_common_particular} %></span>
            <% unless @is_common_particular %>
            <%if fees.collection_exist %>
              <span class="small"> <%= link_to_remote "&#9998;", :url => { :action => 'master_category_particulars_edit',:id => fees.id, :is_common_particular => @is_common_particular} %></span>
            <%end%>
            <% else %>  
              <span class="small"> <%= link_to_remote "&#9998;", :url => { :action => 'master_category_particulars_edit',:id => fees.id, :is_common_particular => @is_common_particular} %></span>
            <% end %>  
        </td>
      </tr>
    <% end %>
    </tbody>   
  </table>
  <%= will_paginate @particulars, :renderer => 'RemoteLinkRenderer', :params => {:controller => 'finance', :action => 'master_category_particulars', :id => fee_category.id,:batch_id=>@batch.id} %>
<% else %>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('sl_no') %></th>
        <th><%= t('particulars') %></th>
        <th><%= t('particular_category') %></th>
        <!--th><%#= t('student_category')%></th>
        <th><%#= t('admission_number') %></th-->
        <th><%= t('amount') %> ( <%=currency  %> )</th>
        <th><%= t('created_date') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <tr>
        <td colspan="6"><%= t('no_particulars_to_display') %>!</td>
    </tr>
    </tbody>
  </table>

<% end%>
<style>
    .label-field-pair .label-container {
      padding-top: 0px !important;
    }
</style>
<script>
  j(document).ready(function(){
      j(document).on("keyup","#search_std",function(){
        
          var srch_val = this.value;
          j('.std_name').each(function(){
              var stdid = this.id.replace("std_","");
              var val = j(this).html();
              if ( val.toLowerCase().indexOf(srch_val.toLowerCase()) == -1  )
              {
                  j('.students_box').each(function(){
                      if ( this.value == stdid )
                      {
                         j(this).removeAttr('checked');
                         return ;
                      }
                  });
                  j(this).parent().parent().hide();
              }
              else
              {
                  j('.students_box').each(function(){
                      if ( this.value == stdid )
                      {
                         if ( j(this).prop('checked') == false && j(this).parent().parent().css('display') != 'block')
                         {
                            if ( j('#none_click').val() == 1 )
                            {
                               j(this).removeAttr('checked');
                            }
                            else
                            {
                               j(this).prop('checked', true);
                            }
                         }
                         return ;
                      }
                  });
                  j(this).parent().parent().show();
              }
          });
      });
  });
</script>    