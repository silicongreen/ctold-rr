<% @extra_text = "" %>
<% unless params[:extra].blank? %>
  <% @extra_text = params[:extra].uppercase %>
<% end %>
<% unless @report_data.blank?  or  @report_data['report'].blank? %>
  <div id="page-yield"  class="available_sections1 sis sis-final">
      <div class="section1 row" >
         
              
                  <table id="pdf-table"  width="100%" class="no-border left-clear-both margin-bottom-20"  cellspacing="0" >
                      <tr>
                          <td class="align-left" width="1%">&nbsp;</td>
                          
                          <td class="align-left" width="22%">  
                              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/logo_grayscale.jpg")),:width=> '90%' %>  
                          </td>
                          <td width="74%">
                              <h4 align="center"><font size="7">EUROPEAN STANDARD SCHOOL(ESS)</font></h2><!--  color="#4CAEE3" -->
                              <h4 align="center" style="margin-top:-3px;"><font size="6" color="#000"><%= @batch.name %></font></h4>
                              <!--h4 align="center" style="margin-top:-3px;">
                                <font size="6" color="#000">
                                  Assessment Report Card
                                </font>
                              </h4-->
                              <h4 align="center" style="margin-top:-3px;"><font size="6" color="#000"><%= @connect_exam_obj.name %></font></h4>
                              <% month_number = @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%-m"):@connect_exam_obj.published_date.strftime("%-m") %>
                              <% if @batch.course.course_name == 'VIII' or @batch.course.course_name == 'IX' %>

                              <% else %>
                              <h4 align="center" style="margin-top:-3px;">
                                <font size="6" color="#000">
                                  <% if month_number.to_i>6 %>
                                    Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i+1:@connect_exam_obj.published_date.strftime("%Y").to_i+1 %>
                                  <% else %>
                                    Session : <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i-1:@connect_exam_obj.published_date.strftime("%Y").to_i-1 %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>
                                  <% end %>
                                </font>
                              </h4>
                              <% end %>
                              <h4 align="center" style="margin-top:-3px;">
                                <font size="6" color="#000">
                                  Class : <%= @batch.course.course_name %>
                                </font>
                              </h4>  
                          </td>
                          <td class="align-left" width="3%">&nbsp;</td>
                          
                     </tr>
                     <tr><td colspan="3">&nbsp;</td></tr>
                  </table>
            
      </div>
      <% class_teacher = "" %>
      <% class_teachers = [] %>
      <% if !@assigned_employee.blank? %>
        <% @assigned_employee.each do |emp| %>
           <% class_teachers << emp.first_name+" "+emp.last_name %>
        <% end %>
       <% end %>
      <% unless class_teachers.blank? %>
        <% class_teacher = class_teachers.join(", ") %>
      <% end %>
      <div class="student_information">
          <table class="std_info_table" width="100%" cellspacing="0">
              <tr>
                  <td class="align-left">Name : <%= @student.full_name %></td>
                  <td class="align-left">Roll : <%= @student.class_roll_no %></td>
                  <% unless @batch.course.section_name.blank? %>
                    <td class="align-left">Section : <%= @batch.course.section_name %></td>
                  <% end %>
                  <td class="align-left">A /C ID : <%= @student.admission_no %></td>
              </tr>
              <tr>
                  
                  <td class="align-left" <% unless @batch.course.section_name.blank? %>colspan="4"<% else %>colspan="3"<% end %>>Class Teacher :
                      <%= class_teacher  %>
                  </td>
              </tr>
          </table>
      </div>
     
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">
              <table id="pdf-table"  width="100%" class="left-table even-table exam-marks" cellspacing="0">
                  <% c = 'even'  %>
                 
                  <% total_mark_of_allexam = 0 %>
                 
                  <tr class="even">
                      <td class="col-pdf" rowspan="2"><b><%= "Subject" %></b></td>
                      <td colspan="5" ><b><%= @extra_text %> ACADEMIC PERFORMANCE</b></td>
                  </tr>
                  <tr class="even">
                      <td class="col-pdf"><b><%= "First Quarter (Out of 25)" %></b></td>
                      <td class="col-pdf"><b><%= "Second Quarter (Out of 25)" %></b></td>
                      <td class="col-pdf"><b><%= "Half Yearly Exam (Out of 50)" %></b></td>
                      <td class="col-pdf"><b><%= "Total Marks (Out of 100)" %></b></td>
                      <td class="col-pdf"><b><%= "Grade" %></b></td>
                  </tr>
                  
                  <% total_marks = 0 %>
                  <% subject_count = 0 %>
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                    <%
                      has_mark = 0
                       unless @report_data['report']['exams'].blank?   
                            @report_data['report']['exams'].each do |report| 
                             
                                if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank?
                                  has_mark = has_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                end
                            end
                       end  
                  
                    %>
                      <% if subjects['no_exams_sjws'].to_i == 1 or has_mark == 0 %>
                        <% next %>
                      <% end %>
                        <% subject_count = subject_count+1 %>
                        
                      <tr class="odd" >

                          <td class="col-pdf no-warp  align-left"  style="padding:5px !important;"><%= subjects['name'] %></td>
                          <%
                          full_mark = 0
                          obtain_mark = 0
                          first_quarter_mark = 0
                          first_quarter_full_mark = 0
                          second_quarter_mark = 0
                          second_quarter_full_mark = 0
                          half_quarter_mark = 0
                          half_quarter_full_mark = 0
                          unless @report_data['report']['exams'].blank?   
                            @report_data['report']['exams'].each do |report| 
                                if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank?
                                  if report['exam_category'] == '1' && report['quarter'] == '5'
                                    first_quarter_mark = first_quarter_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                    first_quarter_full_mark = first_quarter_full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                  elsif report['exam_category'] == '3' && report['quarter'] == '5'
                                    first_quarter_mark = first_quarter_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                    first_quarter_full_mark = first_quarter_full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                  elsif report['exam_category'] == '1' && report['quarter'] == '2'
                                    second_quarter_mark = second_quarter_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                    second_quarter_full_mark = second_quarter_full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                  elsif report['exam_category'] == '3' && report['quarter'] == '2'
                                    second_quarter_mark = second_quarter_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                    second_quarter_full_mark = second_quarter_full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                  elsif report['exam_category'] == '3' && report['quarter'] == '3'
                                    half_quarter_mark = half_quarter_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f
                                    half_quarter_full_mark = half_quarter_full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                                  end
                                end
                              end
                            end
                          first_quarter_out_of_100 = 0
                          second_quarter_out_of_100 = 0
                          half_quarter_out_of_100 = 0
                          if first_quarter_mark > 0 && first_quarter_full_mark > 0
                            first_quarter_out_of_100 = (first_quarter_mark.to_f/first_quarter_full_mark.to_f)*100
                          end

                          if second_quarter_mark > 0 && second_quarter_full_mark > 0
                            second_quarter_out_of_100 = (second_quarter_mark.to_f/second_quarter_full_mark.to_f)*100
                          end

                          if half_quarter_mark > 0 && half_quarter_full_mark > 0
                            half_quarter_out_of_100 = (half_quarter_mark.to_f/half_quarter_full_mark.to_f)*100
                          end

                          if first_quarter_out_of_100 > 0
                            first_quarter_out_of_25 = (first_quarter_out_of_100.to_f/100)*25
                          else
                            first_quarter_out_of_25 = 0
                          end

                          if second_quarter_out_of_100 > 0
                            second_quarter_out_of_25 = (second_quarter_out_of_100.to_f/100)*25
                          else
                            second_quarter_out_of_25 = 0
                          end

                          if half_quarter_out_of_100 > 0
                            half_quarter_out_of_50 = (half_quarter_out_of_100.to_f/100)*50
                          else
                            half_quarter_out_of_50 =  0
                          end
                        %>
                        <% if first_quarter_out_of_25.to_i > 0 %>
                        <td class="col-pdf"><%= first_quarter_out_of_25.round.to_i %></td>
                        <% else %>
                        <td class="col-pdf">-</td>
                        <% end %>
                        <% if second_quarter_out_of_25.to_i > 0 %>
                        <td class="col-pdf"><%= second_quarter_out_of_25.round.to_i %></td>
                        <% else %>
                        <td class="col-pdf">-</td>
                        <% end %>
                        <% if half_quarter_out_of_50.to_i > 0 %>
                        <td class="col-pdf"><%= half_quarter_out_of_50.round.to_i %></td>
                        <% else %>
                        <td class="col-pdf">-</td>
                        <% end %>

                        <%
                          f_mark = 100
                          o_mark = first_quarter_out_of_25.round.to_i+second_quarter_out_of_25.round.to_i+half_quarter_out_of_50.round.to_i
                          main_mark = 0
                          if f_mark > 0 && o_mark > 0
                            main_mark = (o_mark.to_f/f_mark.to_f)*100
                          end  
                          
                          main_mark = main_mark.round()
                          grade = GradingLevel.percentage_to_grade(main_mark, @batch.id)
                        %>  
                        <% if main_mark.to_i > 0 %>
                        <td class="col-pdf"><%= main_mark.round.to_i %></td>
                        <% else %>
                        <td class="col-pdf">-</td>
                        <% end %>

                        <% if !grade.blank? and !grade.name.blank? %>
                          <td class="col-pdf" style="padding:5px !important;"><b><%= grade.name %></b></td>
                        <% else %>
                          <td class="col-pdf" style="padding:5px !important;"><b>-</b></td>
                        <% end %> 

                        <%
                          if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank?
                            full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i
                          end
                        %>                      
                      </tr>
                    <% end %>  
                  <% end %>   
                  <%
                    percent = 0
                    if total_marks > 0 && subject_count > 0
                      percent = total_marks.to_f/subject_count.to_f
                    end
                    group_exams = GroupedExam.find_all_by_connect_exam_id(@connect_exam_obj.id) 
                    @all_subjects = []
                    group_exams.each do |group_exam|
                      allexams = Exam.find_all_by_exam_group_id(group_exam.exam_group_id);
                      allexams.each do |exam|
                        if !@all_subjects.include?(exam.subject.id)
                            @all_subjects << exam.subject.id
                        end
                      end
                    end 
                  %>
                  <% unless @report_data['report']['no_exam_subject_resutl'].blank? %>
                    <% @report_data['report']['no_exam_subject_resutl'].each do |report| %>
                      <%  if @all_subjects.include?(report['id'].to_i) %>
                        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                            <td class="col-pdf no-warp  align-left"><%= report['subject_name'] %></td>
                            <td class="col-pdf"></td>
                            <td class="col-pdf"></td>
                            <td class="col-pdf"><b><%= report['subject_comment'] unless report['subject_comment'].blank? %></b></td>
                        </tr>
                      <% end %>
                    <% end %>
                  <% end %>    

              </table>
              <p>&nbsp;</p>
              
              
              <table id="pdf-table" class="evaluation table_99 top-left-center sign_table"  width="99.8%" >
                  <tr class="even border-bottom-1-px">
                       <td class="col-pdf" width="40%" style="text-align:left !important;">
                        
                              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/ess/principal.png")), :width=>"60%" %>
                      </td>
                      <td class="col-pdf no-border" width="60%" rowspan="2">
                      <% if @grading_levels.blank? %>
                      <% @grading_levels = GradingLevel.for_batch(@batch.id) %>
                      <% if @grading_levels.blank? %>
                        <% @grading_levels = GradingLevel.default %>
                      <% end %>
                    <% end %>
                    <%  unless @grading_levels.empty? %>
                      <% if @batch.course.course_name == 'VIII' or @batch.course.course_name == 'IX' %>

                      <% else %>
                      <div style="border: 1px solid #000; width: 50%; padding: 20px; float: right;">
                      <p style="padding: 0; margin: 0"><font size="3"><b>Grading System</b></font></p>
                      <table id="pdf-table" class="grade_info_table" width="100%" cellspacing="0">
                          <tr class="even" cellspacing="0" cellpadding="1">
                              <td class="small" style="font-size: 10px;"><font size="3"><b>Marks Range</b></font></td>
                              <td class="small" style="font-size: 10px;"><font size="3"><b>Grade</b></font></td>  
                          </tr> 
                          <% prev_score = 0 %>
                          <% @grading_levels.each_with_index do |grade,index| %>
                             <tr class="odd">
                            <td class="small">
                                <% if grade.max_score.nil? %> 
                                  <% if grade.min_score.to_i == 0 %>
                                    <font size="3"><&nbsp;<%= '%i%' % prev_score %></font>
                                  <% else %>
                                    <font size="3"><%= '%i%' % grade.min_score %></font> 
                                  <% end %>
                                <% else %> 
                                  <% if grade.min_score.to_i == 0 %>
                                    <font size="3"><&nbsp;<%= '%i%' % prev_score %></font>
                                  <% else %>
                                    <font size="3"><%= grade.min_score.to_i.to_s + " - " + grade.max_score.to_i.to_s+" %" %></font>
                                  <% end %>
                                <% end %>
                                <%  prev_score = grade.min_score.to_i %>
                            </td>
                            <td class="small"><font size="3"><%= grade.name %></font></td>
                              </tr> 
                          <% end %> 
                
                      </table>
                      </div>
                      <% end %>
                    <% end %> 
                      </td>
                  </tr>
                  <tr class="even">
                      
                      <td class="col-pdf align-left" style="text-align:left !important;" width="40%">
                          <b><pre>MD. MORSHEDUL ISLAM
Principal
European Standard School (ESS)</pre></b>
                      </td>

                  </tr>

              </table>


          </div>
      </div>



  </div>

<% end %>

