<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('event_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('confirmation') %></div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <div class="detail-box">
    <div class="label themed_text">  <%= t('title') %> :</div>
    <div class="description">
      <%= @event.title %>
    </div>
    <div class="extender"></div>
    <div class="label themed_text"><%= t('description') %>:</div>
    <div class="description">
      <%= @event.description %>
    </div>
    <div class="extender"></div>
    <div class="label themed_text">
      <%= t('start_date') %> :</div>
    <div class="description">
      <%= @event.start_date %>
    </div>
    <div class="extender"></div>
    <div class="label themed_text"><%= t('end_date') %>:</div>
    <div class="description">
      <%= @event.end_date %>
    </div>
    <div class="extender"></div>
  </div>


  <div class="other-events">
    <div class="head"><%= t('other_event') %></div>
    <% if  @other_events.empty? %>
      <%= t('no_event_scheduled') %>...
    <% end %>

    <% unless @other_events.empty? %>
      <% if "#{@event.start_date.year}-#{@event.start_date.month}-#{@event.start_date.day}".to_date == "#{@event.end_date.year}-#{@event.end_date.month}-#{@event.end_date.day}".to_date %>
        <% @other_events.each do |h| %>
          <% if "#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date == "#{h.end_date.year}-#{h.end_date.month}-#{h.end_date.day}".to_date %>
            <% if "#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date == "#{@event.start_date.year}-#{@event.start_date.month}-#{@event.start_date.day}".to_date %>
              <div class="date"><%= "#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date %></div><div class="title"><%= h.title %></div>
            <% end %>
          <% else %>
            <% ("#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date.."#{h.end_date.year}-#{h.end_date.month}-#{h.end_date.day}".to_date).each do |d| %>
              <% if d == "#{@event.start_date.year}-#{@event.start_date.month}-#{@event.start_date.day}".to_date %>
                <div class="date"> <%= d %></div><div class="title"><%= h.title %></div>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <% ("#{@event.start_date.year}-#{@event.start_date.month}-#{@event.start_date.day}".to_date.."#{@event.end_date.year}-#{@event.end_date.month}-#{@event.end_date.day}".to_date).each do |er| %>
          <% @other_events.each do |h| %>
            <% if "#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date == "#{h.end_date.year}-#{h.end_date.month}-#{h.end_date.day}".to_date %>
              <% if "#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date == er %>
                <div class="date"> <%= "#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date %></div><div class="title"><%= h.title %></div>
              <% end %>
            <% else %>
              <% ("#{h.start_date.year}-#{h.start_date.month}-#{h.start_date.day}".to_date.."#{h.end_date.year}-#{h.end_date.month}-#{h.end_date.day}".to_date).each do |d| %>
                <% if d == er %>
                  <div class="date"><%= d %></div><div class="title"><%= h.title %></div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>



  </div>
  <div class="extra">
    <% if @event.is_common == false %>

      <div><%= render :partial=>"event_batch" %></div>

      <% @config = Configuration.available_modules%>
      <div id="select-option"></div>
      <% if @config.include?("HR") %>
        <div><%= render :partial=>"event_department" %></div>
      <% end %>

      <div id="select-options"></div>


    <% else %>

      => <%= t('common_to_all_message') %><br/><br/>

    <% end %>

    <% unless @command == 'edit' %>
      <%= link_to "► #{t('confirm')}",{ :action=>"confirm_event",:id=>@event.id}, :class=> 'create user_button'%>  
      <%#= link_to "► Save As Draft",{ :action=>"confirm_event",:id=>@event.id,:is_published=>0}, :class=> 'create user_button'%>  
      <%= link_to "► #{t('cancel')}", { :action=>"cancel_event" , :id=>@event.id },  :class=> 'create user_button' %>
    <% else %>
      <%= link_to "► #{t('confirm')}",{ :action=>"confirm_event",:id=>@event.id}, :class=> 'create user_button'%> 
      <% if @event.is_published == 0 %>
        <%= link_to "► Confirm And Publish",{ :action=>"confirm_event",:id=>@event.id,:is_published=>1}, :class=> 'create user_button'%>  
      <% end %>
      
      <%= link_to "►  #{t('cancel')}", { :action=>"edit_event" , :id=>@event.id },  :class=> 'create user_button' %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  function select_batch_group(obj)
  {
    var batch_group_val = j(obj).val();
    
    if ( j(obj).prop('checked') )
    {
      j(".batch_group_" + batch_group_val).each(function(){
        this.checked = true;
        var course_group_val = this.id;
        
        if ( course_group_val.indexOf('select_options') == -1 )
        {
          j(".course_group_" + batch_group_val + "_" + course_group_val).each(function(){
              this.checked = true;

              j(".section_data_" + batch_group_val + "_" + course_group_val).addClass('select_section');
              j(".section_data_" + batch_group_val + "_" + course_group_val).removeClass('section_data');
          });
        }
        
        //j(".batch_section_data_" + batch_group_val).addClass('select_section');
        //j(".batch_section_data_" + batch_group_val).removeClass('section_data');
      });
    }
    else
    {
      j(".batch_group_" + batch_group_val).each(function(){
        var course_group_val = this.id;
        this.checked = false; 
        
        if ( course_group_val.indexOf('select_options') == -1 )
        {
          j(".course_group_" + batch_group_val + "_" + course_group_val).each(function(){
              this.checked = false;

              j(".section_data_" + batch_group_val + "_" + course_group_val).removeClass('select_section');
              j(".section_data_" + batch_group_val + "_" + course_group_val).addClass('section_data');
          });
        }
      });
    }
  }
  
  function highlight_selected_section()
  {
    j(".section_data").addClass('select_section');
    j(".section_data").removeClass('section_data');
  }
  
  function remove_highlight_selected_section()
  {
    j(".select_section").addClass('section_data');
    j(".select_section").removeClass('select_section');
  }
   
  function select_course_group(obj, batch_group_val)
  {
    var course_group_val = j(obj).val();
    if ( j(obj).prop('checked') )
    {
      j(".course_group_" + batch_group_val + "_" + course_group_val).each(function(){
        this.checked = true;
        
        j(".section_data_" + batch_group_val + "_" + course_group_val).addClass('select_section');
        j(".section_data_" + batch_group_val + "_" + course_group_val).removeClass('section_data');
      });
    }
    else
    {
      j(".course_group_" + batch_group_val + "_" + course_group_val).attr("checked", false);
      j(".section_data_" + batch_group_val + "_" + course_group_val).removeClass('select_section');
      j(".section_data_" + batch_group_val + "_" + course_group_val).addClass('section_data');
    }
  }
  
  function highlight_checkbox(obj, course_group_val)
  {
    if ( j(obj).hasClass('select_section') )
    {
      j(".batch_dt_" + course_group_val).attr("checked", false);
      j(obj).removeClass('select_section');
      j(obj).addClass('section_data');
    }
    else
    {
      j(".batch_dt_" + course_group_val).each(function(){
          this.checked = true;
      });
      
      j(obj).addClass('select_section');
      j(obj).removeClass('section_data');
    }
  }
</script>
