<div id="sms_employee" style="float: left;">
  <% if @employees.present? %>
    <input type="hidden" name="none_click" id="none_click" value="0" />
    <div class="department_select_box">
      <div class="label-field-pair">
          <div class="label-container"><label> <%= t('select_employees') %><span class="necessary-field">*</span>:</label></div>
          <div class="fee_category_scroll" style="background: #fff; height: 300px; max-height: 300px;">
            <div class="sel-list" style="padding-bottom: 5px; width: 100%;">
                <div style="display: inline-block; float: left; width: 60%;">
                  <input type="text" name="search_emp" id="search_emp" style="background: #fff;" />
                </div>  
                <div style="display: inline-block; float: right; width: 35%; text-align: right; padding-right: 10px;">
                  <%= link_to_function t('all'), "$('none_click').value = 0; $$('input.employees_box').each(function(checkbox) { checkbox.checked = true; });" %>,
                  <%= link_to_function t('none'), "$('none_click').value = 1; $$('input.employees_box').each(function(checkbox) { checkbox.checked = false; });" %>
                </div>
                <div style="clear: both;"></div>
            </div>
            <% @employees.each do |s| %>

              <div class="each_department" style="padding-bottom: 8px;">
                <% checked = true %>
                  <div class="checkbox_inline"><%= check_box_tag "employees[]", s.user_id, checked, :class=>'employees_box' %></div>
                  <div class="checkbox_label"><label id="emp_<%= s.user_id %>" class="emp_num"><%= s.employee_number %></label></div>
              </div>

            <% end %>
          </div>
      </div>
    </div>
  <% end %>
</div>

