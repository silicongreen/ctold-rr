<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/select2.min.css">
<link rel="stylesheet" href="/stylesheets/select2-finance.css">

<%= javascript_include_tag 'select2.full.min.js' %>
<%= javascript_include_tag 'select2-finance.js' %>

<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('fees_defaulters_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('students_fee_dues') %></div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
  <% form_for :fees_defaulters do %>
    <div id="batchs1">
    <% form_for :fees_submission_batch do %>
      <div class="label-field-pair" id="hide1">
        <div class="label-container"><label><%= t('select_a_batch') %></label></div>
        <div class="input-container"> <%= select :fees_defaulters, :batch_id, @batches.map { |c| [c.full_name, c.id] },
            {:prompt => "#{t('select_a_batch')}"},
            {:class => "select2-combo", :onChange => "#{remote_function(:url => {:action => "update_fees_collection_dates_defaulters"},
            :with => "'batch_id='+value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader');load_select();")}", :autocomplete => "off", :style=>"width: 90% !important; float: left;"
          }%>
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none; " ) %>  
        </div>
        <%#=link_to_function "show inactive batches","show_inactive_batches()",{:class=>'user_button'}%>

      </div>
        
      <div class="label-field-pair">
        <div class="label-container"><label><%= t('select_fee_collection_date') %></label></div>
        <div class="input-container">
          <div id="fees_collection_dates">
            <%= render :partial => "fees_collection_dates_defaulters"  %>
          </div>
        </div>
      </div>
    <% end %>
    <div id="student"> </div>

    <div id="modal-box" style="display:none;"></div>
  </div>
  <%  end %>  
</div>
<style>
  .label-field-pair .label-container {
    width: 37%;
    padding-top: 4px;
    float: left;
  }
</style>
