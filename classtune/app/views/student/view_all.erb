<div id="page-yield" style="width:130%; margin-left:-18%; ">
  <% form_for(@student, :url => {:action=> 'download_student_list'}, :html=> {:id=>'new_student'}) do |s| %>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <% if Batch.active.find(:all, :group => "name").length > 1  %>
      <% batchlist = [] %>

      <div class="form-group col-sm-6">
        <label for="student_grade"><%= t('shift_label') %></label>
        <select id="batch_name" name="batch_name" onchange="filterbatch(this)">
          <option value="" selected="selected">Select a Shift</option>
          <% Batch.active.find(:all, :group => "name").each do |batch| %>
            <% batchsplit = batch.name.split(" ") %>
            <% unless batchlist.include?(batchsplit[0]) %>
              <% batchlist << batchsplit[0]  %>
              <option value="<%= batchsplit[0] %>"><%= batchsplit[0] %></option>
            <% end %>
          <% end %>
        </select>
      </div>
      <div class="form-group col-sm-6">
        <label for="student_grade"><%= "Version" %></label>
        <select id="version_name" name="version_name" onchange="filterversion(this)">
          <% version_array = [] %>
          <option value="" selected="selected">Select a Version</option>
          <% Batch.active.find(:all, :group => "name").each do |batch| %>

            <%
              batchsplit = batch.name.split(" ")
              version = ""
              unless batchsplit[1].blank?
                version = batchsplit[1]
              end
              unless batchsplit[2].blank?
                version = version+" "+batchsplit[2]
              end

            %>
            <% if !version_array.include?(version) && !version.blank? %>
              <% version_array << version %>
              <option value="<%= version %>"><%= version %></option>
            <% end %>
          <% end %>
        </select>
      </div>
    <% end %>

    <div class="form-group col-sm-6">
      <label for="student_grade"><%= "Class" %></label>
      <select id="class_name" name="class_name" onchange="filterclass(this)">
        <option value="" selected="selected">Select a Class</option>
        <% Course.active.find(:all, :group => "course_name").each do |course| %>
          <option value="<%= course.course_name %>"><%= course.course_name %></option>
        <% end %>
      </select>
    </div>
    <input type="hidden" name="pdf" id="pdf" value="0" />

    <div class="form-group col-sm-6">
      <label for="student_grade"><%= "Session" %></label>
      <select id="session_name" name="session_name" onchange="filtersession(this)">
        <option value="" selected="selected">Select a Session</option>
        <% Course.active.find(:all, :group => "session").each do |course| %>
          <% unless course.session.blank?  %>
            <option value="<%= course.session %>"><%= course.session %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div class="form-group col-sm-6">
      <label for="student_grade"><%= "Group" %></label>
      <select id="group_name" name="group_name" onchange="filtergroup(this)">
        <option value="" selected="selected">Select a Group</option>
        <% Course.active.find(:all, :group => "`group`").each do |course| %>
          <% unless course.group.blank?  %>
            <option value="<%= course.group %>"><%= course.group %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div id="studentSection">
      <div class="form-group col-sm-6">
        <label for="student_grade"><%= "Section" %></label>
        <select id="section_name" name="section_name" class="js-example-basic-single" onchange="filtersection(this)">
          <option value="" selected="selected">Select a Section</option>
          <% Course.active.find(:all, :group => "`section_name`").each do |course| %>
            <% unless course.section_name.blank?  %>
              <option value="<%= course.section_name %>"><%= course.section_name %></option>
            <% end %>
          <% end %>
        </select>
      </div>
    </div>

    <div class="form-group col-sm-6">
      <label for="student_grade"><%= "Category" %></label>
      <select id="category_name" name="category_name" onchange="filtercategory(this)">
        <option value="" selected="selected">Select a Category</option>
        <% StudentCategory.active.find(:all).each do |cat| %>
          <% unless cat.name.blank?  %>
            <option value="<%= cat.name %>"><%= cat.name %></option>
          <% end %>
        <% end %>
      </select>
    </div>




    <div id="students" style="float:left; width:100%;">
      <div id="image_loading" style="display:none;"><%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_2" ) %></div>
      <table class="mdl-data-table" id="hr_report" cellspacing="0" width="100%" style="float:left; clear:both; margin:10px 0px;">
        <thead>
        <th data-orderable="false"><%= "Photo" %></th>
        <th data-orderable="false"><%= "ID" %></th>
        
        <th data-orderable="false"><%= "Roll" %></th>
        <th data-orderable="false"><%= "Name" %></th>
        <th data-orderable="false"><%= "Blood Group" %></th>
        <th data-orderable="false"><%= "Category" %></th>
        <th data-orderable="false"><%= "Class" %></th>
        <th data-orderable="false"><%= "Section" %></th>
        <th data-orderable="false"><%= "Shift" %></th>
        
        <th data-orderable="false"><%= "Session" %></th>
        <th data-orderable="false"><%= "Version" %></th>
        <th data-orderable="false"><%= "Group" %></th>
        <th data-orderable="false"><%= "Password" %></th>
        <th data-orderable="false"><%= "Mobile" %></th>
        <th data-orderable="false"><%= "Action" %></th>
        </thead>
      </table>
    </div>
    <div id="students" style="float:left; width:100%;">
      <%= s.submit "â–º Download", :id=> 'submit_button'%>
      <input style="margin-left: 10px;"
             name="commit" onclick="j('#pdf').val('1');j('#new_student').attr('target','_blank');if (window.hiddenCommit) { window.hiddenCommit.setAttribute('value', this.value); }else { hiddenCommit = document.createElement('input');hiddenCommit.type = 'hidden';hiddenCommit.value = this.value;hiddenCommit.name = this.name;this.form.appendChild(hiddenCommit); } result = (this.form.onsubmit ? (this.form.onsubmit() ? this.form.submit() : false) : this.form.submit());if (result == false) { this.value = this.getAttribute('originalValue');this.disabled = false; }return result;" type="submit"  value="PDF Download">

      <input style="margin-left: 10px;"
             name="commit" onclick="j('#new_student').attr('action','download_student_family_list');if (window.hiddenCommit) { window.hiddenCommit.setAttribute('value', this.value); }else { hiddenCommit = document.createElement('input');hiddenCommit.type = 'hidden';hiddenCommit.value = this.value;hiddenCommit.name = this.name;this.form.appendChild(hiddenCommit); } result = (this.form.onsubmit ? (this.form.onsubmit() ? this.form.submit() : false) : this.form.submit());if (result == false) { this.value = this.getAttribute('originalValue');this.disabled = false; }return result;" type="submit"  value="Download Student Family">
    </div>
  <% end %>

</div>
<script>
    var oDataTable;
    var jq = jQuery.noConflict();
    function send_sms(student_id)
    {
        var image_loading = jq('#image_loading').html()
        jq('#student_'+student_id).html(image_loading);
        jq.get( "/student/send_sms_username_password/"+student_id, function( data ) {
            jq('#student_'+student_id).html("<font color='green'>Message Send</font>");
        });
    }
    jq(document).ready(function() {
        jq('.js-example-basic-single').select2();
        var value = jq("#class_name").val();
        if ( value != null )
        {
            new Ajax.Request('/student/get_section_by_class/'+value,
                {
                    asynchronous:true,
                    evalScripts:true
                }
            );
        }
        oDataTable = jq('#hr_report').DataTable( {
            processing: true,
            serverSide: true,
            "info": false,
            "pageLength": 100,
            ajax: {
                url: "/student/get_student_ajax",
                type: 'POST'
            },
            columns: [
                { "data": "p_image" },
                { "data": "admission_no" },
                { "data": "roll_no" },
                { "data": "student_name" },
                { "data": "blood_group" },
                { "data": "category" },
                { "data": "class" },
                { "data": "section" },
                { "data": "batch" },
                { "data": "session" },
                { "data": "version" },
                { "data": "group" },
                { "data": "password" },
                { "data": "sms_number" },
                { "data": "send_sms" }

            ]
        });

        var id = '<%=params[:id] %>';
        var id2 = '<%=params[:id2] %>';
        if(id == 'cat'){
            if(id2!=''){
                jq("#category_name").val(id2)
                oDataTable.column( 8 ).search( id2 ).draw();
            }
        }

    });

    function filterbatch(data)
    {
        var value = jq("#batch_name").val();
        if(jq("#version_name").val())
        {
            value = value+" "+jq("#version_name").val()
        }
        oDataTable.column( 3 ).search( value ).draw();

    }
    function filterversion(data)
    {
        var value = jq("#version_name").val();
        if(jq("#batch_name").val())
        {
            value = jq("#batch_name").val()+" "+value
        }
        oDataTable.column( 3 ).search( value ).draw();

    }
    function filterclass(data)
    {
        var value = jq("#class_name").val();
        if ( value != null )
        {
            new Ajax.Request('/student/get_section_by_class/'+value,
                {
                    asynchronous:true,
                    evalScripts:true
                }
            );
        }
        oDataTable.column( 4 ).search( value ).draw();

    }
    function filtersession(data)
    {
        var value = jq("#session_name").val();
        oDataTable.column( 6 ).search( value ).draw();

    }
    function filtergroup(data)
    {
        var value = jq("#group_name").val();
        oDataTable.column( 7 ).search( value ).draw();

    }
    function filtersection(data)
    {
        var value = jq("#section_name").val();
        oDataTable.column( 5 ).search( value ).draw();

    }
    function filtercategory(data)
    {
        var value = jq("#category_name").val();
        oDataTable.column( 8 ).search( value ).draw();

    }
</script>

