<div class="box">
  <% form_for :upload_syllabus, :html => { :multipart => true }, :url => {:action => 'upload_syllabus_edit'} do |f| %>
    <%= error_messages_for 'upload_syllabus', :header_message => nil %>
    <%= hidden_field_tag :id, @upload_syllabus.id %>
    <div class="label-field-pair">
      <label>Title : </label>
      <div class="text-input-bg"><%= f.text_field :title, :value => @upload_syllabus.title %>
      </div>
    </div>
    <div class="label-field-pair" >
        <label >Attach a File</label>
        <div  class="text-input-bg" id="assignment-attachment"><%= f.file_field  :attachment %></div>
    </div>
    <%= submit_tag "", :value => "► #{t('save')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>

  <% end %>
</div>
