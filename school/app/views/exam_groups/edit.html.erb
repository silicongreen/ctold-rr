<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('edit_exam_group') %></div>

</div>
<div id="page-yield">
    <div class="bread_crumb">
         <%= link_to t('course_text'), courses_path %> <div class = "bread-crumb-separator"> > </div>
        <%= link_to @course.full_name, @course %> <div class = "bread-crumb-separator"> > </div>
        <%= link_to "#{t('batch')}  #{@batch.name}" %> <div class = "bread-crumb-separator"> > </div>
        <%= link_to "#{t('exam_text')}", batch_exam_groups_path(@batch) %> <div class = "bread-crumb-separator"> > </div>
      <%= t('edit_exam') %>
        </div>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">


    <% form_for [@batch, @exam_group] do |f| %>

      <%= f.error_messages %>


      <div class="label-field-pair">
        <label for="exam_name"><%= f.label "#{t('new_text')}" %></label>
        <div class="text-input-bg"> <%= f.text_field :name %></div>
      </div>
      <div id="sub_button"><%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %></div>



    <% end %>

  </div></div>
