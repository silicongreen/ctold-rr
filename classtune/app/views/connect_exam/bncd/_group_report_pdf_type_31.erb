
  
  <div id="page-yield"  class="available_sections1 baf_shaheen">
      <%= render  :partial=>"/connect_exam/bncd/header" %>
     
      <table id="pdf-table" class="tbl-lign-left" width="52%" cellspacing="0">
          <tr class="even">
              <td class="align-right col-pdf" width="20%">Student ID 2</td>
              <td colspan="3" class="align-left"><b><%= @student.admission_no %></b></td>
          </tr>
          <tr class="odd">
              <td class="align-right col-pdf col-pdf" width="20%">Name </td>
              <td colspan="3" class="align-left"><%= @student.full_name.upcase %></td>
          </tr>
          <tr class="even">
              <td class="align-right" width="20%">Roll </td>
              <td colspan="3" class="align-left"><%= @student.class_roll_no %></td>
          </tr>
          <tr class="odd">
              <td class="align-right col-pdf" width="20%">Class/Program </td>
              <td colspan="3" class="align-left"><b><%= @batch.course.course_name %></b></td>
          </tr>
           
          <tr class="even">
              <td class="align-right col-pdf" width="20%">Section </td><td class="align-left"><%= @batch.course.section_name %></td>
              <% batch_split = @batch.name.split(" ") %>
              <td class="align-right col-pdf" width="20%" >Shift </td><td class="align-left"><%= batch_split[0] %></td>   
          </tr>
          <tr class="even">
              <% group_split = @batch.course.group.split(" ") %>
              <% unless group_split[2].blank? %>
                <% group_split[0] = group_split[0]+" "+group_split[1] %>
              <% end %>
              <% 
                if !@batch.course.group.blank? && !@batch.course.group.index("--").nil? 
                  group_split[0] = ""
                end 
              %>
              <td class="align-right col-pdf" width="20%">Group </td>
              <td class="align-left"><%= group_split[0] %></td>
              <td class="align-right col-pdf" width="20%" >Category </td>
              <td class="align-left"><%= @student.student_category.name unless @student.student_category.blank? %></td>
          </tr>
      </table>
      <div class="grade_information">
          <%= render  :partial=>"/connect_exam/bncd/gradding_level" %>
      </div>
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">

              <table id="pdf-table" class="top-left-center" width="99.8%" cellspacing="0">
                  <% c = 'even'  %>
                  <% total_mark_of_allexam = 0 %>
                  <% full_mark_of_allexam = 0 %>
                  <% total_grade_of_allexam = 0 %>
	          <% quiz_test = 0 %>
                  <tr class="even header-shade">
                      <td class="col-pdf no-warp  align-left-baf" rowspan="2"><b><%= "SUBJECTS" %></b></td>
                      <td class="col-pdf" colspan="2"><b>Main Mark I</b></td>
                      <td class="col-pdf" colspan="2"><b>Main Mark II</b></td>
                      <td class="col-pdf" rowspan="2"><b>Total(100)</b></td>
                      <td class="col-pdf" rowspan="2"><b>Letter Grade</b></td>
                      <td class="col-pdf" rowspan="2"><b>Grade Point</b></td> 
                  </tr>
                  <tr class="even header-shade">
                      <td class="col-pdf"><b>CQ</b></td>
                      <td class="col-pdf"><b>MCQ</b></td>
                      <td class="col-pdf"><b>CQ</b></td>
                      <td class="col-pdf"><b>MCQ</b></td>
                  </tr>
                  
                  <% sl = 0 %>
                  <% failed = false %>
                  <% unless @report_data['report']['subjects'].blank? %>
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% total_mark = 0 %>
                      <% obtain_mark = 0 %>
                      <% subjectdata = Subject.find(subjects['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>@student.id.to_s,:subject_id=>subjects['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                         <% next %>
                      <% end %>
                      <% sl = sl+1 %>
                      <% subject_failed = false %>
		                  <% is_mcq = false %>

                      <%
                      mcq = 0
                      mcq_total = 0
                      cq = 0
                      cq_total = 0
                      %>

                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                            <td class="col-pdf  no-warp align-left-baf"><%= subjects['name'].gsub(" 1st Paper","") %></td>
                            <% unless @report_data['report']['exams'].blank? %>  
                                <% @report_data['report']['exams'].each do |report| %>
                                  <% exam_marks = 0 %>
                                  <% exam_full_marks = 0 %>   
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>  
                                    <% obtain_mark = obtain_mark+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i %>
                                    <% exam_marks = report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i %>
                                    <% if report['exam_category'] == '3' %>
                                      <% cq = cq+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i %>
			      	                          <td class="col-pdf"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i %></td>	
                                    <% elsif report['exam_category'] == '4' %>
			      	                          <% mcq = mcq+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i %>
			      	                          <td class="col-pdf"><%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i %></td>		
                                    <% end %>
                                  <% else %>
                                    <td class="col-pdf">-</td>
                                  <% end %>   
                                  <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                    <% total_mark = total_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                    <% exam_full_marks = report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                    <% if report['exam_category'] == '3' %>
                                      <% cq_total = cq_total+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                    <% end %>
                                    <% if report['exam_category'] == '4' %>
                                      <% mcq_total = mcq_total+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                    <% end %>
                                  <% end %>
                                <% end %>
                            <% end %>
                            <%
                              if mcq_total > 0
                                if mcq > 0 
                                  if mcq_total == 40
                                    mcq = (mcq.to_f/mcq_total.to_f)*30
                                    mcq = mcq.round()
                                  end
                                end
                                
                              end
                              if cq_total > 0
                                if cq > 0
                                  if cq_total == 80 or cq_total == 60
                                    cq = (cq.to_f/cq_total.to_f)*70
                                    cq = cq.round()
                                  end
                                  if cq_total == 90
                                    cq = (cq.to_f/cq_total.to_f)*85
                                    cq = cq.round()
                                  end
                                end
                              end
                              main_mark = cq+mcq


                            %>
                            <td class="col-pdf"><%= main_mark %></td>
                            <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
			     
                            <% if !grade.blank? and !grade.name.blank? %>
                              <% if subject_failed == true %>
                                <%
                                  grade.name = "F"
                                  grade.credit_points = 0.00
                                %>
                              <% end %>
                              <td class="col-pdf"><%= grade.name %></td>
                              <td class="col-pdf"><%= grade.credit_points %></td>
                              <% total_grade_of_allexam = total_grade_of_allexam+grade.credit_points %>
                            <% else %>
                              <td class="col-pdf">-</td>
                              <td class="col-pdf">-</td>
                            <% end %>  
                            <% total_mark_of_allexam = total_mark_of_allexam+main_mark %>
                            <% full_mark_of_allexam = full_mark_of_allexam+100 %>
                      </tr>
                    <% end %>
                  
                  <% end %>
              
                  
                  <tr class="even" >  
                    <td class="col-pdf  no-warp align-right" colspan="5"><b>GRAND TOTAL</b></td>
                    <td class="col-pdf  no-warp"><b><%= total_mark_of_allexam %></b></td>
                    <td class="col-pdf  no-warp"></td>
                    <td class="col-pdf  no-warp"></td>
                  </tr>
                  
              </table>
              <table id="pdf-table" class="top-left-center" width="99.8%" cellspacing="0">
                  <tr class="even">
                    <td class="col-pdf  no-warp align-center" colspan="2"><b>Position in Merit List</b></td>
                         
                  </tr>
                  <tr class="even">
                    <td class="col-pdf  no-warp align-left-baf">&nbsp;Section</td>
                    <td class="col-pdf  no-warp align-left-baf">&nbsp;
                          <% if !@student_position_batch[@student.id.to_i].blank? %> 
                            <%= @student_position_batch[@student.id.to_i] %> out of <%= @total_std_batch %>
                          <% else %>
                            -
                          <% end %>
                    </td>     
                  </tr>
                  <tr class="even">
                    <td class="col-pdf  no-warp align-left-baf">&nbsp;Group</td>
                     <td class="col-pdf  no-warp align-left-baf">&nbsp;
                          <% if !@student_position[@student.id.to_i].blank? %> 
                            <%= @student_position[@student.id.to_i] %> out of <%= @total_std %>
                          <% else %>
                            -
                          <% end %>
                    </td>   
                  </tr>
              </table>
              <div class='fine'></div>
              <table id="pdf-table" class="top-left-center" width="99.8%" cellspacing="0">
                <tr class="even align-left-baf"><td>&nbsp;Remarks : <% if !@student_position_batch[@student.id.to_i].blank? %> Passed <% else %> Failed <% end %>  </td></tr>  
              </table>
              <div class='fine'></div>
              <table id="pdf-table" class="evaluation table_99 top-left-center sign_table"  width="99.8%" >

                  <tr class="even border-bottom-1-px">
                      <td class="col-pdf " width="33%">
                          <br/><br/><br/>
                      </td> 
                      <td class="col-pdf" width="33%">
                          <br/><br/><br/>
                      </td>
                      <td class="col-pdf" width="33%">
                          <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/bncd/principal-sig.png")), :width=>"50%" %>
                      </td> 
                    
                  </tr>
                  <tr class="even">

                      <td class="col-pdf" width="33%">
                          Guide Teacher's Sign & Date
                      </td>
                      <td class="col-pdf " width="33%">
                          Guardian's Sign & Date
                      </td>
                      <td class="col-pdf " width="33%">
                          Principal's Sign & Date
                      </td> 

                  </tr>

              </table> 
              
          </div>
      </div>



  </div>


