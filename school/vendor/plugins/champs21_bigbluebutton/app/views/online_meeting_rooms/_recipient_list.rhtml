<% unless @recipients.blank? %>
  <label id="label-member7" class="themed_text" ><%= t('members') %></label>
  <div class ="scrolable-member" >
    <% x = '<span> x </span>' %>
    <div class="scroll-inside-member">
      <% @recipients.each do |r|  %>
        <div class="hover">
          <%=  %> <%= link_to shorten_string(r.full_name,18) + x, "#", :onClick => "remove_recipient(#{r.id}); return false", :class=> 'individual',
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= submit_tag "", :value => "#{t('save')}", :class => "submit_button", :disable_with => "#{t('please_wait')}" %>
  <div class="extender"></div>
<% end %>