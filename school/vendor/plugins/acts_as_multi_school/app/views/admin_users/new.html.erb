<fieldset class="margin-bottom-20">
  <h1 class="content-head">New Admin User</h1>
</fieldset>
<div class="content-div  bg-light grey-border shadow">
  <% form_for @admin_user,:html=>{:class=>'form'} do |f| %>
    <fieldset>
      <%= error_string_for(f) %>
      <%= f.error_message_on :base %>
    </fieldset>
    <fieldset>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </fieldset>

    <fieldset>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </fieldset>

    <fieldset>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </fieldset>

    <fieldset>
      <%= f.label :contact_no %>
      <%= f.text_field :contact_no %>
    </fieldset>

    <fieldset>
      <%= f.label :full_name %>
      <%= f.text_field :full_name %>
    </fieldset>

    <fieldset>
      <%= f.label :description %>
      <%= f.text_area :description, :rows=>5 %>
    </fieldset>

    <fieldset>
      <%= f.submit 'Save', :class  => 'button-red float-right-with-margin',:disable_with => "Please wait..." %>
    </fieldset>

  <% end %>
</div>