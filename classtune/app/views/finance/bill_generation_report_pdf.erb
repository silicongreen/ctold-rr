<title>Bill Generation Report</title>
</div>
<div id="page-yield">
    
    <div class="hor_line"></div>
    <h4 align="center"><%= t('fees_collections_text') %></h4>
    <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">

    <div id ="main_info">
        <% if @opt.to_i == 0 %>
          <% batch = @batch[0] %>
          <% batch_version = batch.name.split(" ") %>
          <h4 style="width: 25%; display: inline-block;"> <%= "#{t('shift')} :"+ " " "#{batch_version[0].strip}" %></h4>
          <% unless batch_version[1].blank? %>
            <h4 style="width: 24%; display: inline-block; text-align: left; "> <%= "#{t('version')} :"+ " " "#{batch_version[1].strip}" %></h4>
          <% else  %>
            <h4 style="width: 24%; display: inline-block; text-align: left; "> <%= "#{t('version')} :"+ " " "N/A" %></h4>
          <% end %>
          <h4 style="width: 24%; display: inline-block; text-align: center;"> <%= "#{t('class')} :"+ " " "#{batch.course.course_name}" %></h4>
          <h4 style="width: 24%; display: inline-block; text-align: right;"> <%= "#{t('section')} :"+ " " "#{batch.course.section_name}" %></h4>
        <% end %>
    </div>
      
    <% unless @student_finance_fees.blank? %>  
    <div id="pdf-info" style="padding-bottom: 40px;">
      <% page = 1 %>  
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
            <td class="col-pdf" style="width: 4%;">#</td>
            <td class="col-pdf" style="width: 12%;"><%= t('student_id') %></td>
            <td class="col-pdf" style="width: 10%;"><%= t('name') %></td>
            <td class="col-pdf"><%= t('roll_no') %></td>
            <td class="col-pdf" style="width: 8%;"><%= t('section') %></td>
            <td class="col-pdf"><%= t('student_category') %></td>
            <td class="col-pdf"><%= t('amount')%> (<%= @currency_type%>)</td>
            <td class="col-pdf"><%= t('paid_amount')%> (<%= @currency_type%>)</td>
            <td class="col-pdf"><%= t('contact_number') %></td>
        </tr>
        <% i = 0 %>
        <% index = 0   %>
        <% c = 'even' %>
        <% pg1 = 15 %>
        <% pg2 = 16 %>
        <% if page == 1 and @opt.to_i == 0 %>
          <% pg1 = 14 %>
        <% elsif page == 2 and @opt.to_i == 0 %>
          <% pg2 = 18 %>
        <% end %>
        
        <% @student_finance_fees.each do |fee| %>
          <% if page == 1 and i== pg1 %>
              <% i= 0 %>
              <% page += 1 %>
              <tr style="padding: 10px; height: 30px;"><td colspan="8">&nbsp;</td></tr>
              <tr class="table-header">
                <td class="col-pdf" style="width: 4%;">#</td>
                <td class="col-pdf" style="width: 10%;"><%= t('student_id') %></td>
                <td class="col-pdf" style="width: 10%;"><%= t('name') %></td>
                <td class="col-pdf"><%= t('roll_no') %></td>
                <td class="col-pdf" style="width: 8%;"><%= t('section') %></td>
                <td class="col-pdf"><%= t('student_category') %></td>
                <td class="col-pdf"><%= t('amount')%> (<%= @currency_type%>)</td>
                <td class="col-pdf"><%= t('paid_amount')%> (<%= @currency_type%>)</td>
                <td class="col-pdf"><%= t('contact_number') %></td>
              </tr>
          <% elsif page > 1 and i== pg2 %>
              <% i= 0 %>
              <% page += 1 %>
              <tr style="padding: 10px; height: 35px;"><td colspan="8">&nbsp;</td></tr>
              <tr class="table-header">
                <td class="col-pdf" style="width: 4%;">#</td>
                <td class="col-pdf" style="width: 10%;"><%= t('student_id') %></td>
                <td class="col-pdf" style="width: 10%;"><%= t('name') %></td>
                <td class="col-pdf"><%= t('roll_no') %></td>
                <td class="col-pdf" style="width: 8%;"><%= t('section') %></td>
                <td class="col-pdf"><%= t('student_category') %></td>
                <td class="col-pdf"><%= t('amount')%> (<%= @currency_type%>)</td>
                <td class="col-pdf"><%= t('paid_amount')%> (<%= @currency_type%>)</td>
                <td class="col-pdf"><%= t('contact_number') %></td>
              </tr>
          <% end %>
          <% i += 1  %>
          <% c =cycle('even','odd ') %>
          <tr class="<%= "#{c}" %> td-body" style="height: 55px;">
              <td class="col-pdf" style="text-align: center;"><%= index += 1 %></td>
              <td class="col-pdf" style="text-align: center;"><%= fee.student.admission_no unless fee.student.admission_no.blank? %></td>
              <td class="col-pdf"><%= truncate(fee.student.full_name, :length => 20) unless fee.student.full_name.blank? %></td>
              <td class="col-pdf" style="text-align: center;"><%= fee.student.class_roll_no unless fee.student.full_name.blank? %></td>
              <td class="col-pdf" style="text-align: center;"><%= fee.student.batch.course.section_name %></td>
              <td class="col-pdf" style="text-align: center;"><%= fee.student.student_category.name unless fee.student.student_category.blank? %></td>
              <% total_fee = 0.0 %>    
              <% paid_amount = 0.0 %>  
              <% if fee.is_paid %>
                <% paid_fees = fee.finance_transactions.map(&:amount).sum.to_f unless fee.finance_transactions.blank? %>
                <% total_fee = paid_fees %>    
                <% paid_amount = paid_fees %>  
              <% else %>
                <% total_fee = fee.balance %>    
                <% paid_amount = 0.0 %>  
              <% end %>
              <td class="col-pdf" style="text-align: right;"><%= precision_label(total_fee.to_f) %></td>
              <td class="col-pdf" style="text-align: right;"><%= precision_label(paid_amount.to_f) %></td>
              <td class="col-pdf" style="text-align: center;"><%= fee.student.sms_number.gsub("88", "") %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <% end %>  
  </div>

</div>
<style>
    #pdf-table tr.table-header td {
      color: #000;
      font-weight: bold;
      font-family: verdana;
      font-size: 12px;
    }
    #pdf-table tr.td-body td {
        padding: 6px 10px;
        color: #000;
        font-weight: normal;
        font-family: verdana;
        font-size: 12px;
        background: #fff;
    }
    #pdf-table tr.td-body td:last {
        border-bottom: 1px solid #000;
    }
</style>