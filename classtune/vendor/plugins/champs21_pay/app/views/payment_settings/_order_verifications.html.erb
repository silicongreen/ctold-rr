<% if @gateway == "trustbank" %>  
  <h2>Order Verification</h2>  
  <hr style="border: 1px solid #ccc;" />
  <% form_for :payment_settings,:url => {:action => :order_verifications} do |f| %>
      <input type="hidden" name="gateway" id="gateway" value="<%= @gateway %>" />
      <div class="form-group col-sm-6">
          <label>(<%= (Champs21Pay.const_defined?(@gateway.upcase)) ? Champs21Pay.const_get(@gateway.upcase) : @gateway %>) Order Id<span class="necessary-field">*</span> :</label>
          <%= text_area_tag "order_id", @order_id, :class=>"form-control"%>
          <small>(Comma Seperated Value)</small>
      </div>

      <div class="form-group col-sm-6 even">
          <%= submit_tag "", :value => "► #{t('verify_order')}", :class => "btn btn-success", :disable_with => "► #{t('please_wait')}" %>
      </div>
  <% end %>
<% elsif @gateway == "citybank" %>  
  <h2>Order Verification</h2>  
  <hr style="border: 1px solid #ccc;" />
  <%#= params[:query_type] %> 
  <% form_for :payment_settings,:url => {:action => :order_verifications} do |f| %>
      <%
      
        query_type = "order_id"
        unless params[:query_type].blank?
          query_type = params[:query_type]
        end
      %>
      <input type="hidden" name="gateway" id="gateway" value="<%= @gateway %>" />
      <div style="width: 100%; padding-bottom: 20px; float: left; ">
        <div style="width: 200px; float: left; padding-right: 10px;">
            <input type="radio" name="query_type" class="query_type_citybank" id="query_type_order_id" value="order_id" <%= (query_type == "order_id") ? "checked" : "" %> />&nbsp;&nbsp;&nbsp;Classtune Order ID
        </div>
        <div style="width: 250px; float: left; padding-right: 10px;">
            <input type="radio" name="query_type" class="query_type_citybank" id="query_type_citybank_order_id" value="citybank_order_id" <%= (query_type == "citybank_order_id") ? "checked" : "" %> />&nbsp;&nbsp;&nbsp;Citybank Order ID & Session ID
        </div>
      </div>
      <div id='order_id' class="form-group col-sm-6 citybank_order" style='padding-bottom: 20px; <%= (query_type == "order_id") ? "" : "display: none;" %>'>
          <label>(<%= (Champs21Pay.const_defined?(@gateway.upcase)) ? Champs21Pay.const_get(@gateway.upcase) : @gateway %>) Order Id<span class="necessary-field">*</span> :</label>
          <%= text_area_tag "classtune_order_id", @classtune_order_id, :class=>"form-control", :style => "width: 100%;"%>
          <small>(Comma Seperated Value)</small>
          <small>(Classtune Order ID)</small>
      </div>
      <div id='citybank_order_id' class="form-group col-sm-6 citybank_order" style=" <%= (query_type == "citybank_order_id") ? "" : "display: none;" %> padding-bottom: 20px;">
          <label> CityBank Order Id<span class="necessary-field">*</span> :</label>
          <%= text_field_tag "order_id", @order_id, :class=>"form-control"%>
          <div style='clear: both; height: 10px;'></div>
          <label> CityBank Session Id<span class="necessary-field">*</span> :</label>
          <%= text_field_tag "session_id", @session_id, :class=>"form-control"%>
          <div style='clear: both; height: 10px;'></div>
      </div>

      <div class="form-group col-sm-6 even">
          <%= submit_tag "", :value => "► #{t('verify_order')}", :class => "btn btn-success", :disable_with => "► #{t('please_wait')}" %>
      </div>
  <% end %>
<% elsif @gateway == "bkash" %>  
  <h2>Payment Verification</h2>  
  <hr style="border: 1px solid #ccc;" />
  <%
      
    query_type = "order_id"
    unless params[:query_type].blank?
      query_type = params[:query_type]
    end
  %>
  <% form_for :payment_settings,:url => {:action => :order_verifications} do |f| %>
      <input type="hidden" name="gateway" id="gateway" value="<%= @gateway %>" />
      <div class="form-group col-sm-6">
          <div id='bkash_other_panel' class="form-group bkash_order" style=" <%= (query_type != "trx_id") ? "" : "display: none;" %> padding-bottom: 20px;">
            <label><%= (Champs21Pay.const_defined?(@gateway.upcase)) ? Champs21Pay.const_get(@gateway.upcase) : @gateway %> Verification<span class="necessary-field">*</span> :</label>
            <%= text_area_tag "order_id", @order_id, :class=>"form-control"%>
            <small id="comma_sep">(Comma Seperated Value)</small>
            <small id="comma_sep_single" style="display: none;">(Only Single TrxID or PaymentID)</small>
          </div>
          <div id='bkash_trxid_panel' class="form-group bkash_order" style=" <%= (query_type == "trx_id") ? "" : "display: none;" %> padding-bottom: 20px;">
              <label> Finance Fee:<span class="necessary-field">*</span> :</label>
              <select name="finance_fee" id="finance_fee">
                  <option value="">Please Select a Fees</option>
                  <% unless @fee_collections.blank? %>
                    <% @fee_collections.each do |fee_collection| %>
                      <option value="<%= fee_collection.id %>"><%= fee_collection.name %></option>
                    <% end %>
                  <% end %>
              </select>
              <div style='clear: both; height: 10px;'></div>
              <label> Student Admission No:<span class="necessary-field">*</span> :</label>
              <%= text_field_tag "admission_no",@admission_no, :class=>"form-control"%>
              <div style='clear: both; height: 10px;'></div>
              <label> Transaction ID:<span class="necessary-field">*</span> :</label>
              <%= text_field_tag "trx_id", @trx_id, :class=>"form-control"%>
              <div style='clear: both; height: 10px;'></div>
          </div>
      </div>
      <div style="clear: both; height: 1px;"></div>
      <div style="width:100%;">
          <%
            query_type = "otder_id"
            unless params[:query_type].blank?
              query_type = params[:query_type]
            end
          %>
          <div style="width: 120px; float: left; padding-right: 10px;">
              <input type="radio" class="bkash_qry_type" name="query_type" id="query_type_order_id" value="order_id" <%= (query_type == "otder_id") ? "checked" : "" %> />&nbsp;&nbsp;&nbsp;Order ID
          </div>
          <div style="width: 120px; float: left; padding-right: 10px;">
              <input type="radio" class="bkash_qry_type" name="query_type" id="query_type_payment_id" value="payment_id" <%= (query_type == "payment_id") ? "checked" : "" %> />&nbsp;&nbsp;&nbsp;Payment ID
          </div>
          <div style="width: 120px; float: left; padding-right: 10px;">
              <input type="radio" class="bkash_qry_type" name="query_type" id="query_type_trans_id" value="trx_id" <%= (query_type == "trx_id") ? "checked" : "" %> />&nbsp;&nbsp;&nbsp;Transaction ID
          </div>
      </div>
      <div style="clear: both; height: 10px;"></div>
      <div class="form-group col-sm-6 even">
          <%= submit_tag "", :value => "► #{t('verify_order')}", :class => "btn btn-success", :disable_with => "► #{t('please_wait')}" %>
      </div>
  <% end %>
<% end %>