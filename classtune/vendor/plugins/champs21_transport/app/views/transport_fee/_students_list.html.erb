<% if @transport_fee.nil? or @transport_fee.empty? %>
  <p class="flash-msg"><%= t('no_defaulters') %></p>
<% else %>
  <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
    <thead><!-- class="thead-inverse" -->
      <tr>
        <th><%= t('sl_no') %></th>
        <th><%= t('name') %></th>
        <th><%= t('bus_fare') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @transport_fee.each_with_index do |t,i| %>
      <% s = t.receiver %>
      <tr class="<%= cycle('odd', 'even')%>">
        <td class="col-5"><%= i+1 %></td>
        <td class="col-6"><%= s.full_name %></td>
        <td class="col-7"><%= precision_label t.bus_fare %></td>
        <% if t.receiver_type == 'Student' %>
          <td class="col-6"><%= link_to_remote "► #{t('pay_fees')}",:class=>'submit_button' ,:url=>{:action=>'fees_submission_defaulter_student'} , :with=>"'id="+s.id.to_s+'&date='+@collection_id.to_s+"'" %></td>
        <% else %>
          <td class="col-7"><%= link_to_remote "► #{t('pay_fees')}",:class=>'submit_button' ,:url=>{:action=>'fees_submission_employee'} , :with=>"'id="+s.id.to_s+'&date='+@collection_id.to_s+"'" %></td>
        <% end %>

      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<style>
    a {
      font-size: 11px;
      text-decoration: underline;
      font-family: verdana;
    }
    td {
      font-size: 12px;
      font-family: verdana;
    }
</style>