<% unless @report_data.blank?  or  @report_data['report'].blank? %>
 
 <% total_u = 0 %>
  <div id="page-yield"  class="available_sections1 baf_shaheen">
      <%= render  :partial=>"/connect_exam/sagc/header" %>
      <h2 align="center" class="font-24"><%= @connect_exam_obj.name %> - <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %></h2>
      
     
      <table id="pdf-table" class="tbl-lign-left" width="52%" cellspacing="0">
          <tr class="even">
              <td class="align-right col-pdf" width="20%">Student ID </td><td colspan="3" class="align-left"><b><%= @student.admission_no %></b></td>
          </tr>
          <tr class="odd">
              <td class="align-right col-pdf col-pdf" width="20%">Name </td><td colspan="3" class="align-left"><%= @student.full_name.upcase %></td>
          </tr>
          <tr class="even">
              <td class="align-right" width="20%">Roll </td><td colspan="3" class="align-left"><%= @student.class_roll_no %></td>
          </tr>
          <tr class="odd">
              <td class="align-right col-pdf" width="20%">Class/Program </td><td colspan="3" class="align-left"><b><%= @batch.course.course_name %></b></td>
          </tr>
           
          <tr class="even">
              <td class="align-right col-pdf" width="20%">Section </td><td class="align-left"><%= @batch.course.section_name %></td>
              <% batch_split = @batch.name.split(" ") %>
              <% unless batch_split[2].blank?  %>
                <% batch_split[1] = batch_split[1]+" "+batch_split[2] %>
              <% end %>
              <td class="align-right col-pdf" width="20%" >Shift </td><td class="align-left"><%= batch_split[0] %></td>   
          </tr>
          <tr class="odd">
              <td class="align-right col-pdf" width="20%">Session </td>
              <td class="align-left"><%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %></td>
              <td class="align-right col-pdf" width="20%" >Version </td><td class="align-left"><%= batch_split[1] %></td> 
          </tr>
          <tr class="even">
              <td class="align-right col-pdf" width="20%">Category</td><td colspan="3" class="align-left"><%= @student.student_category.name unless @student.student_category.blank? %></td>
          </tr>
      </table>
      
      
     
      <div class="grade_information">
        <%= render  :partial=>"/connect_exam/sagc/gradding_level" %>
        
      </div>
      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">

              <table id="pdf-table" class="top-left-center" width="80.5%" cellspacing="0">
                  <% c = 'even'  %>
                  <% total_mark_of_allexam = 0 %>
                 
                  <tr class="even header-shade">
                      <td class="col-pdf">
                          <b>Sl.</b>
                      </td>
                      <td class="col-pdf no-warp  align-left-baf"><b><%= "Subjects" %></b></td>
                     

                      <td class="col-pdf">
                          <b>Full Marks</b>
                      </td>
                      <td class="col-pdf">
                          <b>Marks Obtain</b>
                      </td>
                      <td class="col-pdf"><b>Letter Grade</b></td>
                      
                  </tr>

                  <% total_grade = 0 %>
                  <% total_subject = 0 %>
                  <% grade_point_avg = 0 %>
                  <% failed = false %>
                  <% total_subject_main = 0 %>
                  <% grand_total_fraction = 0 %>
                  
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <% total_mark = 0 %>
                          <% full_mark = 0 %>
                          <%
                            third_subject = "";
                            fourth_subject = "";
                          %>
                          <% if !@std_subject_hash_type.blank? %>
                            <% if @std_subject_hash_type.include?(@student.id.to_s+"|||"+subjects['id'].to_s+"|||4") %>
                              <% fourth_subject = "(4th)" %>
                            <% end %>
                            <% if @std_subject_hash_type.include?(@student.id.to_s+"|||"+subjects['id'].to_s+"|||3") %>
                              <% third_subject = "(3rd)" %>
                            <% end %>
                          <% end %>
                          <% if fourth_subject.blank? %>
                            <% total_subject = total_subject+1 %>
                          <% end %>
                          <% total_subject_main = total_subject_main+1 %>
                          <td class="col-pdf"><%= total_subject_main %></td>
                          <td class="col-pdf no-warp align-left-baf"><%= subjects['name'] %><%= fourth_subject %><%= third_subject %></td>
                          <% unless @report_data['report']['exams'].blank? %>  
                            <% @report_data['report']['exams'].each do |report| %>   
                              <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>                                   
                                <% total_mark = total_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                              <% else %>
                              <% end %>
                              <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? %>
                                <% full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                              <% end %> 
                            <% end %>
                          <% end %>


                          <% 
                            
                            total_mark = total_mark.round()
                            grand_total_fraction = grand_total_fraction.to_f+total_mark
                            if total_mark.to_f>0 and full_mark.to_f>0
                              main_mark = (total_mark.to_f/full_mark.to_f)*100 
                            else
                              main_mark = 0
                            end 
                          %>

                          <% if full_mark.to_f > 0 %>
                            <td class="col-pdf"><%= full_mark.to_i %></td>
                            <td class="col-pdf"><%= total_mark.to_i %></td>
                            <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                            <% if !grade.blank? and !grade.name.blank? %>
                              <% if (grade.credit_points.to_i == 0 or total_mark < 20) and fourth_subject.blank? %>
                                <% failed = true %>
                                <% grade.name = "F" %>
                              <% elsif grade.credit_points.to_i == 0 or total_mark < 20 %>
                                <% grade.name = "F" %>
                              <% end %>
                              <% if fourth_subject.blank? %>
                                <% total_grade = total_grade.to_f+grade.credit_points.to_f %>
                              <% else %>
                                <% new_grade_point = grade.credit_points.to_f-2 %>
                                <% if new_grade_point > 0 %>
                                 <% total_grade = total_grade.to_f+new_grade_point.to_f %>
                                <% end %>  
                              <% end %>
                              <td class="col-pdf"><%= grade.name %></td>
                            <% else %>
                              <td class="col-pdf">-</td>
                            <% end %>
                          <% else  %>
                            <td class="col-pdf">-</td>
                            <td class="col-pdf">-</td>
                          <% end %>      

                      </tr> 
                    <% end %>  
                  <% end %>
                      
                  <% if total_grade > 0 && total_subject > 0 %>
                      <% grade_point_avg = total_grade.to_f/total_subject.to_f %>
                  <% end %>  

              </table>
                
             
               <% 
                total_att = ""
                absent = ""
                if !@exam_comment.blank?
                  all_comments = @exam_comment.comments
                  if !all_comments.blank?
                    all_comments_array = all_comments.split("|")
                    total_att = all_comments_array[0]
                    if !all_comments_array[1].nil?
                      absent = all_comments_array[1]
                    end
                  end
                end
              %> 
              <% grade_point_avg = (grade_point_avg.to_f*100).to_f.round() %>
              <% grade_point_avg = grade_point_avg.to_f/100 %>
              <table id="pdf-table" class="tbl-lign-left top-margin-20 letter-grade" width="100%" cellspacing="0">
                <tr class="odd">
                      <td class="align-left no-warp" width="50%"><b>Grade Point Avg</b></td>
                      <td><b>
                          <% if failed == true %>
                            0.00
                          <% else %>
                            <%= sprintf( "%0.02f", grade_point_avg) %>
                          <% end %></b>
                      </td>
                      <td class="align-left no-warp" colspan="2"><b>Position in Merit List</b></td>
                  </tr> 
                  <tr class="odd">
                      <%
                        
                        grade = GradingLevel.grade_point_to_grade(grade_point_avg, @batch.id)
                     %>
                      <td class="align-left no-warp">Letter Grade</td>
                      <td >
                          <b>
                          <% if failed == true %>
                              F
                          <% else %>
                            <% if !grade.blank? and !grade.name.blank? %>
                            <%= grade.name %>
                            <% else %>
                              -
                            <% end %>
                          <% end %>
                          </b>
                      </td>
                      <td class="align-left no-warp" width="15%">Section</td>
                      <td class="no-warp">
                         <% if !@student_position_batch[@student.id.to_i].blank? %> 
                          <%= @student_position_batch[@student.id.to_i] %> out of <%= @total_std_batch %>
                         <% else %>
                          -
                         <% end %> 
                      </td>
                  </tr>
                  <tr class="odd">
                      
                      <td class="align-left no-warp">Total Marks</td>
                      <td class="align-left no-warp"><b><%= sprintf( "%0.02f", grand_total_fraction)%></b></td>
                      <td class="align-left no-warp" width="15%">Class/Group</td>
                      <td class="no-warp">
                          <b>
                         <% if !@student_position[@student.id.to_i].blank? %> 
                          <%= @student_position[@student.id.to_i] %> out of <%= @total_std %>
                         <% else %>
                          -
                         <% end %> 
                        </b>  
                      </td>    
                  </tr>
                  
              </table>
              <% 
                total_att = ""
                absent = ""
                if !@exam_comment.blank?
                  all_comments = @exam_comment.comments
                  if !all_comments.blank?
                    all_comments_array = all_comments.split("|")
                    total_att = all_comments_array[0]
                    if !all_comments_array[1].nil?
                      absent = all_comments_array[1]
                    end
                  end
                end
              %>
             
              <table id="pdf-table" class="evaluation table_99 top-left-center"  width="99.8%" >
                  <tr class="even remarks-tr">
                    <td>
                        <b>Remarks : </b>
                            <% if failed == true %>
                              Failed
                           <% else %>
                            <% if !grade.blank? and !grade.name.blank? %>
                              <%= grade.description %>
                            <% else %>
                                
                            <% end %>
                        <% end %>
                    </td>
                  </tr>
              </table>
              
              
              <table id="pdf-table" class="evaluation table_99 top-left-center sign_table"  width="99.8%" >

                      <tr class="even border-bottom-1-px">
                          <td class="col-pdf " width="25%">
                               <br/><br/><br/>
                          </td> 
                          <td class="col-pdf" width="25%">
                              <br/><br/><br/>
                          </td>
                          <td class="col-pdf" width="25%">
                              <% if @batch.course.course_name == "Eleven" or @batch.course.course_name == "Twelve" %>
                                <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/352/college_vp_signature.png")), :width=>"70%" %>
                              <% else %>
                                <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/352/"+batch_split[0].downcase+".png")), :width=>"70%" %>
                              <% end %>
                          </td> 
                          <td class="col-pdf " width="25%">
                              <%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/352/principal-sir-signature-2019.jpg")), :width=>"70%" %>
                          </td>
                      </tr>
                      <tr class="even">
                           
                          <td class="col-pdf" width="25%">
                              Class Teacher
                          </td>
                          <td class="col-pdf " width="25%">
                              Parents/Guardian
                          </td>
                          <td class="col-pdf " width="25%">
                              Vice-Principal
                          </td>
                          <td class="col-pdf" width="25%">
                              Principal
                          </td> 
                          
                      </tr>

              </table>  
              
          </div>
      </div>



  </div>

<% end %>
