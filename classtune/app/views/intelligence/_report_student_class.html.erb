<% unless @report_data.blank? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">
        
      <% if @report_data['day_type']!="1" %>
        <h2><%=@report_data['day_type']%></h2>
      
      <% end %>
      <table id="listing table-design">
            <tr>
                <td><b>Class Name</b></td> 
                <td><b>Total</b></td> 
                <td><b>Present</b></td> 
                <td><b>Absent</b></td> 
                <td><b>Late</b></td> 
                <td><b>Leave</b></td>
            </tr>    
            <% unless @report_data['att_data'].blank? %>  
              <% @report_data['att_data'].each do |class_data| %>
                <% 
                  if @report_data['day_type']!="1"
                    class_data['present'] = "N/A"
                    class_data['absent'] = "N/A"
                    class_data['late'] = "N/A"
                    class_data['leave'] = "N/A"
                  end  
                %>
                <tr>
                  <td class="col-2"><b><%= class_data['class_section'] %></b></td>
                  <td class="col-2"><b><%= class_data['total'] %></b></td>
                  <td class="col-2"><b><%= class_data['present'] %></b></td>
                  <td class="col-2"><b><%= class_data['absent'] %></b></td>
                  <td class="col-2"><b><%= class_data['late'] %></b></td>
                  <td class="col-2"><b><%= class_data['leave'] %></b></td>
                 
                </tr> 
              <% end %>  
            <% end %>
      </table>
        
        <div style="float:left; clear:both; margin-top:20px; width:100%;">
      <div class="row">  
        <div class="row_label">
          <div>
            Select duration
          </div>
        </div>
        <div class="row_data">
          <div>
            <div class="custom_drop_wrapper">
             <%= select :student,:graph_type, options_for_select(['Day', 'Week', 'Month'], @graph_type), 
              {:prompt => "#{t('select')}"},
              {:onChange => "#{remote_function(:url => {:controller => "intelligence", :action => "get_att_report_class"}, :with => "$('new_student').serialize()" ,:before => "$('loading_3').show();",
              :success => "$('loading_3').hide();")}"} %>
              <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_3", :style =>"display: none;" ) %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">  
        <div class="row_label">
          <div>
            Data Type
          </div>
        </div>
        <div class="row_data">
          <div>
            <div class="custom_drop_wrapper">
             
             <%= select :student,:data_type,  options_for_select(['Present', 'Absent', 'Late','Leave'], @main_data_type),
              {:prompt => "#{t('select')}"},
              {:onChange => "#{remote_function(:url => {:controller => "intelligence", :action => "get_att_report_class"}, :with => "$('new_student').serialize()" ,:before => "$('loading_4').show();",
              :success => "$('loading_4').hide();")}"} %>
              <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_4", :style =>"display: none;" ) %>
            </div>
          </div>
        </div>
      </div>
  </div>
      <script type="text/javascript" src="javascripts/swfobject.js"></script>
      
      <div style="float:left; clear:both; margin-top:20px;">
        <%= @graph %>
      </div>   
  </div>
<% end %>


 

