<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('fee_collection_dates') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('view_advance_fee_collection_dates') %></div>
</div>
<div id="page-yield">
  <div id="flash_box"></div>
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div id="fee_collection_dates">
    <h2>Advance Fee Collection List</h2>  
    <% unless @finance_fee_collections.blank? %>
      <div id="fee-collections-list">
        <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
          <thead><!-- class="thead-inverse" -->
            <tr>
              <th><%= t('name') %></th>
              <th><%= t('start_date') %></th>
              <th><%= t('end_date') %></th>
              <th><%= t('due_date') %></th>
              <th></th>
            </tr>
          </thead>
        <tbody>
        <% @finance_fee_collections.each do |f| %>
          <tr class="<%= cycle('odd', 'even')%> ">
            <td class="col-2"><%= link_to "#{f.name}" ,:action=>:advance_collection_details_view, :id=>f.id,:batch_id=>@batch.id %></td>
            <td class="col-3"><%= f.start_date %></td>
            <td class="col-3"><%= f.end_date %></td>
            <td class="col-3"><%= f.due_date %></td>
            <td class="col-1">
               <div class="options">
              <% if f.check_fee_category(@batch.id) %>
                  <span class="small_warning"><%= link_to_remote t('sent_notification'), :url => {:action => 'sent_notification', :id => f.id,:batch_id=>@batch.id} %></span>
                  <span class="small"><%= link_to_remote t('assign_discount_text'), :url => {:action => 'fee_collection_assign_discount', :id => f.id,:batch_id=>@batch.id} %></span>
                  <span class="small"><%= link_to_remote t('delete_text'), :url => {:action => 'fee_collection_delete', :id => f.id,:batch_id=>@batch.id },:confirm=>"#{t('delete_confirm_msg')}" %></span>
                  <span class="small"><%= link_to_remote t('edit_text'), :url => {:action => 'fee_collection_edit', :id => f.id,:batch_id=>@batch.id} %></span>
                <%else%>
                  <% unless f.all_fees_paid(@batch.id) %>
                  <span class="small_warning"><%= link_to_remote t('sent_notification'), :url => {:action => 'sent_notification', :id => f.id,:batch_id=>@batch.id} %></span>
                  <span class="small"><%= link_to_remote t('assign_discount_text'), :url => {:action => 'fee_collection_assign_discount', :id => f.id,:batch_id=>@batch.id} %></span>
                  <% end %>
              <% end %>
               </div>
            </td>
         </tr>
        <% end %>
        </tbody>
      </table>
      </div>
      <%  else %>
      <table class="table table-striped table-bordered" id="example" cellspacing="0" cellpadding="0" border="0" style="width: 98%;">
          <thead><!-- class="thead-inverse" -->
            <tr>
              <th><%= t('name') %></th>
              <th><%= t('start_date') %></th>
              <th><%= t('end_date') %></th>
              <th><%= t('due_date') %></th>
              <th></th>
            </tr>
          </thead>
        <tbody>
            <tr><td colspan="5"><%= t('no_fee_collection_exist') %></td></tr>
        </tbody>
      </table>
      <% end %>
  </div>
  
  <div id="modal-box" style="display:none;"></div>

</div>
<style>
    .label-field-pair .label-container {
        width: 50% !important;
    }
    .label-field-pair .input-container {
        width: 45% !important;
    }
    
</style>