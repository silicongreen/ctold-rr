<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('hostel_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('home') %></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('hostels_text')}" ,:controller=>'hostels',:action=>'show' %> </div>
      <div class="link-descr"><%= t('add_new_hostel_to_the_system') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('room_details')}" ,:controller=>'room_details',:action=>'index'  %>  </div>
      <div class="link-descr"><%= t('vehicle_details') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('warden')}" ,:controller=>'wardens',:action=>'new'  %>  </div>
      <div class="link-descr"><%= t('assign_warden_to_hostel') %></div>
    </div>
    <div class="extender"></div>
  </div>
</div>
