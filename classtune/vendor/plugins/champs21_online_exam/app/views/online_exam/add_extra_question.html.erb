<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/homework.png', :html => {:alt => 'Homework'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
       <a href="/online_exam/view_online_exam"> ONLINE QUIZ | <%= t('add_questions') %></a>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
    </div>    

  <div class="header-form-wrapper">
      <div class='header-right-button'>
        <% unless @exam_questions.blank? %>
          <% unless @attendance  %>
            <%= link_to "#{t('add_question')}", :action=>'add_extra_question', :id=>@exam_group.id %>
          <% end  %>
        <% else %>
          <%= link_to "#{t('add_question')}", {:action=>'add_extra_question', :id=>@exam_group.id} %>
        <% end %>
      </div>
  </div>
</div>

<div id="page-yield" style="margin-top: 0px;">
  <div id="question-form">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <%= error_messages_for 'online_exam_question' %>
    <% form_for @online_exam_question, :url=>{:action=>'add_extra_question'} do |f| %>

      <div class="question_label_field">
        <p><%= t('question') %></p>
        <div class="label-field-pair1">
          <label ><%= t('mark') %></label>
          <div class="text-input-bg"><%= f.text_field :mark, :autofocus=>true,:value=>1 %></div>
        </div>
        <div id="question_text_field_bg">
          <%#= f.tinymce :question %>
          <%= f.redactor :question,:latex=>true%>
        </div>
      </div>


      <h4><%= t('enter_options_here') %>:</h4>
      <% i= 1 %>
      <% f.fields_for :online_exam_options do |exam_form| %>

        <div class="option_label_field">
          <p><%= t('option') %>-<%= i %></p>
          <div class="label-field-pair2">
            <label><%= t('is_answer') %></label>
            <div class="text-input-bg"><%= exam_form.check_box :is_answer %></div>
          </div>
          <div id="option_text_field_bg">
            <%#= exam_form.tinymce :option %>
            <%= exam_form.redactor :option,:latex=>true %>
          </div>
        </div>
        <%i+=1 %>
      <% end %>


      <div id="submit-button">
        <%=f.submit("► #{t('create_text')}") %>
      </div>
      <div id="skip">
        <%= link_to "► #{t('cancel')}" ,:action=>:exam_details, :id=> @exam_group.id  %>
      </div>
    <% end %>
    <%= load_redactor_script %>
  </div>
</div>
<%= stylesheet_link_tag 'tadded-header' %>