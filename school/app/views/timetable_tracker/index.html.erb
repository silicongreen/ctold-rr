<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('timetable_text') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('timetable_tracker') %></div>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">
    <%  if permitted_to? :class_timetable_swap,:timetable_tracker%>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('swap_timetable')}",:action => "class_timetable_swap" %></div>
        <div class="link-descr"><%= "#{t('manage_timetale_swapping')}" %></div>
      </div>
    <% end %>
    <%  if permitted_to? :index,:timetable_tracker%>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('swaped_timetable')} #{t('report')}",:action => "swaped_timetable_report" %></div>
        <div class="link-descr"><%= "#{t('generate')} #{t('swaped_timetable')} #{t('report')}" %></div>
      </div>
    <% end %>
  </div>
</div>