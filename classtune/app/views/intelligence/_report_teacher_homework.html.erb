<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/balloon-css/0.5.0/balloon.min.css">
<% unless @report_data.blank? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">
        
      <% if @report_data['day_type']!="1" && @time_range=="days" %>
        <h2><%=@report_data['day_type']%></h2>
      <% end %>
      <% unless @report_data.blank? %>
        <div class="clearfix"></div>
          <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">       
              <h2><%=@report_data['report_type']%></h2>
              <table id="listing table-design">
                    <tr>
                        <td><b>Teacher Name</b></td> 
                        <td><b>Department</b></td> 
                        <td><b>Total Class</b></td> 
                        <td><b>Homework Given</b></td>
                        <td><b>Homework Not Given</b></td>
                        <td><b>Frequency</b></td> 
                    </tr>    
                    <% unless @report_data['employee_data'].blank? %>  
                      <% @report_data['employee_data'].each do |employee| %>
                        <% 
                          if @report_data['day_type']!="1" && @time_range=="days"
                            employee['homework_given'] = "N/A"
                            employee['total_class'] = "N/A"
                            employee['frequency'] = "N/A"
                          end 
                        %>
                        <% if check_admin_stuff(employee['emp_dep']) %>
                          <tr>
                            <td class="col-2"><b><%= employee['emp_name'] %></b></td>
                            <td class="col-2"><b><%= employee['emp_dep'] %></b></td>
                            <td class="col-2"><b><%= employee['total_class'] %></b></td>
                            <%
                              ballon_text = ""; 
                              if employee['homework_given'].to_i > 0 && !employee['homework_given_data'].blank?
                                employee['homework_given_data'].each do |hw|
                                  ballon_text = ballon_text+hw['subjects']+" ("+hw['batch']+" "+hw['course']+" "+hw['section']+") &#10;"
                                end
                              end
                          
                            %>
                            <td class="col-2"><b>
                                    <% unless ballon_text.blank?  %>
                                      <button data-balloon="<%= ballon_text %>" data-balloon-pos="up" data-balloon-break><%= employee['homework_given'] %></button>
                                    <% else %>
                                      <%= employee['homework_given'] %>
                                    <% end %>  
                                      
                                </b></td>
                            <% 
                              home_not_given = employee['total_class'].to_i-employee['homework_given'].to_i
                              if home_not_given < 0
                                home_not_given = 0
                              end
                            %>
                            <td class="col-2"><b><%= home_not_given %></b></td>
                            <td class="col-2"><b><%= employee['frequency'] %></b></td>

                          </tr> 
                        <% end %>
                      <% end %>  
                    <% end %>
              </table>

          </div>
          <%= submit_tag "", :value => "â–ºPDF", :class => "submit_button" %>
        <% end %>
         
  </div>
<% end %>


 

