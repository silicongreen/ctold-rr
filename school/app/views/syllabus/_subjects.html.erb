<br /><br />
<div id="is_yearly">
<label for="student_course"><%= t('is_yearly') %></label><br />
<%= check_box_tag 'syllabus[is_yearly]' %>

</div>
<br />
<% unless @exam_groups.empty? %>
<div id="exam_group_box">
<label for="student_course"><%= t('examp_groups') %></label><br />
<select name="syllabus[exam_group_id]">
        <option value=""><%= t('select_exam_group') %></option>
      <% @exam_groups.each do |b| %>
        <option value="<%= b.id %>"><%= truncate(b.name, :length => 30)  %></option>
      <% end %>
    </select>
</div>
<% end %>


<br />



<% unless @subjects.empty? %>
<div id="subject_id">
    <label for="student_course"><%= t('subject') %></label><br />
    <select name="syllabus[subject_id]">
        <option value=""><%= t('select_subject') %></option>
      <% @subjects.each do |subject| %>
        <option value="<%= subject.id %>"><%= truncate(subject.name, :length => 30)  %></option>
      <% end %>
    </select>
</div>
<% end %>

<script type="text/javascript">
  jsyl=jQuery.noConflict();
  
  jsyl(document).ready(function() {
    jsyl('#syllabus_is_yearly').click(function(){ 
      
      if (jsyl(this).is(':checked'))
      {jsyl("#exam_group_box").hide();}
      else
      {jsyl("#exam_group_box").show();}
    

});
  });
</script>