<div id="page-yield" class="available_sections1">
    <div class="page1 sjws"> 
        <div class="logo_left"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/340/sjws_logo.png")),:width=> '80%' %></div>
        <div class="exam_title_left"><p><%= @connect_exam_obj.name %> - PUPIL PROGRESS REPORT - ACADEMIC YEAR 2016-2017</p></div>
        <div class="grad_list_right">ATTAINMENT:<br />
<%#= debug @grades %>
            <% @grades.each do |g| %>
              <% gValue = g.min_score.to_i %>
              <% if gValue > 0 %>            
                <%= gValue.to_s+"% + ="+ g.name + " - " + g.description %><br />
              <% else %>
                <%= "Less than 50% = " + g.name + " - " + g.description %><br />
              <% end %>
            <% end %>
        </div>
    </div>
    <div class="section1 row" >
        <center>     

            <div id ="main_info" class="sjws">


            </div>

            <% unless @report_data.blank?  or  @report_data['result'].blank? %>
              <% c = 'even' %>
              <% full_mark = 0 %>
              <% colspan = 0 %>
              <table id="pdf-table" class="sjws_table_head" width="100%" cellspacing="0">

                  <tr class="sjws-table-header">
                      <td colspan="2">
                          <h3><i>SENOIR SECTION</i></h3>
                          <p><b>TERM: <%= @connect_exam_obj.name %></b></p>
                          <p><b>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %>&nbsp;<%= @batch.course.section_name %></b></p>
                          <% if !@employee.nil? %> 
                            <p><b>Subject : <%= @subject.name %></b></p>
                            <p><b>Teacher's Name : <%=  @employee.full_name %></b></p>              
                          <% else %>
                            <p><b>Subject : <%= @subject.name %></b></p>
                          <% end %> 
                          <p></p>
                      </td>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <td class="rotate"><div><span>05/05/17<br /></span><span><%=  rs['alternative_title'] %></span></div></td>
                        <% colspan = colspan+1 %>          
                      <% end %> 
                      <% assignmentCount = Assignment.count(:all, :conditions => {:subject_id => @subject.id,:is_published=>1,:duedate => @connect_exam_obj.attandence_start_date..@connect_exam_obj.attandence_end_date}) %>

                      <td class="rotate"><div><span>TOTAL NUM. OF H.W.</span><span class="rotate_box"><%=assignmentCount%></span></div></td>
                      <td class="rotate"><div><br /><br /><br /><span>MARKS ACHIEVED </span><br /><br /><br /><span> MRKS OUT OF</span><br /></div></td>
                      <td class="rotate"><div><span>MARK - PERCENTANGE(%)</span></div></td>
                      <td class="rotate"><center><div><span>GRADE</span></div></center></td>
                  </tr>


                  <tr class="sjws-table-header">
                      <td class="sl"><b>SL.</b></td>
                      <td class="st_name"><b>STUDENTS' NAME / Out of</b></td>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <td class="class_test"><b><%=  rs['maximum_marks'].to_i %></b></td>

                        <% colspan = colspan+1 %>
                      <% end %>  
                      <td>&nbsp;&nbsp;&nbsp;&nbsp;&darr;&nbsp;</td>
                      <td>&nbsp;&nbsp;&nbsp;&nbsp;&darr;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&darr;</td>
                      <td>&nbsp;</td>
                      <td></td>

                  </tr>

                  <% extender = 0 %>
                  <% std_count = 0 %>
                  <% unless @report_data['result']['al_students'].blank? %>
                    <% @report_data['result']['al_students'].each do |std| %>
                      <%  std_count = std_count+1; %>
                      <% colspan = colspan+4 %>
                      <% if std_count>14 && extender ==0 %>
                        <% std_count = 0 %>
                        <% extender = 1 %>
                        <tr class="page-break">
                            <td colspan="<%= colspan %>">&nbsp;</td>
                        </tr>    
                        <tr class="sjws-table-header">
                            <td colspan="2">
                                <h3><i>SENOIR SECTION</i></h3>
                                <p><b>TERM: <%= @connect_exam_obj.name %></b></p>
                                <p><b>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %>&nbsp;<%= @batch.course.section_name %></b></p>
                                <% if !@employee.nil? %> 
                                  <p><b>Subject : <%= @subject.name %></b></p>
                                  <p><b>Teacher's Name : <%=  @employee.full_name %></b></p>              
                                <% else %>
                                  <p><b>Subject : <%= @subject.name %></b></p>
                                <% end %> 
                                <p></p>
                            </td>
                            <% @report_data['result']['ALL'].each do |rs| %>
                              <td class="rotate"><div><span>05/05/17<br /></span><span><%=  rs['alternative_title'] %></span></div></td>
                              <% colspan = colspan+1 %>          
                            <% end %> 
                            <% assignmentCount = Assignment.count(:all, :conditions => {:subject_id => @subject.id,:is_published=>1,:duedate => @connect_exam_obj.attandence_start_date..@connect_exam_obj.attandence_end_date}) %>

                            <td class="rotate"><div><span>TOTAL NUM. OF H.W.</span><span class="rotate_box"><%=assignmentCount%></span></div></td>
                            <td class="rotate"><div><br /><br /><br /><span>MARKS ACHIEVED </span><br /><br /><br /><span> MRKS OUT OF</span><br /></div></td>
                            <td class="rotate"><div><span>MARK - PERCENTANGE(%)</span></div></td>
                            <td class="rotate"><center><div><span>GRADE</span></div></center></td>
                        </tr>


                        <tr class="sjws-table-header">
                            <td class="sl"><b>SL.</b></td>
                            <td class="st_name"><b>STUDENTS' NAME / Out of</b></td>
                            <% @report_data['result']['ALL'].each do |rs| %>
                              <td class="class_test"><b><%=  rs['maximum_marks'].to_i %></b></td>

                              <% colspan = colspan+1 %>
                            <% end %>  
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&darr;&nbsp;</td>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&darr;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&darr;</td>
                            <td>&nbsp;</td>
                            <td></td>

                        </tr>
                      <% elsif std_count>16 && extender ==1 %>
                        <% std_count = 0 %>
                        <% extender = 1 %>
                        <tr class="page-break">
                            <td colspan="<%= colspan %>">&nbsp;</td>
                        </tr> 
                        <tr class="sjws-table-header">
                            <td colspan="2">
                                <h3><i>SENOIR SECTION</i></h3>
                                <p><b>TERM: <%= @connect_exam_obj.name %></b></p>
                                <p><b>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %>&nbsp;<%= @batch.course.section_name %></b></p>
                                <% if !@employee.nil? %> 
                                  <p><b>Subject : <%= @subject.name %></b></p>
                                  <p><b>Teacher's Name : <%=  @employee.full_name %></b></p>              
                                <% else %>
                                  <p><b>Subject : <%= @subject.name %></b></p>
                                <% end %> 
                                <p></p>
                            </td>
                            <% @report_data['result']['ALL'].each do |rs| %>
                              <td class="rotate"><div><span>05/05/17<br /></span><span><%=  rs['alternative_title'] %></span></div></td>
                              <% colspan = colspan+1 %>          
                            <% end %> 
                            <% assignmentCount = Assignment.count(:all, :conditions => {:subject_id => @subject.id,:is_published=>1,:duedate => @connect_exam_obj.attandence_start_date..@connect_exam_obj.attandence_end_date}) %>

                            <td class="rotate"><div><span>TOTAL NUM. OF H.W.</span><span class="rotate_box"><%=assignmentCount%></span></div></td>
                            <td class="rotate"><div><br /><br /><br /><span>MARKS ACHIEVED </span><br /><br /><br /><span> MRKS OUT OF</span><br /></div></td>
                            <td class="rotate"><div><span>MARK - PERCENTANGE(%)</span></div></td>
                            <td class="rotate"><center><div><span>GRADE</span></div></center></td>
                        </tr>


                        <tr class="sjws-table-header">
                            <td class="sl"><b>SL.</b></td>
                            <td class="st_name"><b>STUDENTS' NAME / Out of</b></td>
                            <% @report_data['result']['ALL'].each do |rs| %>
                              <td class="class_test"><b><%=  rs['maximum_marks'].to_i %></b></td>

                              <% colspan = colspan+1 %>
                            <% end %>  
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&darr;&nbsp;</td>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&darr;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&darr;</td>
                            <td>&nbsp;</td>
                            <td></td>

                        </tr>
                      <% end %>    


                      <% total_mark = 0 %>
                      <% full_mark = 0 %>

                      <tr class="<%= cycle(c,(["sjws_odd","sjws_even"]-[c]).first) %>">
                          <td class="sl"><%#= std['class_roll_no'] %><%= std_count %></td>
                          <td class="st_name"><%= std['name'] %></td>
                          <% @report_data['result']['ALL'].each do |rs| %>
                            <td>
                                <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                                  <%= rs['students'][std['id']]['score'].to_i %>
                                  <% total_mark = total_mark.to_f+rs['students'][std['id']]['score'].to_f %>
                                  <% full_mark = full_mark+rs['maximum_marks'].to_i %>
                                <% else %>
                                  AB
                                <% end %>    
                            </td>

                          <% end %> 
                          <td class="name">&nbsp;&nbsp;&nbsp;&nbsp;0</td>  
                          <td class="name">&nbsp;&nbsp;&nbsp;<%=total_mark.to_i %>&nbsp; /&nbsp; <%=full_mark.to_i %></td>  
                          <% main_mark = (total_mark.to_f/full_mark.to_f)*100 %>

                          <td class="name"><%= sprintf( "%0.02f", main_mark) %> %</td>

                          <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                          <% if !grade.blank? and !grade.name.blank? %>
                            <td class="col-2"><center><b><%= grade.name %></b></center></td>
                      <% else %>
                        <td class="col-2"><center><b>N/A</b></center></td>
                          <% end %>
                      </tr>
                    <% end %>
                  <% end %>
              </table>
            <% end %>
        </center>
    </div>


</div>
