            <% q1_mark = 0 %>
            <% q2_mark = 0 %>
            <% f_mark = 0 %>
            <% tf_mark = 0 %>
            <% cmb_mark = 0 %>
            
            
            <% grades1 = [] %>
            <% grade_count1 = {} %>
            <% grades2 = [] %>
            <% grade_count2 = {} %>
            <% grades3 = [] %>
            <% grade_count3 = {} %>
            
            <% grades4 = [] %>
            <% grade_count4 = {} %>
            
            <% grades = [] %>
            <% grade_count = {} %>
