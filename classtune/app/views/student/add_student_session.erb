<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('student_settings') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "Add Sessions" %></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <%- form_for @student_session, :url=>{:action=>(@student_session.new_record? ? "add_student_session" : "edit_student_session")} do |c| -%>

    <%= error_messages_for 'student_session' %>
    <div id="form-content">
      <div class="label-field-pair">
        <label for="category_name"><%= "Session" %></label>
        <div class="text-input-bg"> <%= c.text_field :exam_session %> </div>
      </div>
      <div class="label-field-pair">
        <label for="category_name"><%= "Session For Admission" %></label>
        <div class="text-input-bg"> <%= c.text_field :admission_session %> </div>
      </div>
      <div class="label-checkbox-pair">
        <label class="status" for="status"><%= t('status') %></label>
        <div id="radio-buttons">
          <%= c.radio_button  "status", 1, :checked => "checked" %>
          <label class="label_for_status" for="add_grade_status_true"><%= t('active') %></label>

          <%= c.radio_button  "status", 0 %>
          <label class="label_for_status" for="add_grade_status_false"><%= t('inactive') %></label>
        </div>
      </div>
      
      <div id="submit-button">
        <% unless @student_session.new_record? %>
          <%=submit_tag("► #{t('update')}", :disable_with => "► #{t('please_wait')}", :class=> 'user_button') %>
          <%= link_to " ► #{t('cancel')}",{ :action => "add_student_session"}, :class=> 'user_button' %>
        <% else %>
          <%=submit_tag("► #{t('create_text')}", :disable_with => "► #{t('please_wait')}") %>
        <% end %>
      </div>
    </div>


  <%- end -%>

  <div id="category-list">
    <%= render :partial => "student_sessions" %>
  </div>

</div>
<script>
  function add_fields(link, association, content){
    var new_id = new Date().getTime();
    var regexp = new RegExp("new_" + association, "g");
    $(link).up().insert({
      before: content.replace(regexp, new_id)
    });
    if ($$('.input-type-select')!=""){
      $$('.input-type-select').invoke('observe','change',toggle_custom);
    }
  }


  function remove_fields(link){
    //    console.log($(link).previous("input[type=hidden]"));
    $(link).previous("input[type=hidden]").value='1';
    $(link).up(".fields").hide();
  }

  function toggle_custom(val){
    console.log(this)
    console.log(val)
    dest = this.up(2).select('.custom')[0]
    //if(dest != null)
    if((this.value == 'text') || (this.value == 'text_area')){
      dest.hide();
    }
    else{
      dest.show();
    }
    return true;
  }
  document.observe("dom:loaded", function() {
    if ($$('.input-type-select')!=""){
      $$('.input-type-select').invoke('observe','change',toggle_custom);
      $$('.input-type-select').first().fire('change');
      $$('select').each(function(e){
        toggle_custom.call(e);
      });
    }
  });
</script>
