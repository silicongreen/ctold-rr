<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('inventory') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('indents') %></div>


  <% unless @current_user.admin? %>
    <% if  @reporting_manager.nil?  %>
      <p class="flash-msg"><%= t('no_manager') %> </p>
    <% end %>
  <% end %>

  <% unless @reporting_manager.nil? and not @current_user.admin? %>
    <div id="inner-tab-menu">
      <ul>
        <%  if permitted_to? :search_ajax, :inventories %>  <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('search')}", search_inventories_path %> </li><% end %>
        <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('new_text')}", new_indent_path  %> </li>
      </ul>
    </div>
  <% end %>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to "#{t('inventory_home')}",:controller=>"inventories",:action=>"index" %> <div class = "bread-crumb-separator"> > </div>
    <%= t('indents') %>
  </div>
  <% form_tag indents_path, :method => 'get' do %>
    <div id="search_textbox">
      <label><%= "#{t('search')}" %>:</label>
      <div class="text-input-bg" id="search_dropdown">
        <%= select '',:status_like, [["Pending","Pending"],["Issued","Issued"],["Rejected","Rejected"]],:selected => params[:status_like]  %>
      </div>
      <%= text_field_tag :indent_no_like, params[:indent_no_like] %>
    </div>
    <%= submit_tag "Search", :value => "â–º #{t('submit')}",:name => nil , :class => "submit_button" %>
  <% end %>

  <div id="page-yield">

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <% unless flash[:warn_notice].nil? %>
      <div id="errorExplanation" class="errorExplanation"><span><%= flash[:warn_notice] %></span></div>
    <% end %>
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <% unless @indents.blank? %>
        <tr class="tr-head">
          <td>
            <%= t('sl_no') %></td>
          <td>
            <%= t('indent_no') %>
          </td>
          <td>  <%= t('raised') %></td>
          <td>
            <%= t('expected_date') %>
          </td>
          <td> <%= t('status') %></td>
          <td> <%= t('manager') %></td>
          <% unless params[:status_like] == "Issued" %>
            <td colspan="4">  </td>
          <% end %>
        </tr>
        <tr class="tr-blank"></tr>
        <%  @indents.each_with_index do |s, i| %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-1"><%= (@indents.current_page - 1) * @indents.per_page + (i + 1) %></td>
            <td class="col-3"><%= link_to s.indent_no , s %></td>
            <td class="col-2"><%=  s.user.first_name unless s.user.nil?   %></td>
            <td class="col-1"><%= I18n.l(s.expected_date,:format=>"%d %b %Y") %></td>
            <td class="col-3"><%= s.status  %></td>
            <td class="col-3"><%= s.manager.first_name unless s.manager.nil? %></td>
            <% unless params[:status_like] == "Issued" %>
              <td class="col-2 edit-delete-links" colspan="4">
                <div class="edit-delete-box">
                  <% if s.can_accept_edit_or_delete(@current_user) %>
                    <div><small><%=  link_to 'Edit', edit_indent_path(s) unless s.status == "Issued"%></small></div>
                    <div><small><%=  link_to 'Delete', s, :confirm => 'Are you sure?', :method => :delete if s.status != "Issued" and s.can_be_deleted? == true %> </small></div>
                    <% if s.can_accept(@current_user) %>
                      <div><small><%= link_to 'Accept', acceptance_indent_path(:id => s.id) unless s.status == "Issued" %></small></div>
                    <% end %>
                  <% end %>
                </div>
              </td>
            <% end %>
          </tr>

        <% end %>

      <% else %>

        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-2"><%= t('no_indents') %></td>
        </tr>
      <% end %>
    </table>

  </div>
  <% unless @indents.blank? %>
    <%= will_paginate @indents %>
  <% end %>

</div>
