<div class="course-select">
  <% unless @department_event.empty? %>
    <span class="title"><%= "#{t('department_associated')}" %>:</span>
    <ul id="category-list">
      <% @department_event.each do |d| %>
        <li class="list<%= cycle('odd','even') %>">
          <div class="category-name"> <%=  EmployeeDepartment.find(d.employee_department_id).name %></div>
          <div class="category-edit"> <%= link_to "#{t('remove')}", {:controller=>"event",:action=>"remove_department", :id=>d},:confirm => "#{t('delete_confirm_msg')}" %></div>
        </li>
      <% end %>
    </ul>
    <%= link_to_remote "#{t('select_more_department')}", :url=>{:controller=>"event", :action=>"select_employee_department", :id=>params[:id]},:loading => "$('loading').show();", :loaded => "$('loading').hide();",  :html=>{:class=>"themed_text"} %>
  <% else %>
    <span class="title"><%= t('no_department_selected') %>:</span>
    <%= link_to_remote "#{t('select_department')}", :url=>{:controller=>"event", :action=>"select_employee_department", :id=>params[:id]},:loading => "$('loading').show();", :loaded => "$('loading').hide();", :html=>{:class=>"themed_text"} %>
  <% end %>
  <%= image_tag("loader.gif",
    :align => "absmiddle",
    :border => 0,
    :id => "loading",
    :style =>"display: none;" ) %>
</div>

