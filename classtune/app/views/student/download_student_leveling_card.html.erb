<div id="page-yield" class="available_sections1 baf_shaheen">
    <div class="section1 row" >
        <% std_count = 0 %>
        <% unless @student_security.blank? %>
          <% @student_security.each do |student| %>
            <% std_count = std_count+1 %>
            <% batch_split = student.batch.name.split(" ") %>
            <% unless batch_split[2].blank?  %>
              <% batch_split[1] = batch_split[1]+" "+batch_split[2] %>
            <% end %>
            <div class="box-size-6">
                <table id="pdf-table" width="100%" cellspacing="0">
                  <tr class="table-header">
                    <td class="col-pdf aling-left no-warp" colspan="2" width="30%"><b>ID</b></td> 
                    <td class="col-pdf aling-left no-warp" colspan="2"><%= student.admission_no %></td> 
                  </tr> 
                  <tr class="table-header">
                    <td class="col-pdf aling-left no-warp" colspan="2"><b>Name</b></td> 
                    <td class="col-pdf aling-left no-warp" colspan="2"><%= student.full_name %></td> 
                  </tr>
                  <tr class="table-header">
                    <td class="col-pdf aling-left no-warp" colspan="2"><b>Class</b></td> 
                    <td class="col-pdf aling-left no-warp" colspan="2"><%= student.batch.course.course_name %></td> 
                  </tr>
                  <tr class="table-header">
                    <td class="col-pdf aling-left no-warp" colspan="2"><b>Section</b></td> 
                    <td class="col-pdf aling-left no-warp" colspan="2"><%= student.batch.course.section_name %></td> 
                  </tr>
                  <tr class="table-header">
                    <td class="col-pdf aling-left no-warp"><b>Roll</b></td> 
                    <td class="col-pdf aling-left no-warp"><%= student.class_roll_no %></td> 
                    <td class="col-pdf aling-left no-warp"><b>Version</b></td> 
                    <td class="col-pdf aling-left no-warp"><%= batch_split[1] unless batch_split[1].blank? %></td> 
                  </tr>
                </table>
            </div>
            <% if std_count%14 == 0 %>
              <div class="page-break-main"></div>
            <% end %>
          <% end %>
        <% end %>
          
    </div>


</div>


