
<% unless @report_data.blank?  or  @report_data['report'].blank? %>
  <div id="page-yield"  class="available_sections1 sfx">
      
     <h4 align="center">&nbsp;</h4>
      
     <h3 align="center"><%= @connect_exam_obj.name %></h3>
      

      <table id="pdf-table" class="margin-top-bottom-20" width="100%" cellspacing="0">
          <tr class="even">
              <% if @batch.course.course_name=="AS"%>
                <td class="td-align-left">Name : <b><%= @student.full_name %></b></td>
                <td class="td-align-right">Class : <input type="checkbox" checked="checked" />&nbsp;AS Level&nbsp;&nbsp;<input type="checkbox" />&nbsp;A2 Level</td>
              
              <% elsif @batch.course.course_name=="A2" %>
                <td class="td-align-left">Name : <b><%= @student.full_name %></b></td>
                <td class="td-align-right">Class : <input type="checkbox"  />&nbsp;AS Level&nbsp;&nbsp;<input type="checkbox" checked="checked" />&nbsp;A2 Level</td>
              
              <% else %>
              <td>Name : <b><%= @student.full_name %></b></td>
              <td>Class : <b><%= @batch.course.course_name %></b></td>
              <td>Section : <b><%= @batch.course.section_name %></b></td>
              <td>Roll : <b><%= @student.class_roll_no %></b></td>
              <% end %>
          </tr>
      </table>

      <div class ="current_batch" style="margin-left:0px;">
          <div id="grouped_exam_report">


              <table id="pdf-table" width="100%" cellspacing="0">
                  <% c = 'even'  %>
                  <% total_mark_of_allexam = 0 %>
                  <tr class="table-header">
                      <td class="col-pdf"><%= "Subject" %></b></td>
                      <% unless @report_data['report']['exams'].blank? %>  
                        <% @report_data['report']['exams'].each do |report| %>
                          <td class="col-pdf">
                              <%= report['exam_name'] %><% unless @exam_marks[report['exam_id'].to_s].blank?  %><% total_mark_of_allexam = total_mark_of_allexam+@exam_marks[report['exam_id'].to_s].to_i  %><% end %>
                          </td> 
                        <% end %>
                      <% end %>

                      <td class="col-pdf">Total</td>
                      <td class="col-pdf">PCT(%)</td>
                      <td class="col-pdf">Grade</td>
                  </tr>

                  <% total_parcent = 0 %>
                  <% total_subject = 0 %>
                  <% exam_marks = 0 %>
                  
                  <% unless @report_data['report']['subjects'].blank? %> 
                    <% @report_data['report']['subjects'].each do |subjects| %>
                      <% subjectdata = Subject.find(subjects['id'].to_i) %>
                      <%= render  :partial=>"/connect_exam/check_student_subject", :locals=>{:student_id=>@student.id.to_s,:subject_id=>subjects['id'].to_s,:elective_group_id=>subjectdata.elective_group_id.to_i} %>
                      <% if @has_exam_student == false %>
                            
                        <% else %>
                      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                          <% weightage_mark = 0 %>
                          <% total_mark = 0 %>
                          <% full_mark = 0 %>
                          <% exam_marks = 0 %>
                          <% grade_i = false %>
                          <% grade_w = false %>

                          <td class="col-pdf td-align-left"><%= subjects['name'] %></td>
                          <% unless @report_data['report']['exams'].blank? %>  
                            <% @report_data['report']['exams'].each do |report| %>
                              <% @examobj = Exam.find_by_exam_group_id_and_subject_id(report['exam_id'].to_i,subjects['id'].to_i) %>
                              <% unless @examobj.blank?  %>
                                <% check_exam = false %>
                                <% @exam_score_all = ExamScore.find_all_by_exam_id(@examobj.id.to_i) %>
                                <% if @exam_score_all.blank? %>
                                    <% check_exam = false %>
                                <% else %>
                                  <% @exam_score_all.each do |score| %>
                                  <%
                                    unless score.marks.blank?
                                      check_exam = true
                                      break
                                    end
                                  %>
                                  <% end %>
                                <% end %>
                              <% end %>
                              <td class="col-pdf">
                                     <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['marks_obtained'].blank? %>
                                        <% if report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i > -1 and check_exam == true %>
                                          <%= report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                          <% total_mark = total_mark.to_f+report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_f %>
                                        <% elsif check_exam == false %>
                                           -
                                        <% elsif report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i == -1 %>
                                            -
                                        <% grade_i= true %>
                                        <% elsif report['result'][report['exam_id']][subjects['id']]['marks_obtained'].to_i == -2 %>
                                            -
                                            <% grade_w = true %>
                                        <% end %>
                                      <% else %>
                                        -
                                      <% end %>
                                      <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['full_mark'].blank? and check_exam == true  %>
                                        <% exam_marks = exam_marks+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                        <% full_mark = full_mark+report['result'][report['exam_id']][subjects['id']]['full_mark'].to_i %>
                                      <% else %>

                                      <% end %>
                                       


                              </td>

                              <% if !report['result'].blank? and !report['result'][report['exam_id']].blank? and !report['result'][report['exam_id']][subjects['id']].blank?  and !report['result'][report['exam_id']][subjects['id']]['weightage_mark'].blank? %>
                                <% weightage_mark = weightage_mark+report['result'][report['exam_id']][subjects['id']]['weightage_mark'] %>
                              <% end %>

                            <% end %>
                          <% end %>





                          <% 
                          heighst_mark = 0
                          if !@report_data['report']['max_mark'].blank? and !@report_data['report']['max_mark'][subjects['id']].blank?
                            heighst_mark = @report_data['report']['max_mark'][subjects['id']].to_f
                            end  

                          if total_mark.to_f>0 and full_mark.to_f>0
                            main_mark = (total_mark.to_f/full_mark.to_f)*100 
                            else
                            main_mark = 0
                            end  
                        %>

                          <% if full_mark.to_f > 0 %>
                            <td class="col-pdf"><%= total_mark.to_f %></td>
                            <td class="col-pdf"><%= sprintf( "%0.02f", main_mark) %></td>
                            <td class="col-pdf">
                            <% if grade_i %>
                              <%= "I" %>
                            <% elsif grade_w %>
                              <%= "W" %>
                            <% else %>
                              <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                              <% if !grade.blank? and !grade.name.blank? %>
                              <%= grade.name %>
                              <% else %>
                              -
                              <% end %>
                            <% end %>
                            </td>
                            
                            

                            <% total_parcent= total_parcent+main_mark %>
                            <% total_subject = total_subject+1 %>
                          <% else  %>
                            <td class="col-pdf">-</td>
                            <td class="col-pdf">-</td>
                            <td class="col-pdf">-</td>
                           
                          <% end %>      

                      </tr> 
                      <% end %>
                    <% end %>  
                  <% end %>     

              </table>
              <h3>**CT = Class Test, CP = Class Performance, PCT = Percentage</h3>
              
              <% unless @report_data['report']['no_exam_subject_resutl'].blank? %>

                


                <table id="pdf-table" class="margin-top-20" width="100%" cellspacing="0">
          
                    <% @report_data['report']['no_exam_subject_resutl'].each do |report| %>

                      
                       
                        <tr class="even">
                          
                            <td width="18%"><b><%= report['subject_name'] %></b></td>
                          <% if report['subject_comment'].blank? %>
                            <td   width="32%">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                          <% else %>
                            <td   width="32%"><%= report['subject_comment'] %></td>
                          <% end %>
                        </tr>
                     <% end %>   
                </table>

              <% end %>
              
              <%
              present = 0
              comments = ""
              if !@exam_comment.blank?
                all_comments = @exam_comment.comments
                if !all_comments.blank?
                  all_comments_array = all_comments.split("-")
                  if !all_comments_array[1].nil?
                    present = all_comments_array[1].to_i
                    comments = all_comments_array[0]
                    else
                    comments = all_comments_array[0]
                  end
                end
                end
            %>
              <% unless @report_data['report']['no_exam_subject_resutl'].blank? %>
              <table id="pdf-table"  class="margin-top-20 class-text-align-left" width="99.8%" cellspacing="0">
                    <tr class="even"><td class=" align-left-baf" width="30%">NO. OF WORKING DAYS</td><td class=" align-left-baf"><%= @connect_exam_obj.total_working_days %></td></tr>
                    <tr class="even"><td class=" align-left-baf" width="30%">PRESENT</td><td class=" align-left-baf"><%= present %></td></tr>
                    <tr class="even"><td class=" align-left-baf" width="30%">ABSENT</td><td class=" align-left-baf"><%= @connect_exam_obj.total_working_days.to_i - present.to_i %></td></tr>
                </table>
              <% end %>
              
              <% attpercentage = (@report_data['present'].to_f/@report_data['total'].to_f)*100 %>
              <table id="pdf-table" class="margin-top-20 class-text-align-left" width="100%" cellspacing="0">
                  <tr class="even">
                      <td class="td-align-left"><b>Teacher's Comments</b></td>
                  </tr>
                  <tr class="odd ">
                      
                      <td class="td-align-left"><b>&nbsp;<% if !comments.blank? %><b><%= comments %></b><% else %><br/>&nbsp;<br/>&nbsp;<br/><% end %></b>
                  </td>
                  
              </table>
              
              
              <table id="pdf-table" class="margin-top-20" width="100%" cellspacing="0">
                  <tr class="even">
                      <td><b>Signature- Class Teacher</b></td>
                      <td><b>Signature- Section In-Charge</b></td>
                  </tr> 
                  <tr class="odd">
                      <td></td>
                      <td><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/319/sign_new.jpeg")),:width=> '30%' %></td>
                  </tr>
              </table>


              <% avgparcent = total_parcent.to_f/total_subject.to_f %>


          </div>
      </div>



  </div>

<% end %>
