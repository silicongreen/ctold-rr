<div id="grading-levels-form">
  <%#*<h4><%= @batch.full_name unless @batch.nil? </h4>%>

  <% form_remote_for :board_exam_student_subject, :url=>{:action=>"assign_student",:id=>@student.id,:id2=>@subject.id},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>
    <div id="form-errors"></div>
      <%
        sub_type = ['-','3rd','4th']
      %>
    <%= hidden_field :board_exam_student_subject, :board_exam_id, :value =>@student.board_exam_id %>
    <%= hidden_field :board_exam_student_subject, :board_exam_subject_id, :value =>@subject.id %>
    <%= hidden_field :board_exam_student_subject, :board_exam_student_id, :value =>@student.id %>
    <div class="label-field-pair">
      <div class="label-container"><label><%= "Subject Type" %></label></div>
      <div class="input-container"><%= f.select :subject_taken_as,sub_type %></div>
    </div>
    

    <%= f.submit  "", :value => "â–º #{t('save')}", :class => "submit_button", :id => "submit_button" %>

  <% end %>
</div>

