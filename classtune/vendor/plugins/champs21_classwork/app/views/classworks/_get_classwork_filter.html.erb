
<div style="clear: both;"></div>

<div class="CSSTableGenerator" style="width: 97%;margin-top: 10px;">
ddd
<%= @pub_date_string  %>
  <% unless @pub_date_string.blank?  %>
  <a style="color: green;
  margin-bottom: 10px;
  float: left;
  clear: both;" href="/classworks/download_excell?batch_name=<%= @ba_id %>&student_class_name=<%= @class_id %>&student_section=<%= @std_id %>&classwork_publish_date=<%= @pub_date_string %>">Download Excell </a>
  
  
  <a style="color: green;
  margin-bottom: 10px;
  float: left; margin-left: 15px;" target="_blank" href="/classworks/download_pdf?batch_name=<%= @ba_id %>&student_class_name=<%= @class_id %>&student_section=<%= @std_id %>&classwork_publish_date=<%= @pub_date_string %>">Download PDF</a>
  
 <% end %> 
  <table id="listing table-design" align="center" width="100%" cellpadding="1" cellspacing="1">
    <% unless @classworks.empty? %>
    <tr class="tr-head">
        <thead>
      <th>
       <%= "#{t('course')}"%>
      </th>
      <th>
       <%= "#{t('subject')}"%>
      </th>
      <th>
       <%= "#{t('title')}"%>
      </th>
      <th>
        <%= "#{t('teacher_name')}"%>
      </th>
      <th>
        <%= "Assign date"%>
      </th>
  </thead>
    </tr>
   
      <% @classworks.each_with_index do |classwork,i| %>
        
        <tr class="tr-<%= cycle('odd', 'even') %>">
          
          <td class="col-2">
            <%=  link_to classwork.subject.batch.full_name , classwork%>
          </td>
          <td class="col-2">
              <%=  link_to classwork.subject.name , classwork%>
          </td>
          <td class="col-2">
            <%=  link_to classwork.title, classwork%>
          </td>
          <td class="col-2">
            <% unless classwork.employee.blank?  %>
              <%=  classwork.employee.full_name %>
            <% end %>
          </td>
          
          <td class="col-4">
            <%= I18n.l(classwork.created_at,:format=>"%d-%m-%Y") %>
          </td>
          
        </tr>
      <% end %>
    <% else %>
      <tr class="tr-odd">
        <td class="col-1"><%= "#{t('no_classworks_for_this_subject_have_been_created')}"%></td>
      </tr>
    <% end %>
  </table>
</div> 
<% posted_params = params %>
<% posted_params.delete(:page) %>
<% posted_params.delete(:authenticity_token) %>
<% unless @classworks.blank? %>
<%= will_paginate @classworks, :previous_label=>"<", :next_label=>">", :renderer => 'RemoteLinkRenderer', :params => params ,:remote => { :loading =>  "$('loader_paginate').show();",:complete =>"$('loader').hide();"  } %>
<% end %>
<%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader_paginate",
          :style =>"display: none;" ) %>

