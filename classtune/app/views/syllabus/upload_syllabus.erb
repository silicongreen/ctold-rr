<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
     <%= image_tag '/images/icons/syllabus/syllabus.png', :html => {:alt => 'Syllabus'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">      
       <%= link_to "Syllabus", :controller => "syllabus", :action => "classes_view" %>  |    Uploads
       <span style="float: left;clear:both;font-size: 15px;"><%= @local_tzone_time.to_date %></span>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
  </div> 
  <div class="clearfix"></div>
</div>
<div id="page-yield">
  <div id="flash_box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div id="syllabus-upload-form">
    <%= render :partial => "syllabus_upload_add_form" %>
  </div>
  <br/><br/>

  <div id="syllabus-upload-list">
    <%= render :partial => "syllabus_upload_list" %>
  </div>

</div>
