<div style="float: left; ">
  <input type="hidden" name="option_sms" id="option_sms" value="student_feedues" />
  
  <div class="label-container"><label>Fee Collections</label></div>
  <div class="text-input-bg">
    <select name="fee_collections" id="fee_collections">
      <% unless @finance_fee_collections.nil? or @finance_fee_collections.empty? or @finance_fee_collections.nil? %>  
        <% @finance_fee_collections.each do |d| %>
          <option value="<%= d.id %>"><%= d.name %></option>
        <% end %>  
      <% end %>  
    </select>
  </div>
  <div style="clear: both; height: 12px;"></div> 
  <div class="label-field-pair">
      <div class="label-container"><label> Options:</label></div>
      <div class="text-input-bg" style="padding: 10px 10px; width: 302px;">
          <input type="checkbox" name="sms_to_all" id="sms_to_all" class="sms_to_options" style="display: none;" checked>
          <i name="sms_to_all_fa" id="sms_to_all_fa" class="fa fa-check-square-o sms_to_options_fa" style="font-size: 20px; cursor: pointer; color: #49BB4B; " aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;">SMS to All</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="checkbox" name="sms_to_custom" id="sms_to_custom" class="sms_to_options" style="display: none;">
          <i name="sms_to_custom_fa" id="sms_to_custom_fa" class="fa fa-square-o sms_to_options_fa" style="font-size: 20px; cursor: pointer; color: #49BB4B;" aria-hidden="true"></i>&nbsp;&nbsp;<span class="sl_no" style="color: #000;">Custom Option</span>
      </div>

  </div>
  
  <div id="student-custom-option" style="float: left; width: 100%; display: none; ">

  </div>
  <div style="clear: both; height: 1px;"></div> 
  
  <div class="label-container"><label>Send To</label></div>
  <div class="text-input-bg">
    <select name="send_sms[send_to]">
      <!--option value="1">Student And Parent/Guardian</option-->
      <option value="3">Parent/Guardian</option>
      <option value="2">Student</option>
      <!--option value="4">Both Parent/Guardian</option>
      <option value="5">Student Both Parent/Guardian</option>
      <option value="6">Student Both Parent/Guardian (Only For Test)</option-->
    </select>
  </div>
  <div style="clear: both; height: 12px;"></div>
  
  <div class="label-container"><label>Only Download?</label></div>
  <div class="text-input-bg">
    <select id="sms_options_type" name="send_sms[download]">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </select>
  </div>
  
  <div style="clear: both; height: 20px;"></div> 
  
  <div class="label-field-pair" style="height: 264px;">
      <div class="label-container"><label> <%= t('message') %><span class="necessary-field">*</span>:</label></div>
      <div class="text-input-bg" style="padding-left: 10px; width: 302px;">
          <textarea name="sms_message" id="sms_message" cols="30" rows="10" style="width: 92%; border: 1px solid #ccc; border-radius: 5px; padding: 10px;"><%= @message %></textarea>
          <small style="width: 100%; text-align: left; float: left;"><b>#UNAME#</b> - User Full Name<br /> <b>#AMOUNT#</b> - Due Amount<br /> <b>#UID#</b> - User ID<br /> <b>#DUE_DATE#</b> - Fee Due Date</small>
      </div>

  </div>
  
  <%= image_tag("loader.gif",
   :align => "absmiddle",
   :border => 0,
   :id => "loader1",
   :style =>"display: none;" ) %>
  <div id="textarea_sms_feedback" style="margin-left: 201px;margin-bottom: 10px;float:left; clear:both;"></div>
  <%= submit_tag "#{t('send_sms')}",:class=>'submit_button', :id => 'submit_button' %> 
  
</div>