<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.1.0/material.min.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.13/css/dataTables.material.min.css"/>
<script type="text/javascript" src="//code.jquery.com/jquery-1.12.4.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.13/js/dataTables.material.min.js"></script>

<div id="content-header">
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "Marks" %></div>
<div id="inner-tab-menu">
</div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">
      <%= select :batch, :batch_id,@batches.map {|b| [b.full_name, b.full_name] },{:prompt => "Select a Class"} %>
  </div>
  <div class="box">
    <table id="exam_data"  class="mdl-data-table" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Class</th>
                <th>Exam Name</th>
                <th>Subject</th>
                <th>Start</th>
                <th>End</th>
            </tr>
        </thead>
        <tbody>
          <% @exams.each do |exam| %>
            
            <% @exam_group = exam.exam_group  %>
            <tr>
                <td><%= link_to @exam_group.batch.full_name, [@exam_group, exam], :target => "_blank" %></td>
                <td><%= link_to @exam_group.name, [@exam_group, exam], :target => "_blank" %></td>
                <td><%= link_to exam.subject.name, [@exam_group, exam], :target => "_blank" %></td>
                <td><%= I18n.l(exam.start_time,:format=>"%d %b,%Y %I:%M %p") %></td>
                <td><%= I18n.l(exam.end_time,:format=>"%d %b,%y %I:%M %p") %></td>
            </tr>
          <% end %>  
            
        </tbody>
        
    </table>   
    <div class="extender"></div>
  </div>
    
</div>
<script>
  var jj = jQuery.noConflict();
  jj(document).ready(function () {
      var oDataTable = jj('#exam_data').DataTable( {
        "order": [],
        "oSearch": { "bSmart": false }
    } );
    jj("#batch_batch_id").change(function(){
      if(jj("#batch_batch_id").val())
      {
        oDataTable.column( 0 ).search( jj("#batch_batch_id").val(),false,false).draw();
      }
      else
      {
        oDataTable.column( 0 ).search("").draw();
        //oDataTable.column( 0 ).search("").val(),false,false).draw();
      }   
    });
  });
</script>
<style>
  table tr td a
  {
     text-decoration: none;
     cursor: pointer;
     color: black;
  }
  .pagination {
       margin-top: 0px;
    margin-right: -18px;
}
.box select
{
    margin-left: 16px;
    height: 27px;
    width: 200px;
}
body, html
{
    line-height: normal;
    font-family: initial;
}
</style>
