<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/balloon-css/0.5.0/balloon.min.css">
<% unless @report_data.blank? %>
<div class="clearfix"></div>
  <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">
        
      <% if @report_data['day_type']!="1" && @date==@start_date %>
        <h2><%=@report_data['day_type']%></h2>
      <% end %>
      <% unless @report_data.blank? %>
        <div class="clearfix"></div>
          <div class="CSSTableGenerator" style="width: 97%;margin-top: 20px;">       
              <h2><%=@report_data['report_type']%></h2>
              <table id="listing table-design">
                    <tr>
                        <td><b>Teacher Name</b></td> 
                        <td><b>Department</b></td> 
                        <td><b>Total Class</b></td> 
                        <td><b>Given</b></td>
                        <% if MultiSchool.current_school.id == 325 or MultiSchool.current_school.id == 246 or MultiSchool.current_school.id == 354 %>
                          <td><b>Before 5pm</b></td>
                        <% else %>
                          <td><b>Before 3pm</b></td>
                          <td><b>After 3pm</b></td>
                          <td><b>Not Given</b></td>
                        <% end %>
                        <td><b>Frequency</b></td> 
                    </tr>    
                    <% unless @report_data['employee_data'].blank? %>  
                      <% @report_data['employee_data'].each do |employee| %>
                        <% 
                          if @report_data['day_type']!="1" && @date==@start_date
                            employee['homework_given'] = "N/A"
                            employee['total_class'] = "N/A"
                            employee['frequency'] = "N/A"
                          end 
                        %>
                        <% if check_admin_stuff(employee['emp_dep']) %>
                          <tr>
                            <td class="col-2"><b><%= employee['emp_name'] %></b></td>
                            <td class="col-2"><b><%= employee['emp_dep'] %></b></td>
                            <td class="col-2"><b><%= employee['total_class'] %></b></td>
                            <%
                              class_sub_id = []
                              if !employee['class_details'].blank?
                                employee['class_details'].each do |hw|
                                    class_sub_id << hw['id'].to_i
                                end
                              end
                              hw_given_id = []
                              ballon_text = ""; 
                              if employee['homework_given'].to_i > 0 && !employee['homework_given_data'].blank? 
                                employee['homework_given_data'].each do |hw|
                                  if class_sub_id.include?(hw['subjects_id'].to_i)
                                    ballon_text = ballon_text+hw['subjects']+" ("+hw['batch']+" "+hw['course']+" "+hw['section']+")-"+hw['assign_time']+" &#10;"
                                    hw_given_id << hw['subjects_id'].to_i
                                  end
                                end
                              end
                            
                              hw_given_id_3pm = []
                              ballon_text_3pm = ""; 
                              if employee['homework_given'].to_i > 0 && !employee['homework_given_data_3pm'].blank? 
                                employee['homework_given_data_3pm'].each do |hw|
                                  if class_sub_id.include?(hw['subjects_id'].to_i)
                                    ballon_text_3pm = ballon_text_3pm+hw['subjects']+" ("+hw['batch']+" "+hw['course']+" "+hw['section']+")-"+hw['assign_time']+" &#10;"
                                    hw_given_id_3pm << hw['subjects_id'].to_i
                                  end
                                end
                              end
                            
                              hw_given_id_after_3pm = []
                              ballon_text_after_3pm = ""; 
                              if employee['homework_given'].to_i > 0 && !employee['homework_given_data'].blank? 
                                employee['homework_given_data'].each do |hw|
                                  if !hw_given_id_3pm.include?(hw['subjects_id'].to_i)
                                    ballon_text_after_3pm = ballon_text_after_3pm+hw['subjects']+" ("+hw['batch']+" "+hw['course']+" "+hw['section']+")-"+hw['assign_time']+" &#10;"
                                    hw_given_id_after_3pm << hw['subjects_id'].to_i
                                  end
                                end
                              end
                            
                              hw_not_given_id = []
                              ballon_text_not_given = "";
                              if !employee['class_details'].blank? 
                                employee['class_details'].each do |hw|
                                  if !hw_given_id.include?(hw['id'].to_i)
                                    ballon_text_not_given = ballon_text_not_given+hw['subject_name']+" ("+hw['batch_name']+" "+hw['course_name']+")"
                                    hw_not_given_id << hw['id'].to_i
                                  end
                                end
                              end
                            
                              
                          
                            %>
                            <td class="col-2"><b>
                                    <% unless ballon_text.blank?  %>
                                      <button data-balloon="<%= ballon_text %>" data-balloon-pos="up" data-balloon-break><%= hw_given_id.count %></button>
                                      <% employee['homework_given'] = hw_given_id.count %>
                                    <% else %>
                                      <%= employee['homework_given'] %>
                                    <% end %>  
                                      
                             </b></td>
                            
                           
                            <td class="col-2"><b>
                                  <% unless ballon_text_3pm.blank?  %>
                                      <button data-balloon="<%= ballon_text_3pm %>" data-balloon-pos="up" data-balloon-break><%= hw_given_id_3pm.count %></button>
                                      <% employee['homework_given_before_3pm'] = hw_given_id_3pm.count %>
                                    <% else %>
                                      <%= employee['homework_given_before_3pm'] %>
                                    <% end %> 
                                      
                             </b></td>
                             <% if MultiSchool.current_school.id != 325 and MultiSchool.current_school.id != 246 and MultiSchool.current_school.id != 354 %>
                             <td class="col-2"><b>
                                  <% unless ballon_text_after_3pm.blank?  %>
                                      <button data-balloon="<%= ballon_text_after_3pm %>" data-balloon-pos="up" data-balloon-break><%= hw_given_id_after_3pm.count %></button>
                                      
                                    <% else %>
                                      <%= employee['homework_given']-employee['homework_given_before_3pm'] %>
                                    <% end %> 
                                      
                             </b></td>
                             <td class="col-2"><b>
                                  <% unless ballon_text_not_given.blank?  %>
                                      <button data-balloon="<%= ballon_text_not_given %>" data-balloon-pos="up" data-balloon-break><%= hw_not_given_id.count %></button>
                                      
                                    <% else %>
                                      <% if employee['homework_given'] > employee['total_class'] %>
                                      0
                                      <% else %>
                                      <%= employee['total_class']-employee['homework_given'] %>
                                      <% end %>
                                    <% end %> 
                                      
                             </b></td>
                             
                             <% end %>
                             
                            <% 
                            if employee['total_class'].to_i < employee['homework_given'] .to_i
                              employee['frequency'] = 100
                            elsif employee['total_class'].to_i > 0 && employee['homework_given'].to_i > 0
                              employee['frequency'] = (employee['homework_given'].to_f/employee['total_class'].to_f)*100
                            elsif employee['total_class'].to_i == 0
                              employee['frequency'] = "-"
                            else
                              employee['frequency'] = 0
                            end  
                            
                            %>
                             
                            <td class="col-2"><b><%= sprintf( "%0.02f", employee['frequency'].to_f)%></b></td>

                          </tr> 
                        <% end %>
                      <% end %>  
                    <% end %>
              </table>

          </div>
          <% if @date!=@start_date %>
            <%= submit_tag "", :value => "â–ºPDF", :class => "submit_button" %>
          <% end %>
        <% end %>
         
  </div>
<% end %>


 

