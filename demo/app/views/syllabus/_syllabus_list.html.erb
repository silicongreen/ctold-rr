<div class="CSSTableGenerator" >
  <% unless @data['syllabus'].nil? or @data['syllabus'].empty?  %>
    <table class="table-design">
      <thead>
        <tr>
          <th>
            Subject
          </th> 
          <th>
            Last update
          </th>
        </tr>
      </thead>

      <tbody>
        <% @data['syllabus'].each do |syllabus| %>
          <tr>
            <td>
              <div>
                <%= image_tag '/images/icons/subjects/' + syllabus['subject_icon_name'] %>
              </div>
              <div>
                <%= syllabus['subject_name'] %>
              </div>
            </td> 
            <td>
              <div class="left-dev">
                <%= I18n.l(syllabus['last_updated'].to_time, :format=>'%A, %d %B, %Y, %I:%M %p') unless syllabus['last_updated'].nil? %>
              </div>
              <div class="right-dev">
                <%= link_to_remote "View",
                  :before => "Element.show('loader2');",
                  :success => "Element.hide('loader2');",
                  :update => 'data_div',
                  :url=>{:controller=>"syllabus", :action=>"single_syllabus", :id => syllabus['id']}
              %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div style="background-color: #ffffff; width: 100%; height: 100px; color: #333333; padding: 25px;">
      No Data found
    </div>
  <% end %>
</div> 
