<div class="label-field-pair" style="height: 214px;">
    <div class="label-container"><label> <%= t('numbers') %><span class="necessary-field">*</span>:</label></div>
    <div class="text-input-bg" style="padding-left: 10px; width: 302px;">
        <textarea name="sms_numbers" id="sms_numbers" cols="30" rows="10" style="width: 92%; border: 1px solid #ccc; border-radius: 5px; padding: 10px;"></textarea>
        <small style="width: 100%; text-align: right; float: right;">(Comma separated number)</small>
    </div>
</div>

<div class="label-field-pair" style="height: 214px;">
    <div class="label-container"><label> <%= t('message') %><span class="necessary-field">*</span>:</label></div>
    <div class="text-input-bg" style="padding-left: 10px; width: 302px;"><textarea name="sms_message" id="sms_message" cols="30" rows="10" style="width: 92%; border: 1px solid #ccc; border-radius: 5px; padding: 10px;"></textarea></div>
</div>

<%= image_tag("loader.gif",
   :align => "absmiddle",
   :border => 0,
   :id => "loader1",
   :style =>"display: none;" ) %>
<div id="textarea_sms_feedback" style="margin-left: 201px;margin-bottom: 10px;float:left; clear:both;"></div>
<%= submit_tag "#{t('send_sms')}",:class=>'submit_button', :id => 'submit_button' %> 
