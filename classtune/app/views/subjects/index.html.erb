<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('subject') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('home') %></div>
  
  <div id="inner-tab-menu">
    <ul>
      <% if @show_batch_subject %>   
          <li class='themed_bg themed-dark-hover-background'><%= link_to t('subject'), subjects_path() %></li>
      <% else %>
          <li class='themed_bg themed-dark-hover-background'><%= link_to t('single_batch_subject'), subjects_path(:show_batch_subject => "1") %></li>
      <% end %>

    </ul>
  </div>
</div>



<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="box">
    <% if @show_batch_subject  %>  
      <% if @batches.length > 1 %>
        <h4 align="center"><%= t('subject') %></h4>  
        <ul id="category-list" style="float: left; width: 20%; padding: 10px 1px 1px 1px;">
            <% @batches.each do |batch| %>
              <li class="list<%=cycle('odd', 'even')%> batches_list" id='batch_list_<%= batch.id.to_s  %>' style="text-align: center; width: 100%; height: 40px; padding:0; min-height: 0;">
                  <div id="save_batches_<%= batch.id %>" class="category-name" style="width: 100%; height: 100%; ">
                    <%= link_to_remote(batch.name.strip.downcase == 'general' ? 'no-shift' : batch.name,
                      :url => { :controller=>"courses",:action => 'get_batches_classes', :id =>batch.id, :name => batch.name, :from => "subject"},
                      :html => {"style" => 'width: 100%; height: 100%; display: block; padding-top: 10px;'},
                      :method => 'get', :before => "$('loading_" + batch.id.to_s + "').show();", 
                      :complete => "hide_loading(" + batch.id.to_s + ");" ) %>  
                  </div>

                  <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loading_" + batch.id.to_s, :style =>"display: none;  float: right; margin-top: -30px; margin-right: 10px;" ) %>
              </li>
            <% end %>
        </ul>
        <div id="class_info" style="float: left; width: 30%;"><%= render :partial=>'class_info' %></div>
        <div style="clear: both; height: 10px;"></div>
        <div id="subjects"></div>
      <% else %>  
        <h4 align="center"><%= t('subject') %></h4>  
        <div id="class_info"><%= render :partial=>'courses/class_info_subject' %></div>
        <div style="clear: both; height: 10px;"></div>
        <div id="subjects"></div>
      <% end %>
    <% else %> 
      <div class="label-field-pair">
        <label for="student_course"><%= t('select_a_course') %>:
          <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
        </label>
        <div class="text-input-bg">
          <%= select :batch, :id,
            Course.active_courses.map {|c| [c.course_name, c.course_name] },
            {:include_blank => t('select_a_course')},
            {:onchange => "#{remote_function(
            :url => { :action => 'show' },
            :with => "'course_name='+value+'&show_batch_subject=0'",
            :before => "Element.show('loader')",
            :complete => "success_load()"  )}"} %>
        </div>
      </div>
      <div id="subjects"></div>
    <% end %>  
    <div id="modal-box" style="display:none;"></div>

    <div class="extender"></div>
  </div></div>
<style>
  .custom_icon{
    border: 1px solid #ccc;
    height: 40px;
    padding: 3px;
    width: 40px;
  }
  .category-name a{
    text-decoration: none;
  }
  #category-list li div a:hover{
    text-decoration: none;
    color: #000;
  }
  #category-list li.batches_list{
    cursor: pointer;
  }
  #category-list li.batches_list:hover{
    background: #D7D7D7;
  }
  #category-list li.selected{
    background: #D7D7D7;
  }
  #category-list li div.category-sections span.sections {
    background: #DDD;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
    cursor: pointer;
}

#category-list li div.category-sections span.select_section {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
    cursor: pointer;
}

#category-list li div.category-sections span.sections:hover {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}

#category-list li div.category-sections a.sections {
    background: #DDD;
    margin-right: 8px;
    padding: 2px 6px 2px 5px;
    border: 1px solid #BBB;
    position: relative;
}

#category-list li div.category-sections a.sections:hover {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}
#category-list li div.category-sections a.selected {
    background: #DB3434;
    text-decoration: none;
    color: #fff;
}
</style>
<% content_for :head do %>
  <%= javascript_include_tag "custom/assign-icon" %>
<% end %>