<div id="page-yield" class="available_sections1">
  <%= render :partial=>"/connect_exam/sir_john_wilson_school/grade_effort_header" %>
  <div class="section1 row" >
    <center>     
      
      <div id ="main_info" class="sjws">
            
       
      </div>
      <% unless @report_data.blank?  or  @report_data['result'].blank? %>
      <% c = 'even' %>
      <% full_mark = 0 %>
      <% colspan = 0 %>
      <table class="sjws_table_intro" width="100%" cellspacing="0">
        <tr>
          <td colspan="2">
              <p>&nbsp;</p>
              <p><b>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %>&nbsp;<%= @batch.course.section_name %></b></p>
              <p><b>Subject : <%= @subject.name %></b></p>
              <p>&nbsp;</p>
          </td>
          
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          
          <td colspan="2" align="right">
            <p>&nbsp;</p>
            <p><b>TERM:
              <% if @connect_exam_obj.name.include? ("FIRST") %>
                  <%=  "FIRST TERM"%>
              <% elsif @connect_exam_obj.name.include? ("First") %>
                  <%=  "FIRST TERM"%>
              <% elsif @connect_exam_obj.name.include? ("first") %>
                  <%=  "FIRST TERM"%>
              <% elsif @connect_exam_obj.name.include? ("SECOND") %>
                  <%=  "SECOND TERM"%>
              <% elsif @connect_exam_obj.name.include? ("Second") %>
                  <%=  "SECOND TERM"%>
              <% elsif @connect_exam_obj.name.include? ("second") %>
                  <%=  "SECOND TERM"%>
              <% elsif @connect_exam_obj.name.include? ("FINAL") %>
                  <%=  "FINAL TERM"%>
              <% elsif @connect_exam_obj.name.include? ("Final") %>
                  <%=  "FINAL TERM"%>
              <% elsif @connect_exam_obj.name.include? ("final") %>
                  <%=  "FINAL TERM"%>
              <% end %>
                </b></p>
            <% if !@employee.nil? %>
              <p><b>Teacher's Name : <%=  @employee.full_name %></b></p>  
            <% else %>
              <p><b>Teacher's Name : ..............................</b></p> 
            <% end %> 
            <p>&nbsp;</p>
          </td>
        </tr>
        
      </table>
      <table id="pdf-table" class="sjws_table_head" width="100%" cellspacing="0">
        
        
        
        
        <tr class="sjws-table-header">
          <td class="sl"><b>SL.</b></td>
          <td class="st_name"><b>NAME</b></td>         
          <td class="name"><center><b><% if @connect_exam_obj.name.include? ("FIRST") %>
                  <%=  "First Term"%>
              <% elsif @connect_exam_obj.name.include? ("First") %>
                  <%=  "First Term"%>
              <% elsif @connect_exam_obj.name.include? ("first") %>
                  <%=  "First Term"%>
              <% elsif @connect_exam_obj.name.include? ("SECOND") %>
                  <%=  "Second Term"%>
              <% elsif @connect_exam_obj.name.include? ("Second") %>
                  <%=  "Second Term"%>
              <% elsif @connect_exam_obj.name.include? ("second") %>
                  <%=  "Second Term"%>
              <% elsif @connect_exam_obj.name.include? ("FINAL") %>
                  <%=  "Final Term"%>
              <% elsif @connect_exam_obj.name.include? ("Final") %>
                  <%=  "Final Term"%>
              <% elsif @connect_exam_obj.name.include? ("final") %>
                  <%=  "Final Term"%>
              <% end %>
              <%= " Mark" %><br /><%="%"%></b></center></td>
          <td class="name"><center><b><%= "Grade" %></b></center></td>
          <td class="name"><center><b><%= "H.W." %></b></center></td>
          <td class="name"><center><b><%= "Effort" %></b></center></td>
          <td class="st_name"><b><%= "Teacher's Comment" %></b></td>
        
        </tr>
        
        <% extender = 0 %>
        <% std_count = 0 %>
        <% main_count = 0 %>
        <% unless @report_data['result']['al_students'].blank? %>
        <% @report_data['result']['al_students'].each do |std| %>
          <%  std_count = std_count+1; %>
          <%  main_count = main_count+1; %>
          <% colspan = colspan+4 %>
          <% if std_count>15 && extender ==0 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break-new">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr>    
          <% elsif std_count>20 && extender ==1 %>
              <% std_count = 0 %>
              <% extender = 1 %>
              <tr class="page-break-new">
                  <td colspan="<%= colspan %>">&nbsp;</td>
              </tr> 
          <% end %>    
        
        
          <% total_mark = 0 %>
          <% full_mark = 0 %>
          <% main_mark = 0 %>
          
          <% @report_data['result']['ALL'].each do |rs| %>            
            <% if rs['exam_category'] == '1' %>
              <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>              
                  <% total_mark = total_mark.to_f+rs['students'][std['id']]['score'].to_f %>

              <% else %>

              <% end %> 
              <% if !rs['maximum_marks'].blank? %>
                <% full_mark = full_mark+rs['maximum_marks'].to_i %>
              <% end %> 
            <% end %>
          <% end %>     
          
          <tr class="sjws-table-header">
            <td class="sl"><%#= std['class_roll_no'] %><%= main_count %></td>
            <td class="st_name"><%= std['name'] %><div class="mark_with_std"><%=total_mark.to_i %><hr><%=full_mark.to_i %></div></td>            
            <% main_mark = (total_mark/full_mark)*100 %>
            <td class="name"><center><%= sprintf( "%0.02f", main_mark).to_i %> %</center></td>  
            <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
            <% if !grade.blank? and !grade.name.blank? %>
            <td class="name"><center><%= grade.name %></center></td>
            <% else %>
              <td class="name"><center>N/A</center></td>
            <% end %> 
            
            <% assignmentCount = Assignment.count(:all, :conditions => {:subject_id => @subject_id,:is_published=>1,:duedate => @connect_exam_obj.attandence_start_date..@connect_exam_obj.attandence_end_date}) %>
            
            <td class="name"> <center><%= "0" %><hr><%= assignmentCount %></center></td>
            <%
              exam_comment = ""
              exam_effort = ""
              @exam_comments = ExamConnectSubjectComment.find(:first, :conditions => {:exam_connect_id=>@connect_exam_obj.id,:subject_id => @subject_id, :student_id => std['id']} )
              if !@exam_comments.blank?
                exam_comment = @exam_comments['comments']
                exam_effort = @exam_comments['effort']
              end
            %>
            
            <td class="name"><center><%= exam_effort %></center></td>
            <td><%= exam_comment %></td>
          </tr>
        <% end %>
        <% end %>
          <tr class="tr-bottom">
            <td colspan="100">&nbsp;</td>
          </tr>
      </table>
      <% end %>
    </center>
  </div>
  
  
</div>
