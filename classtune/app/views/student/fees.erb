                          <% else %>
                          <div id="lnk_all" style="padding-top: 10px;"><%= link_to "Pay All Fees",{:action=>:fee_details, :id => @student.id, :multiple=>true}, {:class=> 'details_button', :id => "lnk_btn"} %></div>
                          <% end %>
                      </td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
          
            
