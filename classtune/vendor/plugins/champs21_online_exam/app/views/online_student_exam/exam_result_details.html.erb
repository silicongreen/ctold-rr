<div class="header-wrapper">
  <div class="header-title">
    <div class="header-icon">
      <%= image_tag '/images/icons/homework.png', :html => {:alt => 'Homework'} %>
    </div>
    <div class="header-title-text-wrapper">
      <div class="header-title-main-text f2">
       <a href="/online_student_exam/"> ONLINE EXAM</a>
      </div>
      <div class="header-title-sub-text f5">

        </div>
      </div>
    </div>      
  
</div>
<% unless @exam_questions.blank? %>
<div id="page-yield" style="margin-top: 0px;">
    <h4><%= @exam_group.subject.name %> | <%= @exam_group.name %></h4>
    <% @exam_questions.each_with_index do |e,i|%>
      <div class="q-table">
        <div id="q-no"><%= i+1 %>) <%= t('question') %> :</div>
        <div id="question"> <%= e.question %></div>
        <div id="mark" class="themed_text"><%= t('mark') %>: <%= e.mark %></div>
        
      </div>
      <div class="option">
        <div id="option-label"><%= t('options') %><span>&nbsp;&nbsp;:</span></div>
        <% e.online_exam_options.each do |o| %>
          <div id="option-content">
            <div class="answer">
               
              <%
              class_selected = ""
              unless @exam_result.blank?
                exam_option = @exam_result.find{|er| er.online_exam_question_id == e.id && er.online_exam_option_id == o.id}
                unless exam_option.blank?
                  if o.is_answer
                    if exam_option.is_correct
                      class_selected = "user_selected"
                    else
                      class_selected = "red"
                    end  
                  else  
                    class_selected = "user_selected"
                  end
                end  
              end  
            
              %>  
                
              <% if o.is_answer %>
                <div class="is-answer <%= class_selected %>"><%= o.option %></div>
              <% else  %>
                <div class="not-answer <%= class_selected %>"><%= o.option %></div>
              <% end %>
              
            </div>
          </div>
        <% end %>
      </div>
      <hr width="100%" size="3"  noshade class ="horizontal-line"></hr>
    <% end %>
  </div>
<% else %>
  <div id="page-yield">
    <p class="flash-msg"> <%= t('no_question_added_to_this_exam_group') %> </p>
  </div>
<% end %>
