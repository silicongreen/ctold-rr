<% transport_fee_collections= student.transport_fee_collections %>
<% unless transport_fee_collections.nil? %>
  <% transport_fee_collections.each do |d| %>
    <li class="list<%=cycle('even', 'odd')%>">
      <div class="category-name"><%= link_to "#{d.name}"+" - #{t('transport_text')}", {:controller=>:transport_fee,:action=>:student_profile_fee_details, :id=>student.id, :id2=>d.id}, :class=>"themed_hover_text" %></div>
      <div class="due-date"><%= d.due_date %></div>
      <% @balance = student.transport_fee_balance(d.id)  %>
      <% if @balance == 0 %>
        <div class="category-edit"><%=  t('paid')  %></div>
      <% else %>
        <div class="category-edit"><%="#{t('unpaid')} - #{precision_label(@balance)}"  %></div>
      <% end %>
    </li>
  <% end %>
<% end %>
