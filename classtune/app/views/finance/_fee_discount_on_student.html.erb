<% if @particular.present? %>
<div class="label-field-pair">
    <div class="label-container"><label for="reason"><%= t('discount_on') %><span class="necessary-field">*</span>:</label></div>
    <div class="input-container">
      <%= select("discount_on","discount_on", @particular,
        {:prompt => "#{t('discount_on')}" },
        {:onchange => "#{remote_function(:url => {:action => "fee_collection_batch_update_student"},
          :with => "'id='+value",
          :before => "Element.show('loader2')",
          :success => "Element.hide('loader2')")}",:autocomplete => "off"
        })%>
   </div>
   <div class="loader_div">
      <%= image_tag("loader.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader2",
        :style =>"display: none;" ) %>
    </div>
</div>
<% end %>