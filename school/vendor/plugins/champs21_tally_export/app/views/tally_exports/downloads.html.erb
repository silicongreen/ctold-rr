<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('downloads') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('download_exports') %></div>
</div>
<div id="page-yield">
  <div class="link-box">
    <div class="heading"><%= t('exported_files') %></div>
    <%  @files.each do |f| %>
      <%# file_name = f.split("tally_exports/").last %>
      <% file_name = f.export_file_file_name %>
      <% basename = file_name.split('.').first %>
      <% time = file_name.split("_").last %>
      <div class="container<%= cycle('odd', 'even')%> ">
        <div class="file_name"><%= I18n.l(time.to_time) %></div>
        <div class="file_download"><%= link_to "#{t('download_text')}",f.export_file.url %></div>
      </div>
    <% end %>
    <div class="link-descr"></div>
  </div>
</div>
