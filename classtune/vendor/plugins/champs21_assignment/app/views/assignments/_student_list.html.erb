<% unless @students.empty? %>
  <% if @status == "comments" %>
    <% std_id = [] %>
    <% unless @ass_comments.blank? %>
      <% @ass_comments.each do |ass_comment| %>
          <% unless std_id.include?(ass_comment.student_id) %>
            <% std_id << ass_comment.student_id %>
            <%
              s = Student.find_by_id ass_comment.student_id
              if s.nil?
                s = ArchivedStudent.find_by_former_id ass_comment.student_id
              end
          
            %>
            <% if s.present? %>
              <div class="listitem">
                  <b><%= link_to s.full_name , {:controller => "assignment_answers", :action => "message",:assignment_id=>@assignment.id,:student_id=>s.id},:target => '_blank' %><%=" &#x200E; ( #{s.admission_no} ) &#x200E;"%></b>
                  <div class="answer-details"  >
              
                    <% time_created = ass_comment.created_at.to_time + 6*60*60 %>  
                    <%= t('on_text') %>&#x200E;<%= I18n.l(time_created, :format=>'%r , %d %B') %>
                  </div>
              </div>
            <% end %>
          <% end %>
      <% end %>
    <% end %>    
        
    <% @students.each do |s| %>
        <% unless std_id.include?(s.id) %>
          <div class="listitem"><%= link_to s.full_name ,{:controller => "assignment_answers", :action => "message",:assignment_id=>@assignment.id,:student_id=>s.id},:target => '_blank' %><%=" &#x200E; ( #{s.admission_no} ) &#x200E;"%> </div>
        <% end %>
    <% end %>    
  <% elsif @status == "assigned" or @status == "pending" %>
    <% @students.each do |s| %>
      <% if s.present? %>
        <div class="listitem">    <%="#{s.full_name} &#x200E; ( #{s.admission_no} ) &#x200E;"%> </div>
      <% else %>
        <div class="listitem"><%= t('deleted_student') %></div>
      <% end %>
    <% end %>
  <% else %>
    <% @answers.each do |a| %>
      <% student = a.student %>
      <% student ||= ArchivedStudent.find_by_former_id(a.student_id) %>
      <% if student.present? %>
        <div class="listitem">
          <%= link_to " #{student.full_name} &#x200E;",assignment_assignment_answer_path(a.assignment,a),:target => '_blank' %> &nbsp;  (<%= student.admission_no %>) &nbsp; <%= "&#x200E; #{a.status=="0" ? t('pending'): a.status.to_s.capitalize}"  %>
          <div class="answer-details"  >
            <% if @assignment.total_mark.to_i > 0 %>
              <% if a.mark.to_i > 0 %>
              <b>Mark : <%= a.mark %>&nbsp;&nbsp;&nbsp;</b>
              <% end %>
            <% end %> 
            <% if (a.created_at.to_s < "2020-11-08 01:17:00" || a.created_at.to_s > "2020-11-22 01:17:00") and a.from_web == 1 %>
              <% time_created = a.created_at.to_time + 6*60*60 %>  
            <% else %>
              <% time_created = a.created_at.to_time %>
            <% end %>  
            <%= t('on_text') %>&#x200E;<%= I18n.l(time_created, :format=>'%r , %d %B') %>
          </div>
        </div>
      <% else %>
        <div class="listitem"><%= t('deleted_student') %></div>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <h5><%= "#{t('no_students')}"%></h5>
<% end %>
