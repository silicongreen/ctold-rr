<tr>
    
  <%
    personal_and_social = ['Complete works in time','Does home-work regularly','Does work neatly','Eagerly participates in class','Express good behaviour','Is attentive to work','Punctual in class','Takes interest in game','Understand and follows instruction','Works cooperatively with peers']
  %>
  <% 
    all_comments_array = []
    if !@student_exam_comment[@std_id_comment.to_s].blank?
      all_comments = @student_exam_comment[@std_id_comment.to_s]
      if !all_comments.blank?
        all_comments_array = all_comments.split("**")
      end
    end
  present = 0
  unless all_comments_array[10].blank?
    present = all_comments_array[10].to_i
  end  
  %>

 <td colspan="100" class="comment_input_box_connect_td" id="commentstd_<%= @std_id_comment %>">
     <% i = 0 %>
     <% width_percentize = ((100/personal_and_social.count.to_f)*2)-1 %>
     <% personal_and_social.each do |p_and_s| %>
     
      <% cmt = "" %>
      <% if !all_comments_array[i].blank? && (all_comments_array[i].to_i ==1 || all_comments_array[i].to_i ==2 || all_comments_array[i].to_i ==3)   %>
        <% cmt = all_comments_array[i] %>
      <% end %>
      <select name="commentstd_<%= @std_id_comment %>_<%= i %>" class="comment_input_box_connect_exam_multiple_<%= @std_id_comment %>" id="commentstd_<%= @std_id_comment %>_<%= i %>" style="width:<%= width_percentize %>%; margin:5px 5px 0px 0px;" >
              <option value=""><%= p_and_s %></option>
              <option value="1" <% if cmt.to_i == 1 %> selected='selected' <% end %>>Sometimes</option>
              <option value="2" <% if cmt.to_i == 2 %> selected='selected' <% end %>>Usually</option>
              <option value="3" <% if cmt.to_i == 3 %> selected='selected' <% end %>>Mostly</option>
        </select>        
     
     <% i = i+1 %> 
     <% end %>
     <input type="number" name="commentstd_<%= @std_id_comment %>_10" value="<%=  present.to_i%>" class="comment_input_box_connect_exam_multiple_<%= @std_id_comment %>" id="commentstd_<%= @std_id_comment %>_10" style="width:<%= width_percentize %>%; margin:5px 5px 0px 0px;" /> 
 </td>

</tr>
