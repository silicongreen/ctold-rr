<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('sms_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('students') %></div>

</div>
<script>
  var jj = jQuery.noConflict();
</script>  
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">
<% form_for :send_sms do |x| %>
   <div class="label-field-pair">
    <div class="label-container"><label><%= t('select_a_batch') %>:</label> </div>
    <div class="text-input-bg text-input-bg2" style="height: 320px;"><%= select :send_sms, :batch_id,
        @batches.map {|b| [b.full_name, b.id]},
        {:prompt => "Select"},
        {:multiple => true,:onChange => "#{remote_function(:url => {:action => "list_students"},
        :with => "'batch_id='+jj('#send_sms_batch_id').val()",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"
        )}"} %>
    <%= image_tag("loader.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader",
      :style =>"display: none;" ) %>
    </div>
    <div class="label-container"><label>Send To</label></div>
        <div class="text-input-bg">
          <select name="send_sms[send_to]">
            <option value="1">Student And Parent/Guardian</option>
            <option value="2">Student</option>
            <option value="3">Parent/Guardian</option>
            <option value="4">Both Parent/Guardian</option>
            <option value="5">Student Both Parent/Guardian</option>
            <option value="6">Student Both Parent/Guardian (Only For Test)</option>
          </select>
        </div>
    <div class="label-container"><label>Only Download?</label></div>
        <div class="text-input-bg">
          <select name="send_sms[download]">
            <option value="1">Yes</option>
            <option value="0">No</option>
          </select>
        </div>
   </div>


    

<div id="student-list">
  <!--here students of the particular batch will be listed via ajax-->
</div>

<% end %>

<div id="status-message">

</div>
    <%= image_tag("loader2.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader2",
      :style =>"display: none;" ) %>

  </div>
</div>
<style>
.text-input-bg2 select
{
   height: 300px;
}
p.flash-msg
{
  float:left;
  clear: both;
}
</style>    
