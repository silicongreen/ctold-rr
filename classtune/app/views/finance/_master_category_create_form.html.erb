<label class="head_label"><h2><%= t('create_master_category_for_fees') %></h2><span></span></label>


<div id="grading-levels-form">

  <% form_remote_for @finance_fee_category, :url=>{:action=>'master_category_create'},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>

    <div id="form-errors"></div>


    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('name')}" %></div>
      <div class="input-container"><%= f.text_field :name %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('description')}" %></div>
      <div class="input-container"><%= f.text_field :description %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><label><%= t('select_a_batch') %> :</label></div>
      <div style="clear: both;"></div>
      <div style="width: 100%; padding: 10px;">
        <%#= f.select :batch_id, @batches.map { |c| [c.full_name, c.id] },{:prompt => 'Select Batch'} %>
        <div class="sel-list" style="padding-bottom: 5px; ">
          <%= t('select') %>: <%= link_to_function t('all'), "$$('input.MB_focusable').each(function(checkbox) { checkbox.checked = true; });" %>,
          <%= link_to_function t('none'), "$$('input.MB_focusable').each(function(checkbox) { checkbox.checked = false; });" %>
        </div>
        <div class="batches">
          <% @batches.each do |f| %>
          <div class="each_batch">
              <div class="checkbox_inline"><%= check_box_tag "finance_fee_category[category_batches_attributes][#{f.id}][batch_id]", f.id %></div> 
              <div class="checkbox_label"><label><%= f.full_name %></label></div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="extender" style ="height:20px"></div>
    <div id ="sub-button">
      <%=  submit_tag "â–º #{t('save')}",{:class=>'submit_button', :id => 'submit_button'} %>
    </div>

  <% end %>
</div>
