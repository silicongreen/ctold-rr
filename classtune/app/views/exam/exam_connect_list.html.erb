<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('exams_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('create_exam') %></div>
<div id="inner-tab-menu">
  <ul>
    <% if permitted_to? :previous_batch_exams, :exam %>
      <li class='themed_bg themed-dark-hover-background' style="display: none;"><%= link_to "#{t('previous_batch_exam')}", {:controller => "exam", :action => "previous_batch_exams"} %></li>
    <% end %>
    <% unless @show_class_exam %>   
        <li class='themed_bg themed-dark-hover-background'><%= link_to t('exams_text'), :controller => "exam", :action => "create_exam" %></li>
    <% else %>
        <li class='themed_bg themed-dark-hover-background'><%= link_to t('single_batch_exam'), :controller => "exam", :action => "create_exam", :show_class => true %></li>
    <% end %>  
    <%  if permitted_to? :grouping,:exam %>
      <% unless @is_class_exam %>   
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('connect_exams_new')}", :controller=>'exam', :action=>'new_exam_connect', :id=>@batch %></li>
      <% end %>
    <% end %>
  </ul>
    

</div>
</div>


<div id="page-yield">
  
  <div id="flash-box">   
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
    
  <div class="box">

  <h2>EXAM CONNECT LIST</h2>
  <%#= debug @exam_connect_data.inspect %>
  <% unless @exam_connect_data.nil? %>
      <h4><%= t('connect_exams') %></h4>
      
        <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
          <% count=@exam_connect_data.count.to_i - 1 %>
          <tr class="tr-head">
            
            <td class="col-2">
                
              <%= t('exam_group') %>
            </td>
            <td class="col-2">
              
            </td>
          </tr>
          <tr class="tr-blank"></tr>
          <% i=0 %>
          <% total = 0 %>
          <% @exam_connect_data.each do |e| %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
              
              
              <td class="col-2"><%= link_to(e.name, '/exam/' + 'connect_exam_subject/' + e.id.to_s, :method => 'get') %></td>
              <td class="col-2">
                 <%= link_to("#{t('edit_text')}", '/exam/' + 'edit_exam_connect/' + e.id.to_s, :method => 'get') %> &nbsp;|&nbsp;
                 <%= link_to("#{t('delete_text')}", '/exam/' + 'remove_exam_connect/' + e.id.to_s, :method => 'delete', :confirm => "#{t('delete_confirm_msg')}") %>
                 <% if e.is_published == 0 %>
                  &nbsp;|&nbsp;&nbsp;<%= link_to("#{t('publish_exam_result')}", '/exam/' + 'publish_connect_exam/' + e.id.to_s,:confirm => "Do You Really Want To publish This Exam?")  %>
                 <% else %>
                  &nbsp;|&nbsp;&nbsp;<font color='green'> Exam Result Published </font>
                 <% end %>
              </td>
            </tr>
            <% i=i+1 %>
          <% end %>
          
        </table>    
        
     
    <% else %>
      <p class="flash-msg">No valid exams connection available.</p>
    <% end %>
  </div></div>
