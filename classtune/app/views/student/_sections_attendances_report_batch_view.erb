<% if @classes.length == 1 %>
<script type="text/javascript">
  j("#sections_div").hide();
  j.ajax({
    type: "POST",
    url: "/attendances/show_student",
    data: j('#student_batch_name').serialize() + "&course_id=" + <%= @classes[0].id  %>
  })
  .done(function( msg ) {
    j("#sections_div").hide();
    j("#register").html(msg);
  });
</script>  
<% else %>
<script type="text/javascript">
  j("#sections_div").show();
</script>  
<% if @selected_section.to_i > 0 %>
<%= select :student, :section, options_for_select(@classes.map { |c| [c.section_name.strip.length > 0 ? c.section_name.strip : "no-section", c.id] }, @selected_section.to_i),
    {:prompt => "#{t('select')}"},
    {:onchange => "#{remote_function(
          :update => "register",
          :url => {:controller => "attendances", :action => 'show_student' },
          :with => "'course_id='+value+'&'+$('student_batch_name').serialize()",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"  )}"} %>  
<% else %>    
<%= select :student, :section, options_for_select(@classes.map { |c| [c.section_name.strip.length > 0 ? c.section_name.strip : "no-section", c.id] }, @selected_section.to_i),
    {:prompt => "#{t('select')}"},
    {:onchange => "#{remote_function(
          :update => "register",
          :url => {:controller => "attendances",:action => 'show_student' },
          :with => "'course_id='+value+'&'+$('student_batch_name').serialize()",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"  )}"} %>  
<% end %>
<% end %>
