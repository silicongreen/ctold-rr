<% form_for :ssl_online_pay ,:url => get_payment_url,:method => :post do |f| %>
  <%= hidden_field_tag :tran_id,@trans_id_ssl_commerce %>
  <%= hidden_field_tag :store_id,@store_id %>
  <input type="hidden" name="cart[0][product]" value="<%=@item_name%>" />
  <input type="hidden" name="cart[0][amopunt]" value="1" />
  <% extra_string = "" %>
  <% unless params[:mobile_view].blank? %>
    <% extra_string = "&mobile_view=1" %>
  <% end %>
  <%= hidden_field_tag :total_amount,sprintf("%0.2f",@amount_to_pay).to_f,:readonly => true %>
  <%= hidden_field_tag :success_url,@return_url+extra_string %>
  <%= hidden_field_tag :fail_url,@fail_url+extra_string %>
  <%= hidden_field_tag :cancel_url,@cancel_url+extra_string %>
  <%= hidden_field_tag :version,"2.00" %>
  <% if @paid_fees.blank? %>
    <%= f.submit 'â–º Pay Fees',:class => "submit_button btn btn-success" %>
  <% end %>
<% end %>