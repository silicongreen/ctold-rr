<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('news_text') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('read_news') %></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>

  <% form_for :syllabus do |f| %>

    <%= error_messages_for :syllabus %>

    <div id="add_news_form">
      <div class="news_label_field">
        <label for="news_title"><%= t('title') %></label>
        <div id="news_title_text_field_bg"><%= f.text_field :title, :value => @syllabus.title %></div>
      </div>
      <div class="label-field-pair">
        <label for="employee_category"><%= t('student_batch') %><span class="necessary-field">*</span> </label><br /><br />
        <div class="text-input-bg"><%= select :syllabus, :batch_id, @batches.map { |s| [s.full_name, s.id] },
            {:prompt => "#{t('select_a_batch')}"},
            {:onChange => "#{remote_function(:url => {:action => "show"}, :with => "'batch_id='+value",:before=>"$('loader').show();",:success=>"$('loader').hide();")}"}%>
          <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
        </div>
      </div>
      <br /><br />
      <div id="is_yearly">
      <label for="student_course"><%= t('is_yearly') %></label><br />
      <%= f.check_box :is_yearly %>
      </div>
      <div class="label-field-pair" >
        <label for="employee_grade"><%= t('examp_groups') %></label>
        <div class="text-input-bg"><%= select :syllabus, :exam_group_id, @exam_groups.map {|e| [e.name, e.id]},{:prompt => t('select_exam_group')}, :value => @syllabus.exam_group_id %></div>
      </div>
      </br></br>
      <div class="label-field-pair">
        <label for="employee_grade"><%= t('subject') %> <%= @syllabus.subject_id %></label>
        <div class="text-input-bg"><%= select :syllabus, :subject_id, @subjects.map {|s| [s.name, s.id]}, :value => @syllabus.subject_id %></div>
      </div>
      </br></br>
      <div class="news_label_field">
        <label for="news_content"><%= t('content') %></label>
        <div id="news_content_text_field_bg">
          <%= fckeditor_textarea :syllabus, :content, :value => @syllabus.content %>
        </div>
      </div>
    </div>

    <%= submit_tag "", :value => "â–º #{t('update')}", :class => "news_publish_button" %>
  <% end %>
  <%= load_redactor_script %>
</div>
