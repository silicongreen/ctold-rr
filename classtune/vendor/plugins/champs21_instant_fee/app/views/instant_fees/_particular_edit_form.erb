<label class="head_label"><%= t('update_instant_particular_for_fees')  %><span></span></label>


<div id="grading-levels-form">

  <% form_remote_for @instant_particular, :url=>{:action=>'update_particular',:id => @instant_particular.id} do |f| %>

    <div id="form-errors"></div>
    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('select_category')}" %></div>
      <div class="input-container"> <%= f.select(:instant_fee_category_id, @instant_fee_categories .map { |category| [category.name, category.id]})
      %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('name')}" %></div>
      <div class="input-container"><%= f.text_field :name %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('description')}" %></div>
      <div class="input-container"><%= f.text_field :description %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('amount')}" %></div>      
      <div class="input-container"><%= f.text_field :amount,:value=>precision_label(@instant_particular.amount),:class=>'precision_text' %></div>
    </div>

    <%=  submit_tag "â–º #{t('save')}",:class=>'submit_button' %>

  <% end %>
</div>
