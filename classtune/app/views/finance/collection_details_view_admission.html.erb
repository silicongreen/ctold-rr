                @op_type = '';
                @op_order_id = '';
                @op_ref_id = '';
            %>  
            <% if fees.student.blank? %>
              <% break %>
            <% end %>  
            <% unless paid_fees.blank?
                  paid_fees.each do |pf|
                     @online_payment = Payment.find(:all, :conditions=>"finance_transaction_id = #{pf.id}")
