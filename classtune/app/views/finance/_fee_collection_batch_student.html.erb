<% if @batches.present? %>
 <%=hidden_field_tag :category,@fee_category.id if @fee_category%>
  <div class="batch_select_box">
    <div class="label-field-pair">
        <div class="label-container"><label> <%= t('select_batch') %><span class="necessary-field">*</span>:</label></div>
        <div class="input-container">
          <%= select("fee_discount","batch_id", @batches.map{|b|[b.full_name,b.id]},
            {:prompt => "#{t('select_a_batch')}" },
            {:onchange => "#{remote_function(:url => {:action => "load_batch_student"},
              :with => "'id='+value",
              :before => "Element.show('loader3')",
              :success => "Element.hide('loader3')")}",:autocomplete => "off"
            })%>
       </div>
       <div class="loader_div">
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader3",
            :style =>"display: none;" ) %>
        </div>
    </div>
  </div>
<% end %>
