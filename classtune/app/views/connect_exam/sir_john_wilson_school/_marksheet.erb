<% month_number =@connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%-m"):@connect_exam_obj.published_date.strftime("%-m") %>
<div id="page-yield" class="available_sections1">
    <div class="page1 sjws"> 
        <div class="logo_left"><%= wicked_pdf_image_tag "/"+("#{Rails.root}/"+ ("public/images/school_logo/340/sjws_logo.png")),:width=> '80%' %></div>
        <div class="exam_title_left"><p><%= @connect_exam_obj.name %> - PUPIL PROGRESS REPORT - ACADEMIC YEAR 

        <% if month_number.to_i>6 %>
          <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i+1:@connect_exam_obj.published_date.strftime("%Y").to_i+1 %>
        <% else %>
          <%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y").to_i-1:@connect_exam_obj.published_date.strftime("%Y").to_i-1 %>-<%= @connect_exam_obj.published_date.blank? ? @connect_exam_obj.created_at.strftime("%Y"):@connect_exam_obj.published_date.strftime("%Y") %>
        <% end %>
            
            
        </p></div>
        <div class="grad_list_right">ATTAINMENT:<br />
<%#= debug @grades %>
            <% @grades.each do |g| %>
              <% gValue = g.min_score.to_i %>
              <% if gValue > 0 %>            
                <%= gValue.to_s+"% + ="+ g.name + " - " + g.description %><br />
              <% else %>
                <%= "Less than 50% = " + g.name + " - " + g.description %><br />
              <% end %>
            <% end %>
        </div>
    </div>
    <div class="section1 row" >
        <center>     

            <div id ="main_info" class="sjws">


            </div>

            <% unless @report_data.blank?  or  @report_data['result'].blank? %>
              <% c = 'even' %>
              <% full_mark = 0 %>
              <% colspan = 0 %>
              <table id="pdf-table" class="sjws_table_head" width="100%" cellspacing="0">

                  <tr class="sjws-table-header">
                      <td colspan="2" class="left-align">
                         
                          <p><b>TERM: <%= @connect_exam_obj.name %></b></p>
                          <p><b>Class : <%= (@batch.name=="General")?"":@batch.name+" " %><%= @batch.course.course_name %>&nbsp;<%= @batch.course.section_name %></b></p>
                          <% if !@employee.nil? %> 
                            <p><b>Subject : <%= @subject.name %></b></p>
                            <p><b>Teacher's Name : <%=  @employee.full_name %></b></p>              
                          <% else %>
                            <p><b>Subject : <%= @subject.name %></b></p>
                          <% end %> 
                          <p></p>
                      </td>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <% if rs['exam_category'].to_i!=4 %>
                        <td class="rotate"><div>
                        <% if rs['exam_date'].to_s!="01/01/70" %>
                          <span><%=  rs['exam_date'].to_s %><br /></span>
                          <span><%=  rs['alternative_title'] %></span>
                        <% else %>
                          <span><%=  rs['alternative_title'] %><br /></span>
                        <% end %>  
                        </div></td>
                        <% colspan = colspan+1 %>  
                        <% end %>
                      <% end %> 
                      <% assignmentCount = Assignment.count(:all, :conditions => {:subject_id => @subject.id,:is_published=>1,:duedate => @connect_exam_obj.attandence_start_date..@connect_exam_obj.attandence_end_date}) %>

                      <td class="rotate"><center><div><span>TOTAL NUM. OF H.W.</span></div></center></td>
                      <td class="rotate"><div><br /><br /><br /><span>MARKS ACHIEVED </span><br /><br /><span> MRKS OUT OF</span><br /></div></td>
                      <td class="rotate"><div><span>MARK - PERCENTANGE(%)</span></div></td>
                      <td class="rotate"><center><div><span>GRADE</span></div></center></td>
                  </tr>


                  <tr class="sjws-table-header">
                      <td class="sl"><b>SL.</b></td>
                      <td class="st_name left-align"><b>STUDENTS' NAME / Out of</b></td>
                      <% @report_data['result']['ALL'].each do |rs| %>
                        <% if rs['exam_category'].to_i!=4 %>
                        <td class="class_test"><b><%=  rs['maximum_marks'].to_i %></b></td>

                        <% colspan = colspan+1 %>
                        <% end %>
                      <% end %>  
                      <td>&darr;</td>
                      <td>&nbsp;&nbsp;&nbsp;&nbsp;&darr;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&darr;</td>
                      <td>&nbsp;</td>
                      <td></td>

                  </tr>

                  <% extender = 0 %>
                  <% std_count = 0 %>
                  <% std_count_main = 0 %>
                  <% unless @report_data['result']['al_students'].blank? %>
                    <% @report_data['result']['al_students'].each do |std| %>
                      <% std_count_main = std_count_main+1 %>
                      <%  std_count = std_count+1; %>
                      <% colspan = colspan+4 %>
                      <% if std_count>13 && extender ==0 %>
                        <% std_count = 0 %>
                        <% extender = 1 %>
                        <tr class="page-break">
                            <td colspan="<%= colspan %>">&nbsp;</td>
                        </tr>    
                    
                      <% elsif std_count>22 && extender ==1 %>
                        <% std_count = 0 %>
                        <% extender = 1 %>
                        <tr class="page-break">
                            <td colspan="<%= colspan %>">&nbsp;</td>
                        </tr> 
                        
                      <% end %>    


                      <% total_mark = 0 %>
                      <% full_mark = 0 %>

                      <tr  class="sjws-table-header">
                          <td class="sl"><%#= std['class_roll_no'] %><%= std_count_main %></td>
                          <td class="st_name left-align"><%= std['name'] %></td>
                          <% @report_data['result']['ALL'].each do |rs| %>
                          <% if rs['exam_category'].to_i!=4 %>
                            <td>
                                <% if !rs['students'].blank? && !rs['students'][std['id']].blank? && !rs['students'][std['id']]['score'].blank? %>
                                  <%= rs['students'][std['id']]['score'].to_f %>
                                  <% total_mark = total_mark.to_f+rs['students'][std['id']]['score'].to_f %>
                                  <% full_mark = full_mark+rs['maximum_marks'].to_i %>
                                <% else %>
                                  -
                                <% end %>    
                            </td>
                            <% end %>
                          <% end %> 
                          <td>0/<%= assignmentCount %></td>  
                          <td class="name">&nbsp;&nbsp;&nbsp;<%=total_mark.round().to_i %>&nbsp; /&nbsp; <%=full_mark.to_i %></td>  
                          <% main_mark = (total_mark.round().to_f/full_mark.to_f)*100 %>
                          
                          <td><% if total_mark > 0 %><%= sprintf( "%0.02f", main_mark) %> %<% else %>-<% end %></td>

                          <%  grade = GradingLevel.percentage_to_grade(main_mark, @batch.id) %>
                          <% if !grade.blank? and !grade.name.blank? %>
                            <td class="col-2"><center><b><%= grade.name %></b></center></td>
                      <% else %>
                        <td class="col-2"><center><b>N/A</b></center></td>
                      <% end %>
                      </tr>
                    <% end %>
                  <% end %>
              </table>
            <% end %>
        </center>
    </div>


</div>

<style>
    table.sjws_table_head
    {
        width: 98% !important;
    }
    .sjws_table_head .st_name{
        width:300px !important;
    }
</style>
