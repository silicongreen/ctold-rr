<div id="content-header">
  <%= show_header_icon %>
  <h1><%= "#{t('hostel_text')}"%></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= "#{t('dashboard_text')}"%></div>

</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('hostel_text')}" ,:controller=>'hostels',:action=>'index' %> </div>
      <div class="link-descr"><%= "#{t('view_hostel_details')}"%></div>
    </div>


    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('rooms')}",:controller=>'room_details',:action=>'index'  %>  </div>
      <div class="link-descr"><%= "#{t('view_room_details')}"%></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('room_allocation')}" ,:controller=>'room_allocate' , :action=>'index' %></div>
      <div class="link-descr"><%= "#{t('allocate_rooms_to_the_students')}"%></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('fee_collection_text')}" ,:controller=>'hostel_fee' , :action=>'hostel_fee_collection' %></div>
      <div class="link-descr"><%= "#{t('create_hostel_fee_collection_date')}"%></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('hostel_fee_pay')}" ,:controller=>'hostel_fee' , :action=>'hostel_fee_pay' %></div>
      <div class="link-descr"><%= "#{t('pay_hostel_fee')}"%></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('hostel_fee_defaulters')}" ,:controller=>'hostel_fee' , :action=>'hostel_fee_defaulters' %></div>
      <div class="link-descr"><%= "#{t('view_hostel_fee_defaulters')}"%></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('pay_student_hostel_fee')}" ,:controller=>'hostel_fee' , :action=>'index' %></div>
      <div class="link-descr"><%= "#{t('pay_hostel_fee_student_wise')}"%></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('report')}" ,{:controller=>'hostels',:action=>'room_availability_details'} %></div>
      <div class="link-descr"><%= "#{t('generate')} #{t('report')}"%></div>
    </div>


    <div class="extender"></div>
  </div>
</div>

