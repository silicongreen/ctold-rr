<% remote_form_for :card_attendnace,:url=>{:action=>'employee_create_attendance', :id=>@employee.id} do |c| %>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <table width="700">

      <tr class="odd left">
          <td>
              <%= t('start_time') %><span class="required">*</span>
          </td>
          <td class="right">
              
              <input id="card_attendnace_entry_time" name="card_attendnace[entry_time]" readonly="readonly" size="30" type="text">
              <img alt="Calendar" class="calendar_date_select_popup_icon" onclick="new CalendarDateSelect( $(this).previous(), {popup:'force', time:true, year_range:10} );" src="/images/calendar_date_select/calendar.gif?1488774901" style="border:0px; cursor:pointer;">
          </td>
      </tr>


  </table>   



  <div  style="margin:0px 0px 10px 0px; float:left;">
      <%= submit_tag "", :value => "► #{t('save')}&nbsp;", :class => "user_button", :disable_with => "► #{t('please_wait')}" %>
     
  </div>



<%end%>
