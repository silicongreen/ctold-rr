<% 
employee_id = @current_user.employee_record.id                 
%>
<div id="palettes-main">
  <div class="champs21_palette_container_1">
    <div id='boxes' style="float:left;margin-right: 0px;width:69%;">
      <div id="demo2" class="als-container" data-id="als-container_0">
        <div class="good-read-box-scroll">
          <div class="als-viewport"  style="float:left;  overflow: hidden; width: auto;">
            <ul class="als-wrapper"   data-id="als-wrapper_0" style="width: 635px;  height: 135px;"> 
            
             
              
              <li class="als-item" >
                <%= link_to_remote "<div class='rountine_box_icon_2 active'><span class='f2'>CLASS ROUTINE</span></div>",
                  :update => "dashboard-data",
                  :before => "Element.show('loader');j('.partial_homework').empty();",
                  :success => "Element.hide('loader');j('#boxes div').removeClass('active');j('#boxes .rountine_box_icon_2').addClass('active');",
                  :url => {:controller=>"dashboards",:action => "routine_data"} %>
              </li>
            
              
             
              <li class="als-item" >
                <%= link_to_remote "<div class='task_box_icon'><span class='f2'>TASK</span></div>",
                  :update => "dashboard-data",
                  :before => "Element.show('loader');j('.partial_homework').empty();",
                  :success => "Element.hide('loader');j('#boxes div').removeClass('active');j('#boxes .task_box_icon').addClass('active');",
                  :url => {:controller=>"dashboards",:action => "employee_task_data"} %>
              </li>
         
              
              
              <li class="als-item">
                <%= link_to_remote "<div class='homework_box_icon'><span class='f2'>HOMEWORK</span></div>",
                  :update => "dashboard-data",
                  :before => "Element.show('loader');j('.partial_homework').empty();",
                  :success => "Element.hide('loader');j('#boxes div').removeClass('active');j('#boxes .homework_box_icon').addClass('active');",
                  :url => {:controller=>"dashboards",:action => "employee_homework_data"} %>
              </li>
             
              
             
              <li class="als-item" >
                <%= link_to_remote "<div class='quiz_box_icon'><span class='f2'>QUIZ</span></div>",
                  :update => "dashboard-data",
                  :before => "Element.show('loader');j('.partial_homework').empty();",
                  :success => "Element.hide('loader');j('#boxes div').removeClass('active');j('#boxes .quiz_box_icon').addClass('active');",
                  :url => {:controller=>"dashboards",:action => "employee_quiz_data"} %>
              </li>
              <li class="als-item" >
                <%= link_to_remote "<div class='exam_box_icon'><span class='f2'>EXAM ROUTINE</span></div>",
                  :update => "dashboard-data",
                  :before => "Element.show('loader');j('.partial_homework').empty();",
                  :success => "Element.hide('loader');j('#boxes div').removeClass('active');j('#boxes .exam_box_icon').addClass('active');",
                  :url => {:controller=>"dashboards",:action => "employee_exam_routine_data"} %>
              </li>
              <%if Champs21Plugin.can_access_plugin?("champs21_classwork")%>
              <li class="als-item" >
                <%=  link_to "<div class='classwork_box_icon'><span class='f2'>CLASSWORK</span></div>", :controller => 'classworks', :action => 'index' %>
              </li>
              <% end %>
            
              <li class="als-item" >
                <%=  link_to "<div class='syllabus_box_icon'><span class='f2'>SYLLABUS</span></div>", :controller => 'syllabus', :action => 'classes_view' %>
              </li>
              <li class="als-item" >
                <%=  link_to "<div class='calendar_box_icon'><span class='f2'>CALENDAR</span></div>", :controller => 'calendar', :action => 'index' %>
              </li>
              <li class="als-item" >
                <%=  link_to "<div class='report_card_box_icon'><span class='f2'>REPORT CARD</span></div>", :controller => 'exam', :action => 'exam_wise_report' %>
              </li>
              <li class="als-item" >
                <%=  link_to "<div class='leave_box_icon'><span class='f2'>LEAVE</span></div>", :controller => 'employee_attendance', :action => 'leaves', :id => employee_id %>
              </li>
              <li class="als-item" >
                <%=  link_to "<div class='meeting_box_icon'><span class='f2'>MEETING</span></div>", :controller => 'meetings', :action => 'index' %>
              </li>
              <%  if !@current_user.admin? %>
              <li class="als-item" >
                <%=  link_to "<div class='lessonplan_box_icon' style='margin-right:10px !important'><span class='f2'>LESSON PLAN</span></div>", :controller => 'lessonplan', :action => 'index' %>
              </li>
              <% end %>
        
              
            </ul>
          </div>
       
            <span style="height: 149px; float:left; clear:none; position: static; margin-left:10px;" class="als-next" data-id="als-next_0"></span>
       
        </div>
      </div>











      <div style="clear:both;"></div>
      <div class="loader-image" id="partial_page_loader">
        <%= image_tag("loader2.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
      </div>

      <div class="box_content" id="dashboard-data">
        <%= render :partial=>@view_layout + "_routine", :locals=>{:homework => @data} %>
      </div>

    </div>

    <div class="school_feed_box">
      <%= render :partial => "attendance" %>
      <div style="clear:both;height: 20px;"></div>
      <%  if @current_user.admin? && sms_enable? %> 
        <%=  link_to "<div class='sms-link' style='width:100%; margin-top:5px; padding: 20px 0px; text-align:center; font-size:22px; background:#AFA7CC; color:white;'>SEND SMS TO STUDENT &#x25BA;</div>", :controller => 'sms', :action => 'students' %>
      <% end %>
      <% if (@current_user.employee or @current_user.admin) and can_access_request? :index,:marks %>
        <%=  link_to "<div class='sms-link' style='width:100%; margin-top:5px; padding: 20px 0px; text-align:center; font-size:22px; background:#49BB4B; color:white;'>Marks Entry &#x25BA;</div>", :controller => 'marks', :action => 'index' %>
      <% end %>
      <%  if @current_user.admin? %>
        <%=  link_to "<img src='/images/dashpallete/big_icon/ci-green.png' style='width:100%; margin-top:5px;'>", :controller => 'intelligence', :action => 'index' %><br/>
      <% end %>
      
      

      <%= render :partial => "notice", :locals=>{:news=>@news, :type => 'all'} %>

    </div>

  </div>

  <div style="clear:both;"></div>
  <%  if !check_free_school? %>
  <div class="champs21_palette_container_1"  style="margin-top: 30px;">

    <% unless @event.nil? %>
      <div class="school_feed_box" style="margin-right: 34px;">
        <%= render :partial => "event", :locals=>{:event=>@event} %>
      </div>
    <% end %>

    <div class="school_feed_box" style="margin-right: 30px;">
      
      <%=  link_to "<img src='/images/dashpallete/big_icon/sylabus.png' style='width:100%'>", :controller => 'syllabus', :action => 'classes_view' %><br/><br/>      
      <%=  link_to "<img src='/images/dashpallete/big_icon/calender.png' style='width:100%'>", :controller => 'calendar', :action => 'index' %><br/><br/>      
      <%=  link_to "<img src='/images/dashpallete/big_icon/report_card.png' style='width:100%'>", :controller => 'exam', :action => 'exam_wise_report' %>
      <% if (@current_user.employee or @current_user.admin) and can_access_request? :connect_exam,:marks %>
      <br/><br/><%=  link_to "<img src='/images/dashpallete/big_icon/marks_entry.png' style='width:100%'>", :controller => 'marks', :action => 'connect_exam' %>
      <% end %>
      
    </div>

    <div class="school_feed_box">     

      <%=  link_to "<img src='/images/dashpallete/big_icon/Leave.png' style='width:100%'>", :controller => 'employee_attendance', :action => 'leaves', :id => employee_id %><br/><br/>
      <%=  link_to "<img src='/images/dashpallete/big_icon/meeting.png' style='width:100%'>", :controller => 'meetings', :action => 'index' %><br/><br/>
      
      <%=  link_to "<img src='/images/dashpallete/big_icon/lesson_plan.png' style='width:100%'>", :controller => 'lessonplan', :action => 'index' %>
      
    
      <% if !@allow_detention.blank? %>
        <br/><br/><%=  link_to "<img src='/images/dashpallete/big_icon/displine.png' style='width:100%'>", :controller => 'detention', :action => 'index' %>
      <% end %>
      
    </div>

  </div>
  <% end %>
</div>
<% content_for :head do %>
  <%= javascript_include_tag "custom/jquery.als-1.6.min" %>
<% end %>

<style>
  .sms-link
  {
      text-decoration: none;
  }
  .school_feed_box a
  {
      text-decoration: none;
  }
</style>
