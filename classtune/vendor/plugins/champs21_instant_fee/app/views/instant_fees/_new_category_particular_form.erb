<label class="head_label"><%= t('create_instant_particular_for_fee')  %><span></span></label>


<div id="grading-levels-form">

  <% form_remote_for @new_instant_particular, :url=>{:action=>'create_category_particular',:id => @instant_category.id},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>

    <div id="form-errors"></div>
    <%= hidden_field_tag :instant_fee_category_id,@instant_category.id %>
    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('name')}" %></div>
      <div class="input-container"><%= f.text_field :name %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('description')}" %></div>
      <div class="input-container"><%= f.text_field :description %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('amount')}" %></div>
      <div class="input-container"><%= f.text_field :amount,:class=>'precision_text' %></div>
    </div>

    <%=  submit_tag "â–º #{t('save')}",:class=>'submit_button', :id => 'submit_button' %>

  <% end %>
</div>
