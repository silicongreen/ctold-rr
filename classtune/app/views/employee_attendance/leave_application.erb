<% if @current_user.employee?  %>
  <div class="header-wrapper">
      <div class="header-title">
        <div class="header-icon">
          <%= image_tag '/images/icons/leave-management.png', :html => {:alt => 'leave_management'} %>
        </div>
        <div class="header-title-text-wrapper" style="width:72%;">
          <div class="header-title-main-text f2">
            <%=t('leave_management')%>
            <span style="float: left;clear:both;font-size: 15px;"><%= @local_tzone_time.to_date %></span>
          </div>
          <div class="header-title-sub-text">

          </div>
        </div>
      </div>

      <div class="clearfix"></div>

      <%
       employee_id = @current_user.employee_record.id
      %>
      <div class="tabbed-header-wrapper">
        <ul class="header-tabs">
          <li>          
            <%= link_to "#{t('apply')}", {:controller=>"employee_attendance", :action=>"leaves", :id=> employee_id},{:class => 'f2'} %>
          </li>

        </ul>
      </div>

    </div>
<% else %>

<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('leave_application') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('approve_deny') %></div>
</div>
<% end %>
<div id="page-yield" style="margin-top: 0px;">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <div id="leave-info">
    <ul id="category-list">
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('name') %>:</div>
        <% if @target == "employee" %>
        <% emp=Employee.find(@applied_leave.employee_id) %>
        <%= emp.first_name %>
        <% else @target == "student" %>
        <% @s=Student.find(@applied_leave.student_id) %>
        <%= @s.first_name %>
        <% end %>
      </li>
      <% if @target == "employee" %>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('manager_name') %>:</div>
        <%= emp.reporting_manager.first_name if emp.reporting_manager_id.present? %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('leave_type') %>:</div>
        <%= @leave_type.name %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('half_day') %>:</div>
        <% if @applied_leave.is_half_day == true %>
          <%= "Yes" %>
        <% else %>
          <%= "No" %>
        <% end %>
      </li>
      <% else %>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('course_text') %>:</div>
        <%= @s.batch.course.full_name %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('batch') %>:</div>
        <%= @s.batch.name %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('adm_no') %>:</div>
        <%= @s.admission_no %>
      </li>
      <% end %>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('leave_start_date') %>:</div>
        <%= @applied_leave.start_date.strftime("%d %b, %Y") %></li>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('leave_end_date') %>:</div>
        <%= @applied_leave.end_date.strftime("%d %b, %Y") %></li>
      
      <% if @target != "employee" %>
      <li style="height:auto !important;" class="list<%= cycle('odd','even') %>"><div class="category-name">Subject:</div>
        <%= @applied_leave.leave_subject %>
      </li>
      <% end %>
      
      <% if @target == "student" and !@applied_leave.teacher_remark.blank? %>
      <li style="height:auto !important;" class="list<%= cycle('odd','even') %>"><div class="category-name">Remarks: </div>
        <%= @applied_leave.teacher_remark %>
      </li>
      <% elsif @target == "employee" and !@applied_leave.manager_remark.blank? %>
      <li style="height:auto !important;" class="list<%= cycle('odd','even') %>"><div class="category-name">Remarks: </div>
        <%= @applied_leave.manager_remark %>
      </li>
      <% end %>
      
      <li style="height:auto !important;" class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('reason') %>:</div>
        <%= @applied_leave.reason %>
      </li>
      <% unless @applied_leave.attachment_file_name.nil? %>
        <li class="list<%= cycle('odd','even') %> download-link">
          <div class="category-name"><%= "Document" %>:</div>
          <%= link_to 'Download Attachment', :controller => "student_attendance", :action => "download_attachment",:target=> @target, :id=>@applied_leave.id %>
        </li>
      <% end %>
      <% if @target == "student" && @applied_leave.forward.to_i == 1  %>
        <li style="height:auto !important;" class="list<%= cycle('odd','even') %>"><div class="category-name">Forwarder Message:</div>
          <%= @applied_leave.forwarder_remark %>
        </li>
        <% if @applied_leave.employee_id.to_i > 0 %>
          <li style="height:auto !important;" class="list<%= cycle('odd','even') %>"><div class="category-name">Current Desk:</div>
            <% current_emp = Employee.find_by_id(@applied_leave.employee_id) %>
            <%= current_emp.full_name %>
          </li>
        <% end %>
      <% end %>
        
     
      
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('status') %>:</div>
        <% if @target == "employee" %>
        <%= "#{t('approved')}" if @applied_leave.approved == true and @applied_leave.viewed_by_manager == true %>
        <%= "#{t('denied')}" if @applied_leave.approved == false and @applied_leave.viewed_by_manager == true %>
        <%= "#{t('pending_approval')}" if(@applied_leave.approved == false or @applied_leave.approved.nil?) and @applied_leave.viewed_by_manager == false %>
        <% else %>
        <%= "#{t('approved')}" if @applied_leave.approved == true and @applied_leave.viewed_by_teacher == true %>
        <%= "#{t('denied')}" if @applied_leave.approved == false and @applied_leave.viewed_by_teacher == true %>
        <%= "#{t('pending_approval')}" if(@applied_leave.approved == false or @applied_leave.approved.nil?) and @applied_leave.viewed_by_teacher == false %>
        <% end %>
      </li>
      <% if @target == "employee" %>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('leave_count') %>:</div>
        <%= @leave_count.leave_taken %> / <%= @leave_count.leave_count %></li>
      </li>
      <% else %>
      <li class="list<%= cycle('odd','even') %>"><div class="category-name"><%= t('leave_count') %>:</div>
        <%= @leave_count %></li>
      </li>
      <% end %>
    </ul>


    <div class="buttons">
        
      <% if(@target == "student" && ((@applied_leave.approved == false or @applied_leave.approved.nil? and (@applied_leave.forward.to_i == 0 or @current_user.employee_record.id == @applied_leave.employee_id)) or (@target == "student" and @applied_leave.viewed_by_teacher == false and (@applied_leave.forward.to_i == 0 or @current_user.employee_record.id == @applied_leave.employee_id))))  %>
        <div class="approve_button">    <%= link_to_remote "► #{t('approve')}",
            :url => {:action => "approve_remarks", :id=>@applied_leave.id, :target => @target, :request_from => @request_from},:html=> {:class=>'user_button'} %>
        </div>
      <% end %>
   
      
      <% if (@current_user.employee_record.meeting_forwarder.to_i == 1 and @applied_leave.forward.to_i == 0) or @current_user.employee_record.id == @applied_leave.employee_id  %>
        
        <% @config = Configuration.find_by_config_key('LeaveSectionManager') %>
        <% if (@applied_leave.approved == false or @applied_leave.approved.nil?) and @target == "student" and !@config.blank? and !@config.config_value.blank? and @config.config_value.to_i == 1 %>
          <div class="cancel_button"><%= link_to_remote "► Forward",
            :url => {:action => "forward_to_admin", :id=>@applied_leave.id, :target => @target, :request_from => @request_from},:html=> {:class=>'user_button'}  %>
          </div>
        <% end %>
      <% end %>   
      
     
      
      <% if(@target == "student" && ((@applied_leave.approved == true or @applied_leave.approved.nil? and (@applied_leave.forward.to_i == 0 or @current_user.employee_record.id == @applied_leave.employee_id)) or (@target == "student" and @applied_leave.viewed_by_teacher == false and (@applied_leave.forward.to_i == 0 or @current_user.employee_record.id == @applied_leave.employee_id)))) %>
        <div class="cancel_button"><%= link_to_remote "► #{t('deny')}",
            :url => {:action => "deny_remarks", :id=>@applied_leave.id, :target => @target, :request_from => @request_from},:html=> {:class=>'user_button'}  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
 <% if (@current_user.employee_record.meeting_forwarder.to_i == 1 and @applied_leave.forward.to_i == 0) or @current_user.employee_record.id == @applied_leave.employee_id  %>
  <% @config = Configuration.find_by_config_key('LeaveSectionManager') %>
  <% if (@applied_leave.approved == false or @applied_leave.approved.nil?) and @target == "student" and !@config.blank? and !@config.config_value.blank? and @config.config_value.to_i == 1 %>
  <style>
      .buttons {
      margin: 0 auto;
      width: 385px;
      }

  </style>
  <% end %>
<% end %>




<div id="modal-box" style="display:none;"> </div>
