          <th width="25%"><%= "Department" %></th>
          <th width="25%" data-orderable="false"><%= "In Time" %></th>
          <th width="25%" data-orderable="false"><%= "Out Time" %></th>
          <th width="10%" data-orderable="false"><%= "Late" %></th>
          <th width="10%" data-orderable="false"><%= "Absent" %></th>
          <th width="10%" data-orderable="false"><%= "Leave" %></th>
