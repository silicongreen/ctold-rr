<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('suppliers') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('home') %></div>

<div id="inner-tab-menu">
  <ul>

    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('new_text')}", new_supplier_path %> </li>

  </ul>
</div>

</div>
<div id="page-yield">
<div class="bread_crumb">
  <%= link_to "#{t('inventory')}",:controller=>"inventories",:action=>"index" %> <div class = "bread-crumb-separator"> > </div>
  <%= t('suppliers') %>
</div>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><span><%= flash[:warn_notice] %></span></div>
  <% end %>

  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <% unless @suppliers.blank? %>
      <tr class="tr-head">
        <td>
          <%= t('sl_no') %></td>

        <td>  <%= t('supplier name') %></td>
        <td>
          <%= t('supplier_type') %>
        </td>
        <td>
          <%= t('contact no') %>
        </td>
        <td>   <%= t('tin_no') %></td>
        <td>   <%= t('region') %></td>
        <td>   </td>
      </tr>
      <tr class="tr-blank"></tr>
      <%  @suppliers.each_with_index do |s, i| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-1"><%= (@suppliers.current_page - 1) * @suppliers.per_page + (i + 1) %></td>
          <td class="col-2"><%=  link_to s.name, s %></td>
          <td class="col-3"><%=  s.supplier_type.name unless s.supplier_type.nil?   %></td>
          <td class="col-1"><%= s.contact_no  %></td>
          <td class="col-1"><%= s.tin_no  %></td>
          <td class="col-3"><%= s.region %></td>

          <td class="col-4"><div class="edit-delete-box">
              <div><small><%=  link_to 'Edit', edit_supplier_path(s) %></small></div>
              <div><small><%=  link_to 'Delete', s, :confirm => 'Are you sure?', :method => :delete %></small></div></div></td>

        </tr>
      <% end %>
    <% else %>

      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-2"><%= t('no_supplier') %></td>
      </tr>
    <% end %>
  </table>

</div>

<%= will_paginate @suppliers %>
