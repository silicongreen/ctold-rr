  <% form_remote_for :vat, :url => {:action => 'update_vat_ajax' }, :before=>"$('add_fine').disable()",:complete=>"setTimeout(function(){$('add_fine').enable();},5000)" do |form| %>
    <div class="fine_info">
      <div class="label-field-pair1">
        <label><%= "Vat Amount" %></label>
        <div class="text-input-bg1">
          <%= form.text_field :vat_amount, :value=>'' ,:id=>"vat_fee", :class=>'precision_text' %>
          <%= submit_tag "Add Vat",:class=>'submit_button2', :id => 'add_fine' ,:onclick=>'return validate_fine();' %>
        </div>
      </div>
      
    </div>
    <div class="extender"></div>
    <%= form.hidden_field :student, :value => @student.id %>
    <%= form.hidden_field :batch_id, :value => @batch.id %>
    <%= form.hidden_field :date, :value => @date.id %>


  <% end %>
