<link rel="stylesheet" href="/stylesheets/select2.min.css">
<link rel="stylesheet" href="/stylesheets/select2-finance.css">

<%= javascript_include_tag 'select2.full.min.js' %>
<%= javascript_include_tag 'select2-finance.js' %>

<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('master_category') %></h1>
  <div class="header-sep">|</div>
  <div class="sub-header"><%= t('finance_management') %></div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('fees_text')}", :controller => "finance", :action => "fees_index" %> <div class = "bread-crumb-separator"> > </div>
    <%= t('master_fees') %>
  </div>
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="message"></div>

  <div class="box">

      <div class="link-box">
        <div class="link-heading">
          <%= link_to_remote "#{t('create_category')}", :url => { :action => 'master_category_new'} %>
        </div>
        <div class="link-descr"> <%= t('create_master_category') %></div>
      </div>
        
      <div class="link-box">
        <div class="link-heading">
          <%= link_to_remote "#{t('create_particular_category')}", :url => { :action => 'master_particular_category_new'} %>
        </div>
        <div class="link-descr"> <%= t('create_particular_category_desc') %></div>
      </div>

      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('create_particulars')}", :action => 'fees_particulars_new' %>
        </div>
        <div class="link-descr"> <%= t('create_particulars') %></div>
      </div>

      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('create_discount')}",:action => 'fee_discount_new' %>
        </div>
        <div class="link-descr"><%= t('create_fee_discounts') %></div>
      </div>

      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('generate_fine')}",:action => 'generate_fine' %>
        </div>
        <div class="link-descr"><%= t('generate_fine') %></div>
      </div>
        
    <div id="modal-box" style="display:none;"></div>
    <%= @a %>
    <div style="clear: both; height: 5px;"></div>

    <div id="batch" style="padding: 10px 10px 20px 10px; border: 0px solid #ccc;">
      <div class="label-field-pair">
        <div class="label-container"><label><%= t('select_a_batch') %> : </label></div>
        <div class="input-container"> <%= select("id",:id,@batchs.map { |c| [c.full_name, c.id] },
            {:prompt => "#{t('select_a_batch')}"},
            {:class => "select2-combo", :onChange => "#{remote_function(:url => {:action => "show_master_categories_list"},
              :with => "'id='+value",
              :before => "Element.show('loader')",
              :success => "Element.hide('loader')"
              )}"})%>
        </div>
        <div class="loader_div">
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none;" ) %>
        </div>
      </div>
      <div style="clear: both; height: 5px;"></div>
    </div>
    <div style="clear: both; height: 5px;"></div>
    <div id="fee_collection_dates"></div>
    <div style="clear: both; height: 5px;"></div>
    <div id="categories">   
      <%= render :partial => "master_category_list" unless params[:batch_id].blank? %>
    </div>
  </div>
</div>
