<fieldset>
  <label>School Name</label>
  <label class="value">
    <%=h @school.name %>
  </label>
  <%= link_to "Edit",edit_school_path(@school), :class=>"button-grey-small float-right-with-margin" if permitted_to? :edit, @school, :context=>:schools %>
</fieldset>

<fieldset>
  <label>Inherit Email Settings</label>
  <label class="value">
    <%=h @school.inherit_smtp_settings %>
  </label>
</fieldset>

<fieldset>
  <label>Inherit SMS Settings</label>
  <label class="value">
    <%=h @school.inherit_sms_settings %>
  </label>
</fieldset>
